@page "/auth/access-denied"
@model Algora.Web.Pages.Auth.AccessDeniedModel
@{
    ViewData["Title"] = "Access Denied";
    Layout = "_AuthLayout";
}

<main class="mt-0 transition-all duration-200 ease-soft-in-out">
    <section class="min-h-screen flex items-center justify-center">
        <div class="container">
            <div class="flex flex-wrap justify-center -mx-3">
                <div class="w-full max-w-full px-3 mx-auto text-center lg:w-6/12">
                    <h1 class="mt-12 mb-2 text-9xl font-bold text-slate-700">403</h1>
                    <h2 class="mb-4 text-3xl font-bold text-slate-700">Access Denied</h2>
                    <p class="mb-8 text-lg text-slate-500">You don't have permission to access this resource.</p>
                    <a asp-page="/Auth/Login" class="inline-block px-6 py-3 font-bold text-center text-white uppercase align-middle transition-all bg-transparent border-0 rounded-lg cursor-pointer shadow-soft-md bg-gradient-to-tl from-blue-600 to-cyan-400 hover:scale-102 hover:shadow-soft-xs">
                        Go to Login
                    </a>
                </div>
            </div>
        </div>
    </section>
</main>