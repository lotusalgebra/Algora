@page "/bundles/admin/edit/{id:int}"
@model Algora.Web.Pages.Bundles.Admin.EditModel
@{
    ViewData["Title"] = $"Edit Bundle - {Model.Bundle?.Name}";
}

<div class="p-4">
    <!-- Header -->
    <div class="flex items-center justify-between mb-6">
        <div class="flex items-center gap-4">
            <a href="/bundles/admin/list" class="p-2 text-gray-500 hover:text-gray-700 hover:bg-gray-100 dark:text-gray-400 dark:hover:text-white dark:hover:bg-gray-700 rounded-lg">
                <i class="fas fa-arrow-left"></i>
            </a>
            <div>
                <h1 class="text-xl font-bold text-gray-900 dark:text-white">Edit Bundle</h1>
                <p class="text-sm text-gray-500 dark:text-gray-400">@Model.Bundle?.Name</p>
            </div>
        </div>
        <a href="/bundles/@Model.Bundle?.Slug" target="_blank"
           class="text-gray-900 bg-white border border-gray-300 focus:outline-none hover:bg-gray-100 focus:ring-4 focus:ring-gray-200 font-medium rounded-lg text-sm px-4 py-2 dark:bg-gray-800 dark:text-white dark:border-gray-600 dark:hover:bg-gray-700">
            <i class="fas fa-external-link-alt me-2"></i> Preview
        </a>
    </div>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="flex items-center p-4 mb-6 text-sm text-red-800 rounded-lg bg-red-50 dark:bg-gray-800 dark:text-red-400" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>
            @Model.ErrorMessage
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="flex items-center p-4 mb-6 text-sm text-green-800 rounded-lg bg-green-50 dark:bg-gray-800 dark:text-green-400" role="alert">
            <i class="fas fa-check-circle me-2"></i>
            @Model.SuccessMessage
        </div>
    }

    @if (Model.Bundle != null)
    {
        <form method="post">
            <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
                <!-- Main Content -->
                <div class="lg:col-span-2 space-y-6">
                    <!-- Basic Info -->
                    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6">
                        <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Basic Information</h3>

                        <div class="space-y-4">
                            <div>
                                <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">Bundle Name *</label>
                                <input type="text" asp-for="Input.Name" required
                                       class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white" />
                            </div>

                            <div>
                                <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">Description</label>
                                <textarea asp-for="Input.Description" rows="3"
                                          class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white"></textarea>
                            </div>

                            <div>
                                <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">Bundle Type</label>
                                <input type="text" value="@(Model.Bundle.BundleType == "fixed" ? "Fixed Bundle" : "Mix & Match")" disabled
                                       class="bg-gray-100 border border-gray-300 text-gray-500 text-sm rounded-lg block w-full p-2.5 cursor-not-allowed dark:bg-gray-700 dark:border-gray-600 dark:text-gray-400" />
                                <p class="text-xs text-gray-500 dark:text-gray-400 mt-1">Bundle type cannot be changed after creation</p>
                            </div>
                        </div>
                    </div>

                    <!-- Pricing -->
                    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6">
                        <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Pricing & Discount</h3>

                        <div class="grid grid-cols-2 gap-4">
                            <div>
                                <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">Discount Type</label>
                                <select asp-for="Input.DiscountType"
                                        class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white">
                                    <option value="percentage">Percentage (%)</option>
                                    <option value="fixed_amount">Fixed Amount ($)</option>
                                </select>
                            </div>

                            <div>
                                <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">Discount Value</label>
                                <input type="number" asp-for="Input.DiscountValue" step="0.01" min="0"
                                       class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white" />
                            </div>

                            <div class="col-span-2">
                                <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">Discount Code</label>
                                <input type="text" asp-for="Input.DiscountCode"
                                       class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white" />
                            </div>

                            <div class="col-span-2 bg-gray-50 dark:bg-gray-700 rounded-lg p-4">
                                <div class="flex justify-between text-sm mb-2">
                                    <span class="text-gray-600 dark:text-gray-400">Original Price:</span>
                                    <span class="font-medium text-gray-900 dark:text-white">$@Model.Bundle.OriginalPrice.ToString("F2")</span>
                                </div>
                                <div class="flex justify-between text-sm mb-2">
                                    <span class="text-gray-600 dark:text-gray-400">Discount:</span>
                                    <span class="text-green-600 dark:text-green-400">-$@((Model.Bundle.OriginalPrice - Model.Bundle.BundlePrice).ToString("F2"))</span>
                                </div>
                                <div class="flex justify-between text-lg font-bold border-t border-gray-200 dark:border-gray-600 pt-2">
                                    <span class="text-gray-900 dark:text-white">Bundle Price:</span>
                                    <span class="text-purple-600 dark:text-purple-400">$@Model.Bundle.BundlePrice.ToString("F2")</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Bundle Items (Fixed Bundle) -->
                    @if (Model.Bundle.BundleType == "fixed")
                    {
                        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6">
                            <div class="flex justify-between items-center mb-4">
                                <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Bundle Items</h3>
                                <button type="button" onclick="openAddItemModal()" class="text-sm text-purple-600 hover:text-purple-800 dark:text-purple-400">
                                    <i class="fas fa-plus me-1"></i> Add Item
                                </button>
                            </div>

                            @if (Model.Bundle.Items.Any())
                            {
                                <div class="space-y-3">
                                    @foreach (var item in Model.Bundle.Items)
                                    {
                                        <div class="flex items-center justify-between p-3 bg-gray-50 dark:bg-gray-700 rounded-lg">
                                            <div class="flex items-center gap-3">
                                                @if (!string.IsNullOrEmpty(item.ImageUrl))
                                                {
                                                    <img src="@item.ImageUrl" alt="@item.ProductTitle" class="w-10 h-10 rounded object-cover" />
                                                }
                                                else
                                                {
                                                    <div class="w-10 h-10 bg-gray-200 dark:bg-gray-600 rounded flex items-center justify-center">
                                                        <i class="fas fa-box text-gray-400"></i>
                                                    </div>
                                                }
                                                <div>
                                                    <p class="font-medium text-gray-900 dark:text-white">@item.Quantity x @item.ProductTitle</p>
                                                    @if (!string.IsNullOrEmpty(item.VariantTitle))
                                                    {
                                                        <p class="text-xs text-gray-500 dark:text-gray-400">@item.VariantTitle</p>
                                                    }
                                                </div>
                                            </div>
                                            <div class="flex items-center gap-4">
                                                <span class="text-gray-600 dark:text-gray-400">$@item.UnitPrice.ToString("F2")</span>
                                                <button type="button" onclick="removeItem(@item.Id)" class="text-red-600 hover:text-red-800 dark:text-red-400">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </div>
                                        </div>
                                    }
                                </div>
                            }
                            else
                            {
                                <div class="text-center py-8 text-gray-500 dark:text-gray-400">
                                    <i class="fas fa-box-open text-3xl mb-3"></i>
                                    <p>No items added yet. Click "Add Item" to add products to this bundle.</p>
                                </div>
                            }
                        </div>
                    }

                    <!-- Mix & Match Options -->
                    @if (Model.Bundle.BundleType == "mix_and_match")
                    {
                        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6">
                            <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Mix & Match Settings</h3>

                            <div class="grid grid-cols-2 gap-4">
                                <div>
                                    <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">Minimum Items</label>
                                    <input type="number" asp-for="Input.MinItems" min="1"
                                           class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white" />
                                </div>

                                <div>
                                    <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">Maximum Items</label>
                                    <input type="number" asp-for="Input.MaxItems" min="1"
                                           class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white" />
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <!-- Sidebar -->
                <div class="space-y-6">
                    <!-- Status -->
                    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6">
                        <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Status</h3>

                        <div class="space-y-4">
                            <div>
                                <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">Bundle Status</label>
                                <select asp-for="Input.Status"
                                        class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white">
                                    <option value="draft">Draft</option>
                                    <option value="active">Active</option>
                                    <option value="archived">Archived</option>
                                </select>
                            </div>

                            <label class="flex items-center gap-2">
                                <input type="checkbox" asp-for="Input.IsActive" class="w-4 h-4 text-purple-600 bg-gray-100 border-gray-300 rounded focus:ring-purple-500 dark:bg-gray-700 dark:border-gray-600" />
                                <span class="text-sm text-gray-900 dark:text-white">Active on storefront</span>
                            </label>
                        </div>
                    </div>

                    <!-- Image -->
                    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6">
                        <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Bundle Image</h3>

                        @if (!string.IsNullOrEmpty(Model.Bundle.ImageUrl))
                        {
                            <img src="@Model.Bundle.ImageUrl" alt="@Model.Bundle.Name" class="w-full h-32 object-cover rounded-lg mb-3" />
                        }

                        <div>
                            <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">Image URL</label>
                            <input type="url" asp-for="Input.ImageUrl"
                                   class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white" />
                        </div>
                    </div>

                    <!-- Shopify Sync -->
                    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6">
                        <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Shopify Integration</h3>

                        <div class="mb-4">
                            <p class="text-sm text-gray-600 dark:text-gray-400 mb-2">Sync Status:</p>
                            @if (Model.Bundle.ShopifySyncStatus == "synced")
                            {
                                <span class="bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-300 text-sm font-medium px-3 py-1 rounded-full">
                                    <i class="fas fa-check me-1"></i> Synced
                                </span>
                            }
                            else if (Model.Bundle.ShopifySyncStatus == "error")
                            {
                                <span class="bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-300 text-sm font-medium px-3 py-1 rounded-full">
                                    <i class="fas fa-exclamation-circle me-1"></i> Error
                                </span>
                            }
                            else
                            {
                                <span class="bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-300 text-sm font-medium px-3 py-1 rounded-full">
                                    <i class="fas fa-clock me-1"></i> Not Synced
                                </span>
                            }
                        </div>

                        @if (Model.Bundle.ShopifyProductId.HasValue)
                        {
                            <form method="post" asp-page-handler="RemoveShopify" asp-route-id="@Model.Bundle.Id" class="mb-2">
                                <button type="submit" class="w-full py-2 px-4 border border-red-300 text-red-600 rounded-lg hover:bg-red-50 dark:border-red-700 dark:text-red-400 dark:hover:bg-red-900/20 font-medium text-sm">
                                    <i class="fas fa-unlink me-2"></i> Remove from Shopify
                                </button>
                            </form>
                        }
                        else
                        {
                            <form method="post" asp-page-handler="SyncShopify" asp-route-id="@Model.Bundle.Id">
                                <button type="submit" class="w-full py-2 px-4 bg-green-600 text-white rounded-lg hover:bg-green-700 font-medium text-sm">
                                    <i class="fas fa-sync me-2"></i> Sync to Shopify
                                </button>
                            </form>
                        }
                    </div>

                    <!-- Actions -->
                    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6">
                        <button type="submit" class="w-full text-white bg-gradient-to-br from-purple-600 to-pink-500 hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-purple-300 dark:focus:ring-purple-800 font-medium rounded-lg text-sm px-5 py-3">
                            <i class="fas fa-save me-2"></i> Save Changes
                        </button>
                        <a href="/bundles/admin/list" class="block w-full text-center py-3 px-4 mt-3 text-gray-600 hover:text-gray-800 dark:text-gray-400 dark:hover:text-white">
                            Cancel
                        </a>
                    </div>
                </div>
            </div>
        </form>
    }
</div>

<script>
    async function removeItem(itemId) {
        if (!confirm('Remove this item from the bundle?')) return;

        try {
            const response = await fetch(`/api/bundles/items/${itemId}`, { method: 'DELETE' });
            if (response.ok) {
                location.reload();
            } else {
                alert('Failed to remove item');
            }
        } catch (error) {
            console.error('Error:', error);
            alert('Failed to remove item');
        }
    }

    function openAddItemModal() {
        alert('Add item functionality - integrate with product picker');
    }
</script>
