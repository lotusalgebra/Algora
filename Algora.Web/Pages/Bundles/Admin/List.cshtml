@page "/bundles/admin/list"
@model Algora.Web.Pages.Bundles.Admin.ListModel
@{
    ViewData["Title"] = "All Bundles";
}

<div class="p-4">
    <!-- Header -->
    <div class="flex justify-between items-center mb-6">
        <div>
            <h1 class="text-xl font-bold text-gray-900 dark:text-white">All Bundles</h1>
            <p class="text-sm text-gray-500 dark:text-gray-400">Manage your product bundles</p>
        </div>
        <a href="/bundles/admin/create" class="text-white bg-gradient-to-br from-purple-600 to-pink-500 hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-purple-300 dark:focus:ring-purple-800 font-medium rounded-lg text-sm px-5 py-2.5 inline-flex items-center">
            <i class="fas fa-plus me-2"></i> Create Bundle
        </a>
    </div>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="flex items-center p-4 mb-6 text-sm text-red-800 rounded-lg bg-red-50 dark:bg-gray-800 dark:text-red-400" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>
            @Model.ErrorMessage
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="flex items-center p-4 mb-6 text-sm text-green-800 rounded-lg bg-green-50 dark:bg-gray-800 dark:text-green-400" role="alert">
            <i class="fas fa-check-circle me-2"></i>
            @Model.SuccessMessage
        </div>
    }

    <!-- Filters -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-4 mb-6">
        <form method="get" class="flex flex-wrap gap-4 items-end">
            <div class="flex-1 min-w-[200px]">
                <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">Search</label>
                <input type="text" name="Search" value="@Model.Search" placeholder="Search bundles..."
                       class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white" />
            </div>
            <div class="w-40">
                <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">Type</label>
                <select name="BundleType" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white">
                    <option value="">All Types</option>
                    <option value="fixed" selected="@(Model.BundleType == "fixed")">Fixed</option>
                    <option value="mix_and_match" selected="@(Model.BundleType == "mix_and_match")">Mix & Match</option>
                </select>
            </div>
            <div class="w-40">
                <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">Status</label>
                <select name="Status" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white">
                    <option value="">All Status</option>
                    <option value="draft" selected="@(Model.Status == "draft")">Draft</option>
                    <option value="active" selected="@(Model.Status == "active")">Active</option>
                    <option value="archived" selected="@(Model.Status == "archived")">Archived</option>
                </select>
            </div>
            <button type="submit" class="text-gray-900 bg-white border border-gray-300 focus:outline-none hover:bg-gray-100 focus:ring-4 focus:ring-gray-200 font-medium rounded-lg text-sm px-5 py-2.5 dark:bg-gray-800 dark:text-white dark:border-gray-600 dark:hover:bg-gray-700">
                <i class="fas fa-search me-2"></i> Filter
            </button>
            @if (!string.IsNullOrEmpty(Model.Search) || !string.IsNullOrEmpty(Model.BundleType) || !string.IsNullOrEmpty(Model.Status))
            {
                <a href="/bundles/admin/list" class="px-4 py-2.5 text-gray-500 hover:text-gray-700 dark:text-gray-400 dark:hover:text-white">Clear</a>
            }
        </form>
    </div>

    <!-- Bundles Table -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md overflow-hidden">
        <div class="overflow-x-auto">
            @if (Model.Bundles.Items.Any())
            {
                <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
                    <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                        <tr>
                            <th scope="col" class="px-6 py-3">Bundle</th>
                            <th scope="col" class="px-6 py-3">Type</th>
                            <th scope="col" class="px-6 py-3">Price</th>
                            <th scope="col" class="px-6 py-3">Discount</th>
                            <th scope="col" class="px-6 py-3">Status</th>
                            <th scope="col" class="px-6 py-3">Shopify</th>
                            <th scope="col" class="px-6 py-3">Created</th>
                            <th scope="col" class="px-6 py-3">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var bundle in Model.Bundles.Items)
                        {
                            <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-700">
                                <td class="px-6 py-4">
                                    <div class="flex items-center gap-3">
                                        @if (!string.IsNullOrEmpty(bundle.ImageUrl))
                                        {
                                            <img src="@bundle.ImageUrl" alt="@bundle.Name" class="w-12 h-12 rounded object-cover" />
                                        }
                                        else
                                        {
                                            <div class="w-12 h-12 bg-gray-200 dark:bg-gray-600 rounded flex items-center justify-center">
                                                <i class="fas fa-boxes text-gray-400"></i>
                                            </div>
                                        }
                                        <div>
                                            <p class="font-medium text-gray-900 dark:text-white">@bundle.Name</p>
                                            <p class="text-xs text-gray-500 dark:text-gray-400">@bundle.ItemCount items</p>
                                        </div>
                                    </div>
                                </td>
                                <td class="px-6 py-4">
                                    <span class="@(bundle.BundleType == "fixed" ? "bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-300" : "bg-purple-100 text-purple-800 dark:bg-purple-900 dark:text-purple-300") text-xs font-medium px-2.5 py-0.5 rounded">
                                        @(bundle.BundleType == "fixed" ? "Fixed" : "Mix & Match")
                                    </span>
                                </td>
                                <td class="px-6 py-4">
                                    <span class="font-medium text-gray-900 dark:text-white">$@bundle.BundlePrice.ToString("F2")</span>
                                    @if (bundle.OriginalPrice > bundle.BundlePrice)
                                    {
                                        <span class="text-xs text-gray-400 line-through ml-1">$@bundle.OriginalPrice.ToString("F2")</span>
                                    }
                                </td>
                                <td class="px-6 py-4">
                                    @if (bundle.SavingsPercent > 0)
                                    {
                                        <span class="text-green-600 dark:text-green-400 font-medium">@bundle.SavingsPercent.ToString("F0")% off</span>
                                    }
                                    else
                                    {
                                        <span class="text-gray-400">-</span>
                                    }
                                </td>
                                <td class="px-6 py-4">
                                    <span class="@(bundle.IsActive ? "bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-300" : "bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-300") text-xs font-medium px-2.5 py-0.5 rounded">
                                        @(bundle.IsActive ? "Active" : "Inactive")
                                    </span>
                                </td>
                                <td class="px-6 py-4">
                                    @if (bundle.ShopifySyncStatus == "synced")
                                    {
                                        <span class="text-green-600" title="Synced to Shopify"><i class="fas fa-check-circle"></i></span>
                                    }
                                    else if (bundle.ShopifySyncStatus == "error")
                                    {
                                        <span class="text-red-600" title="Sync error"><i class="fas fa-exclamation-circle"></i></span>
                                    }
                                    else
                                    {
                                        <span class="text-gray-400" title="Not synced"><i class="fas fa-clock"></i></span>
                                    }
                                </td>
                                <td class="px-6 py-4 text-gray-600 dark:text-gray-400">
                                    @bundle.CreatedAt.ToString("MMM d, yyyy")
                                </td>
                                <td class="px-6 py-4">
                                    <div class="flex items-center gap-2">
                                        <a href="/bundles/admin/edit/@bundle.Id" class="p-2 text-purple-600 hover:bg-purple-50 dark:hover:bg-purple-900/20 rounded" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a href="/bundles/@bundle.Slug" target="_blank" class="p-2 text-gray-600 hover:bg-gray-50 dark:hover:bg-gray-700 rounded" title="View">
                                            <i class="fas fa-external-link-alt"></i>
                                        </a>
                                        <form method="post" asp-page-handler="Delete" asp-route-id="@bundle.Id" class="inline"
                                              onsubmit="return confirm('Are you sure you want to delete this bundle?');">
                                            <button type="submit" class="p-2 text-red-600 hover:bg-red-50 dark:hover:bg-red-900/20 rounded" title="Delete">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                <!-- Pagination -->
                @if (Model.Bundles.TotalPages > 1)
                {
                    <div class="px-6 py-4 border-t border-gray-200 dark:border-gray-700 flex justify-between items-center">
                        <p class="text-sm text-gray-500 dark:text-gray-400">
                            Showing @((Model.PageNumber - 1) * 20 + 1) to @Math.Min(Model.PageNumber * 20, Model.Bundles.TotalCount) of @Model.Bundles.TotalCount bundles
                        </p>
                        <div class="flex gap-2">
                            @if (Model.Bundles.HasPreviousPage)
                            {
                                <a href="?pageNumber=@(Model.PageNumber - 1)&bundleType=@Model.BundleType&status=@Model.Status&search=@Model.Search"
                                   class="px-3 py-1 border border-gray-300 dark:border-gray-600 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-700 text-gray-700 dark:text-white">
                                    <i class="fas fa-chevron-left"></i>
                                </a>
                            }
                            @if (Model.Bundles.HasNextPage)
                            {
                                <a href="?pageNumber=@(Model.PageNumber + 1)&bundleType=@Model.BundleType&status=@Model.Status&search=@Model.Search"
                                   class="px-3 py-1 border border-gray-300 dark:border-gray-600 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-700 text-gray-700 dark:text-white">
                                    <i class="fas fa-chevron-right"></i>
                                </a>
                            }
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="text-center py-12">
                    <i class="fas fa-boxes text-5xl text-gray-300 dark:text-gray-600 mb-4"></i>
                    <p class="text-gray-500 dark:text-gray-400 mb-4">No bundles found</p>
                    <a href="/bundles/admin/create" class="text-white bg-gradient-to-br from-purple-600 to-pink-500 hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-purple-300 dark:focus:ring-purple-800 font-medium rounded-lg text-sm px-5 py-2.5 inline-flex items-center">
                        <i class="fas fa-plus me-2"></i> Create Bundle
                    </a>
                </div>
            }
        </div>
    </div>
</div>
