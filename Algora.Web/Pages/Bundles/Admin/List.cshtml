@page "/bundles/admin/list"
@model Algora.Web.Pages.Bundles.Admin.ListModel
@{
    ViewData["Title"] = "All Bundles";
}

<div class="w-full px-6 py-6 mx-auto">
    <!-- Header -->
    <div class="flex justify-between items-center mb-6">
        <div>
            <h1 class="text-2xl font-bold dark:text-white">All Bundles</h1>
            <p class="text-sm text-gray-500 dark:text-gray-400">Manage your product bundles</p>
        </div>
        <a href="/bundles/admin/create" class="inline-flex items-center px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition-colors">
            <i class="fas fa-plus mr-2"></i> Create Bundle
        </a>
    </div>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-6">
            @Model.ErrorMessage
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-6">
            @Model.SuccessMessage
        </div>
    }

    <!-- Filters -->
    <div class="bg-white shadow-soft-xl rounded-2xl dark:bg-gray-950 p-4 mb-6">
        <form method="get" class="flex flex-wrap gap-4 items-end">
            <div class="flex-1 min-w-[200px]">
                <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Search</label>
                <input type="text" name="Search" value="@Model.Search" placeholder="Search bundles..."
                       class="w-full px-3 py-2 border border-gray-300 rounded-lg dark:bg-gray-800 dark:border-gray-700 dark:text-white" />
            </div>
            <div class="w-40">
                <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Type</label>
                <select name="BundleType" class="w-full px-3 py-2 border border-gray-300 rounded-lg dark:bg-gray-800 dark:border-gray-700 dark:text-white">
                    <option value="">All Types</option>
                    <option value="fixed" selected="@(Model.BundleType == "fixed")">Fixed</option>
                    <option value="mix_and_match" selected="@(Model.BundleType == "mix_and_match")">Mix & Match</option>
                </select>
            </div>
            <div class="w-40">
                <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Status</label>
                <select name="Status" class="w-full px-3 py-2 border border-gray-300 rounded-lg dark:bg-gray-800 dark:border-gray-700 dark:text-white">
                    <option value="">All Status</option>
                    <option value="draft" selected="@(Model.Status == "draft")">Draft</option>
                    <option value="active" selected="@(Model.Status == "active")">Active</option>
                    <option value="archived" selected="@(Model.Status == "archived")">Archived</option>
                </select>
            </div>
            <button type="submit" class="px-4 py-2 bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-white rounded-lg hover:bg-gray-200 dark:hover:bg-gray-700">
                <i class="fas fa-search mr-2"></i> Filter
            </button>
            @if (!string.IsNullOrEmpty(Model.Search) || !string.IsNullOrEmpty(Model.BundleType) || !string.IsNullOrEmpty(Model.Status))
            {
                <a href="/bundles/admin/list" class="px-4 py-2 text-gray-500 hover:text-gray-700">Clear</a>
            }
        </form>
    </div>

    <!-- Bundles Table -->
    <div class="bg-white shadow-soft-xl rounded-2xl dark:bg-gray-950 overflow-hidden">
        <div class="overflow-x-auto">
            @if (Model.Bundles.Items.Any())
            {
                <table class="w-full text-left">
                    <thead class="bg-gray-50 dark:bg-gray-800">
                        <tr>
                            <th class="px-6 py-3 text-xs font-semibold text-gray-500 uppercase">Bundle</th>
                            <th class="px-6 py-3 text-xs font-semibold text-gray-500 uppercase">Type</th>
                            <th class="px-6 py-3 text-xs font-semibold text-gray-500 uppercase">Price</th>
                            <th class="px-6 py-3 text-xs font-semibold text-gray-500 uppercase">Discount</th>
                            <th class="px-6 py-3 text-xs font-semibold text-gray-500 uppercase">Status</th>
                            <th class="px-6 py-3 text-xs font-semibold text-gray-500 uppercase">Shopify</th>
                            <th class="px-6 py-3 text-xs font-semibold text-gray-500 uppercase">Created</th>
                            <th class="px-6 py-3 text-xs font-semibold text-gray-500 uppercase">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-200 dark:divide-gray-700">
                        @foreach (var bundle in Model.Bundles.Items)
                        {
                            <tr class="hover:bg-gray-50 dark:hover:bg-gray-800">
                                <td class="px-6 py-4">
                                    <div class="flex items-center gap-3">
                                        @if (!string.IsNullOrEmpty(bundle.ImageUrl))
                                        {
                                            <img src="@bundle.ImageUrl" alt="@bundle.Name" class="w-12 h-12 rounded object-cover" />
                                        }
                                        else
                                        {
                                            <div class="w-12 h-12 bg-gray-200 dark:bg-gray-700 rounded flex items-center justify-center">
                                                <i class="fas fa-boxes text-gray-400"></i>
                                            </div>
                                        }
                                        <div>
                                            <p class="font-medium dark:text-white">@bundle.Name</p>
                                            <p class="text-xs text-gray-500">@bundle.ItemCount items</p>
                                        </div>
                                    </div>
                                </td>
                                <td class="px-6 py-4">
                                    <span class="px-2 py-1 text-xs rounded @(bundle.BundleType == "fixed" ? "bg-blue-100 text-blue-700" : "bg-purple-100 text-purple-700")">
                                        @(bundle.BundleType == "fixed" ? "Fixed" : "Mix & Match")
                                    </span>
                                </td>
                                <td class="px-6 py-4">
                                    <span class="font-medium dark:text-white">$@bundle.BundlePrice.ToString("F2")</span>
                                    @if (bundle.OriginalPrice > bundle.BundlePrice)
                                    {
                                        <span class="text-xs text-gray-400 line-through ml-1">$@bundle.OriginalPrice.ToString("F2")</span>
                                    }
                                </td>
                                <td class="px-6 py-4">
                                    @if (bundle.SavingsPercent > 0)
                                    {
                                        <span class="text-green-600 font-medium">@bundle.SavingsPercent.ToString("F0")% off</span>
                                    }
                                    else
                                    {
                                        <span class="text-gray-400">-</span>
                                    }
                                </td>
                                <td class="px-6 py-4">
                                    <span class="px-2 py-1 text-xs rounded @(bundle.IsActive ? "bg-green-100 text-green-700" : "bg-gray-100 text-gray-700")">
                                        @(bundle.IsActive ? "Active" : "Inactive")
                                    </span>
                                </td>
                                <td class="px-6 py-4">
                                    @if (bundle.ShopifySyncStatus == "synced")
                                    {
                                        <span class="text-green-600" title="Synced to Shopify"><i class="fas fa-check-circle"></i></span>
                                    }
                                    else if (bundle.ShopifySyncStatus == "error")
                                    {
                                        <span class="text-red-600" title="Sync error"><i class="fas fa-exclamation-circle"></i></span>
                                    }
                                    else
                                    {
                                        <span class="text-gray-400" title="Not synced"><i class="fas fa-clock"></i></span>
                                    }
                                </td>
                                <td class="px-6 py-4 text-sm text-gray-500">
                                    @bundle.CreatedAt.ToString("MMM d, yyyy")
                                </td>
                                <td class="px-6 py-4">
                                    <div class="flex items-center gap-2">
                                        <a href="/bundles/admin/edit/@bundle.Id" class="p-2 text-indigo-600 hover:bg-indigo-50 rounded" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a href="/bundles/@bundle.Slug" target="_blank" class="p-2 text-gray-600 hover:bg-gray-50 rounded" title="View">
                                            <i class="fas fa-external-link-alt"></i>
                                        </a>
                                        <form method="post" asp-page-handler="Delete" asp-route-id="@bundle.Id" class="inline"
                                              onsubmit="return confirm('Are you sure you want to delete this bundle?');">
                                            <button type="submit" class="p-2 text-red-600 hover:bg-red-50 rounded" title="Delete">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                <!-- Pagination -->
                @if (Model.Bundles.TotalPages > 1)
                {
                    <div class="px-6 py-4 border-t dark:border-gray-700 flex justify-between items-center">
                        <p class="text-sm text-gray-500">
                            Showing @((Model.PageNumber - 1) * 20 + 1) to @Math.Min(Model.PageNumber * 20, Model.Bundles.TotalCount) of @Model.Bundles.TotalCount bundles
                        </p>
                        <div class="flex gap-2">
                            @if (Model.Bundles.HasPreviousPage)
                            {
                                <a href="?pageNumber=@(Model.PageNumber - 1)&bundleType=@Model.BundleType&status=@Model.Status&search=@Model.Search"
                                   class="px-3 py-1 border rounded hover:bg-gray-50 dark:border-gray-700 dark:hover:bg-gray-800">
                                    <i class="fas fa-chevron-left"></i>
                                </a>
                            }
                            @if (Model.Bundles.HasNextPage)
                            {
                                <a href="?pageNumber=@(Model.PageNumber + 1)&bundleType=@Model.BundleType&status=@Model.Status&search=@Model.Search"
                                   class="px-3 py-1 border rounded hover:bg-gray-50 dark:border-gray-700 dark:hover:bg-gray-800">
                                    <i class="fas fa-chevron-right"></i>
                                </a>
                            }
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="text-center py-12">
                    <i class="fas fa-boxes text-5xl text-gray-300 mb-4"></i>
                    <p class="text-gray-500 dark:text-gray-400 mb-4">No bundles found</p>
                    <a href="/bundles/admin/create" class="inline-flex items-center px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700">
                        <i class="fas fa-plus mr-2"></i> Create Bundle
                    </a>
                </div>
            }
        </div>
    </div>
</div>
