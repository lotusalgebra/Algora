@page "/bundles/admin/create"
@model Algora.Web.Pages.Bundles.Admin.CreateModel
@{
    ViewData["Title"] = "Create Bundle";
}

<div class="p-4">
    <!-- Header -->
    <div class="flex items-center gap-4 mb-6">
        <a href="/bundles/admin/list" class="p-2 text-gray-500 hover:text-gray-700 hover:bg-gray-100 dark:text-gray-400 dark:hover:text-white dark:hover:bg-gray-700 rounded-lg">
            <i class="fas fa-arrow-left"></i>
        </a>
        <div>
            <h1 class="text-xl font-bold text-gray-900 dark:text-white">Create Bundle</h1>
            <p class="text-sm text-gray-500 dark:text-gray-400">Set up a new product bundle</p>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="flex items-center p-4 mb-6 text-sm text-red-800 rounded-lg bg-red-50 dark:bg-gray-800 dark:text-red-400" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>
            @Model.ErrorMessage
        </div>
    }

    <form method="post">
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
            <!-- Main Content -->
            <div class="lg:col-span-2 space-y-6">
                <!-- Basic Info -->
                <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6">
                    <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Basic Information</h3>

                    <div class="space-y-4">
                        <div>
                            <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">Bundle Name *</label>
                            <input type="text" asp-for="Bundle.Name" required
                                   class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white"
                                   placeholder="e.g., Summer Essentials Bundle" />
                            <span asp-validation-for="Bundle.Name" class="text-red-500 text-sm"></span>
                        </div>

                        <div>
                            <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">Description</label>
                            <textarea asp-for="Bundle.Description" rows="3"
                                      class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white"
                                      placeholder="Describe what's included in this bundle..."></textarea>
                        </div>

                        <div>
                            <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">Bundle Type *</label>
                            <div class="grid grid-cols-2 gap-4">
                                <label class="relative flex items-start p-4 border border-gray-300 dark:border-gray-600 rounded-lg cursor-pointer hover:bg-gray-50 dark:hover:bg-gray-700 has-[:checked]:border-purple-500 has-[:checked]:bg-purple-50 dark:has-[:checked]:bg-purple-900/20">
                                    <input type="radio" asp-for="Bundle.BundleType" value="fixed" class="mt-1 text-purple-600 focus:ring-purple-500" checked />
                                    <div class="ml-3">
                                        <span class="block font-medium text-gray-900 dark:text-white">Fixed Bundle</span>
                                        <span class="text-sm text-gray-500 dark:text-gray-400">Pre-defined product combination</span>
                                    </div>
                                </label>
                                <label class="relative flex items-start p-4 border border-gray-300 dark:border-gray-600 rounded-lg cursor-pointer hover:bg-gray-50 dark:hover:bg-gray-700 has-[:checked]:border-purple-500 has-[:checked]:bg-purple-50 dark:has-[:checked]:bg-purple-900/20">
                                    <input type="radio" asp-for="Bundle.BundleType" value="mix_and_match" class="mt-1 text-purple-600 focus:ring-purple-500" />
                                    <div class="ml-3">
                                        <span class="block font-medium text-gray-900 dark:text-white">Mix & Match</span>
                                        <span class="text-sm text-gray-500 dark:text-gray-400">Customer picks from eligible items</span>
                                    </div>
                                </label>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Pricing -->
                <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6">
                    <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Pricing & Discount</h3>

                    <div class="grid grid-cols-2 gap-4">
                        <div>
                            <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">Discount Type</label>
                            <select asp-for="Bundle.DiscountType"
                                    class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white">
                                <option value="percentage">Percentage (%)</option>
                                <option value="fixed_amount">Fixed Amount ($)</option>
                            </select>
                        </div>

                        <div>
                            <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">Discount Value</label>
                            <input type="number" asp-for="Bundle.DiscountValue" step="0.01" min="0"
                                   class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white"
                                   placeholder="10" />
                        </div>

                        <div class="col-span-2">
                            <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">Discount Code (Optional)</label>
                            <input type="text" asp-for="Bundle.DiscountCode"
                                   class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white"
                                   placeholder="e.g., BUNDLE10" />
                            <p class="text-xs text-gray-500 dark:text-gray-400 mt-1">Create this code in Shopify and enter it here to show customers</p>
                        </div>
                    </div>
                </div>

                <!-- Mix & Match Options (shown via JS) -->
                <div id="mix-match-options" class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6" style="display: none;">
                    <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Mix & Match Settings</h3>

                    <div class="grid grid-cols-2 gap-4">
                        <div>
                            <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">Minimum Items</label>
                            <input type="number" asp-for="Bundle.MinItems" min="1"
                                   class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white"
                                   placeholder="3" />
                        </div>

                        <div>
                            <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">Maximum Items</label>
                            <input type="number" asp-for="Bundle.MaxItems" min="1"
                                   class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white"
                                   placeholder="5" />
                        </div>
                    </div>
                </div>
            </div>

            <!-- Sidebar -->
            <div class="space-y-6">
                <!-- Status -->
                <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6">
                    <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Status</h3>

                    <div class="space-y-4">
                        <label class="flex items-center gap-2">
                            <input type="checkbox" asp-for="Bundle.IsActive" class="w-4 h-4 text-purple-600 bg-gray-100 border-gray-300 rounded focus:ring-purple-500 dark:bg-gray-700 dark:border-gray-600" />
                            <span class="text-sm text-gray-900 dark:text-white">Active on storefront</span>
                        </label>
                        <p class="text-xs text-gray-500 dark:text-gray-400">Bundle will be created as draft. Edit to change status after adding items.</p>
                    </div>
                </div>

                <!-- Image -->
                <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6">
                    <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Bundle Image</h3>

                    <div>
                        <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">Image URL</label>
                        <input type="url" asp-for="Bundle.ImageUrl"
                               class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white"
                               placeholder="https://..." />
                    </div>
                </div>

                <!-- Actions -->
                <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6">
                    <button type="submit" class="w-full text-white bg-gradient-to-br from-purple-600 to-pink-500 hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-purple-300 dark:focus:ring-purple-800 font-medium rounded-lg text-sm px-5 py-3">
                        <i class="fas fa-plus me-2"></i> Create Bundle
                    </button>
                    <a href="/bundles/admin/list" class="block w-full text-center py-3 px-4 mt-3 text-gray-600 hover:text-gray-800 dark:text-gray-400 dark:hover:text-white">
                        Cancel
                    </a>
                </div>
            </div>
        </div>
    </form>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const bundleTypeInputs = document.querySelectorAll('input[name="Bundle.BundleType"]');
        const mixMatchOptions = document.getElementById('mix-match-options');

        function updateVisibility() {
            const selectedType = document.querySelector('input[name="Bundle.BundleType"]:checked')?.value;
            mixMatchOptions.style.display = selectedType === 'mix_and_match' ? 'block' : 'none';
        }

        bundleTypeInputs.forEach(input => {
            input.addEventListener('change', updateVisibility);
        });

        updateVisibility();
    });
</script>
