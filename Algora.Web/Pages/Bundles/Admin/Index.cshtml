@page "/bundles/admin"
@model Algora.Web.Pages.Bundles.Admin.IndexModel
@{
    ViewData["Title"] = "Bundle Builder";
}

<div class="p-4">
    <!-- Header -->
    <div class="flex justify-between items-center mb-6">
        <div>
            <h1 class="text-xl font-bold text-gray-900 dark:text-white">Bundle Builder</h1>
            <p class="text-sm text-gray-500 dark:text-gray-400">Create and manage product bundles</p>
        </div>
        <a href="/bundles/admin/create" class="text-white bg-gradient-to-br from-purple-600 to-pink-500 hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-purple-300 dark:focus:ring-purple-800 font-medium rounded-lg text-sm px-5 py-2.5 inline-flex items-center">
            <i class="fas fa-plus me-2"></i> Create Bundle
        </a>
    </div>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="flex items-center p-4 mb-6 text-sm text-red-800 rounded-lg bg-red-50 dark:bg-gray-800 dark:text-red-400" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>
            @Model.ErrorMessage
        </div>
    }

    <!-- Summary Cards -->
    <div class="grid grid-cols-1 sm:grid-cols-2 xl:grid-cols-4 gap-4 mb-6">
        <!-- Total Bundles -->
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-4">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Total Bundles</p>
                    <h5 class="text-2xl font-bold text-purple-600 dark:text-purple-400">@Model.Summary.TotalBundles</h5>
                </div>
                <div class="w-12 h-12 rounded-lg bg-gradient-to-br from-purple-600 to-pink-500 flex items-center justify-center">
                    <i class="fas fa-boxes text-lg text-white"></i>
                </div>
            </div>
        </div>

        <!-- Active Bundles -->
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-4">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Active Bundles</p>
                    <h5 class="text-2xl font-bold text-green-600 dark:text-green-400">@Model.Summary.ActiveBundles</h5>
                </div>
                <div class="w-12 h-12 rounded-lg bg-gradient-to-br from-green-500 to-lime-400 flex items-center justify-center">
                    <i class="fas fa-check-circle text-lg text-white"></i>
                </div>
            </div>
        </div>

        <!-- Total Sales -->
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-4">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Total Sales</p>
                    <h5 class="text-2xl font-bold text-blue-600 dark:text-blue-400">@Model.Summary.TotalSales</h5>
                </div>
                <div class="w-12 h-12 rounded-lg bg-gradient-to-br from-blue-600 to-cyan-400 flex items-center justify-center">
                    <i class="fas fa-shopping-cart text-lg text-white"></i>
                </div>
            </div>
        </div>

        <!-- Total Revenue -->
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-4">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Total Revenue</p>
                    <h5 class="text-2xl font-bold text-orange-600 dark:text-orange-400">$@Model.Summary.TotalRevenue.ToString("N2")</h5>
                </div>
                <div class="w-12 h-12 rounded-lg bg-gradient-to-br from-orange-500 to-yellow-400 flex items-center justify-center">
                    <i class="fas fa-dollar-sign text-lg text-white"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Links -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6 mb-6">
        <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Quick Actions</h3>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
            <a href="/bundles/admin/list" class="p-4 bg-gray-50 dark:bg-gray-700 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-600 transition-colors text-center">
                <i class="fas fa-list text-2xl text-purple-600 mb-2"></i>
                <p class="text-sm font-medium text-gray-900 dark:text-white">View All Bundles</p>
            </a>
            <a href="/bundles/admin/create" class="p-4 bg-gray-50 dark:bg-gray-700 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-600 transition-colors text-center">
                <i class="fas fa-plus-circle text-2xl text-green-600 mb-2"></i>
                <p class="text-sm font-medium text-gray-900 dark:text-white">Create Bundle</p>
            </a>
            <a href="/bundles/admin/analytics" class="p-4 bg-gray-50 dark:bg-gray-700 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-600 transition-colors text-center">
                <i class="fas fa-chart-bar text-2xl text-blue-600 mb-2"></i>
                <p class="text-sm font-medium text-gray-900 dark:text-white">Analytics</p>
            </a>
            <a href="/bundles/admin/settings" class="p-4 bg-gray-50 dark:bg-gray-700 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-600 transition-colors text-center">
                <i class="fas fa-cog text-2xl text-gray-600 mb-2"></i>
                <p class="text-sm font-medium text-gray-900 dark:text-white">Settings</p>
            </a>
        </div>
    </div>

    <!-- Recent Bundles -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md">
        <div class="p-6 border-b border-gray-200 dark:border-gray-700">
            <div class="flex justify-between items-center">
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Recent Bundles</h3>
                <a href="/bundles/admin/list" class="text-sm text-purple-600 hover:text-purple-800 dark:text-purple-400">View all</a>
            </div>
        </div>
        <div class="overflow-x-auto">
            @if (Model.RecentBundles.Any())
            {
                <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
                    <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                        <tr>
                            <th scope="col" class="px-6 py-3">Bundle</th>
                            <th scope="col" class="px-6 py-3">Type</th>
                            <th scope="col" class="px-6 py-3">Price</th>
                            <th scope="col" class="px-6 py-3">Status</th>
                            <th scope="col" class="px-6 py-3">Shopify</th>
                            <th scope="col" class="px-6 py-3">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var bundle in Model.RecentBundles)
                        {
                            <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-700">
                                <td class="px-6 py-4">
                                    <div class="flex items-center gap-3">
                                        @if (!string.IsNullOrEmpty(bundle.ImageUrl))
                                        {
                                            <img src="@bundle.ImageUrl" alt="@bundle.Name" class="w-10 h-10 rounded object-cover" />
                                        }
                                        else
                                        {
                                            <div class="w-10 h-10 bg-gray-200 dark:bg-gray-600 rounded flex items-center justify-center">
                                                <i class="fas fa-boxes text-gray-400"></i>
                                            </div>
                                        }
                                        <span class="font-medium text-gray-900 dark:text-white">@bundle.Name</span>
                                    </div>
                                </td>
                                <td class="px-6 py-4">
                                    <span class="@(bundle.BundleType == "fixed" ? "bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-300" : "bg-purple-100 text-purple-800 dark:bg-purple-900 dark:text-purple-300") text-xs font-medium px-2.5 py-0.5 rounded">
                                        @(bundle.BundleType == "fixed" ? "Fixed" : "Mix & Match")
                                    </span>
                                </td>
                                <td class="px-6 py-4 font-medium text-gray-900 dark:text-white">$@bundle.BundlePrice.ToString("F2")</td>
                                <td class="px-6 py-4">
                                    <span class="@(bundle.IsActive ? "bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-300" : "bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-300") text-xs font-medium px-2.5 py-0.5 rounded">
                                        @(bundle.IsActive ? "Active" : "Inactive")
                                    </span>
                                </td>
                                <td class="px-6 py-4">
                                    @if (bundle.ShopifySyncStatus == "synced")
                                    {
                                        <span class="text-green-600"><i class="fas fa-check-circle"></i></span>
                                    }
                                    else if (bundle.ShopifySyncStatus == "error")
                                    {
                                        <span class="text-red-600"><i class="fas fa-exclamation-circle"></i></span>
                                    }
                                    else
                                    {
                                        <span class="text-gray-400"><i class="fas fa-clock"></i></span>
                                    }
                                </td>
                                <td class="px-6 py-4">
                                    <a href="/bundles/admin/edit/@bundle.Id" class="text-purple-600 hover:text-purple-800 dark:text-purple-400">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="text-center py-12">
                    <i class="fas fa-boxes text-4xl text-gray-300 dark:text-gray-600 mb-3"></i>
                    <p class="text-gray-500 dark:text-gray-400">No bundles created yet</p>
                    <a href="/bundles/admin/create" class="mt-3 inline-flex items-center text-purple-600 hover:text-purple-800 dark:text-purple-400">
                        <i class="fas fa-plus me-2"></i> Create your first bundle
                    </a>
                </div>
            }
        </div>
    </div>
</div>
