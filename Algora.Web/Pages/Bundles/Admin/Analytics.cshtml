@page "/bundles/admin/analytics"
@model Algora.Web.Pages.Bundles.Admin.AnalyticsModel
@{
    ViewData["Title"] = "Bundle Analytics";
}

<div class="p-4">
    <!-- Header -->
    <div class="flex items-center gap-4 mb-6">
        <a href="/bundles/admin" class="p-2 text-gray-500 hover:text-gray-700 hover:bg-gray-100 dark:text-gray-400 dark:hover:text-white dark:hover:bg-gray-700 rounded-lg">
            <i class="fas fa-arrow-left"></i>
        </a>
        <div>
            <h1 class="text-xl font-bold text-gray-900 dark:text-white">Bundle Analytics</h1>
            <p class="text-sm text-gray-500 dark:text-gray-400">Track bundle performance and sales</p>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="flex items-center p-4 mb-6 text-sm text-red-800 rounded-lg bg-red-50 dark:bg-gray-800 dark:text-red-400" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>
            @Model.ErrorMessage
        </div>
    }

    @if (Model.Analytics != null)
    {
        <!-- Summary Cards -->
        <div class="grid grid-cols-1 sm:grid-cols-2 xl:grid-cols-4 gap-4 mb-6">
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-4">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Total Orders</p>
                        <h5 class="text-2xl font-bold text-purple-600 dark:text-purple-400">@Model.Analytics.TotalOrders</h5>
                    </div>
                    <div class="w-12 h-12 rounded-lg bg-gradient-to-br from-purple-600 to-pink-500 flex items-center justify-center">
                        <i class="fas fa-shopping-bag text-lg text-white"></i>
                    </div>
                </div>
            </div>

            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-4">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Total Revenue</p>
                        <h5 class="text-2xl font-bold text-green-600 dark:text-green-400">$@Model.Analytics.TotalRevenue.ToString("N2")</h5>
                    </div>
                    <div class="w-12 h-12 rounded-lg bg-gradient-to-br from-green-500 to-lime-400 flex items-center justify-center">
                        <i class="fas fa-dollar-sign text-lg text-white"></i>
                    </div>
                </div>
            </div>

            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-4">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Active Bundles</p>
                        <h5 class="text-2xl font-bold text-blue-600 dark:text-blue-400">@Model.Analytics.ActiveBundles</h5>
                    </div>
                    <div class="w-12 h-12 rounded-lg bg-gradient-to-br from-blue-600 to-cyan-400 flex items-center justify-center">
                        <i class="fas fa-boxes text-lg text-white"></i>
                    </div>
                </div>
            </div>

            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-4">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Average Order Value</p>
                        <h5 class="text-2xl font-bold text-orange-600 dark:text-orange-400">$@Model.Analytics.AverageOrderValue.ToString("N2")</h5>
                    </div>
                    <div class="w-12 h-12 rounded-lg bg-gradient-to-br from-orange-500 to-yellow-400 flex items-center justify-center">
                        <i class="fas fa-chart-line text-lg text-white"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- Top Performing Bundles -->
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md mb-6">
            <div class="p-6 border-b border-gray-200 dark:border-gray-700">
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Top Performing Bundles</h3>
            </div>

            @if (Model.Analytics.TopBundles.Any())
            {
                <div class="overflow-x-auto">
                    <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
                        <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                            <tr>
                                <th scope="col" class="px-6 py-3">Bundle</th>
                                <th scope="col" class="px-6 py-3">Orders</th>
                                <th scope="col" class="px-6 py-3">Revenue</th>
                                <th scope="col" class="px-6 py-3">Conversion Rate</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var bundle in Model.Analytics.TopBundles)
                            {
                                <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-700">
                                    <td class="px-6 py-4">
                                        <a href="/bundles/admin/edit/@bundle.BundleId" class="font-medium text-purple-600 hover:text-purple-800 dark:text-purple-400">
                                            @bundle.BundleName
                                        </a>
                                    </td>
                                    <td class="px-6 py-4 text-gray-900 dark:text-white">@bundle.Orders</td>
                                    <td class="px-6 py-4 text-gray-900 dark:text-white">$@bundle.Revenue.ToString("N2")</td>
                                    <td class="px-6 py-4">
                                        <span class="bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-300 text-xs font-medium px-2.5 py-0.5 rounded">
                                            @bundle.ConversionRate.ToString("F1")%
                                        </span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-12 text-gray-500 dark:text-gray-400">
                    <i class="fas fa-chart-bar text-3xl mb-3"></i>
                    <p>No sales data available yet. Start selling bundles to see analytics.</p>
                </div>
            }
        </div>

        <!-- Bundle Stats -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6">
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Bundle Distribution</h3>
                <div class="space-y-4">
                    <div>
                        <div class="flex justify-between text-sm mb-1">
                            <span class="text-gray-600 dark:text-gray-400">Fixed Bundles</span>
                            <span class="font-medium text-gray-900 dark:text-white">@Model.Analytics.FixedBundles</span>
                        </div>
                        <div class="w-full bg-gray-200 dark:bg-gray-700 rounded-full h-2">
                            @{
                                var fixedPercent = Model.Analytics.TotalBundles > 0
                                    ? (Model.Analytics.FixedBundles / (double)Model.Analytics.TotalBundles) * 100
                                    : 0;
                            }
                            <div class="bg-blue-600 h-2 rounded-full" style="width: @fixedPercent%"></div>
                        </div>
                    </div>
                    <div>
                        <div class="flex justify-between text-sm mb-1">
                            <span class="text-gray-600 dark:text-gray-400">Mix & Match Bundles</span>
                            <span class="font-medium text-gray-900 dark:text-white">@Model.Analytics.MixAndMatchBundles</span>
                        </div>
                        <div class="w-full bg-gray-200 dark:bg-gray-700 rounded-full h-2">
                            @{
                                var mixMatchPercent = Model.Analytics.TotalBundles > 0
                                    ? (Model.Analytics.MixAndMatchBundles / (double)Model.Analytics.TotalBundles) * 100
                                    : 0;
                            }
                            <div class="bg-purple-600 h-2 rounded-full" style="width: @mixMatchPercent%"></div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6">
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Quick Stats</h3>
                <div class="space-y-3">
                    <div class="flex justify-between p-3 bg-gray-50 dark:bg-gray-700 rounded-lg">
                        <span class="text-gray-600 dark:text-gray-400">Total Bundles</span>
                        <span class="font-semibold text-gray-900 dark:text-white">@Model.Analytics.TotalBundles</span>
                    </div>
                    <div class="flex justify-between p-3 bg-gray-50 dark:bg-gray-700 rounded-lg">
                        <span class="text-gray-600 dark:text-gray-400">Active Bundles</span>
                        <span class="font-semibold text-gray-900 dark:text-white">@Model.Analytics.ActiveBundles</span>
                    </div>
                    <div class="flex justify-between p-3 bg-gray-50 dark:bg-gray-700 rounded-lg">
                        <span class="text-gray-600 dark:text-gray-400">Synced to Shopify</span>
                        <span class="font-semibold text-gray-900 dark:text-white">@Model.Analytics.SyncedToShopify</span>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
