@page "/bundles/admin/analytics"
@model Algora.Web.Pages.Bundles.Admin.AnalyticsModel
@{
    ViewData["Title"] = "Bundle Analytics";
}

<div class="w-full px-6 py-6 mx-auto">
    <!-- Header -->
    <div class="flex items-center gap-4 mb-6">
        <a href="/bundles/admin" class="p-2 hover:bg-gray-100 dark:hover:bg-gray-800 rounded-lg">
            <i class="fas fa-arrow-left dark:text-white"></i>
        </a>
        <div>
            <h1 class="text-2xl font-bold dark:text-white">Bundle Analytics</h1>
            <p class="text-sm text-gray-500 dark:text-gray-400">Track bundle performance and sales</p>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-6">
            @Model.ErrorMessage
        </div>
    }

    @if (Model.Analytics != null)
    {
        <!-- Summary Cards -->
        <div class="flex flex-wrap -mx-3 mb-6">
            <div class="w-full max-w-full px-3 mb-6 sm:w-1/2 xl:w-1/4">
                <div class="relative flex flex-col min-w-0 break-words bg-white shadow-soft-xl rounded-2xl bg-clip-border dark:bg-gray-950 dark:shadow-soft-dark-xl">
                    <div class="flex-auto p-4">
                        <div class="flex flex-row -mx-3">
                            <div class="flex-none w-2/3 max-w-full px-3">
                                <div>
                                    <p class="mb-0 font-sans text-sm font-semibold leading-normal dark:text-white dark:opacity-60">Total Orders</p>
                                    <h5 class="mb-0 font-bold dark:text-white text-indigo-600">@Model.Analytics.TotalOrders</h5>
                                </div>
                            </div>
                            <div class="px-3 text-right basis-1/3">
                                <div class="inline-block w-12 h-12 text-center rounded-lg bg-gradient-to-tl from-indigo-600 to-purple-400">
                                    <i class="fas fa-shopping-bag text-lg relative top-3.5 text-white"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="w-full max-w-full px-3 mb-6 sm:w-1/2 xl:w-1/4">
                <div class="relative flex flex-col min-w-0 break-words bg-white shadow-soft-xl rounded-2xl bg-clip-border dark:bg-gray-950 dark:shadow-soft-dark-xl">
                    <div class="flex-auto p-4">
                        <div class="flex flex-row -mx-3">
                            <div class="flex-none w-2/3 max-w-full px-3">
                                <div>
                                    <p class="mb-0 font-sans text-sm font-semibold leading-normal dark:text-white dark:opacity-60">Total Revenue</p>
                                    <h5 class="mb-0 font-bold dark:text-white text-green-600">$@Model.Analytics.TotalRevenue.ToString("N2")</h5>
                                </div>
                            </div>
                            <div class="px-3 text-right basis-1/3">
                                <div class="inline-block w-12 h-12 text-center rounded-lg bg-gradient-to-tl from-green-600 to-lime-400">
                                    <i class="fas fa-dollar-sign text-lg relative top-3.5 text-white"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="w-full max-w-full px-3 mb-6 sm:w-1/2 xl:w-1/4">
                <div class="relative flex flex-col min-w-0 break-words bg-white shadow-soft-xl rounded-2xl bg-clip-border dark:bg-gray-950 dark:shadow-soft-dark-xl">
                    <div class="flex-auto p-4">
                        <div class="flex flex-row -mx-3">
                            <div class="flex-none w-2/3 max-w-full px-3">
                                <div>
                                    <p class="mb-0 font-sans text-sm font-semibold leading-normal dark:text-white dark:opacity-60">Active Bundles</p>
                                    <h5 class="mb-0 font-bold dark:text-white text-blue-600">@Model.Analytics.ActiveBundles</h5>
                                </div>
                            </div>
                            <div class="px-3 text-right basis-1/3">
                                <div class="inline-block w-12 h-12 text-center rounded-lg bg-gradient-to-tl from-blue-600 to-cyan-400">
                                    <i class="fas fa-boxes text-lg relative top-3.5 text-white"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="w-full max-w-full px-3 mb-6 sm:w-1/2 xl:w-1/4">
                <div class="relative flex flex-col min-w-0 break-words bg-white shadow-soft-xl rounded-2xl bg-clip-border dark:bg-gray-950 dark:shadow-soft-dark-xl">
                    <div class="flex-auto p-4">
                        <div class="flex flex-row -mx-3">
                            <div class="flex-none w-2/3 max-w-full px-3">
                                <div>
                                    <p class="mb-0 font-sans text-sm font-semibold leading-normal dark:text-white dark:opacity-60">Average Order Value</p>
                                    <h5 class="mb-0 font-bold dark:text-white text-orange-600">$@Model.Analytics.AverageOrderValue.ToString("N2")</h5>
                                </div>
                            </div>
                            <div class="px-3 text-right basis-1/3">
                                <div class="inline-block w-12 h-12 text-center rounded-lg bg-gradient-to-tl from-orange-500 to-yellow-400">
                                    <i class="fas fa-chart-line text-lg relative top-3.5 text-white"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Top Performing Bundles -->
        <div class="bg-white shadow-soft-xl rounded-2xl dark:bg-gray-950 p-6 mb-6">
            <h3 class="text-lg font-bold mb-4 dark:text-white">Top Performing Bundles</h3>

            @if (Model.Analytics.TopBundles.Any())
            {
                <div class="overflow-x-auto">
                    <table class="w-full text-left">
                        <thead>
                            <tr class="border-b dark:border-gray-700">
                                <th class="pb-3 text-xs font-semibold text-gray-400 uppercase">Bundle</th>
                                <th class="pb-3 text-xs font-semibold text-gray-400 uppercase">Orders</th>
                                <th class="pb-3 text-xs font-semibold text-gray-400 uppercase">Revenue</th>
                                <th class="pb-3 text-xs font-semibold text-gray-400 uppercase">Conversion Rate</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var bundle in Model.Analytics.TopBundles)
                            {
                                <tr class="border-b dark:border-gray-700">
                                    <td class="py-3">
                                        <a href="/bundles/admin/edit/@bundle.BundleId" class="font-medium text-indigo-600 hover:text-indigo-800">
                                            @bundle.BundleName
                                        </a>
                                    </td>
                                    <td class="py-3 dark:text-white">@bundle.Orders</td>
                                    <td class="py-3 dark:text-white">$@bundle.Revenue.ToString("N2")</td>
                                    <td class="py-3">
                                        <span class="px-2 py-1 bg-green-100 text-green-700 rounded text-sm">
                                            @bundle.ConversionRate.ToString("F1")%
                                        </span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-8 text-gray-500">
                    <i class="fas fa-chart-bar text-3xl mb-3"></i>
                    <p>No sales data available yet. Start selling bundles to see analytics.</p>
                </div>
            }
        </div>

        <!-- Bundle Stats -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="bg-white shadow-soft-xl rounded-2xl dark:bg-gray-950 p-6">
                <h3 class="text-lg font-bold mb-4 dark:text-white">Bundle Distribution</h3>
                <div class="space-y-4">
                    <div>
                        <div class="flex justify-between text-sm mb-1">
                            <span class="dark:text-gray-400">Fixed Bundles</span>
                            <span class="font-medium dark:text-white">@Model.Analytics.FixedBundles</span>
                        </div>
                        <div class="w-full bg-gray-200 dark:bg-gray-700 rounded-full h-2">
                            @{
                                var fixedPercent = Model.Analytics.TotalBundles > 0
                                    ? (Model.Analytics.FixedBundles / (double)Model.Analytics.TotalBundles) * 100
                                    : 0;
                            }
                            <div class="bg-blue-600 h-2 rounded-full" style="width: @fixedPercent%"></div>
                        </div>
                    </div>
                    <div>
                        <div class="flex justify-between text-sm mb-1">
                            <span class="dark:text-gray-400">Mix & Match Bundles</span>
                            <span class="font-medium dark:text-white">@Model.Analytics.MixAndMatchBundles</span>
                        </div>
                        <div class="w-full bg-gray-200 dark:bg-gray-700 rounded-full h-2">
                            @{
                                var mixMatchPercent = Model.Analytics.TotalBundles > 0
                                    ? (Model.Analytics.MixAndMatchBundles / (double)Model.Analytics.TotalBundles) * 100
                                    : 0;
                            }
                            <div class="bg-purple-600 h-2 rounded-full" style="width: @mixMatchPercent%"></div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="bg-white shadow-soft-xl rounded-2xl dark:bg-gray-950 p-6">
                <h3 class="text-lg font-bold mb-4 dark:text-white">Quick Stats</h3>
                <div class="space-y-3">
                    <div class="flex justify-between p-3 bg-gray-50 dark:bg-gray-800 rounded-lg">
                        <span class="text-gray-600 dark:text-gray-400">Total Bundles</span>
                        <span class="font-semibold dark:text-white">@Model.Analytics.TotalBundles</span>
                    </div>
                    <div class="flex justify-between p-3 bg-gray-50 dark:bg-gray-800 rounded-lg">
                        <span class="text-gray-600 dark:text-gray-400">Active Bundles</span>
                        <span class="font-semibold dark:text-white">@Model.Analytics.ActiveBundles</span>
                    </div>
                    <div class="flex justify-between p-3 bg-gray-50 dark:bg-gray-800 rounded-lg">
                        <span class="text-gray-600 dark:text-gray-400">Synced to Shopify</span>
                        <span class="font-semibold dark:text-white">@Model.Analytics.SyncedToShopify</span>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
