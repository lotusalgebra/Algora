@page "/bundles/admin/settings"
@model Algora.Web.Pages.Bundles.Admin.SettingsModel
@{
    ViewData["Title"] = "Bundle Settings";
}

<div class="p-4">
    <!-- Header -->
    <div class="flex items-center gap-4 mb-6">
        <a href="/bundles/admin" class="p-2 text-gray-500 hover:text-gray-700 hover:bg-gray-100 dark:text-gray-400 dark:hover:text-white dark:hover:bg-gray-700 rounded-lg">
            <i class="fas fa-arrow-left"></i>
        </a>
        <div>
            <h1 class="text-xl font-bold text-gray-900 dark:text-white">Bundle Settings</h1>
            <p class="text-sm text-gray-500 dark:text-gray-400">Configure bundle feature settings</p>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="flex items-center p-4 mb-6 text-sm text-red-800 rounded-lg bg-red-50 dark:bg-gray-800 dark:text-red-400" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>
            @Model.ErrorMessage
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="flex items-center p-4 mb-6 text-sm text-green-800 rounded-lg bg-green-50 dark:bg-gray-800 dark:text-green-400" role="alert">
            <i class="fas fa-check-circle me-2"></i>
            @Model.SuccessMessage
        </div>
    }

    <form method="post">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
            <!-- General Settings -->
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6">
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">General Settings</h3>

                <div class="space-y-4">
                    <label class="flex items-start gap-3">
                        <input type="checkbox" asp-for="Input.IsEnabled" class="mt-1 w-4 h-4 text-purple-600 bg-gray-100 border-gray-300 rounded focus:ring-purple-500 dark:bg-gray-700 dark:border-gray-600" />
                        <div>
                            <span class="font-medium text-gray-900 dark:text-white">Enable Bundle Builder</span>
                            <p class="text-sm text-gray-500 dark:text-gray-400">Allow creating and managing bundles</p>
                        </div>
                    </label>

                    <label class="flex items-start gap-3">
                        <input type="checkbox" asp-for="Input.ShowOnStorefront" class="mt-1 w-4 h-4 text-purple-600 bg-gray-100 border-gray-300 rounded focus:ring-purple-500 dark:bg-gray-700 dark:border-gray-600" />
                        <div>
                            <span class="font-medium text-gray-900 dark:text-white">Show on Storefront</span>
                            <p class="text-sm text-gray-500 dark:text-gray-400">Display bundles on public pages</p>
                        </div>
                    </label>

                    <div>
                        <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">Display Layout</label>
                        <select asp-for="Input.DisplayLayout"
                                class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white">
                            <option value="grid">Grid</option>
                            <option value="list">List</option>
                            <option value="carousel">Carousel</option>
                        </select>
                    </div>
                </div>
            </div>

            <!-- Default Pricing -->
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6">
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Default Pricing</h3>

                <div class="space-y-4">
                    <div>
                        <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">Default Discount Type</label>
                        <select asp-for="Input.DefaultDiscountType"
                                class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white">
                            <option value="percentage">Percentage (%)</option>
                            <option value="fixed_amount">Fixed Amount ($)</option>
                        </select>
                    </div>

                    <div>
                        <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">Default Discount Value</label>
                        <input type="number" asp-for="Input.DefaultDiscountValue" step="0.01" min="0"
                               class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white" />
                        <p class="text-xs text-gray-500 dark:text-gray-400 mt-1">Applied to new bundles by default</p>
                    </div>
                </div>
            </div>

            <!-- Inventory Settings -->
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6">
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Inventory Settings</h3>

                <div class="space-y-4">
                    <label class="flex items-start gap-3">
                        <input type="checkbox" asp-for="Input.ShowInventoryWarnings" class="mt-1 w-4 h-4 text-purple-600 bg-gray-100 border-gray-300 rounded focus:ring-purple-500 dark:bg-gray-700 dark:border-gray-600" />
                        <div>
                            <span class="font-medium text-gray-900 dark:text-white">Show Inventory Warnings</span>
                            <p class="text-sm text-gray-500 dark:text-gray-400">Display low stock warnings to customers</p>
                        </div>
                    </label>

                    <div>
                        <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">Low Inventory Threshold</label>
                        <input type="number" asp-for="Input.LowInventoryThreshold" min="1"
                               class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white" />
                        <p class="text-xs text-gray-500 dark:text-gray-400 mt-1">Show warning when stock falls below this level</p>
                    </div>
                </div>
            </div>

            <!-- Page Customization -->
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6">
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Page Customization</h3>

                <div class="space-y-4">
                    <div>
                        <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">Bundle Page Title</label>
                        <input type="text" asp-for="Input.BundlePageTitle"
                               class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white"
                               placeholder="e.g., Product Bundles" />
                    </div>

                    <div>
                        <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">Bundle Page Description</label>
                        <textarea asp-for="Input.BundlePageDescription" rows="3"
                                  class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white"
                                  placeholder="Description shown on the bundles page..."></textarea>
                    </div>
                </div>
            </div>
        </div>

        <!-- Save Button -->
        <div class="mt-6 flex justify-end gap-4">
            <a href="/bundles/admin" class="px-6 py-2.5 text-gray-600 hover:text-gray-800 dark:text-gray-400 dark:hover:text-white">
                Cancel
            </a>
            <button type="submit" class="text-white bg-gradient-to-br from-purple-600 to-pink-500 hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-purple-300 dark:focus:ring-purple-800 font-medium rounded-lg text-sm px-6 py-2.5">
                <i class="fas fa-save me-2"></i> Save Settings
            </button>
        </div>
    </form>
</div>
