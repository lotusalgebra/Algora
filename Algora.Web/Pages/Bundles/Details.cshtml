@page "/bundles/{slug}"
@model Algora.Web.Pages.Bundles.DetailsModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@(Model.Bundle?.Name ?? "Bundle Details")</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: '#9333ea',
                    }
                }
            }
        }
    </script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
</head>
<body class="bg-gray-50 min-h-screen">
    <div class="max-w-6xl mx-auto px-4 py-8">
        <!-- Back Link -->
        <a href="/bundles" class="inline-flex items-center text-gray-600 hover:text-gray-900 mb-6 transition-colors">
            <i class="fas fa-arrow-left me-2"></i>
            Back to Bundles
        </a>

        <!-- Error Message -->
        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="flex items-center p-4 mb-6 text-sm text-red-800 rounded-xl bg-red-50 border border-red-200" role="alert">
                <i class="fas fa-exclamation-circle me-2"></i>
                @Model.ErrorMessage
            </div>
        }

        @if (Model.Bundle != null)
        {
            <div class="bg-white rounded-xl shadow-md overflow-hidden">
                <div class="md:flex">
                    <!-- Image -->
                    <div class="md:w-1/2">
                        @if (!string.IsNullOrEmpty(Model.Bundle.ImageUrl))
                        {
                            <img src="@Model.Bundle.ImageUrl" alt="@Model.Bundle.Name" class="w-full h-96 object-cover" />
                        }
                        else
                        {
                            <div class="w-full h-96 flex items-center justify-center bg-gradient-to-br from-purple-100 to-pink-100">
                                <i class="fas fa-boxes text-6xl text-purple-300"></i>
                            </div>
                        }
                    </div>

                    <!-- Details -->
                    <div class="md:w-1/2 p-8">
                        <h1 class="text-3xl font-bold text-gray-900 mb-3">@Model.Bundle.Name</h1>

                        @if (!string.IsNullOrEmpty(Model.Bundle.Description))
                        {
                            <p class="text-gray-600 mb-6">@Model.Bundle.Description</p>
                        }

                        <!-- Pricing -->
                        <div class="flex items-baseline gap-3 mb-6">
                            <span class="text-3xl font-bold text-gray-900">$@Model.Bundle.BundlePrice.ToString("F2")</span>
                            @if (Model.Bundle.OriginalPrice > Model.Bundle.BundlePrice)
                            {
                                <span class="text-xl text-gray-400 line-through">$@Model.Bundle.OriginalPrice.ToString("F2")</span>
                                <span class="px-3 py-1 text-sm font-semibold bg-green-100 text-green-700 rounded-full">
                                    Save $@((Model.Bundle.OriginalPrice - Model.Bundle.BundlePrice).ToString("F2"))
                                </span>
                            }
                        </div>

                        <!-- Stock Status -->
                        @if (Model.Settings?.ShowInventoryWarnings == true)
                        {
                            @if (Model.AvailableQuantity == 0)
                            {
                                <div class="flex items-center p-4 mb-6 text-sm text-red-800 rounded-xl bg-red-50 border border-red-200">
                                    <i class="fas fa-times-circle me-2"></i>
                                    <span class="font-medium">Out of Stock</span>
                                </div>
                            }
                            else if (Model.AvailableQuantity <= (Model.Settings?.LowInventoryThreshold ?? 5))
                            {
                                <div class="flex items-center p-4 mb-6 text-sm text-yellow-800 rounded-xl bg-yellow-50 border border-yellow-200">
                                    <i class="fas fa-exclamation-triangle me-2"></i>
                                    <span>Only <strong>@Model.AvailableQuantity</strong> left in stock!</span>
                                </div>
                            }
                        }

                        <!-- Discount Code -->
                        @if (!string.IsNullOrEmpty(Model.Bundle.DiscountCode))
                        {
                            <div class="bg-purple-50 border border-purple-200 rounded-xl p-4 mb-6">
                                <p class="text-sm text-purple-700 mb-2">
                                    <i class="fas fa-tag me-1"></i> Use this code at checkout:
                                </p>
                                <div class="flex items-center gap-3">
                                    <code class="flex-1 px-4 py-2 bg-white border border-purple-300 rounded-lg text-lg font-mono font-bold text-purple-900">@Model.Bundle.DiscountCode</code>
                                    <button onclick="copyCode('@Model.Bundle.DiscountCode')" class="px-4 py-2 text-sm bg-primary text-white rounded-lg hover:bg-purple-700 transition-colors">
                                        <i class="fas fa-copy me-1"></i> Copy
                                    </button>
                                </div>
                            </div>
                        }

                        <!-- Bundle Items -->
                        @if (Model.Bundle.Items.Any())
                        {
                            <div class="mb-6">
                                <h3 class="text-lg font-semibold text-gray-900 mb-4">
                                    <i class="fas fa-box-open me-2 text-purple-500"></i> This bundle includes:
                                </h3>
                                <ul class="space-y-3">
                                    @foreach (var item in Model.Bundle.Items.OrderBy(i => i.DisplayOrder))
                                    {
                                        <li class="flex items-center gap-4 p-3 bg-gray-50 rounded-lg">
                                            @if (!string.IsNullOrEmpty(item.ImageUrl))
                                            {
                                                <img src="@item.ImageUrl" alt="@item.ProductTitle" class="w-12 h-12 object-cover rounded" />
                                            }
                                            else
                                            {
                                                <div class="w-12 h-12 bg-gray-200 rounded flex items-center justify-center">
                                                    <i class="fas fa-box text-gray-400"></i>
                                                </div>
                                            }
                                            <div class="flex-1">
                                                <p class="font-medium text-gray-900">
                                                    @item.Quantity x @item.ProductTitle
                                                </p>
                                                @if (!string.IsNullOrEmpty(item.VariantTitle))
                                                {
                                                    <p class="text-sm text-gray-500">@item.VariantTitle</p>
                                                }
                                            </div>
                                            <span class="text-gray-600 font-medium">$@item.UnitPrice.ToString("F2")</span>
                                        </li>
                                    }
                                </ul>
                            </div>
                        }

                        <!-- Add to Cart -->
                        @if (Model.AvailableQuantity > 0 || Model.Settings?.ShowInventoryWarnings != true)
                        {
                            <button onclick="addToCart()"
                                    class="w-full py-4 px-6 bg-primary text-white text-lg font-semibold rounded-lg hover:bg-purple-700 transition-colors">
                                <i class="fas fa-shopping-cart me-2"></i> Add Bundle to Cart
                            </button>
                        }
                        else
                        {
                            <button disabled
                                    class="w-full py-4 px-6 bg-gray-300 text-gray-500 text-lg font-semibold rounded-lg cursor-not-allowed">
                                <i class="fas fa-times-circle me-2"></i> Out of Stock
                            </button>
                        }
                    </div>
                </div>
            </div>
        }
    </div>

    <script>
        function copyCode(code) {
            navigator.clipboard.writeText(code);
            alert('Discount code copied!');
        }

        async function addToCart() {
            const bundleId = @(Model.Bundle?.Id ?? 0);
            try {
                const response = await fetch(`/api/bundles/${bundleId}/cart-url`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ bundleId: bundleId, selectedItems: [] })
                });

                if (response.ok) {
                    const data = await response.json();
                    if (data.cartUrl) {
                        window.location.href = data.cartUrl;
                    }
                } else {
                    alert('Unable to add bundle to cart. Please try again.');
                }
            } catch (error) {
                console.error('Error:', error);
                alert('Unable to add bundle to cart. Please try again.');
            }
        }
    </script>
</body>
</html>
