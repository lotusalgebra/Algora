@page "/bundles"
@model Algora.Web.Pages.Bundles.IndexModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@(Model.Settings?.BundlePageTitle ?? "Product Bundles")</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: '#9333ea',
                    }
                }
            }
        }
    </script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
</head>
<body class="bg-gray-50 min-h-screen">
    <div class="max-w-7xl mx-auto px-4 py-8">
        <!-- Header -->
        <div class="text-center mb-12">
            <h1 class="text-3xl font-bold text-gray-900">@(Model.Settings?.BundlePageTitle ?? "Product Bundles")</h1>
            @if (!string.IsNullOrEmpty(Model.Settings?.BundlePageDescription))
            {
                <p class="text-gray-600 mt-3 max-w-2xl mx-auto">@Model.Settings.BundlePageDescription</p>
            }
        </div>

        <!-- Error Message -->
        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="flex items-center p-4 mb-6 text-sm text-red-800 rounded-xl bg-red-50 border border-red-200" role="alert">
                <i class="fas fa-exclamation-circle me-2"></i>
                @Model.ErrorMessage
            </div>
        }

        <!-- Bundle Grid -->
        @if (Model.Bundles.Any())
        {
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                @foreach (var bundle in Model.Bundles)
                {
                    <a href="/bundles/@bundle.Slug" class="group">
                        <div class="bg-white rounded-xl shadow-md hover:shadow-lg transition-shadow overflow-hidden">
                            <!-- Image -->
                            <div class="aspect-w-16 aspect-h-9 bg-gray-100">
                                @if (!string.IsNullOrEmpty(bundle.ImageUrl))
                                {
                                    <img src="@bundle.ImageUrl" alt="@bundle.Name" class="w-full h-48 object-cover group-hover:scale-105 transition-transform duration-300" />
                                }
                                else
                                {
                                    <div class="w-full h-48 flex items-center justify-center bg-gradient-to-br from-purple-100 to-pink-100">
                                        <i class="fas fa-boxes text-4xl text-purple-300"></i>
                                    </div>
                                }
                            </div>

                            <!-- Content -->
                            <div class="p-5">
                                <div class="flex items-start justify-between mb-2">
                                    <h3 class="text-lg font-semibold text-gray-900 group-hover:text-primary transition-colors">@bundle.Name</h3>
                                    @if (bundle.BundleType == "mix_and_match")
                                    {
                                        <span class="px-2 py-1 text-xs font-medium bg-purple-100 text-purple-700 rounded-full">Build Your Own</span>
                                    }
                                </div>

                                @if (!string.IsNullOrEmpty(bundle.Description))
                                {
                                    <p class="text-gray-600 text-sm mb-4 line-clamp-2">@bundle.Description</p>
                                }

                                <!-- Pricing -->
                                <div class="flex items-center justify-between">
                                    <div class="flex items-baseline gap-2">
                                        <span class="text-xl font-bold text-gray-900">$@bundle.BundlePrice.ToString("F2")</span>
                                        @if (bundle.OriginalPrice > bundle.BundlePrice)
                                        {
                                            <span class="text-sm text-gray-400 line-through">$@bundle.OriginalPrice.ToString("F2")</span>
                                        }
                                    </div>
                                    @if (bundle.DiscountValue > 0)
                                    {
                                        <span class="px-2 py-1 text-xs font-semibold bg-green-100 text-green-700 rounded">
                                            @if (bundle.DiscountType == "percentage")
                                            {
                                                @:Save @bundle.DiscountValue%
                                            }
                                            else
                                            {
                                                @:Save $@bundle.DiscountValue.ToString("F2")
                                            }
                                        </span>
                                    }
                                </div>

                                <!-- Items count for fixed bundles -->
                                @if (bundle.BundleType == "fixed" && bundle.Items.Any())
                                {
                                    <p class="text-xs text-gray-500 mt-3">
                                        <i class="fas fa-box me-1"></i> Includes @bundle.Items.Count items
                                    </p>
                                }
                                @if (bundle.BundleType == "mix_and_match" && bundle.MinItems.HasValue)
                                {
                                    <p class="text-xs text-gray-500 mt-3">
                                        <i class="fas fa-hand-pointer me-1"></i> Pick @bundle.MinItems@(bundle.MaxItems.HasValue && bundle.MaxItems != bundle.MinItems ? $"-{bundle.MaxItems}" : "") items
                                    </p>
                                }
                            </div>
                        </div>
                    </a>
                }
            </div>
        }
        else
        {
            <div class="text-center py-16">
                <div class="w-20 h-20 mx-auto mb-4 rounded-full bg-gray-100 flex items-center justify-center">
                    <i class="fas fa-boxes text-3xl text-gray-300"></i>
                </div>
                <h3 class="text-lg font-medium text-gray-900 mb-2">No bundles available</h3>
                <p class="text-gray-500">Check back soon for special bundle offers!</p>
            </div>
        }
    </div>

    <style>
        .line-clamp-2 {
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }
    </style>
</body>
</html>
