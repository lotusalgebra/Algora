@page "/bundles/builder/{id:int}"
@model Algora.Web.Pages.Bundles.BuilderModel
@{
    Layout = null;
    var minItems = Model.Bundle?.MinItems ?? 1;
    var maxItems = Model.Bundle?.MaxItems ?? 10;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Build Your @(Model.Bundle?.Name ?? "Bundle")</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-50 min-h-screen">
    <div class="max-w-7xl mx-auto px-4 py-8">
        <!-- Back Link -->
        <a href="/bundles" class="inline-flex items-center text-gray-600 hover:text-gray-900 mb-6">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
            </svg>
            Back to Bundles
        </a>

        <!-- Error Message -->
        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-6">
                @Model.ErrorMessage
            </div>
        }

        @if (Model.Bundle != null)
        {
            <div class="lg:flex lg:gap-8">
                <!-- Product Selection (Left) -->
                <div class="lg:w-2/3">
                    <div class="bg-white rounded-xl shadow-sm p-6 mb-6">
                        <div class="flex items-center justify-between mb-6">
                            <div>
                                <h1 class="text-2xl font-bold text-gray-900">@Model.Bundle.Name</h1>
                                @if (!string.IsNullOrEmpty(Model.Bundle.Description))
                                {
                                    <p class="text-gray-600 mt-1">@Model.Bundle.Description</p>
                                }
                            </div>
                            <span class="px-3 py-1 bg-purple-100 text-purple-700 text-sm font-medium rounded-full">
                                Pick @minItems@(maxItems != minItems ? $"-{maxItems}" : "") items
                            </span>
                        </div>

                        <h2 class="text-lg font-semibold text-gray-900 mb-4">Select Your Products</h2>

                        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
                            @foreach (var product in Model.EligibleProducts)
                            {
                                <div class="product-card border rounded-lg p-4 cursor-pointer transition-all hover:border-indigo-300 @(product.InventoryQuantity == 0 ? "opacity-50" : "")"
                                     data-product-id="@product.PlatformProductId"
                                     data-variant-id="@product.PlatformVariantId"
                                     data-price="@product.Price"
                                     data-title="@product.ProductTitle"
                                     data-available="@product.InventoryQuantity"
                                     onclick="toggleProduct(this)">

                                    <div class="relative">
                                        @if (!string.IsNullOrEmpty(product.ImageUrl))
                                        {
                                            <img src="@product.ImageUrl" alt="@product.ProductTitle" class="w-full h-32 object-cover rounded mb-3" />
                                        }
                                        else
                                        {
                                            <div class="w-full h-32 bg-gray-100 rounded mb-3 flex items-center justify-center">
                                                <svg class="w-8 h-8 text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                                                </svg>
                                            </div>
                                        }

                                        <!-- Selection indicator -->
                                        <div class="selection-indicator absolute top-2 right-2 w-6 h-6 rounded-full border-2 border-gray-300 bg-white flex items-center justify-center">
                                            <svg class="w-4 h-4 text-white hidden" fill="currentColor" viewBox="0 0 20 20">
                                                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                                            </svg>
                                        </div>
                                    </div>

                                    <h3 class="font-medium text-gray-900 text-sm mb-1 truncate">@product.ProductTitle</h3>
                                    @if (!string.IsNullOrEmpty(product.VariantTitle))
                                    {
                                        <p class="text-xs text-gray-500 mb-1">@product.VariantTitle</p>
                                    }
                                    <p class="text-sm font-semibold text-gray-900">$@product.Price.ToString("F2")</p>

                                    @if (Model.Settings?.ShowInventoryWarnings == true)
                                    {
                                        @if (product.InventoryQuantity == 0)
                                        {
                                            <span class="text-xs text-red-600">Out of stock</span>
                                        }
                                        else if (product.InventoryQuantity <= (Model.Settings?.LowInventoryThreshold ?? 5))
                                        {
                                            <span class="text-xs text-yellow-600">Only @product.InventoryQuantity left</span>
                                        }
                                    }
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <!-- Order Summary (Right) -->
                <div class="lg:w-1/3">
                    <div class="bg-white rounded-xl shadow-sm p-6 sticky top-6">
                        <h2 class="text-lg font-semibold text-gray-900 mb-4">Your Bundle</h2>

                        <!-- Selected Items -->
                        <div id="selected-items" class="space-y-3 mb-6">
                            <p class="text-gray-500 text-sm italic">No items selected yet</p>
                        </div>

                        <!-- Progress -->
                        <div class="mb-6">
                            <div class="flex justify-between text-sm mb-2">
                                <span class="text-gray-600">Items selected:</span>
                                <span id="items-count" class="font-medium">0 / @minItems@(maxItems != minItems ? $"-{maxItems}" : "")</span>
                            </div>
                            <div class="w-full bg-gray-200 rounded-full h-2">
                                <div id="progress-bar" class="bg-indigo-600 h-2 rounded-full transition-all" style="width: 0%"></div>
                            </div>
                        </div>

                        <!-- Pricing -->
                        <div class="border-t pt-4 mb-6">
                            <div class="flex justify-between text-sm mb-2">
                                <span class="text-gray-600">Subtotal:</span>
                                <span id="subtotal" class="text-gray-900">$0.00</span>
                            </div>
                            <div class="flex justify-between text-sm mb-2 text-green-600">
                                <span>Bundle discount:</span>
                                <span id="discount">-$0.00</span>
                            </div>
                            <div class="flex justify-between text-lg font-bold">
                                <span>Total:</span>
                                <span id="total">$0.00</span>
                            </div>
                        </div>

                        <!-- Discount Code -->
                        @if (!string.IsNullOrEmpty(Model.Bundle.DiscountCode))
                        {
                            <div class="bg-indigo-50 border border-indigo-200 rounded-lg p-4 mb-6">
                                <p class="text-sm text-indigo-700 mb-2">Use this code at checkout:</p>
                                <div class="flex items-center gap-2">
                                    <code class="flex-1 px-3 py-2 bg-white border border-indigo-300 rounded font-mono font-bold text-indigo-900">@Model.Bundle.DiscountCode</code>
                                    <button onclick="copyCode('@Model.Bundle.DiscountCode')" class="px-3 py-2 text-sm bg-indigo-600 text-white rounded hover:bg-indigo-700">
                                        Copy
                                    </button>
                                </div>
                            </div>
                        }

                        <!-- Add to Cart Button -->
                        <button id="add-to-cart-btn"
                                onclick="addToCart()"
                                disabled
                                class="w-full py-4 px-6 bg-gray-300 text-gray-500 text-lg font-semibold rounded-lg cursor-not-allowed transition-colors">
                            Select at least @minItems item(s)
                        </button>
                    </div>
                </div>
            </div>
        }
    </div>

    <script>
        const bundleId = @(Model.Bundle?.Id ?? 0);
        const minItems = @minItems;
        const maxItems = @maxItems;
        const allowDuplicates = @((Model.Bundle?.Rules?.FirstOrDefault()?.AllowDuplicates ?? true).ToString().ToLower());

        let selectedProducts = [];

        function toggleProduct(card) {
            const productId = card.dataset.productId;
            const variantId = card.dataset.variantId;
            const price = parseFloat(card.dataset.price);
            const title = card.dataset.title;
            const available = parseInt(card.dataset.available);

            if (available === 0) {
                alert('This product is out of stock');
                return;
            }

            const existingIndex = selectedProducts.findIndex(p => p.variantId === variantId);

            if (existingIndex >= 0) {
                // Remove if already selected
                selectedProducts.splice(existingIndex, 1);
                card.classList.remove('border-indigo-500', 'bg-indigo-50');
                card.querySelector('.selection-indicator').classList.remove('bg-indigo-600', 'border-indigo-600');
                card.querySelector('.selection-indicator svg').classList.add('hidden');
            } else {
                // Check max items
                if (selectedProducts.length >= maxItems) {
                    alert(`You can only select up to ${maxItems} items`);
                    return;
                }

                // Check duplicates
                if (!allowDuplicates && selectedProducts.some(p => p.productId === productId)) {
                    alert('You cannot select the same product twice');
                    return;
                }

                // Add product
                selectedProducts.push({ productId, variantId, price, title, quantity: 1 });
                card.classList.add('border-indigo-500', 'bg-indigo-50');
                card.querySelector('.selection-indicator').classList.add('bg-indigo-600', 'border-indigo-600');
                card.querySelector('.selection-indicator svg').classList.remove('hidden');
            }

            updateSummary();
        }

        async function updateSummary() {
            const selectedItemsDiv = document.getElementById('selected-items');
            const itemsCount = document.getElementById('items-count');
            const progressBar = document.getElementById('progress-bar');
            const subtotalEl = document.getElementById('subtotal');
            const discountEl = document.getElementById('discount');
            const totalEl = document.getElementById('total');
            const addToCartBtn = document.getElementById('add-to-cart-btn');

            // Update selected items list
            if (selectedProducts.length === 0) {
                selectedItemsDiv.innerHTML = '<p class="text-gray-500 text-sm italic">No items selected yet</p>';
            } else {
                selectedItemsDiv.innerHTML = selectedProducts.map((p, idx) => `
                    <div class="flex items-center justify-between p-2 bg-gray-50 rounded">
                        <span class="text-sm text-gray-700 truncate flex-1">${p.title}</span>
                        <button onclick="removeProduct(${idx})" class="ml-2 text-gray-400 hover:text-red-500">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                            </svg>
                        </button>
                    </div>
                `).join('');
            }

            // Update count and progress
            const count = selectedProducts.length;
            itemsCount.textContent = `${count} / ${minItems}${maxItems !== minItems ? `-${maxItems}` : ''}`;
            progressBar.style.width = `${Math.min(100, (count / minItems) * 100)}%`;

            // Calculate price via API
            if (count >= minItems) {
                try {
                    const response = await fetch(`/api/bundles/${bundleId}/calculate`, {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({
                            bundleId: bundleId,
                            selectedItems: selectedProducts.map(p => ({
                                platformProductId: parseInt(p.productId),
                                platformVariantId: parseInt(p.variantId),
                                quantity: p.quantity
                            }))
                        })
                    });

                    if (response.ok) {
                        const data = await response.json();
                        subtotalEl.textContent = `$${data.originalPrice.toFixed(2)}`;
                        discountEl.textContent = `-$${data.savings.toFixed(2)}`;
                        totalEl.textContent = `$${data.bundlePrice.toFixed(2)}`;
                    }
                } catch (error) {
                    console.error('Error calculating price:', error);
                }

                addToCartBtn.disabled = false;
                addToCartBtn.classList.remove('bg-gray-300', 'text-gray-500', 'cursor-not-allowed');
                addToCartBtn.classList.add('bg-indigo-600', 'text-white', 'hover:bg-indigo-700');
                addToCartBtn.textContent = 'Add Bundle to Cart';
            } else {
                const subtotal = selectedProducts.reduce((sum, p) => sum + p.price, 0);
                subtotalEl.textContent = `$${subtotal.toFixed(2)}`;
                discountEl.textContent = '-$0.00';
                totalEl.textContent = `$${subtotal.toFixed(2)}`;

                addToCartBtn.disabled = true;
                addToCartBtn.classList.add('bg-gray-300', 'text-gray-500', 'cursor-not-allowed');
                addToCartBtn.classList.remove('bg-indigo-600', 'text-white', 'hover:bg-indigo-700');
                addToCartBtn.textContent = `Select at least ${minItems} item(s)`;
            }
        }

        function removeProduct(index) {
            const product = selectedProducts[index];
            const card = document.querySelector(`[data-variant-id="${product.variantId}"]`);
            if (card) {
                card.classList.remove('border-indigo-500', 'bg-indigo-50');
                card.querySelector('.selection-indicator').classList.remove('bg-indigo-600', 'border-indigo-600');
                card.querySelector('.selection-indicator svg').classList.add('hidden');
            }
            selectedProducts.splice(index, 1);
            updateSummary();
        }

        function copyCode(code) {
            navigator.clipboard.writeText(code);
            alert('Discount code copied!');
        }

        async function addToCart() {
            if (selectedProducts.length < minItems) return;

            try {
                const response = await fetch(`/api/bundles/${bundleId}/cart-url`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        bundleId: bundleId,
                        selectedItems: selectedProducts.map(p => ({
                            platformProductId: parseInt(p.productId),
                            platformVariantId: parseInt(p.variantId),
                            quantity: p.quantity
                        }))
                    })
                });

                if (response.ok) {
                    const data = await response.json();
                    if (data.cartUrl) {
                        window.location.href = data.cartUrl;
                    }
                } else {
                    alert('Unable to add bundle to cart. Please try again.');
                }
            } catch (error) {
                console.error('Error:', error);
                alert('Unable to add bundle to cart. Please try again.');
            }
        }
    </script>

    <style>
        .product-card.selected {
            border-color: #6366f1;
            background-color: #eef2ff;
        }
    </style>
</body>
</html>
