@page "/analytics"
@model Algora.Web.Pages.Analytics.IndexModel
@{
    ViewData["Title"] = "Analytics Dashboard";
}

<div class="p-4">
    <!-- Header -->
    <div class="flex flex-wrap items-center justify-between mb-6">
        <div>
            <h1 class="text-xl font-bold text-gray-900 dark:text-white">Analytics Dashboard</h1>
            <p class="text-sm text-gray-500 dark:text-gray-400">
                <i class="fa fa-chart-line text-purple-500 me-1"></i>
                Performance metrics and insights for <span class="font-semibold">@Model.GetPeriodLabel()</span>
            </p>
        </div>

        <!-- Time Period Selector -->
        <div class="flex items-center gap-2">
            <span class="text-sm text-gray-600 dark:text-gray-400 mr-2">Period:</span>
            <div class="inline-flex rounded-lg border border-gray-200 dark:border-gray-700" role="group">
                <a href="?period=today" class="px-3 py-2 text-xs font-medium @(Model.SelectedPeriod == "today" ? "bg-gradient-to-br from-purple-600 to-pink-500 text-white" : "bg-white dark:bg-gray-800 text-gray-700 dark:text-white hover:bg-gray-50 dark:hover:bg-gray-700") rounded-l-lg border-r border-gray-200 dark:border-gray-700">
                    Today
                </a>
                <a href="?period=7days" class="px-3 py-2 text-xs font-medium @(Model.SelectedPeriod == "7days" ? "bg-gradient-to-br from-purple-600 to-pink-500 text-white" : "bg-white dark:bg-gray-800 text-gray-700 dark:text-white hover:bg-gray-50 dark:hover:bg-gray-700") border-r border-gray-200 dark:border-gray-700">
                    7 days
                </a>
                <a href="?period=30days" class="px-3 py-2 text-xs font-medium @(Model.SelectedPeriod == "30days" ? "bg-gradient-to-br from-purple-600 to-pink-500 text-white" : "bg-white dark:bg-gray-800 text-gray-700 dark:text-white hover:bg-gray-50 dark:hover:bg-gray-700") border-r border-gray-200 dark:border-gray-700">
                    30 days
                </a>
                <a href="?period=90days" class="px-3 py-2 text-xs font-medium @(Model.SelectedPeriod == "90days" ? "bg-gradient-to-br from-purple-600 to-pink-500 text-white" : "bg-white dark:bg-gray-800 text-gray-700 dark:text-white hover:bg-gray-50 dark:hover:bg-gray-700") border-r border-gray-200 dark:border-gray-700">
                    90 days
                </a>
                <a href="?period=12months" class="px-3 py-2 text-xs font-medium @(Model.SelectedPeriod == "12months" ? "bg-gradient-to-br from-purple-600 to-pink-500 text-white" : "bg-white dark:bg-gray-800 text-gray-700 dark:text-white hover:bg-gray-50 dark:hover:bg-gray-700") rounded-r-lg">
                    12 months
                </a>
            </div>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="mb-4 p-4 text-sm text-red-800 rounded-lg bg-red-50 dark:bg-gray-800 dark:text-red-400" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i>
            @Model.ErrorMessage
        </div>
    }

    <!-- Summary Stats Cards -->
    <div class="grid grid-cols-1 sm:grid-cols-2 xl:grid-cols-4 gap-4 mb-6">
        <!-- Revenue Card -->
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-4">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Revenue</p>
                    <h3 class="text-2xl font-bold text-gray-900 dark:text-white">@Model.DashboardSummary.TotalRevenue.ToString("C0")</h3>
                    @{
                        var revenueChangeClass = Model.DashboardSummary.RevenueChange >= 0 ? "text-green-600" : "text-red-600";
                        var revenueChangeIcon = Model.DashboardSummary.RevenueChange >= 0 ? "fa-arrow-up" : "fa-arrow-down";
                    }
                    <span class="text-xs font-semibold @revenueChangeClass">
                        <i class="fa @revenueChangeIcon me-1"></i>@Model.DashboardSummary.RevenueChange.ToString("F1")%
                    </span>
                </div>
                <div class="w-12 h-12 rounded-lg bg-gradient-to-br from-purple-600 to-pink-500 flex items-center justify-center">
                    <i class="fas fa-dollar-sign text-white text-lg"></i>
                </div>
            </div>
        </div>

        <!-- Orders Card -->
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-4">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Orders</p>
                    <h3 class="text-2xl font-bold text-gray-900 dark:text-white">@Model.DashboardSummary.TotalOrders.ToString("N0")</h3>
                    @{
                        var ordersChangeClass = Model.DashboardSummary.OrdersChange >= 0 ? "text-green-600" : "text-red-600";
                        var ordersChangeIcon = Model.DashboardSummary.OrdersChange >= 0 ? "fa-arrow-up" : "fa-arrow-down";
                    }
                    <span class="text-xs font-semibold @ordersChangeClass">
                        <i class="fa @ordersChangeIcon me-1"></i>@Model.DashboardSummary.OrdersChange.ToString("F1")%
                    </span>
                </div>
                <div class="w-12 h-12 rounded-lg bg-gradient-to-br from-blue-600 to-cyan-400 flex items-center justify-center">
                    <i class="fas fa-shopping-cart text-white text-lg"></i>
                </div>
            </div>
        </div>

        <!-- Net Profit Card -->
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-4">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Net Profit</p>
                    <h3 class="text-2xl font-bold text-gray-900 dark:text-white">@Model.DashboardSummary.NetProfit.ToString("C0")</h3>
                    <span class="text-xs text-gray-500 dark:text-gray-400">After costs & ads</span>
                </div>
                <div class="w-12 h-12 rounded-lg bg-gradient-to-br from-green-500 to-lime-400 flex items-center justify-center">
                    <i class="fas fa-chart-line text-white text-lg"></i>
                </div>
            </div>
        </div>

        <!-- Profit Margin Card -->
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-4">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Profit Margin</p>
                    <h3 class="text-2xl font-bold text-gray-900 dark:text-white">@Model.DashboardSummary.NetProfitMargin.ToString("F1")%</h3>
                    <span class="text-xs text-gray-500 dark:text-gray-400">Net margin</span>
                </div>
                <div class="w-12 h-12 rounded-lg bg-gradient-to-br from-orange-500 to-yellow-400 flex items-center justify-center">
                    <i class="fas fa-percentage text-white text-lg"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Charts Row -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 mb-6">
        <!-- Revenue/Profit Trend Chart -->
        <div class="lg:col-span-2 bg-white dark:bg-gray-800 rounded-lg shadow-md">
            <div class="p-6 border-b border-gray-200 dark:border-gray-700">
                <h6 class="text-lg font-semibold text-gray-900 dark:text-white">Revenue & Profit Trend</h6>
                <p class="text-sm text-gray-500 dark:text-gray-400">
                    <i class="fa fa-chart-line text-green-500"></i>
                    <span class="font-semibold">Performance over time</span>
                </p>
            </div>
            <div class="p-4">
                <canvas id="revenue-trend-chart" height="300"></canvas>
            </div>
        </div>

        <!-- Cost Breakdown Chart -->
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md">
            <div class="p-6 border-b border-gray-200 dark:border-gray-700">
                <h6 class="text-lg font-semibold text-gray-900 dark:text-white">Cost Breakdown</h6>
                <p class="text-sm text-gray-500 dark:text-gray-400">
                    <i class="fa fa-chart-pie text-purple-500"></i>
                    <span class="font-semibold">Where revenue goes</span>
                </p>
            </div>
            <div class="p-4">
                <canvas id="cost-breakdown-chart" height="300"></canvas>
            </div>
        </div>
    </div>

    <!-- Top Products Table -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md mb-6">
        <div class="p-6 border-b border-gray-200 dark:border-gray-700">
            <div class="flex justify-between items-center">
                <div>
                    <h6 class="text-lg font-semibold text-gray-900 dark:text-white">Top Products</h6>
                    <p class="text-sm text-gray-500 dark:text-gray-400">
                        <i class="fa fa-star text-yellow-500 me-1"></i>
                        Best performing products for @Model.GetPeriodLabel().ToLower()
                    </p>
                </div>
                <a href="/analytics/products" class="inline-flex items-center px-4 py-2 text-sm font-medium text-white bg-gradient-to-br from-purple-600 to-pink-500 hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-purple-300 rounded-lg dark:focus:ring-purple-800">
                    <i class="fas fa-chart-bar me-2"></i> View All Analytics
                </a>
            </div>
        </div>
        <div class="p-6">
            @if (Model.TopProducts.Any())
            {
                <div class="overflow-x-auto">
                    <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
                        <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                            <tr>
                                <th scope="col" class="px-6 py-3">Product</th>
                                <th scope="col" class="px-6 py-3 text-center">Qty Sold</th>
                                <th scope="col" class="px-6 py-3 text-center">Revenue</th>
                                <th scope="col" class="px-6 py-3 text-center">Profit</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var product in Model.TopProducts)
                            {
                                var initials = string.Join("", product.ProductTitle.Split(' ').Take(2).Select(w => w.Length > 0 ? w[0].ToString().ToUpper() : ""));
                                var bgColors = new[] { "from-purple-600 to-pink-500", "from-blue-600 to-cyan-400", "from-green-500 to-lime-400", "from-orange-500 to-yellow-400", "from-red-500 to-rose-400" };
                                var colorIndex = Math.Abs(product.ProductTitle.GetHashCode()) % bgColors.Length;

                                <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-700">
                                    <td class="px-6 py-4">
                                        <div class="flex items-center">
                                            @if (!string.IsNullOrEmpty(product.ImageUrl))
                                            {
                                                <img src="@product.ImageUrl" class="w-10 h-10 rounded-lg object-cover mr-3" alt="@product.ProductTitle">
                                            }
                                            else
                                            {
                                                <div class="w-10 h-10 rounded-lg bg-gradient-to-br @bgColors[colorIndex] flex items-center justify-center text-white text-sm font-semibold mr-3">
                                                    @initials
                                                </div>
                                            }
                                            <div>
                                                <p class="font-medium text-gray-900 dark:text-white">@product.ProductTitle</p>
                                                @if (!string.IsNullOrEmpty(product.Sku))
                                                {
                                                    <p class="text-xs text-gray-500 dark:text-gray-400">SKU: @product.Sku</p>
                                                }
                                            </div>
                                        </div>
                                    </td>
                                    <td class="px-6 py-4 text-center font-semibold text-gray-900 dark:text-white">@product.QuantitySold</td>
                                    <td class="px-6 py-4 text-center font-semibold text-gray-900 dark:text-white">@product.Revenue.ToString("C0")</td>
                                    <td class="px-6 py-4 text-center font-semibold text-green-600">@product.Profit.ToString("C0")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-8">
                    <i class="fas fa-box-open fa-3x text-gray-300 mb-4"></i>
                    <p class="text-gray-500 dark:text-gray-400">No product data available for the selected period.</p>
                </div>
            }
        </div>
    </div>

    <!-- Quick Links -->
    <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
        <a href="/analytics/clv" class="block">
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-4 hover:shadow-lg transition-shadow">
                <div class="flex items-center">
                    <div class="w-12 h-12 rounded-lg bg-gradient-to-br from-purple-600 to-pink-500 flex items-center justify-center mr-4">
                        <i class="fas fa-user text-white text-lg"></i>
                    </div>
                    <div>
                        <p class="font-semibold text-gray-900 dark:text-white">Customer Lifetime Value</p>
                        <p class="text-xs text-gray-500 dark:text-gray-400">Analyze customer segments</p>
                    </div>
                </div>
            </div>
        </a>

        <a href="/analytics/products" class="block">
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-4 hover:shadow-lg transition-shadow">
                <div class="flex items-center">
                    <div class="w-12 h-12 rounded-lg bg-gradient-to-br from-blue-600 to-cyan-400 flex items-center justify-center mr-4">
                        <i class="fas fa-box text-white text-lg"></i>
                    </div>
                    <div>
                        <p class="font-semibold text-gray-900 dark:text-white">Product Performance</p>
                        <p class="text-xs text-gray-500 dark:text-gray-400">View product heatmap</p>
                    </div>
                </div>
            </div>
        </a>

        <a href="/analytics/adsspend" class="block">
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-4 hover:shadow-lg transition-shadow">
                <div class="flex items-center">
                    <div class="w-12 h-12 rounded-lg bg-gradient-to-br from-green-500 to-lime-400 flex items-center justify-center mr-4">
                        <i class="fas fa-ad text-white text-lg"></i>
                    </div>
                    <div>
                        <p class="font-semibold text-gray-900 dark:text-white">Ads Spend & ROAS</p>
                        <p class="text-xs text-gray-500 dark:text-gray-400">Track ad performance</p>
                    </div>
                </div>
            </div>
        </a>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Revenue & Profit Trend Chart
        const trendCtx = document.getElementById('revenue-trend-chart').getContext('2d');
        const trendData = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.SalesTrend.DataPoints));

        new Chart(trendCtx, {
            type: 'line',
            data: {
                labels: trendData.map(d => new Date(d.date).toLocaleDateString('en-US', { month: 'short', day: 'numeric' })),
                datasets: [
                    {
                        label: 'Revenue',
                        data: trendData.map(d => d.revenue),
                        borderColor: 'rgb(168, 85, 247)',
                        backgroundColor: 'rgba(168, 85, 247, 0.1)',
                        tension: 0.4,
                        fill: true
                    },
                    {
                        label: 'Profit',
                        data: trendData.map(d => d.profit),
                        borderColor: 'rgb(34, 197, 94)',
                        backgroundColor: 'rgba(34, 197, 94, 0.1)',
                        tension: 0.4,
                        fill: true
                    }
                ]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        display: true,
                        position: 'top'
                    },
                    tooltip: {
                        mode: 'index',
                        intersect: false,
                        callbacks: {
                            label: function(context) {
                                let label = context.dataset.label || '';
                                if (label) {
                                    label += ': ';
                                }
                                label += new Intl.NumberFormat('en-US', { style: 'currency', currency: 'USD' }).format(context.parsed.y);
                                return label;
                            }
                        }
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            callback: function(value) {
                                return '$' + value.toLocaleString();
                            }
                        }
                    }
                }
            }
        });

        // Cost Breakdown Pie Chart
        const costCtx = document.getElementById('cost-breakdown-chart').getContext('2d');
        const costData = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.CostBreakdown));

        new Chart(costCtx, {
            type: 'doughnut',
            data: {
                labels: ['Net Profit', 'COGS', 'Ads Spend', 'Refunds'],
                datasets: [{
                    data: [
                        costData.netProfit,
                        costData.cogs,
                        costData.adsSpend,
                        costData.refunds
                    ],
                    backgroundColor: [
                        'rgb(34, 197, 94)',
                        'rgb(239, 68, 68)',
                        'rgb(59, 130, 246)',
                        'rgb(251, 146, 60)'
                    ],
                    borderWidth: 2,
                    borderColor: '#fff'
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        display: true,
                        position: 'bottom'
                    },
                    tooltip: {
                        callbacks: {
                            label: function(context) {
                                const label = context.label || '';
                                const value = new Intl.NumberFormat('en-US', { style: 'currency', currency: 'USD' }).format(context.parsed);
                                const total = context.dataset.data.reduce((a, b) => a + b, 0);
                                const percentage = ((context.parsed / total) * 100).toFixed(1);
                                return label + ': ' + value + ' (' + percentage + '%)';
                            }
                        }
                    }
                }
            }
        });
    </script>
}
