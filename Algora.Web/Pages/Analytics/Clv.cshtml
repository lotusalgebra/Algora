@page "/analytics/clv"
@model Algora.Web.Pages.Analytics.ClvModel
@{
    ViewData["Title"] = "Customer Lifetime Value";
}

<div class="p-4">
    <!-- Header -->
    <div class="flex flex-wrap items-center justify-between mb-6">
        <div>
            <h1 class="text-xl font-bold text-gray-900 dark:text-white">Customer Lifetime Value Analysis</h1>
            <p class="text-sm text-gray-500 dark:text-gray-400">
                <i class="fa fa-users text-purple-500 me-1"></i>
                Understand your most valuable customers
            </p>
        </div>
        <a href="/analytics" class="inline-flex items-center px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-100 dark:bg-gray-800 dark:text-white dark:border-gray-600 dark:hover:bg-gray-700">
            <i class="fas fa-arrow-left me-2"></i> Back to Dashboard
        </a>
    </div>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="mb-4 p-4 text-sm text-red-800 rounded-lg bg-red-50 dark:bg-gray-800 dark:text-red-400" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i>
            @Model.ErrorMessage
        </div>
    }

    <!-- CLV Summary Cards -->
    <div class="grid grid-cols-1 sm:grid-cols-2 xl:grid-cols-4 gap-4 mb-6">
        <!-- Average CLV -->
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-4">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Average CLV</p>
                    <h3 class="text-2xl font-bold text-gray-900 dark:text-white">@Model.ClvReport.Summary.AverageClv.ToString("C0")</h3>
                    <span class="text-xs text-gray-500 dark:text-gray-400">Per customer</span>
                </div>
                <div class="w-12 h-12 rounded-lg bg-gradient-to-br from-purple-600 to-pink-500 flex items-center justify-center">
                    <i class="fas fa-dollar-sign text-white text-lg"></i>
                </div>
            </div>
        </div>

        <!-- Total CLV -->
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-4">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Total CLV</p>
                    <h3 class="text-2xl font-bold text-gray-900 dark:text-white">@Model.ClvReport.Summary.TotalClv.ToString("C0")</h3>
                    <span class="text-xs text-gray-500 dark:text-gray-400">@Model.ClvReport.Summary.TotalCustomers.ToString("N0") customers</span>
                </div>
                <div class="w-12 h-12 rounded-lg bg-gradient-to-br from-blue-600 to-cyan-400 flex items-center justify-center">
                    <i class="fas fa-globe text-white text-lg"></i>
                </div>
            </div>
        </div>

        <!-- High Value Percentage -->
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-4">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-gray-500 dark:text-gray-400">High Value</p>
                    <h3 class="text-2xl font-bold text-gray-900 dark:text-white">@Model.ClvReport.Summary.HighValuePercentage.ToString("F1")%</h3>
                    <span class="text-xs text-gray-500 dark:text-gray-400">Top customers</span>
                </div>
                <div class="w-12 h-12 rounded-lg bg-gradient-to-br from-green-500 to-lime-400 flex items-center justify-center">
                    <i class="fas fa-trophy text-white text-lg"></i>
                </div>
            </div>
        </div>

        <!-- Churn Rate -->
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-4">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Churn Rate</p>
                    <h3 class="text-2xl font-bold text-gray-900 dark:text-white">@Model.ClvReport.Summary.ChurnRate.ToString("F1")%</h3>
                    <span class="text-xs text-gray-500 dark:text-gray-400">At risk</span>
                </div>
                <div class="w-12 h-12 rounded-lg bg-gradient-to-br from-red-500 to-rose-400 flex items-center justify-center">
                    <i class="fas fa-user-minus text-white text-lg"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Top Customers & At-Risk Row -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-6">
        <!-- Top Customers -->
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md">
            <div class="p-6 border-b border-gray-200 dark:border-gray-700">
                <h6 class="text-lg font-semibold text-gray-900 dark:text-white">Top Customers</h6>
                <p class="text-sm text-gray-500 dark:text-gray-400">
                    <i class="fa fa-star text-yellow-500"></i>
                    <span class="font-semibold">Highest lifetime value</span>
                </p>
            </div>
            <div class="p-0">
                @if (Model.ClvReport.TopCustomers.Any())
                {
                    <div class="overflow-x-auto">
                        <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
                            <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                                <tr>
                                    <th scope="col" class="px-6 py-3">Customer</th>
                                    <th scope="col" class="px-6 py-3 text-center">Orders</th>
                                    <th scope="col" class="px-6 py-3 text-center">Total Spent</th>
                                    <th scope="col" class="px-6 py-3 text-center">Predicted CLV</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var customer in Model.ClvReport.TopCustomers.Take(5))
                                {
                                    <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-700">
                                        <td class="px-6 py-4">
                                            <p class="font-medium text-gray-900 dark:text-white">@customer.CustomerName</p>
                                            <p class="text-xs text-gray-500 dark:text-gray-400">@customer.Email</p>
                                        </td>
                                        <td class="px-6 py-4 text-center font-semibold text-gray-900 dark:text-white">@customer.TotalOrders</td>
                                        <td class="px-6 py-4 text-center font-semibold text-gray-900 dark:text-white">@customer.TotalSpent.ToString("C0")</td>
                                        <td class="px-6 py-4 text-center font-semibold text-green-600">@customer.PredictedLifetimeValue.ToString("C0")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-8">
                        <p class="text-gray-500 dark:text-gray-400">No customer data available.</p>
                    </div>
                }
            </div>
        </div>

        <!-- At-Risk Customers -->
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md">
            <div class="p-6 border-b border-gray-200 dark:border-gray-700">
                <h6 class="text-lg font-semibold text-gray-900 dark:text-white">At-Risk Customers</h6>
                <p class="text-sm text-gray-500 dark:text-gray-400">
                    <i class="fa fa-exclamation-triangle text-red-500"></i>
                    <span class="font-semibold">Need attention</span>
                </p>
            </div>
            <div class="p-0">
                @if (Model.ClvReport.AtRiskCustomers.Any())
                {
                    <div class="overflow-x-auto">
                        <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
                            <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                                <tr>
                                    <th scope="col" class="px-6 py-3">Customer</th>
                                    <th scope="col" class="px-6 py-3 text-center">Last Order</th>
                                    <th scope="col" class="px-6 py-3 text-center">Total Spent</th>
                                    <th scope="col" class="px-6 py-3 text-center">Days Since</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var customer in Model.ClvReport.AtRiskCustomers.Take(5))
                                {
                                    <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-700">
                                        <td class="px-6 py-4">
                                            <p class="font-medium text-gray-900 dark:text-white">@customer.CustomerName</p>
                                            <p class="text-xs text-gray-500 dark:text-gray-400">@customer.Email</p>
                                        </td>
                                        <td class="px-6 py-4 text-center text-gray-900 dark:text-white">@customer.LastOrderDate.ToString("MMM dd, yyyy")</td>
                                        <td class="px-6 py-4 text-center font-semibold text-gray-900 dark:text-white">@customer.TotalSpent.ToString("C0")</td>
                                        <td class="px-6 py-4 text-center">
                                            <span class="bg-red-100 text-red-800 text-xs font-medium px-2.5 py-0.5 rounded dark:bg-red-900 dark:text-red-300">
                                                @customer.DaysSinceLastOrder days
                                            </span>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-8">
                        <p class="text-gray-500 dark:text-gray-400">No at-risk customers identified.</p>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Customer Segments -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md">
        <div class="p-6 border-b border-gray-200 dark:border-gray-700">
            <h6 class="text-lg font-semibold text-gray-900 dark:text-white">Customer Segments</h6>
            <p class="text-sm text-gray-500 dark:text-gray-400">
                <i class="fa fa-layer-group text-blue-500 me-1"></i>
                Distribution by customer value
            </p>
        </div>
        <div class="p-6">
            @if (Model.ClvReport.Segments.Any())
            {
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-6">
                    @foreach (var segment in Model.ClvReport.Segments)
                    {
                        var segmentColor = segment.Segment switch
                        {
                            "High Value" => "from-purple-600 to-pink-500",
                            "Medium Value" => "from-blue-600 to-cyan-400",
                            "Low Value" => "from-gray-400 to-gray-600",
                            _ => "from-slate-600 to-slate-300"
                        };

                        <div class="flex items-center p-4 bg-gray-50 dark:bg-gray-700 rounded-lg border border-gray-200 dark:border-gray-600">
                            <div class="w-12 h-12 rounded-lg bg-gradient-to-br @segmentColor flex items-center justify-center flex-shrink-0 mr-4">
                                <i class="fas fa-users text-white text-lg"></i>
                            </div>
                            <div class="flex-grow">
                                <h6 class="mb-1 text-sm font-bold text-gray-900 dark:text-white">@segment.Segment</h6>
                                <div class="flex justify-between items-center">
                                    <div>
                                        <p class="mb-0 text-xs text-gray-500 dark:text-gray-400">@segment.CustomerCount customers</p>
                                        <p class="mb-0 text-sm font-semibold text-gray-900 dark:text-white">@segment.TotalValue.ToString("C0")</p>
                                    </div>
                                    <div class="text-right">
                                        <p class="mb-0 text-xs text-gray-500 dark:text-gray-400">Avg CLV</p>
                                        <p class="mb-0 text-sm font-semibold text-gray-900 dark:text-white">@segment.AverageValue.ToString("C0")</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <!-- Segment Breakdown Chart -->
                <div class="mt-6">
                    <canvas id="segment-chart" height="120"></canvas>
                </div>
            }
            else
            {
                <div class="text-center py-8">
                    <p class="text-gray-500 dark:text-gray-400">No segment data available.</p>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        @if (Model.ClvReport.Segments.Any())
        {
            <text>
            // Segment Breakdown Chart
            const segmentCtx = document.getElementById('segment-chart').getContext('2d');
            const segments = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.ClvReport.Segments));

            new Chart(segmentCtx, {
                type: 'bar',
                data: {
                    labels: segments.map(s => s.segment),
                    datasets: [
                        {
                            label: 'Total Value',
                            data: segments.map(s => s.totalValue),
                            backgroundColor: [
                                'rgba(168, 85, 247, 0.8)',
                                'rgba(59, 130, 246, 0.8)',
                                'rgba(156, 163, 175, 0.8)'
                            ],
                            borderColor: [
                                'rgb(168, 85, 247)',
                                'rgb(59, 130, 246)',
                                'rgb(156, 163, 175)'
                            ],
                            borderWidth: 2
                        },
                        {
                            label: 'Customer Count',
                            data: segments.map(s => s.customerCount),
                            backgroundColor: [
                                'rgba(236, 72, 153, 0.6)',
                                'rgba(6, 182, 212, 0.6)',
                                'rgba(107, 114, 128, 0.6)'
                            ],
                            borderColor: [
                                'rgb(236, 72, 153)',
                                'rgb(6, 182, 212)',
                                'rgb(107, 114, 128)'
                            ],
                            borderWidth: 2,
                            yAxisID: 'y1'
                        }
                    ]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            display: true,
                            position: 'top'
                        },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    let label = context.dataset.label || '';
                                    if (label) {
                                        label += ': ';
                                    }
                                    if (context.dataset.yAxisID === 'y1') {
                                        label += context.parsed.y.toLocaleString();
                                    } else {
                                        label += new Intl.NumberFormat('en-US', { style: 'currency', currency: 'USD' }).format(context.parsed.y);
                                    }
                                    return label;
                                }
                            }
                        }
                    },
                    scales: {
                        y: {
                            type: 'linear',
                            display: true,
                            position: 'left',
                            ticks: {
                                callback: function(value) {
                                    return '$' + value.toLocaleString();
                                }
                            }
                        },
                        y1: {
                            type: 'linear',
                            display: true,
                            position: 'right',
                            grid: {
                                drawOnChartArea: false
                            }
                        }
                    }
                }
            });
            </text>
        }
    </script>
}
