@page "/products"
@using Algora.Web.Pages.Products
@model IndexModel
@{
    ViewData["Title"] = "Products";
}

<div class="w-full px-6 py-6 mx-auto">
    <!-- Header -->
    <div class="flex flex-wrap -mx-3">
        <div class="flex-none w-full max-w-full px-3">
            <div class="relative flex flex-col min-w-0 mb-6 break-words bg-white border-0 shadow-soft-xl rounded-2xl bg-clip-border dark:bg-gray-950 dark:shadow-soft-dark-xl">

                <!-- Card Header -->
                <div class="p-6 pb-0 mb-0 border-b-0 rounded-t-2xl">
                    <div class="flex flex-wrap items-center justify-between">
                        <div>
                            <h6 class="mb-0 dark:text-white">Products List</h6>
                            <p class="mb-0 text-sm leading-normal dark:text-white dark:opacity-60">
                                <i class="fa fa-shopping-bag text-fuchsia-500 me-1"></i>
                                <span class="font-semibold" id="total-count">0</span> products from your store
                            </p>
                        </div>
                        <div class="flex items-center gap-2">
                            <button type="button" id="export-csv" class="inline-block px-4 py-2 text-xs font-bold text-center text-white uppercase align-middle transition-all border-0 rounded-lg cursor-pointer ease-soft-in leading-pro tracking-tight-soft bg-gradient-to-tl from-blue-600 to-cyan-400 shadow-soft-md bg-150 bg-x-25 hover:scale-102 active:opacity-85">
                                <i class="fas fa-file-csv me-2"></i> CSV
                            </button>
                            <button type="button" id="export-excel" class="inline-block px-4 py-2 text-xs font-bold text-center text-white uppercase align-middle transition-all border-0 rounded-lg cursor-pointer ease-soft-in leading-pro tracking-tight-soft bg-gradient-to-tl from-green-600 to-lime-400 shadow-soft-md bg-150 bg-x-25 hover:scale-102 active:opacity-85">
                                <i class="fas fa-file-excel me-2"></i> Excel
                            </button>
                            <a href="/products/create" class="inline-block px-4 py-2 text-xs font-bold text-center text-white uppercase align-middle transition-all border-0 rounded-lg cursor-pointer ease-soft-in leading-pro tracking-tight-soft bg-gradient-to-tl from-purple-700 to-pink-500 shadow-soft-md bg-150 bg-x-25 hover:scale-102 active:opacity-85">
                                <i class="fas fa-plus me-2"></i> New Product
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Card Body -->
                <div class="flex-auto p-6">
                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="mb-4 p-4 text-sm text-red-700 bg-red-100 rounded-lg dark:bg-red-200 dark:text-red-800" role="alert">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            @Model.ErrorMessage
                        </div>
                    }

                    <!-- Search and Per Page Controls -->
                    <div class="flex flex-wrap items-center justify-between gap-4 mb-4">
                        <div class="flex items-center gap-2">
                            <label class="text-sm text-slate-500 dark:text-white/60">Show</label>
                            <select id="per-page" class="px-3 py-2 text-sm border border-gray-300 rounded-lg focus:border-fuchsia-300 focus:outline-none dark:bg-gray-950 dark:border-gray-700 dark:text-white">
                                <option value="10">10</option>
                                <option value="25">25</option>
                                <option value="50">50</option>
                                <option value="100">100</option>
                            </select>
                            <label class="text-sm text-slate-500 dark:text-white/60">entries</label>
                        </div>
                        <div class="flex items-center gap-2">
                            <label class="text-sm text-slate-500 dark:text-white/60">Search:</label>
                            <input type="text" id="search-input" placeholder="Search products..."
                                   class="px-3 py-2 text-sm border border-gray-300 rounded-lg focus:border-fuchsia-300 focus:outline-none dark:bg-gray-950 dark:border-gray-700 dark:text-white w-64" />
                        </div>
                    </div>

                    <!-- Table -->
                    <div class="overflow-x-auto">
                        <table class="table items-center w-full mb-0 align-top border-gray-200 text-slate-500 dark:border-white/40" id="products-table">
                            <thead class="align-bottom">
                                <tr>
                                    <th class="px-6 py-3 font-bold text-left uppercase align-middle bg-transparent border-b border-gray-200 shadow-none text-xxs border-b-solid tracking-none whitespace-nowrap text-slate-400 opacity-70 dark:border-white/40 dark:text-white dark:opacity-80 cursor-pointer" data-sort="0">
                                        Product <i class="fas fa-sort ms-1 text-xs"></i>
                                    </th>
                                    <th class="px-6 py-3 font-bold text-left uppercase align-middle bg-transparent border-b border-gray-200 shadow-none text-xxs border-b-solid tracking-none whitespace-nowrap text-slate-400 opacity-70 dark:border-white/40 dark:text-white dark:opacity-80">Category</th>
                                    <th class="px-6 py-3 font-bold text-center uppercase align-middle bg-transparent border-b border-gray-200 shadow-none text-xxs border-b-solid tracking-none whitespace-nowrap text-slate-400 opacity-70 dark:border-white/40 dark:text-white dark:opacity-80 cursor-pointer" data-sort="2">
                                        Price <i class="fas fa-sort ms-1 text-xs"></i>
                                    </th>
                                    <th class="px-6 py-3 font-bold text-center uppercase align-middle bg-transparent border-b border-gray-200 shadow-none text-xxs border-b-solid tracking-none whitespace-nowrap text-slate-400 opacity-70 dark:border-white/40 dark:text-white dark:opacity-80">ID</th>
                                    <th class="px-6 py-3 font-bold text-center uppercase align-middle bg-transparent border-b border-gray-200 shadow-none text-xxs border-b-solid tracking-none whitespace-nowrap text-slate-400 opacity-70 dark:border-white/40 dark:text-white dark:opacity-80 cursor-pointer" data-sort="4">
                                        Quantity <i class="fas fa-sort ms-1 text-xs"></i>
                                    </th>
                                    <th class="px-6 py-3 font-bold text-center uppercase align-middle bg-transparent border-b border-gray-200 shadow-none text-xxs border-b-solid tracking-none whitespace-nowrap text-slate-400 opacity-70 dark:border-white/40 dark:text-white dark:opacity-80">Status</th>
                                    <th class="px-6 py-3 font-semibold text-center uppercase align-middle bg-transparent border-b border-gray-200 shadow-none text-xxs border-b-solid tracking-none whitespace-nowrap text-slate-400 opacity-70 dark:border-white/40 dark:text-white dark:opacity-80">Action</th>
                                </tr>
                            </thead>
                            <tbody id="products-tbody">
                                <!-- Data loaded via AJAX -->
                            </tbody>
                        </table>
                    </div>

                    <!-- Loading State -->
                    <div id="loading-state" class="text-center py-8">
                        <i class="fas fa-spinner fa-spin fa-2x text-fuchsia-500 mb-2"></i>
                        <p class="text-slate-500 dark:text-white/60">Loading products...</p>
                    </div>

                    <!-- Empty State -->
                    <div id="empty-state" class="text-center py-12 hidden">
                        <i class="fas fa-box-open fa-4x text-gray-300 mb-4"></i>
                        <p class="text-gray-500 dark:text-gray-400 mb-4">No products found.</p>
                        <a href="/products/create" class="inline-block px-6 py-3 text-xs font-bold text-center text-white uppercase align-middle transition-all border-0 rounded-lg cursor-pointer ease-soft-in leading-pro tracking-tight-soft bg-gradient-to-tl from-purple-700 to-pink-500 shadow-soft-md bg-150 bg-x-25 hover:scale-102 active:opacity-85">
                            <i class="fas fa-plus me-2"></i> Add Your First Product
                        </a>
                    </div>

                    <!-- Pagination -->
                    <div id="pagination-container" class="flex flex-wrap items-center justify-between gap-4 mt-4">
                        <div class="text-sm text-slate-500 dark:text-white/60">
                            Showing <span id="showing-start">0</span> to <span id="showing-end">0</span> of <span id="showing-total">0</span> products
                        </div>
                        <div class="flex items-center gap-1" id="pagination-buttons">
                            <!-- Pagination buttons added by JS -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/plugins/xlsx.min.js" asp-append-version="true"></script>
    <script>
        // State management
        let currentPage = 0;
        let pageSize = 10;
        let searchTerm = '';
        let sortColumn = 0;
        let sortDirection = 'asc';
        let totalRecords = 0;
        let filteredRecords = 0;
        let allData = []; // Store for export

        const bgColors = ['from-purple-700 to-pink-500', 'from-gray-400 to-gray-600', 'from-green-600 to-lime-400', 'from-blue-600 to-cyan-400', 'from-red-600 to-rose-400', 'from-orange-500 to-yellow-300'];

        function getInitials(title) {
            return title.split(' ').slice(0, 2).map(w => w.length > 0 ? w[0].toUpperCase() : '').join('');
        }

        function getColorClass(title) {
            const hash = Math.abs(title.split('').reduce((a, b) => ((a << 5) - a) + b.charCodeAt(0), 0));
            return bgColors[hash % bgColors.length];
        }

        function renderRow(product) {
            const initials = getInitials(product.title);
            const colorClass = getColorClass(product.title);
            const tags = product.tags ? product.tags.split(',').slice(0, 2).map(t =>
                `<span class="bg-gradient-to-tl from-slate-600 to-slate-300 px-2.5 text-xxs rounded-1.8 py-1.4 inline-block whitespace-nowrap text-center align-baseline font-bold uppercase leading-none text-white mr-1">${t.trim()}</span>`
            ).join('') : '<span class="text-xs text-slate-400 dark:text-white/60">Uncategorized</span>';

            return `
                <tr>
                    <td class="p-2 align-middle bg-transparent border-b whitespace-nowrap dark:border-white/40">
                        <div class="flex px-2 py-1">
                            <div class="flex items-center justify-center w-10 h-10 mr-4 text-sm text-white transition-all duration-200 ease-soft-in-out rounded-xl bg-gradient-to-tl ${colorClass}">
                                ${initials}
                            </div>
                            <div class="flex flex-col justify-center">
                                <h6 class="mb-0 text-sm leading-normal dark:text-white">${product.title}</h6>
                                <p class="mb-0 text-xs leading-tight text-slate-400 dark:text-white dark:opacity-80">${product.vendor}</p>
                            </div>
                        </div>
                    </td>
                    <td class="p-2 align-middle bg-transparent border-b whitespace-nowrap dark:border-white/40">${tags}</td>
                    <td class="p-2 text-center align-middle bg-transparent border-b whitespace-nowrap dark:border-white/40">
                        <span class="text-sm font-semibold leading-tight text-slate-400 dark:text-white dark:opacity-80">${product.priceFormatted}</span>
                    </td>
                    <td class="p-2 text-center align-middle bg-transparent border-b whitespace-nowrap dark:border-white/40">
                        <span class="text-xs font-semibold leading-tight text-slate-400 dark:text-white dark:opacity-60">${product.id}</span>
                    </td>
                    <td class="p-2 text-center align-middle bg-transparent border-b whitespace-nowrap dark:border-white/40">
                        <span class="text-sm font-semibold leading-tight text-slate-400 dark:text-white dark:opacity-80">${product.stock}</span>
                    </td>
                    <td class="p-2 text-center align-middle bg-transparent border-b whitespace-nowrap dark:border-white/40">
                        <span class="bg-gradient-to-tl ${product.statusClass} px-2.5 text-xxs rounded-1.8 py-1.4 inline-block whitespace-nowrap text-center align-baseline font-bold uppercase leading-none text-white">${product.status}</span>
                    </td>
                    <td class="p-2 align-middle bg-transparent border-b whitespace-nowrap dark:border-white/40">
                        <div class="flex items-center justify-center gap-2">
                            <a href="/products/${product.id}" class="inline-flex items-center px-3 py-1.5 text-xs font-semibold text-white bg-gradient-to-tl from-cyan-500 to-blue-500 rounded-lg shadow-soft-sm hover:scale-102 hover:shadow-soft-xs transition-all" title="View Details">
                                <i class="fas fa-eye me-1"></i> View
                            </a>
                            <a href="/products/edit/${product.id}" class="inline-flex items-center px-3 py-1.5 text-xs font-semibold text-white bg-gradient-to-tl from-blue-600 to-indigo-500 rounded-lg shadow-soft-sm hover:scale-102 hover:shadow-soft-xs transition-all" title="Edit Product">
                                <i class="fas fa-pencil-alt me-1"></i> Edit
                            </a>
                            <a href="/products/delete/${product.id}" class="inline-flex items-center px-3 py-1.5 text-xs font-semibold text-white bg-gradient-to-tl from-red-600 to-rose-400 rounded-lg shadow-soft-sm hover:scale-102 hover:shadow-soft-xs transition-all" title="Delete Product">
                                <i class="fas fa-trash me-1"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
            `;
        }

        function renderPagination() {
            const totalPages = Math.ceil(filteredRecords / pageSize);
            const paginationButtons = document.getElementById('pagination-buttons');
            paginationButtons.innerHTML = '';

            if (totalPages <= 1) return;

            // Previous button
            const prevBtn = document.createElement('button');
            prevBtn.className = `px-3 py-1.5 text-xs font-semibold rounded-lg transition-all ${currentPage === 0 ? 'text-slate-400 cursor-not-allowed' : 'text-slate-700 hover:bg-slate-100 dark:text-white dark:hover:bg-gray-700'}`;
            prevBtn.innerHTML = '<i class="fas fa-chevron-left"></i>';
            prevBtn.disabled = currentPage === 0;
            prevBtn.onclick = () => { if (currentPage > 0) { currentPage--; loadData(); } };
            paginationButtons.appendChild(prevBtn);

            // Page numbers
            const maxButtons = 5;
            let startPage = Math.max(0, currentPage - Math.floor(maxButtons / 2));
            let endPage = Math.min(totalPages, startPage + maxButtons);
            if (endPage - startPage < maxButtons) startPage = Math.max(0, endPage - maxButtons);

            for (let i = startPage; i < endPage; i++) {
                const pageBtn = document.createElement('button');
                pageBtn.className = `px-3 py-1.5 text-xs font-semibold rounded-lg transition-all ${i === currentPage ? 'bg-gradient-to-tl from-purple-700 to-pink-500 text-white' : 'text-slate-700 hover:bg-slate-100 dark:text-white dark:hover:bg-gray-700'}`;
                pageBtn.textContent = i + 1;
                pageBtn.onclick = () => { currentPage = i; loadData(); };
                paginationButtons.appendChild(pageBtn);
            }

            // Next button
            const nextBtn = document.createElement('button');
            nextBtn.className = `px-3 py-1.5 text-xs font-semibold rounded-lg transition-all ${currentPage >= totalPages - 1 ? 'text-slate-400 cursor-not-allowed' : 'text-slate-700 hover:bg-slate-100 dark:text-white dark:hover:bg-gray-700'}`;
            nextBtn.innerHTML = '<i class="fas fa-chevron-right"></i>';
            nextBtn.disabled = currentPage >= totalPages - 1;
            nextBtn.onclick = () => { if (currentPage < totalPages - 1) { currentPage++; loadData(); } };
            paginationButtons.appendChild(nextBtn);
        }

        async function loadData() {
            const loadingState = document.getElementById('loading-state');
            const emptyState = document.getElementById('empty-state');
            const tbody = document.getElementById('products-tbody');
            const table = document.getElementById('products-table');

            loadingState.classList.remove('hidden');
            table.classList.add('hidden');
            emptyState.classList.add('hidden');

            try {
                const params = new URLSearchParams({
                    handler: 'Data',
                    draw: Date.now(),
                    start: currentPage * pageSize,
                    length: pageSize,
                    search: searchTerm,
                    sortColumn: sortColumn,
                    sortDirection: sortDirection
                });

                const response = await fetch(`/products?${params}`);
                const result = await response.json();

                totalRecords = result.recordsTotal;
                filteredRecords = result.recordsFiltered;
                allData = result.data;

                // Update UI
                document.getElementById('total-count').textContent = totalRecords;
                document.getElementById('showing-start').textContent = filteredRecords > 0 ? (currentPage * pageSize) + 1 : 0;
                document.getElementById('showing-end').textContent = Math.min((currentPage + 1) * pageSize, filteredRecords);
                document.getElementById('showing-total').textContent = filteredRecords;

                loadingState.classList.add('hidden');

                if (result.data.length === 0) {
                    emptyState.classList.remove('hidden');
                } else {
                    table.classList.remove('hidden');
                    tbody.innerHTML = result.data.map(renderRow).join('');
                }

                renderPagination();
            } catch (error) {
                console.error('Error loading data:', error);
                loadingState.classList.add('hidden');
                emptyState.classList.remove('hidden');
            }
        }

        // Event listeners
        document.getElementById('per-page').addEventListener('change', (e) => {
            pageSize = parseInt(e.target.value);
            currentPage = 0;
            loadData();
        });

        let searchTimeout;
        document.getElementById('search-input').addEventListener('input', (e) => {
            clearTimeout(searchTimeout);
            searchTimeout = setTimeout(() => {
                searchTerm = e.target.value;
                currentPage = 0;
                loadData();
            }, 300);
        });

        // Sort handlers
        document.querySelectorAll('th[data-sort]').forEach(th => {
            th.addEventListener('click', () => {
                const col = parseInt(th.dataset.sort);
                if (sortColumn === col) {
                    sortDirection = sortDirection === 'asc' ? 'desc' : 'asc';
                } else {
                    sortColumn = col;
                    sortDirection = 'asc';
                }
                // Update sort icons
                document.querySelectorAll('th[data-sort] i').forEach(i => i.className = 'fas fa-sort ms-1 text-xs');
                th.querySelector('i').className = `fas fa-sort-${sortDirection === 'asc' ? 'up' : 'down'} ms-1 text-xs text-fuchsia-500`;
                loadData();
            });
        });

        // Export CSV
        document.getElementById('export-csv')?.addEventListener('click', async function() {
            // Fetch all data for export
            const params = new URLSearchParams({ handler: 'Data', start: 0, length: 10000, search: searchTerm });
            const response = await fetch(`/products?${params}`);
            const result = await response.json();

            const headers = ['Product', 'Vendor', 'Tags', 'Price', 'ID', 'Quantity', 'Status'];
            let csv = headers.join(',') + '\n';
            result.data.forEach(p => {
                const row = [p.title, p.vendor, p.tags, p.priceFormatted, p.id, p.stock, p.status];
                csv += row.map(cell => {
                    let escaped = String(cell).replace(/"/g, '""');
                    if (escaped.includes(',') || escaped.includes('"') || escaped.includes('\n')) {
                        escaped = '"' + escaped + '"';
                    }
                    return escaped;
                }).join(',') + '\n';
            });

            const blob = new Blob(['\ufeff' + csv], { type: 'text/csv;charset=utf-8;' });
            const url = URL.createObjectURL(blob);
            const link = document.createElement('a');
            link.href = url;
            link.download = 'products_' + new Date().toISOString().split('T')[0] + '.csv';
            document.body.appendChild(link);
            link.click();
            document.body.removeChild(link);
            URL.revokeObjectURL(url);
        });

        // Export Excel
        document.getElementById('export-excel')?.addEventListener('click', async function() {
            if (typeof XLSX === 'undefined') {
                alert('Excel library not loaded.');
                return;
            }

            const params = new URLSearchParams({ handler: 'Data', start: 0, length: 10000, search: searchTerm });
            const response = await fetch(`/products?${params}`);
            const result = await response.json();

            const headers = ['Product', 'Vendor', 'Tags', 'Price', 'ID', 'Quantity', 'Status'];
            const data = result.data.map(p => [p.title, p.vendor, p.tags, p.priceFormatted, p.id, p.stock, p.status]);

            const wb = XLSX.utils.book_new();
            const ws = XLSX.utils.aoa_to_sheet([headers, ...data]);
            XLSX.utils.book_append_sheet(wb, ws, 'Products');
            XLSX.writeFile(wb, 'products_' + new Date().toISOString().split('T')[0] + '.xlsx');
        });

        // Initial load
        loadData();
    </script>
}
