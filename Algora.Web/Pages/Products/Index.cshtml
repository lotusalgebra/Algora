@page "/products"
@using Algora.Web.Pages.Products
@model IndexModel
@{
    ViewData["Title"] = "Products";
    ViewData["Breadcrumb"] = "Products";
}

<div class="p-4">
    <!-- Header Card -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md mb-6">
        <!-- Card Header -->
        <div class="p-6 border-b border-gray-200 dark:border-gray-700">
            <div class="flex flex-wrap items-center justify-between gap-4">
                <div>
                    <h5 class="text-xl font-semibold text-gray-900 dark:text-white">Products List</h5>
                    <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">
                        <i class="fas fa-shopping-bag text-purple-500 me-1"></i>
                        <span class="font-semibold" id="total-count">0</span> products from your store
                    </p>
                </div>
                <div class="flex items-center gap-2">
                    <button type="button" id="export-csv" class="inline-flex items-center px-4 py-2 text-sm font-medium text-white bg-gradient-to-r from-cyan-500 to-blue-500 rounded-lg hover:bg-gradient-to-br focus:ring-4 focus:outline-none focus:ring-cyan-300 dark:focus:ring-cyan-800">
                        <i class="fas fa-file-csv me-2"></i> CSV
                    </button>
                    <button type="button" id="export-excel" class="inline-flex items-center px-4 py-2 text-sm font-medium text-white bg-gradient-to-r from-green-400 to-green-600 rounded-lg hover:bg-gradient-to-br focus:ring-4 focus:outline-none focus:ring-green-300 dark:focus:ring-green-800">
                        <i class="fas fa-file-excel me-2"></i> Excel
                    </button>
                    <a href="/products/create" class="inline-flex items-center px-4 py-2 text-sm font-medium text-white bg-gradient-to-br from-purple-600 to-pink-500 rounded-lg hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-purple-300 dark:focus:ring-purple-800">
                        <i class="fas fa-plus me-2"></i> New Product
                    </a>
                </div>
            </div>
        </div>

        <!-- Card Body -->
        <div class="p-6">
            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="flex items-center p-4 mb-4 text-sm text-red-800 rounded-lg bg-red-50 dark:bg-gray-800 dark:text-red-400" role="alert">
                    <i class="fas fa-exclamation-triangle flex-shrink-0 me-2"></i>
                    <span>@Model.ErrorMessage</span>
                </div>
            }

            <!-- Search and Per Page Controls -->
            <div class="flex flex-wrap items-center justify-between gap-4 mb-4">
                <div class="flex items-center gap-2">
                    <label class="text-sm text-gray-500 dark:text-gray-400">Show</label>
                    <select id="per-page" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white">
                        <option value="10">10</option>
                        <option value="25">25</option>
                        <option value="50">50</option>
                        <option value="100">100</option>
                    </select>
                    <label class="text-sm text-gray-500 dark:text-gray-400">entries</label>
                </div>
                <div class="flex items-center gap-2">
                    <label class="text-sm text-gray-500 dark:text-gray-400">Search:</label>
                    <div class="relative">
                        <div class="absolute inset-y-0 start-0 flex items-center ps-3 pointer-events-none">
                            <i class="fas fa-search text-gray-400"></i>
                        </div>
                        <input type="text" id="search-input" placeholder="Search products..."
                               class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-64 ps-10 p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white" />
                    </div>
                </div>
            </div>

            <!-- Table -->
            <div class="relative overflow-x-auto shadow-md sm:rounded-lg">
                <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400" id="products-table">
                    <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                        <tr>
                            <th scope="col" class="px-6 py-3 cursor-pointer hover:bg-gray-100 dark:hover:bg-gray-600" data-sort="0">
                                Product <i class="fas fa-sort ms-1 text-xs"></i>
                            </th>
                            <th scope="col" class="px-6 py-3">Category</th>
                            <th scope="col" class="px-6 py-3 text-center cursor-pointer hover:bg-gray-100 dark:hover:bg-gray-600" data-sort="2">
                                Price <i class="fas fa-sort ms-1 text-xs"></i>
                            </th>
                            <th scope="col" class="px-6 py-3 text-center">ID</th>
                            <th scope="col" class="px-6 py-3 text-center cursor-pointer hover:bg-gray-100 dark:hover:bg-gray-600" data-sort="4">
                                Quantity <i class="fas fa-sort ms-1 text-xs"></i>
                            </th>
                            <th scope="col" class="px-6 py-3 text-center">Status</th>
                            <th scope="col" class="px-6 py-3 text-center">Action</th>
                        </tr>
                    </thead>
                    <tbody id="products-tbody">
                        <!-- Data loaded via AJAX -->
                    </tbody>
                </table>
            </div>

            <!-- Loading State -->
            <div id="loading-state" class="text-center py-8">
                <i class="fas fa-spinner fa-spin fa-2x text-purple-500 mb-2"></i>
                <p class="text-gray-500 dark:text-gray-400">Loading products...</p>
            </div>

            <!-- Empty State -->
            <div id="empty-state" class="text-center py-12 hidden">
                <i class="fas fa-box-open fa-4x text-gray-300 dark:text-gray-600 mb-4"></i>
                <p class="text-gray-500 dark:text-gray-400 mb-4">No products found.</p>
                <a href="/products/create" class="inline-flex items-center px-6 py-3 text-sm font-medium text-white bg-gradient-to-br from-purple-600 to-pink-500 rounded-lg hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-purple-300 dark:focus:ring-purple-800">
                    <i class="fas fa-plus me-2"></i> Add Your First Product
                </a>
            </div>

            <!-- Pagination -->
            <nav class="flex flex-wrap items-center justify-between gap-4 pt-4" id="pagination-container" aria-label="Table navigation">
                <span class="text-sm font-normal text-gray-500 dark:text-gray-400">
                    Showing <span class="font-semibold text-gray-900 dark:text-white" id="showing-start">0</span> to
                    <span class="font-semibold text-gray-900 dark:text-white" id="showing-end">0</span> of
                    <span class="font-semibold text-gray-900 dark:text-white" id="showing-total">0</span> products
                </span>
                <ul class="inline-flex -space-x-px text-sm h-8" id="pagination-buttons">
                    <!-- Pagination buttons added by JS -->
                </ul>
            </nav>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/plugins/xlsx.min.js" asp-append-version="true"></script>
    <script>
        // State management
        let currentPage = 0;
        let pageSize = 10;
        let searchTerm = '';
        let sortColumn = 0;
        let sortDirection = 'asc';
        let totalRecords = 0;
        let filteredRecords = 0;
        let allData = [];

        const bgColors = ['from-purple-600 to-pink-500', 'from-gray-400 to-gray-600', 'from-green-500 to-green-700', 'from-blue-500 to-blue-700', 'from-red-500 to-red-700', 'from-orange-400 to-orange-600'];

        function getInitials(title) {
            return title.split(' ').slice(0, 2).map(w => w.length > 0 ? w[0].toUpperCase() : '').join('');
        }

        function getColorClass(title) {
            const hash = Math.abs(title.split('').reduce((a, b) => ((a << 5) - a) + b.charCodeAt(0), 0));
            return bgColors[hash % bgColors.length];
        }

        function getStatusBadge(status, statusClass) {
            const badgeClasses = {
                'from-green-600 to-lime-400': 'bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-300',
                'from-yellow-500 to-orange-400': 'bg-yellow-100 text-yellow-800 dark:bg-yellow-900 dark:text-yellow-300',
                'from-red-600 to-rose-400': 'bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-300',
                'from-gray-500 to-gray-700': 'bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-300'
            };
            return badgeClasses[statusClass] || 'bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-300';
        }

        function renderRow(product) {
            const initials = getInitials(product.title);
            const colorClass = getColorClass(product.title);
            const tags = product.tags ? product.tags.split(',').slice(0, 2).map(t =>
                `<span class="bg-gray-100 text-gray-800 text-xs font-medium px-2 py-0.5 rounded dark:bg-gray-700 dark:text-gray-300 mr-1">${t.trim()}</span>`
            ).join('') : '<span class="text-xs text-gray-400 dark:text-gray-500">Uncategorized</span>';

            const statusBadgeClass = getStatusBadge(product.status, product.statusClass);

            return `
                <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
                    <td class="px-6 py-4">
                        <div class="flex items-center">
                            <div class="flex items-center justify-center w-10 h-10 mr-4 text-sm text-white font-semibold rounded-lg bg-gradient-to-br ${colorClass}">
                                ${initials}
                            </div>
                            <div>
                                <div class="font-semibold text-gray-900 dark:text-white">${product.title}</div>
                                <div class="text-xs text-gray-500 dark:text-gray-400">${product.vendor}</div>
                            </div>
                        </div>
                    </td>
                    <td class="px-6 py-4">${tags}</td>
                    <td class="px-6 py-4 text-center font-medium text-gray-900 dark:text-white">${product.priceFormatted}</td>
                    <td class="px-6 py-4 text-center text-xs text-gray-500 dark:text-gray-400">${product.id}</td>
                    <td class="px-6 py-4 text-center font-medium text-gray-900 dark:text-white">${product.stock}</td>
                    <td class="px-6 py-4 text-center">
                        <span class="${statusBadgeClass} text-xs font-medium px-2.5 py-0.5 rounded">${product.status}</span>
                    </td>
                    <td class="px-6 py-4">
                        <div class="flex items-center justify-center gap-2">
                            <a href="/products/${product.id}" class="text-blue-600 hover:text-blue-800 dark:text-blue-400 dark:hover:text-blue-300" title="View">
                                <i class="fas fa-eye"></i>
                            </a>
                            <a href="/products/edit/${product.id}" class="text-purple-600 hover:text-purple-800 dark:text-purple-400 dark:hover:text-purple-300" title="Edit">
                                <i class="fas fa-pencil-alt"></i>
                            </a>
                            <a href="/products/delete/${product.id}" class="text-red-600 hover:text-red-800 dark:text-red-400 dark:hover:text-red-300" title="Delete">
                                <i class="fas fa-trash"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            `;
        }

        function renderPagination() {
            const totalPages = Math.ceil(filteredRecords / pageSize);
            const paginationButtons = document.getElementById('pagination-buttons');
            paginationButtons.innerHTML = '';

            if (totalPages <= 1) return;

            // Previous button
            const prevLi = document.createElement('li');
            prevLi.innerHTML = `<button class="flex items-center justify-center px-3 h-8 ms-0 leading-tight ${currentPage === 0 ? 'text-gray-300 dark:text-gray-600 cursor-not-allowed' : 'text-gray-500 hover:bg-gray-100 hover:text-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white'} bg-white border border-gray-300 rounded-s-lg dark:bg-gray-800 dark:border-gray-700" ${currentPage === 0 ? 'disabled' : ''}>
                <i class="fas fa-chevron-left text-xs"></i>
            </button>`;
            if (currentPage > 0) {
                prevLi.querySelector('button').onclick = () => { currentPage--; loadData(); };
            }
            paginationButtons.appendChild(prevLi);

            // Page numbers
            const maxButtons = 5;
            let startPage = Math.max(0, currentPage - Math.floor(maxButtons / 2));
            let endPage = Math.min(totalPages, startPage + maxButtons);
            if (endPage - startPage < maxButtons) startPage = Math.max(0, endPage - maxButtons);

            for (let i = startPage; i < endPage; i++) {
                const pageLi = document.createElement('li');
                if (i === currentPage) {
                    pageLi.innerHTML = `<span class="flex items-center justify-center px-3 h-8 text-white bg-gradient-to-br from-purple-600 to-pink-500 border border-purple-500">${i + 1}</span>`;
                } else {
                    pageLi.innerHTML = `<button class="flex items-center justify-center px-3 h-8 leading-tight text-gray-500 bg-white border border-gray-300 hover:bg-gray-100 hover:text-gray-700 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white">${i + 1}</button>`;
                    pageLi.querySelector('button').onclick = () => { currentPage = i; loadData(); };
                }
                paginationButtons.appendChild(pageLi);
            }

            // Next button
            const nextLi = document.createElement('li');
            nextLi.innerHTML = `<button class="flex items-center justify-center px-3 h-8 leading-tight ${currentPage >= totalPages - 1 ? 'text-gray-300 dark:text-gray-600 cursor-not-allowed' : 'text-gray-500 hover:bg-gray-100 hover:text-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white'} bg-white border border-gray-300 rounded-e-lg dark:bg-gray-800 dark:border-gray-700" ${currentPage >= totalPages - 1 ? 'disabled' : ''}>
                <i class="fas fa-chevron-right text-xs"></i>
            </button>`;
            if (currentPage < totalPages - 1) {
                nextLi.querySelector('button').onclick = () => { currentPage++; loadData(); };
            }
            paginationButtons.appendChild(nextLi);
        }

        async function loadData() {
            const loadingState = document.getElementById('loading-state');
            const emptyState = document.getElementById('empty-state');
            const tbody = document.getElementById('products-tbody');
            const table = document.getElementById('products-table');

            loadingState.classList.remove('hidden');
            table.classList.add('hidden');
            emptyState.classList.add('hidden');

            try {
                const params = new URLSearchParams({
                    handler: 'Data',
                    draw: Date.now(),
                    start: currentPage * pageSize,
                    length: pageSize,
                    search: searchTerm,
                    sortColumn: sortColumn,
                    sortDirection: sortDirection
                });

                const response = await fetch(`/products?${params}`);
                const result = await response.json();

                totalRecords = result.recordsTotal;
                filteredRecords = result.recordsFiltered;
                allData = result.data;

                // Update UI
                document.getElementById('total-count').textContent = totalRecords;
                document.getElementById('showing-start').textContent = filteredRecords > 0 ? (currentPage * pageSize) + 1 : 0;
                document.getElementById('showing-end').textContent = Math.min((currentPage + 1) * pageSize, filteredRecords);
                document.getElementById('showing-total').textContent = filteredRecords;

                loadingState.classList.add('hidden');

                if (result.data.length === 0) {
                    emptyState.classList.remove('hidden');
                } else {
                    table.classList.remove('hidden');
                    tbody.innerHTML = result.data.map(renderRow).join('');
                }

                renderPagination();
            } catch (error) {
                console.error('Error loading data:', error);
                loadingState.classList.add('hidden');
                emptyState.classList.remove('hidden');
            }
        }

        // Event listeners
        document.getElementById('per-page').addEventListener('change', (e) => {
            pageSize = parseInt(e.target.value);
            currentPage = 0;
            loadData();
        });

        let searchTimeout;
        document.getElementById('search-input').addEventListener('input', (e) => {
            clearTimeout(searchTimeout);
            searchTimeout = setTimeout(() => {
                searchTerm = e.target.value;
                currentPage = 0;
                loadData();
            }, 300);
        });

        // Sort handlers
        document.querySelectorAll('th[data-sort]').forEach(th => {
            th.addEventListener('click', () => {
                const col = parseInt(th.dataset.sort);
                if (sortColumn === col) {
                    sortDirection = sortDirection === 'asc' ? 'desc' : 'asc';
                } else {
                    sortColumn = col;
                    sortDirection = 'asc';
                }
                // Update sort icons
                document.querySelectorAll('th[data-sort] i').forEach(i => i.className = 'fas fa-sort ms-1 text-xs');
                th.querySelector('i').className = `fas fa-sort-${sortDirection === 'asc' ? 'up' : 'down'} ms-1 text-xs text-purple-500`;
                loadData();
            });
        });

        // Export CSV
        document.getElementById('export-csv')?.addEventListener('click', async function() {
            const params = new URLSearchParams({ handler: 'Data', start: 0, length: 10000, search: searchTerm });
            const response = await fetch(`/products?${params}`);
            const result = await response.json();

            const headers = ['Product', 'Vendor', 'Tags', 'Price', 'ID', 'Quantity', 'Status'];
            let csv = headers.join(',') + '\n';
            result.data.forEach(p => {
                const row = [p.title, p.vendor, p.tags, p.priceFormatted, p.id, p.stock, p.status];
                csv += row.map(cell => {
                    let escaped = String(cell).replace(/"/g, '""');
                    if (escaped.includes(',') || escaped.includes('"') || escaped.includes('\n')) {
                        escaped = '"' + escaped + '"';
                    }
                    return escaped;
                }).join(',') + '\n';
            });

            const blob = new Blob(['\ufeff' + csv], { type: 'text/csv;charset=utf-8;' });
            const url = URL.createObjectURL(blob);
            const link = document.createElement('a');
            link.href = url;
            link.download = 'products_' + new Date().toISOString().split('T')[0] + '.csv';
            document.body.appendChild(link);
            link.click();
            document.body.removeChild(link);
            URL.revokeObjectURL(url);
        });

        // Export Excel
        document.getElementById('export-excel')?.addEventListener('click', async function() {
            if (typeof XLSX === 'undefined') {
                alert('Excel library not loaded.');
                return;
            }

            const params = new URLSearchParams({ handler: 'Data', start: 0, length: 10000, search: searchTerm });
            const response = await fetch(`/products?${params}`);
            const result = await response.json();

            const headers = ['Product', 'Vendor', 'Tags', 'Price', 'ID', 'Quantity', 'Status'];
            const data = result.data.map(p => [p.title, p.vendor, p.tags, p.priceFormatted, p.id, p.stock, p.status]);

            const wb = XLSX.utils.book_new();
            const ws = XLSX.utils.aoa_to_sheet([headers, ...data]);
            XLSX.utils.book_append_sheet(wb, ws, 'Products');
            XLSX.writeFile(wb, 'products_' + new Date().toISOString().split('T')[0] + '.xlsx');
        });

        // Initial load
        loadData();
    </script>
}
