@page "/products/delete/{id:long}"
@model Algora.Web.Pages.Products.DeleteModel
@{
    ViewData["Title"] = "Delete Product";
}

<div class="w-full px-6 py-6 mx-auto">
    <!-- Breadcrumb -->
    <nav class="mb-4">
        <ol class="flex flex-wrap pt-1 mr-12 bg-transparent rounded-lg sm:mr-16">
            <li class="leading-normal text-sm">
                <a class="text-slate-500 dark:text-white/60" href="/products">Products</a>
            </li>
            <li class="text-sm pl-2 capitalize leading-normal before:float-left before:pr-2 before:content-['/'] text-slate-700 dark:text-white" aria-current="page">
                Delete Product
            </li>
        </ol>
    </nav>

    <div class="flex flex-wrap -mx-3 justify-center">
        <div class="w-full max-w-full px-3 md:w-8/12 lg:w-6/12">
            <!-- Error Message -->
            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="mb-6 p-4 text-sm text-red-700 bg-red-100 rounded-lg dark:bg-red-200 dark:text-red-800" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    @Model.ErrorMessage
                </div>
            }

            @if (Model.Product != null)
            {
                <!-- Delete Confirmation Card -->
                <div class="relative flex flex-col min-w-0 mb-6 break-words bg-white border-0 shadow-soft-xl rounded-2xl bg-clip-border dark:bg-gray-950 dark:shadow-soft-dark-xl">
                    <div class="p-6 text-center border-b-0 rounded-t-2xl">
                        <div class="w-16 h-16 mx-auto mb-4 flex items-center justify-center rounded-full bg-red-100 dark:bg-red-900/30">
                            <i class="fas fa-trash-alt text-red-500 text-2xl"></i>
                        </div>
                        <h5 class="mb-2 font-bold dark:text-white">Delete Product</h5>
                        <p class="mb-0 text-sm text-slate-500 dark:text-white/60">Are you sure you want to delete this product? This action cannot be undone.</p>
                    </div>

                    <div class="flex-auto p-6 pt-0">
                        <!-- Product Info -->
                        <div class="bg-slate-50 dark:bg-gray-900 rounded-xl p-4 mb-6">
                            <div class="flex items-start">
                                <div class="flex items-center justify-center w-12 h-12 mr-4 text-sm font-bold text-white rounded-xl bg-gradient-to-tl from-purple-700 to-pink-500">
                                    @(Model.Product.Title.Length > 0 ? Model.Product.Title[0].ToString().ToUpper() : "?")
                                </div>
                                <div class="flex-1">
                                    <h6 class="mb-1 font-semibold dark:text-white">@Model.Product.Title</h6>
                                    <p class="mb-0 text-xs text-slate-500 dark:text-white/60">
                                        ID: @Model.Product.NumericId
                                    </p>
                                    @if (Model.Product.Tags.Any())
                                    {
                                        <div class="flex flex-wrap gap-1 mt-2">
                                            @foreach (var tag in Model.Product.Tags.Take(5))
                                            {
                                                <span class="px-2 py-0.5 text-xs font-medium rounded-full bg-slate-200 text-slate-600 dark:bg-gray-700 dark:text-white/80">
                                                    @tag
                                                </span>
                                            }
                                            @if (Model.Product.Tags.Count > 5)
                                            {
                                                <span class="px-2 py-0.5 text-xs font-medium rounded-full bg-slate-200 text-slate-600 dark:bg-gray-700 dark:text-white/80">
                                                    +@(Model.Product.Tags.Count - 5) more
                                                </span>
                                            }
                                        </div>
                                    }
                                </div>
                            </div>

                            <!-- Variants Info -->
                            @if (Model.Product.Variants.Any())
                            {
                                <div class="mt-4 pt-4 border-t border-slate-200 dark:border-gray-700">
                                    <p class="text-xs font-semibold text-slate-500 dark:text-white/60 uppercase mb-2">
                                        <i class="fas fa-layer-group me-1"></i> @Model.Product.Variants.Count Variant(s)
                                    </p>
                                    <div class="space-y-1">
                                        @foreach (var variant in Model.Product.Variants.Take(3))
                                        {
                                            <div class="flex justify-between text-sm">
                                                <span class="text-slate-600 dark:text-white/80">@(variant.Title ?? "Default")</span>
                                                <span class="font-semibold dark:text-white">@(variant.Price?.ToString("C") ?? "N/A")</span>
                                            </div>
                                        }
                                        @if (Model.Product.Variants.Count > 3)
                                        {
                                            <p class="text-xs text-slate-400 dark:text-white/50">
                                                ... and @(Model.Product.Variants.Count - 3) more variant(s)
                                            </p>
                                        }
                                    </div>
                                </div>
                            }
                        </div>

                        <!-- Warning -->
                        <div class="bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 rounded-xl p-4 mb-6">
                            <div class="flex">
                                <i class="fas fa-exclamation-circle text-red-500 mt-0.5 me-3"></i>
                                <div>
                                    <h6 class="text-sm font-semibold text-red-800 dark:text-red-400 mb-1">Warning</h6>
                                    <p class="text-xs text-red-700 dark:text-red-300 mb-0">
                                        Deleting this product will permanently remove it from your Shopify store.
                                        All associated variants, images, and inventory data will be lost.
                                    </p>
                                </div>
                            </div>
                        </div>

                        <!-- Actions -->
                        <form method="post" asp-route-id="@Model.Product.NumericId">
                            <div class="flex flex-col sm:flex-row gap-3">
                                <button type="submit" class="flex-1 inline-flex items-center justify-center px-6 py-3 text-sm font-bold text-white uppercase transition-all border-0 rounded-lg cursor-pointer hover:scale-102 active:opacity-85 bg-gradient-to-tl from-red-600 to-rose-400 shadow-soft-md">
                                    <i class="fas fa-trash me-2"></i> Yes, Delete Product
                                </button>
                                <a href="/products" class="flex-1 inline-flex items-center justify-center px-6 py-3 text-sm font-bold text-center uppercase transition-all border border-solid rounded-lg cursor-pointer border-slate-200 text-slate-500 hover:bg-slate-100 dark:border-gray-600 dark:text-white dark:hover:bg-gray-700">
                                    <i class="fas fa-times me-2"></i> Cancel
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            }
            else
            {
                <!-- Product Not Found -->
                <div class="relative flex flex-col min-w-0 mb-6 break-words bg-white border-0 shadow-soft-xl rounded-2xl bg-clip-border dark:bg-gray-950 dark:shadow-soft-dark-xl">
                    <div class="p-6 text-center">
                        <div class="w-16 h-16 mx-auto mb-4 flex items-center justify-center rounded-full bg-slate-100 dark:bg-gray-800">
                            <i class="fas fa-question text-slate-400 text-2xl"></i>
                        </div>
                        <h5 class="mb-2 font-bold dark:text-white">Product Not Found</h5>
                        <p class="mb-4 text-sm text-slate-500 dark:text-white/60">The product you're trying to delete could not be found.</p>
                        <a href="/products" class="inline-flex items-center justify-center px-6 py-3 text-sm font-bold text-white uppercase transition-all border-0 rounded-lg cursor-pointer hover:scale-102 active:opacity-85 bg-gradient-to-tl from-purple-700 to-pink-500 shadow-soft-md">
                            <i class="fas fa-arrow-left me-2"></i> Back to Products
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
