@page "/products/delete/{id:long}"
@model Algora.Web.Pages.Products.DeleteModel
@{
    ViewData["Title"] = "Delete Product";
}

<div class="p-4">
    <!-- Breadcrumb -->
    <nav class="mb-4">
        <ol class="flex items-center text-sm">
            <li>
                <a href="/products" class="text-gray-500 hover:text-gray-700 dark:text-gray-400 dark:hover:text-white">Products</a>
            </li>
            <li class="mx-2 text-gray-400">/</li>
            <li class="text-gray-900 dark:text-white">Delete Product</li>
        </ol>
    </nav>

    <div class="flex justify-center">
        <div class="w-full max-w-lg">
            <!-- Error Message -->
            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="flex items-center p-4 mb-6 text-sm text-red-800 rounded-lg bg-red-50 dark:bg-gray-800 dark:text-red-400" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    @Model.ErrorMessage
                </div>
            }

            @if (Model.Product != null)
            {
                <!-- Delete Confirmation Card -->
                <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md">
                    <div class="p-6 text-center border-b border-gray-200 dark:border-gray-700">
                        <div class="w-16 h-16 mx-auto mb-4 flex items-center justify-center rounded-full bg-red-100 dark:bg-red-900/30">
                            <i class="fas fa-trash-alt text-red-500 text-2xl"></i>
                        </div>
                        <h5 class="text-lg font-bold text-gray-900 dark:text-white mb-2">Delete Product</h5>
                        <p class="text-sm text-gray-500 dark:text-gray-400">Are you sure you want to delete this product? This action cannot be undone.</p>
                    </div>

                    <div class="p-6">
                        <!-- Product Info -->
                        <div class="bg-gray-50 dark:bg-gray-900 rounded-lg p-4 mb-6">
                            <div class="flex items-start">
                                <div class="flex items-center justify-center w-12 h-12 mr-4 text-sm font-bold text-white rounded-lg bg-gradient-to-br from-purple-600 to-pink-500">
                                    @(Model.Product.Title.Length > 0 ? Model.Product.Title[0].ToString().ToUpper() : "?")
                                </div>
                                <div class="flex-1">
                                    <h6 class="font-semibold text-gray-900 dark:text-white mb-1">@Model.Product.Title</h6>
                                    <p class="text-xs text-gray-500 dark:text-gray-400">
                                        ID: @Model.Product.NumericId
                                    </p>
                                    @if (Model.Product.Tags.Any())
                                    {
                                        <div class="flex flex-wrap gap-1 mt-2">
                                            @foreach (var tag in Model.Product.Tags.Take(5))
                                            {
                                                <span class="bg-gray-100 text-gray-800 text-xs font-medium px-2 py-0.5 rounded dark:bg-gray-700 dark:text-gray-300">
                                                    @tag
                                                </span>
                                            }
                                            @if (Model.Product.Tags.Count > 5)
                                            {
                                                <span class="bg-gray-100 text-gray-800 text-xs font-medium px-2 py-0.5 rounded dark:bg-gray-700 dark:text-gray-300">
                                                    +@(Model.Product.Tags.Count - 5) more
                                                </span>
                                            }
                                        </div>
                                    }
                                </div>
                            </div>

                            <!-- Variants Info -->
                            @if (Model.Product.Variants.Any())
                            {
                                <div class="mt-4 pt-4 border-t border-gray-200 dark:border-gray-700">
                                    <p class="text-xs font-semibold text-gray-500 dark:text-gray-400 uppercase mb-2">
                                        <i class="fas fa-layer-group me-1"></i> @Model.Product.Variants.Count Variant(s)
                                    </p>
                                    <div class="space-y-1">
                                        @foreach (var variant in Model.Product.Variants.Take(3))
                                        {
                                            <div class="flex justify-between text-sm">
                                                <span class="text-gray-600 dark:text-gray-400">@(variant.Title ?? "Default")</span>
                                                <span class="font-semibold text-gray-900 dark:text-white">@(variant.Price?.ToString("C") ?? "N/A")</span>
                                            </div>
                                        }
                                        @if (Model.Product.Variants.Count > 3)
                                        {
                                            <p class="text-xs text-gray-400 dark:text-gray-500">
                                                ... and @(Model.Product.Variants.Count - 3) more variant(s)
                                            </p>
                                        }
                                    </div>
                                </div>
                            }
                        </div>

                        <!-- Warning -->
                        <div class="flex items-start p-4 mb-6 text-sm text-red-800 rounded-lg bg-red-50 dark:bg-red-900/20 dark:text-red-400 border border-red-200 dark:border-red-800">
                            <i class="fas fa-exclamation-circle mt-0.5 me-3"></i>
                            <div>
                                <h6 class="font-semibold mb-1">Warning</h6>
                                <p class="text-xs">
                                    Deleting this product will permanently remove it from your Shopify store.
                                    All associated variants, images, and inventory data will be lost.
                                </p>
                            </div>
                        </div>

                        <!-- Actions -->
                        <form method="post" asp-route-id="@Model.Product.NumericId">
                            <div class="flex flex-col sm:flex-row gap-3">
                                <button type="submit" class="flex-1 inline-flex items-center justify-center px-5 py-2.5 text-sm font-medium text-white bg-red-600 rounded-lg hover:bg-red-700 focus:ring-4 focus:outline-none focus:ring-red-300 dark:focus:ring-red-800">
                                    <i class="fas fa-trash me-2"></i> Yes, Delete Product
                                </button>
                                <a href="/products" class="flex-1 inline-flex items-center justify-center px-5 py-2.5 text-sm font-medium text-gray-900 bg-white border border-gray-300 rounded-lg hover:bg-gray-100 focus:ring-4 focus:outline-none focus:ring-gray-200 dark:bg-gray-800 dark:text-white dark:border-gray-600 dark:hover:bg-gray-700 dark:focus:ring-gray-700">
                                    <i class="fas fa-times me-2"></i> Cancel
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            }
            else
            {
                <!-- Product Not Found -->
                <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6 text-center">
                    <div class="w-16 h-16 mx-auto mb-4 flex items-center justify-center rounded-full bg-gray-100 dark:bg-gray-700">
                        <i class="fas fa-question text-gray-400 text-2xl"></i>
                    </div>
                    <h5 class="text-lg font-bold text-gray-900 dark:text-white mb-2">Product Not Found</h5>
                    <p class="text-sm text-gray-500 dark:text-gray-400 mb-4">The product you're trying to delete could not be found.</p>
                    <a href="/products" class="inline-flex items-center justify-center px-5 py-2.5 text-sm font-medium text-white bg-gradient-to-br from-purple-600 to-pink-500 rounded-lg hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-purple-300 dark:focus:ring-purple-800">
                        <i class="fas fa-arrow-left me-2"></i> Back to Products
                    </a>
                </div>
            }
        </div>
    </div>
</div>
