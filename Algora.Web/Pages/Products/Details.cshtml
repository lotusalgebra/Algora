@page "/products/{id:long}"
@model Algora.Web.Pages.Products.DetailsModel
@{
    ViewData["Title"] = "Product Details";
    ViewData["Breadcrumb"] = "Products / Details";
}

<div class="p-4">
    <!-- Header -->
    <div class="flex flex-wrap items-center justify-between gap-4 mb-6">
        <div>
            <h5 class="text-xl font-semibold text-gray-900 dark:text-white">Product Details</h5>
            <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">View product information</p>
        </div>
        <div class="flex gap-2">
            @if (Model.Product != null)
            {
                <a href="/products/edit/@Model.Product.NumericId" class="inline-flex items-center px-4 py-2 text-sm font-medium text-white bg-gradient-to-r from-blue-500 to-blue-700 rounded-lg hover:bg-gradient-to-br focus:ring-4 focus:outline-none focus:ring-blue-300 dark:focus:ring-blue-800">
                    <i class="fas fa-pencil-alt me-2"></i> Edit
                </a>
            }
            <a href="/products" class="inline-flex items-center px-4 py-2 text-sm font-medium text-gray-900 bg-white border border-gray-300 rounded-lg hover:bg-gray-100 focus:ring-4 focus:outline-none focus:ring-gray-200 dark:bg-gray-800 dark:text-white dark:border-gray-600 dark:hover:bg-gray-700">
                <i class="fas fa-arrow-left me-2"></i> Back to Products
            </a>
        </div>
    </div>

    <!-- Error Message -->
    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="flex items-center p-4 mb-6 text-sm text-red-800 rounded-lg bg-red-50 dark:bg-gray-800 dark:text-red-400" role="alert">
            <i class="fas fa-exclamation-triangle flex-shrink-0 me-2"></i>
            <span>@Model.ErrorMessage</span>
        </div>
    }

    @if (Model.Product != null)
    {
        <div class="space-y-6">
            <!-- Product Info Card -->
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md">
                <div class="p-6">
                    <h5 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">@Model.Product.Title</h5>

                    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
                        <div>
                            <label class="block text-sm font-medium text-gray-500 dark:text-gray-400">Handle</label>
                            <p class="mt-1 text-sm text-gray-900 dark:text-white">@(Model.Product.Handle ?? "N/A")</p>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-500 dark:text-gray-400">Product ID</label>
                            <p class="mt-1 text-sm text-gray-900 dark:text-white">@Model.Product.NumericId</p>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-500 dark:text-gray-400">Variants</label>
                            <p class="mt-1 text-sm text-gray-900 dark:text-white">@Model.Product.Variants.Count variant(s)</p>
                        </div>
                    </div>

                    @if (Model.Product.Tags.Any())
                    {
                        <div>
                            <label class="block text-sm font-medium text-gray-500 dark:text-gray-400 mb-2">Tags</label>
                            <div class="flex flex-wrap gap-2">
                                @foreach (var tag in Model.Product.Tags)
                                {
                                    <span class="bg-purple-100 text-purple-800 text-xs font-medium px-2.5 py-0.5 rounded-full dark:bg-purple-900 dark:text-purple-300">
                                        @tag
                                    </span>
                                }
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- Product Images Gallery -->
            @if (Model.Product.Images != null && Model.Product.Images.Any())
            {
                <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md">
                    <div class="p-6 border-b border-gray-200 dark:border-gray-700">
                        <h6 class="text-lg font-semibold text-gray-900 dark:text-white">
                            <i class="fas fa-images me-2 text-purple-500"></i>
                            Product Images (@Model.Product.Images.Count)
                        </h6>
                    </div>
                    <div class="p-6">
                        <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-6 gap-4">
                            @foreach (var image in Model.Product.Images)
                            {
                                <div class="relative group">
                                    <div class="aspect-square rounded-lg overflow-hidden border border-gray-200 dark:border-gray-700 shadow-md hover:shadow-lg transition-all">
                                        <img src="@image.Src"
                                             alt="@(image.Alt ?? "Product image")"
                                             class="w-full h-full object-cover cursor-pointer hover:scale-110 transition-transform duration-300"
                                             onclick="openImageModal('@image.Src', '@(image.Alt ?? "Product image")')" />
                                    </div>
                                    @if (!string.IsNullOrEmpty(image.Alt))
                                    {
                                        <p class="text-xs text-center text-gray-500 dark:text-gray-400 mt-1 truncate" title="@image.Alt">@image.Alt</p>
                                    }
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }

            <!-- Variants Card -->
            @if (Model.Product.Variants.Any())
            {
                <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md">
                    <div class="p-6 border-b border-gray-200 dark:border-gray-700">
                        <h6 class="text-lg font-semibold text-gray-900 dark:text-white">
                            <i class="fas fa-layer-group me-2 text-purple-500"></i>
                            Variants (@Model.Product.Variants.Count)
                        </h6>
                    </div>
                    <div class="p-6">
                        <div class="relative overflow-x-auto shadow-md sm:rounded-lg">
                            <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
                                <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                                    <tr>
                                        <th scope="col" class="px-6 py-3">Image</th>
                                        <th scope="col" class="px-6 py-3">Title</th>
                                        <th scope="col" class="px-6 py-3">SKU</th>
                                        <th scope="col" class="px-6 py-3">Price</th>
                                        <th scope="col" class="px-6 py-3">Options</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var variant in Model.Product.Variants)
                                    {
                                        <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
                                            <td class="px-6 py-4">
                                                @if (!string.IsNullOrEmpty(variant.ImageSrc))
                                                {
                                                    <div class="w-12 h-12 rounded-lg overflow-hidden border border-gray-200 dark:border-gray-700 shadow-sm">
                                                        <img src="@variant.ImageSrc"
                                                             alt="@variant.Title"
                                                             class="w-full h-full object-cover cursor-pointer hover:scale-110 transition-transform"
                                                             onclick="openImageModal('@variant.ImageSrc', '@(variant.Title ?? "Variant image")')" />
                                                    </div>
                                                }
                                                else
                                                {
                                                    <div class="w-12 h-12 rounded-lg bg-gray-100 dark:bg-gray-700 flex items-center justify-center">
                                                        <i class="fas fa-image text-gray-400 dark:text-gray-500"></i>
                                                    </div>
                                                }
                                            </td>
                                            <td class="px-6 py-4 font-medium text-gray-900 dark:text-white">
                                                @(variant.Title ?? "Default")
                                            </td>
                                            <td class="px-6 py-4 text-gray-500 dark:text-gray-400">
                                                @(variant.Sku ?? "N/A")
                                            </td>
                                            <td class="px-6 py-4 font-medium text-gray-900 dark:text-white">
                                                @(variant.Price?.ToString("C") ?? "N/A")
                                            </td>
                                            <td class="px-6 py-4">
                                                <div class="flex flex-wrap gap-1">
                                                    @if (!string.IsNullOrEmpty(variant.Option1))
                                                    {
                                                        <span class="bg-gray-100 text-gray-800 text-xs font-medium px-2 py-0.5 rounded dark:bg-gray-700 dark:text-gray-300">@variant.Option1</span>
                                                    }
                                                    @if (!string.IsNullOrEmpty(variant.Option2))
                                                    {
                                                        <span class="bg-gray-100 text-gray-800 text-xs font-medium px-2 py-0.5 rounded dark:bg-gray-700 dark:text-gray-300">@variant.Option2</span>
                                                    }
                                                    @if (!string.IsNullOrEmpty(variant.Option3))
                                                    {
                                                        <span class="bg-gray-100 text-gray-800 text-xs font-medium px-2 py-0.5 rounded dark:bg-gray-700 dark:text-gray-300">@variant.Option3</span>
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<!-- Image Modal -->
<div id="imageModal" class="fixed inset-0 z-50 hidden items-center justify-center bg-black/80 backdrop-blur-sm" onclick="closeImageModal()">
    <div class="relative max-w-4xl max-h-[90vh] mx-4">
        <button onclick="closeImageModal()" class="absolute -top-10 right-0 text-white hover:text-gray-300 transition-colors">
            <i class="fas fa-times text-2xl"></i>
        </button>
        <img id="modalImage" src="" alt="" class="max-w-full max-h-[85vh] object-contain rounded-lg shadow-2xl" onclick="event.stopPropagation()" />
        <p id="modalCaption" class="text-center text-white mt-3 text-sm"></p>
    </div>
</div>

@section Scripts {
    <script>
        function openImageModal(src, alt) {
            const modal = document.getElementById('imageModal');
            const image = document.getElementById('modalImage');
            const caption = document.getElementById('modalCaption');

            image.src = src;
            image.alt = alt;
            caption.textContent = alt;

            modal.classList.remove('hidden');
            modal.classList.add('flex');
            document.body.style.overflow = 'hidden';
        }

        function closeImageModal() {
            const modal = document.getElementById('imageModal');
            modal.classList.add('hidden');
            modal.classList.remove('flex');
            document.body.style.overflow = '';
        }

        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') closeImageModal();
        });
    </script>
}
