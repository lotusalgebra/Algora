@page "/products/{id:long}"
@model Algora.Web.Pages.Products.DetailsModel
@{
    ViewData["Title"] = "Product Details";
}

<div class="w-full px-6 py-6 mx-auto">
    <!-- Breadcrumb -->
    <nav class="mb-4">
        <ol class="flex flex-wrap pt-1 mr-12 bg-transparent rounded-lg sm:mr-16">
            <li class="leading-normal text-sm">
                <a class="text-slate-500 dark:text-white/60" href="/products">Products</a>
            </li>
            <li class="text-sm pl-2 capitalize leading-normal before:float-left before:pr-2 before:content-['/'] text-slate-700 dark:text-white" aria-current="page">
                Product Details
            </li>
        </ol>
    </nav>

    <!-- Header -->
    <div class="flex flex-wrap -mx-3 mb-6">
        <div class="flex-none w-full max-w-full px-3">
            <div class="flex items-center justify-between">
                <div>
                    <h5 class="mb-0 font-bold dark:text-white">Product Details</h5>
                    <p class="mb-0 text-sm leading-normal dark:text-white dark:opacity-60">View product information</p>
                </div>
                <div class="flex gap-2">
                    @if (Model.Product != null)
                    {
                        <a href="/products/edit/@Model.Product.NumericId" class="inline-flex items-center px-4 py-2 text-sm font-medium text-white bg-gradient-to-tl from-blue-600 to-indigo-500 rounded-lg hover:scale-102 transition-all">
                            <i class="fas fa-pencil-alt me-2"></i> Edit
                        </a>
                    }
                    <a href="/products" class="inline-flex items-center px-4 py-2 text-sm font-medium text-slate-700 bg-white border border-slate-300 rounded-lg hover:bg-slate-50 dark:bg-gray-800 dark:text-white dark:border-gray-600 dark:hover:bg-gray-700">
                        <i class="fas fa-arrow-left me-2"></i> Back to Products
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Error Message -->
    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="mb-6 p-4 text-sm text-red-700 bg-red-100 rounded-lg dark:bg-red-200 dark:text-red-800" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i>
            @Model.ErrorMessage
        </div>
    }

    @if (Model.Product != null)
    {
        <div class="flex flex-wrap -mx-3">
            <!-- Product Info Card -->
            <div class="w-full max-w-full px-3">
                <div class="relative flex flex-col min-w-0 mb-6 break-words bg-white border-0 shadow-soft-xl rounded-2xl bg-clip-border dark:bg-gray-950 dark:shadow-soft-dark-xl">
                    <div class="flex-auto p-6">
                        <h5 class="mb-4 font-bold dark:text-white">@Model.Product.Title</h5>

                        <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
                            <div>
                                <label class="font-bold text-xs text-slate-700 dark:text-white/80">Handle</label>
                                <p class="text-sm text-slate-600 dark:text-white/60">@(Model.Product.Handle ?? "N/A")</p>
                            </div>
                            <div>
                                <label class="font-bold text-xs text-slate-700 dark:text-white/80">Product ID</label>
                                <p class="text-sm text-slate-600 dark:text-white/60">@Model.Product.NumericId</p>
                            </div>
                            <div>
                                <label class="font-bold text-xs text-slate-700 dark:text-white/80">Variants</label>
                                <p class="text-sm text-slate-600 dark:text-white/60">@Model.Product.Variants.Count variant(s)</p>
                            </div>
                        </div>

                        @if (Model.Product.Tags.Any())
                        {
                            <div class="mb-6">
                                <label class="font-bold text-xs text-slate-700 dark:text-white/80 mb-2 block">Tags</label>
                                <div class="flex flex-wrap gap-2">
                                    @foreach (var tag in Model.Product.Tags)
                                    {
                                        <span class="px-3 py-1 text-xs font-semibold text-purple-700 bg-purple-100 rounded-full dark:bg-purple-900/30 dark:text-purple-300">
                                            @tag
                                        </span>
                                    }
                                </div>
                            </div>
                        }
                    </div>
                </div>

                <!-- Product Images Gallery -->
                @if (Model.Product.Images != null && Model.Product.Images.Any())
                {
                    <div class="relative flex flex-col min-w-0 mb-6 break-words bg-white border-0 shadow-soft-xl rounded-2xl bg-clip-border dark:bg-gray-950 dark:shadow-soft-dark-xl">
                        <div class="p-6 pb-0 mb-0 border-b-0 rounded-t-2xl">
                            <h6 class="mb-0 font-bold dark:text-white">
                                <i class="fas fa-images me-2 text-fuchsia-500"></i>
                                Product Images (@Model.Product.Images.Count)
                            </h6>
                        </div>
                        <div class="flex-auto p-6">
                            <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-6 gap-4">
                                @foreach (var image in Model.Product.Images)
                                {
                                    <div class="relative group">
                                        <div class="aspect-square rounded-xl overflow-hidden border border-slate-200 dark:border-slate-700 shadow-soft-md hover:shadow-soft-xl transition-all">
                                            <img src="@image.Src"
                                                 alt="@(image.Alt ?? "Product image")"
                                                 class="w-full h-full object-cover cursor-pointer hover:scale-110 transition-transform duration-300"
                                                 onclick="openImageModal('@image.Src', '@(image.Alt ?? "Product image")')" />
                                        </div>
                                        @if (!string.IsNullOrEmpty(image.Alt))
                                        {
                                            <p class="text-xs text-center text-slate-500 dark:text-slate-400 mt-1 truncate" title="@image.Alt">@image.Alt</p>
                                        }
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                }

                <!-- Variants Card -->
                @if (Model.Product.Variants.Any())
                {
                    <div class="relative flex flex-col min-w-0 mb-6 break-words bg-white border-0 shadow-soft-xl rounded-2xl bg-clip-border dark:bg-gray-950 dark:shadow-soft-dark-xl">
                        <div class="p-6 pb-0 mb-0 border-b-0 rounded-t-2xl">
                            <h6 class="mb-0 font-bold dark:text-white">Variants (@Model.Product.Variants.Count)</h6>
                        </div>
                        <div class="flex-auto p-6">
                            <div class="overflow-x-auto">
                                <table class="items-center w-full mb-0 align-top border-gray-200 text-slate-500 dark:border-white/40">
                                    <thead class="align-bottom">
                                        <tr>
                                            <th class="px-4 py-3 font-bold text-left uppercase align-middle bg-transparent border-b border-gray-200 shadow-none text-xxs border-b-solid tracking-none whitespace-nowrap text-slate-400 opacity-70 dark:border-white/40 dark:text-white/80">Image</th>
                                            <th class="px-4 py-3 font-bold text-left uppercase align-middle bg-transparent border-b border-gray-200 shadow-none text-xxs border-b-solid tracking-none whitespace-nowrap text-slate-400 opacity-70 dark:border-white/40 dark:text-white/80">Title</th>
                                            <th class="px-4 py-3 font-bold text-left uppercase align-middle bg-transparent border-b border-gray-200 shadow-none text-xxs border-b-solid tracking-none whitespace-nowrap text-slate-400 opacity-70 dark:border-white/40 dark:text-white/80">SKU</th>
                                            <th class="px-4 py-3 font-bold text-left uppercase align-middle bg-transparent border-b border-gray-200 shadow-none text-xxs border-b-solid tracking-none whitespace-nowrap text-slate-400 opacity-70 dark:border-white/40 dark:text-white/80">Price</th>
                                            <th class="px-4 py-3 font-bold text-left uppercase align-middle bg-transparent border-b border-gray-200 shadow-none text-xxs border-b-solid tracking-none whitespace-nowrap text-slate-400 opacity-70 dark:border-white/40 dark:text-white/80">Options</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var variant in Model.Product.Variants)
                                        {
                                            <tr>
                                                <td class="p-4 align-middle bg-transparent border-b whitespace-nowrap dark:border-white/40">
                                                    @if (!string.IsNullOrEmpty(variant.ImageSrc))
                                                    {
                                                        <div class="w-12 h-12 rounded-lg overflow-hidden border border-slate-200 dark:border-slate-700 shadow-soft-sm">
                                                            <img src="@variant.ImageSrc"
                                                                 alt="@variant.Title"
                                                                 class="w-full h-full object-cover cursor-pointer hover:scale-110 transition-transform"
                                                                 onclick="openImageModal('@variant.ImageSrc', '@(variant.Title ?? "Variant image")')" />
                                                        </div>
                                                    }
                                                    else
                                                    {
                                                        <div class="w-12 h-12 rounded-lg bg-slate-100 dark:bg-slate-800 flex items-center justify-center">
                                                            <i class="fas fa-image text-slate-400 dark:text-slate-600"></i>
                                                        </div>
                                                    }
                                                </td>
                                                <td class="p-4 align-middle bg-transparent border-b whitespace-nowrap dark:border-white/40">
                                                    <span class="text-sm font-semibold leading-tight dark:text-white">@(variant.Title ?? "Default")</span>
                                                </td>
                                                <td class="p-4 align-middle bg-transparent border-b whitespace-nowrap dark:border-white/40">
                                                    <span class="text-xs font-semibold leading-tight text-slate-400 dark:text-white/60">@(variant.Sku ?? "N/A")</span>
                                                </td>
                                                <td class="p-4 align-middle bg-transparent border-b whitespace-nowrap dark:border-white/40">
                                                    <span class="text-sm font-semibold leading-tight dark:text-white">@(variant.Price?.ToString("C") ?? "N/A")</span>
                                                </td>
                                                <td class="p-4 align-middle bg-transparent border-b whitespace-nowrap dark:border-white/40">
                                                    <div class="flex flex-wrap gap-1">
                                                        @if (!string.IsNullOrEmpty(variant.Option1))
                                                        {
                                                            <span class="px-2 py-0.5 text-xs bg-slate-100 rounded dark:bg-slate-800 dark:text-white/70">@variant.Option1</span>
                                                        }
                                                        @if (!string.IsNullOrEmpty(variant.Option2))
                                                        {
                                                            <span class="px-2 py-0.5 text-xs bg-slate-100 rounded dark:bg-slate-800 dark:text-white/70">@variant.Option2</span>
                                                        }
                                                        @if (!string.IsNullOrEmpty(variant.Option3))
                                                        {
                                                            <span class="px-2 py-0.5 text-xs bg-slate-100 rounded dark:bg-slate-800 dark:text-white/70">@variant.Option3</span>
                                                        }
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
</div>

<!-- Image Modal -->
<div id="imageModal" class="fixed inset-0 z-50 hidden items-center justify-center bg-black/80 backdrop-blur-sm" onclick="closeImageModal()">
    <div class="relative max-w-4xl max-h-[90vh] mx-4">
        <button onclick="closeImageModal()" class="absolute -top-10 right-0 text-white hover:text-gray-300 transition-colors">
            <i class="fas fa-times text-2xl"></i>
        </button>
        <img id="modalImage" src="" alt="" class="max-w-full max-h-[85vh] object-contain rounded-lg shadow-2xl" onclick="event.stopPropagation()" />
        <p id="modalCaption" class="text-center text-white mt-3 text-sm"></p>
    </div>
</div>

@section Scripts {
    <script>
        function openImageModal(src, alt) {
            const modal = document.getElementById('imageModal');
            const image = document.getElementById('modalImage');
            const caption = document.getElementById('modalCaption');

            image.src = src;
            image.alt = alt;
            caption.textContent = alt;

            modal.classList.remove('hidden');
            modal.classList.add('flex');
            document.body.style.overflow = 'hidden';
        }

        function closeImageModal() {
            const modal = document.getElementById('imageModal');
            modal.classList.add('hidden');
            modal.classList.remove('flex');
            document.body.style.overflow = '';
        }

        // Close modal on Escape key
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') {
                closeImageModal();
            }
        });
    </script>
}
