@page "/communication/sms"
@model Algora.Web.Pages.Communication.SmsModel
@{
    ViewData["Title"] = "SMS Messaging";
}

<div class="p-4">
    <!-- Header -->
    <div class="flex flex-wrap items-center justify-between gap-4 mb-6">
        <div>
            <h1 class="text-xl font-bold text-gray-900 dark:text-white">SMS Messaging</h1>
            <p class="text-sm text-gray-500 dark:text-gray-400">Send SMS notifications and marketing messages</p>
        </div>
        <div class="flex gap-2">
            <button type="button" onclick="openTemplateModal()" class="inline-flex items-center px-4 py-2.5 text-sm font-medium text-white bg-gradient-to-br from-blue-500 to-cyan-400 rounded-lg hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-blue-300">
                <i class="fas fa-plus me-2"></i> New Template
            </button>
            <button type="button" onclick="openSendModal()" class="inline-flex items-center px-4 py-2.5 text-sm font-medium text-white bg-gradient-to-br from-purple-600 to-pink-500 rounded-lg hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-purple-300">
                <i class="fas fa-paper-plane me-2"></i> Send SMS
            </button>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="flex items-center p-4 mb-6 text-sm text-green-800 rounded-lg bg-green-50 dark:bg-gray-800 dark:text-green-400" role="alert">
            <i class="fas fa-check-circle me-2"></i>@Model.SuccessMessage
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="flex items-center p-4 mb-6 text-sm text-red-800 rounded-lg bg-red-50 dark:bg-gray-800 dark:text-red-400" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>@Model.ErrorMessage
        </div>
    }

    <!-- Stats Cards -->
    <div class="grid grid-cols-1 sm:grid-cols-2 xl:grid-cols-4 gap-4 mb-6">
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-4">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Messages Sent</p>
                    <h3 class="text-2xl font-bold text-purple-600 dark:text-purple-400">@Model.TotalSent.ToString("N0")</h3>
                </div>
                <div class="w-12 h-12 rounded-lg bg-gradient-to-br from-purple-600 to-pink-500 flex items-center justify-center">
                    <i class="fas fa-paper-plane text-white text-lg"></i>
                </div>
            </div>
        </div>
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-4">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Delivered</p>
                    <h3 class="text-2xl font-bold text-green-600 dark:text-green-400">@Model.TotalDelivered.ToString("N0")</h3>
                </div>
                <div class="w-12 h-12 rounded-lg bg-gradient-to-br from-green-500 to-lime-400 flex items-center justify-center">
                    <i class="fas fa-check-double text-white text-lg"></i>
                </div>
            </div>
        </div>
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-4">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Delivery Rate</p>
                    <h3 class="text-2xl font-bold text-blue-600 dark:text-blue-400">@Model.DeliveryRate.ToString("N1")%</h3>
                </div>
                <div class="w-12 h-12 rounded-lg bg-gradient-to-br from-blue-500 to-cyan-400 flex items-center justify-center">
                    <i class="fas fa-chart-line text-white text-lg"></i>
                </div>
            </div>
        </div>
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-4">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Total Cost</p>
                    <h3 class="text-2xl font-bold text-orange-600 dark:text-orange-400">$@Model.TotalCost.ToString("N2")</h3>
                </div>
                <div class="w-12 h-12 rounded-lg bg-gradient-to-br from-orange-500 to-yellow-400 flex items-center justify-center">
                    <i class="fas fa-dollar-sign text-white text-lg"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Tabs -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md">
        <div class="border-b border-gray-200 dark:border-gray-700">
            <ul class="flex flex-wrap -mb-px text-sm font-medium text-center" id="smsTabs" role="tablist">
                <li class="me-2" role="presentation">
                    <button class="inline-flex items-center p-4 border-b-2 border-transparent rounded-t-lg hover:text-gray-600 hover:border-gray-300 dark:hover:text-gray-300 group" id="messages-tab" data-tabs-target="#messages" type="button" role="tab">
                        <i class="fas fa-sms me-2"></i> Messages
                    </button>
                </li>
                <li class="me-2" role="presentation">
                    <button class="inline-flex items-center p-4 border-b-2 border-transparent rounded-t-lg hover:text-gray-600 hover:border-gray-300 dark:hover:text-gray-300 group" id="templates-tab" data-tabs-target="#templates" type="button" role="tab">
                        <i class="fas fa-file-alt me-2"></i> Templates
                    </button>
                </li>
                <li role="presentation">
                    <button class="inline-flex items-center p-4 border-b-2 border-transparent rounded-t-lg hover:text-gray-600 hover:border-gray-300 dark:hover:text-gray-300 group" id="settings-tab" data-tabs-target="#settings" type="button" role="tab">
                        <i class="fas fa-cog me-2"></i> Settings
                    </button>
                </li>
            </ul>
        </div>
        <div id="smsTabContent">
            <!-- Messages Tab -->
            <div class="hidden p-6" id="messages" role="tabpanel">
                @if (Model.Messages.Any())
                {
                    <div class="relative overflow-x-auto">
                        <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
                            <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                                <tr>
                                    <th scope="col" class="px-6 py-3">Recipient</th>
                                    <th scope="col" class="px-6 py-3">Message</th>
                                    <th scope="col" class="px-6 py-3 text-center">Segments</th>
                                    <th scope="col" class="px-6 py-3">Status</th>
                                    <th scope="col" class="px-6 py-3">Sent At</th>
                                    <th scope="col" class="px-6 py-3 text-right">Cost</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var msg in Model.Messages)
                                {
                                    <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-700">
                                        <td class="px-6 py-4 font-medium text-gray-900 dark:text-white">@msg.PhoneNumber</td>
                                        <td class="px-6 py-4 max-w-xs truncate">@msg.Body</td>
                                        <td class="px-6 py-4 text-center">@msg.SegmentCount</td>
                                        <td class="px-6 py-4">
                                            <span class="px-2.5 py-0.5 text-xs font-medium rounded @(msg.Status == "Delivered" ? "bg-green-100 text-green-800" : msg.Status == "Sent" ? "bg-blue-100 text-blue-800" : msg.Status == "Failed" ? "bg-red-100 text-red-800" : "bg-yellow-100 text-yellow-800")">
                                                @msg.Status
                                            </span>
                                        </td>
                                        <td class="px-6 py-4 text-sm">@msg.SentAt?.ToString("MMM dd, HH:mm")</td>
                                        <td class="px-6 py-4 text-right">@(msg.Cost.HasValue ? $"${msg.Cost:N3}" : "-")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-12">
                        <i class="fas fa-sms text-6xl text-gray-300 dark:text-gray-600 mb-4"></i>
                        <p class="text-gray-500 dark:text-gray-400 mb-4">No messages sent yet. Send your first SMS message to get started.</p>
                        <button onclick="openSendModal()" class="inline-flex items-center px-4 py-2.5 text-sm font-medium text-white bg-gradient-to-br from-purple-600 to-pink-500 rounded-lg hover:bg-gradient-to-bl">
                            <i class="fas fa-paper-plane me-2"></i> Send SMS
                        </button>
                    </div>
                }
            </div>

            <!-- Templates Tab -->
            <div class="hidden p-6" id="templates" role="tabpanel">
                @if (Model.Templates.Any())
                {
                    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                        @foreach (var template in Model.Templates)
                        {
                            <div class="bg-gray-50 dark:bg-gray-700 rounded-lg p-4">
                                <div class="flex items-center justify-between mb-2">
                                    <h4 class="font-semibold text-gray-900 dark:text-white">@template.Name</h4>
                                    <div class="flex items-center gap-2">
                                        <span class="px-2 py-0.5 text-xs font-medium rounded @(template.IsActive ? "bg-green-100 text-green-800" : "bg-gray-100 text-gray-800")">
                                            @(template.IsActive ? "Active" : "Inactive")
                                        </span>
                                        <button class="text-gray-400 hover:text-gray-600"><i class="fas fa-edit"></i></button>
                                    </div>
                                </div>
                                <span class="text-xs text-purple-600 dark:text-purple-400 font-medium">@template.TemplateType</span>
                                <p class="text-sm text-gray-500 dark:text-gray-400 mt-2 line-clamp-3">@template.Body</p>
                                <div class="flex items-center justify-between mt-3 pt-3 border-t border-gray-200 dark:border-gray-600">
                                    <span class="text-xs text-gray-400">@template.CreatedAt.ToString("MMM dd, yyyy")</span>
                                    <button onclick="useTemplate('@template.Body.Replace("'", "\\'").Replace("\n", "\\n")')" class="text-sm text-purple-600 hover:text-purple-800 dark:text-purple-400">
                                        <i class="fas fa-paper-plane me-1"></i> Use
                                    </button>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="text-center py-12">
                        <i class="fas fa-file-alt text-6xl text-gray-300 dark:text-gray-600 mb-4"></i>
                        <p class="text-gray-500 dark:text-gray-400 mb-4">No templates yet. Create reusable SMS templates.</p>
                        <button onclick="openTemplateModal()" class="inline-flex items-center px-4 py-2.5 text-sm font-medium text-white bg-gradient-to-br from-blue-500 to-cyan-400 rounded-lg hover:bg-gradient-to-bl">
                            <i class="fas fa-plus me-2"></i> Create Template
                        </button>
                    </div>
                }
            </div>

            <!-- Settings Tab -->
            <div class="hidden p-6" id="settings" role="tabpanel">
                <form method="post" asp-page-handler="SaveSettings">
                    <div class="max-w-2xl">
                        <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">SMS Provider Settings</h3>

                        <div class="mb-4">
                            <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">Provider</label>
                            <select asp-for="SmsSettings.Provider" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white">
                                <option value="twilio">Twilio</option>
                                <option value="nexmo">Nexmo / Vonage</option>
                                <option value="messagebird">MessageBird</option>
                            </select>
                        </div>

                        <div class="mb-4">
                            <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">From Number</label>
                            <input type="text" asp-for="SmsSettings.FromNumber" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white" placeholder="+1234567890" />
                            <p class="mt-1 text-xs text-gray-500">Your registered sender number</p>
                        </div>

                        <div class="grid grid-cols-2 gap-4 mb-4">
                            <div>
                                <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">Account SID / API Key</label>
                                <input type="text" asp-for="SmsSettings.AccountSid" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white" />
                            </div>
                            <div>
                                <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">Auth Token / API Secret</label>
                                <input type="password" asp-for="SmsSettings.AuthToken" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white" />
                            </div>
                        </div>

                        <div class="flex gap-3">
                            <button type="submit" class="inline-flex items-center px-6 py-2.5 text-sm font-medium text-white bg-gradient-to-br from-purple-600 to-pink-500 rounded-lg hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-purple-300">
                                <i class="fas fa-save me-2"></i> Save Settings
                            </button>
                            <button type="button" onclick="testConnection()" class="inline-flex items-center px-6 py-2.5 text-sm font-medium text-gray-900 bg-white border border-gray-300 rounded-lg hover:bg-gray-100 dark:bg-gray-800 dark:text-white dark:border-gray-600 dark:hover:bg-gray-700">
                                <i class="fas fa-plug me-2"></i> Test Connection
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Send SMS Modal -->
<div id="sendModal" class="fixed inset-0 bg-gray-900/50 backdrop-blur-sm hidden items-center justify-center z-50">
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-xl max-w-lg w-full mx-4">
        <div class="p-6">
            <div class="flex items-center justify-between mb-4">
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Send SMS Message</h3>
                <button type="button" onclick="closeSendModal()" class="text-gray-400 hover:text-gray-600 dark:hover:text-white">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            <form method="post" asp-page-handler="SendMessage">
                <div class="mb-4">
                    <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">Phone Number</label>
                    <input type="tel" name="phoneNumber" id="phoneNumber" required class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white" placeholder="+1234567890" />
                </div>
                <div class="mb-4">
                    <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">Message</label>
                    <textarea name="body" id="smsBody" rows="4" required maxlength="1600" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white" placeholder="Enter your message..."></textarea>
                    <div class="flex justify-between mt-1">
                        <span class="text-xs text-gray-500"><span id="charCount">0</span>/160 characters</span>
                        <span class="text-xs text-gray-500"><span id="segmentCount">1</span> segment(s)</span>
                    </div>
                </div>
                <div class="flex justify-end gap-3">
                    <button type="button" onclick="closeSendModal()" class="px-4 py-2.5 text-sm font-medium text-gray-900 bg-white border border-gray-300 rounded-lg hover:bg-gray-100 dark:bg-gray-800 dark:text-white dark:border-gray-600 dark:hover:bg-gray-700">Cancel</button>
                    <button type="submit" class="px-4 py-2.5 text-sm font-medium text-white bg-gradient-to-br from-purple-600 to-pink-500 rounded-lg hover:bg-gradient-to-bl">
                        <i class="fas fa-paper-plane me-2"></i> Send
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Create Template Modal -->
<div id="templateModal" class="fixed inset-0 bg-gray-900/50 backdrop-blur-sm hidden items-center justify-center z-50">
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-xl max-w-lg w-full mx-4">
        <div class="p-6">
            <div class="flex items-center justify-between mb-4">
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Create SMS Template</h3>
                <button type="button" onclick="closeTemplateModal()" class="text-gray-400 hover:text-gray-600 dark:hover:text-white">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            <form method="post" asp-page-handler="CreateTemplate">
                <div class="mb-4">
                    <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">Template Name</label>
                    <input type="text" name="name" required class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white" placeholder="Order Confirmation" />
                </div>
                <div class="mb-4">
                    <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">Template Type</label>
                    <select name="templateType" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white">
                        <option value="transactional">Transactional</option>
                        <option value="marketing">Marketing</option>
                        <option value="notification">Notification</option>
                    </select>
                </div>
                <div class="mb-4">
                    <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">Message Body</label>
                    <textarea name="body" rows="4" required class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white" placeholder="Hi {name}, your order #{order_number} has been confirmed!"></textarea>
                    <p class="mt-1 text-xs text-gray-500">Use {name}, {order_number}, etc. for variables</p>
                </div>
                <div class="flex justify-end gap-3">
                    <button type="button" onclick="closeTemplateModal()" class="px-4 py-2.5 text-sm font-medium text-gray-900 bg-white border border-gray-300 rounded-lg hover:bg-gray-100 dark:bg-gray-800 dark:text-white dark:border-gray-600 dark:hover:bg-gray-700">Cancel</button>
                    <button type="submit" class="px-4 py-2.5 text-sm font-medium text-white bg-gradient-to-br from-blue-500 to-cyan-400 rounded-lg hover:bg-gradient-to-bl">Create Template</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const tabs = document.querySelectorAll('[role="tab"]');
            const panels = document.querySelectorAll('[role="tabpanel"]');

            tabs[0].classList.add('text-purple-600', 'border-purple-600');
            tabs[0].setAttribute('aria-selected', 'true');
            panels[0].classList.remove('hidden');

            tabs.forEach(tab => {
                tab.addEventListener('click', () => {
                    tabs.forEach(t => {
                        t.classList.remove('text-purple-600', 'border-purple-600');
                        t.setAttribute('aria-selected', 'false');
                    });
                    panels.forEach(p => p.classList.add('hidden'));

                    tab.classList.add('text-purple-600', 'border-purple-600');
                    tab.setAttribute('aria-selected', 'true');
                    document.querySelector(tab.dataset.tabsTarget).classList.remove('hidden');
                });
            });

            // SMS character counter
            const smsBody = document.getElementById('smsBody');
            if (smsBody) {
                smsBody.addEventListener('input', updateCharCount);
            }
        });

        function updateCharCount() {
            const body = document.getElementById('smsBody').value;
            const charCount = body.length;
            document.getElementById('charCount').textContent = charCount;

            // Calculate segments (160 chars for GSM-7, 70 for Unicode)
            const isUnicode = /[^\x00-\x7F]/.test(body);
            const charsPerSegment = isUnicode ? 70 : 160;
            const segments = Math.ceil(charCount / charsPerSegment) || 1;
            document.getElementById('segmentCount').textContent = segments;
        }

        function openSendModal() {
            document.getElementById('sendModal').classList.remove('hidden');
            document.getElementById('sendModal').classList.add('flex');
        }

        function closeSendModal() {
            document.getElementById('sendModal').classList.add('hidden');
            document.getElementById('sendModal').classList.remove('flex');
        }

        function openTemplateModal() {
            document.getElementById('templateModal').classList.remove('hidden');
            document.getElementById('templateModal').classList.add('flex');
        }

        function closeTemplateModal() {
            document.getElementById('templateModal').classList.add('hidden');
            document.getElementById('templateModal').classList.remove('flex');
        }

        function useTemplate(body) {
            document.getElementById('smsBody').value = body;
            updateCharCount();
            openSendModal();
        }

        function testConnection() {
            alert('Testing SMS provider connection...');
        }
    </script>
}
