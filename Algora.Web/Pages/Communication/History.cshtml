@page "/communication/history"
@model Algora.Web.Pages.Communication.HistoryModel
@{
    ViewData["Title"] = "Communication History";
    ViewData["Breadcrumb"] = "Communication History";
}

<!-- Stats Cards -->
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 mb-6">
    <div class="bg-white dark:bg-gray-800 rounded-xl p-5 border border-gray-200 dark:border-gray-700">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm text-gray-500 dark:text-gray-400">Total Sent</p>
                <p class="text-2xl font-semibold text-gray-900 dark:text-white mt-1">@Model.Stats.TotalSent.ToString("N0")</p>
            </div>
            <div class="w-12 h-12 rounded-xl bg-blue-100 dark:bg-blue-900/30 flex items-center justify-center">
                <i class="fas fa-paper-plane text-blue-600 dark:text-blue-400"></i>
            </div>
        </div>
        <div class="mt-3 flex items-center gap-4 text-xs">
            <span class="text-gray-500"><i class="fas fa-envelope me-1"></i>@Model.Stats.EmailCount</span>
            <span class="text-gray-500"><i class="fas fa-comment-sms me-1"></i>@Model.Stats.SmsCount</span>
            <span class="text-gray-500"><i class="fab fa-whatsapp me-1"></i>@Model.Stats.WhatsAppCount</span>
        </div>
    </div>

    <div class="bg-white dark:bg-gray-800 rounded-xl p-5 border border-gray-200 dark:border-gray-700">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm text-gray-500 dark:text-gray-400">Delivered</p>
                <p class="text-2xl font-semibold text-gray-900 dark:text-white mt-1">@Model.Stats.TotalDelivered.ToString("N0")</p>
            </div>
            <div class="w-12 h-12 rounded-xl bg-green-100 dark:bg-green-900/30 flex items-center justify-center">
                <i class="fas fa-check-circle text-green-600 dark:text-green-400"></i>
            </div>
        </div>
        <p class="text-xs text-gray-500 mt-3">
            <span class="text-green-600 dark:text-green-400 font-medium">@Model.Stats.DeliveryRate.ToString("F1")%</span> delivery rate
        </p>
    </div>

    <div class="bg-white dark:bg-gray-800 rounded-xl p-5 border border-gray-200 dark:border-gray-700">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm text-gray-500 dark:text-gray-400">Opened</p>
                <p class="text-2xl font-semibold text-gray-900 dark:text-white mt-1">@Model.Stats.TotalOpened.ToString("N0")</p>
            </div>
            <div class="w-12 h-12 rounded-xl bg-purple-100 dark:bg-purple-900/30 flex items-center justify-center">
                <i class="fas fa-envelope-open text-purple-600 dark:text-purple-400"></i>
            </div>
        </div>
        <p class="text-xs text-gray-500 mt-3">
            <span class="text-purple-600 dark:text-purple-400 font-medium">@Model.Stats.OpenRate.ToString("F1")%</span> open rate
        </p>
    </div>

    <div class="bg-white dark:bg-gray-800 rounded-xl p-5 border border-gray-200 dark:border-gray-700">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm text-gray-500 dark:text-gray-400">Failed</p>
                <p class="text-2xl font-semibold text-gray-900 dark:text-white mt-1">@Model.Stats.TotalFailed.ToString("N0")</p>
            </div>
            <div class="w-12 h-12 rounded-xl bg-red-100 dark:bg-red-900/30 flex items-center justify-center">
                <i class="fas fa-exclamation-circle text-red-600 dark:text-red-400"></i>
            </div>
        </div>
        <p class="text-xs text-gray-500 mt-3">
            <span class="text-orange-600 dark:text-orange-400 font-medium">@Model.Stats.ClickRate.ToString("F1")%</span> click rate
        </p>
    </div>
</div>

<!-- Filters and History Table -->
<div class="bg-white dark:bg-gray-800 rounded-xl border border-gray-200 dark:border-gray-700">
    <!-- Header with Filters -->
    <div class="p-4 border-b border-gray-200 dark:border-gray-700">
        <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-4">
            <h2 class="text-lg font-semibold text-gray-900 dark:text-white">Communication History</h2>

            <div class="flex flex-wrap items-center gap-3">
                <!-- Channel Filter -->
                <select id="channelFilter" onchange="applyFilters()" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 p-2 dark:bg-gray-700 dark:border-gray-600 dark:text-white">
                    <option value="all" selected>All Channels</option>
                    <option value="email">Email</option>
                    <option value="sms">SMS</option>
                    <option value="whatsapp">WhatsApp</option>
                </select>

                <!-- Status Filter -->
                <select id="statusFilter" onchange="applyFilters()" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 p-2 dark:bg-gray-700 dark:border-gray-600 dark:text-white">
                    <option value="all" selected>All Status</option>
                    <option value="sent">Sent</option>
                    <option value="delivered">Delivered</option>
                    <option value="failed">Failed</option>
                    <option value="bounced">Bounced</option>
                </select>

                <!-- Date Range -->
                <input type="date" id="fromDate" onchange="applyFilters()" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 p-2 dark:bg-gray-700 dark:border-gray-600 dark:text-white" />
                <span class="text-gray-500 dark:text-gray-400">to</span>
                <input type="date" id="toDate" onchange="applyFilters()" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 p-2 dark:bg-gray-700 dark:border-gray-600 dark:text-white" />

                <!-- Search -->
                <div class="relative">
                    <input type="text" id="searchInput" placeholder="Search recipient..." onkeyup="debounceSearch()" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 p-2 pl-9 dark:bg-gray-700 dark:border-gray-600 dark:text-white w-48" />
                    <i class="fas fa-search absolute left-3 top-1/2 -translate-y-1/2 text-gray-400 text-sm"></i>
                </div>

                <!-- Export -->
                <button onclick="exportHistory()" class="px-3 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 dark:bg-gray-700 dark:text-white dark:border-gray-600 dark:hover:bg-gray-600">
                    <i class="fas fa-download me-1"></i> Export
                </button>
            </div>
        </div>
    </div>

    <!-- Table -->
    <div class="overflow-x-auto">
        <table class="w-full text-sm text-left">
            <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                <tr>
                    <th class="px-4 py-3">Channel</th>
                    <th class="px-4 py-3">Recipient</th>
                    <th class="px-4 py-3">Subject / Preview</th>
                    <th class="px-4 py-3">Type</th>
                    <th class="px-4 py-3">Status</th>
                    <th class="px-4 py-3">Sent At</th>
                    <th class="px-4 py-3">Delivered</th>
                    <th class="px-4 py-3">Opened</th>
                </tr>
            </thead>
            <tbody id="historyTableBody">
                @foreach (var item in Model.History.Items)
                {
                    <tr class="border-b border-gray-200 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-700/50">
                        <td class="px-4 py-3">
                            @if (item.Channel == "email")
                            {
                                <span class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800 dark:bg-blue-900/30 dark:text-blue-400">
                                    <i class="fas fa-envelope"></i> Email
                                </span>
                            }
                            else if (item.Channel == "sms")
                            {
                                <span class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-full text-xs font-medium bg-purple-100 text-purple-800 dark:bg-purple-900/30 dark:text-purple-400">
                                    <i class="fas fa-comment-sms"></i> SMS
                                </span>
                            }
                            else if (item.Channel == "whatsapp")
                            {
                                <span class="inline-flex items-center gap-1.5 px-2.5 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800 dark:bg-green-900/30 dark:text-green-400">
                                    <i class="fab fa-whatsapp"></i> WhatsApp
                                </span>
                            }
                        </td>
                        <td class="px-4 py-3">
                            <div class="font-medium text-gray-900 dark:text-white">
                                @(item.RecipientName ?? item.RecipientEmail ?? item.RecipientPhone)
                            </div>
                            @if (!string.IsNullOrEmpty(item.RecipientEmail) && !string.IsNullOrEmpty(item.RecipientName))
                            {
                                <div class="text-xs text-gray-500">@item.RecipientEmail</div>
                            }
                            @if (!string.IsNullOrEmpty(item.RecipientPhone) && item.Channel != "email")
                            {
                                <div class="text-xs text-gray-500">@item.RecipientPhone</div>
                            }
                        </td>
                        <td class="px-4 py-3 max-w-xs">
                            @if (!string.IsNullOrEmpty(item.Subject))
                            {
                                <div class="font-medium text-gray-900 dark:text-white truncate">@item.Subject</div>
                            }
                            @if (!string.IsNullOrEmpty(item.Preview))
                            {
                                <div class="text-xs text-gray-500 truncate">@item.Preview</div>
                            }
                            @if (!string.IsNullOrEmpty(item.CampaignName))
                            {
                                <div class="text-xs text-purple-600 dark:text-purple-400">@item.CampaignName</div>
                            }
                        </td>
                        <td class="px-4 py-3">
                            <span class="text-xs text-gray-600 dark:text-gray-400 capitalize">@item.Type</span>
                        </td>
                        <td class="px-4 py-3">
                            @{
                                var statusColor = item.Status switch
                                {
                                    "delivered" => "bg-green-100 text-green-800 dark:bg-green-900/30 dark:text-green-400",
                                    "sent" => "bg-blue-100 text-blue-800 dark:bg-blue-900/30 dark:text-blue-400",
                                    "opened" => "bg-purple-100 text-purple-800 dark:bg-purple-900/30 dark:text-purple-400",
                                    "clicked" => "bg-indigo-100 text-indigo-800 dark:bg-indigo-900/30 dark:text-indigo-400",
                                    "failed" or "bounced" => "bg-red-100 text-red-800 dark:bg-red-900/30 dark:text-red-400",
                                    "pending" => "bg-yellow-100 text-yellow-800 dark:bg-yellow-900/30 dark:text-yellow-400",
                                    _ => "bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-400"
                                };
                            }
                            <span class="px-2 py-1 rounded-full text-xs font-medium @statusColor capitalize">@item.Status</span>
                        </td>
                        <td class="px-4 py-3 text-gray-600 dark:text-gray-400 text-xs">
                            @(item.SentAt?.ToString("MMM dd, yyyy HH:mm") ?? "-")
                        </td>
                        <td class="px-4 py-3 text-gray-600 dark:text-gray-400 text-xs">
                            @if (item.DeliveredAt.HasValue)
                            {
                                <span class="text-green-600 dark:text-green-400"><i class="fas fa-check me-1"></i>@item.DeliveredAt.Value.ToString("HH:mm")</span>
                            }
                            else
                            {
                                <span>-</span>
                            }
                        </td>
                        <td class="px-4 py-3 text-gray-600 dark:text-gray-400 text-xs">
                            @if (item.OpenedAt.HasValue)
                            {
                                <span class="text-purple-600 dark:text-purple-400"><i class="fas fa-eye me-1"></i>@item.OpenedAt.Value.ToString("HH:mm")</span>
                            }
                            else
                            {
                                <span>-</span>
                            }
                        </td>
                    </tr>
                }
                @if (!Model.History.Items.Any())
                {
                    <tr>
                        <td colspan="8" class="px-4 py-12 text-center text-gray-500 dark:text-gray-400">
                            <i class="fas fa-inbox text-4xl mb-3 opacity-50"></i>
                            <p>No communication history found</p>
                            <p class="text-sm mt-1">Start sending emails, SMS, or WhatsApp messages to see them here</p>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Pagination -->
    @if (Model.History.TotalPages > 1)
    {
        <div class="px-4 py-3 border-t border-gray-200 dark:border-gray-700 flex items-center justify-between">
            <div class="text-sm text-gray-500 dark:text-gray-400">
                Showing @((Model.History.Page - 1) * Model.History.PageSize + 1) to @Math.Min(Model.History.Page * Model.History.PageSize, Model.History.TotalCount) of @Model.History.TotalCount results
            </div>
            <div class="flex items-center gap-2">
                @if (Model.History.Page > 1)
                {
                    <a href="?page=@(Model.History.Page - 1)&channel=@Model.ChannelFilter&status=@Model.StatusFilter" class="px-3 py-1.5 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 dark:bg-gray-700 dark:text-white dark:border-gray-600">
                        <i class="fas fa-chevron-left me-1"></i> Previous
                    </a>
                }
                <span class="px-3 py-1.5 text-sm text-gray-600 dark:text-gray-400">Page @Model.History.Page of @Model.History.TotalPages</span>
                @if (Model.History.Page < Model.History.TotalPages)
                {
                    <a href="?page=@(Model.History.Page + 1)&channel=@Model.ChannelFilter&status=@Model.StatusFilter" class="px-3 py-1.5 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 dark:bg-gray-700 dark:text-white dark:border-gray-600">
                        Next <i class="fas fa-chevron-right ms-1"></i>
                    </a>
                }
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        let searchTimeout;

        function debounceSearch() {
            clearTimeout(searchTimeout);
            searchTimeout = setTimeout(applyFilters, 300);
        }

        function applyFilters() {
            const channel = document.getElementById('channelFilter').value;
            const status = document.getElementById('statusFilter').value;
            const fromDate = document.getElementById('fromDate').value;
            const toDate = document.getElementById('toDate').value;
            const search = document.getElementById('searchInput').value;

            let url = '?page=1';
            if (channel && channel !== 'all') url += '&channel=' + channel;
            if (status && status !== 'all') url += '&status=' + status;
            if (fromDate) url += '&fromDate=' + fromDate;
            if (toDate) url += '&toDate=' + toDate;
            if (search) url += '&search=' + encodeURIComponent(search);

            window.location.href = url;
        }

        function exportHistory() {
            const channel = document.getElementById('channelFilter').value;
            const status = document.getElementById('statusFilter').value;
            const fromDate = document.getElementById('fromDate').value;
            const toDate = document.getElementById('toDate').value;

            let url = '?handler=Export';
            if (channel && channel !== 'all') url += '&channel=' + channel;
            if (status && status !== 'all') url += '&status=' + status;
            if (fromDate) url += '&fromDate=' + fromDate;
            if (toDate) url += '&toDate=' + toDate;

            window.location.href = url;
        }

        // Set current filter values from URL
        document.addEventListener('DOMContentLoaded', function() {
            const params = new URLSearchParams(window.location.search);
            if (params.get('channel')) document.getElementById('channelFilter').value = params.get('channel');
            if (params.get('status')) document.getElementById('statusFilter').value = params.get('status');
            if (params.get('fromDate')) document.getElementById('fromDate').value = params.get('fromDate');
            if (params.get('toDate')) document.getElementById('toDate').value = params.get('toDate');
            if (params.get('search')) document.getElementById('searchInput').value = params.get('search');
        });
    </script>
}
