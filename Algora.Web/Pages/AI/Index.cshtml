@page
@model Algora.Web.Pages.AI.IndexModel
@{
    ViewData["Title"] = "AI Tools";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-1">AI Tools</h1>
            <p class="text-muted mb-0">Leverage AI to enhance your product content and customer experience</p>
        </div>
    </div>

    <!-- AI Tools Grid -->
    <div class="row g-4">
        <!-- Product Description Generator -->
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="rounded-circle bg-primary bg-opacity-10 p-3 me-3">
                            <i class="fas fa-file-alt text-primary fa-lg"></i>
                        </div>
                        <div>
                            <h5 class="card-title mb-0">Description Generator</h5>
                            <small class="text-muted">Generate compelling product descriptions</small>
                        </div>
                    </div>
                    <p class="card-text text-muted">
                        Create engaging, SEO-friendly product descriptions using AI. Supports multiple tones and bulk generation.
                    </p>
                    <ul class="list-unstyled small text-muted mb-3">
                        <li><i class="fas fa-check text-success me-2"></i>Professional, casual, luxury tones</li>
                        <li><i class="fas fa-check text-success me-2"></i>Bulk generation for multiple products</li>
                        <li><i class="fas fa-check text-success me-2"></i>One-click apply to products</li>
                    </ul>
                </div>
                <div class="card-footer bg-transparent border-0 pt-0">
                    <a href="/AI/Descriptions" class="btn btn-primary w-100">
                        <i class="fas fa-magic me-2"></i>Generate Descriptions
                    </a>
                </div>
            </div>
        </div>

        <!-- SEO Optimizer -->
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="rounded-circle bg-success bg-opacity-10 p-3 me-3">
                            <i class="fas fa-search text-success fa-lg"></i>
                        </div>
                        <div>
                            <h5 class="card-title mb-0">SEO Optimizer</h5>
                            <small class="text-muted">Optimize meta tags for search engines</small>
                        </div>
                    </div>
                    <p class="card-text text-muted">
                        Generate optimized meta titles, descriptions, and keywords to improve search rankings.
                    </p>
                    <ul class="list-unstyled small text-muted mb-3">
                        <li><i class="fas fa-check text-success me-2"></i>Meta title optimization (60 chars)</li>
                        <li><i class="fas fa-check text-success me-2"></i>Meta description (155 chars)</li>
                        <li><i class="fas fa-check text-success me-2"></i>Keyword suggestions</li>
                    </ul>
                </div>
                <div class="card-footer bg-transparent border-0 pt-0">
                    <a href="/AI/Seo" class="btn btn-success w-100">
                        <i class="fas fa-chart-line me-2"></i>Optimize SEO
                    </a>
                </div>
            </div>
        </div>

        <!-- Alt-Text Generator -->
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="rounded-circle bg-info bg-opacity-10 p-3 me-3">
                            <i class="fas fa-image text-info fa-lg"></i>
                        </div>
                        <div>
                            <h5 class="card-title mb-0">Alt-Text Generator</h5>
                            <small class="text-muted">Generate accessible image descriptions</small>
                        </div>
                    </div>
                    <p class="card-text text-muted">
                        Create descriptive alt text for product images to improve accessibility and SEO.
                    </p>
                    <ul class="list-unstyled small text-muted mb-3">
                        <li><i class="fas fa-check text-success me-2"></i>AI-powered image analysis</li>
                        <li><i class="fas fa-check text-success me-2"></i>Accessibility compliant</li>
                        <li><i class="fas fa-check text-success me-2"></i>Bulk generation support</li>
                    </ul>
                </div>
                <div class="card-footer bg-transparent border-0 pt-0">
                    <a href="/AI/AltText" class="btn btn-info w-100 text-white">
                        <i class="fas fa-universal-access me-2"></i>Generate Alt-Text
                    </a>
                </div>
            </div>
        </div>

        <!-- Customer Chatbot -->
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="rounded-circle bg-warning bg-opacity-10 p-3 me-3">
                            <i class="fas fa-robot text-warning fa-lg"></i>
                        </div>
                        <div>
                            <h5 class="card-title mb-0">Customer Chatbot</h5>
                            <small class="text-muted">AI-powered customer support</small>
                        </div>
                    </div>
                    <p class="card-text text-muted">
                        Deploy an AI chatbot in your customer portal for 24/7 self-service support.
                    </p>
                    <ul class="list-unstyled small text-muted mb-3">
                        <li><i class="fas fa-check text-success me-2"></i>Order status lookups</li>
                        <li><i class="fas fa-check text-success me-2"></i>Return/exchange assistance</li>
                        <li><i class="fas fa-check text-success me-2"></i>Escalation to human agents</li>
                    </ul>
                </div>
                <div class="card-footer bg-transparent border-0 pt-0">
                    <a href="/AI/Chatbot" class="btn btn-warning w-100">
                        <i class="fas fa-comments me-2"></i>Configure Chatbot
                    </a>
                </div>
            </div>
        </div>

        <!-- Pricing Optimizer -->
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="rounded-circle bg-danger bg-opacity-10 p-3 me-3">
                            <i class="fas fa-dollar-sign text-danger fa-lg"></i>
                        </div>
                        <div>
                            <h5 class="card-title mb-0">Pricing Optimizer</h5>
                            <small class="text-muted">AI-powered pricing suggestions</small>
                        </div>
                    </div>
                    <p class="card-text text-muted">
                        Get intelligent pricing recommendations based on costs, margins, and market data.
                    </p>
                    <ul class="list-unstyled small text-muted mb-3">
                        <li><i class="fas fa-check text-success me-2"></i>Margin analysis</li>
                        <li><i class="fas fa-check text-success me-2"></i>Price range suggestions</li>
                        <li><i class="fas fa-check text-success me-2"></i>Reasoning explanations</li>
                    </ul>
                </div>
                <div class="card-footer bg-transparent border-0 pt-0">
                    <a href="/AI/Pricing" class="btn btn-danger w-100">
                        <i class="fas fa-tags me-2"></i>Optimize Pricing
                    </a>
                </div>
            </div>
        </div>

        <!-- AI Usage Stats -->
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 border-0 shadow-sm bg-gradient" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                <div class="card-body text-white">
                    <div class="d-flex align-items-center mb-3">
                        <div class="rounded-circle bg-white bg-opacity-25 p-3 me-3">
                            <i class="fas fa-chart-bar fa-lg"></i>
                        </div>
                        <div>
                            <h5 class="card-title mb-0">AI Usage</h5>
                            <small class="text-white-50">This month's statistics</small>
                        </div>
                    </div>
                    <div class="row text-center mt-4">
                        <div class="col-4">
                            <h3 class="mb-0">@Model.DescriptionsGenerated</h3>
                            <small class="text-white-50">Descriptions</small>
                        </div>
                        <div class="col-4">
                            <h3 class="mb-0">@Model.SeoOptimized</h3>
                            <small class="text-white-50">SEO Tags</small>
                        </div>
                        <div class="col-4">
                            <h3 class="mb-0">@Model.ChatbotMessages</h3>
                            <small class="text-white-50">Chat Messages</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Provider Status -->
    <div class="card border-0 shadow-sm mt-4">
        <div class="card-header bg-transparent">
            <h5 class="mb-0"><i class="fas fa-plug me-2"></i>AI Provider Status</h5>
        </div>
        <div class="card-body">
            <div class="row g-3">
                @foreach (var provider in Model.Providers)
                {
                    <div class="col-md-4">
                        <div class="d-flex align-items-center p-3 border rounded">
                            <div class="me-3">
                                @if (provider.IsConfigured)
                                {
                                    <span class="badge bg-success rounded-pill">
                                        <i class="fas fa-check"></i>
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary rounded-pill">
                                        <i class="fas fa-times"></i>
                                    </span>
                                }
                            </div>
                            <div>
                                <h6 class="mb-0">@provider.DisplayName</h6>
                                <small class="text-muted">@(provider.IsConfigured ? "Configured" : "Not configured")</small>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
