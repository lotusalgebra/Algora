@page
@model Algora.Web.Pages.AI.AltTextModel
@{
    ViewData["Title"] = "Image Alt-Text Generator";
}

<div class="p-4">
    <!-- Header -->
    <div class="flex flex-wrap justify-between items-center mb-6">
        <div>
            <nav class="flex mb-2" aria-label="Breadcrumb">
                <ol class="inline-flex items-center space-x-1 md:space-x-3">
                    <li class="inline-flex items-center">
                        <a href="/AI" class="inline-flex items-center text-sm font-medium text-gray-700 hover:text-purple-600 dark:text-gray-400 dark:hover:text-white">
                            AI Tools
                        </a>
                    </li>
                    <li>
                        <div class="flex items-center">
                            <i class="fas fa-chevron-right text-gray-400 mx-2 text-xs"></i>
                            <span class="text-sm font-medium text-gray-500 dark:text-gray-400">Alt-Text Generator</span>
                        </div>
                    </li>
                </ol>
            </nav>
            <h1 class="text-2xl font-bold text-gray-900 dark:text-white">Image Alt-Text Generator</h1>
        </div>
        <button type="button" id="bulkGenerateBtn" disabled class="inline-flex items-center px-4 py-2 text-sm font-medium text-white bg-gradient-to-br from-purple-600 to-pink-500 rounded-lg hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-purple-300 dark:focus:ring-purple-800 disabled:opacity-50 disabled:cursor-not-allowed">
            <i class="fas fa-wand-magic-sparkles mr-2"></i>Generate Missing Alt-Text
        </button>
    </div>

    <!-- Stats -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6 text-center">
            <h3 class="text-3xl font-bold text-gray-900 dark:text-white">@Model.TotalProducts</h3>
            <p class="text-sm text-gray-500 dark:text-gray-400">Total Products</p>
        </div>
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6 text-center">
            <h3 class="text-3xl font-bold text-green-600 dark:text-green-400">@Model.WithAltText</h3>
            <p class="text-sm text-gray-500 dark:text-gray-400">With Alt-Text</p>
        </div>
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6 text-center">
            <h3 class="text-3xl font-bold text-yellow-600 dark:text-yellow-400">@Model.MissingAltText</h3>
            <p class="text-sm text-gray-500 dark:text-gray-400">Missing Alt-Text</p>
        </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <!-- Product List -->
        <div class="lg:col-span-1">
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md">
                <div class="p-6 border-b border-gray-200 dark:border-gray-700">
                    <h5 class="text-lg font-semibold text-gray-900 dark:text-white">
                        <i class="fas fa-images mr-2"></i>Products
                    </h5>
                </div>
                <div class="p-6">
                    <div class="mb-4">
                        <input type="text" id="productSearch" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white" placeholder="Search products..." />
                    </div>
                    <div class="flex items-center mb-4">
                        <input id="showMissingOnly" type="checkbox" class="w-4 h-4 text-purple-600 bg-gray-100 border-gray-300 rounded focus:ring-purple-500 dark:focus:ring-purple-600 dark:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600">
                        <label for="showMissingOnly" class="ml-2 text-sm font-medium text-gray-900 dark:text-gray-300">Show only products missing alt-text</label>
                    </div>
                    <div id="productList" class="space-y-1 max-h-96 overflow-y-auto">
                        @foreach (var product in Model.Products)
                        {
                            <a href="#" class="product-item block p-3 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-700 cursor-pointer transition-colors"
                               data-id="@product.Id"
                               data-title="@product.Title"
                               data-has-alt="@(product.HasAltText ? "true" : "false")">
                                <div class="flex justify-between items-center">
                                    <div class="min-w-0 flex-1">
                                        <h6 class="font-medium text-gray-900 dark:text-white text-sm truncate">@product.Title</h6>
                                        <small class="text-gray-500 dark:text-gray-400">@product.ImageCount image(s)</small>
                                    </div>
                                    @if (product.HasAltText)
                                    {
                                        <span class="bg-green-100 text-green-800 text-xs font-medium p-1.5 rounded-full dark:bg-green-900 dark:text-green-300">
                                            <i class="fas fa-check"></i>
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="bg-yellow-100 text-yellow-800 text-xs font-medium p-1.5 rounded-full dark:bg-yellow-900 dark:text-yellow-300">
                                            <i class="fas fa-exclamation"></i>
                                        </span>
                                    }
                                </div>
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Alt-Text Panel -->
        <div class="lg:col-span-2">
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md">
                <div class="p-6 border-b border-gray-200 dark:border-gray-700 flex justify-between items-center">
                    <h5 class="text-lg font-semibold text-gray-900 dark:text-white">
                        <i class="fas fa-image mr-2"></i>Image Alt-Text
                    </h5>
                    <button type="button" id="generateBtn" disabled class="inline-flex items-center px-4 py-2 text-sm font-medium text-white bg-gradient-to-br from-purple-600 to-pink-500 rounded-lg hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-purple-300 dark:focus:ring-purple-800 disabled:opacity-50 disabled:cursor-not-allowed">
                        <i class="fas fa-magic mr-2"></i>Generate Alt-Text
                    </button>
                </div>
                <div class="p-6">
                    <div id="noProductSelected" class="text-center py-12">
                        <i class="fas fa-image text-6xl text-gray-300 dark:text-gray-600 mb-4"></i>
                        <p class="text-gray-500 dark:text-gray-400">Select a product to view and edit alt-text</p>
                    </div>

                    <div id="altTextPanel" class="hidden">
                        <div class="mb-6 p-4 bg-gray-50 dark:bg-gray-700 rounded-lg">
                            <h5 id="selectedProductTitle" class="font-semibold text-gray-900 dark:text-white"></h5>
                        </div>

                        <div id="loadingPanel" class="text-center py-8 hidden">
                            <div role="status">
                                <svg aria-hidden="true" class="inline w-10 h-10 text-gray-200 animate-spin dark:text-gray-600 fill-blue-500" viewBox="0 0 100 101" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M100 50.5908C100 78.2051 77.6142 100.591 50 100.591C22.3858 100.591 0 78.2051 0 50.5908C0 22.9766 22.3858 0.59082 50 0.59082C77.6142 0.59082 100 22.9766 100 50.5908ZM9.08144 50.5908C9.08144 73.1895 27.4013 91.5094 50 91.5094C72.5987 91.5094 90.9186 73.1895 90.9186 50.5908C90.9186 27.9921 72.5987 9.67226 50 9.67226C27.4013 9.67226 9.08144 27.9921 9.08144 50.5908Z" fill="currentColor"/>
                                    <path d="M93.9676 39.0409C96.393 38.4038 97.8624 35.9116 97.0079 33.5539C95.2932 28.8227 92.871 24.3692 89.8167 20.348C85.8452 15.1192 80.8826 10.7238 75.2124 7.41289C69.5422 4.10194 63.2754 1.94025 56.7698 1.05124C51.7666 0.367541 46.6976 0.446843 41.7345 1.27873C39.2613 1.69328 37.813 4.19778 38.4501 6.62326C39.0873 9.04874 41.5694 10.4717 44.0505 10.1071C47.8511 9.54855 51.7191 9.52689 55.5402 10.0491C60.8642 10.7766 65.9928 12.5457 70.6331 15.2552C75.2735 17.9648 79.3347 21.5619 82.5849 25.841C84.9175 28.9121 86.7997 32.2913 88.1811 35.8758C89.083 38.2158 91.5421 39.6781 93.9676 39.0409Z" fill="currentFill"/>
                                </svg>
                            </div>
                            <p class="text-gray-500 dark:text-gray-400 mt-4">Generating alt-text with AI...</p>
                        </div>

                        <div id="imagesContainer" class="grid grid-cols-1 md:grid-cols-2 gap-4"></div>
                    </div>
                </div>
            </div>

            <div id="alertContainer" class="mt-4"></div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let selectedProductId = null;

        document.addEventListener('DOMContentLoaded', function() {
            const productSearch = document.getElementById('productSearch');
            const productItems = document.querySelectorAll('.product-item');
            const generateBtn = document.getElementById('generateBtn');
            const showMissingOnly = document.getElementById('showMissingOnly');

            // Filter by search
            productSearch.addEventListener('input', filterProducts);
            showMissingOnly.addEventListener('change', filterProducts);

            function filterProducts() {
                const searchTerm = productSearch.value.toLowerCase();
                const missingOnly = showMissingOnly.checked;

                productItems.forEach(item => {
                    const title = item.dataset.title.toLowerCase();
                    const hasAlt = item.dataset.hasAlt === 'true';
                    const matchesSearch = title.includes(searchTerm);
                    const matchesMissing = !missingOnly || !hasAlt;
                    item.style.display = matchesSearch && matchesMissing ? '' : 'none';
                });
            }

            // Product selection
            productItems.forEach(item => {
                item.addEventListener('click', async function(e) {
                    e.preventDefault();
                    productItems.forEach(i => i.classList.remove('bg-purple-50', 'dark:bg-purple-900/20'));
                    this.classList.add('bg-purple-50', 'dark:bg-purple-900/20');

                    selectedProductId = this.dataset.id;
                    document.getElementById('noProductSelected').classList.add('hidden');
                    document.getElementById('altTextPanel').classList.remove('hidden');
                    document.getElementById('selectedProductTitle').textContent = this.dataset.title;

                    generateBtn.disabled = false;

                    await loadProductImages(selectedProductId);
                });
            });

            async function loadProductImages(productId) {
                const container = document.getElementById('imagesContainer');
                container.innerHTML = '<div class="col-span-2 text-center py-8"><div role="status"><svg aria-hidden="true" class="inline w-8 h-8 text-gray-200 animate-spin dark:text-gray-600 fill-purple-600" viewBox="0 0 100 101" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M100 50.5908C100 78.2051 77.6142 100.591 50 100.591C22.3858 100.591 0 78.2051 0 50.5908C0 22.9766 22.3858 0.59082 50 0.59082C77.6142 0.59082 100 22.9766 100 50.5908ZM9.08144 50.5908C9.08144 73.1895 27.4013 91.5094 50 91.5094C72.5987 91.5094 90.9186 73.1895 90.9186 50.5908C90.9186 27.9921 72.5987 9.67226 50 9.67226C27.4013 9.67226 9.08144 27.9921 9.08144 50.5908Z" fill="currentColor"/><path d="M93.9676 39.0409C96.393 38.4038 97.8624 35.9116 97.0079 33.5539C95.2932 28.8227 92.871 24.3692 89.8167 20.348C85.8452 15.1192 80.8826 10.7238 75.2124 7.41289C69.5422 4.10194 63.2754 1.94025 56.7698 1.05124C51.7666 0.367541 46.6976 0.446843 41.7345 1.27873C39.2613 1.69328 37.813 4.19778 38.4501 6.62326C39.0873 9.04874 41.5694 10.4717 44.0505 10.1071C47.8511 9.54855 51.7191 9.52689 55.5402 10.0491C60.8642 10.7766 65.9928 12.5457 70.6331 15.2552C75.2735 17.9648 79.3347 21.5619 82.5849 25.841C84.9175 28.9121 86.7997 32.2913 88.1811 35.8758C89.083 38.2158 91.5421 39.6781 93.9676 39.0409Z" fill="currentFill"/></svg></div></div>';

                try {
                    const response = await fetch(`/AI/AltText?handler=GetImages&productId=${productId}`);
                    const data = await response.json();

                    if (data.success && data.images.length > 0) {
                        container.innerHTML = data.images.map((img, idx) => `
                            <div class="bg-white dark:bg-gray-800 rounded-lg shadow border border-gray-200 dark:border-gray-700 overflow-hidden">
                                <img src="${img.url || '/images/no-image.png'}" class="w-full h-48 object-cover" alt="${img.altText || ''}">
                                <div class="p-4">
                                    <label class="block mb-2 text-xs font-medium text-gray-900 dark:text-white">Alt-Text</label>
                                    <textarea class="alt-text-input bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white mb-3" data-image-id="${img.id}" rows="3" placeholder="Describe this image...">${img.altText || ''}</textarea>
                                    <div class="flex gap-2">
                                        <button class="generate-single-btn flex-1 inline-flex justify-center items-center px-3 py-2 text-xs font-medium text-white bg-gradient-to-br from-purple-600 to-pink-500 rounded-lg hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-purple-300 dark:focus:ring-purple-800" data-image-id="${img.id}">
                                            <i class="fas fa-magic mr-1"></i> Generate
                                        </button>
                                        <button class="save-single-btn flex-1 inline-flex justify-center items-center px-3 py-2 text-xs font-medium text-gray-900 bg-white border border-gray-300 rounded-lg hover:bg-gray-100 focus:ring-4 focus:outline-none focus:ring-gray-200 dark:bg-gray-800 dark:text-white dark:border-gray-600 dark:hover:bg-gray-700" data-image-id="${img.id}">
                                            <i class="fas fa-save mr-1"></i> Save
                                        </button>
                                    </div>
                                </div>
                            </div>
                        `).join('');

                        // Attach event listeners
                        document.querySelectorAll('.generate-single-btn').forEach(btn => {
                            btn.addEventListener('click', () => generateSingleAltText(btn.dataset.imageId));
                        });
                        document.querySelectorAll('.save-single-btn').forEach(btn => {
                            btn.addEventListener('click', () => saveSingleAltText(btn.dataset.imageId));
                        });
                    } else {
                        container.innerHTML = '<div class="col-span-2 text-center py-8"><p class="text-gray-500 dark:text-gray-400">No images found for this product</p></div>';
                    }
                } catch (error) {
                    container.innerHTML = `<div class="col-span-2"><div class="flex items-center p-4 text-sm text-red-800 rounded-lg bg-red-50 dark:bg-gray-800 dark:text-red-400">${error.message}</div></div>`;
                }
            }

            async function generateSingleAltText(imageId) {
                const btn = document.querySelector(`.generate-single-btn[data-image-id="${imageId}"]`);
                const textarea = document.querySelector(`.alt-text-input[data-image-id="${imageId}"]`);
                const originalHtml = btn.innerHTML;

                btn.disabled = true;
                btn.innerHTML = '<svg aria-hidden="true" class="inline w-4 h-4 text-white animate-spin" viewBox="0 0 100 101" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M100 50.5908C100 78.2051 77.6142 100.591 50 100.591C22.3858 100.591 0 78.2051 0 50.5908C0 22.9766 22.3858 0.59082 50 0.59082C77.6142 0.59082 100 22.9766 100 50.5908ZM9.08144 50.5908C9.08144 73.1895 27.4013 91.5094 50 91.5094C72.5987 91.5094 90.9186 73.1895 90.9186 50.5908C90.9186 27.9921 72.5987 9.67226 50 9.67226C27.4013 9.67226 9.08144 27.9921 9.08144 50.5908Z" fill="currentColor" opacity="0.4"/><path d="M93.9676 39.0409C96.393 38.4038 97.8624 35.9116 97.0079 33.5539C95.2932 28.8227 92.871 24.3692 89.8167 20.348C85.8452 15.1192 80.8826 10.7238 75.2124 7.41289C69.5422 4.10194 63.2754 1.94025 56.7698 1.05124C51.7666 0.367541 46.6976 0.446843 41.7345 1.27873C39.2613 1.69328 37.813 4.19778 38.4501 6.62326C39.0873 9.04874 41.5694 10.4717 44.0505 10.1071C47.8511 9.54855 51.7191 9.52689 55.5402 10.0491C60.8642 10.7766 65.9928 12.5457 70.6331 15.2552C75.2735 17.9648 79.3347 21.5619 82.5849 25.841C84.9175 28.9121 86.7997 32.2913 88.1811 35.8758C89.083 38.2158 91.5421 39.6781 93.9676 39.0409Z" fill="currentFill"/></svg>';

                try {
                    const response = await fetch('/AI/AltText?handler=Generate', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                            'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
                        },
                        body: JSON.stringify({ imageId: parseInt(imageId), productId: parseInt(selectedProductId) })
                    });

                    const result = await response.json();
                    if (result.success) {
                        textarea.value = result.altText;
                        showAlert('Alt-text generated!', 'success');
                    } else {
                        showAlert(result.error || 'Failed to generate', 'error');
                    }
                } catch (error) {
                    showAlert('Error: ' + error.message, 'error');
                } finally {
                    btn.disabled = false;
                    btn.innerHTML = originalHtml;
                }
            }

            async function saveSingleAltText(imageId) {
                const textarea = document.querySelector(`.alt-text-input[data-image-id="${imageId}"]`);
                const altText = textarea.value;

                try {
                    const response = await fetch('/AI/AltText?handler=Save', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                            'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
                        },
                        body: JSON.stringify({ imageId: parseInt(imageId), altText: altText })
                    });

                    const result = await response.json();
                    if (result.success) {
                        showAlert('Alt-text saved!', 'success');
                    } else {
                        showAlert(result.error || 'Failed to save', 'error');
                    }
                } catch (error) {
                    showAlert('Error: ' + error.message, 'error');
                }
            }

            generateBtn.addEventListener('click', async function() {
                if (!selectedProductId) return;

                document.getElementById('loadingPanel').classList.remove('hidden');
                generateBtn.disabled = true;

                try {
                    const response = await fetch('/AI/AltText?handler=GenerateAll', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                            'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
                        },
                        body: JSON.stringify({ productId: parseInt(selectedProductId) })
                    });

                    const result = await response.json();
                    if (result.success) {
                        await loadProductImages(selectedProductId);
                        showAlert(`Generated alt-text for ${result.count} images!`, 'success');
                    } else {
                        showAlert(result.error || 'Failed to generate', 'error');
                    }
                } catch (error) {
                    showAlert('Error: ' + error.message, 'error');
                } finally {
                    document.getElementById('loadingPanel').classList.add('hidden');
                    generateBtn.disabled = false;
                }
            });
        });

        function showAlert(message, type) {
            const container = document.getElementById('alertContainer');
            const bgColor = type === 'success' ? 'bg-green-50 text-green-800 dark:bg-gray-800 dark:text-green-400' : 'bg-red-50 text-red-800 dark:bg-gray-800 dark:text-red-400';
            const iconClass = type === 'success' ? 'fa-check-circle text-green-500' : 'fa-exclamation-circle text-red-500';

            container.innerHTML = `
                <div class="flex items-center p-4 mb-4 text-sm rounded-lg ${bgColor}" role="alert">
                    <i class="fas ${iconClass} mr-2"></i>
                    <span>${message}</span>
                    <button type="button" class="ml-auto -mx-1.5 -my-1.5 rounded-lg p-1.5 inline-flex items-center justify-center h-8 w-8 hover:bg-gray-200 dark:hover:bg-gray-700" onclick="this.parentElement.remove()">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            `;
            setTimeout(() => container.innerHTML = '', 5000);
        }
    </script>
}
