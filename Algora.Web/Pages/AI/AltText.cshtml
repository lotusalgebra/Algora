@page
@model Algora.Web.Pages.AI.AltTextModel
@{
    ViewData["Title"] = "Image Alt-Text Generator";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-1">
                    <li class="breadcrumb-item"><a href="/AI">AI Tools</a></li>
                    <li class="breadcrumb-item active">Alt-Text Generator</li>
                </ol>
            </nav>
            <h1 class="h3 mb-0">Image Alt-Text Generator</h1>
        </div>
        <div>
            <button type="button" id="bulkGenerateBtn" class="btn btn-info text-white" disabled>
                <i class="fas fa-wand-magic-sparkles me-2"></i>Generate Missing Alt-Text
            </button>
        </div>
    </div>

    <!-- Stats -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center">
                    <h3 class="mb-0">@Model.TotalProducts</h3>
                    <small class="text-muted">Total Products</small>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center">
                    <h3 class="mb-0 text-success">@Model.WithAltText</h3>
                    <small class="text-muted">With Alt-Text</small>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center">
                    <h3 class="mb-0 text-warning">@Model.MissingAltText</h3>
                    <small class="text-muted">Missing Alt-Text</small>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Product List -->
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-transparent">
                    <h5 class="mb-0"><i class="fas fa-images me-2"></i>Products</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <input type="text" id="productSearch" class="form-control" placeholder="Search products..." />
                    </div>
                    <div class="form-check mb-3">
                        <input class="form-check-input" type="checkbox" id="showMissingOnly">
                        <label class="form-check-label" for="showMissingOnly">
                            Show only products missing alt-text
                        </label>
                    </div>
                    <div id="productList" class="list-group list-group-flush" style="max-height: 500px; overflow-y: auto;">
                        @foreach (var product in Model.Products)
                        {
                            <a href="#" class="list-group-item list-group-item-action product-item"
                               data-id="@product.Id"
                               data-title="@product.Title"
                               data-has-alt="@(product.HasAltText ? "true" : "false")">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <h6 class="mb-1 text-truncate" style="max-width: 200px;">@product.Title</h6>
                                        <small class="text-muted">@product.ImageCount image(s)</small>
                                    </div>
                                    @if (product.HasAltText)
                                    {
                                        <span class="badge bg-success"><i class="fas fa-check"></i></span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning"><i class="fas fa-exclamation"></i></span>
                                    }
                                </div>
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Alt-Text Panel -->
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-transparent d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="fas fa-image me-2"></i>Image Alt-Text</h5>
                    <button type="button" id="generateBtn" class="btn btn-info text-white" disabled>
                        <i class="fas fa-magic me-2"></i>Generate Alt-Text
                    </button>
                </div>
                <div class="card-body">
                    <div id="noProductSelected" class="text-center py-5">
                        <i class="fas fa-image fa-3x text-muted mb-3"></i>
                        <p class="text-muted">Select a product to view and edit alt-text</p>
                    </div>

                    <div id="altTextPanel" class="d-none">
                        <div class="mb-4 p-3 bg-light rounded">
                            <h5 id="selectedProductTitle" class="mb-0"></h5>
                        </div>

                        <div id="loadingPanel" class="text-center py-4 d-none">
                            <div class="spinner-border text-info" role="status"></div>
                            <p class="text-muted mt-2">Generating alt-text with AI...</p>
                        </div>

                        <div id="imagesContainer" class="row g-4"></div>
                    </div>
                </div>
            </div>

            <div id="alertContainer" class="mt-3"></div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let selectedProductId = null;

        document.addEventListener('DOMContentLoaded', function() {
            const productSearch = document.getElementById('productSearch');
            const productItems = document.querySelectorAll('.product-item');
            const generateBtn = document.getElementById('generateBtn');
            const showMissingOnly = document.getElementById('showMissingOnly');

            // Filter by search
            productSearch.addEventListener('input', filterProducts);
            showMissingOnly.addEventListener('change', filterProducts);

            function filterProducts() {
                const searchTerm = productSearch.value.toLowerCase();
                const missingOnly = showMissingOnly.checked;

                productItems.forEach(item => {
                    const title = item.dataset.title.toLowerCase();
                    const hasAlt = item.dataset.hasAlt === 'true';
                    const matchesSearch = title.includes(searchTerm);
                    const matchesMissing = !missingOnly || !hasAlt;
                    item.style.display = matchesSearch && matchesMissing ? '' : 'none';
                });
            }

            // Product selection
            productItems.forEach(item => {
                item.addEventListener('click', async function(e) {
                    e.preventDefault();
                    productItems.forEach(i => i.classList.remove('active'));
                    this.classList.add('active');

                    selectedProductId = this.dataset.id;
                    document.getElementById('noProductSelected').classList.add('d-none');
                    document.getElementById('altTextPanel').classList.remove('d-none');
                    document.getElementById('selectedProductTitle').textContent = this.dataset.title;

                    generateBtn.disabled = false;

                    await loadProductImages(selectedProductId);
                });
            });

            async function loadProductImages(productId) {
                const container = document.getElementById('imagesContainer');
                container.innerHTML = '<div class="col-12 text-center py-4"><div class="spinner-border text-secondary"></div></div>';

                try {
                    const response = await fetch(`/AI/AltText?handler=GetImages&productId=${productId}`);
                    const data = await response.json();

                    if (data.success && data.images.length > 0) {
                        container.innerHTML = data.images.map((img, idx) => `
                            <div class="col-md-6">
                                <div class="card h-100">
                                    <img src="${img.url || '/images/no-image.png'}" class="card-img-top" alt="${img.altText || ''}" style="height: 200px; object-fit: cover;">
                                    <div class="card-body">
                                        <div class="mb-2">
                                            <label class="form-label small">Alt-Text</label>
                                            <textarea class="form-control alt-text-input" data-image-id="${img.id}" rows="3" placeholder="Describe this image...">${img.altText || ''}</textarea>
                                        </div>
                                        <div class="d-flex gap-2">
                                            <button class="btn btn-sm btn-outline-info generate-single-btn" data-image-id="${img.id}">
                                                <i class="fas fa-magic"></i> Generate
                                            </button>
                                            <button class="btn btn-sm btn-success save-single-btn" data-image-id="${img.id}">
                                                <i class="fas fa-save"></i> Save
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        `).join('');

                        // Attach event listeners
                        document.querySelectorAll('.generate-single-btn').forEach(btn => {
                            btn.addEventListener('click', () => generateSingleAltText(btn.dataset.imageId));
                        });
                        document.querySelectorAll('.save-single-btn').forEach(btn => {
                            btn.addEventListener('click', () => saveSingleAltText(btn.dataset.imageId));
                        });
                    } else {
                        container.innerHTML = '<div class="col-12 text-center py-4"><p class="text-muted">No images found for this product</p></div>';
                    }
                } catch (error) {
                    container.innerHTML = `<div class="col-12"><div class="alert alert-danger">${error.message}</div></div>`;
                }
            }

            async function generateSingleAltText(imageId) {
                const btn = document.querySelector(`.generate-single-btn[data-image-id="${imageId}"]`);
                const textarea = document.querySelector(`.alt-text-input[data-image-id="${imageId}"]`);
                const originalHtml = btn.innerHTML;

                btn.disabled = true;
                btn.innerHTML = '<span class="spinner-border spinner-border-sm"></span>';

                try {
                    const response = await fetch('/AI/AltText?handler=Generate', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                            'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
                        },
                        body: JSON.stringify({ imageId: parseInt(imageId), productId: parseInt(selectedProductId) })
                    });

                    const result = await response.json();
                    if (result.success) {
                        textarea.value = result.altText;
                        showAlert('Alt-text generated!', 'success');
                    } else {
                        showAlert(result.error || 'Failed to generate', 'danger');
                    }
                } catch (error) {
                    showAlert('Error: ' + error.message, 'danger');
                } finally {
                    btn.disabled = false;
                    btn.innerHTML = originalHtml;
                }
            }

            async function saveSingleAltText(imageId) {
                const textarea = document.querySelector(`.alt-text-input[data-image-id="${imageId}"]`);
                const altText = textarea.value;

                try {
                    const response = await fetch('/AI/AltText?handler=Save', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                            'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
                        },
                        body: JSON.stringify({ imageId: parseInt(imageId), altText: altText })
                    });

                    const result = await response.json();
                    if (result.success) {
                        showAlert('Alt-text saved!', 'success');
                    } else {
                        showAlert(result.error || 'Failed to save', 'danger');
                    }
                } catch (error) {
                    showAlert('Error: ' + error.message, 'danger');
                }
            }

            generateBtn.addEventListener('click', async function() {
                if (!selectedProductId) return;

                document.getElementById('loadingPanel').classList.remove('d-none');
                generateBtn.disabled = true;

                try {
                    const response = await fetch('/AI/AltText?handler=GenerateAll', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                            'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
                        },
                        body: JSON.stringify({ productId: parseInt(selectedProductId) })
                    });

                    const result = await response.json();
                    if (result.success) {
                        await loadProductImages(selectedProductId);
                        showAlert(`Generated alt-text for ${result.count} images!`, 'success');
                    } else {
                        showAlert(result.error || 'Failed to generate', 'danger');
                    }
                } catch (error) {
                    showAlert('Error: ' + error.message, 'danger');
                } finally {
                    document.getElementById('loadingPanel').classList.add('d-none');
                    generateBtn.disabled = false;
                }
            });
        });

        function showAlert(message, type) {
            const container = document.getElementById('alertContainer');
            const alert = document.createElement('div');
            alert.className = `alert alert-${type} alert-dismissible fade show`;
            alert.innerHTML = `${message}<button type="button" class="btn-close" data-bs-dismiss="alert"></button>`;
            container.innerHTML = '';
            container.appendChild(alert);
            setTimeout(() => alert.remove(), 5000);
        }
    </script>
}
