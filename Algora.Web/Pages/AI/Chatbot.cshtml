@page
@model Algora.Web.Pages.AI.ChatbotModel
@{
    ViewData["Title"] = "AI Chatbot";
}

<div class="p-4">
    <!-- Header -->
    <div class="flex flex-wrap justify-between items-center mb-6">
        <div>
            <h1 class="text-2xl font-bold text-gray-900 dark:text-white">Customer Support Chatbot</h1>
            <p class="text-gray-500 dark:text-gray-400">AI-powered customer support for your store portal</p>
        </div>
        <a href="/AI" class="inline-flex items-center px-4 py-2 text-sm font-medium text-gray-900 bg-white border border-gray-300 rounded-lg hover:bg-gray-100 focus:ring-4 focus:outline-none focus:ring-gray-200 dark:bg-gray-800 dark:text-white dark:border-gray-600 dark:hover:bg-gray-700 dark:focus:ring-gray-700">
            <i class="fas fa-arrow-left mr-2"></i>Back to AI Tools
        </a>
    </div>

    <!-- Stats Cards -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 mb-6">
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6">
            <div class="flex items-center">
                <div class="rounded-full bg-purple-100 dark:bg-purple-900/30 p-3 mr-4">
                    <i class="fas fa-comments text-purple-600 dark:text-purple-400 text-lg"></i>
                </div>
                <div>
                    <h3 class="text-2xl font-bold text-gray-900 dark:text-white">@Model.TotalConversations</h3>
                    <p class="text-sm text-gray-500 dark:text-gray-400">Total Conversations</p>
                </div>
            </div>
        </div>
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6">
            <div class="flex items-center">
                <div class="rounded-full bg-green-100 dark:bg-green-900/30 p-3 mr-4">
                    <i class="fas fa-check-circle text-green-600 dark:text-green-400 text-lg"></i>
                </div>
                <div>
                    <h3 class="text-2xl font-bold text-gray-900 dark:text-white">@Model.ResolutionRate.ToString("F1")%</h3>
                    <p class="text-sm text-gray-500 dark:text-gray-400">Resolution Rate</p>
                </div>
            </div>
        </div>
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6">
            <div class="flex items-center">
                <div class="rounded-full bg-yellow-100 dark:bg-yellow-900/30 p-3 mr-4">
                    <i class="fas fa-user-friends text-yellow-600 dark:text-yellow-400 text-lg"></i>
                </div>
                <div>
                    <h3 class="text-2xl font-bold text-gray-900 dark:text-white">@Model.EscalatedConversations</h3>
                    <p class="text-sm text-gray-500 dark:text-gray-400">Escalated to Agent</p>
                </div>
            </div>
        </div>
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6">
            <div class="flex items-center">
                <div class="rounded-full bg-blue-100 dark:bg-blue-900/30 p-3 mr-4">
                    <i class="fas fa-thumbs-up text-blue-600 dark:text-blue-400 text-lg"></i>
                </div>
                <div>
                    <h3 class="text-2xl font-bold text-gray-900 dark:text-white">@Model.HelpfulRate.ToString("F1")%</h3>
                    <p class="text-sm text-gray-500 dark:text-gray-400">Helpful Rate</p>
                </div>
            </div>
        </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <!-- Recent Conversations -->
        <div class="lg:col-span-2">
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md">
                <div class="p-6 border-b border-gray-200 dark:border-gray-700 flex justify-between items-center">
                    <h5 class="text-lg font-semibold text-gray-900 dark:text-white">
                        <i class="fas fa-history mr-2"></i>Recent Conversations
                    </h5>
                    <span class="bg-purple-100 text-purple-800 text-xs font-medium px-2.5 py-0.5 rounded dark:bg-purple-900 dark:text-purple-300">@Model.ActiveConversations Active</span>
                </div>
                <div class="overflow-x-auto">
                    @if (Model.RecentConversations.Any())
                    {
                        <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
                            <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                                <tr>
                                    <th class="px-6 py-3">Customer</th>
                                    <th class="px-6 py-3">Topic</th>
                                    <th class="px-6 py-3">Messages</th>
                                    <th class="px-6 py-3">Status</th>
                                    <th class="px-6 py-3">Started</th>
                                    <th class="px-6 py-3">Feedback</th>
                                    <th class="px-6 py-3"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var conv in Model.RecentConversations)
                                {
                                    <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-700">
                                        <td class="px-6 py-4 font-medium text-gray-900 dark:text-white">
                                            @if (!string.IsNullOrEmpty(conv.CustomerEmail))
                                            {
                                                @conv.CustomerEmail
                                            }
                                            else
                                            {
                                                <span class="text-gray-500 dark:text-gray-400">Guest</span>
                                            }
                                        </td>
                                        <td class="px-6 py-4">
                                            @if (!string.IsNullOrEmpty(conv.Topic))
                                            {
                                                <span class="bg-gray-100 text-gray-800 text-xs font-medium px-2 py-0.5 rounded dark:bg-gray-700 dark:text-gray-300">@conv.Topic</span>
                                            }
                                            else
                                            {
                                                <span class="text-gray-400">-</span>
                                            }
                                        </td>
                                        <td class="px-6 py-4">@conv.MessageCount</td>
                                        <td class="px-6 py-4">
                                            @switch (conv.Status)
                                            {
                                                case "active":
                                                    <span class="bg-green-100 text-green-800 text-xs font-medium px-2.5 py-0.5 rounded dark:bg-green-900 dark:text-green-300">Active</span>
                                                    break;
                                                case "resolved":
                                                    <span class="bg-blue-100 text-blue-800 text-xs font-medium px-2.5 py-0.5 rounded dark:bg-blue-900 dark:text-blue-300">Resolved</span>
                                                    break;
                                                case "escalated":
                                                    <span class="bg-yellow-100 text-yellow-800 text-xs font-medium px-2.5 py-0.5 rounded dark:bg-yellow-900 dark:text-yellow-300">Escalated</span>
                                                    break;
                                                default:
                                                    <span class="bg-gray-100 text-gray-800 text-xs font-medium px-2.5 py-0.5 rounded dark:bg-gray-700 dark:text-gray-300">@conv.Status</span>
                                                    break;
                                            }
                                        </td>
                                        <td class="px-6 py-4 text-xs">@conv.CreatedAt.ToString("MMM d, h:mm tt")</td>
                                        <td class="px-6 py-4">
                                            @if (conv.WasHelpful == true)
                                            {
                                                <i class="fas fa-thumbs-up text-green-500"></i>
                                            }
                                            else if (conv.WasHelpful == false)
                                            {
                                                <i class="fas fa-thumbs-down text-red-500"></i>
                                            }
                                            else
                                            {
                                                <span class="text-gray-400">-</span>
                                            }
                                        </td>
                                        <td class="px-6 py-4">
                                            <button onclick="viewConversation(@conv.Id)" class="text-purple-600 hover:text-purple-900 dark:text-purple-400 dark:hover:text-purple-300">
                                                <i class="fas fa-eye"></i>
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <div class="text-center py-12">
                            <i class="fas fa-robot text-6xl text-gray-300 dark:text-gray-600 mb-4"></i>
                            <p class="text-gray-500 dark:text-gray-400">No conversations yet</p>
                            <small class="text-gray-400 dark:text-gray-500">Chatbot conversations will appear here when customers use the portal chat</small>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Sidebar -->
        <div class="lg:col-span-1 space-y-6">
            <!-- Top Intents -->
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md">
                <div class="p-6 border-b border-gray-200 dark:border-gray-700">
                    <h5 class="text-lg font-semibold text-gray-900 dark:text-white">
                        <i class="fas fa-brain mr-2"></i>Top Customer Intents
                    </h5>
                </div>
                <div class="p-6">
                    @if (Model.TopIntents.Any())
                    {
                        @foreach (var intent in Model.TopIntents)
                        {
                            var percentage = Model.TotalMessages > 0 ? (double)intent.Value / Model.TotalMessages * 100 : 0;
                            <div class="mb-4 last:mb-0">
                                <div class="flex justify-between mb-1">
                                    <span class="text-sm font-medium text-gray-700 dark:text-gray-300 capitalize">@intent.Key.Replace("_", " ")</span>
                                    <span class="text-sm text-gray-500 dark:text-gray-400">@intent.Value</span>
                                </div>
                                <div class="w-full bg-gray-200 rounded-full h-2 dark:bg-gray-700">
                                    <div class="bg-purple-600 h-2 rounded-full" style="width: @percentage%"></div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-gray-500 dark:text-gray-400 text-center text-sm">No intent data yet</p>
                    }
                </div>
            </div>

            <!-- Quick Stats -->
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md">
                <div class="p-6 border-b border-gray-200 dark:border-gray-700">
                    <h5 class="text-lg font-semibold text-gray-900 dark:text-white">
                        <i class="fas fa-chart-bar mr-2"></i>Quick Stats
                    </h5>
                </div>
                <div class="p-6">
                    <div class="flex justify-between py-3 border-b border-gray-200 dark:border-gray-700">
                        <span class="text-gray-600 dark:text-gray-400">Total Messages</span>
                        <strong class="text-gray-900 dark:text-white">@Model.TotalMessages</strong>
                    </div>
                    <div class="flex justify-between py-3 border-b border-gray-200 dark:border-gray-700">
                        <span class="text-gray-600 dark:text-gray-400">Avg Messages/Conversation</span>
                        <strong class="text-gray-900 dark:text-white">@Model.AvgMessagesPerConversation.ToString("F1")</strong>
                    </div>
                    <div class="flex justify-between py-3 border-b border-gray-200 dark:border-gray-700">
                        <span class="text-gray-600 dark:text-gray-400">Active Conversations</span>
                        <strong class="text-green-600 dark:text-green-400">@Model.ActiveConversations</strong>
                    </div>
                    <div class="flex justify-between py-3">
                        <span class="text-gray-600 dark:text-gray-400">Resolved Conversations</span>
                        <strong class="text-blue-600 dark:text-blue-400">@Model.ResolvedConversations</strong>
                    </div>
                </div>
            </div>

            <!-- Setup Instructions -->
            <div class="bg-gray-50 dark:bg-gray-700 rounded-lg p-6">
                <h6 class="font-semibold text-gray-900 dark:text-white mb-2">
                    <i class="fas fa-info-circle mr-2 text-purple-600"></i>How It Works
                </h6>
                <p class="text-sm text-gray-600 dark:text-gray-300 mb-2">
                    The AI chatbot is automatically available in your Customer Portal at:
                </p>
                <code class="block mb-3 p-2 bg-white dark:bg-gray-800 rounded text-sm text-purple-600 dark:text-purple-400">/portal/chat</code>
                <p class="text-sm text-gray-600 dark:text-gray-300">
                    Customers can access it to get instant help with orders, returns, shipping, and general questions.
                    Complex issues are escalated to human agents.
                </p>
            </div>
        </div>
    </div>
</div>

<!-- Conversation Modal -->
<div id="conversationModal" tabindex="-1" class="fixed inset-0 z-50 hidden overflow-y-auto">
    <div class="fixed inset-0 bg-black/50 backdrop-blur-sm" onclick="closeConversationModal()"></div>
    <div class="relative min-h-screen flex items-center justify-center p-4">
        <div class="relative bg-white dark:bg-gray-800 rounded-lg shadow-xl max-w-2xl w-full max-h-[80vh] overflow-hidden">
            <div class="flex items-center justify-between p-4 border-b dark:border-gray-700">
                <h5 class="text-lg font-semibold text-gray-900 dark:text-white">Conversation Details</h5>
                <button type="button" onclick="closeConversationModal()" class="text-gray-400 hover:text-gray-500 dark:hover:text-gray-300">
                    <i class="fas fa-times text-xl"></i>
                </button>
            </div>
            <div id="conversationContent" class="p-4 overflow-y-auto" style="max-height: calc(80vh - 60px);">
                <div class="text-center py-8">
                    <div role="status">
                        <svg aria-hidden="true" class="inline w-8 h-8 text-gray-200 animate-spin dark:text-gray-600 fill-purple-600" viewBox="0 0 100 101" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M100 50.5908C100 78.2051 77.6142 100.591 50 100.591C22.3858 100.591 0 78.2051 0 50.5908C0 22.9766 22.3858 0.59082 50 0.59082C77.6142 0.59082 100 22.9766 100 50.5908ZM9.08144 50.5908C9.08144 73.1895 27.4013 91.5094 50 91.5094C72.5987 91.5094 90.9186 73.1895 90.9186 50.5908C90.9186 27.9921 72.5987 9.67226 50 9.67226C27.4013 9.67226 9.08144 27.9921 9.08144 50.5908Z" fill="currentColor"/>
                            <path d="M93.9676 39.0409C96.393 38.4038 97.8624 35.9116 97.0079 33.5539C95.2932 28.8227 92.871 24.3692 89.8167 20.348C85.8452 15.1192 80.8826 10.7238 75.2124 7.41289C69.5422 4.10194 63.2754 1.94025 56.7698 1.05124C51.7666 0.367541 46.6976 0.446843 41.7345 1.27873C39.2613 1.69328 37.813 4.19778 38.4501 6.62326C39.0873 9.04874 41.5694 10.4717 44.0505 10.1071C47.8511 9.54855 51.7191 9.52689 55.5402 10.0491C60.8642 10.7766 65.9928 12.5457 70.6331 15.2552C75.2735 17.9648 79.3347 21.5619 82.5849 25.841C84.9175 28.9121 86.7997 32.2913 88.1811 35.8758C89.083 38.2158 91.5421 39.6781 93.9676 39.0409Z" fill="currentFill"/>
                        </svg>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function closeConversationModal() {
            document.getElementById('conversationModal').classList.add('hidden');
        }

        async function viewConversation(id) {
            const modal = document.getElementById('conversationModal');
            modal.classList.remove('hidden');

            try {
                const response = await fetch(`/AI/Chatbot?handler=Conversation&id=${id}`);
                const result = await response.json();

                if (result.success) {
                    const data = result.data;
                    const statusClass = data.status === 'active' ? 'bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-300' :
                                        data.status === 'escalated' ? 'bg-yellow-100 text-yellow-800 dark:bg-yellow-900 dark:text-yellow-300' :
                                        'bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-300';

                    let html = `
                        <div class="mb-4">
                            <div class="flex justify-between items-center">
                                <span class="text-gray-900 dark:text-white"><strong>Customer:</strong> ${data.customerEmail || 'Guest'}</span>
                                <span class="${statusClass} text-xs font-medium px-2.5 py-0.5 rounded capitalize">${data.status}</span>
                            </div>
                            <small class="text-gray-500 dark:text-gray-400">Started: ${new Date(data.createdAt).toLocaleString()}</small>
                            ${data.topic ? `<br><span class="bg-gray-100 text-gray-800 text-xs font-medium px-2 py-0.5 rounded dark:bg-gray-700 dark:text-gray-300 mt-1 inline-block">${data.topic}</span>` : ''}
                        </div>
                        <hr class="border-gray-200 dark:border-gray-700 mb-4">
                        <div class="space-y-4" style="max-height: 300px; overflow-y: auto;">
                    `;

                    for (const msg of data.messages) {
                        const isUser = msg.role === 'user';
                        html += `
                            <div class="flex ${isUser ? 'justify-end' : 'justify-start'}">
                                <div class="max-w-[80%] p-3 rounded-lg ${isUser ? 'bg-purple-600 text-white' : 'bg-gray-100 dark:bg-gray-700 text-gray-900 dark:text-white'}">
                                    <div class="text-xs ${isUser ? 'text-purple-200' : 'text-gray-500 dark:text-gray-400'} mb-1">
                                        ${isUser ? 'Customer' : 'AI Assistant'} - ${new Date(msg.createdAt).toLocaleTimeString()}
                                    </div>
                                    <div>${msg.content}</div>
                                    ${msg.intent ? `<div class="mt-1"><span class="bg-gray-200 dark:bg-gray-600 text-gray-700 dark:text-gray-300 text-xs px-2 py-0.5 rounded">${msg.intent}</span></div>` : ''}
                                </div>
                            </div>
                        `;
                    }

                    html += '</div>';

                    if (data.wasHelpful !== null) {
                        html += `
                            <hr class="border-gray-200 dark:border-gray-700 my-4">
                            <div class="text-center">
                                <span class="mr-2 text-gray-600 dark:text-gray-400">Customer Feedback:</span>
                                ${data.wasHelpful
                                    ? '<i class="fas fa-thumbs-up text-green-500 text-lg"></i> <span class="text-green-600 dark:text-green-400">Helpful</span>'
                                    : '<i class="fas fa-thumbs-down text-red-500 text-lg"></i> <span class="text-red-600 dark:text-red-400">Not Helpful</span>'}
                            </div>
                        `;
                    }

                    document.getElementById('conversationContent').innerHTML = html;
                } else {
                    document.getElementById('conversationContent').innerHTML = `
                        <div class="flex items-center p-4 text-sm text-red-800 rounded-lg bg-red-50 dark:bg-gray-800 dark:text-red-400">
                            <i class="fas fa-exclamation-circle mr-2"></i>Error: ${result.error}
                        </div>
                    `;
                }
            } catch (error) {
                document.getElementById('conversationContent').innerHTML = `
                    <div class="flex items-center p-4 text-sm text-red-800 rounded-lg bg-red-50 dark:bg-gray-800 dark:text-red-400">
                        <i class="fas fa-exclamation-circle mr-2"></i>Error loading conversation
                    </div>
                `;
            }
        }

        // Close modal on Escape key
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') closeConversationModal();
        });
    </script>
}
