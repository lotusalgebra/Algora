@page "/admin/clients"
@model Algora.Web.Pages.Admin.ClientsModel
@{
    ViewData["Title"] = "Client Management";
}

<div class="p-4">
    <!-- Header -->
    <div class="flex flex-wrap items-center justify-between gap-4 mb-6">
        <div>
            <h1 class="text-xl font-bold text-gray-900 dark:text-white">Client Management</h1>
            <p class="text-sm text-gray-500 dark:text-gray-400">View and manage all clients and their subscription plans</p>
        </div>
        <a href="/admin/clients?handler=ExportCsv"
           class="inline-flex items-center px-4 py-2.5 text-sm font-medium text-white bg-gradient-to-br from-green-600 to-lime-400 rounded-lg hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-green-300">
            <i class="fas fa-file-csv me-2"></i> Export CSV
        </a>
    </div>

    <!-- Stats Cards -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-5 gap-4 mb-6">
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-4">
            <div class="flex items-center">
                <div class="w-12 h-12 rounded-lg bg-gradient-to-br from-purple-600 to-pink-500 flex items-center justify-center">
                    <i class="fas fa-users text-white"></i>
                </div>
                <div class="ml-4">
                    <p class="text-xs text-gray-500 dark:text-gray-400 uppercase font-semibold">Total Clients</p>
                    <p class="text-xl font-bold text-gray-900 dark:text-white">@Model.Stats.TotalClients</p>
                </div>
            </div>
        </div>
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-4">
            <div class="flex items-center">
                <div class="w-12 h-12 rounded-lg bg-gradient-to-br from-green-600 to-lime-400 flex items-center justify-center">
                    <i class="fas fa-check-circle text-white"></i>
                </div>
                <div class="ml-4">
                    <p class="text-xs text-gray-500 dark:text-gray-400 uppercase font-semibold">Active</p>
                    <p class="text-xl font-bold text-gray-900 dark:text-white">@Model.Stats.ActiveClients</p>
                </div>
            </div>
        </div>
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-4">
            <div class="flex items-center">
                <div class="w-12 h-12 rounded-lg bg-gradient-to-br from-red-600 to-rose-400 flex items-center justify-center">
                    <i class="fas fa-times-circle text-white"></i>
                </div>
                <div class="ml-4">
                    <p class="text-xs text-gray-500 dark:text-gray-400 uppercase font-semibold">Inactive</p>
                    <p class="text-xl font-bold text-gray-900 dark:text-white">@Model.Stats.InactiveClients</p>
                </div>
            </div>
        </div>
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-4">
            <div class="flex items-center">
                <div class="w-12 h-12 rounded-lg bg-gradient-to-br from-blue-600 to-cyan-400 flex items-center justify-center">
                    <i class="fas fa-clock text-white"></i>
                </div>
                <div class="ml-4">
                    <p class="text-xs text-gray-500 dark:text-gray-400 uppercase font-semibold">On Trial</p>
                    <p class="text-xl font-bold text-gray-900 dark:text-white">@Model.Stats.TrialClients</p>
                </div>
            </div>
        </div>
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-4">
            <div class="flex items-center">
                <div class="w-12 h-12 rounded-lg bg-gradient-to-br from-yellow-500 to-orange-400 flex items-center justify-center">
                    <i class="fas fa-credit-card text-white"></i>
                </div>
                <div class="ml-4">
                    <p class="text-xs text-gray-500 dark:text-gray-400 uppercase font-semibold">Paid</p>
                    <p class="text-xl font-bold text-gray-900 dark:text-white">@Model.Stats.PaidClients</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Messages -->
    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="flex items-center p-4 mb-6 text-sm text-green-800 rounded-lg bg-green-50 dark:bg-gray-800 dark:text-green-400" role="alert">
            <i class="fas fa-check-circle me-2"></i>
            @Model.SuccessMessage
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="flex items-center p-4 mb-6 text-sm text-red-800 rounded-lg bg-red-50 dark:bg-gray-800 dark:text-red-400" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>
            @Model.ErrorMessage
        </div>
    }

    <!-- Filters -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6 mb-6">
        <form method="get" class="flex flex-wrap items-end gap-4">
            <div class="flex-1 min-w-[200px]">
                <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">Search</label>
                <input type="text" name="search" value="@Model.SearchTerm"
                       placeholder="Domain, shop name, or email..."
                       class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white" />
            </div>
            <div class="w-40">
                <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">Plan</label>
                <select name="plan" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white">
                    <option value="">All Plans</option>
                    @foreach (var plan in Model.AvailablePlans)
                    {
                        <option value="@plan" selected="@(Model.SelectedPlan == plan)">@plan</option>
                    }
                </select>
            </div>
            <div class="w-36">
                <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">Status</label>
                <select name="status" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white">
                    <option value="">All</option>
                    <option value="active" selected="@(Model.SelectedStatus == "active")">Active</option>
                    <option value="inactive" selected="@(Model.SelectedStatus == "inactive")">Inactive</option>
                </select>
            </div>
            <div class="flex items-center gap-2">
                <button type="submit" class="inline-flex items-center px-4 py-2.5 text-sm font-medium text-white bg-gradient-to-br from-purple-600 to-pink-500 rounded-lg hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-purple-300 dark:focus:ring-purple-800">
                    <i class="fas fa-search me-2"></i> Filter
                </button>
                @if (!string.IsNullOrEmpty(Model.SearchTerm) || !string.IsNullOrEmpty(Model.SelectedPlan) || !string.IsNullOrEmpty(Model.SelectedStatus))
                {
                    <a href="/admin/clients" class="text-sm text-gray-500 hover:text-purple-600 dark:text-gray-400">Clear</a>
                }
            </div>
        </form>
    </div>

    <!-- Clients Table -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md">
        <div class="p-6">
            @if (!Model.ClientResult.Clients.Any())
            {
                <div class="text-center py-12">
                    <i class="fas fa-users text-6xl text-gray-300 dark:text-gray-600 mb-4"></i>
                    <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">No Clients Found</h3>
                    <p class="text-gray-500 dark:text-gray-400">No clients match the current filters.</p>
                </div>
            }
            else
            {
                <div class="overflow-x-auto">
                    <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
                        <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                            <tr>
                                <th scope="col" class="px-6 py-3">Shop</th>
                                <th scope="col" class="px-6 py-3">Email</th>
                                <th scope="col" class="px-6 py-3">Plan</th>
                                <th scope="col" class="px-6 py-3">License</th>
                                <th scope="col" class="px-6 py-3">Status</th>
                                <th scope="col" class="px-6 py-3">Installed</th>
                                <th scope="col" class="px-6 py-3 text-right">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var client in Model.ClientResult.Clients)
                            {
                                <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-700">
                                    <td class="px-6 py-4">
                                        <p class="font-semibold text-gray-900 dark:text-white">@(client.ShopName ?? client.Domain)</p>
                                        <p class="text-xs text-gray-500">@client.Domain</p>
                                    </td>
                                    <td class="px-6 py-4 text-gray-600 dark:text-gray-400">
                                        @(client.Email ?? "-")
                                    </td>
                                    <td class="px-6 py-4">
                                        @{
                                            var planBadge = client.PlanName switch
                                            {
                                                "Free" => "bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-300",
                                                "Basic" => "bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-300",
                                                "Premium" => "bg-purple-100 text-purple-800 dark:bg-purple-900 dark:text-purple-300",
                                                "Enterprise" => "bg-gradient-to-r from-purple-500 to-pink-500 text-white",
                                                _ => "bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-300"
                                            };
                                        }
                                        <span class="@planBadge text-xs font-medium px-2.5 py-0.5 rounded">
                                            @client.PlanName
                                        </span>
                                    </td>
                                    <td class="px-6 py-4">
                                        @if (client.LicenseStatus != null)
                                        {
                                            var licenseBadge = client.LicenseStatus switch
                                            {
                                                "active" => "bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-300",
                                                "trial" => "bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-300",
                                                "expired" => "bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-300",
                                                "cancelled" => "bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-300",
                                                _ => "bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-300"
                                            };
                                            <span class="@licenseBadge text-xs font-medium px-2.5 py-0.5 rounded capitalize">
                                                @client.LicenseStatus
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-gray-400">-</span>
                                        }
                                    </td>
                                    <td class="px-6 py-4">
                                        @if (client.IsActive)
                                        {
                                            <span class="inline-flex items-center bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-300 text-xs font-medium px-2.5 py-0.5 rounded">
                                                <span class="w-1.5 h-1.5 rounded-full bg-green-500 me-1.5"></span>
                                                Active
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="inline-flex items-center bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-300 text-xs font-medium px-2.5 py-0.5 rounded">
                                                <span class="w-1.5 h-1.5 rounded-full bg-red-500 me-1.5"></span>
                                                Inactive
                                            </span>
                                        }
                                    </td>
                                    <td class="px-6 py-4 text-gray-600 dark:text-gray-400">
                                        @client.InstalledAt.ToString("MMM dd, yyyy")
                                    </td>
                                    <td class="px-6 py-4 text-right">
                                        <button type="button"
                                                onclick="openChangePlanModal('@client.Domain', '@client.PlanName')"
                                                class="inline-flex items-center px-3 py-1.5 text-xs font-medium text-white bg-purple-600 rounded-lg hover:bg-purple-700 focus:ring-4 focus:outline-none focus:ring-purple-300">
                                            <i class="fas fa-exchange-alt me-1"></i>
                                            Change Plan
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                @if (Model.ClientResult.TotalPages > 1)
                {
                    <div class="flex flex-wrap items-center justify-between gap-4 p-6 border-t border-gray-200 dark:border-gray-700">
                        <div class="text-sm text-gray-500 dark:text-gray-400">
                            Showing @((Model.ClientResult.Page - 1) * Model.ClientResult.PageSize + 1) - @Math.Min(Model.ClientResult.Page * Model.ClientResult.PageSize, Model.ClientResult.TotalCount) of @Model.ClientResult.TotalCount clients
                        </div>
                        <div class="flex gap-1">
                            @if (Model.ClientResult.Page > 1)
                            {
                                <a href="?page=@(Model.ClientResult.Page - 1)&search=@Model.SearchTerm&plan=@Model.SelectedPlan&status=@Model.SelectedStatus"
                                   class="px-3 py-2 text-sm font-medium text-gray-500 bg-white border border-gray-300 rounded-lg hover:bg-gray-100 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700">
                                    <i class="fas fa-chevron-left me-1"></i> Previous
                                </a>
                            }
                            @if (Model.ClientResult.Page < Model.ClientResult.TotalPages)
                            {
                                <a href="?page=@(Model.ClientResult.Page + 1)&search=@Model.SearchTerm&plan=@Model.SelectedPlan&status=@Model.SelectedStatus"
                                   class="px-3 py-2 text-sm font-medium text-gray-500 bg-white border border-gray-300 rounded-lg hover:bg-gray-100 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700">
                                    Next <i class="fas fa-chevron-right ms-1"></i>
                                </a>
                            }
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>

<!-- Change Plan Modal -->
<div id="changePlanModal" class="fixed inset-0 bg-gray-900/50 backdrop-blur-sm hidden items-center justify-center z-50">
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-xl max-w-md w-full mx-4">
        <div class="p-6">
            <div class="flex items-center justify-between mb-4">
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Change Client Plan</h3>
                <button type="button" onclick="closeChangePlanModal()" class="text-gray-400 hover:text-gray-600 dark:hover:text-white">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            <p class="text-sm text-gray-500 dark:text-gray-400 mb-4">
                Update the plan for <span id="modalShopDomain" class="font-medium text-gray-900 dark:text-white"></span>
            </p>
            <form method="post" asp-page-handler="ChangePlan">
                <input type="hidden" name="shopDomain" id="changePlanShopDomain" />
                <div class="mb-4">
                    <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">Current Plan</label>
                    <div id="currentPlanDisplay" class="p-2.5 bg-gray-50 dark:bg-gray-700 rounded-lg text-gray-700 dark:text-gray-300 text-sm"></div>
                </div>
                <div class="mb-4">
                    <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">New Plan</label>
                    <select name="newPlanName" id="newPlanSelect"
                            class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white">
                        @foreach (var plan in Model.AllPlans)
                        {
                            <option value="@plan.Name">@plan.Name - $@plan.MonthlyPrice/mo</option>
                        }
                    </select>
                </div>
                <div class="mb-4">
                    <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">Admin Notes (Optional)</label>
                    <textarea name="adminNotes" rows="2"
                              class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white"
                              placeholder="Reason for plan change..."></textarea>
                </div>
                <div class="flex justify-end gap-3">
                    <button type="button" onclick="closeChangePlanModal()"
                            class="px-4 py-2.5 text-sm font-medium text-gray-900 bg-white border border-gray-300 rounded-lg hover:bg-gray-100 focus:ring-4 focus:outline-none focus:ring-gray-200 dark:bg-gray-800 dark:text-white dark:border-gray-600 dark:hover:bg-gray-700">
                        Cancel
                    </button>
                    <button type="submit"
                            class="px-4 py-2.5 text-sm font-medium text-white bg-gradient-to-br from-purple-600 to-pink-500 rounded-lg hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-purple-300">
                        Update Plan
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function openChangePlanModal(shopDomain, currentPlan) {
            document.getElementById('changePlanShopDomain').value = shopDomain;
            document.getElementById('modalShopDomain').textContent = shopDomain;
            document.getElementById('currentPlanDisplay').textContent = currentPlan;
            document.getElementById('newPlanSelect').value = currentPlan;
            document.getElementById('changePlanModal').classList.remove('hidden');
            document.getElementById('changePlanModal').classList.add('flex');
        }

        function closeChangePlanModal() {
            document.getElementById('changePlanModal').classList.add('hidden');
            document.getElementById('changePlanModal').classList.remove('flex');
        }

        document.getElementById('changePlanModal').addEventListener('click', function(e) {
            if (e.target === this) {
                closeChangePlanModal();
            }
        });

        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') {
                closeChangePlanModal();
            }
        });
    </script>
}
