@page "/admin/plan-features"
@model Algora.Web.Pages.Admin.PlanFeaturesModel
@{
    ViewData["Title"] = "Plan Features Management";
}

<div class="p-4">
    <!-- Header -->
    <div class="flex flex-wrap items-center justify-between gap-4 mb-6">
        <div>
            <h1 class="text-xl font-bold text-gray-900 dark:text-white">Plan Features Management</h1>
            <p class="text-sm text-gray-500 dark:text-gray-400">Manage features and assign them to subscription plans</p>
        </div>
        <button type="button" onclick="openAddFeatureModal()"
                class="inline-flex items-center px-4 py-2.5 text-sm font-medium text-white bg-gradient-to-br from-purple-600 to-pink-500 rounded-lg hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-purple-300 dark:focus:ring-purple-800">
            <i class="fas fa-plus me-2"></i> Add Feature
        </button>
    </div>

    <!-- Messages -->
    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="flex items-center p-4 mb-6 text-sm text-green-800 rounded-lg bg-green-50 dark:bg-gray-800 dark:text-green-400" role="alert">
            <i class="fas fa-check-circle me-2"></i>
            @Model.SuccessMessage
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="flex items-center p-4 mb-6 text-sm text-red-800 rounded-lg bg-red-50 dark:bg-gray-800 dark:text-red-400" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>
            @Model.ErrorMessage
        </div>
    }

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <!-- Features List (Left Column) -->
        <div class="lg:col-span-1">
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6">
                <h2 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Available Features</h2>

                @foreach (var category in Model.FeaturesByCategory)
                {
                    <div class="mb-6">
                        <h3 class="text-xs font-bold text-gray-500 dark:text-gray-400 uppercase tracking-wide mb-3">@category.Key</h3>
                        <div class="space-y-2">
                            @foreach (var feature in category.Value)
                            {
                                <div class="flex items-center justify-between p-3 bg-gray-50 dark:bg-gray-700 rounded-lg @(feature.IsActive ? "" : "opacity-50")">
                                    <div class="flex items-center">
                                        <div class="w-8 h-8 rounded-lg bg-gradient-to-br from-purple-600 to-pink-500 flex items-center justify-center me-3">
                                            <i class="@(feature.IconClass ?? "fas fa-cube") text-white text-xs"></i>
                                        </div>
                                        <div>
                                            <p class="font-medium text-sm text-gray-900 dark:text-white">@feature.Name</p>
                                            <p class="text-xs text-gray-500 dark:text-gray-400">@feature.Code</p>
                                        </div>
                                    </div>
                                    <div class="flex items-center space-x-1">
                                        <button type="button"
                                                onclick="openEditFeatureModal(@feature.Id, '@feature.Code', '@feature.Name', '@feature.Description.Replace("'", "\\'")', '@feature.Category', '@feature.IconClass', @feature.SortOrder, @feature.IsActive.ToString().ToLower())"
                                                class="p-1.5 text-gray-500 hover:text-purple-600 dark:text-gray-400 dark:hover:text-purple-400 transition-colors"
                                                title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </button>
                                        <form method="post" asp-page-handler="ToggleFeature" class="inline">
                                            <input type="hidden" name="featureId" value="@feature.Id" />
                                            <button type="submit"
                                                    class="p-1.5 @(feature.IsActive ? "text-green-500 hover:text-green-600" : "text-gray-400 hover:text-gray-600") transition-colors"
                                                    title="@(feature.IsActive ? "Deactivate" : "Activate")">
                                                <i class="fas @(feature.IsActive ? "fa-toggle-on" : "fa-toggle-off")"></i>
                                            </button>
                                        </form>
                                        <form method="post" asp-page-handler="DeleteFeature" class="inline" onsubmit="return confirm('Delete this feature? This will remove it from all plans.')">
                                            <input type="hidden" name="featureId" value="@feature.Id" />
                                            <button type="submit"
                                                    class="p-1.5 text-gray-400 hover:text-red-500 dark:hover:text-red-400 transition-colors"
                                                    title="Delete">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                }

                @if (!Model.FeaturesByCategory.Any())
                {
                    <div class="text-center py-8">
                        <i class="fas fa-cube text-5xl text-gray-300 dark:text-gray-600 mb-4"></i>
                        <p class="text-gray-500 dark:text-gray-400 mb-3">No features defined yet.</p>
                        <button type="button" onclick="openAddFeatureModal()"
                                class="text-purple-600 hover:text-purple-700 font-medium text-sm dark:text-purple-400">
                            <i class="fas fa-plus me-1"></i> Add your first feature
                        </button>
                    </div>
                }
            </div>
        </div>

        <!-- Plan Feature Matrix (Right Column) -->
        <div class="lg:col-span-2">
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6">
                <h2 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">Plan Feature Matrix</h2>
                <p class="text-sm text-gray-500 dark:text-gray-400 mb-6">Click checkboxes to add or remove features from each plan.</p>

                @if (Model.PlansWithFeatures.Any() && Model.AllFeatures.Any())
                {
                    <div class="overflow-x-auto">
                        <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
                            <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                                <tr>
                                    <th scope="col" class="px-4 py-3 min-w-[200px]">Feature</th>
                                    @foreach (var plan in Model.PlansWithFeatures)
                                    {
                                        <th scope="col" class="px-4 py-3 text-center min-w-[100px]">
                                            <div class="font-semibold">@plan.Name</div>
                                            <div class="text-xs font-normal text-gray-500 dark:text-gray-400">$@plan.MonthlyPrice/mo</div>
                                        </th>
                                    }
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var category in Model.FeaturesByCategory)
                                {
                                    <tr class="bg-gray-100 dark:bg-gray-700/50">
                                        <td colspan="@(Model.PlansWithFeatures.Count() + 1)" class="px-4 py-2 text-xs font-bold text-gray-500 dark:text-gray-400 uppercase tracking-wide">
                                            @category.Key
                                        </td>
                                    </tr>
                                    @foreach (var feature in category.Value.Where(f => f.IsActive))
                                    {
                                        <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-700">
                                            <td class="px-4 py-3">
                                                <div class="flex items-center">
                                                    <i class="@(feature.IconClass ?? "fas fa-cube") text-purple-500 me-2 w-4 text-center"></i>
                                                    <span class="text-gray-900 dark:text-white">@feature.Name</span>
                                                </div>
                                            </td>
                                            @foreach (var plan in Model.PlansWithFeatures)
                                            {
                                                var hasFeature = plan.Features.Any(f => f.Id == feature.Id);
                                                <td class="px-4 py-3 text-center">
                                                    <form method="post" asp-page-handler="@(hasFeature ? "RemoveFeature" : "AssignFeature")" class="inline">
                                                        <input type="hidden" name="planId" value="@plan.Id" />
                                                        <input type="hidden" name="featureId" value="@feature.Id" />
                                                        <button type="submit"
                                                                class="w-6 h-6 rounded border-2 flex items-center justify-center transition-all @(hasFeature ? "bg-purple-500 border-purple-500 text-white" : "border-gray-300 dark:border-gray-600 hover:border-purple-400")">
                                                            @if (hasFeature)
                                                            {
                                                                <i class="fas fa-check text-xs"></i>
                                                            }
                                                        </button>
                                                    </form>
                                                </td>
                                            }
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-12">
                        <i class="fas fa-table text-5xl text-gray-300 dark:text-gray-600 mb-4"></i>
                        <p class="text-gray-500 dark:text-gray-400">Add features and plans to see the feature matrix.</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Add/Edit Feature Modal -->
<div id="featureModal" class="fixed inset-0 bg-gray-900/50 backdrop-blur-sm hidden items-center justify-center z-50">
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-xl max-w-lg w-full mx-4">
        <div class="p-6">
            <div class="flex items-center justify-between mb-4">
                <h3 id="featureModalTitle" class="text-lg font-semibold text-gray-900 dark:text-white">Add Feature</h3>
                <button type="button" onclick="closeFeatureModal()" class="text-gray-400 hover:text-gray-600 dark:hover:text-white">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            <form method="post" id="featureForm">
                <input type="hidden" name="featureId" id="editFeatureId" value="0" />
                <input type="hidden" name="handler" id="featureFormHandler" value="AddFeature" />

                <div class="grid grid-cols-2 gap-4 mb-4">
                    <div>
                        <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">Code</label>
                        <input type="text" name="code" id="featureCode" required placeholder="e.g., ai_chatbot"
                               class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white" />
                    </div>
                    <div>
                        <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">Name</label>
                        <input type="text" name="name" id="featureName" required placeholder="e.g., AI Chatbot"
                               class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white" />
                    </div>
                </div>

                <div class="mb-4">
                    <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">Description</label>
                    <textarea name="description" id="featureDescription" rows="2" required placeholder="What does this feature do?"
                              class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white"></textarea>
                </div>

                <div class="grid grid-cols-3 gap-4 mb-4">
                    <div>
                        <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">Category</label>
                        <select name="category" id="featureCategory" required
                                class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white">
                            <option value="Communication">Communication</option>
                            <option value="AI Tools">AI Tools</option>
                            <option value="Analytics">Analytics</option>
                            <option value="Operations">Operations</option>
                            <option value="Customer Hub">Customer Hub</option>
                            <option value="Integrations">Integrations</option>
                            <option value="Marketing">Marketing</option>
                        </select>
                    </div>
                    <div>
                        <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">Icon Class</label>
                        <input type="text" name="iconClass" id="featureIconClass" placeholder="fas fa-robot"
                               class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white" />
                    </div>
                    <div>
                        <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">Sort Order</label>
                        <input type="number" name="sortOrder" id="featureSortOrder" value="0"
                               class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white" />
                    </div>
                </div>

                <div id="editActiveContainer" class="mb-4 hidden">
                    <label class="flex items-center cursor-pointer">
                        <input type="checkbox" name="isActive" id="featureIsActive" value="true" checked
                               class="w-4 h-4 text-purple-600 bg-gray-100 border-gray-300 rounded focus:ring-purple-500 dark:bg-gray-700 dark:border-gray-600" />
                        <span class="ms-2 text-sm text-gray-700 dark:text-gray-300">Active</span>
                    </label>
                </div>

                <div class="flex justify-end gap-3">
                    <button type="button" onclick="closeFeatureModal()"
                            class="px-4 py-2.5 text-sm font-medium text-gray-900 bg-white border border-gray-300 rounded-lg hover:bg-gray-100 focus:ring-4 focus:outline-none focus:ring-gray-200 dark:bg-gray-800 dark:text-white dark:border-gray-600 dark:hover:bg-gray-700">
                        Cancel
                    </button>
                    <button type="submit"
                            class="px-4 py-2.5 text-sm font-medium text-white bg-gradient-to-br from-purple-600 to-pink-500 rounded-lg hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-purple-300">
                        <span id="featureSubmitText">Add Feature</span>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function openAddFeatureModal() {
            document.getElementById('featureModalTitle').textContent = 'Add Feature';
            document.getElementById('featureSubmitText').textContent = 'Add Feature';
            document.getElementById('editFeatureId').value = '0';
            document.getElementById('featureFormHandler').value = 'AddFeature';
            document.getElementById('featureCode').value = '';
            document.getElementById('featureCode').disabled = false;
            document.getElementById('featureName').value = '';
            document.getElementById('featureDescription').value = '';
            document.getElementById('featureCategory').value = 'Communication';
            document.getElementById('featureIconClass').value = '';
            document.getElementById('featureSortOrder').value = '0';
            document.getElementById('editActiveContainer').classList.add('hidden');

            document.getElementById('featureModal').classList.remove('hidden');
            document.getElementById('featureModal').classList.add('flex');
        }

        function openEditFeatureModal(id, code, name, description, category, iconClass, sortOrder, isActive) {
            document.getElementById('featureModalTitle').textContent = 'Edit Feature';
            document.getElementById('featureSubmitText').textContent = 'Save Changes';
            document.getElementById('editFeatureId').value = id;
            document.getElementById('featureFormHandler').value = 'UpdateFeature';
            document.getElementById('featureCode').value = code;
            document.getElementById('featureCode').disabled = true;
            document.getElementById('featureName').value = name;
            document.getElementById('featureDescription').value = description;
            document.getElementById('featureCategory').value = category;
            document.getElementById('featureIconClass').value = iconClass || '';
            document.getElementById('featureSortOrder').value = sortOrder;
            document.getElementById('featureIsActive').checked = isActive;
            document.getElementById('editActiveContainer').classList.remove('hidden');

            document.getElementById('featureModal').classList.remove('hidden');
            document.getElementById('featureModal').classList.add('flex');
        }

        function closeFeatureModal() {
            document.getElementById('featureModal').classList.add('hidden');
            document.getElementById('featureModal').classList.remove('flex');
        }

        document.getElementById('featureModal').addEventListener('click', function(e) {
            if (e.target === this) {
                closeFeatureModal();
            }
        });

        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') {
                closeFeatureModal();
            }
        });

        document.getElementById('featureForm').addEventListener('submit', function(e) {
            const handler = document.getElementById('featureFormHandler').value;
            this.action = '?handler=' + handler;
        });
    </script>
}
