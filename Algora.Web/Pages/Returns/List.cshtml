@page "/returns/list"
@model Algora.Web.Pages.Returns.ListModel
@{
    ViewData["Title"] = "All Returns";
}

@section css {
    <link rel="stylesheet" href="~/css/datatable.css" asp-append-version="true" />
}

<div class="w-full px-6 py-6 mx-auto">
    <!-- Page Header -->
    <div class="flex flex-wrap items-center justify-between mb-6">
        <div>
            <nav class="flex mb-2" aria-label="Breadcrumb">
                <ol class="inline-flex items-center space-x-1 md:space-x-3">
                    <li class="inline-flex items-center">
                        <a href="/returns" class="text-sm text-slate-400 hover:text-indigo-600 dark:text-white dark:opacity-60">Returns</a>
                    </li>
                    <li>
                        <div class="flex items-center">
                            <i class="fas fa-chevron-right text-xs text-slate-400 mx-2"></i>
                            <span class="text-sm text-slate-700 dark:text-white">All Returns</span>
                        </div>
                    </li>
                </ol>
            </nav>
            <h6 class="mb-0 dark:text-white text-xl font-bold">All Returns</h6>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="mb-6 p-4 text-sm text-red-700 bg-red-100 rounded-lg dark:bg-red-200 dark:text-red-800" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i>
            @Model.ErrorMessage
        </div>
    }

    <!-- Filters -->
    <div class="flex flex-wrap -mx-3 mb-6">
        <div class="flex-none w-full max-w-full px-3">
            <div class="relative flex flex-col min-w-0 break-words bg-white border-0 shadow-soft-xl rounded-2xl bg-clip-border dark:bg-gray-950 dark:shadow-soft-dark-xl">
                <div class="p-6">
                    <form method="get" class="flex flex-wrap gap-4 items-end">
                        <div class="flex-1 min-w-[200px]">
                            <label class="mb-2 ml-1 font-bold text-xs text-slate-700 dark:text-white/80">Search</label>
                            <input type="text" name="Search" value="@Model.Search"
                                   class="focus:shadow-soft-primary-outline dark:bg-gray-950 dark:placeholder:text-white/80 dark:text-white/80 text-sm leading-5.6 ease-soft block w-full appearance-none rounded-lg border border-solid border-gray-300 bg-white bg-clip-padding px-3 py-2 font-normal text-gray-700 outline-none transition-all placeholder:text-gray-500 focus:border-fuchsia-300 focus:outline-none"
                                   placeholder="Order #, Request #, Email..." />
                        </div>
                        <div class="w-40">
                            <label class="mb-2 ml-1 font-bold text-xs text-slate-700 dark:text-white/80">Status</label>
                            <select name="Status"
                                    class="focus:shadow-soft-primary-outline dark:bg-gray-950 dark:placeholder:text-white/80 dark:text-white/80 text-sm leading-5.6 ease-soft block w-full appearance-none rounded-lg border border-solid border-gray-300 bg-white bg-clip-padding px-3 py-2 font-normal text-gray-700 outline-none transition-all placeholder:text-gray-500 focus:border-fuchsia-300 focus:outline-none">
                                <option value="">All</option>
                                <option value="pending" selected="@(Model.Status == "pending")">Pending</option>
                                <option value="approved" selected="@(Model.Status == "approved")">Approved</option>
                                <option value="shipped" selected="@(Model.Status == "shipped")">Shipped</option>
                                <option value="received" selected="@(Model.Status == "received")">Received</option>
                                <option value="refunded" selected="@(Model.Status == "refunded")">Refunded</option>
                                <option value="rejected" selected="@(Model.Status == "rejected")">Rejected</option>
                                <option value="cancelled" selected="@(Model.Status == "cancelled")">Cancelled</option>
                            </select>
                        </div>
                        <div class="w-40">
                            <label class="mb-2 ml-1 font-bold text-xs text-slate-700 dark:text-white/80">From</label>
                            <input type="date" name="StartDate" value="@(Model.StartDate?.ToString("yyyy-MM-dd"))"
                                   class="focus:shadow-soft-primary-outline dark:bg-gray-950 dark:placeholder:text-white/80 dark:text-white/80 text-sm leading-5.6 ease-soft block w-full appearance-none rounded-lg border border-solid border-gray-300 bg-white bg-clip-padding px-3 py-2 font-normal text-gray-700 outline-none transition-all placeholder:text-gray-500 focus:border-fuchsia-300 focus:outline-none" />
                        </div>
                        <div class="w-40">
                            <label class="mb-2 ml-1 font-bold text-xs text-slate-700 dark:text-white/80">To</label>
                            <input type="date" name="EndDate" value="@(Model.EndDate?.ToString("yyyy-MM-dd"))"
                                   class="focus:shadow-soft-primary-outline dark:bg-gray-950 dark:placeholder:text-white/80 dark:text-white/80 text-sm leading-5.6 ease-soft block w-full appearance-none rounded-lg border border-solid border-gray-300 bg-white bg-clip-padding px-3 py-2 font-normal text-gray-700 outline-none transition-all placeholder:text-gray-500 focus:border-fuchsia-300 focus:outline-none" />
                        </div>
                        <div>
                            <button type="submit"
                                    class="inline-block px-4 py-2 text-xs font-bold text-center text-white uppercase align-middle transition-all border-0 rounded-lg cursor-pointer ease-soft-in leading-pro tracking-tight-soft bg-gradient-to-tl from-indigo-600 to-purple-400 shadow-soft-md bg-150 bg-x-25 hover:scale-102 active:opacity-85">
                                <i class="fas fa-search me-1"></i> Filter
                            </button>
                            @if (!string.IsNullOrEmpty(Model.Status) || !string.IsNullOrEmpty(Model.Search) || Model.StartDate.HasValue || Model.EndDate.HasValue)
                            {
                                <a href="/returns/list" class="ml-2 text-sm text-slate-400 hover:text-indigo-600">Clear</a>
                            }
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Returns Table -->
    <div class="flex flex-wrap -mx-3">
        <div class="flex-none w-full max-w-full px-3">
            <div class="relative flex flex-col min-w-0 mb-6 break-words bg-white border-0 shadow-soft-xl rounded-2xl bg-clip-border dark:bg-gray-950 dark:shadow-soft-dark-xl">
                <div class="p-6 pb-0 mb-0 border-b-0 rounded-t-2xl">
                    <div class="flex flex-wrap items-center justify-between">
                        <div>
                            <h6 class="mb-0 dark:text-white">Returns</h6>
                            <p class="mb-0 text-sm leading-normal dark:text-white dark:opacity-60">
                                <span class="font-semibold">@Model.Returns.TotalCount</span> return requests found
                            </p>
                        </div>
                    </div>
                </div>

                <div class="flex-auto p-6 px-0 pb-0">
                    @if (Model.Returns.Items.Count == 0)
                    {
                        <div class="text-center py-12">
                            <i class="fas fa-undo fa-4x text-gray-300 mb-4"></i>
                            <p class="text-gray-500 dark:text-gray-400">No returns found matching your criteria.</p>
                        </div>
                    }
                    else
                    {
                        <div class="overflow-x-auto">
                            <table class="table items-center w-full mb-0 align-top border-gray-200 text-slate-500 dark:border-white/40">
                                <thead class="align-bottom">
                                    <tr>
                                        <th class="px-6 py-3 font-bold text-left uppercase align-middle bg-transparent border-b border-gray-200 shadow-none text-xxs border-b-solid tracking-none whitespace-nowrap text-slate-400 opacity-70 dark:border-white/40 dark:text-white dark:opacity-80">Request</th>
                                        <th class="px-6 py-3 font-bold text-left uppercase align-middle bg-transparent border-b border-gray-200 shadow-none text-xxs border-b-solid tracking-none whitespace-nowrap text-slate-400 opacity-70 dark:border-white/40 dark:text-white dark:opacity-80">Customer</th>
                                        <th class="px-6 py-3 font-bold text-center uppercase align-middle bg-transparent border-b border-gray-200 shadow-none text-xxs border-b-solid tracking-none whitespace-nowrap text-slate-400 opacity-70 dark:border-white/40 dark:text-white dark:opacity-80">Items</th>
                                        <th class="px-6 py-3 font-bold text-center uppercase align-middle bg-transparent border-b border-gray-200 shadow-none text-xxs border-b-solid tracking-none whitespace-nowrap text-slate-400 opacity-70 dark:border-white/40 dark:text-white dark:opacity-80">Amount</th>
                                        <th class="px-6 py-3 font-bold text-center uppercase align-middle bg-transparent border-b border-gray-200 shadow-none text-xxs border-b-solid tracking-none whitespace-nowrap text-slate-400 opacity-70 dark:border-white/40 dark:text-white dark:opacity-80">Reason</th>
                                        <th class="px-6 py-3 font-bold text-center uppercase align-middle bg-transparent border-b border-gray-200 shadow-none text-xxs border-b-solid tracking-none whitespace-nowrap text-slate-400 opacity-70 dark:border-white/40 dark:text-white dark:opacity-80">Status</th>
                                        <th class="px-6 py-3 font-bold text-center uppercase align-middle bg-transparent border-b border-gray-200 shadow-none text-xxs border-b-solid tracking-none whitespace-nowrap text-slate-400 opacity-70 dark:border-white/40 dark:text-white dark:opacity-80">Date</th>
                                        <th class="px-6 py-3 font-bold text-center uppercase align-middle bg-transparent border-b border-gray-200 shadow-none text-xxs border-b-solid tracking-none whitespace-nowrap text-slate-400 opacity-70 dark:border-white/40 dark:text-white dark:opacity-80">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var ret in Model.Returns.Items)
                                    {
                                        <tr>
                                            <td class="p-2 align-middle bg-transparent border-b whitespace-nowrap dark:border-white/40">
                                                <div class="px-2 py-1">
                                                    <p class="mb-0 text-sm font-semibold dark:text-white">@ret.RequestNumber</p>
                                                    <p class="mb-0 text-xs text-slate-400">Order #@ret.OrderNumber</p>
                                                </div>
                                            </td>
                                            <td class="p-2 align-middle bg-transparent border-b whitespace-nowrap dark:border-white/40">
                                                <div class="px-2 py-1">
                                                    <p class="mb-0 text-sm dark:text-white">@ret.CustomerName</p>
                                                    <p class="mb-0 text-xs text-slate-400">@ret.CustomerEmail</p>
                                                </div>
                                            </td>
                                            <td class="p-2 text-center align-middle bg-transparent border-b whitespace-nowrap dark:border-white/40">
                                                <span class="text-sm font-semibold dark:text-white">@ret.Items.Sum(i => i.QuantityReturned)</span>
                                            </td>
                                            <td class="p-2 text-center align-middle bg-transparent border-b whitespace-nowrap dark:border-white/40">
                                                <span class="text-sm font-semibold dark:text-white">@ret.Currency @ret.TotalRefundAmount.ToString("N2")</span>
                                            </td>
                                            <td class="p-2 text-center align-middle bg-transparent border-b whitespace-nowrap dark:border-white/40">
                                                <span class="text-sm dark:text-white" title="@ret.ReasonDescription">
                                                    @(ret.ReasonDescription?.Length > 20 ? ret.ReasonDescription.Substring(0, 17) + "..." : ret.ReasonDescription ?? ret.ReasonCode)
                                                </span>
                                            </td>
                                            <td class="p-2 text-center align-middle bg-transparent border-b whitespace-nowrap dark:border-white/40">
                                                <span class="bg-gradient-to-tl @Model.GetStatusBadgeClass(ret.Status) px-2.5 text-xxs rounded-1.8 py-1.4 inline-block whitespace-nowrap text-center align-baseline font-bold uppercase leading-none text-white">
                                                    @ret.Status
                                                </span>
                                                @if (ret.IsAutoApproved)
                                                {
                                                    <span class="ml-1 text-xxs text-green-600" title="Auto-approved">
                                                        <i class="fas fa-bolt"></i>
                                                    </span>
                                                }
                                            </td>
                                            <td class="p-2 text-center align-middle bg-transparent border-b whitespace-nowrap dark:border-white/40">
                                                <span class="text-sm dark:text-white">@ret.RequestedAt.ToString("MMM d, yyyy")</span>
                                            </td>
                                            <td class="p-2 text-center align-middle bg-transparent border-b whitespace-nowrap dark:border-white/40">
                                                <a href="/returns/details/@ret.Id" class="text-xs font-semibold leading-tight text-slate-400 dark:text-white dark:opacity-80 hover:text-indigo-600">
                                                    <i class="fas fa-eye"></i> View
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <!-- Pagination -->
                        @if (Model.Returns.TotalPages > 1)
                        {
                            <div class="flex items-center justify-between p-6">
                                <div class="text-sm text-slate-400">
                                    Showing @((Model.Page - 1) * Model.PageSize + 1) to @Math.Min(Model.Page * Model.PageSize, Model.Returns.TotalCount) of @Model.Returns.TotalCount
                                </div>
                                <div class="flex gap-2">
                                    @if (Model.Page > 1)
                                    {
                                        <a href="/returns/list?Page=@(Model.Page - 1)&Status=@Model.Status&Search=@Model.Search&StartDate=@(Model.StartDate?.ToString("yyyy-MM-dd"))&EndDate=@(Model.EndDate?.ToString("yyyy-MM-dd"))"
                                           class="px-3 py-1 text-sm border border-gray-300 rounded-lg hover:bg-gray-50 dark:border-gray-700 dark:hover:bg-gray-800">
                                            <i class="fas fa-chevron-left"></i>
                                        </a>
                                    }
                                    @for (int i = Math.Max(1, Model.Page - 2); i <= Math.Min(Model.Returns.TotalPages, Model.Page + 2); i++)
                                    {
                                        var pageNum = i;
                                        <a href="/returns/list?Page=@pageNum&Status=@Model.Status&Search=@Model.Search&StartDate=@(Model.StartDate?.ToString("yyyy-MM-dd"))&EndDate=@(Model.EndDate?.ToString("yyyy-MM-dd"))"
                                           class="px-3 py-1 text-sm border rounded-lg @(pageNum == Model.Page ? "bg-indigo-600 text-white border-indigo-600" : "border-gray-300 hover:bg-gray-50 dark:border-gray-700 dark:hover:bg-gray-800")">
                                            @pageNum
                                        </a>
                                    }
                                    @if (Model.Page < Model.Returns.TotalPages)
                                    {
                                        <a href="/returns/list?Page=@(Model.Page + 1)&Status=@Model.Status&Search=@Model.Search&StartDate=@(Model.StartDate?.ToString("yyyy-MM-dd"))&EndDate=@(Model.EndDate?.ToString("yyyy-MM-dd"))"
                                           class="px-3 py-1 text-sm border border-gray-300 rounded-lg hover:bg-gray-50 dark:border-gray-700 dark:hover:bg-gray-800">
                                            <i class="fas fa-chevron-right"></i>
                                        </a>
                                    }
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>
