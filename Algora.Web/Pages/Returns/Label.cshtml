@page "/returns/label/{requestNumber}"
@model Algora.Web.Pages.Returns.LabelModel
@{
    Layout = null;
    var primaryColor = Model.Settings?.PrimaryColor ?? "#4f46e5";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Shipping Label - @(Model.ReturnRequest?.RequestNumber ?? "Return Label")</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <style>
        :root {
            --primary-color: @primaryColor;
        }
        .btn-primary {
            background-color: var(--primary-color);
        }
        .btn-primary:hover {
            opacity: 0.9;
        }
        .text-primary {
            color: var(--primary-color);
        }

        @@media print {
            .no-print {
                display: none !important;
            }
            .print-only {
                display: block !important;
            }
            body {
                background: white !important;
            }
        }

        .print-only {
            display: none;
        }
    </style>
</head>
<body class="bg-gray-50 min-h-screen">
    <div class="max-w-2xl mx-auto px-4 py-8">
        <!-- Logo (no print) -->
        @if (!string.IsNullOrEmpty(Model.Settings?.LogoUrl))
        {
            <div class="text-center mb-6 no-print">
                <img src="@Model.Settings.LogoUrl" alt="Logo" class="h-12 mx-auto" />
            </div>
        }

        <!-- Error Message -->
        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-6">
                @Model.ErrorMessage
            </div>

            @if (Model.ReturnRequest != null)
            {
                <a href="/returns/status/@Model.ReturnRequest.RequestNumber?shop=@Model.ShopDomain"
                   class="block w-full text-center border border-gray-300 text-gray-700 py-3 px-4 rounded-md font-medium hover:bg-gray-50">
                    View Return Status
                </a>
            }
            else
            {
                <a href="/returns/request?shop=@Model.ShopDomain"
                   class="block w-full text-center border border-gray-300 text-gray-700 py-3 px-4 rounded-md font-medium hover:bg-gray-50">
                    Start a Return
                </a>
            }
        }
        else if (Model.ReturnRequest?.Label != null)
        {
            var label = Model.ReturnRequest.Label;

            <!-- Header (no print) -->
            <div class="text-center mb-6 no-print">
                <h1 class="text-2xl font-bold text-gray-900">Your Shipping Label</h1>
                <p class="text-gray-600">Return Request #@Model.ReturnRequest.RequestNumber</p>
            </div>

            <!-- Instructions (no print) -->
            <div class="bg-blue-50 border border-blue-200 rounded-lg p-4 mb-6 no-print">
                <h2 class="font-semibold text-blue-800 mb-2">Instructions</h2>
                <ol class="list-decimal list-inside text-blue-700 text-sm space-y-1">
                    <li>Print this shipping label on a standard letter-size paper</li>
                    <li>Carefully pack your items in a sturdy box</li>
                    <li>Attach the label securely to the outside of the package</li>
                    <li>Drop off your package at any @label.Carrier location</li>
                </ol>
            </div>

            <!-- Label Info Card -->
            <div class="bg-white rounded-lg shadow-md p-6 mb-6">
                <div class="flex items-center justify-between mb-4">
                    <h2 class="text-lg font-semibold text-gray-900">Label Details</h2>
                    <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800">
                        @label.Carrier.ToUpper()
                    </span>
                </div>

                <div class="grid grid-cols-2 gap-4 text-sm mb-6">
                    <div>
                        <p class="text-gray-500">Tracking Number</p>
                        <p class="font-mono font-medium">@label.TrackingNumber</p>
                    </div>
                    <div>
                        <p class="text-gray-500">Service</p>
                        <p class="font-medium">@label.ServiceLevel</p>
                    </div>
                    <div>
                        <p class="text-gray-500">Created</p>
                        <p class="font-medium">@label.CreatedAt.ToString("MMM d, yyyy")</p>
                    </div>
                    <div>
                        <p class="text-gray-500">Expires</p>
                        <p class="font-medium @(label.ExpiresAt.HasValue && label.ExpiresAt.Value < DateTime.UtcNow.AddDays(3) ? "text-red-600" : "")">
                            @(label.ExpiresAt?.ToString("MMM d, yyyy") ?? "N/A")
                        </p>
                    </div>
                </div>

                @if (!string.IsNullOrEmpty(label.TrackingUrl))
                {
                    <a href="@label.TrackingUrl"
                       target="_blank"
                       class="text-primary text-sm hover:underline no-print">
                        Track your package
                    </a>
                }
            </div>

            <!-- Shipping Label Preview/Download -->
            <div class="bg-white rounded-lg shadow-md p-6 mb-6">
                <h2 class="text-lg font-semibold text-gray-900 mb-4">Prepaid Shipping Label</h2>

                @if (label.LabelFormat.ToUpper() == "PDF")
                {
                    <!-- PDF Preview -->
                    <div class="border border-gray-200 rounded-lg overflow-hidden mb-4" style="height: 500px;">
                        <iframe src="@label.LabelUrl"
                                class="w-full h-full"
                                title="Shipping Label"></iframe>
                    </div>
                }
                else
                {
                    <!-- Image Preview -->
                    <div class="border border-gray-200 rounded-lg p-4 mb-4">
                        <img src="@label.LabelUrl"
                             alt="Shipping Label"
                             class="w-full max-w-md mx-auto" />
                    </div>
                }

                <!-- Action Buttons -->
                <div class="flex flex-col sm:flex-row gap-3 no-print">
                    <a href="@label.LabelUrl"
                       download="return-label-@Model.ReturnRequest.RequestNumber.@label.LabelFormat.ToLower()"
                       class="flex-1 text-center btn-primary text-white py-3 px-4 rounded-md font-medium">
                        <svg class="w-5 h-5 inline-block mr-2 -mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"></path>
                        </svg>
                        Download Label
                    </a>
                    <button onclick="window.print()"
                            class="flex-1 text-center border border-gray-300 text-gray-700 py-3 px-4 rounded-md font-medium hover:bg-gray-50">
                        <svg class="w-5 h-5 inline-block mr-2 -mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 17h2a2 2 0 002-2v-4a2 2 0 00-2-2H5a2 2 0 00-2 2v4a2 2 0 002 2h2m2 4h6a2 2 0 002-2v-4a2 2 0 00-2-2H9a2 2 0 00-2 2v4a2 2 0 002 2zm8-12V5a2 2 0 00-2-2H9a2 2 0 00-2 2v4h10z"></path>
                        </svg>
                        Print Label
                    </button>
                </div>
            </div>

            <!-- Items Being Returned -->
            <div class="bg-white rounded-lg shadow-md p-6 mb-6 no-print">
                <h2 class="text-lg font-semibold text-gray-900 mb-4">Items to Include</h2>

                <div class="divide-y divide-gray-200">
                    @foreach (var item in Model.ReturnRequest.Items)
                    {
                        <div class="py-3 flex items-center gap-4">
                            @if (!string.IsNullOrEmpty(item.ImageUrl))
                            {
                                <img src="@item.ImageUrl" alt="@item.ProductTitle" class="w-12 h-12 object-cover rounded" />
                            }
                            else
                            {
                                <div class="w-12 h-12 bg-gray-200 rounded flex items-center justify-center">
                                    <svg class="w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                                    </svg>
                                </div>
                            }
                            <div class="flex-1 min-w-0">
                                <p class="font-medium text-gray-900 truncate">@item.ProductTitle</p>
                                @if (!string.IsNullOrEmpty(item.VariantTitle))
                                {
                                    <p class="text-sm text-gray-500">@item.VariantTitle</p>
                                }
                            </div>
                            <div class="text-right">
                                <p class="font-medium text-gray-900">Qty: @item.QuantityReturned</p>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- Expiration Warning -->
            @if (label.ExpiresAt.HasValue && label.ExpiresAt.Value < DateTime.UtcNow.AddDays(7))
            {
                <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4 mb-6 no-print">
                    <div class="flex items-center">
                        <svg class="w-5 h-5 text-yellow-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
                        </svg>
                        <span class="text-yellow-800">
                            This label expires on <strong>@label.ExpiresAt.Value.ToString("MMMM d, yyyy")</strong>. Please ship your return before this date.
                        </span>
                    </div>
                </div>
            }

            <!-- Links -->
            <div class="flex flex-col sm:flex-row gap-3 no-print">
                <a href="/returns/status/@Model.ReturnRequest.RequestNumber?shop=@Model.ShopDomain"
                   class="flex-1 text-center border border-gray-300 text-gray-700 py-3 px-4 rounded-md font-medium hover:bg-gray-50">
                    View Return Status
                </a>
                <a href="/returns/request?shop=@Model.ShopDomain"
                   class="flex-1 text-center border border-gray-300 text-gray-700 py-3 px-4 rounded-md font-medium hover:bg-gray-50">
                    Start Another Return
                </a>
            </div>
        }
    </div>

    <!-- Print-only content -->
    <div class="print-only p-8">
        @if (Model.ReturnRequest?.Label != null)
        {
            <div class="text-center mb-4">
                <h1 class="text-xl font-bold">Return Shipping Label</h1>
                <p>Return Request: @Model.ReturnRequest.RequestNumber</p>
            </div>
            <div class="border border-black p-4">
                <p class="text-sm mb-2">Tracking: @Model.ReturnRequest.Label.TrackingNumber</p>
                <p class="text-sm">Carrier: @Model.ReturnRequest.Label.Carrier</p>
            </div>
            <p class="text-sm mt-4">Please print the full label from the PDF for shipping.</p>
        }
    </div>
</body>
</html>
