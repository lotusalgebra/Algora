@page "/returns/label/{requestNumber}"
@model Algora.Web.Pages.Returns.LabelModel
@{
    Layout = null;
    var primaryColor = Model.Settings?.PrimaryColor ?? "#9333ea";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Shipping Label - @(Model.ReturnRequest?.RequestNumber ?? "Return Label")</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: '@primaryColor',
                    }
                }
            }
        }
    </script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    <style>
        @@media print {
            .no-print { display: none !important; }
            .print-only { display: block !important; }
            body { background: white !important; }
        }
        .print-only { display: none; }
    </style>
</head>
<body class="bg-gray-50 min-h-screen">
    <div class="max-w-2xl mx-auto px-4 py-8">
        <!-- Logo (no print) -->
        @if (!string.IsNullOrEmpty(Model.Settings?.LogoUrl))
        {
            <div class="text-center mb-6 no-print">
                <img src="@Model.Settings.LogoUrl" alt="Logo" class="h-12 mx-auto" />
            </div>
        }

        <!-- Error Message -->
        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="flex items-center p-4 mb-6 text-sm text-red-800 rounded-lg bg-red-50" role="alert">
                <i class="fas fa-exclamation-circle me-2"></i>
                @Model.ErrorMessage
            </div>

            @if (Model.ReturnRequest != null)
            {
                <a href="/returns/status/@Model.ReturnRequest.RequestNumber?shop=@Model.ShopDomain"
                   class="block w-full text-center border border-gray-300 text-gray-700 py-3 px-4 rounded-lg font-medium hover:bg-gray-100 transition-colors">
                    View Return Status
                </a>
            }
            else
            {
                <a href="/returns/request?shop=@Model.ShopDomain"
                   class="block w-full text-center border border-gray-300 text-gray-700 py-3 px-4 rounded-lg font-medium hover:bg-gray-100 transition-colors">
                    Start a Return
                </a>
            }
        }
        else if (Model.ReturnRequest?.Label != null)
        {
            var label = Model.ReturnRequest.Label;

            <!-- Header (no print) -->
            <div class="text-center mb-6 no-print">
                <h1 class="text-2xl font-bold text-gray-900">Your Shipping Label</h1>
                <p class="text-gray-600">Return Request #@Model.ReturnRequest.RequestNumber</p>
            </div>

            <!-- Instructions (no print) -->
            <div class="bg-blue-50 border border-blue-200 rounded-xl p-5 mb-6 no-print">
                <h2 class="font-semibold text-blue-800 mb-3 flex items-center">
                    <i class="fas fa-info-circle me-2"></i> Instructions
                </h2>
                <ol class="list-decimal list-inside text-blue-700 text-sm space-y-2">
                    <li>Print this shipping label on a standard letter-size paper</li>
                    <li>Carefully pack your items in a sturdy box</li>
                    <li>Attach the label securely to the outside of the package</li>
                    <li>Drop off your package at any <span class="font-semibold">@label.Carrier</span> location</li>
                </ol>
            </div>

            <!-- Label Info Card -->
            <div class="bg-white rounded-xl shadow-md p-6 mb-6">
                <div class="flex items-center justify-between mb-4">
                    <h2 class="text-lg font-semibold text-gray-900">Label Details</h2>
                    <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800">
                        @label.Carrier.ToUpper()
                    </span>
                </div>

                <div class="grid grid-cols-2 gap-4 text-sm mb-6">
                    <div class="p-3 bg-gray-50 rounded-lg">
                        <p class="text-gray-500 text-xs uppercase tracking-wide mb-1">Tracking Number</p>
                        <p class="font-mono font-semibold text-gray-900">@label.TrackingNumber</p>
                    </div>
                    <div class="p-3 bg-gray-50 rounded-lg">
                        <p class="text-gray-500 text-xs uppercase tracking-wide mb-1">Service</p>
                        <p class="font-semibold text-gray-900">@label.ServiceLevel</p>
                    </div>
                    <div class="p-3 bg-gray-50 rounded-lg">
                        <p class="text-gray-500 text-xs uppercase tracking-wide mb-1">Created</p>
                        <p class="font-semibold text-gray-900">@label.CreatedAt.ToString("MMM d, yyyy")</p>
                    </div>
                    <div class="p-3 bg-gray-50 rounded-lg">
                        <p class="text-gray-500 text-xs uppercase tracking-wide mb-1">Expires</p>
                        <p class="font-semibold @(label.ExpiresAt.HasValue && label.ExpiresAt.Value < DateTime.UtcNow.AddDays(3) ? "text-red-600" : "text-gray-900")">
                            @(label.ExpiresAt?.ToString("MMM d, yyyy") ?? "N/A")
                        </p>
                    </div>
                </div>

                @if (!string.IsNullOrEmpty(label.TrackingUrl))
                {
                    <a href="@label.TrackingUrl" target="_blank"
                       class="inline-flex items-center text-primary text-sm font-medium hover:underline no-print">
                        <i class="fas fa-external-link-alt me-2"></i> Track your package
                    </a>
                }
            </div>

            <!-- Shipping Label Preview/Download -->
            <div class="bg-white rounded-xl shadow-md p-6 mb-6">
                <h2 class="text-lg font-semibold text-gray-900 mb-4">Prepaid Shipping Label</h2>

                @if (label.LabelFormat.ToUpper() == "PDF")
                {
                    <!-- PDF Preview -->
                    <div class="border border-gray-200 rounded-lg overflow-hidden mb-4" style="height: 500px;">
                        <iframe src="@label.LabelUrl" class="w-full h-full" title="Shipping Label"></iframe>
                    </div>
                }
                else
                {
                    <!-- Image Preview -->
                    <div class="border border-gray-200 rounded-lg p-4 mb-4 bg-gray-50">
                        <img src="@label.LabelUrl" alt="Shipping Label" class="w-full max-w-md mx-auto" />
                    </div>
                }

                <!-- Action Buttons -->
                <div class="flex flex-col sm:flex-row gap-3 no-print">
                    <a href="@label.LabelUrl"
                       download="return-label-@Model.ReturnRequest.RequestNumber.@label.LabelFormat.ToLower()"
                       class="flex-1 inline-flex items-center justify-center bg-primary text-white py-3 px-4 rounded-lg font-medium hover:opacity-90 transition-opacity">
                        <i class="fas fa-download me-2"></i> Download Label
                    </a>
                    <button onclick="window.print()"
                            class="flex-1 inline-flex items-center justify-center border border-gray-300 text-gray-700 py-3 px-4 rounded-lg font-medium hover:bg-gray-100 transition-colors">
                        <i class="fas fa-print me-2"></i> Print Label
                    </button>
                </div>
            </div>

            <!-- Items Being Returned -->
            <div class="bg-white rounded-xl shadow-md p-6 mb-6 no-print">
                <h2 class="text-lg font-semibold text-gray-900 mb-4">Items to Include</h2>

                <div class="divide-y divide-gray-100">
                    @foreach (var item in Model.ReturnRequest.Items)
                    {
                        <div class="py-3 flex items-center gap-4">
                            @if (!string.IsNullOrEmpty(item.ImageUrl))
                            {
                                <img src="@item.ImageUrl" alt="@item.ProductTitle" class="w-14 h-14 object-cover rounded-lg" />
                            }
                            else
                            {
                                <div class="w-14 h-14 bg-gray-100 rounded-lg flex items-center justify-center">
                                    <i class="fas fa-box text-gray-400"></i>
                                </div>
                            }
                            <div class="flex-1 min-w-0">
                                <p class="font-medium text-gray-900 truncate">@item.ProductTitle</p>
                                @if (!string.IsNullOrEmpty(item.VariantTitle))
                                {
                                    <p class="text-sm text-gray-500">@item.VariantTitle</p>
                                }
                            </div>
                            <div class="text-right">
                                <span class="inline-flex items-center justify-center w-8 h-8 rounded-full bg-gray-100 text-gray-700 font-semibold text-sm">
                                    @item.QuantityReturned
                                </span>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- Expiration Warning -->
            @if (label.ExpiresAt.HasValue && label.ExpiresAt.Value < DateTime.UtcNow.AddDays(7))
            {
                <div class="flex items-center p-4 mb-6 text-sm text-yellow-800 rounded-xl bg-yellow-50 border border-yellow-200 no-print">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    <span>
                        This label expires on <strong>@label.ExpiresAt.Value.ToString("MMMM d, yyyy")</strong>. Please ship your return before this date.
                    </span>
                </div>
            }

            <!-- Links -->
            <div class="flex flex-col sm:flex-row gap-3 no-print">
                <a href="/returns/status/@Model.ReturnRequest.RequestNumber?shop=@Model.ShopDomain"
                   class="flex-1 text-center border border-gray-300 text-gray-700 py-3 px-4 rounded-lg font-medium hover:bg-gray-100 transition-colors">
                    View Return Status
                </a>
                <a href="/returns/request?shop=@Model.ShopDomain"
                   class="flex-1 text-center border border-gray-300 text-gray-700 py-3 px-4 rounded-lg font-medium hover:bg-gray-100 transition-colors">
                    Start Another Return
                </a>
            </div>
        }
    </div>

    <!-- Print-only content -->
    <div class="print-only p-8">
        @if (Model.ReturnRequest?.Label != null)
        {
            <div class="text-center mb-4">
                <h1 class="text-xl font-bold">Return Shipping Label</h1>
                <p>Return Request: @Model.ReturnRequest.RequestNumber</p>
            </div>
            <div class="border border-black p-4">
                <p class="text-sm mb-2">Tracking: @Model.ReturnRequest.Label.TrackingNumber</p>
                <p class="text-sm">Carrier: @Model.ReturnRequest.Label.Carrier</p>
            </div>
            <p class="text-sm mt-4">Please print the full label from the PDF for shipping.</p>
        }
    </div>
</body>
</html>
