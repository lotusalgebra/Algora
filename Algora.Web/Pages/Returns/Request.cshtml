@page "/returns/request"
@model Algora.Web.Pages.Returns.RequestModel
@{
    Layout = null;
    var primaryColor = Model.Settings?.PrimaryColor ?? "#9333ea";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@(Model.Settings?.PageTitle ?? "Start a Return")</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: '@primaryColor',
                    }
                }
            }
        }
    </script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
</head>
<body class="bg-gray-50 min-h-screen">
    <div class="max-w-2xl mx-auto px-4 py-8">
        <!-- Logo -->
        @if (!string.IsNullOrEmpty(Model.Settings?.LogoUrl))
        {
            <div class="text-center mb-6">
                <img src="@Model.Settings.LogoUrl" alt="Logo" class="h-12 mx-auto" />
            </div>
        }

        <!-- Header -->
        <div class="text-center mb-8">
            <h1 class="text-2xl font-bold text-gray-900">@(Model.Settings?.PageTitle ?? "Start a Return")</h1>
            @if (!string.IsNullOrEmpty(Model.Settings?.PolicyText))
            {
                <p class="text-gray-600 mt-2">@Model.Settings.PolicyText</p>
            }
        </div>

        <!-- Error Message -->
        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="flex items-center p-4 mb-6 text-sm text-red-800 rounded-xl bg-red-50 border border-red-200" role="alert">
                <i class="fas fa-exclamation-circle me-2"></i>
                @Model.ErrorMessage
            </div>
        }

        <!-- Success: Return Submitted -->
        @if (Model.SubmittedReturn != null)
        {
            <div class="bg-white rounded-xl shadow-md p-6">
                <div class="text-center">
                    <div class="inline-flex items-center justify-center w-16 h-16 bg-green-100 rounded-full mb-4">
                        <i class="fas fa-check text-3xl text-green-600"></i>
                    </div>
                    <h2 class="text-xl font-bold text-gray-900 mb-2">Return Request Submitted!</h2>
                    <p class="text-gray-600 mb-4">Your return request number is:</p>
                    <p class="text-2xl font-mono font-bold text-primary mb-6">@Model.SubmittedReturn.RequestNumber</p>
                </div>

                @if (Model.SubmittedReturn.IsAutoApproved && Model.SubmittedReturn.Label != null)
                {
                    <div class="flex items-center p-4 mb-6 text-sm text-green-800 rounded-xl bg-green-50 border border-green-200">
                        <i class="fas fa-check-circle me-2"></i>
                        <div>
                            <span class="font-semibold">Your return has been approved!</span>
                            <p class="text-green-700 mt-1">A prepaid shipping label is ready for you.</p>
                        </div>
                    </div>

                    <a href="/returns/label/@Model.SubmittedReturn.RequestNumber?shop=@Model.ShopDomain"
                       class="block w-full text-center bg-primary text-white py-3 px-4 rounded-lg font-medium hover:opacity-90 transition-opacity mb-4">
                        <i class="fas fa-print me-2"></i> Print Shipping Label
                    </a>
                }
                else
                {
                    <div class="flex items-center p-4 mb-6 text-sm text-blue-800 rounded-xl bg-blue-50 border border-blue-200">
                        <i class="fas fa-clock me-2"></i>
                        <div>
                            <span class="font-semibold">Return request is pending review</span>
                            <p class="text-blue-700 mt-1">We'll email you once your return is approved.</p>
                        </div>
                    </div>
                }

                <a href="/returns/status/@Model.SubmittedReturn.RequestNumber?shop=@Model.ShopDomain"
                   class="block w-full text-center border border-gray-300 text-gray-700 py-3 px-4 rounded-lg font-medium hover:bg-gray-100 transition-colors">
                    <i class="fas fa-search me-2"></i> Track Return Status
                </a>
            </div>
        }
        else if (Model.Eligibility != null && Model.Eligibility.IsEligible)
        {
            <!-- Step 2: Select Items to Return -->
            <div class="bg-white rounded-xl shadow-md p-6">
                <div class="flex items-center justify-between mb-6">
                    <h2 class="text-lg font-semibold text-gray-900">Select Items to Return</h2>
                    <span class="text-sm text-gray-500 bg-gray-100 px-3 py-1 rounded-full">Order #@Model.Eligibility.OrderNumber</span>
                </div>

                <form method="post" asp-page-handler="Submit" asp-route-shop="@Model.ShopDomain" asp-route-orderId="@Model.Eligibility.OrderId">
                    <input type="hidden" asp-for="OrderNumber" value="@Model.Eligibility.OrderNumber" />
                    <input type="hidden" asp-for="Email" />

                    <!-- Items -->
                    <div class="divide-y divide-gray-100 mb-6">
                        @for (int i = 0; i < Model.Eligibility.EligibleItems.Count; i++)
                        {
                            var item = Model.Eligibility.EligibleItems[i];
                            <div class="py-4 flex items-start gap-4">
                                @if (!string.IsNullOrEmpty(item.ImageUrl))
                                {
                                    <img src="@item.ImageUrl" alt="@item.ProductTitle" class="w-16 h-16 object-cover rounded-lg" />
                                }
                                else
                                {
                                    <div class="w-16 h-16 bg-gray-100 rounded-lg flex items-center justify-center">
                                        <i class="fas fa-box text-gray-400 text-xl"></i>
                                    </div>
                                }
                                <div class="flex-1 min-w-0">
                                    <p class="font-medium text-gray-900 truncate">@item.ProductTitle</p>
                                    @if (!string.IsNullOrEmpty(item.VariantTitle))
                                    {
                                        <p class="text-sm text-gray-500">@item.VariantTitle</p>
                                    }
                                    @if (!string.IsNullOrEmpty(item.Sku))
                                    {
                                        <p class="text-xs text-gray-400">SKU: @item.Sku</p>
                                    }
                                    <p class="text-sm text-gray-600 mt-1">
                                        $@item.UnitPrice.ToString("N2") each
                                        @if (item.QuantityAlreadyReturned > 0)
                                        {
                                            <span class="text-orange-600">(@item.QuantityAlreadyReturned already returned)</span>
                                        }
                                    </p>
                                </div>
                                <div class="flex items-center gap-2">
                                    <input type="hidden" name="ReturnItems[@i].OrderLineId" value="@item.OrderLineId" />
                                    <label class="text-sm text-gray-500">Qty:</label>
                                    <select name="ReturnItems[@i].Quantity"
                                            class="block w-20 rounded-lg border-gray-300 text-sm focus:ring-primary focus:border-primary">
                                        <option value="0">0</option>
                                        @for (int q = 1; q <= item.QuantityReturnable; q++)
                                        {
                                            <option value="@q">@q</option>
                                        }
                                    </select>
                                </div>
                            </div>
                        }
                    </div>

                    <!-- Return Reason -->
                    <div class="mb-6">
                        <label class="block text-sm font-semibold text-gray-700 mb-2">Reason for Return <span class="text-red-500">*</span></label>
                        <select asp-for="ReasonCode"
                                class="block w-full rounded-lg border-gray-300 text-sm focus:ring-primary focus:border-primary"
                                required>
                            <option value="">Select a reason...</option>
                            @foreach (var reason in Model.Reasons)
                            {
                                <option value="@reason.Code">@reason.DisplayText</option>
                            }
                        </select>
                    </div>

                    <!-- Additional Notes -->
                    <div class="mb-6">
                        <label class="block text-sm font-semibold text-gray-700 mb-2">Additional Notes (Optional)</label>
                        <textarea asp-for="CustomerNote"
                                  rows="3"
                                  class="block w-full rounded-lg border-gray-300 text-sm focus:ring-primary focus:border-primary"
                                  placeholder="Please provide any additional details about your return..."></textarea>
                    </div>

                    <!-- Return Deadline Info -->
                    @if (Model.Eligibility.ReturnDeadline.HasValue)
                    {
                        <div class="flex items-center p-4 mb-6 text-sm text-yellow-800 rounded-xl bg-yellow-50 border border-yellow-200">
                            <i class="fas fa-clock me-2"></i>
                            <span>
                                @if (Model.Eligibility.DaysRemaining > 0)
                                {
                                    <span>You have <strong>@Model.Eligibility.DaysRemaining days</strong> remaining to return this order.</span>
                                }
                                else
                                {
                                    <span>Return deadline: @Model.Eligibility.ReturnDeadline.Value.ToString("MMM d, yyyy")</span>
                                }
                            </span>
                        </div>
                    }

                    <button type="submit"
                            class="w-full bg-primary text-white py-3 px-4 rounded-lg font-medium hover:opacity-90 transition-opacity">
                        <i class="fas fa-paper-plane me-2"></i> Submit Return Request
                    </button>

                    <button type="button"
                            onclick="window.location.href='/returns/request?shop=@Model.ShopDomain'"
                            class="w-full mt-3 border border-gray-300 text-gray-700 py-3 px-4 rounded-lg font-medium hover:bg-gray-100 transition-colors">
                        <i class="fas fa-arrow-left me-2"></i> Start Over
                    </button>
                </form>
            </div>
        }
        else
        {
            <!-- Step 1: Order Lookup -->
            <div class="bg-white rounded-xl shadow-md p-6">
                <h2 class="text-lg font-semibold text-gray-900 mb-6">Find Your Order</h2>

                <form method="post" asp-page-handler="Lookup" asp-route-shop="@Model.ShopDomain">
                    <div class="mb-4">
                        <label class="block text-sm font-semibold text-gray-700 mb-2">Order Number</label>
                        <div class="relative">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <i class="fas fa-hashtag text-gray-400"></i>
                            </div>
                            <input type="text"
                                   asp-for="OrderNumber"
                                   class="block w-full pl-10 rounded-lg border-gray-300 text-sm focus:ring-primary focus:border-primary"
                                   placeholder="e.g., 1001 or #1001"
                                   required />
                        </div>
                    </div>

                    <div class="mb-6">
                        <label class="block text-sm font-semibold text-gray-700 mb-2">Email Address</label>
                        <div class="relative">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <i class="fas fa-envelope text-gray-400"></i>
                            </div>
                            <input type="email"
                                   asp-for="Email"
                                   class="block w-full pl-10 rounded-lg border-gray-300 text-sm focus:ring-primary focus:border-primary"
                                   placeholder="The email used for your order"
                                   required />
                        </div>
                    </div>

                    <button type="submit"
                            class="w-full bg-primary text-white py-3 px-4 rounded-lg font-medium hover:opacity-90 transition-opacity">
                        <i class="fas fa-search me-2"></i> Find My Order
                    </button>
                </form>
            </div>

            <!-- Track Existing Return -->
            <div class="mt-6 text-center">
                <p class="text-gray-600">
                    Already started a return?
                    <button onclick="showTrackingModal()" class="text-primary font-medium hover:underline">Track your return status</button>
                </p>
            </div>

            <!-- Tracking Modal -->
            <div id="trackingModal" class="fixed inset-0 bg-gray-900/50 backdrop-blur-sm hidden flex items-center justify-center z-50">
                <div class="bg-white rounded-xl shadow-xl p-6 max-w-md w-full mx-4">
                    <div class="flex items-center justify-between mb-4">
                        <h3 class="text-lg font-semibold text-gray-900">Track Your Return</h3>
                        <button onclick="hideTrackingModal()" class="text-gray-400 hover:text-gray-600">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                    <form onsubmit="trackReturn(event)">
                        <div class="mb-4">
                            <label class="block text-sm font-semibold text-gray-700 mb-2">Return Request Number</label>
                            <input type="text"
                                   id="trackingNumber"
                                   class="block w-full rounded-lg border-gray-300 text-sm focus:ring-primary focus:border-primary"
                                   placeholder="e.g., RET-XXXX"
                                   required />
                        </div>
                        <div class="flex gap-3">
                            <button type="submit"
                                    class="flex-1 bg-primary text-white py-2.5 px-4 rounded-lg font-medium hover:opacity-90 transition-opacity">
                                <i class="fas fa-search me-2"></i> Track
                            </button>
                            <button type="button"
                                    onclick="hideTrackingModal()"
                                    class="flex-1 border border-gray-300 text-gray-700 py-2.5 px-4 rounded-lg font-medium hover:bg-gray-100 transition-colors">
                                Cancel
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        }

        <!-- Policy Footer -->
        @if (Model.Settings != null && Model.Settings.ReturnWindowDays > 0)
        {
            <div class="mt-8 text-center text-sm text-gray-500">
                <p><i class="fas fa-info-circle me-1"></i> Items can be returned within @Model.Settings.ReturnWindowDays days of delivery.</p>
            </div>
        }
    </div>

    <script>
        function showTrackingModal() {
            document.getElementById('trackingModal').classList.remove('hidden');
        }

        function hideTrackingModal() {
            document.getElementById('trackingModal').classList.add('hidden');
        }

        function trackReturn(event) {
            event.preventDefault();
            var number = document.getElementById('trackingNumber').value.trim();
            if (number) {
                window.location.href = '/returns/status/' + encodeURIComponent(number) + '?shop=@Model.ShopDomain';
            }
        }

        // Close modal on outside click
        document.getElementById('trackingModal').addEventListener('click', function(e) {
            if (e.target === this) {
                hideTrackingModal();
            }
        });

        // Close modal on Escape key
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') {
                hideTrackingModal();
            }
        });
    </script>
</body>
</html>
