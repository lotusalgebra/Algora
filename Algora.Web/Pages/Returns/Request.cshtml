@page "/returns/request"
@model Algora.Web.Pages.Returns.RequestModel
@{
    Layout = null;
    var primaryColor = Model.Settings?.PrimaryColor ?? "#4f46e5";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@(Model.Settings?.PageTitle ?? "Start a Return")</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <style>
        :root {
            --primary-color: @primaryColor;
        }
        .btn-primary {
            background-color: var(--primary-color);
        }
        .btn-primary:hover {
            opacity: 0.9;
        }
        .text-primary {
            color: var(--primary-color);
        }
        .border-primary {
            border-color: var(--primary-color);
        }
        .ring-primary:focus {
            --tw-ring-color: var(--primary-color);
        }
    </style>
</head>
<body class="bg-gray-50 min-h-screen">
    <div class="max-w-2xl mx-auto px-4 py-8">
        <!-- Logo -->
        @if (!string.IsNullOrEmpty(Model.Settings?.LogoUrl))
        {
            <div class="text-center mb-6">
                <img src="@Model.Settings.LogoUrl" alt="Logo" class="h-12 mx-auto" />
            </div>
        }

        <!-- Header -->
        <div class="text-center mb-8">
            <h1 class="text-2xl font-bold text-gray-900">@(Model.Settings?.PageTitle ?? "Start a Return")</h1>
            @if (!string.IsNullOrEmpty(Model.Settings?.PolicyText))
            {
                <p class="text-gray-600 mt-2">@Model.Settings.PolicyText</p>
            }
        </div>

        <!-- Error Message -->
        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-6">
                @Model.ErrorMessage
            </div>
        }

        <!-- Success: Return Submitted -->
        @if (Model.SubmittedReturn != null)
        {
            <div class="bg-white rounded-lg shadow-md p-6">
                <div class="text-center">
                    <div class="inline-flex items-center justify-center w-16 h-16 bg-green-100 rounded-full mb-4">
                        <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                        </svg>
                    </div>
                    <h2 class="text-xl font-bold text-gray-900 mb-2">Return Request Submitted!</h2>
                    <p class="text-gray-600 mb-4">Your return request number is:</p>
                    <p class="text-2xl font-mono font-bold text-primary mb-6">@Model.SubmittedReturn.RequestNumber</p>
                </div>

                @if (Model.SubmittedReturn.IsAutoApproved && Model.SubmittedReturn.Label != null)
                {
                    <div class="bg-green-50 border border-green-200 rounded-lg p-4 mb-6">
                        <div class="flex items-center mb-2">
                            <svg class="w-5 h-5 text-green-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                            <span class="font-semibold text-green-800">Your return has been approved!</span>
                        </div>
                        <p class="text-green-700 text-sm">A prepaid shipping label is ready for you.</p>
                    </div>

                    <a href="/returns/label/@Model.SubmittedReturn.RequestNumber?shop=@Model.ShopDomain"
                       class="block w-full text-center btn-primary text-white py-3 px-4 rounded-md font-medium mb-4">
                        Print Shipping Label
                    </a>
                }
                else
                {
                    <div class="bg-blue-50 border border-blue-200 rounded-lg p-4 mb-6">
                        <div class="flex items-center mb-2">
                            <svg class="w-5 h-5 text-blue-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                            <span class="font-semibold text-blue-800">Return request is pending review</span>
                        </div>
                        <p class="text-blue-700 text-sm">We'll email you once your return is approved.</p>
                    </div>
                }

                <a href="/returns/status/@Model.SubmittedReturn.RequestNumber?shop=@Model.ShopDomain"
                   class="block w-full text-center border border-gray-300 text-gray-700 py-3 px-4 rounded-md font-medium hover:bg-gray-50">
                    Track Return Status
                </a>
            </div>
        }
        else if (Model.Eligibility != null && Model.Eligibility.IsEligible)
        {
            <!-- Step 2: Select Items to Return -->
            <div class="bg-white rounded-lg shadow-md p-6">
                <div class="flex items-center justify-between mb-6">
                    <h2 class="text-lg font-semibold text-gray-900">Select Items to Return</h2>
                    <span class="text-sm text-gray-500">Order #@Model.Eligibility.OrderNumber</span>
                </div>

                <form method="post" asp-page-handler="Submit" asp-route-shop="@Model.ShopDomain" asp-route-orderId="@Model.Eligibility.OrderId">
                    <input type="hidden" asp-for="OrderNumber" value="@Model.Eligibility.OrderNumber" />
                    <input type="hidden" asp-for="Email" />

                    <!-- Items -->
                    <div class="divide-y divide-gray-200 mb-6">
                        @for (int i = 0; i < Model.Eligibility.EligibleItems.Count; i++)
                        {
                            var item = Model.Eligibility.EligibleItems[i];
                            <div class="py-4 flex items-start gap-4">
                                @if (!string.IsNullOrEmpty(item.ImageUrl))
                                {
                                    <img src="@item.ImageUrl" alt="@item.ProductTitle" class="w-16 h-16 object-cover rounded" />
                                }
                                else
                                {
                                    <div class="w-16 h-16 bg-gray-200 rounded flex items-center justify-center">
                                        <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                                        </svg>
                                    </div>
                                }
                                <div class="flex-1 min-w-0">
                                    <p class="font-medium text-gray-900 truncate">@item.ProductTitle</p>
                                    @if (!string.IsNullOrEmpty(item.VariantTitle))
                                    {
                                        <p class="text-sm text-gray-500">@item.VariantTitle</p>
                                    }
                                    @if (!string.IsNullOrEmpty(item.Sku))
                                    {
                                        <p class="text-xs text-gray-400">SKU: @item.Sku</p>
                                    }
                                    <p class="text-sm text-gray-600 mt-1">
                                        $@item.UnitPrice.ToString("N2") each
                                        @if (item.QuantityAlreadyReturned > 0)
                                        {
                                            <span class="text-orange-600">(@item.QuantityAlreadyReturned already returned)</span>
                                        }
                                    </p>
                                </div>
                                <div class="flex items-center gap-2">
                                    <input type="hidden" name="ReturnItems[@i].OrderLineId" value="@item.OrderLineId" />
                                    <label class="text-sm text-gray-500">Qty:</label>
                                    <select name="ReturnItems[@i].Quantity"
                                            class="block w-20 rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500">
                                        <option value="0">0</option>
                                        @for (int q = 1; q <= item.QuantityReturnable; q++)
                                        {
                                            <option value="@q">@q</option>
                                        }
                                    </select>
                                </div>
                            </div>
                        }
                    </div>

                    <!-- Return Reason -->
                    <div class="mb-6">
                        <label class="block text-sm font-medium text-gray-700 mb-2">Reason for Return *</label>
                        <select asp-for="ReasonCode"
                                class="block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500"
                                required>
                            <option value="">Select a reason...</option>
                            @foreach (var reason in Model.Reasons)
                            {
                                <option value="@reason.Code">@reason.DisplayText</option>
                            }
                        </select>
                    </div>

                    <!-- Additional Notes -->
                    <div class="mb-6">
                        <label class="block text-sm font-medium text-gray-700 mb-2">Additional Notes (Optional)</label>
                        <textarea asp-for="CustomerNote"
                                  rows="3"
                                  class="block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500"
                                  placeholder="Please provide any additional details about your return..."></textarea>
                    </div>

                    <!-- Return Deadline Info -->
                    @if (Model.Eligibility.ReturnDeadline.HasValue)
                    {
                        <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4 mb-6">
                            <div class="flex items-center">
                                <svg class="w-5 h-5 text-yellow-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                </svg>
                                <span class="text-yellow-800">
                                    @if (Model.Eligibility.DaysRemaining > 0)
                                    {
                                        <span>You have <strong>@Model.Eligibility.DaysRemaining days</strong> remaining to return this order.</span>
                                    }
                                    else
                                    {
                                        <span>Return deadline: @Model.Eligibility.ReturnDeadline.Value.ToString("MMM d, yyyy")</span>
                                    }
                                </span>
                            </div>
                        </div>
                    }

                    <button type="submit"
                            class="w-full btn-primary text-white py-3 px-4 rounded-md font-medium">
                        Submit Return Request
                    </button>

                    <button type="button"
                            onclick="window.location.href='/returns/request?shop=@Model.ShopDomain'"
                            class="w-full mt-3 border border-gray-300 text-gray-700 py-3 px-4 rounded-md font-medium hover:bg-gray-50">
                        Start Over
                    </button>
                </form>
            </div>
        }
        else
        {
            <!-- Step 1: Order Lookup -->
            <div class="bg-white rounded-lg shadow-md p-6">
                <h2 class="text-lg font-semibold text-gray-900 mb-6">Find Your Order</h2>

                <form method="post" asp-page-handler="Lookup" asp-route-shop="@Model.ShopDomain">
                    <div class="mb-4">
                        <label class="block text-sm font-medium text-gray-700 mb-2">Order Number</label>
                        <input type="text"
                               asp-for="OrderNumber"
                               class="block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500"
                               placeholder="e.g., 1001 or #1001"
                               required />
                    </div>

                    <div class="mb-6">
                        <label class="block text-sm font-medium text-gray-700 mb-2">Email Address</label>
                        <input type="email"
                               asp-for="Email"
                               class="block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500"
                               placeholder="The email used for your order"
                               required />
                    </div>

                    <button type="submit"
                            class="w-full btn-primary text-white py-3 px-4 rounded-md font-medium">
                        Find My Order
                    </button>
                </form>
            </div>

            <!-- Track Existing Return -->
            <div class="mt-6 text-center">
                <p class="text-gray-600">
                    Already started a return?
                    <a href="#" onclick="showTrackingModal()" class="text-primary hover:underline">Track your return status</a>
                </p>
            </div>

            <!-- Tracking Modal -->
            <div id="trackingModal" class="fixed inset-0 bg-gray-600 bg-opacity-50 hidden flex items-center justify-center z-50">
                <div class="bg-white rounded-lg shadow-xl p-6 max-w-md w-full mx-4">
                    <h3 class="text-lg font-semibold text-gray-900 mb-4">Track Your Return</h3>
                    <form onsubmit="trackReturn(event)">
                        <div class="mb-4">
                            <label class="block text-sm font-medium text-gray-700 mb-2">Return Request Number</label>
                            <input type="text"
                                   id="trackingNumber"
                                   class="block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500"
                                   placeholder="e.g., RET-XXXX"
                                   required />
                        </div>
                        <div class="flex gap-3">
                            <button type="submit"
                                    class="flex-1 btn-primary text-white py-2 px-4 rounded-md font-medium">
                                Track
                            </button>
                            <button type="button"
                                    onclick="hideTrackingModal()"
                                    class="flex-1 border border-gray-300 text-gray-700 py-2 px-4 rounded-md font-medium hover:bg-gray-50">
                                Cancel
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        }

        <!-- Policy Footer -->
        @if (Model.Settings != null && Model.Settings.ReturnWindowDays > 0)
        {
            <div class="mt-8 text-center text-sm text-gray-500">
                <p>Items can be returned within @Model.Settings.ReturnWindowDays days of delivery.</p>
            </div>
        }
    </div>

    <script>
        function showTrackingModal() {
            document.getElementById('trackingModal').classList.remove('hidden');
        }

        function hideTrackingModal() {
            document.getElementById('trackingModal').classList.add('hidden');
        }

        function trackReturn(event) {
            event.preventDefault();
            var number = document.getElementById('trackingNumber').value.trim();
            if (number) {
                window.location.href = '/returns/status/' + encodeURIComponent(number) + '?shop=@Model.ShopDomain';
            }
        }

        // Close modal on outside click
        document.getElementById('trackingModal').addEventListener('click', function(e) {
            if (e.target === this) {
                hideTrackingModal();
            }
        });
    </script>
</body>
</html>
