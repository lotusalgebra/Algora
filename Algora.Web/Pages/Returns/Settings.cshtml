@page "/returns/settings"
@model Algora.Web.Pages.Returns.SettingsModel
@{
    ViewData["Title"] = "Return Settings";
}

<div class="w-full px-6 py-6 mx-auto">
    <!-- Page Header -->
    <div class="flex flex-wrap items-center justify-between mb-6">
        <div>
            <nav class="flex mb-2" aria-label="Breadcrumb">
                <ol class="inline-flex items-center space-x-1 md:space-x-3">
                    <li class="inline-flex items-center">
                        <a href="/returns" class="text-sm text-slate-400 hover:text-indigo-600 dark:text-white dark:opacity-60">Returns</a>
                    </li>
                    <li>
                        <div class="flex items-center">
                            <i class="fas fa-chevron-right text-xs text-slate-400 mx-2"></i>
                            <span class="text-sm text-slate-700 dark:text-white">Settings</span>
                        </div>
                    </li>
                </ol>
            </nav>
            <h6 class="mb-0 dark:text-white text-xl font-bold">Return Settings</h6>
            <p class="mb-0 text-sm leading-normal text-slate-400 dark:text-white dark:opacity-60">
                Configure your return portal and policies
            </p>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="mb-6 p-4 text-sm text-red-700 bg-red-100 rounded-lg dark:bg-red-200 dark:text-red-800" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i>
            @Model.ErrorMessage
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="mb-6 p-4 text-sm text-green-700 bg-green-100 rounded-lg dark:bg-green-200 dark:text-green-800" role="alert">
            <i class="fas fa-check-circle me-2"></i>
            @Model.SuccessMessage
        </div>
    }

    <form method="post">
        <div class="flex flex-wrap -mx-3">
            <!-- Left Column -->
            <div class="w-full lg:w-2/3 px-3 mb-6">
                <!-- General Settings -->
                <div class="relative flex flex-col min-w-0 mb-6 break-words bg-white border-0 shadow-soft-xl rounded-2xl bg-clip-border dark:bg-gray-950 dark:shadow-soft-dark-xl">
                    <div class="p-6">
                        <h6 class="mb-4 dark:text-white">General Settings</h6>

                        <div class="space-y-4">
                            <div class="flex items-center justify-between">
                                <div>
                                    <p class="text-sm font-medium dark:text-white">Enable Returns Portal</p>
                                    <p class="text-xs text-slate-400 dark:text-white dark:opacity-60">Allow customers to request returns</p>
                                </div>
                                <label class="relative inline-flex items-center cursor-pointer">
                                    <input type="checkbox" name="Input.IsEnabled" value="true" @(Model.Settings.IsEnabled ? "checked" : "") class="sr-only peer">
                                    <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-indigo-300 dark:peer-focus:ring-indigo-800 rounded-full peer dark:bg-gray-700 peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all dark:border-gray-600 peer-checked:bg-indigo-600"></div>
                                </label>
                            </div>

                            <div class="flex items-center justify-between">
                                <div>
                                    <p class="text-sm font-medium dark:text-white">Self-Service Portal</p>
                                    <p class="text-xs text-slate-400 dark:text-white dark:opacity-60">Customers can submit returns without contacting support</p>
                                </div>
                                <label class="relative inline-flex items-center cursor-pointer">
                                    <input type="checkbox" name="Input.AllowSelfService" value="true" @(Model.Settings.AllowSelfService ? "checked" : "") class="sr-only peer">
                                    <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-indigo-300 dark:peer-focus:ring-indigo-800 rounded-full peer dark:bg-gray-700 peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all dark:border-gray-600 peer-checked:bg-indigo-600"></div>
                                </label>
                            </div>

                            <div class="grid grid-cols-2 gap-4">
                                <div>
                                    <label class="block text-sm font-medium text-slate-700 dark:text-white mb-1">Return Window (Days)</label>
                                    <input type="number" name="Input.ReturnWindowDays" value="@Model.Settings.ReturnWindowDays"
                                           class="block w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:ring-indigo-500 focus:border-indigo-500 dark:bg-gray-800 dark:border-gray-700 dark:text-white" />
                                    <p class="text-xs text-slate-400 mt-1">Days after delivery when returns are allowed</p>
                                </div>
                                <div>
                                    <label class="block text-sm font-medium text-slate-700 dark:text-white mb-1">Label Expiration (Days)</label>
                                    <input type="number" name="Input.LabelExpirationDays" value="@Model.Settings.LabelExpirationDays"
                                           class="block w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:ring-indigo-500 focus:border-indigo-500 dark:bg-gray-800 dark:border-gray-700 dark:text-white" />
                                    <p class="text-xs text-slate-400 mt-1">Days until shipping labels expire</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Auto-Approval Settings -->
                <div class="relative flex flex-col min-w-0 mb-6 break-words bg-white border-0 shadow-soft-xl rounded-2xl bg-clip-border dark:bg-gray-950 dark:shadow-soft-dark-xl">
                    <div class="p-6">
                        <h6 class="mb-4 dark:text-white">Auto-Approval Rules</h6>

                        <div class="space-y-4">
                            <div class="flex items-center justify-between">
                                <div>
                                    <p class="text-sm font-medium dark:text-white">Enable Auto-Approval</p>
                                    <p class="text-xs text-slate-400 dark:text-white dark:opacity-60">Automatically approve qualifying returns</p>
                                </div>
                                <label class="relative inline-flex items-center cursor-pointer">
                                    <input type="checkbox" name="Input.AutoApprovalEnabled" value="true" @(Model.Settings.AutoApprovalEnabled ? "checked" : "") class="sr-only peer">
                                    <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-indigo-300 dark:peer-focus:ring-indigo-800 rounded-full peer dark:bg-gray-700 peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all dark:border-gray-600 peer-checked:bg-indigo-600"></div>
                                </label>
                            </div>

                            <div>
                                <label class="block text-sm font-medium text-slate-700 dark:text-white mb-1">Max Auto-Approval Amount</label>
                                <div class="relative">
                                    <span class="absolute left-3 top-2 text-gray-500">$</span>
                                    <input type="number" step="0.01" name="Input.AutoApprovalMaxAmount" value="@Model.Settings.AutoApprovalMaxAmount"
                                           class="block w-full pl-8 pr-3 py-2 text-sm border border-gray-300 rounded-lg focus:ring-indigo-500 focus:border-indigo-500 dark:bg-gray-800 dark:border-gray-700 dark:text-white" />
                                </div>
                                <p class="text-xs text-slate-400 mt-1">Returns above this amount require manual approval</p>
                            </div>

                            <div class="flex items-center justify-between">
                                <div>
                                    <p class="text-sm font-medium dark:text-white">Require Eligible Reason</p>
                                    <p class="text-xs text-slate-400 dark:text-white dark:opacity-60">Only auto-approve if reason is marked eligible</p>
                                </div>
                                <label class="relative inline-flex items-center cursor-pointer">
                                    <input type="checkbox" name="Input.AutoApprovalRequireReason" value="true" @(Model.Settings.AutoApprovalRequireReason ? "checked" : "") class="sr-only peer">
                                    <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-indigo-300 dark:peer-focus:ring-indigo-800 rounded-full peer dark:bg-gray-700 peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all dark:border-gray-600 peer-checked:bg-indigo-600"></div>
                                </label>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Shippo Integration -->
                <div class="relative flex flex-col min-w-0 mb-6 break-words bg-white border-0 shadow-soft-xl rounded-2xl bg-clip-border dark:bg-gray-950 dark:shadow-soft-dark-xl">
                    <div class="p-6">
                        <div class="flex items-center justify-between mb-4">
                            <h6 class="mb-0 dark:text-white">Shipping Integration (Shippo)</h6>
                            @if (Model.ShippoConfigured)
                            {
                                <span class="inline-flex items-center px-2 py-1 text-xs font-medium text-green-800 bg-green-100 rounded-full">
                                    <i class="fas fa-check-circle me-1"></i> Connected
                                </span>
                            }
                            else
                            {
                                <span class="inline-flex items-center px-2 py-1 text-xs font-medium text-yellow-800 bg-yellow-100 rounded-full">
                                    <i class="fas fa-exclamation-circle me-1"></i> Not Configured
                                </span>
                            }
                        </div>

                        <div class="space-y-4">
                            <div>
                                <label class="block text-sm font-medium text-slate-700 dark:text-white mb-1">Shippo API Key</label>
                                <input type="password" name="Input.ShippoApiKey" placeholder="@(Model.Settings.HasShippoApiKey ? "••••••••••••" : "Enter your Shippo API key")"
                                       class="block w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:ring-indigo-500 focus:border-indigo-500 dark:bg-gray-800 dark:border-gray-700 dark:text-white" />
                                <p class="text-xs text-slate-400 mt-1">Get your API key from <a href="https://apps.goshippo.com/settings/api" target="_blank" class="text-indigo-600 hover:underline">Shippo Dashboard</a></p>
                            </div>

                            <div class="flex items-center justify-between">
                                <div>
                                    <p class="text-sm font-medium dark:text-white">Store Pays for Shipping</p>
                                    <p class="text-xs text-slate-400 dark:text-white dark:opacity-60">Provide free return shipping labels</p>
                                </div>
                                <label class="relative inline-flex items-center cursor-pointer">
                                    <input type="checkbox" name="Input.StorePayShipping" value="true" @(Model.Settings.StorePayShipping ? "checked" : "") class="sr-only peer">
                                    <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-indigo-300 dark:peer-focus:ring-indigo-800 rounded-full peer dark:bg-gray-700 peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all dark:border-gray-600 peer-checked:bg-indigo-600"></div>
                                </label>
                            </div>

                            <div class="grid grid-cols-2 gap-4">
                                <div>
                                    <label class="block text-sm font-medium text-slate-700 dark:text-white mb-1">Default Carrier</label>
                                    <select name="Input.DefaultCarrier"
                                            class="block w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:ring-indigo-500 focus:border-indigo-500 dark:bg-gray-800 dark:border-gray-700 dark:text-white">
                                        <option value="usps" selected="@(Model.Settings.DefaultCarrier == "usps")">USPS</option>
                                        <option value="ups" selected="@(Model.Settings.DefaultCarrier == "ups")">UPS</option>
                                        <option value="fedex" selected="@(Model.Settings.DefaultCarrier == "fedex")">FedEx</option>
                                    </select>
                                </div>
                                <div>
                                    <label class="block text-sm font-medium text-slate-700 dark:text-white mb-1">Default Service</label>
                                    <input type="text" name="Input.DefaultServiceLevel" value="@Model.Settings.DefaultServiceLevel"
                                           class="block w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:ring-indigo-500 focus:border-indigo-500 dark:bg-gray-800 dark:border-gray-700 dark:text-white"
                                           placeholder="e.g., usps_priority" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Return Address -->
                <div class="relative flex flex-col min-w-0 mb-6 break-words bg-white border-0 shadow-soft-xl rounded-2xl bg-clip-border dark:bg-gray-950 dark:shadow-soft-dark-xl">
                    <div class="p-6">
                        <h6 class="mb-4 dark:text-white">Return Address</h6>
                        <p class="text-sm text-slate-400 dark:text-white dark:opacity-60 mb-4">Where returned items should be shipped</p>

                        <div class="grid grid-cols-2 gap-4">
                            <div>
                                <label class="block text-sm font-medium text-slate-700 dark:text-white mb-1">Name</label>
                                <input type="text" name="Input.ReturnAddress.Name" value="@Model.Settings.ReturnAddress?.Name"
                                       class="block w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:ring-indigo-500 focus:border-indigo-500 dark:bg-gray-800 dark:border-gray-700 dark:text-white"
                                       placeholder="Returns Department" />
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-slate-700 dark:text-white mb-1">Company</label>
                                <input type="text" name="Input.ReturnAddress.Company" value="@Model.Settings.ReturnAddress?.Company"
                                       class="block w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:ring-indigo-500 focus:border-indigo-500 dark:bg-gray-800 dark:border-gray-700 dark:text-white" />
                            </div>
                            <div class="col-span-2">
                                <label class="block text-sm font-medium text-slate-700 dark:text-white mb-1">Street Address</label>
                                <input type="text" name="Input.ReturnAddress.Street1" value="@Model.Settings.ReturnAddress?.Street1"
                                       class="block w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:ring-indigo-500 focus:border-indigo-500 dark:bg-gray-800 dark:border-gray-700 dark:text-white" />
                            </div>
                            <div class="col-span-2">
                                <input type="text" name="Input.ReturnAddress.Street2" value="@Model.Settings.ReturnAddress?.Street2"
                                       class="block w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:ring-indigo-500 focus:border-indigo-500 dark:bg-gray-800 dark:border-gray-700 dark:text-white"
                                       placeholder="Apt, suite, unit, etc. (optional)" />
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-slate-700 dark:text-white mb-1">City</label>
                                <input type="text" name="Input.ReturnAddress.City" value="@Model.Settings.ReturnAddress?.City"
                                       class="block w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:ring-indigo-500 focus:border-indigo-500 dark:bg-gray-800 dark:border-gray-700 dark:text-white" />
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-slate-700 dark:text-white mb-1">State</label>
                                <input type="text" name="Input.ReturnAddress.State" value="@Model.Settings.ReturnAddress?.State"
                                       class="block w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:ring-indigo-500 focus:border-indigo-500 dark:bg-gray-800 dark:border-gray-700 dark:text-white" />
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-slate-700 dark:text-white mb-1">ZIP Code</label>
                                <input type="text" name="Input.ReturnAddress.Zip" value="@Model.Settings.ReturnAddress?.Zip"
                                       class="block w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:ring-indigo-500 focus:border-indigo-500 dark:bg-gray-800 dark:border-gray-700 dark:text-white" />
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-slate-700 dark:text-white mb-1">Country</label>
                                <input type="text" name="Input.ReturnAddress.Country" value="@(Model.Settings.ReturnAddress?.Country ?? "US")"
                                       class="block w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:ring-indigo-500 focus:border-indigo-500 dark:bg-gray-800 dark:border-gray-700 dark:text-white" />
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-slate-700 dark:text-white mb-1">Phone</label>
                                <input type="tel" name="Input.ReturnAddress.Phone" value="@Model.Settings.ReturnAddress?.Phone"
                                       class="block w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:ring-indigo-500 focus:border-indigo-500 dark:bg-gray-800 dark:border-gray-700 dark:text-white" />
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-slate-700 dark:text-white mb-1">Email</label>
                                <input type="email" name="Input.ReturnAddress.Email" value="@Model.Settings.ReturnAddress?.Email"
                                       class="block w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:ring-indigo-500 focus:border-indigo-500 dark:bg-gray-800 dark:border-gray-700 dark:text-white" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Right Column -->
            <div class="w-full lg:w-1/3 px-3 mb-6">
                <!-- Portal Customization -->
                <div class="relative flex flex-col min-w-0 mb-6 break-words bg-white border-0 shadow-soft-xl rounded-2xl bg-clip-border dark:bg-gray-950 dark:shadow-soft-dark-xl">
                    <div class="p-6">
                        <h6 class="mb-4 dark:text-white">Portal Customization</h6>

                        <div class="space-y-4">
                            <div>
                                <label class="block text-sm font-medium text-slate-700 dark:text-white mb-1">Page Title</label>
                                <input type="text" name="Input.PageTitle" value="@Model.Settings.PageTitle"
                                       class="block w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:ring-indigo-500 focus:border-indigo-500 dark:bg-gray-800 dark:border-gray-700 dark:text-white"
                                       placeholder="Start a Return" />
                            </div>

                            <div>
                                <label class="block text-sm font-medium text-slate-700 dark:text-white mb-1">Policy Text</label>
                                <textarea name="Input.PolicyText" rows="3"
                                          class="block w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:ring-indigo-500 focus:border-indigo-500 dark:bg-gray-800 dark:border-gray-700 dark:text-white"
                                          placeholder="Brief return policy description">@Model.Settings.PolicyText</textarea>
                            </div>

                            <div>
                                <label class="block text-sm font-medium text-slate-700 dark:text-white mb-1">Logo URL</label>
                                <input type="url" name="Input.LogoUrl" value="@Model.Settings.LogoUrl"
                                       class="block w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:ring-indigo-500 focus:border-indigo-500 dark:bg-gray-800 dark:border-gray-700 dark:text-white"
                                       placeholder="https://..." />
                            </div>

                            <div>
                                <label class="block text-sm font-medium text-slate-700 dark:text-white mb-1">Primary Color</label>
                                <div class="flex gap-2">
                                    <input type="color" name="Input.PrimaryColor" value="@(Model.Settings.PrimaryColor ?? "#4f46e5")"
                                           class="h-10 w-14 rounded border border-gray-300" />
                                    <input type="text" value="@(Model.Settings.PrimaryColor ?? "#4f46e5")"
                                           class="flex-1 px-3 py-2 text-sm border border-gray-300 rounded-lg focus:ring-indigo-500 focus:border-indigo-500 dark:bg-gray-800 dark:border-gray-700 dark:text-white"
                                           readonly />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Notifications -->
                <div class="relative flex flex-col min-w-0 mb-6 break-words bg-white border-0 shadow-soft-xl rounded-2xl bg-clip-border dark:bg-gray-950 dark:shadow-soft-dark-xl">
                    <div class="p-6">
                        <h6 class="mb-4 dark:text-white">Notifications</h6>

                        <div class="space-y-4">
                            <div class="flex items-center justify-between">
                                <div>
                                    <p class="text-sm font-medium dark:text-white">Email Notifications</p>
                                    <p class="text-xs text-slate-400 dark:text-white dark:opacity-60">Send email updates to customers</p>
                                </div>
                                <label class="relative inline-flex items-center cursor-pointer">
                                    <input type="checkbox" name="Input.EmailNotificationsEnabled" value="true" @(Model.Settings.EmailNotificationsEnabled ? "checked" : "") class="sr-only peer">
                                    <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-indigo-300 dark:peer-focus:ring-indigo-800 rounded-full peer dark:bg-gray-700 peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all dark:border-gray-600 peer-checked:bg-indigo-600"></div>
                                </label>
                            </div>

                            <div>
                                <label class="block text-sm font-medium text-slate-700 dark:text-white mb-1">Admin Email</label>
                                <input type="email" name="Input.NotificationEmail" value="@Model.Settings.NotificationEmail"
                                       class="block w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:ring-indigo-500 focus:border-indigo-500 dark:bg-gray-800 dark:border-gray-700 dark:text-white"
                                       placeholder="Notify when new returns are submitted" />
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Portal URL -->
                <div class="relative flex flex-col min-w-0 mb-6 break-words bg-white border-0 shadow-soft-xl rounded-2xl bg-clip-border dark:bg-gray-950 dark:shadow-soft-dark-xl">
                    <div class="p-6">
                        <h6 class="mb-4 dark:text-white">Customer Portal URL</h6>
                        <p class="text-sm text-slate-400 dark:text-white dark:opacity-60 mb-4">Share this link with customers</p>

                        <div class="flex gap-2">
                            <input type="text" readonly value="@Model.PortalUrl" id="portalUrl"
                                   class="flex-1 px-3 py-2 text-sm border border-gray-300 rounded-lg bg-gray-50 dark:bg-gray-800 dark:border-gray-700 dark:text-white" />
                            <button type="button" onclick="copyPortalUrl()"
                                    class="px-4 py-2 text-sm font-medium text-white bg-indigo-600 rounded-lg hover:bg-indigo-700">
                                <i class="fas fa-copy"></i>
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Save Button -->
                <button type="submit"
                        class="w-full px-6 py-3 text-sm font-bold text-center text-white uppercase transition-all border-0 rounded-lg cursor-pointer bg-gradient-to-tl from-indigo-600 to-purple-400 shadow-soft-md hover:scale-102">
                    <i class="fas fa-save me-2"></i> Save Settings
                </button>
            </div>
        </div>
    </form>
</div>

<script>
    function copyPortalUrl() {
        var input = document.getElementById('portalUrl');
        input.select();
        document.execCommand('copy');
        alert('Portal URL copied to clipboard!');
    }
</script>
