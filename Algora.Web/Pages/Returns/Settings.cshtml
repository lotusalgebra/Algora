@page "/returns/settings"
@model Algora.Web.Pages.Returns.SettingsModel
@{
    ViewData["Title"] = "Return Settings";
}

<div class="p-4">
    <!-- Header -->
    <div class="flex flex-wrap items-center justify-between gap-4 mb-6">
        <div>
            <h1 class="text-xl font-bold text-gray-900 dark:text-white">Return Settings</h1>
            <p class="text-sm text-gray-500 dark:text-gray-400">Configure your return portal and policies</p>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="flex items-center p-4 mb-4 text-sm text-red-800 rounded-lg bg-red-50 dark:bg-gray-800 dark:text-red-400" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i> @Model.ErrorMessage
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="flex items-center p-4 mb-4 text-sm text-green-800 rounded-lg bg-green-50 dark:bg-gray-800 dark:text-green-400" role="alert">
            <i class="fas fa-check-circle me-2"></i> @Model.SuccessMessage
        </div>
    }

    <form method="post">
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
            <!-- Left Column -->
            <div class="lg:col-span-2 space-y-6">
                <!-- General Settings -->
                <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md">
                    <div class="p-6">
                        <h6 class="mb-4 font-semibold text-gray-900 dark:text-white">General Settings</h6>

                        <div class="space-y-4">
                            <div class="flex items-center justify-between">
                                <div>
                                    <p class="text-sm font-medium text-gray-700 dark:text-white">Enable Returns Portal</p>
                                    <p class="text-xs text-gray-500 dark:text-gray-400">Allow customers to request returns</p>
                                </div>
                                <label class="relative inline-flex items-center cursor-pointer">
                                    <input type="checkbox" name="Input.IsEnabled" value="true" @(Model.Settings.IsEnabled ? "checked" : "") class="sr-only peer">
                                    <div class="relative w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-purple-300 dark:peer-focus:ring-purple-800 rounded-full peer dark:bg-gray-600 peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all dark:border-gray-500 peer-checked:bg-purple-600"></div>
                                </label>
                            </div>

                            <div class="flex items-center justify-between">
                                <div>
                                    <p class="text-sm font-medium text-gray-700 dark:text-white">Self-Service Portal</p>
                                    <p class="text-xs text-gray-500 dark:text-gray-400">Customers can submit returns without contacting support</p>
                                </div>
                                <label class="relative inline-flex items-center cursor-pointer">
                                    <input type="checkbox" name="Input.AllowSelfService" value="true" @(Model.Settings.AllowSelfService ? "checked" : "") class="sr-only peer">
                                    <div class="relative w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-purple-300 dark:peer-focus:ring-purple-800 rounded-full peer dark:bg-gray-600 peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all dark:border-gray-500 peer-checked:bg-purple-600"></div>
                                </label>
                            </div>

                            <div class="grid grid-cols-2 gap-4">
                                <div>
                                    <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">Return Window (Days)</label>
                                    <input type="number" name="Input.ReturnWindowDays" value="@Model.Settings.ReturnWindowDays" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white" />
                                    <p class="text-xs text-gray-500 mt-1">Days after delivery when returns are allowed</p>
                                </div>
                                <div>
                                    <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">Label Expiration (Days)</label>
                                    <input type="number" name="Input.LabelExpirationDays" value="@Model.Settings.LabelExpirationDays" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white" />
                                    <p class="text-xs text-gray-500 mt-1">Days until shipping labels expire</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Auto-Approval Settings -->
                <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md">
                    <div class="p-6">
                        <h6 class="mb-4 font-semibold text-gray-900 dark:text-white">Auto-Approval Rules</h6>

                        <div class="space-y-4">
                            <div class="flex items-center justify-between">
                                <div>
                                    <p class="text-sm font-medium text-gray-700 dark:text-white">Enable Auto-Approval</p>
                                    <p class="text-xs text-gray-500 dark:text-gray-400">Automatically approve qualifying returns</p>
                                </div>
                                <label class="relative inline-flex items-center cursor-pointer">
                                    <input type="checkbox" name="Input.AutoApprovalEnabled" value="true" @(Model.Settings.AutoApprovalEnabled ? "checked" : "") class="sr-only peer">
                                    <div class="relative w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-purple-300 dark:peer-focus:ring-purple-800 rounded-full peer dark:bg-gray-600 peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all dark:border-gray-500 peer-checked:bg-purple-600"></div>
                                </label>
                            </div>

                            <div>
                                <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">Max Auto-Approval Amount</label>
                                <div class="relative">
                                    <span class="absolute left-3 top-2.5 text-gray-500">$</span>
                                    <input type="number" step="0.01" name="Input.AutoApprovalMaxAmount" value="@Model.Settings.AutoApprovalMaxAmount" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full pl-8 p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white" />
                                </div>
                                <p class="text-xs text-gray-500 mt-1">Returns above this amount require manual approval</p>
                            </div>

                            <div class="flex items-center justify-between">
                                <div>
                                    <p class="text-sm font-medium text-gray-700 dark:text-white">Require Eligible Reason</p>
                                    <p class="text-xs text-gray-500 dark:text-gray-400">Only auto-approve if reason is marked eligible</p>
                                </div>
                                <label class="relative inline-flex items-center cursor-pointer">
                                    <input type="checkbox" name="Input.AutoApprovalRequireReason" value="true" @(Model.Settings.AutoApprovalRequireReason ? "checked" : "") class="sr-only peer">
                                    <div class="relative w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-purple-300 dark:peer-focus:ring-purple-800 rounded-full peer dark:bg-gray-600 peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all dark:border-gray-500 peer-checked:bg-purple-600"></div>
                                </label>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Shippo Integration -->
                <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md">
                    <div class="p-6">
                        <div class="flex items-center justify-between mb-4">
                            <h6 class="font-semibold text-gray-900 dark:text-white">Shipping Integration (Shippo)</h6>
                            @if (Model.ShippoConfigured)
                            {
                                <span class="px-2 py-1 text-xs font-medium text-green-800 bg-green-100 rounded-full dark:bg-green-900 dark:text-green-300">
                                    <i class="fas fa-check-circle me-1"></i> Connected
                                </span>
                            }
                            else
                            {
                                <span class="px-2 py-1 text-xs font-medium text-yellow-800 bg-yellow-100 rounded-full dark:bg-yellow-900 dark:text-yellow-300">
                                    <i class="fas fa-exclamation-circle me-1"></i> Not Configured
                                </span>
                            }
                        </div>

                        <div class="space-y-4">
                            <div>
                                <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">Shippo API Key</label>
                                <input type="password" name="Input.ShippoApiKey" placeholder="@(Model.Settings.HasShippoApiKey ? "••••••••••••" : "Enter your Shippo API key")" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white" />
                                <p class="text-xs text-gray-500 mt-1">Get your API key from <a href="https://apps.goshippo.com/settings/api" target="_blank" class="text-purple-600 hover:underline">Shippo Dashboard</a></p>
                            </div>

                            <div class="flex items-center justify-between">
                                <div>
                                    <p class="text-sm font-medium text-gray-700 dark:text-white">Store Pays for Shipping</p>
                                    <p class="text-xs text-gray-500 dark:text-gray-400">Provide free return shipping labels</p>
                                </div>
                                <label class="relative inline-flex items-center cursor-pointer">
                                    <input type="checkbox" name="Input.StorePayShipping" value="true" @(Model.Settings.StorePayShipping ? "checked" : "") class="sr-only peer">
                                    <div class="relative w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-purple-300 dark:peer-focus:ring-purple-800 rounded-full peer dark:bg-gray-600 peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all dark:border-gray-500 peer-checked:bg-purple-600"></div>
                                </label>
                            </div>

                            <div class="grid grid-cols-2 gap-4">
                                <div>
                                    <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">Default Carrier</label>
                                    <select name="Input.DefaultCarrier" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white">
                                        <option value="usps" selected="@(Model.Settings.DefaultCarrier == "usps")">USPS</option>
                                        <option value="ups" selected="@(Model.Settings.DefaultCarrier == "ups")">UPS</option>
                                        <option value="fedex" selected="@(Model.Settings.DefaultCarrier == "fedex")">FedEx</option>
                                    </select>
                                </div>
                                <div>
                                    <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">Default Service</label>
                                    <input type="text" name="Input.DefaultServiceLevel" value="@Model.Settings.DefaultServiceLevel" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white" placeholder="e.g., usps_priority" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Return Address -->
                <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md">
                    <div class="p-6">
                        <h6 class="mb-4 font-semibold text-gray-900 dark:text-white">Return Address</h6>
                        <p class="text-sm text-gray-500 dark:text-gray-400 mb-4">Where returned items should be shipped</p>

                        <div class="grid grid-cols-2 gap-4">
                            <div>
                                <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">Name</label>
                                <input type="text" name="Input.ReturnAddress.Name" value="@Model.Settings.ReturnAddress?.Name" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white" placeholder="Returns Department" />
                            </div>
                            <div>
                                <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">Company</label>
                                <input type="text" name="Input.ReturnAddress.Company" value="@Model.Settings.ReturnAddress?.Company" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white" />
                            </div>
                            <div class="col-span-2">
                                <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">Street Address</label>
                                <input type="text" name="Input.ReturnAddress.Street1" value="@Model.Settings.ReturnAddress?.Street1" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white" />
                            </div>
                            <div class="col-span-2">
                                <input type="text" name="Input.ReturnAddress.Street2" value="@Model.Settings.ReturnAddress?.Street2" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white" placeholder="Apt, suite, unit, etc. (optional)" />
                            </div>
                            <div>
                                <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">City</label>
                                <input type="text" name="Input.ReturnAddress.City" value="@Model.Settings.ReturnAddress?.City" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white" />
                            </div>
                            <div>
                                <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">State</label>
                                <input type="text" name="Input.ReturnAddress.State" value="@Model.Settings.ReturnAddress?.State" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white" />
                            </div>
                            <div>
                                <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">ZIP Code</label>
                                <input type="text" name="Input.ReturnAddress.Zip" value="@Model.Settings.ReturnAddress?.Zip" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white" />
                            </div>
                            <div>
                                <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">Country</label>
                                <input type="text" name="Input.ReturnAddress.Country" value="@(Model.Settings.ReturnAddress?.Country ?? "US")" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white" />
                            </div>
                            <div>
                                <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">Phone</label>
                                <input type="tel" name="Input.ReturnAddress.Phone" value="@Model.Settings.ReturnAddress?.Phone" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white" />
                            </div>
                            <div>
                                <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">Email</label>
                                <input type="email" name="Input.ReturnAddress.Email" value="@Model.Settings.ReturnAddress?.Email" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Right Column -->
            <div class="space-y-6">
                <!-- Portal Customization -->
                <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md">
                    <div class="p-6">
                        <h6 class="mb-4 font-semibold text-gray-900 dark:text-white">Portal Customization</h6>

                        <div class="space-y-4">
                            <div>
                                <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">Page Title</label>
                                <input type="text" name="Input.PageTitle" value="@Model.Settings.PageTitle" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white" placeholder="Start a Return" />
                            </div>

                            <div>
                                <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">Policy Text</label>
                                <textarea name="Input.PolicyText" rows="3" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white" placeholder="Brief return policy description">@Model.Settings.PolicyText</textarea>
                            </div>

                            <div>
                                <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">Logo URL</label>
                                <input type="url" name="Input.LogoUrl" value="@Model.Settings.LogoUrl" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white" placeholder="https://..." />
                            </div>

                            <div>
                                <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">Primary Color</label>
                                <div class="flex gap-2">
                                    <input type="color" name="Input.PrimaryColor" value="@(Model.Settings.PrimaryColor ?? "#8b5cf6")" class="h-10 w-14 rounded border border-gray-300 dark:border-gray-600" />
                                    <input type="text" value="@(Model.Settings.PrimaryColor ?? "#8b5cf6")" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block flex-1 p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white" readonly />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Notifications -->
                <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md">
                    <div class="p-6">
                        <h6 class="mb-4 font-semibold text-gray-900 dark:text-white">Notifications</h6>

                        <div class="space-y-4">
                            <div class="flex items-center justify-between">
                                <div>
                                    <p class="text-sm font-medium text-gray-700 dark:text-white">Email Notifications</p>
                                    <p class="text-xs text-gray-500 dark:text-gray-400">Send email updates to customers</p>
                                </div>
                                <label class="relative inline-flex items-center cursor-pointer">
                                    <input type="checkbox" name="Input.EmailNotificationsEnabled" value="true" @(Model.Settings.EmailNotificationsEnabled ? "checked" : "") class="sr-only peer">
                                    <div class="relative w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-purple-300 dark:peer-focus:ring-purple-800 rounded-full peer dark:bg-gray-600 peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all dark:border-gray-500 peer-checked:bg-purple-600"></div>
                                </label>
                            </div>

                            <div>
                                <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">Admin Email</label>
                                <input type="email" name="Input.NotificationEmail" value="@Model.Settings.NotificationEmail" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white" placeholder="Notify when new returns are submitted" />
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Portal URL -->
                <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md">
                    <div class="p-6">
                        <h6 class="mb-4 font-semibold text-gray-900 dark:text-white">Customer Portal URL</h6>
                        <p class="text-sm text-gray-500 dark:text-gray-400 mb-4">Share this link with customers</p>

                        <div class="flex gap-2">
                            <input type="text" readonly value="@Model.PortalUrl" id="portalUrl" class="flex-1 p-2.5 text-sm text-gray-900 border border-gray-300 rounded-lg bg-gray-50 dark:bg-gray-700 dark:border-gray-600 dark:text-white" />
                            <button type="button" onclick="copyPortalUrl()" class="px-4 py-2.5 text-sm font-medium text-white bg-purple-600 rounded-lg hover:bg-purple-700">
                                <i class="fas fa-copy"></i>
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Save Button -->
                <button type="submit" class="w-full px-6 py-3 text-sm font-medium text-white bg-gradient-to-br from-purple-600 to-pink-500 rounded-lg hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-purple-300">
                    <i class="fas fa-save me-2"></i> Save Settings
                </button>
            </div>
        </div>
    </form>
</div>

@section Scripts {
<script>
    function copyPortalUrl() {
        var input = document.getElementById('portalUrl');
        input.select();
        document.execCommand('copy');
        alert('Portal URL copied to clipboard!');
    }
</script>
}
