@page "/returns/details/{id:int}"
@model Algora.Web.Pages.Returns.DetailsModel
@{
    ViewData["Title"] = Model.Return != null ? $"Return {Model.Return.RequestNumber}" : "Return Details";
}

<div class="p-4">
    <!-- Header -->
    <div class="flex flex-wrap items-center justify-between gap-4 mb-6">
        <div class="flex items-center gap-4">
            <a href="/returns/list" class="text-gray-400 hover:text-gray-600 dark:hover:text-white">
                <i class="fas fa-arrow-left text-lg"></i>
            </a>
            <div>
                <h1 class="text-xl font-bold text-gray-900 dark:text-white">Return Details</h1>
                <p class="text-sm text-gray-500 dark:text-gray-400">@(Model.Return?.RequestNumber ?? "Not Found")</p>
            </div>
        </div>
        @if (Model.Return != null)
        {
            <span class="px-4 py-2 text-sm font-bold uppercase text-white rounded-lg @Model.GetStatusBadgeClass(Model.Return.Status)">
                @Model.Return.Status
            </span>
        }
    </div>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="flex items-center p-4 mb-4 text-sm text-red-800 rounded-lg bg-red-50 dark:bg-gray-800 dark:text-red-400" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i> @Model.ErrorMessage
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="flex items-center p-4 mb-4 text-sm text-green-800 rounded-lg bg-green-50 dark:bg-gray-800 dark:text-green-400" role="alert">
            <i class="fas fa-check-circle me-2"></i> @Model.SuccessMessage
        </div>
    }

    @if (Model.Return != null)
    {
        var r = Model.Return;
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
            <!-- Left Column: Details -->
            <div class="lg:col-span-2 space-y-6">
                <!-- Return Info -->
                <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md">
                    <div class="p-6">
                        <div class="flex items-center justify-between mb-4">
                            <h6 class="font-semibold text-gray-900 dark:text-white">Request Information</h6>
                            @if (r.IsAutoApproved)
                            {
                                <span class="px-2 py-1 text-xs font-medium text-green-800 bg-green-100 rounded-full dark:bg-green-900 dark:text-green-300">
                                    <i class="fas fa-bolt me-1"></i> Auto-approved
                                </span>
                            }
                        </div>
                        <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
                            <div>
                                <p class="text-xs text-gray-500 dark:text-gray-400">Request Number</p>
                                <p class="text-sm font-semibold text-gray-900 dark:text-white">@r.RequestNumber</p>
                            </div>
                            <div>
                                <p class="text-xs text-gray-500 dark:text-gray-400">Order Number</p>
                                <p class="text-sm font-semibold text-gray-900 dark:text-white">
                                    <a href="/orders/details/@r.OrderId" class="text-purple-600 hover:underline">#@r.OrderNumber</a>
                                </p>
                            </div>
                            <div>
                                <p class="text-xs text-gray-500 dark:text-gray-400">Requested</p>
                                <p class="text-sm font-semibold text-gray-900 dark:text-white">@r.RequestedAt.ToString("MMM d, yyyy h:mm tt")</p>
                            </div>
                            <div>
                                <p class="text-xs text-gray-500 dark:text-gray-400">Return Reason</p>
                                <p class="text-sm font-semibold text-gray-900 dark:text-white">@(r.ReasonDescription ?? r.ReasonCode)</p>
                            </div>
                        </div>

                        @if (!string.IsNullOrEmpty(r.CustomerNote))
                        {
                            <div class="mt-4 p-3 rounded-lg bg-gray-50 dark:bg-gray-700">
                                <p class="text-xs text-gray-500 dark:text-gray-400 mb-1">Customer Note</p>
                                <p class="text-sm text-gray-700 dark:text-white">@r.CustomerNote</p>
                            </div>
                        }

                        @if (!string.IsNullOrEmpty(r.RejectionReason))
                        {
                            <div class="mt-4 p-3 rounded-lg bg-red-50 dark:bg-red-900/20">
                                <p class="text-xs text-red-600 dark:text-red-400 mb-1">Rejection Reason</p>
                                <p class="text-sm text-red-800 dark:text-red-300">@r.RejectionReason</p>
                            </div>
                        }
                    </div>
                </div>

                <!-- Customer Info -->
                <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md">
                    <div class="p-6">
                        <h6 class="mb-4 font-semibold text-gray-900 dark:text-white">Customer Information</h6>
                        <div class="grid grid-cols-2 gap-4">
                            <div>
                                <p class="text-xs text-gray-500 dark:text-gray-400">Name</p>
                                <p class="text-sm font-semibold text-gray-900 dark:text-white">@r.CustomerName</p>
                            </div>
                            <div>
                                <p class="text-xs text-gray-500 dark:text-gray-400">Email</p>
                                <p class="text-sm font-semibold text-gray-900 dark:text-white">
                                    <a href="mailto:@r.CustomerEmail" class="text-purple-600 hover:underline">@r.CustomerEmail</a>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Items -->
                <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md">
                    <div class="p-6 border-b border-gray-200 dark:border-gray-700">
                        <h6 class="font-semibold text-gray-900 dark:text-white">Return Items</h6>
                    </div>
                    <div class="p-6">
                        <div class="divide-y divide-gray-200 dark:divide-gray-700">
                            @foreach (var item in r.Items)
                            {
                                <div class="py-4 flex items-center gap-4">
                                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                                    {
                                        <img src="@item.ImageUrl" alt="@item.ProductTitle" class="w-16 h-16 object-cover rounded-lg" />
                                    }
                                    else
                                    {
                                        <div class="w-16 h-16 bg-gray-200 dark:bg-gray-700 rounded-lg flex items-center justify-center">
                                            <i class="fas fa-image text-gray-400"></i>
                                        </div>
                                    }
                                    <div class="flex-1 min-w-0">
                                        <p class="text-sm font-medium text-gray-900 dark:text-white truncate">@item.ProductTitle</p>
                                        @if (!string.IsNullOrEmpty(item.VariantTitle))
                                        {
                                            <p class="text-xs text-gray-500 dark:text-gray-400">@item.VariantTitle</p>
                                        }
                                        @if (!string.IsNullOrEmpty(item.Sku))
                                        {
                                            <p class="text-xs text-gray-400">SKU: @item.Sku</p>
                                        }
                                        @if (!string.IsNullOrEmpty(item.Condition))
                                        {
                                            <p class="text-xs mt-1">
                                                <span class="px-2 py-0.5 bg-gray-100 dark:bg-gray-700 rounded text-gray-700 dark:text-white">@item.Condition</span>
                                                @if (!string.IsNullOrEmpty(item.ConditionNote))
                                                {
                                                    <span class="text-gray-400 ml-2">@item.ConditionNote</span>
                                                }
                                            </p>
                                        }
                                    </div>
                                    <div class="text-right">
                                        <p class="text-sm font-medium text-gray-900 dark:text-white">Qty: @item.QuantityReturned</p>
                                        <p class="text-sm text-gray-500">@r.Currency @item.RefundAmount.ToString("N2")</p>
                                        @if (item.Restocked)
                                        {
                                            <span class="text-xs text-green-600"><i class="fas fa-check"></i> Restocked</span>
                                        }
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <!-- Shipping Label -->
                @if (r.Label != null)
                {
                    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md">
                        <div class="p-6">
                            <h6 class="mb-4 font-semibold text-gray-900 dark:text-white">Shipping Label</h6>
                            <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-4">
                                <div>
                                    <p class="text-xs text-gray-500 dark:text-gray-400">Tracking Number</p>
                                    <p class="text-sm font-mono font-semibold text-gray-900 dark:text-white">
                                        @if (!string.IsNullOrEmpty(r.TrackingUrl))
                                        {
                                            <a href="@r.TrackingUrl" target="_blank" class="text-purple-600 hover:underline">@r.TrackingNumber</a>
                                        }
                                        else
                                        {
                                            @r.TrackingNumber
                                        }
                                    </p>
                                </div>
                                <div>
                                    <p class="text-xs text-gray-500 dark:text-gray-400">Carrier</p>
                                    <p class="text-sm font-semibold text-gray-900 dark:text-white">@r.Label.Carrier.ToUpper()</p>
                                </div>
                                <div>
                                    <p class="text-xs text-gray-500 dark:text-gray-400">Service</p>
                                    <p class="text-sm font-semibold text-gray-900 dark:text-white">@r.Label.ServiceLevel</p>
                                </div>
                                <div>
                                    <p class="text-xs text-gray-500 dark:text-gray-400">Label Cost</p>
                                    <p class="text-sm font-semibold text-gray-900 dark:text-white">@r.Label.Currency @r.Label.Cost.ToString("N2")</p>
                                </div>
                            </div>
                            <a href="@r.Label.LabelUrl" target="_blank" class="inline-flex items-center px-4 py-2.5 text-sm font-medium text-white bg-gradient-to-br from-purple-600 to-pink-500 rounded-lg hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-purple-300">
                                <i class="fas fa-download me-2"></i> Download Label
                            </a>
                        </div>
                    </div>
                }
            </div>

            <!-- Right Column: Actions & Timeline -->
            <div class="space-y-6">
                <!-- Financial Summary -->
                <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md">
                    <div class="p-6">
                        <h6 class="mb-4 font-semibold text-gray-900 dark:text-white">Financial Summary</h6>
                        <div class="space-y-2">
                            <div class="flex justify-between">
                                <span class="text-sm text-gray-500 dark:text-gray-400">Items Total</span>
                                <span class="text-sm font-semibold text-gray-900 dark:text-white">@r.Currency @r.Items.Sum(i => i.RefundAmount).ToString("N2")</span>
                            </div>
                            @if (r.ShippingCost > 0)
                            {
                                <div class="flex justify-between">
                                    <span class="text-sm text-gray-500 dark:text-gray-400">Shipping Cost</span>
                                    <span class="text-sm font-semibold text-red-600">-@r.Currency @r.ShippingCost.ToString("N2")</span>
                                </div>
                            }
                            <div class="border-t border-gray-200 dark:border-gray-700 pt-2 flex justify-between">
                                <span class="text-sm font-semibold text-gray-900 dark:text-white">Total Refund</span>
                                <span class="text-lg font-bold text-green-600">@r.Currency @r.TotalRefundAmount.ToString("N2")</span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Actions -->
                <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md">
                    <div class="p-6">
                        <h6 class="mb-4 font-semibold text-gray-900 dark:text-white">Actions</h6>

                        @if (r.Status.ToLower() == "pending")
                        {
                            <div class="space-y-3">
                                <form method="post" asp-page-handler="Approve" asp-route-id="@r.Id">
                                    <div class="mb-2">
                                        <input type="text" name="note" placeholder="Approval note (optional)" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white" />
                                    </div>
                                    <button type="submit" class="w-full px-4 py-2.5 text-sm font-medium text-white bg-gradient-to-br from-green-600 to-lime-400 rounded-lg hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-green-300">
                                        <i class="fas fa-check me-2"></i> Approve Return
                                    </button>
                                </form>

                                <form method="post" asp-page-handler="Reject" asp-route-id="@r.Id" onsubmit="return confirm('Are you sure you want to reject this return?')">
                                    <div class="mb-2">
                                        <input type="text" name="reason" placeholder="Rejection reason (required)" required class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white" />
                                    </div>
                                    <button type="submit" class="w-full px-4 py-2.5 text-sm font-medium text-white bg-gradient-to-br from-red-600 to-rose-400 rounded-lg hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-red-300">
                                        <i class="fas fa-times me-2"></i> Reject Return
                                    </button>
                                </form>
                            </div>
                        }
                        else if (r.Status.ToLower() == "shipped")
                        {
                            <form method="post" asp-page-handler="MarkReceived" asp-route-id="@r.Id">
                                <button type="submit" class="w-full px-4 py-2.5 text-sm font-medium text-white bg-gradient-to-br from-purple-600 to-pink-500 rounded-lg hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-purple-300">
                                    <i class="fas fa-box me-2"></i> Mark as Received
                                </button>
                            </form>
                        }
                        else if (r.Status.ToLower() == "received")
                        {
                            <form method="post" asp-page-handler="ProcessRefund" asp-route-id="@r.Id" onsubmit="return confirm('Process refund of @r.Currency @r.TotalRefundAmount.ToString("N2")?')">
                                <button type="submit" class="w-full px-4 py-2.5 text-sm font-medium text-white bg-gradient-to-br from-green-600 to-lime-400 rounded-lg hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-green-300">
                                    <i class="fas fa-dollar-sign me-2"></i> Process Refund
                                </button>
                            </form>
                        }
                        else if (r.Status.ToLower() == "refunded")
                        {
                            <div class="text-center py-4">
                                <i class="fas fa-check-circle text-4xl text-green-500 mb-2"></i>
                                <p class="text-sm text-gray-500 dark:text-gray-400">This return has been completed.</p>
                            </div>
                        }
                        else if (r.Status.ToLower() is "rejected" or "cancelled")
                        {
                            <div class="text-center py-4">
                                <i class="fas fa-times-circle text-4xl text-gray-400 mb-2"></i>
                                <p class="text-sm text-gray-500 dark:text-gray-400">This return has been @r.Status.ToLower().</p>
                            </div>
                        }

                        @if (r.Status.ToLower() is "pending" or "approved")
                        {
                            <div class="mt-4 pt-4 border-t border-gray-200 dark:border-gray-700">
                                <form method="post" asp-page-handler="Cancel" asp-route-id="@r.Id" onsubmit="return confirm('Are you sure you want to cancel this return?')">
                                    <div class="mb-2">
                                        <input type="text" name="reason" placeholder="Cancellation reason (required)" required class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white" />
                                    </div>
                                    <button type="submit" class="w-full px-4 py-2.5 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-100 dark:bg-gray-800 dark:text-white dark:border-gray-600 dark:hover:bg-gray-700">
                                        <i class="fas fa-ban me-2"></i> Cancel Return
                                    </button>
                                </form>
                            </div>
                        }
                    </div>
                </div>

                <!-- Timeline -->
                <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md">
                    <div class="p-6">
                        <h6 class="mb-4 font-semibold text-gray-900 dark:text-white">Timeline</h6>
                        <div class="relative">
                            <div class="absolute left-2 top-0 bottom-0 w-0.5 bg-gray-200 dark:bg-gray-700"></div>

                            <div class="relative flex items-start mb-4">
                                <div class="absolute left-0 w-4 h-4 rounded-full bg-green-500"></div>
                                <div class="ml-8">
                                    <p class="text-sm font-medium text-gray-900 dark:text-white">Request Submitted</p>
                                    <p class="text-xs text-gray-500 dark:text-gray-400">@r.RequestedAt.ToString("MMM d, yyyy h:mm tt")</p>
                                </div>
                            </div>

                            @if (r.ApprovedAt.HasValue)
                            {
                                <div class="relative flex items-start mb-4">
                                    <div class="absolute left-0 w-4 h-4 rounded-full bg-blue-500"></div>
                                    <div class="ml-8">
                                        <p class="text-sm font-medium text-gray-900 dark:text-white">
                                            Approved
                                            @if (r.IsAutoApproved)
                                            {
                                                <span class="text-xs text-green-600">(auto)</span>
                                            }
                                        </p>
                                        <p class="text-xs text-gray-500 dark:text-gray-400">@r.ApprovedAt.Value.ToString("MMM d, yyyy h:mm tt")</p>
                                    </div>
                                </div>
                            }

                            @if (r.RejectedAt.HasValue)
                            {
                                <div class="relative flex items-start mb-4">
                                    <div class="absolute left-0 w-4 h-4 rounded-full bg-red-500"></div>
                                    <div class="ml-8">
                                        <p class="text-sm font-medium text-gray-900 dark:text-white">Rejected</p>
                                        <p class="text-xs text-gray-500 dark:text-gray-400">@r.RejectedAt.Value.ToString("MMM d, yyyy h:mm tt")</p>
                                    </div>
                                </div>
                            }

                            @if (r.ShippedAt.HasValue)
                            {
                                <div class="relative flex items-start mb-4">
                                    <div class="absolute left-0 w-4 h-4 rounded-full bg-purple-500"></div>
                                    <div class="ml-8">
                                        <p class="text-sm font-medium text-gray-900 dark:text-white">Shipped</p>
                                        <p class="text-xs text-gray-500 dark:text-gray-400">@r.ShippedAt.Value.ToString("MMM d, yyyy h:mm tt")</p>
                                    </div>
                                </div>
                            }

                            @if (r.ReceivedAt.HasValue)
                            {
                                <div class="relative flex items-start mb-4">
                                    <div class="absolute left-0 w-4 h-4 rounded-full bg-indigo-500"></div>
                                    <div class="ml-8">
                                        <p class="text-sm font-medium text-gray-900 dark:text-white">Received</p>
                                        <p class="text-xs text-gray-500 dark:text-gray-400">@r.ReceivedAt.Value.ToString("MMM d, yyyy h:mm tt")</p>
                                    </div>
                                </div>
                            }

                            @if (r.RefundedAt.HasValue)
                            {
                                <div class="relative flex items-start">
                                    <div class="absolute left-0 w-4 h-4 rounded-full bg-green-500"></div>
                                    <div class="ml-8">
                                        <p class="text-sm font-medium text-gray-900 dark:text-white">Refunded</p>
                                        <p class="text-xs text-gray-500 dark:text-gray-400">@r.RefundedAt.Value.ToString("MMM d, yyyy h:mm tt")</p>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else if (string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6 text-center">
            <i class="fas fa-undo text-5xl text-gray-300 dark:text-gray-600 mb-4"></i>
            <p class="text-gray-500 dark:text-gray-400">Return request not found.</p>
            <a href="/returns/list" class="mt-4 inline-block text-purple-600 hover:underline">
                <i class="fas fa-arrow-left me-1"></i> Back to Returns
            </a>
        </div>
    }
</div>
