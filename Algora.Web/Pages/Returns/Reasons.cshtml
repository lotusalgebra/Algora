@page "/returns/reasons"
@model Algora.Web.Pages.Returns.ReasonsModel
@{
    ViewData["Title"] = "Return Reasons";
}

<div class="p-4">
    <!-- Header -->
    <div class="flex flex-wrap items-center justify-between gap-4 mb-6">
        <div>
            <h1 class="text-xl font-bold text-gray-900 dark:text-white">Return Reasons</h1>
            <p class="text-sm text-gray-500 dark:text-gray-400">Manage the reasons customers can select when requesting a return</p>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="flex items-center p-4 mb-4 text-sm text-red-800 rounded-lg bg-red-50 dark:bg-gray-800 dark:text-red-400" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i> @Model.ErrorMessage
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="flex items-center p-4 mb-4 text-sm text-green-800 rounded-lg bg-green-50 dark:bg-gray-800 dark:text-green-400" role="alert">
            <i class="fas fa-check-circle me-2"></i> @Model.SuccessMessage
        </div>
    }

    <!-- Add New Reason -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md mb-6">
        <div class="p-6">
            <h6 class="mb-4 font-semibold text-gray-900 dark:text-white">Add New Reason</h6>
            <form method="post" asp-page-handler="Create">
                <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-4">
                    <div>
                        <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">Code *</label>
                        <input type="text" asp-for="NewReason.Code" required class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white" placeholder="wrong_size" />
                    </div>
                    <div>
                        <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">Display Text *</label>
                        <input type="text" asp-for="NewReason.DisplayText" required class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white" placeholder="Wrong size or fit" />
                    </div>
                    <div>
                        <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">Description</label>
                        <input type="text" asp-for="NewReason.Description" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white" placeholder="Optional description" />
                    </div>
                    <div>
                        <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">Display Order</label>
                        <input type="number" asp-for="NewReason.DisplayOrder" value="0" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white" />
                    </div>
                </div>
                <div class="flex flex-wrap gap-4 mb-4">
                    <label class="inline-flex items-center cursor-pointer">
                        <input type="checkbox" asp-for="NewReason.IsActive" checked class="w-4 h-4 text-purple-600 bg-gray-100 border-gray-300 rounded focus:ring-purple-500 dark:bg-gray-600 dark:border-gray-500" />
                        <span class="ml-2 text-sm text-gray-700 dark:text-white">Active</span>
                    </label>
                    <label class="inline-flex items-center cursor-pointer">
                        <input type="checkbox" asp-for="NewReason.RequiresNote" class="w-4 h-4 text-purple-600 bg-gray-100 border-gray-300 rounded focus:ring-purple-500 dark:bg-gray-600 dark:border-gray-500" />
                        <span class="ml-2 text-sm text-gray-700 dark:text-white">Requires Note</span>
                    </label>
                    <label class="inline-flex items-center cursor-pointer">
                        <input type="checkbox" asp-for="NewReason.IsDefect" class="w-4 h-4 text-purple-600 bg-gray-100 border-gray-300 rounded focus:ring-purple-500 dark:bg-gray-600 dark:border-gray-500" />
                        <span class="ml-2 text-sm text-gray-700 dark:text-white">Is Defect</span>
                    </label>
                    <label class="inline-flex items-center cursor-pointer">
                        <input type="checkbox" asp-for="NewReason.EligibleForAutoApproval" checked class="w-4 h-4 text-purple-600 bg-gray-100 border-gray-300 rounded focus:ring-purple-500 dark:bg-gray-600 dark:border-gray-500" />
                        <span class="ml-2 text-sm text-gray-700 dark:text-white">Eligible for Auto-Approval</span>
                    </label>
                </div>
                <button type="submit" class="inline-flex items-center px-4 py-2.5 text-sm font-medium text-white bg-gradient-to-br from-green-600 to-lime-400 rounded-lg hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-green-300">
                    <i class="fas fa-plus me-2"></i> Add Reason
                </button>
            </form>
        </div>
    </div>

    <!-- Existing Reasons -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md">
        <div class="p-6 border-b border-gray-200 dark:border-gray-700">
            <div class="flex items-center justify-between">
                <div>
                    <h6 class="font-semibold text-gray-900 dark:text-white">Return Reasons</h6>
                    <p class="text-sm text-gray-500 dark:text-gray-400">
                        <span class="font-semibold">@Model.Reasons.Count</span> reasons configured
                    </p>
                </div>
                @if (Model.Reasons.Count == 0)
                {
                    <form method="post" asp-page-handler="SeedDefaults">
                        <button type="submit" class="inline-flex items-center px-4 py-2.5 text-sm font-medium text-white bg-gradient-to-br from-purple-600 to-pink-500 rounded-lg hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-purple-300">
                            <i class="fas fa-magic me-2"></i> Add Default Reasons
                        </button>
                    </form>
                }
            </div>
        </div>

        <div class="p-6">
            @if (Model.Reasons.Count == 0)
            {
                <div class="text-center py-8">
                    <i class="fas fa-tags text-5xl text-gray-300 dark:text-gray-600 mb-4"></i>
                    <p class="text-gray-500 dark:text-gray-400 mb-2">No return reasons configured yet.</p>
                    <p class="text-sm text-gray-400">Add reasons manually or click "Add Default Reasons" to get started.</p>
                </div>
            }
            else
            {
                <div class="relative overflow-x-auto">
                    <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
                        <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                            <tr>
                                <th class="px-6 py-3">Code</th>
                                <th class="px-6 py-3">Display Text</th>
                                <th class="px-6 py-3 text-center">Order</th>
                                <th class="px-6 py-3 text-center">Status</th>
                                <th class="px-6 py-3 text-center">Options</th>
                                <th class="px-6 py-3 text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var reason in Model.Reasons.OrderBy(r => r.DisplayOrder))
                            {
                                <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-700">
                                    <td class="px-6 py-4">
                                        <span class="font-mono text-gray-900 dark:text-white">@reason.Code</span>
                                    </td>
                                    <td class="px-6 py-4">
                                        <p class="text-gray-900 dark:text-white">@reason.DisplayText</p>
                                        @if (!string.IsNullOrEmpty(reason.Description))
                                        {
                                            <p class="text-xs text-gray-500 dark:text-gray-400">@reason.Description</p>
                                        }
                                    </td>
                                    <td class="px-6 py-4 text-center text-gray-900 dark:text-white">@reason.DisplayOrder</td>
                                    <td class="px-6 py-4 text-center">
                                        @if (reason.IsActive)
                                        {
                                            <span class="px-2.5 py-1 text-xs font-semibold text-green-800 bg-green-100 rounded-full dark:bg-green-900 dark:text-green-300">Active</span>
                                        }
                                        else
                                        {
                                            <span class="px-2.5 py-1 text-xs font-semibold text-gray-800 bg-gray-100 rounded-full dark:bg-gray-700 dark:text-gray-300">Inactive</span>
                                        }
                                    </td>
                                    <td class="px-6 py-4 text-center">
                                        <div class="flex flex-wrap gap-1 justify-center">
                                            @if (reason.RequiresNote)
                                            {
                                                <span class="px-2 py-0.5 text-xs bg-blue-100 text-blue-800 rounded dark:bg-blue-900 dark:text-blue-200" title="Requires Note">Note</span>
                                            }
                                            @if (reason.IsDefect)
                                            {
                                                <span class="px-2 py-0.5 text-xs bg-red-100 text-red-800 rounded dark:bg-red-900 dark:text-red-200" title="Is Defect">Defect</span>
                                            }
                                            @if (reason.EligibleForAutoApproval)
                                            {
                                                <span class="px-2 py-0.5 text-xs bg-green-100 text-green-800 rounded dark:bg-green-900 dark:text-green-200" title="Auto-Approval Eligible">Auto</span>
                                            }
                                        </div>
                                    </td>
                                    <td class="px-6 py-4 text-center">
                                        <button type="button" onclick="openEditModal(@reason.Id, '@reason.Code', '@reason.DisplayText', '@(reason.Description ?? "")', @reason.DisplayOrder, @reason.IsActive.ToString().ToLower(), @reason.RequiresNote.ToString().ToLower(), @reason.IsDefect.ToString().ToLower(), @reason.EligibleForAutoApproval.ToString().ToLower())" class="text-xs font-semibold text-purple-600 hover:text-purple-800 dark:text-purple-400 me-2">
                                            <i class="fas fa-edit"></i> Edit
                                        </button>
                                        <form method="post" asp-page-handler="Delete" asp-route-id="@reason.Id" class="inline" onsubmit="return confirm('Delete this return reason?')">
                                            <button type="submit" class="text-xs font-semibold text-red-600 hover:text-red-800 dark:text-red-400">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

<!-- Edit Modal -->
<div id="editModal" class="fixed inset-0 z-50 hidden overflow-y-auto" aria-modal="true">
    <div class="flex items-center justify-center min-h-screen px-4 pt-4 pb-20 text-center sm:p-0">
        <div class="fixed inset-0 transition-opacity bg-gray-900 bg-opacity-75 backdrop-blur-sm" onclick="closeEditModal()"></div>

        <div class="relative inline-block w-full max-w-lg p-6 overflow-hidden text-left align-bottom transition-all transform bg-white dark:bg-gray-800 rounded-lg shadow-xl sm:my-8 sm:align-middle">
            <div class="flex items-center justify-between mb-4">
                <h5 class="text-lg font-bold text-gray-900 dark:text-white">Edit Return Reason</h5>
                <button type="button" onclick="closeEditModal()" class="text-gray-400 hover:text-gray-500 dark:hover:text-gray-300">
                    <i class="fas fa-times"></i>
                </button>
            </div>

            <form method="post" asp-page-handler="Update" id="editForm">
                <input type="hidden" name="id" id="editId" />
                <div class="grid grid-cols-2 gap-4 mb-4">
                    <div>
                        <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">Code</label>
                        <input type="text" name="code" id="editCode" required class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white" />
                    </div>
                    <div>
                        <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">Display Text</label>
                        <input type="text" name="displayText" id="editDisplayText" required class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white" />
                    </div>
                </div>
                <div class="grid grid-cols-2 gap-4 mb-4">
                    <div>
                        <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">Description</label>
                        <input type="text" name="description" id="editDescription" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white" />
                    </div>
                    <div>
                        <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">Display Order</label>
                        <input type="number" name="displayOrder" id="editDisplayOrder" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white" />
                    </div>
                </div>
                <div class="flex flex-wrap gap-4 mb-6">
                    <label class="inline-flex items-center cursor-pointer">
                        <input type="checkbox" name="isActive" id="editIsActive" value="true" class="w-4 h-4 text-purple-600 bg-gray-100 border-gray-300 rounded focus:ring-purple-500 dark:bg-gray-600 dark:border-gray-500" />
                        <span class="ml-2 text-sm text-gray-700 dark:text-white">Active</span>
                    </label>
                    <label class="inline-flex items-center cursor-pointer">
                        <input type="checkbox" name="requiresNote" id="editRequiresNote" value="true" class="w-4 h-4 text-purple-600 bg-gray-100 border-gray-300 rounded focus:ring-purple-500 dark:bg-gray-600 dark:border-gray-500" />
                        <span class="ml-2 text-sm text-gray-700 dark:text-white">Requires Note</span>
                    </label>
                    <label class="inline-flex items-center cursor-pointer">
                        <input type="checkbox" name="isDefect" id="editIsDefect" value="true" class="w-4 h-4 text-purple-600 bg-gray-100 border-gray-300 rounded focus:ring-purple-500 dark:bg-gray-600 dark:border-gray-500" />
                        <span class="ml-2 text-sm text-gray-700 dark:text-white">Is Defect</span>
                    </label>
                    <label class="inline-flex items-center cursor-pointer">
                        <input type="checkbox" name="eligibleForAutoApproval" id="editEligibleForAutoApproval" value="true" class="w-4 h-4 text-purple-600 bg-gray-100 border-gray-300 rounded focus:ring-purple-500 dark:bg-gray-600 dark:border-gray-500" />
                        <span class="ml-2 text-sm text-gray-700 dark:text-white">Auto-Approval Eligible</span>
                    </label>
                </div>
                <div class="flex gap-3">
                    <button type="submit" class="flex-1 px-4 py-2.5 text-sm font-medium text-white bg-gradient-to-br from-purple-600 to-pink-500 rounded-lg hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-purple-300">
                        Save Changes
                    </button>
                    <button type="button" onclick="closeEditModal()" class="flex-1 px-4 py-2.5 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-100 dark:bg-gray-700 dark:text-white dark:border-gray-600 dark:hover:bg-gray-600">
                        Cancel
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
<script>
    function openEditModal(id, code, displayText, description, displayOrder, isActive, requiresNote, isDefect, eligibleForAutoApproval) {
        document.getElementById('editId').value = id;
        document.getElementById('editCode').value = code;
        document.getElementById('editDisplayText').value = displayText;
        document.getElementById('editDescription').value = description;
        document.getElementById('editDisplayOrder').value = displayOrder;
        document.getElementById('editIsActive').checked = isActive;
        document.getElementById('editRequiresNote').checked = requiresNote;
        document.getElementById('editIsDefect').checked = isDefect;
        document.getElementById('editEligibleForAutoApproval').checked = eligibleForAutoApproval;
        document.getElementById('editModal').classList.remove('hidden');
    }

    function closeEditModal() {
        document.getElementById('editModal').classList.add('hidden');
    }

    document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape') {
            closeEditModal();
        }
    });
</script>
}
