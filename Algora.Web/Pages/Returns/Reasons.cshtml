@page "/returns/reasons"
@model Algora.Web.Pages.Returns.ReasonsModel
@{
    ViewData["Title"] = "Return Reasons";
}

<div class="w-full px-6 py-6 mx-auto">
    <!-- Page Header -->
    <div class="flex flex-wrap items-center justify-between mb-6">
        <div>
            <nav class="flex mb-2" aria-label="Breadcrumb">
                <ol class="inline-flex items-center space-x-1 md:space-x-3">
                    <li class="inline-flex items-center">
                        <a href="/returns" class="text-sm text-slate-400 hover:text-indigo-600 dark:text-white dark:opacity-60">Returns</a>
                    </li>
                    <li>
                        <div class="flex items-center">
                            <i class="fas fa-chevron-right text-xs text-slate-400 mx-2"></i>
                            <span class="text-sm text-slate-700 dark:text-white">Return Reasons</span>
                        </div>
                    </li>
                </ol>
            </nav>
            <h6 class="mb-0 dark:text-white text-xl font-bold">Return Reasons</h6>
            <p class="mb-0 text-sm leading-normal text-slate-400 dark:text-white dark:opacity-60">
                Manage the reasons customers can select when requesting a return
            </p>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="mb-6 p-4 text-sm text-red-700 bg-red-100 rounded-lg dark:bg-red-200 dark:text-red-800" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i>
            @Model.ErrorMessage
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="mb-6 p-4 text-sm text-green-700 bg-green-100 rounded-lg dark:bg-green-200 dark:text-green-800" role="alert">
            <i class="fas fa-check-circle me-2"></i>
            @Model.SuccessMessage
        </div>
    }

    <!-- Add New Reason -->
    <div class="flex flex-wrap -mx-3 mb-6">
        <div class="flex-none w-full max-w-full px-3">
            <div class="relative flex flex-col min-w-0 break-words bg-white border-0 shadow-soft-xl rounded-2xl bg-clip-border dark:bg-gray-950 dark:shadow-soft-dark-xl">
                <div class="p-6">
                    <h6 class="mb-4 dark:text-white">Add New Reason</h6>
                    <form method="post" asp-page-handler="Create">
                        <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-4">
                            <div>
                                <label class="mb-2 ml-1 font-bold text-xs text-slate-700 dark:text-white/80">Code *</label>
                                <input type="text" asp-for="NewReason.Code" required
                                       class="focus:shadow-soft-primary-outline dark:bg-gray-950 dark:placeholder:text-white/80 dark:text-white/80 text-sm leading-5.6 ease-soft block w-full appearance-none rounded-lg border border-solid border-gray-300 bg-white bg-clip-padding px-3 py-2 font-normal text-gray-700 outline-none transition-all placeholder:text-gray-500 focus:border-fuchsia-300 focus:outline-none"
                                       placeholder="wrong_size" />
                            </div>
                            <div>
                                <label class="mb-2 ml-1 font-bold text-xs text-slate-700 dark:text-white/80">Display Text *</label>
                                <input type="text" asp-for="NewReason.DisplayText" required
                                       class="focus:shadow-soft-primary-outline dark:bg-gray-950 dark:placeholder:text-white/80 dark:text-white/80 text-sm leading-5.6 ease-soft block w-full appearance-none rounded-lg border border-solid border-gray-300 bg-white bg-clip-padding px-3 py-2 font-normal text-gray-700 outline-none transition-all placeholder:text-gray-500 focus:border-fuchsia-300 focus:outline-none"
                                       placeholder="Wrong size or fit" />
                            </div>
                            <div>
                                <label class="mb-2 ml-1 font-bold text-xs text-slate-700 dark:text-white/80">Description</label>
                                <input type="text" asp-for="NewReason.Description"
                                       class="focus:shadow-soft-primary-outline dark:bg-gray-950 dark:placeholder:text-white/80 dark:text-white/80 text-sm leading-5.6 ease-soft block w-full appearance-none rounded-lg border border-solid border-gray-300 bg-white bg-clip-padding px-3 py-2 font-normal text-gray-700 outline-none transition-all placeholder:text-gray-500 focus:border-fuchsia-300 focus:outline-none"
                                       placeholder="Optional description" />
                            </div>
                            <div>
                                <label class="mb-2 ml-1 font-bold text-xs text-slate-700 dark:text-white/80">Display Order</label>
                                <input type="number" asp-for="NewReason.DisplayOrder" value="0"
                                       class="focus:shadow-soft-primary-outline dark:bg-gray-950 dark:placeholder:text-white/80 dark:text-white/80 text-sm leading-5.6 ease-soft block w-full appearance-none rounded-lg border border-solid border-gray-300 bg-white bg-clip-padding px-3 py-2 font-normal text-gray-700 outline-none transition-all placeholder:text-gray-500 focus:border-fuchsia-300 focus:outline-none" />
                            </div>
                        </div>
                        <div class="flex flex-wrap gap-4 mb-4">
                            <label class="inline-flex items-center">
                                <input type="checkbox" asp-for="NewReason.IsActive" checked class="rounded border-gray-300 text-indigo-600 focus:ring-indigo-500" />
                                <span class="ml-2 text-sm dark:text-white">Active</span>
                            </label>
                            <label class="inline-flex items-center">
                                <input type="checkbox" asp-for="NewReason.RequiresNote" class="rounded border-gray-300 text-indigo-600 focus:ring-indigo-500" />
                                <span class="ml-2 text-sm dark:text-white">Requires Note</span>
                            </label>
                            <label class="inline-flex items-center">
                                <input type="checkbox" asp-for="NewReason.IsDefect" class="rounded border-gray-300 text-indigo-600 focus:ring-indigo-500" />
                                <span class="ml-2 text-sm dark:text-white">Is Defect</span>
                            </label>
                            <label class="inline-flex items-center">
                                <input type="checkbox" asp-for="NewReason.EligibleForAutoApproval" checked class="rounded border-gray-300 text-indigo-600 focus:ring-indigo-500" />
                                <span class="ml-2 text-sm dark:text-white">Eligible for Auto-Approval</span>
                            </label>
                        </div>
                        <button type="submit"
                                class="inline-block px-4 py-2 text-xs font-bold text-center text-white uppercase align-middle transition-all border-0 rounded-lg cursor-pointer ease-soft-in leading-pro tracking-tight-soft bg-gradient-to-tl from-green-600 to-lime-400 shadow-soft-md bg-150 bg-x-25 hover:scale-102 active:opacity-85">
                            <i class="fas fa-plus me-2"></i> Add Reason
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Existing Reasons -->
    <div class="flex flex-wrap -mx-3">
        <div class="flex-none w-full max-w-full px-3">
            <div class="relative flex flex-col min-w-0 mb-6 break-words bg-white border-0 shadow-soft-xl rounded-2xl bg-clip-border dark:bg-gray-950 dark:shadow-soft-dark-xl">
                <div class="p-6 pb-0 mb-0 border-b-0 rounded-t-2xl">
                    <div class="flex flex-wrap items-center justify-between">
                        <div>
                            <h6 class="mb-0 dark:text-white">Return Reasons</h6>
                            <p class="mb-0 text-sm leading-normal dark:text-white dark:opacity-60">
                                <span class="font-semibold">@Model.Reasons.Count</span> reasons configured
                            </p>
                        </div>
                        @if (Model.Reasons.Count == 0)
                        {
                            <form method="post" asp-page-handler="SeedDefaults">
                                <button type="submit"
                                        class="inline-block px-4 py-2 text-xs font-bold text-center text-white uppercase align-middle transition-all border-0 rounded-lg cursor-pointer ease-soft-in leading-pro tracking-tight-soft bg-gradient-to-tl from-indigo-600 to-purple-400 shadow-soft-md">
                                    <i class="fas fa-magic me-2"></i> Add Default Reasons
                                </button>
                            </form>
                        }
                    </div>
                </div>

                <div class="flex-auto p-6 px-0 pb-0">
                    @if (Model.Reasons.Count == 0)
                    {
                        <div class="text-center py-12">
                            <i class="fas fa-tags fa-4x text-gray-300 mb-4"></i>
                            <p class="text-gray-500 dark:text-gray-400 mb-4">No return reasons configured yet.</p>
                            <p class="text-sm text-gray-400">Add reasons manually or click "Add Default Reasons" to get started.</p>
                        </div>
                    }
                    else
                    {
                        <div class="overflow-x-auto">
                            <table class="table items-center w-full mb-0 align-top border-gray-200 text-slate-500 dark:border-white/40">
                                <thead class="align-bottom">
                                    <tr>
                                        <th class="px-6 py-3 font-bold text-left uppercase align-middle bg-transparent border-b border-gray-200 shadow-none text-xxs border-b-solid tracking-none whitespace-nowrap text-slate-400 opacity-70 dark:border-white/40 dark:text-white dark:opacity-80">Code</th>
                                        <th class="px-6 py-3 font-bold text-left uppercase align-middle bg-transparent border-b border-gray-200 shadow-none text-xxs border-b-solid tracking-none whitespace-nowrap text-slate-400 opacity-70 dark:border-white/40 dark:text-white dark:opacity-80">Display Text</th>
                                        <th class="px-6 py-3 font-bold text-center uppercase align-middle bg-transparent border-b border-gray-200 shadow-none text-xxs border-b-solid tracking-none whitespace-nowrap text-slate-400 opacity-70 dark:border-white/40 dark:text-white dark:opacity-80">Order</th>
                                        <th class="px-6 py-3 font-bold text-center uppercase align-middle bg-transparent border-b border-gray-200 shadow-none text-xxs border-b-solid tracking-none whitespace-nowrap text-slate-400 opacity-70 dark:border-white/40 dark:text-white dark:opacity-80">Status</th>
                                        <th class="px-6 py-3 font-bold text-center uppercase align-middle bg-transparent border-b border-gray-200 shadow-none text-xxs border-b-solid tracking-none whitespace-nowrap text-slate-400 opacity-70 dark:border-white/40 dark:text-white dark:opacity-80">Options</th>
                                        <th class="px-6 py-3 font-bold text-center uppercase align-middle bg-transparent border-b border-gray-200 shadow-none text-xxs border-b-solid tracking-none whitespace-nowrap text-slate-400 opacity-70 dark:border-white/40 dark:text-white dark:opacity-80">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var reason in Model.Reasons.OrderBy(r => r.DisplayOrder))
                                    {
                                        <tr>
                                            <td class="p-2 align-middle bg-transparent border-b whitespace-nowrap dark:border-white/40">
                                                <p class="mb-0 text-sm font-mono dark:text-white">@reason.Code</p>
                                            </td>
                                            <td class="p-2 align-middle bg-transparent border-b whitespace-nowrap dark:border-white/40">
                                                <p class="mb-0 text-sm dark:text-white">@reason.DisplayText</p>
                                                @if (!string.IsNullOrEmpty(reason.Description))
                                                {
                                                    <p class="mb-0 text-xs text-slate-400 dark:text-white dark:opacity-60">@reason.Description</p>
                                                }
                                            </td>
                                            <td class="p-2 text-center align-middle bg-transparent border-b whitespace-nowrap dark:border-white/40">
                                                <span class="text-sm dark:text-white">@reason.DisplayOrder</span>
                                            </td>
                                            <td class="p-2 text-center align-middle bg-transparent border-b whitespace-nowrap dark:border-white/40">
                                                @if (reason.IsActive)
                                                {
                                                    <span class="bg-gradient-to-tl from-green-600 to-lime-400 px-2.5 text-xxs rounded-1.8 py-1.4 inline-block whitespace-nowrap text-center align-baseline font-bold uppercase leading-none text-white">Active</span>
                                                }
                                                else
                                                {
                                                    <span class="bg-gradient-to-tl from-gray-400 to-gray-600 px-2.5 text-xxs rounded-1.8 py-1.4 inline-block whitespace-nowrap text-center align-baseline font-bold uppercase leading-none text-white">Inactive</span>
                                                }
                                            </td>
                                            <td class="p-2 text-center align-middle bg-transparent border-b whitespace-nowrap dark:border-white/40">
                                                <div class="flex flex-wrap gap-1 justify-center">
                                                    @if (reason.RequiresNote)
                                                    {
                                                        <span class="px-2 py-0.5 text-xxs bg-blue-100 text-blue-800 rounded dark:bg-blue-900 dark:text-blue-200" title="Requires Note">Note</span>
                                                    }
                                                    @if (reason.IsDefect)
                                                    {
                                                        <span class="px-2 py-0.5 text-xxs bg-red-100 text-red-800 rounded dark:bg-red-900 dark:text-red-200" title="Is Defect">Defect</span>
                                                    }
                                                    @if (reason.EligibleForAutoApproval)
                                                    {
                                                        <span class="px-2 py-0.5 text-xxs bg-green-100 text-green-800 rounded dark:bg-green-900 dark:text-green-200" title="Auto-Approval Eligible">Auto</span>
                                                    }
                                                </div>
                                            </td>
                                            <td class="p-2 text-center align-middle bg-transparent border-b whitespace-nowrap dark:border-white/40">
                                                <button type="button" onclick="openEditModal(@reason.Id, '@reason.Code', '@reason.DisplayText', '@(reason.Description ?? "")', @reason.DisplayOrder, @reason.IsActive.ToString().ToLower(), @reason.RequiresNote.ToString().ToLower(), @reason.IsDefect.ToString().ToLower(), @reason.EligibleForAutoApproval.ToString().ToLower())"
                                                        class="text-xs font-semibold text-indigo-600 hover:text-indigo-800 dark:text-indigo-400 me-2">
                                                    <i class="fas fa-edit"></i> Edit
                                                </button>
                                                <form method="post" asp-page-handler="Delete" asp-route-id="@reason.Id" class="inline" onsubmit="return confirm('Delete this return reason?')">
                                                    <button type="submit" class="text-xs font-semibold text-red-600 hover:text-red-800 dark:text-red-400">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Edit Modal -->
<div id="editModal" class="fixed inset-0 bg-gray-600 bg-opacity-50 hidden flex items-center justify-center z-50">
    <div class="bg-white rounded-2xl shadow-xl p-6 max-w-lg w-full mx-4 dark:bg-gray-950">
        <h3 class="text-lg font-semibold dark:text-white mb-4">Edit Return Reason</h3>
        <form method="post" asp-page-handler="Update" id="editForm">
            <input type="hidden" name="id" id="editId" />
            <div class="grid grid-cols-2 gap-4 mb-4">
                <div>
                    <label class="mb-2 ml-1 font-bold text-xs text-slate-700 dark:text-white/80">Code</label>
                    <input type="text" name="code" id="editCode" required
                           class="focus:shadow-soft-primary-outline dark:bg-gray-950 dark:placeholder:text-white/80 dark:text-white/80 text-sm leading-5.6 ease-soft block w-full appearance-none rounded-lg border border-solid border-gray-300 bg-white bg-clip-padding px-3 py-2 font-normal text-gray-700 outline-none transition-all placeholder:text-gray-500 focus:border-fuchsia-300 focus:outline-none" />
                </div>
                <div>
                    <label class="mb-2 ml-1 font-bold text-xs text-slate-700 dark:text-white/80">Display Text</label>
                    <input type="text" name="displayText" id="editDisplayText" required
                           class="focus:shadow-soft-primary-outline dark:bg-gray-950 dark:placeholder:text-white/80 dark:text-white/80 text-sm leading-5.6 ease-soft block w-full appearance-none rounded-lg border border-solid border-gray-300 bg-white bg-clip-padding px-3 py-2 font-normal text-gray-700 outline-none transition-all placeholder:text-gray-500 focus:border-fuchsia-300 focus:outline-none" />
                </div>
            </div>
            <div class="grid grid-cols-2 gap-4 mb-4">
                <div>
                    <label class="mb-2 ml-1 font-bold text-xs text-slate-700 dark:text-white/80">Description</label>
                    <input type="text" name="description" id="editDescription"
                           class="focus:shadow-soft-primary-outline dark:bg-gray-950 dark:placeholder:text-white/80 dark:text-white/80 text-sm leading-5.6 ease-soft block w-full appearance-none rounded-lg border border-solid border-gray-300 bg-white bg-clip-padding px-3 py-2 font-normal text-gray-700 outline-none transition-all placeholder:text-gray-500 focus:border-fuchsia-300 focus:outline-none" />
                </div>
                <div>
                    <label class="mb-2 ml-1 font-bold text-xs text-slate-700 dark:text-white/80">Display Order</label>
                    <input type="number" name="displayOrder" id="editDisplayOrder"
                           class="focus:shadow-soft-primary-outline dark:bg-gray-950 dark:placeholder:text-white/80 dark:text-white/80 text-sm leading-5.6 ease-soft block w-full appearance-none rounded-lg border border-solid border-gray-300 bg-white bg-clip-padding px-3 py-2 font-normal text-gray-700 outline-none transition-all placeholder:text-gray-500 focus:border-fuchsia-300 focus:outline-none" />
                </div>
            </div>
            <div class="flex flex-wrap gap-4 mb-6">
                <label class="inline-flex items-center">
                    <input type="checkbox" name="isActive" id="editIsActive" value="true" class="rounded border-gray-300 text-indigo-600 focus:ring-indigo-500" />
                    <span class="ml-2 text-sm dark:text-white">Active</span>
                </label>
                <label class="inline-flex items-center">
                    <input type="checkbox" name="requiresNote" id="editRequiresNote" value="true" class="rounded border-gray-300 text-indigo-600 focus:ring-indigo-500" />
                    <span class="ml-2 text-sm dark:text-white">Requires Note</span>
                </label>
                <label class="inline-flex items-center">
                    <input type="checkbox" name="isDefect" id="editIsDefect" value="true" class="rounded border-gray-300 text-indigo-600 focus:ring-indigo-500" />
                    <span class="ml-2 text-sm dark:text-white">Is Defect</span>
                </label>
                <label class="inline-flex items-center">
                    <input type="checkbox" name="eligibleForAutoApproval" id="editEligibleForAutoApproval" value="true" class="rounded border-gray-300 text-indigo-600 focus:ring-indigo-500" />
                    <span class="ml-2 text-sm dark:text-white">Auto-Approval Eligible</span>
                </label>
            </div>
            <div class="flex gap-3">
                <button type="submit"
                        class="flex-1 px-4 py-2 text-sm font-bold text-center text-white uppercase transition-all border-0 rounded-lg cursor-pointer bg-gradient-to-tl from-indigo-600 to-purple-400 shadow-soft-md">
                    Save Changes
                </button>
                <button type="button" onclick="closeEditModal()"
                        class="flex-1 px-4 py-2 text-sm font-bold text-center text-gray-700 uppercase transition-all border border-gray-300 rounded-lg cursor-pointer hover:bg-gray-50 dark:text-white dark:border-gray-600">
                    Cancel
                </button>
            </div>
        </form>
    </div>
</div>

<script>
    function openEditModal(id, code, displayText, description, displayOrder, isActive, requiresNote, isDefect, eligibleForAutoApproval) {
        document.getElementById('editId').value = id;
        document.getElementById('editCode').value = code;
        document.getElementById('editDisplayText').value = displayText;
        document.getElementById('editDescription').value = description;
        document.getElementById('editDisplayOrder').value = displayOrder;
        document.getElementById('editIsActive').checked = isActive;
        document.getElementById('editRequiresNote').checked = requiresNote;
        document.getElementById('editIsDefect').checked = isDefect;
        document.getElementById('editEligibleForAutoApproval').checked = eligibleForAutoApproval;
        document.getElementById('editModal').classList.remove('hidden');
    }

    function closeEditModal() {
        document.getElementById('editModal').classList.add('hidden');
    }

    document.getElementById('editModal').addEventListener('click', function(e) {
        if (e.target === this) {
            closeEditModal();
        }
    });
</script>
