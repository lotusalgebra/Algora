@page "/returns/status/{requestNumber}"
@model Algora.Web.Pages.Returns.StatusModel
@{
    Layout = null;
    var primaryColor = Model.Settings?.PrimaryColor ?? "#9333ea";
    var currentStep = Model.ReturnRequest != null ? Model.GetStepNumber(Model.ReturnRequest.Status) : 0;
    var isTerminal = Model.ReturnRequest?.Status.ToLower() is "refunded" or "rejected" or "cancelled";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Return Status - @(Model.ReturnRequest?.RequestNumber ?? "Track Return")</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: '@primaryColor',
                    }
                }
            }
        }
    </script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
</head>
<body class="bg-gray-50 min-h-screen">
    <div class="max-w-2xl mx-auto px-4 py-8">
        <!-- Logo -->
        @if (!string.IsNullOrEmpty(Model.Settings?.LogoUrl))
        {
            <div class="text-center mb-6">
                <img src="@Model.Settings.LogoUrl" alt="Logo" class="h-12 mx-auto" />
            </div>
        }

        <!-- Header -->
        <div class="text-center mb-8">
            <h1 class="text-2xl font-bold text-gray-900">Return Status</h1>
        </div>

        <!-- Error Message -->
        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="flex items-center p-4 mb-6 text-sm text-red-800 rounded-xl bg-red-50 border border-red-200" role="alert">
                <i class="fas fa-exclamation-circle me-2"></i>
                @Model.ErrorMessage
            </div>

            <div class="text-center">
                <a href="/returns/request?shop=@Model.ShopDomain"
                   class="text-primary font-medium hover:underline">Start a new return</a>
            </div>
        }
        else if (Model.ReturnRequest != null)
        {
            var r = Model.ReturnRequest;
            var statusColor = Model.GetStatusColor(r.Status);

            <!-- Return Info Card -->
            <div class="bg-white rounded-xl shadow-md p-6 mb-6">
                <div class="flex items-center justify-between mb-4">
                    <div>
                        <p class="text-sm text-gray-500">Return Request</p>
                        <p class="text-xl font-bold font-mono text-gray-900">@r.RequestNumber</p>
                    </div>
                    @{
                        var statusBadge = r.Status.ToLower() switch
                        {
                            "pending" => "bg-yellow-100 text-yellow-800",
                            "approved" => "bg-blue-100 text-blue-800",
                            "shipped" => "bg-purple-100 text-purple-800",
                            "received" => "bg-indigo-100 text-indigo-800",
                            "refunded" => "bg-green-100 text-green-800",
                            "rejected" => "bg-red-100 text-red-800",
                            "cancelled" => "bg-gray-100 text-gray-800",
                            _ => "bg-gray-100 text-gray-800"
                        };
                    }
                    <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium @statusBadge">
                        @Model.GetStatusLabel(r.Status)
                    </span>
                </div>

                <div class="grid grid-cols-2 gap-4 text-sm">
                    <div class="p-3 bg-gray-50 rounded-lg">
                        <p class="text-gray-500 text-xs uppercase tracking-wide mb-1">Order Number</p>
                        <p class="font-semibold text-gray-900">#@r.OrderNumber</p>
                    </div>
                    <div class="p-3 bg-gray-50 rounded-lg">
                        <p class="text-gray-500 text-xs uppercase tracking-wide mb-1">Requested On</p>
                        <p class="font-semibold text-gray-900">@r.RequestedAt.ToString("MMM d, yyyy")</p>
                    </div>
                    <div class="p-3 bg-gray-50 rounded-lg">
                        <p class="text-gray-500 text-xs uppercase tracking-wide mb-1">Reason</p>
                        <p class="font-semibold text-gray-900">@(r.ReasonDescription ?? r.ReasonCode)</p>
                    </div>
                    <div class="p-3 bg-gray-50 rounded-lg">
                        <p class="text-gray-500 text-xs uppercase tracking-wide mb-1">Items</p>
                        <p class="font-semibold text-gray-900">@r.Items.Sum(i => i.QuantityReturned) item(s)</p>
                    </div>
                </div>

                <p class="mt-4 text-gray-600 text-sm">@Model.GetStatusDescription(r.Status)</p>

                @if (r.Status.ToLower() == "rejected" && !string.IsNullOrEmpty(r.RejectionReason))
                {
                    <div class="mt-4 p-4 bg-red-50 border border-red-200 rounded-xl">
                        <p class="text-sm text-red-800"><strong>Reason:</strong> @r.RejectionReason</p>
                    </div>
                }
            </div>

            <!-- Progress Timeline -->
            @if (!isTerminal || r.Status.ToLower() == "refunded")
            {
                <div class="bg-white rounded-xl shadow-md p-6 mb-6">
                    <h2 class="text-lg font-semibold text-gray-900 mb-6">Return Progress</h2>

                    <div class="relative">
                        <!-- Timeline line -->
                        <div class="absolute left-4 top-0 bottom-0 w-0.5 bg-gray-200"></div>

                        <!-- Step 1: Submitted -->
                        <div class="relative flex items-start mb-8">
                            <div class="absolute left-0 w-8 h-8 rounded-full flex items-center justify-center @(currentStep >= 1 ? "bg-green-500" : "bg-gray-300")">
                                @if (currentStep >= 1)
                                {
                                    <i class="fas fa-check text-white text-sm"></i>
                                }
                                else
                                {
                                    <span class="text-white text-sm font-medium">1</span>
                                }
                            </div>
                            <div class="ml-12">
                                <p class="font-semibold text-gray-900">Request Submitted</p>
                                <p class="text-sm text-gray-500">@r.RequestedAt.ToString("MMM d, yyyy 'at' h:mm tt")</p>
                            </div>
                        </div>

                        <!-- Step 2: Approved -->
                        <div class="relative flex items-start mb-8">
                            <div class="absolute left-0 w-8 h-8 rounded-full flex items-center justify-center @(currentStep >= 2 ? "bg-green-500" : "bg-gray-300")">
                                @if (currentStep >= 2)
                                {
                                    <i class="fas fa-check text-white text-sm"></i>
                                }
                                else
                                {
                                    <span class="text-white text-sm font-medium">2</span>
                                }
                            </div>
                            <div class="ml-12">
                                <p class="font-semibold @(currentStep >= 2 ? "text-gray-900" : "text-gray-400")">Return Approved</p>
                                @if (r.ApprovedAt.HasValue)
                                {
                                    <p class="text-sm text-gray-500">@r.ApprovedAt.Value.ToString("MMM d, yyyy 'at' h:mm tt")</p>
                                    @if (r.IsAutoApproved)
                                    {
                                        <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-green-100 text-green-800 mt-1">
                                            <i class="fas fa-bolt me-1"></i> Auto-approved
                                        </span>
                                    }
                                }
                                else
                                {
                                    <p class="text-sm text-gray-400">Pending review</p>
                                }
                            </div>
                        </div>

                        <!-- Step 3: Shipped -->
                        <div class="relative flex items-start mb-8">
                            <div class="absolute left-0 w-8 h-8 rounded-full flex items-center justify-center @(currentStep >= 3 ? "bg-green-500" : "bg-gray-300")">
                                @if (currentStep >= 3)
                                {
                                    <i class="fas fa-check text-white text-sm"></i>
                                }
                                else
                                {
                                    <span class="text-white text-sm font-medium">3</span>
                                }
                            </div>
                            <div class="ml-12">
                                <p class="font-semibold @(currentStep >= 3 ? "text-gray-900" : "text-gray-400")">Package Shipped</p>
                                @if (r.ShippedAt.HasValue)
                                {
                                    <p class="text-sm text-gray-500">@r.ShippedAt.Value.ToString("MMM d, yyyy 'at' h:mm tt")</p>
                                    @if (!string.IsNullOrEmpty(r.TrackingNumber))
                                    {
                                        <p class="text-sm text-gray-600 mt-1">
                                            Tracking:
                                            @if (!string.IsNullOrEmpty(r.TrackingUrl))
                                            {
                                                <a href="@r.TrackingUrl" target="_blank" class="text-primary font-medium hover:underline">@r.TrackingNumber</a>
                                            }
                                            else
                                            {
                                                <span class="font-mono">@r.TrackingNumber</span>
                                            }
                                        </p>
                                    }
                                }
                                else if (currentStep == 2)
                                {
                                    <p class="text-sm text-gray-400">Ship your package</p>
                                }
                                else
                                {
                                    <p class="text-sm text-gray-400">Awaiting shipment</p>
                                }
                            </div>
                        </div>

                        <!-- Step 4: Received -->
                        <div class="relative flex items-start mb-8">
                            <div class="absolute left-0 w-8 h-8 rounded-full flex items-center justify-center @(currentStep >= 4 ? "bg-green-500" : "bg-gray-300")">
                                @if (currentStep >= 4)
                                {
                                    <i class="fas fa-check text-white text-sm"></i>
                                }
                                else
                                {
                                    <span class="text-white text-sm font-medium">4</span>
                                }
                            </div>
                            <div class="ml-12">
                                <p class="font-semibold @(currentStep >= 4 ? "text-gray-900" : "text-gray-400")">Package Received</p>
                                @if (r.ReceivedAt.HasValue)
                                {
                                    <p class="text-sm text-gray-500">@r.ReceivedAt.Value.ToString("MMM d, yyyy 'at' h:mm tt")</p>
                                }
                                else
                                {
                                    <p class="text-sm text-gray-400">Waiting to receive</p>
                                }
                            </div>
                        </div>

                        <!-- Step 5: Refunded -->
                        <div class="relative flex items-start">
                            <div class="absolute left-0 w-8 h-8 rounded-full flex items-center justify-center @(currentStep >= 5 ? "bg-green-500" : "bg-gray-300")">
                                @if (currentStep >= 5)
                                {
                                    <i class="fas fa-check text-white text-sm"></i>
                                }
                                else
                                {
                                    <span class="text-white text-sm font-medium">5</span>
                                }
                            </div>
                            <div class="ml-12">
                                <p class="font-semibold @(currentStep >= 5 ? "text-gray-900" : "text-gray-400")">Refund Processed</p>
                                @if (r.RefundedAt.HasValue)
                                {
                                    <p class="text-sm text-gray-500">@r.RefundedAt.Value.ToString("MMM d, yyyy 'at' h:mm tt")</p>
                                    <p class="text-sm font-semibold text-green-600 mt-1">@r.Currency @r.TotalRefundAmount.ToString("N2")</p>
                                }
                                else
                                {
                                    <p class="text-sm text-gray-400">Pending refund</p>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }

            <!-- Items Being Returned -->
            <div class="bg-white rounded-xl shadow-md p-6 mb-6">
                <h2 class="text-lg font-semibold text-gray-900 mb-4">Items Being Returned</h2>

                <div class="divide-y divide-gray-100">
                    @foreach (var item in r.Items)
                    {
                        <div class="py-3 flex items-center gap-4">
                            @if (!string.IsNullOrEmpty(item.ImageUrl))
                            {
                                <img src="@item.ImageUrl" alt="@item.ProductTitle" class="w-14 h-14 object-cover rounded-lg" />
                            }
                            else
                            {
                                <div class="w-14 h-14 bg-gray-100 rounded-lg flex items-center justify-center">
                                    <i class="fas fa-box text-gray-400"></i>
                                </div>
                            }
                            <div class="flex-1 min-w-0">
                                <p class="font-medium text-gray-900 truncate">@item.ProductTitle</p>
                                @if (!string.IsNullOrEmpty(item.VariantTitle))
                                {
                                    <p class="text-sm text-gray-500">@item.VariantTitle</p>
                                }
                            </div>
                            <div class="text-right">
                                <p class="font-medium text-gray-900">Qty: @item.QuantityReturned</p>
                                <p class="text-sm text-gray-500">@r.Currency @item.RefundAmount.ToString("N2")</p>
                            </div>
                        </div>
                    }
                </div>

                <div class="border-t border-gray-200 pt-4 mt-4 space-y-2">
                    <div class="flex justify-between text-sm">
                        <span class="text-gray-600">Subtotal</span>
                        <span class="text-gray-900">@r.Currency @r.Items.Sum(i => i.RefundAmount).ToString("N2")</span>
                    </div>
                    @if (r.ShippingCost > 0)
                    {
                        <div class="flex justify-between text-sm">
                            <span class="text-gray-600">Shipping (Store Paid)</span>
                            <span class="text-gray-400">-@r.Currency @r.ShippingCost.ToString("N2")</span>
                        </div>
                    }
                    <div class="flex justify-between font-bold text-lg pt-2 border-t border-gray-100">
                        <span class="text-gray-900">Total Refund</span>
                        <span class="text-green-600">@r.Currency @r.TotalRefundAmount.ToString("N2")</span>
                    </div>
                </div>
            </div>

            <!-- Action Buttons -->
            @if (r.Status.ToLower() == "approved" && r.Label != null)
            {
                <a href="/returns/label/@r.RequestNumber?shop=@Model.ShopDomain"
                   class="block w-full text-center bg-primary text-white py-3 px-4 rounded-lg font-medium hover:opacity-90 transition-opacity mb-4">
                    <i class="fas fa-print me-2"></i> Print Shipping Label
                </a>
            }

            <a href="/returns/request?shop=@Model.ShopDomain"
               class="block w-full text-center border border-gray-300 text-gray-700 py-3 px-4 rounded-lg font-medium hover:bg-gray-100 transition-colors">
                <i class="fas fa-plus me-2"></i> Start Another Return
            </a>
        }
    </div>
</body>
</html>
