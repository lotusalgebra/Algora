@page "/customer-hub"
@model Algora.Web.Pages.CustomerHub.IndexModel
@{
    ViewData["Title"] = "Customer Experience Hub";
}

<div class="p-4">
    <!-- Summary Cards -->
    <div class="grid grid-cols-1 sm:grid-cols-2 xl:grid-cols-4 gap-4 mb-6">
        <!-- Open Conversations -->
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-4">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Open Conversations</p>
                    <h3 class="text-2xl font-bold @(Model.OpenConversationCount > 0 ? "text-blue-600 dark:text-blue-400" : "text-gray-900 dark:text-white")">@Model.OpenConversationCount</h3>
                    <p class="text-xs text-gray-400">@Model.UnreadMessageCount unread</p>
                </div>
                <div class="w-12 h-12 rounded-lg bg-gradient-to-br from-blue-600 to-cyan-400 flex items-center justify-center">
                    <i class="fas fa-comments text-white text-lg"></i>
                </div>
            </div>
        </div>

        <!-- Pending Exchanges -->
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-4">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Pending Exchanges</p>
                    <h3 class="text-2xl font-bold @(Model.PendingExchangeCount > 0 ? "text-orange-600 dark:text-orange-400" : "text-gray-900 dark:text-white")">@Model.PendingExchangeCount</h3>
                </div>
                <div class="w-12 h-12 rounded-lg bg-gradient-to-br from-orange-500 to-yellow-400 flex items-center justify-center">
                    <i class="fas fa-exchange-alt text-white text-lg"></i>
                </div>
            </div>
        </div>

        <!-- Loyalty Members -->
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-4">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Loyalty Members</p>
                    <h3 class="text-2xl font-bold text-gray-900 dark:text-white">@Model.LoyaltyMemberCount</h3>
                    <p class="text-xs text-gray-400">@Model.ActiveMemberCount active</p>
                </div>
                <div class="w-12 h-12 rounded-lg bg-gradient-to-br from-purple-600 to-pink-500 flex items-center justify-center">
                    <i class="fas fa-crown text-white text-lg"></i>
                </div>
            </div>
        </div>

        <!-- Points Issued -->
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-4">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Points Issued (30d)</p>
                    <h3 class="text-2xl font-bold text-gray-900 dark:text-white">@Model.PointsIssuedThisMonth.ToString("N0")</h3>
                </div>
                <div class="w-12 h-12 rounded-lg bg-gradient-to-br from-green-600 to-lime-400 flex items-center justify-center">
                    <i class="fas fa-star text-white text-lg"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6 mb-6">
        <h2 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Quick Actions</h2>
        <div class="flex flex-wrap gap-3">
            <a href="/customer-hub/inbox" class="inline-flex items-center px-4 py-2.5 text-sm font-medium text-white bg-gradient-to-br from-blue-600 to-cyan-400 rounded-lg hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-blue-300">
                <i class="fas fa-inbox me-2"></i> Unified Inbox
            </a>
            <a href="/customer-hub/inbox/live-chat" class="inline-flex items-center px-4 py-2.5 text-sm font-medium text-white bg-gradient-to-br from-green-600 to-lime-400 rounded-lg hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-green-300">
                <i class="fas fa-headset me-2"></i> Live Chat
            </a>
            <a href="/customer-hub/exchanges" class="inline-flex items-center px-4 py-2.5 text-sm font-medium text-white bg-gradient-to-br from-orange-500 to-yellow-400 rounded-lg hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-orange-300">
                <i class="fas fa-exchange-alt me-2"></i> Exchanges
            </a>
            <a href="/customer-hub/loyalty" class="inline-flex items-center px-4 py-2.5 text-sm font-medium text-white bg-gradient-to-br from-purple-600 to-pink-500 rounded-lg hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-purple-300 dark:focus:ring-purple-800">
                <i class="fas fa-crown me-2"></i> Loyalty Program
            </a>
            <a href="/customer-hub/loyalty/rewards" class="inline-flex items-center px-4 py-2.5 text-sm font-medium text-white bg-gradient-to-br from-green-600 to-lime-400 rounded-lg hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-green-300">
                <i class="fas fa-gift me-2"></i> Rewards Catalog
            </a>
            <a href="/customer-hub/loyalty/settings" class="inline-flex items-center px-4 py-2.5 text-sm font-medium text-gray-900 bg-white border border-gray-300 rounded-lg hover:bg-gray-100 focus:ring-4 focus:outline-none focus:ring-gray-200 dark:bg-gray-800 dark:text-white dark:border-gray-600 dark:hover:bg-gray-700">
                <i class="fas fa-cog me-2"></i> Settings
            </a>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="flex items-center p-4 mb-4 text-sm text-red-800 rounded-lg bg-red-50 dark:bg-gray-800 dark:text-red-400" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i>@Model.ErrorMessage
        </div>
    }

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-6">
        <!-- Recent Conversations -->
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md">
            <div class="p-6 pb-4 border-b border-gray-200 dark:border-gray-700">
                <div class="flex items-center justify-between">
                    <h2 class="text-lg font-semibold text-gray-900 dark:text-white">Recent Conversations</h2>
                    <a href="/customer-hub/inbox" class="text-sm text-purple-600 hover:text-purple-800 dark:text-purple-400">View All</a>
                </div>
            </div>
            <div class="p-6">
                @if (Model.RecentConversations.Count == 0)
                {
                    <div class="text-center py-8">
                        <i class="fas fa-comments text-5xl text-gray-300 dark:text-gray-600 mb-4"></i>
                        <p class="text-gray-500 dark:text-gray-400">No conversations yet.</p>
                    </div>
                }
                else
                {
                    <div class="space-y-3">
                        @foreach (var conversation in Model.RecentConversations)
                        {
                            var channelIcon = conversation.Channel switch
                            {
                                "email" => "fa-envelope",
                                "sms" => "fa-sms",
                                "whatsapp" => "fa-whatsapp",
                                "facebook" => "fa-facebook-messenger",
                                "instagram" => "fa-instagram",
                                _ => "fa-comments"
                            };

                            var statusColor = conversation.Status switch
                            {
                                "open" => "bg-gradient-to-br from-blue-600 to-cyan-400",
                                "pending" => "bg-gradient-to-br from-orange-500 to-yellow-400",
                                "resolved" => "bg-gradient-to-br from-green-600 to-lime-400",
                                "closed" => "bg-gradient-to-br from-gray-500 to-gray-600",
                                _ => "bg-gradient-to-br from-gray-500 to-gray-600"
                            };

                            <div class="flex items-start justify-between p-4 bg-gray-50 dark:bg-gray-700 rounded-lg">
                                <div class="flex items-start">
                                    <div class="w-10 h-10 rounded-lg @statusColor flex items-center justify-center me-3">
                                        <i class="@(conversation.Channel is "whatsapp" or "facebook" or "instagram" ? "fab" : "fas") @channelIcon text-white text-sm"></i>
                                    </div>
                                    <div>
                                        <h6 class="text-sm font-semibold text-gray-900 dark:text-white">@(conversation.CustomerName ?? conversation.CustomerEmail)</h6>
                                        <p class="text-xs text-gray-500 dark:text-gray-400 line-clamp-1">@conversation.LastMessagePreview</p>
                                    </div>
                                </div>
                                <div class="flex flex-col items-end">
                                    <span class="text-xs text-gray-400">@conversation.LastMessageAt?.ToString("MMM d, h:mm tt")</span>
                                    @if (conversation.UnreadCount > 0)
                                    {
                                        <span class="bg-purple-500 text-white text-xs font-bold px-2 py-0.5 rounded-full mt-1">@conversation.UnreadCount</span>
                                    }
                                </div>
                            </div>
                        }
                    </div>
                }
            </div>
        </div>

        <!-- Recent Exchanges -->
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md">
            <div class="p-6 pb-4 border-b border-gray-200 dark:border-gray-700">
                <div class="flex items-center justify-between">
                    <h2 class="text-lg font-semibold text-gray-900 dark:text-white">Recent Exchanges</h2>
                    <a href="/customer-hub/exchanges" class="text-sm text-purple-600 hover:text-purple-800 dark:text-purple-400">View All</a>
                </div>
            </div>
            <div class="p-6">
                @if (Model.RecentExchanges.Count == 0)
                {
                    <div class="text-center py-8">
                        <i class="fas fa-exchange-alt text-5xl text-gray-300 dark:text-gray-600 mb-4"></i>
                        <p class="text-gray-500 dark:text-gray-400">No exchanges yet.</p>
                    </div>
                }
                else
                {
                    <div class="space-y-3">
                        @foreach (var exchange in Model.RecentExchanges)
                        {
                            var statusBadge = exchange.Status switch
                            {
                                "pending" => "bg-yellow-100 text-yellow-800 dark:bg-yellow-900 dark:text-yellow-300",
                                "approved" => "bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-300",
                                "shipped" => "bg-purple-100 text-purple-800 dark:bg-purple-900 dark:text-purple-300",
                                "received" => "bg-cyan-100 text-cyan-800 dark:bg-cyan-900 dark:text-cyan-300",
                                "completed" => "bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-300",
                                "cancelled" => "bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-300",
                                _ => "bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-300"
                            };

                            <div class="flex items-center justify-between p-4 bg-gray-50 dark:bg-gray-700 rounded-lg">
                                <div>
                                    <h6 class="text-sm font-semibold text-gray-900 dark:text-white">@exchange.ExchangeNumber</h6>
                                    <span class="text-xs text-gray-500 dark:text-gray-400">@(exchange.CustomerName ?? exchange.CustomerEmail)</span>
                                </div>
                                <div class="flex flex-col items-end">
                                    <span class="@statusBadge text-xs font-medium px-2.5 py-0.5 rounded uppercase mb-1">@exchange.Status</span>
                                    <span class="text-xs text-gray-400">@exchange.CreatedAt.ToString("MMM d")</span>
                                </div>
                            </div>
                        }
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Loyalty Program Overview -->
    @if (Model.LoyaltyProgram != null)
    {
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md">
            <div class="p-6 pb-4 border-b border-gray-200 dark:border-gray-700">
                <div class="flex items-center justify-between">
                    <div>
                        <h2 class="text-lg font-semibold text-gray-900 dark:text-white">@Model.LoyaltyProgram.Name</h2>
                        <p class="text-sm text-gray-500 dark:text-gray-400">
                            @Model.LoyaltyProgram.PointsPerDollar @Model.LoyaltyProgram.PointsName per $1 spent
                        </p>
                    </div>
                    <span class="@(Model.LoyaltyProgram.IsActive ? "bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-300" : "bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-300") text-xs font-medium px-2.5 py-0.5 rounded">
                        @(Model.LoyaltyProgram.IsActive ? "Active" : "Inactive")
                    </span>
                </div>
            </div>
            <div class="p-6">
                <div class="flex flex-wrap gap-4">
                    @foreach (var tier in Model.LoyaltyTiers)
                    {
                        <div class="flex items-center gap-3 p-4 rounded-lg bg-gray-50 dark:bg-gray-700">
                            <div class="w-10 h-10 rounded-full flex items-center justify-center" style="background-color: @(tier.Color ?? "#6b7280")">
                                <i class="@(tier.Icon ?? "fas fa-medal") text-white"></i>
                            </div>
                            <div>
                                <p class="text-sm font-semibold text-gray-900 dark:text-white">@tier.Name</p>
                                <p class="text-xs text-gray-500 dark:text-gray-400">@tier.MinimumPoints.ToString("N0")+ @Model.LoyaltyProgram.PointsName</p>
                            </div>
                            <div class="text-right">
                                <p class="text-lg font-bold text-purple-500">@tier.PointsMultiplier.ToString("0.#")x</p>
                                <p class="text-xs text-gray-400">multiplier</p>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md">
            <div class="p-6 text-center">
                <i class="fas fa-crown text-5xl text-gray-300 dark:text-gray-600 mb-4"></i>
                <h6 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">No Loyalty Program Configured</h6>
                <p class="text-sm text-gray-500 dark:text-gray-400 mb-4">Create a loyalty program to reward your customers and increase retention.</p>
                <a href="/customer-hub/loyalty/settings" class="inline-flex items-center px-6 py-3 text-sm font-medium text-white bg-gradient-to-br from-purple-600 to-pink-500 rounded-lg hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-purple-300 dark:focus:ring-purple-800">
                    <i class="fas fa-plus me-2"></i> Create Loyalty Program
                </a>
            </div>
        </div>
    }
</div>
