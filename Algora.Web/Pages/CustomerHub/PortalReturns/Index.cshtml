@page "/customer-hub/portal-returns"
@model Algora.Web.Pages.CustomerHub.PortalReturns.IndexModel
@using Algora.Application.DTOs.CustomerHub
@{
    ViewData["Title"] = "Portal Return Requests";
}

<div class="p-4">
    <!-- Header -->
    <div class="flex flex-wrap items-center justify-between gap-4 mb-6">
        <div>
            <h1 class="text-xl font-bold text-gray-900 dark:text-white">Portal Return Requests</h1>
            <p class="text-sm text-gray-500 dark:text-gray-400">Manage return requests from your customer portal</p>
        </div>
    </div>

    @if (!Model.IsConfigured)
    {
        <div class="bg-yellow-50 dark:bg-yellow-900/20 border border-yellow-200 dark:border-yellow-800 rounded-lg p-6 text-center">
            <i class="fas fa-exclamation-triangle text-4xl text-yellow-500 mb-4"></i>
            <h3 class="text-lg font-semibold text-yellow-800 dark:text-yellow-200 mb-2">Portal Database Not Configured</h3>
            <p class="text-sm text-yellow-700 dark:text-yellow-300 mb-4">
                Add the "Portal" connection string to your appsettings.json to manage customer portal return requests.
            </p>
            <code class="text-xs bg-yellow-100 dark:bg-yellow-900 px-3 py-2 rounded block max-w-lg mx-auto">
                "Portal": "Server=...;Database=ShopifyCustomerPortal;..."
            </code>
        </div>
    }
    else if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 rounded-lg p-4 mb-6">
            <p class="text-sm text-red-700 dark:text-red-300">
                <i class="fas fa-exclamation-circle me-2"></i>@Model.ErrorMessage
            </p>
        </div>
    }
    else
    {
        <!-- Summary Cards -->
        @if (Model.Stats != null)
        {
            <div class="grid grid-cols-1 sm:grid-cols-2 xl:grid-cols-4 gap-4 mb-6">
                <!-- Pending -->
                <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-4">
                    <div class="flex items-center justify-between">
                        <div>
                            <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Pending</p>
                            <h3 class="text-2xl font-bold text-orange-600 dark:text-orange-400">@Model.Stats.PendingRequests</h3>
                        </div>
                        <div class="w-12 h-12 rounded-lg bg-gradient-to-br from-orange-500 to-yellow-400 flex items-center justify-center">
                            <i class="fas fa-clock text-white text-lg"></i>
                        </div>
                    </div>
                </div>

                <!-- Processing -->
                <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-4">
                    <div class="flex items-center justify-between">
                        <div>
                            <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Processing</p>
                            <h3 class="text-2xl font-bold text-purple-600 dark:text-purple-400">@Model.Stats.ProcessingRequests</h3>
                        </div>
                        <div class="w-12 h-12 rounded-lg bg-gradient-to-br from-purple-600 to-indigo-400 flex items-center justify-center">
                            <i class="fas fa-sync text-white text-lg"></i>
                        </div>
                    </div>
                </div>

                <!-- Completed -->
                <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-4">
                    <div class="flex items-center justify-between">
                        <div>
                            <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Completed</p>
                            <h3 class="text-2xl font-bold text-green-600 dark:text-green-400">@Model.Stats.CompletedRequests</h3>
                        </div>
                        <div class="w-12 h-12 rounded-lg bg-gradient-to-br from-green-600 to-lime-400 flex items-center justify-center">
                            <i class="fas fa-check-double text-white text-lg"></i>
                        </div>
                    </div>
                </div>

                <!-- Total Refunded -->
                <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-4">
                    <div class="flex items-center justify-between">
                        <div>
                            <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Total Refunded</p>
                            <h3 class="text-2xl font-bold text-blue-600 dark:text-blue-400">@Model.Stats.TotalRefundedAmount.ToString("C")</h3>
                        </div>
                        <div class="w-12 h-12 rounded-lg bg-gradient-to-br from-blue-600 to-cyan-400 flex items-center justify-center">
                            <i class="fas fa-dollar-sign text-white text-lg"></i>
                        </div>
                    </div>
                </div>
            </div>
        }

        <!-- Filters -->
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-4 mb-6">
            <form method="get" class="flex flex-wrap items-end gap-4">
                <!-- Search -->
                <div class="flex-1 min-w-[200px]">
                    <label class="block text-xs font-medium text-gray-500 dark:text-gray-400 mb-1">Search</label>
                    <input type="text" name="Search" value="@Model.Search"
                           placeholder="Order # or email..."
                           class="w-full px-3 py-2 text-sm border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-purple-500 focus:border-transparent" />
                </div>

                <!-- Status Filter -->
                <div class="min-w-[150px]">
                    <label class="block text-xs font-medium text-gray-500 dark:text-gray-400 mb-1">Status</label>
                    <select name="Status" class="w-full px-3 py-2 text-sm border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-purple-500 focus:border-transparent">
                        <option value="">All Statuses</option>
                        @foreach (var status in PortalReturnStatuses.All)
                        {
                            <option value="@status" selected="@(Model.Status == status)">@status</option>
                        }
                    </select>
                </div>

                <!-- Date Range -->
                <div class="min-w-[150px]">
                    <label class="block text-xs font-medium text-gray-500 dark:text-gray-400 mb-1">From Date</label>
                    <input type="date" name="StartDate" value="@Model.StartDate?.ToString("yyyy-MM-dd")"
                           class="w-full px-3 py-2 text-sm border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-purple-500 focus:border-transparent" />
                </div>
                <div class="min-w-[150px]">
                    <label class="block text-xs font-medium text-gray-500 dark:text-gray-400 mb-1">To Date</label>
                    <input type="date" name="EndDate" value="@Model.EndDate?.ToString("yyyy-MM-dd")"
                           class="w-full px-3 py-2 text-sm border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-purple-500 focus:border-transparent" />
                </div>

                <!-- Buttons -->
                <div class="flex gap-2">
                    <button type="submit" class="px-4 py-2 text-sm font-medium text-white bg-gradient-to-br from-purple-600 to-pink-500 rounded-lg hover:bg-gradient-to-bl">
                        <i class="fas fa-search me-1"></i> Filter
                    </button>
                    <a href="/customer-hub/portal-returns" class="px-4 py-2 text-sm font-medium text-gray-700 dark:text-gray-300 bg-gray-100 dark:bg-gray-700 rounded-lg hover:bg-gray-200 dark:hover:bg-gray-600">
                        Clear
                    </a>
                </div>
            </form>
        </div>

        <!-- Returns Table -->
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md">
            @if (Model.Returns.Items.Count == 0)
            {
                <div class="p-6 text-center">
                    <i class="fas fa-undo-alt text-6xl text-gray-300 dark:text-gray-600 mb-4"></i>
                    <h6 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">No return requests found</h6>
                    <p class="text-sm text-gray-500 dark:text-gray-400">Return requests from your customer portal will appear here.</p>
                </div>
            }
            else
            {
                <div class="relative overflow-x-auto">
                    <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
                        <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                            <tr>
                                <th class="px-4 py-3">ID</th>
                                <th class="px-4 py-3">Order</th>
                                <th class="px-4 py-3">Customer</th>
                                <th class="px-4 py-3">Type</th>
                                <th class="px-4 py-3">Reason</th>
                                <th class="px-4 py-3">Items</th>
                                <th class="px-4 py-3">Value</th>
                                <th class="px-4 py-3">Status</th>
                                <th class="px-4 py-3">Date</th>
                                <th class="px-4 py-3">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Returns.Items)
                            {
                                <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-700">
                                    <td class="px-4 py-3 font-medium text-gray-900 dark:text-white">
                                        #@item.Id
                                    </td>
                                    <td class="px-4 py-3">
                                        <span class="font-medium text-gray-900 dark:text-white">@item.OrderNumber</span>
                                    </td>
                                    <td class="px-4 py-3">
                                        <span class="text-xs">@item.CustomerEmail</span>
                                    </td>
                                    <td class="px-4 py-3">
                                        @item.RequestType
                                    </td>
                                    <td class="px-4 py-3 max-w-[200px]">
                                        <span class="truncate block" title="@item.Reason">@item.Reason</span>
                                    </td>
                                    <td class="px-4 py-3">
                                        @item.ItemCount
                                    </td>
                                    <td class="px-4 py-3 font-medium">
                                        @item.TotalValue.ToString("C")
                                    </td>
                                    <td class="px-4 py-3">
                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gradient-to-r @Model.GetStatusBadgeClass(item.Status) text-white">
                                            @item.Status
                                        </span>
                                    </td>
                                    <td class="px-4 py-3 text-xs">
                                        @item.CreatedAt.ToString("MMM d, yyyy")
                                    </td>
                                    <td class="px-4 py-3">
                                        <a href="/customer-hub/portal-returns/details/@item.Id"
                                           class="text-purple-600 dark:text-purple-400 hover:underline font-medium">
                                            View
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                @if (Model.Returns.TotalPages > 1)
                {
                    <div class="px-4 py-3 border-t border-gray-200 dark:border-gray-700 flex items-center justify-between">
                        <span class="text-sm text-gray-500 dark:text-gray-400">
                            Showing @((Model.Page - 1) * Model.PageSize + 1) to @Math.Min(Model.Page * Model.PageSize, Model.Returns.TotalCount) of @Model.Returns.TotalCount results
                        </span>
                        <div class="flex gap-1">
                            @if (Model.Returns.HasPrevious)
                            {
                                <a href="?page=@(Model.Page - 1)&status=@Model.Status&search=@Model.Search"
                                   class="px-3 py-1 text-sm border border-gray-300 dark:border-gray-600 rounded hover:bg-gray-100 dark:hover:bg-gray-700">
                                    <i class="fas fa-chevron-left"></i>
                                </a>
                            }
                            @for (int i = Math.Max(1, Model.Page - 2); i <= Math.Min(Model.Returns.TotalPages, Model.Page + 2); i++)
                            {
                                <a href="?page=@i&status=@Model.Status&search=@Model.Search"
                                   class="px-3 py-1 text-sm border rounded @(i == Model.Page ? "bg-purple-500 text-white border-purple-500" : "border-gray-300 dark:border-gray-600 hover:bg-gray-100 dark:hover:bg-gray-700")">
                                    @i
                                </a>
                            }
                            @if (Model.Returns.HasNext)
                            {
                                <a href="?page=@(Model.Page + 1)&status=@Model.Status&search=@Model.Search"
                                   class="px-3 py-1 text-sm border border-gray-300 dark:border-gray-600 rounded hover:bg-gray-100 dark:hover:bg-gray-700">
                                    <i class="fas fa-chevron-right"></i>
                                </a>
                            }
                        </div>
                    </div>
                }
            }
        </div>
    }
</div>
