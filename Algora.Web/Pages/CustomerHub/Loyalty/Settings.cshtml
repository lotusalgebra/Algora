@page "/customer-hub/loyalty/settings"
@model Algora.Web.Pages.CustomerHub.Loyalty.SettingsModel
@{
    ViewData["Title"] = "Loyalty Program Settings";
}

<div class="w-full px-6 py-6 mx-auto">
    <!-- Header -->
    <div class="flex items-center justify-between mb-6">
        <div>
            <h5 class="font-bold dark:text-white">Loyalty Program Settings</h5>
            <p class="text-sm text-slate-400">Configure your loyalty program and tiers</p>
        </div>
        <div class="flex gap-2">
            <a href="/customer-hub/loyalty" class="inline-block px-4 py-2 text-xs font-bold text-center text-slate-700 uppercase align-middle transition-all border border-slate-300 rounded-lg cursor-pointer ease-soft-in leading-pro tracking-tight-soft bg-white shadow-soft-md bg-150 bg-x-25 hover:scale-102 active:opacity-85 dark:bg-gray-950 dark:text-white dark:border-gray-700">
                <i class="fas fa-arrow-left me-2"></i> Back
            </a>
            @if (Model.Program != null)
            {
                @if (Model.Program.IsActive)
                {
                    <form method="post" asp-page-handler="DeactivateProgram" class="inline">
                        <button type="submit" class="inline-block px-4 py-2 text-xs font-bold text-center text-white uppercase align-middle transition-all border-0 rounded-lg cursor-pointer ease-soft-in leading-pro tracking-tight-soft bg-gradient-to-tl from-red-600 to-rose-400 shadow-soft-md bg-150 bg-x-25 hover:scale-102 active:opacity-85">
                            <i class="fas fa-pause me-2"></i> Deactivate
                        </button>
                    </form>
                }
                else
                {
                    <form method="post" asp-page-handler="ActivateProgram" class="inline">
                        <button type="submit" class="inline-block px-4 py-2 text-xs font-bold text-center text-white uppercase align-middle transition-all border-0 rounded-lg cursor-pointer ease-soft-in leading-pro tracking-tight-soft bg-gradient-to-tl from-green-600 to-lime-400 shadow-soft-md bg-150 bg-x-25 hover:scale-102 active:opacity-85">
                            <i class="fas fa-play me-2"></i> Activate
                        </button>
                    </form>
                }
            }
        </div>
    </div>

    <!-- Success/Error Messages -->
    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="p-4 mb-4 text-sm text-green-800 rounded-lg bg-green-50 dark:bg-gray-800 dark:text-green-400" role="alert">
            <i class="fas fa-check-circle me-2"></i> @Model.SuccessMessage
        </div>
    }
    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="p-4 mb-4 text-sm text-red-800 rounded-lg bg-red-50 dark:bg-gray-800 dark:text-red-400" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i> @Model.ErrorMessage
        </div>
    }

    <div class="flex flex-wrap -mx-3">
        <!-- Program Settings -->
        <div class="w-full max-w-full px-3 lg:w-1/2">
            <div class="relative flex flex-col min-w-0 mb-6 break-words bg-white border-0 shadow-soft-xl rounded-2xl bg-clip-border dark:bg-gray-950 dark:shadow-soft-dark-xl">
                <div class="p-6 pb-0 mb-0 border-b-0 rounded-t-2xl">
                    <div class="flex items-center justify-between">
                        <h6 class="mb-0 dark:text-white">Program Configuration</h6>
                        @if (Model.Program != null)
                        {
                            <span class="px-2.5 py-1 text-xs font-semibold rounded-full @(Model.Program.IsActive ? "bg-green-100 text-green-800" : "bg-gray-100 text-gray-800")">
                                @(Model.Program.IsActive ? "Active" : "Inactive")
                            </span>
                        }
                    </div>
                </div>
                <div class="flex-auto p-6">
                    <form method="post" asp-page-handler="SaveProgram">
                        <div class="mb-4">
                            <label class="block mb-2 text-xs font-bold text-slate-700 dark:text-white">Program Name</label>
                            <input type="text" asp-for="ProgramForm.Name" class="block w-full px-3 py-2 text-sm leading-5.6 text-gray-700 bg-white border border-solid border-gray-300 rounded-lg focus:border-fuchsia-300 focus:outline-none dark:bg-gray-900 dark:border-gray-600 dark:text-white" placeholder="Rewards Program" />
                        </div>

                        <div class="grid grid-cols-2 gap-4 mb-4">
                            <div>
                                <label class="block mb-2 text-xs font-bold text-slate-700 dark:text-white">Points per Dollar</label>
                                <input type="number" asp-for="ProgramForm.PointsPerDollar" min="1" class="block w-full px-3 py-2 text-sm leading-5.6 text-gray-700 bg-white border border-solid border-gray-300 rounded-lg focus:border-fuchsia-300 focus:outline-none dark:bg-gray-900 dark:border-gray-600 dark:text-white" />
                                <p class="mt-1 text-xs text-slate-400">Points earned per $1 spent</p>
                            </div>
                            <div>
                                <label class="block mb-2 text-xs font-bold text-slate-700 dark:text-white">Point Value (cents)</label>
                                <input type="number" asp-for="ProgramForm.PointsValueCents" min="1" class="block w-full px-3 py-2 text-sm leading-5.6 text-gray-700 bg-white border border-solid border-gray-300 rounded-lg focus:border-fuchsia-300 focus:outline-none dark:bg-gray-900 dark:border-gray-600 dark:text-white" />
                                <p class="mt-1 text-xs text-slate-400">Value of 1 point in cents</p>
                            </div>
                        </div>

                        <div class="grid grid-cols-2 gap-4 mb-4">
                            <div>
                                <label class="block mb-2 text-xs font-bold text-slate-700 dark:text-white">Minimum Redemption</label>
                                <input type="number" asp-for="ProgramForm.MinimumRedemption" min="1" class="block w-full px-3 py-2 text-sm leading-5.6 text-gray-700 bg-white border border-solid border-gray-300 rounded-lg focus:border-fuchsia-300 focus:outline-none dark:bg-gray-900 dark:border-gray-600 dark:text-white" />
                                <p class="mt-1 text-xs text-slate-400">Min points to redeem</p>
                            </div>
                            <div>
                                <label class="block mb-2 text-xs font-bold text-slate-700 dark:text-white">Points Name</label>
                                <input type="text" asp-for="ProgramForm.PointsName" class="block w-full px-3 py-2 text-sm leading-5.6 text-gray-700 bg-white border border-solid border-gray-300 rounded-lg focus:border-fuchsia-300 focus:outline-none dark:bg-gray-900 dark:border-gray-600 dark:text-white" placeholder="Points" />
                            </div>
                        </div>

                        <div class="mb-4">
                            <label class="block mb-2 text-xs font-bold text-slate-700 dark:text-white">Points Expiration</label>
                            <select asp-for="ProgramForm.PointsExpireMonths" class="block w-full px-3 py-2 text-sm leading-5.6 text-gray-700 bg-white border border-solid border-gray-300 rounded-lg focus:border-fuchsia-300 focus:outline-none dark:bg-gray-900 dark:border-gray-600 dark:text-white">
                                <option value="">Never expire</option>
                                <option value="6">6 months</option>
                                <option value="12">12 months</option>
                                <option value="18">18 months</option>
                                <option value="24">24 months</option>
                            </select>
                        </div>

                        <hr class="my-4 border-gray-200 dark:border-gray-700" />

                        <h6 class="mb-4 text-sm font-bold text-slate-700 dark:text-white">Bonus Points</h6>

                        <div class="grid grid-cols-2 gap-4 mb-4">
                            <div>
                                <label class="block mb-2 text-xs font-bold text-slate-700 dark:text-white">Signup Bonus</label>
                                <input type="number" asp-for="ProgramForm.SignupBonus" min="0" class="block w-full px-3 py-2 text-sm leading-5.6 text-gray-700 bg-white border border-solid border-gray-300 rounded-lg focus:border-fuchsia-300 focus:outline-none dark:bg-gray-900 dark:border-gray-600 dark:text-white" />
                            </div>
                            <div>
                                <label class="block mb-2 text-xs font-bold text-slate-700 dark:text-white">Birthday Bonus</label>
                                <input type="number" asp-for="ProgramForm.BirthdayBonus" min="0" class="block w-full px-3 py-2 text-sm leading-5.6 text-gray-700 bg-white border border-solid border-gray-300 rounded-lg focus:border-fuchsia-300 focus:outline-none dark:bg-gray-900 dark:border-gray-600 dark:text-white" />
                            </div>
                        </div>

                        <div class="grid grid-cols-2 gap-4 mb-4">
                            <div>
                                <label class="block mb-2 text-xs font-bold text-slate-700 dark:text-white">Review Bonus</label>
                                <input type="number" asp-for="ProgramForm.ReviewBonus" min="0" class="block w-full px-3 py-2 text-sm leading-5.6 text-gray-700 bg-white border border-solid border-gray-300 rounded-lg focus:border-fuchsia-300 focus:outline-none dark:bg-gray-900 dark:border-gray-600 dark:text-white" />
                            </div>
                            <div>
                                <label class="block mb-2 text-xs font-bold text-slate-700 dark:text-white">Referral Bonus</label>
                                <input type="number" asp-for="ProgramForm.ReferralBonus" min="0" class="block w-full px-3 py-2 text-sm leading-5.6 text-gray-700 bg-white border border-solid border-gray-300 rounded-lg focus:border-fuchsia-300 focus:outline-none dark:bg-gray-900 dark:border-gray-600 dark:text-white" />
                            </div>
                        </div>

                        <button type="submit" class="inline-block w-full px-6 py-3 text-xs font-bold text-center text-white uppercase align-middle transition-all border-0 rounded-lg cursor-pointer ease-soft-in leading-pro tracking-tight-soft bg-gradient-to-tl from-purple-700 to-pink-500 shadow-soft-md bg-150 bg-x-25 hover:scale-102 active:opacity-85">
                            <i class="fas fa-save me-2"></i> Save Settings
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <!-- Tiers -->
        <div class="w-full max-w-full px-3 lg:w-1/2">
            <!-- Tier Form -->
            <div class="relative flex flex-col min-w-0 mb-6 break-words bg-white border-0 shadow-soft-xl rounded-2xl bg-clip-border dark:bg-gray-950 dark:shadow-soft-dark-xl">
                <div class="p-6 pb-0 mb-0 border-b-0 rounded-t-2xl">
                    <h6 class="mb-0 dark:text-white">Add/Edit Tier</h6>
                </div>
                <div class="flex-auto p-6">
                    <form method="post" asp-page-handler="SaveTier">
                        <input type="hidden" asp-for="TierForm.Id" id="tierId" />

                        <div class="grid grid-cols-2 gap-4 mb-4">
                            <div>
                                <label class="block mb-2 text-xs font-bold text-slate-700 dark:text-white">Tier Name</label>
                                <input type="text" asp-for="TierForm.Name" id="tierName" class="block w-full px-3 py-2 text-sm leading-5.6 text-gray-700 bg-white border border-solid border-gray-300 rounded-lg focus:border-fuchsia-300 focus:outline-none dark:bg-gray-900 dark:border-gray-600 dark:text-white" placeholder="Gold" required />
                            </div>
                            <div>
                                <label class="block mb-2 text-xs font-bold text-slate-700 dark:text-white">Minimum Points</label>
                                <input type="number" asp-for="TierForm.MinimumPoints" id="tierMinPoints" min="0" class="block w-full px-3 py-2 text-sm leading-5.6 text-gray-700 bg-white border border-solid border-gray-300 rounded-lg focus:border-fuchsia-300 focus:outline-none dark:bg-gray-900 dark:border-gray-600 dark:text-white" required />
                            </div>
                        </div>

                        <div class="grid grid-cols-2 gap-4 mb-4">
                            <div>
                                <label class="block mb-2 text-xs font-bold text-slate-700 dark:text-white">Points Multiplier</label>
                                <input type="number" asp-for="TierForm.PointsMultiplier" id="tierMultiplier" step="0.1" min="1" class="block w-full px-3 py-2 text-sm leading-5.6 text-gray-700 bg-white border border-solid border-gray-300 rounded-lg focus:border-fuchsia-300 focus:outline-none dark:bg-gray-900 dark:border-gray-600 dark:text-white" />
                                <p class="mt-1 text-xs text-slate-400">1.5 = 50% bonus points</p>
                            </div>
                            <div>
                                <label class="block mb-2 text-xs font-bold text-slate-700 dark:text-white">Discount %</label>
                                <input type="number" asp-for="TierForm.PercentageDiscount" id="tierDiscount" step="0.5" min="0" max="100" class="block w-full px-3 py-2 text-sm leading-5.6 text-gray-700 bg-white border border-solid border-gray-300 rounded-lg focus:border-fuchsia-300 focus:outline-none dark:bg-gray-900 dark:border-gray-600 dark:text-white" />
                            </div>
                        </div>

                        <div class="grid grid-cols-2 gap-4 mb-4">
                            <div>
                                <label class="block mb-2 text-xs font-bold text-slate-700 dark:text-white">Color</label>
                                <input type="color" asp-for="TierForm.Color" id="tierColor" class="block w-full h-10 px-1 py-1 text-sm leading-5.6 bg-white border border-solid border-gray-300 rounded-lg focus:border-fuchsia-300 focus:outline-none dark:bg-gray-900 dark:border-gray-600" />
                            </div>
                            <div>
                                <label class="block mb-2 text-xs font-bold text-slate-700 dark:text-white">Display Order</label>
                                <input type="number" asp-for="TierForm.DisplayOrder" id="tierOrder" min="0" class="block w-full px-3 py-2 text-sm leading-5.6 text-gray-700 bg-white border border-solid border-gray-300 rounded-lg focus:border-fuchsia-300 focus:outline-none dark:bg-gray-900 dark:border-gray-600 dark:text-white" />
                            </div>
                        </div>

                        <div class="flex flex-wrap gap-4 mb-4">
                            <label class="inline-flex items-center cursor-pointer">
                                <input type="checkbox" asp-for="TierForm.FreeShipping" id="tierFreeShipping" class="sr-only peer" />
                                <div class="relative w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-fuchsia-300 dark:peer-focus:ring-fuchsia-800 rounded-full peer dark:bg-gray-700 peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all dark:border-gray-600 peer-checked:bg-fuchsia-500"></div>
                                <span class="ml-3 text-sm font-medium text-gray-700 dark:text-gray-300">Free Shipping</span>
                            </label>
                            <label class="inline-flex items-center cursor-pointer">
                                <input type="checkbox" asp-for="TierForm.ExclusiveAccess" id="tierExclusive" class="sr-only peer" />
                                <div class="relative w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-fuchsia-300 dark:peer-focus:ring-fuchsia-800 rounded-full peer dark:bg-gray-700 peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all dark:border-gray-600 peer-checked:bg-fuchsia-500"></div>
                                <span class="ml-3 text-sm font-medium text-gray-700 dark:text-gray-300">Exclusive Access</span>
                            </label>
                        </div>

                        <div class="flex gap-2">
                            <button type="submit" class="flex-grow px-6 py-3 text-xs font-bold text-center text-white uppercase align-middle transition-all border-0 rounded-lg cursor-pointer ease-soft-in leading-pro tracking-tight-soft bg-gradient-to-tl from-purple-700 to-pink-500 shadow-soft-md bg-150 bg-x-25 hover:scale-102 active:opacity-85">
                                <i class="fas fa-save me-2"></i> <span id="tierSubmitText">Add Tier</span>
                            </button>
                            <button type="button" onclick="clearTierForm()" class="px-4 py-3 text-xs font-bold text-center text-slate-700 uppercase align-middle transition-all border border-slate-300 rounded-lg cursor-pointer ease-soft-in leading-pro tracking-tight-soft bg-white hover:scale-102 active:opacity-85 dark:bg-gray-900 dark:text-white dark:border-gray-700">
                                Clear
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Tier List -->
            <div class="relative flex flex-col min-w-0 mb-6 break-words bg-white border-0 shadow-soft-xl rounded-2xl bg-clip-border dark:bg-gray-950 dark:shadow-soft-dark-xl">
                <div class="p-6 pb-0 mb-0 border-b-0 rounded-t-2xl">
                    <h6 class="mb-0 dark:text-white">Tiers (@Model.Tiers.Count)</h6>
                </div>
                <div class="flex-auto p-6">
                    @if (Model.Tiers.Count == 0)
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-layer-group fa-2x text-gray-300 mb-2"></i>
                            <p class="text-sm text-gray-500 dark:text-gray-400">No tiers configured yet.</p>
                            <p class="text-xs text-slate-400">Add tiers to create a tiered rewards structure.</p>
                        </div>
                    }
                    else
                    {
                        <div class="flex flex-col gap-3">
                            @foreach (var tier in Model.Tiers.OrderBy(t => t.DisplayOrder))
                            {
                                <div class="flex items-center gap-3 p-4 rounded-xl bg-gray-50 dark:bg-gray-800">
                                    <div class="w-10 h-10 rounded-full flex items-center justify-center flex-shrink-0" style="background-color: @(tier.Color ?? "#6b7280")">
                                        <i class="@(tier.Icon ?? "fas fa-medal") text-white"></i>
                                    </div>
                                    <div class="flex-grow">
                                        <p class="text-sm font-semibold text-slate-700 dark:text-white mb-0">@tier.Name</p>
                                        <p class="text-xs text-slate-400 mb-0">
                                            @tier.MinimumPoints.ToString("N0")+ pts | @tier.PointsMultiplier.ToString("0.0")x multiplier
                                            @if (tier.PercentageDiscount.HasValue)
                                            {
                                                <span>| @tier.PercentageDiscount.Value.ToString("0")% off</span>
                                            }
                                            @if (tier.FreeShipping)
                                            {
                                                <span>| <i class="fas fa-truck text-green-500"></i></span>
                                            }
                                        </p>
                                    </div>
                                    <div class="flex gap-2">
                                        <button type="button" onclick="editTier(@tier.Id, '@tier.Name', @tier.MinimumPoints, @tier.PointsMultiplier, @(tier.PercentageDiscount?.ToString() ?? "null"), @tier.FreeShipping.ToString().ToLower(), @tier.ExclusiveAccess.ToString().ToLower(), '@(tier.Color ?? "#6b7280")', @tier.DisplayOrder)" class="px-3 py-1 text-xs font-semibold text-fuchsia-500 border border-fuchsia-500 rounded hover:bg-fuchsia-50 dark:hover:bg-gray-700">
                                            <i class="fas fa-edit"></i>
                                        </button>
                                        <form method="post" asp-page-handler="DeleteTier" asp-route-id="@tier.Id" class="inline" onsubmit="return confirm('Delete this tier?');">
                                            <button type="submit" class="px-3 py-1 text-xs font-semibold text-red-500 border border-red-500 rounded hover:bg-red-50 dark:hover:bg-gray-700">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
    function editTier(id, name, minPoints, multiplier, discount, freeShipping, exclusive, color, order) {
        document.getElementById('tierId').value = id;
        document.getElementById('tierName').value = name;
        document.getElementById('tierMinPoints').value = minPoints;
        document.getElementById('tierMultiplier').value = multiplier;
        document.getElementById('tierDiscount').value = discount === null ? '' : discount;
        document.getElementById('tierFreeShipping').checked = freeShipping;
        document.getElementById('tierExclusive').checked = exclusive;
        document.getElementById('tierColor').value = color;
        document.getElementById('tierOrder').value = order;
        document.getElementById('tierSubmitText').textContent = 'Update Tier';
    }

    function clearTierForm() {
        document.getElementById('tierId').value = '';
        document.getElementById('tierName').value = '';
        document.getElementById('tierMinPoints').value = '0';
        document.getElementById('tierMultiplier').value = '1.0';
        document.getElementById('tierDiscount').value = '';
        document.getElementById('tierFreeShipping').checked = false;
        document.getElementById('tierExclusive').checked = false;
        document.getElementById('tierColor').value = '#6b7280';
        document.getElementById('tierOrder').value = '0';
        document.getElementById('tierSubmitText').textContent = 'Add Tier';
    }
</script>
}
