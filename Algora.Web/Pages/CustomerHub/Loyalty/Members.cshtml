@page "/customer-hub/loyalty/members"
@model Algora.Web.Pages.CustomerHub.Loyalty.MembersModel
@{
    ViewData["Title"] = "Loyalty Members";
}

<div class="p-4">
    <!-- Header -->
    <div class="flex flex-wrap items-center justify-between gap-4 mb-6">
        <div>
            <h1 class="text-xl font-bold text-gray-900 dark:text-white">Loyalty Members</h1>
            <p class="text-sm text-gray-500 dark:text-gray-400">Manage your loyalty program members</p>
        </div>
        <div class="flex gap-2">
            <a href="/customer-hub/loyalty" class="inline-flex items-center px-4 py-2.5 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-100 dark:bg-gray-800 dark:text-white dark:border-gray-600 dark:hover:bg-gray-700">
                <i class="fas fa-arrow-left me-2"></i> Back
            </a>
            <form method="post" asp-page-handler="EvaluateTiers" class="inline">
                <button type="submit" class="inline-flex items-center px-4 py-2.5 text-sm font-medium text-white bg-gradient-to-br from-blue-600 to-cyan-400 rounded-lg hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-blue-300">
                    <i class="fas fa-sync-alt me-2"></i> Evaluate Tiers
                </button>
            </form>
        </div>
    </div>

    <!-- Success/Error Messages -->
    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="flex items-center p-4 mb-4 text-sm text-green-800 rounded-lg bg-green-50 dark:bg-gray-800 dark:text-green-400" role="alert">
            <i class="fas fa-check-circle me-2"></i> @Model.SuccessMessage
        </div>
    }
    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="flex items-center p-4 mb-4 text-sm text-red-800 rounded-lg bg-red-50 dark:bg-gray-800 dark:text-red-400" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i> @Model.ErrorMessage
        </div>
    }

    @if (Model.Program == null)
    {
        <!-- No Program -->
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6 text-center">
            <i class="fas fa-crown text-6xl text-gray-300 dark:text-gray-600 mb-4"></i>
            <h5 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">No Loyalty Program</h5>
            <p class="text-sm text-gray-500 dark:text-gray-400 mb-4">Create a loyalty program to start enrolling members.</p>
            <a href="/customer-hub/loyalty/settings" class="inline-flex items-center px-6 py-3 text-sm font-medium text-white bg-gradient-to-br from-purple-600 to-pink-500 rounded-lg hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-purple-300">
                <i class="fas fa-cog me-2"></i> Go to Settings
            </a>
        </div>
    }
    else
    {
        <!-- Stats Cards -->
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 mb-6">
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-4">
                <div class="flex items-center">
                    <div class="w-12 h-12 rounded-lg bg-gradient-to-br from-purple-600 to-pink-500 flex items-center justify-center">
                        <i class="fas fa-users text-lg text-white"></i>
                    </div>
                    <div class="ml-4">
                        <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Total Members</p>
                        <h5 class="text-xl font-bold text-gray-900 dark:text-white">@Model.TotalMembers.ToString("N0")</h5>
                    </div>
                </div>
            </div>
            @foreach (var tier in Model.Tiers.OrderBy(t => t.DisplayOrder))
            {
                <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-4">
                    <div class="flex items-center">
                        <div class="w-12 h-12 rounded-lg flex items-center justify-center" style="background-color: @(tier.Color ?? "#6b7280")">
                            <i class="@(tier.Icon ?? "fas fa-medal") text-lg text-white"></i>
                        </div>
                        <div class="ml-4">
                            <p class="text-sm font-medium text-gray-500 dark:text-gray-400">@tier.Name</p>
                            <h5 class="text-xl font-bold text-gray-900 dark:text-white">@tier.MemberCount.ToString("N0")</h5>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Filters -->
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-4 mb-6">
            <form method="get" class="flex flex-wrap gap-4 items-end">
                <div class="flex-grow min-w-[200px]">
                    <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">Search</label>
                    <div class="relative">
                        <span class="absolute inset-y-0 left-0 flex items-center pl-3 text-gray-400">
                            <i class="fas fa-search"></i>
                        </span>
                        <input type="text" name="SearchTerm" value="@Model.SearchTerm" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full pl-10 p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white" placeholder="Search by name or email..." />
                    </div>
                </div>
                <div class="min-w-[150px]">
                    <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">Tier</label>
                    <select name="FilterTier" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white">
                        <option value="all" selected="@(Model.FilterTier == "all" || string.IsNullOrEmpty(Model.FilterTier))">All Tiers</option>
                        <option value="none" selected="@(Model.FilterTier == "none")">No Tier</option>
                        @foreach (var tier in Model.Tiers.OrderBy(t => t.DisplayOrder))
                        {
                            <option value="@tier.Id" selected="@(Model.FilterTier == tier.Id.ToString())">@tier.Name</option>
                        }
                    </select>
                </div>
                <div class="min-w-[150px]">
                    <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">Sort By</label>
                    <select name="SortBy" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white">
                        <option value="points_desc" selected="@(Model.SortBy == "points_desc")">Points (High to Low)</option>
                        <option value="points_asc" selected="@(Model.SortBy == "points_asc")">Points (Low to High)</option>
                        <option value="lifetime_desc" selected="@(Model.SortBy == "lifetime_desc")">Lifetime (High to Low)</option>
                        <option value="lifetime_asc" selected="@(Model.SortBy == "lifetime_asc")">Lifetime (Low to High)</option>
                        <option value="joined_desc" selected="@(Model.SortBy == "joined_desc")">Newest First</option>
                        <option value="joined_asc" selected="@(Model.SortBy == "joined_asc")">Oldest First</option>
                        <option value="name_asc" selected="@(Model.SortBy == "name_asc")">Name (A-Z)</option>
                        <option value="name_desc" selected="@(Model.SortBy == "name_desc")">Name (Z-A)</option>
                    </select>
                </div>
                <button type="submit" class="px-4 py-2.5 text-sm font-medium text-white bg-gradient-to-br from-purple-600 to-pink-500 rounded-lg hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-purple-300">
                    <i class="fas fa-filter me-2"></i> Filter
                </button>
                @if (!string.IsNullOrEmpty(Model.SearchTerm) || !string.IsNullOrEmpty(Model.FilterTier))
                {
                    <a href="/customer-hub/loyalty/members" class="px-4 py-2.5 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-100 dark:bg-gray-800 dark:text-white dark:border-gray-600 dark:hover:bg-gray-700">
                        <i class="fas fa-times me-2"></i> Clear
                    </a>
                }
            </form>
        </div>

        <!-- Members Table -->
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md">
            <div class="p-6 border-b border-gray-200 dark:border-gray-700">
                <div class="flex items-center justify-between">
                    <h6 class="font-semibold text-gray-900 dark:text-white">Members</h6>
                    <span class="text-sm text-gray-500 dark:text-gray-400">Showing @Model.Members.Count of @Model.TotalMembers</span>
                </div>
            </div>
            <div class="p-6">
                @if (Model.Members.Count == 0)
                {
                    <div class="text-center py-8">
                        <i class="fas fa-users text-5xl text-gray-300 dark:text-gray-600 mb-4"></i>
                        <p class="text-sm text-gray-500 dark:text-gray-400">No members found.</p>
                        @if (!string.IsNullOrEmpty(Model.SearchTerm) || !string.IsNullOrEmpty(Model.FilterTier))
                        {
                            <p class="text-xs text-gray-400">Try adjusting your filters.</p>
                        }
                    </div>
                }
                else
                {
                    <div class="relative overflow-x-auto">
                        <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
                            <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                                <tr>
                                    <th scope="col" class="px-4 py-3">Customer</th>
                                    <th scope="col" class="px-4 py-3 text-center">Tier</th>
                                    <th scope="col" class="px-4 py-3 text-center">Balance</th>
                                    <th scope="col" class="px-4 py-3 text-center">Lifetime</th>
                                    <th scope="col" class="px-4 py-3 text-center">Redeemed</th>
                                    <th scope="col" class="px-4 py-3 text-center">Joined</th>
                                    <th scope="col" class="px-4 py-3 text-center">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var member in Model.Members)
                                {
                                    <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
                                        <td class="px-4 py-3">
                                            <div class="flex items-center gap-3">
                                                <div class="w-10 h-10 rounded-full bg-gradient-to-br from-purple-600 to-pink-500 flex items-center justify-center text-white font-bold text-sm">
                                                    @(member.CustomerName?.FirstOrDefault().ToString().ToUpper() ?? "?")
                                                </div>
                                                <div>
                                                    <div class="font-medium text-gray-900 dark:text-white">@(member.CustomerName ?? "Unknown")</div>
                                                    <div class="text-xs text-gray-500 dark:text-gray-400">@member.CustomerEmail</div>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="px-4 py-3 text-center">
                                            @if (member.CurrentTierId != null)
                                            {
                                                <span class="px-2.5 py-1 text-xs font-semibold rounded-full text-white" style="background-color: @Model.GetTierColor(member.CurrentTierId)">
                                                    @Model.GetTierName(member.CurrentTierId)
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="text-xs text-gray-400">No tier</span>
                                            }
                                            @if (member.PointsToNextTier.HasValue && member.NextTierName != null)
                                            {
                                                <p class="text-xs text-gray-400 mt-1">@member.PointsToNextTier.Value.ToString("N0") to @member.NextTierName</p>
                                            }
                                        </td>
                                        <td class="px-4 py-3 text-center">
                                            <span class="text-lg font-bold text-purple-500">@member.PointsBalance.ToString("N0")</span>
                                            <p class="text-xs text-gray-400">@Model.Program.PointsName</p>
                                        </td>
                                        <td class="px-4 py-3 text-center">
                                            <span class="font-semibold text-gray-700 dark:text-white">@member.LifetimePoints.ToString("N0")</span>
                                        </td>
                                        <td class="px-4 py-3 text-center text-gray-600 dark:text-gray-400">
                                            @member.LifetimeRedeemed.ToString("N0")
                                        </td>
                                        <td class="px-4 py-3 text-center text-gray-600 dark:text-gray-400">
                                            @member.JoinedAt.ToString("MMM d, yyyy")
                                            @if (member.LastActivityAt.HasValue)
                                            {
                                                <p class="text-xs text-gray-400">Active @member.LastActivityAt.Value.ToString("MMM d")</p>
                                            }
                                        </td>
                                        <td class="px-4 py-3 text-center">
                                            <button type="button" onclick='showAdjustModal(@member.CustomerId, "@(member.CustomerName ?? "Customer")", @member.PointsBalance)' class="px-3 py-1 text-xs font-semibold text-purple-600 border border-purple-500 rounded hover:bg-purple-50 dark:hover:bg-gray-700">
                                                <i class="fas fa-coins me-1"></i> Adjust
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <!-- Pagination -->
                    @if (Model.TotalPages > 1)
                    {
                        <div class="flex items-center justify-between mt-6">
                            <p class="text-sm text-gray-500 dark:text-gray-400">
                                Page @Model.CurrentPage of @Model.TotalPages
                            </p>
                            <div class="flex gap-2">
                                @if (Model.CurrentPage > 1)
                                {
                                    <a href="/customer-hub/loyalty/members?PageNumber=@(Model.CurrentPage - 1)&SearchTerm=@Model.SearchTerm&FilterTier=@Model.FilterTier&SortBy=@Model.SortBy" class="px-3 py-2 text-sm font-medium text-gray-500 bg-white border border-gray-300 rounded-lg hover:bg-gray-100 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700">
                                        <i class="fas fa-chevron-left me-1"></i> Previous
                                    </a>
                                }
                                @for (var i = Math.Max(1, Model.CurrentPage - 2); i <= Math.Min(Model.TotalPages, Model.CurrentPage + 2); i++)
                                {
                                    <a href="/customer-hub/loyalty/members?PageNumber=@i&SearchTerm=@Model.SearchTerm&FilterTier=@Model.FilterTier&SortBy=@Model.SortBy" class="px-3 py-2 text-sm font-medium rounded-lg @(i == Model.CurrentPage ? "bg-purple-500 text-white" : "text-gray-500 bg-white border border-gray-300 hover:bg-gray-100 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700")">
                                        @i
                                    </a>
                                }
                                @if (Model.CurrentPage < Model.TotalPages)
                                {
                                    <a href="/customer-hub/loyalty/members?PageNumber=@(Model.CurrentPage + 1)&SearchTerm=@Model.SearchTerm&FilterTier=@Model.FilterTier&SortBy=@Model.SortBy" class="px-3 py-2 text-sm font-medium text-gray-500 bg-white border border-gray-300 rounded-lg hover:bg-gray-100 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700">
                                        Next <i class="fas fa-chevron-right ms-1"></i>
                                    </a>
                                }
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    }
</div>

<!-- Adjust Points Modal -->
<div id="adjustModal" class="fixed inset-0 z-50 hidden overflow-y-auto" aria-modal="true">
    <div class="flex items-center justify-center min-h-screen px-4 pt-4 pb-20 text-center sm:p-0">
        <div class="fixed inset-0 transition-opacity bg-gray-500 bg-opacity-75 backdrop-blur-sm" onclick="closeAdjustModal()"></div>

        <div class="relative inline-block px-4 pt-5 pb-4 overflow-hidden text-left align-bottom transition-all transform bg-white rounded-lg shadow-xl sm:my-8 sm:align-middle sm:max-w-md sm:w-full sm:p-6 dark:bg-gray-800">
            <form method="post" asp-page-handler="AdjustPoints">
                <div class="flex items-center justify-between mb-4">
                    <h5 class="text-lg font-bold text-gray-900 dark:text-white">Adjust Points</h5>
                    <button type="button" onclick="closeAdjustModal()" class="text-gray-400 hover:text-gray-500">
                        <i class="fas fa-times"></i>
                    </button>
                </div>

                <input type="hidden" asp-for="AdjustForm.CustomerId" id="adjustCustomerId" />

                <div class="mb-4 p-4 bg-gray-50 dark:bg-gray-700 rounded-lg">
                    <p class="text-sm font-semibold text-gray-700 dark:text-white" id="adjustCustomerName">Customer Name</p>
                    <p class="text-xs text-gray-400">Current balance: <span id="adjustCurrentBalance" class="font-semibold text-purple-500">0</span> @Model.Program?.PointsName</p>
                </div>

                <div class="mb-4">
                    <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">Points Adjustment</label>
                    <input type="number" asp-for="AdjustForm.Points" id="adjustPoints" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white" placeholder="Enter positive to add, negative to deduct" required />
                    <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">Use positive numbers to add points, negative to deduct.</p>
                </div>

                <div class="mb-6">
                    <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">Reason</label>
                    <textarea asp-for="AdjustForm.Reason" id="adjustReason" rows="2" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white" placeholder="Reason for adjustment (required)" required></textarea>
                </div>

                <div class="flex gap-2">
                    <button type="button" onclick="closeAdjustModal()" class="flex-1 px-4 py-3 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-100 dark:bg-gray-800 dark:text-white dark:border-gray-600 dark:hover:bg-gray-700">
                        Cancel
                    </button>
                    <button type="submit" class="flex-1 px-4 py-3 text-sm font-medium text-white bg-gradient-to-br from-purple-600 to-pink-500 rounded-lg hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-purple-300">
                        <i class="fas fa-check me-2"></i> Apply
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
<script>
    function showAdjustModal(customerId, customerName, currentBalance) {
        document.getElementById('adjustCustomerId').value = customerId;
        document.getElementById('adjustCustomerName').textContent = customerName;
        document.getElementById('adjustCurrentBalance').textContent = currentBalance.toLocaleString();
        document.getElementById('adjustPoints').value = '';
        document.getElementById('adjustReason').value = '';
        document.getElementById('adjustModal').classList.remove('hidden');
    }

    function closeAdjustModal() {
        document.getElementById('adjustModal').classList.add('hidden');
    }

    document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape') {
            closeAdjustModal();
        }
    });
</script>
}
