@page "/customer-hub/loyalty/members"
@model Algora.Web.Pages.CustomerHub.Loyalty.MembersModel
@{
    ViewData["Title"] = "Loyalty Members";
}

<div class="w-full px-6 py-6 mx-auto">
    <!-- Header -->
    <div class="flex items-center justify-between mb-6">
        <div>
            <h5 class="font-bold dark:text-white">Loyalty Members</h5>
            <p class="text-sm text-slate-400">Manage your loyalty program members</p>
        </div>
        <div class="flex gap-2">
            <a href="/customer-hub/loyalty" class="inline-block px-4 py-2 text-xs font-bold text-center text-slate-700 uppercase align-middle transition-all border border-slate-300 rounded-lg cursor-pointer ease-soft-in leading-pro tracking-tight-soft bg-white shadow-soft-md bg-150 bg-x-25 hover:scale-102 active:opacity-85 dark:bg-gray-950 dark:text-white dark:border-gray-700">
                <i class="fas fa-arrow-left me-2"></i> Back
            </a>
            <form method="post" asp-page-handler="EvaluateTiers" class="inline">
                <button type="submit" class="inline-block px-4 py-2 text-xs font-bold text-center text-white uppercase align-middle transition-all border-0 rounded-lg cursor-pointer ease-soft-in leading-pro tracking-tight-soft bg-gradient-to-tl from-blue-600 to-cyan-400 shadow-soft-md bg-150 bg-x-25 hover:scale-102 active:opacity-85">
                    <i class="fas fa-sync-alt me-2"></i> Evaluate Tiers
                </button>
            </form>
        </div>
    </div>

    <!-- Success/Error Messages -->
    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="p-4 mb-4 text-sm text-green-800 rounded-lg bg-green-50 dark:bg-gray-800 dark:text-green-400" role="alert">
            <i class="fas fa-check-circle me-2"></i> @Model.SuccessMessage
        </div>
    }
    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="p-4 mb-4 text-sm text-red-800 rounded-lg bg-red-50 dark:bg-gray-800 dark:text-red-400" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i> @Model.ErrorMessage
        </div>
    }

    @if (Model.Program == null)
    {
        <!-- No Program -->
        <div class="relative flex flex-col min-w-0 break-words bg-white border-0 shadow-soft-xl rounded-2xl bg-clip-border dark:bg-gray-950 dark:shadow-soft-dark-xl">
            <div class="flex-auto p-6 text-center">
                <i class="fas fa-crown fa-4x text-gray-300 mb-4"></i>
                <h5 class="mb-2 dark:text-white">No Loyalty Program</h5>
                <p class="text-sm text-gray-500 dark:text-gray-400 mb-4">Create a loyalty program to start enrolling members.</p>
                <a href="/customer-hub/loyalty/settings" class="inline-block px-6 py-3 text-xs font-bold text-center text-white uppercase align-middle transition-all border-0 rounded-lg cursor-pointer ease-soft-in leading-pro tracking-tight-soft bg-gradient-to-tl from-purple-700 to-pink-500 shadow-soft-md bg-150 bg-x-25 hover:scale-102 active:opacity-85">
                    <i class="fas fa-cog me-2"></i> Go to Settings
                </a>
            </div>
        </div>
    }
    else
    {
        <!-- Stats Cards -->
        <div class="flex flex-wrap -mx-3 mb-6">
            <div class="w-full max-w-full px-3 mb-4 sm:w-1/2 lg:w-1/4">
                <div class="relative flex flex-col min-w-0 break-words bg-white shadow-soft-xl rounded-2xl bg-clip-border dark:bg-gray-950 dark:shadow-soft-dark-xl">
                    <div class="flex-auto p-4">
                        <div class="flex items-center">
                            <div class="w-12 h-12 text-center rounded-lg bg-gradient-to-tl from-purple-700 to-pink-500 flex items-center justify-center">
                                <i class="fas fa-users text-lg text-white"></i>
                            </div>
                            <div class="ml-4">
                                <p class="mb-0 text-sm font-semibold leading-normal text-slate-400">Total Members</p>
                                <h5 class="mb-0 font-bold dark:text-white">@Model.TotalMembers.ToString("N0")</h5>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            @foreach (var tier in Model.Tiers.OrderBy(t => t.DisplayOrder))
            {
                <div class="w-full max-w-full px-3 mb-4 sm:w-1/2 lg:w-1/4">
                    <div class="relative flex flex-col min-w-0 break-words bg-white shadow-soft-xl rounded-2xl bg-clip-border dark:bg-gray-950 dark:shadow-soft-dark-xl">
                        <div class="flex-auto p-4">
                            <div class="flex items-center">
                                <div class="w-12 h-12 text-center rounded-lg flex items-center justify-center" style="background-color: @(tier.Color ?? "#6b7280")">
                                    <i class="@(tier.Icon ?? "fas fa-medal") text-lg text-white"></i>
                                </div>
                                <div class="ml-4">
                                    <p class="mb-0 text-sm font-semibold leading-normal text-slate-400">@tier.Name</p>
                                    <h5 class="mb-0 font-bold dark:text-white">@tier.MemberCount.ToString("N0")</h5>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Filters -->
        <div class="relative flex flex-col min-w-0 mb-6 break-words bg-white border-0 shadow-soft-xl rounded-2xl bg-clip-border dark:bg-gray-950 dark:shadow-soft-dark-xl">
            <div class="flex-auto p-4">
                <form method="get" class="flex flex-wrap gap-4 items-end">
                    <div class="flex-grow min-w-[200px]">
                        <label class="block mb-2 text-xs font-bold text-slate-700 dark:text-white">Search</label>
                        <div class="relative">
                            <span class="absolute inset-y-0 left-0 flex items-center pl-3 text-slate-400">
                                <i class="fas fa-search"></i>
                            </span>
                            <input type="text" name="SearchTerm" value="@Model.SearchTerm" class="block w-full pl-10 pr-3 py-2 text-sm leading-5.6 text-gray-700 bg-white border border-solid border-gray-300 rounded-lg focus:border-fuchsia-300 focus:outline-none dark:bg-gray-900 dark:border-gray-600 dark:text-white" placeholder="Search by name or email..." />
                        </div>
                    </div>
                    <div class="min-w-[150px]">
                        <label class="block mb-2 text-xs font-bold text-slate-700 dark:text-white">Tier</label>
                        <select name="FilterTier" class="block w-full px-3 py-2 text-sm leading-5.6 text-gray-700 bg-white border border-solid border-gray-300 rounded-lg focus:border-fuchsia-300 focus:outline-none dark:bg-gray-900 dark:border-gray-600 dark:text-white">
                            <option value="all" selected="@(Model.FilterTier == "all" || string.IsNullOrEmpty(Model.FilterTier))">All Tiers</option>
                            <option value="none" selected="@(Model.FilterTier == "none")">No Tier</option>
                            @foreach (var tier in Model.Tiers.OrderBy(t => t.DisplayOrder))
                            {
                                <option value="@tier.Id" selected="@(Model.FilterTier == tier.Id.ToString())">@tier.Name</option>
                            }
                        </select>
                    </div>
                    <div class="min-w-[150px]">
                        <label class="block mb-2 text-xs font-bold text-slate-700 dark:text-white">Sort By</label>
                        <select name="SortBy" class="block w-full px-3 py-2 text-sm leading-5.6 text-gray-700 bg-white border border-solid border-gray-300 rounded-lg focus:border-fuchsia-300 focus:outline-none dark:bg-gray-900 dark:border-gray-600 dark:text-white">
                            <option value="points_desc" selected="@(Model.SortBy == "points_desc")">Points (High to Low)</option>
                            <option value="points_asc" selected="@(Model.SortBy == "points_asc")">Points (Low to High)</option>
                            <option value="lifetime_desc" selected="@(Model.SortBy == "lifetime_desc")">Lifetime (High to Low)</option>
                            <option value="lifetime_asc" selected="@(Model.SortBy == "lifetime_asc")">Lifetime (Low to High)</option>
                            <option value="joined_desc" selected="@(Model.SortBy == "joined_desc")">Newest First</option>
                            <option value="joined_asc" selected="@(Model.SortBy == "joined_asc")">Oldest First</option>
                            <option value="name_asc" selected="@(Model.SortBy == "name_asc")">Name (A-Z)</option>
                            <option value="name_desc" selected="@(Model.SortBy == "name_desc")">Name (Z-A)</option>
                        </select>
                    </div>
                    <button type="submit" class="px-4 py-2 text-xs font-bold text-center text-white uppercase align-middle transition-all border-0 rounded-lg cursor-pointer ease-soft-in leading-pro tracking-tight-soft bg-gradient-to-tl from-purple-700 to-pink-500 shadow-soft-md bg-150 bg-x-25 hover:scale-102 active:opacity-85">
                        <i class="fas fa-filter me-2"></i> Filter
                    </button>
                    @if (!string.IsNullOrEmpty(Model.SearchTerm) || !string.IsNullOrEmpty(Model.FilterTier))
                    {
                        <a href="/customer-hub/loyalty/members" class="px-4 py-2 text-xs font-bold text-center text-slate-700 uppercase align-middle transition-all border border-slate-300 rounded-lg cursor-pointer ease-soft-in leading-pro tracking-tight-soft bg-white hover:scale-102 active:opacity-85 dark:bg-gray-900 dark:text-white dark:border-gray-700">
                            <i class="fas fa-times me-2"></i> Clear
                        </a>
                    }
                </form>
            </div>
        </div>

        <!-- Members Table -->
        <div class="relative flex flex-col min-w-0 mb-6 break-words bg-white border-0 shadow-soft-xl rounded-2xl bg-clip-border dark:bg-gray-950 dark:shadow-soft-dark-xl">
            <div class="p-6 pb-0 mb-0 border-b-0 rounded-t-2xl">
                <div class="flex items-center justify-between">
                    <h6 class="mb-0 dark:text-white">Members</h6>
                    <span class="text-sm text-slate-400">Showing @Model.Members.Count of @Model.TotalMembers</span>
                </div>
            </div>
            <div class="flex-auto p-6">
                @if (Model.Members.Count == 0)
                {
                    <div class="text-center py-8">
                        <i class="fas fa-users fa-3x text-gray-300 mb-4"></i>
                        <p class="text-sm text-gray-500 dark:text-gray-400">No members found.</p>
                        @if (!string.IsNullOrEmpty(Model.SearchTerm) || !string.IsNullOrEmpty(Model.FilterTier))
                        {
                            <p class="text-xs text-slate-400">Try adjusting your filters.</p>
                        }
                    </div>
                }
                else
                {
                    <div class="overflow-x-auto">
                        <table class="items-center w-full mb-0 align-top border-gray-200 text-slate-500">
                            <thead class="align-bottom">
                                <tr>
                                    <th class="px-4 py-3 font-bold text-left uppercase align-middle bg-transparent border-b border-gray-200 shadow-none text-xxs border-b-solid tracking-none whitespace-nowrap text-slate-400 opacity-70">Customer</th>
                                    <th class="px-4 py-3 font-bold text-center uppercase align-middle bg-transparent border-b border-gray-200 shadow-none text-xxs border-b-solid tracking-none whitespace-nowrap text-slate-400 opacity-70">Tier</th>
                                    <th class="px-4 py-3 font-bold text-center uppercase align-middle bg-transparent border-b border-gray-200 shadow-none text-xxs border-b-solid tracking-none whitespace-nowrap text-slate-400 opacity-70">Balance</th>
                                    <th class="px-4 py-3 font-bold text-center uppercase align-middle bg-transparent border-b border-gray-200 shadow-none text-xxs border-b-solid tracking-none whitespace-nowrap text-slate-400 opacity-70">Lifetime</th>
                                    <th class="px-4 py-3 font-bold text-center uppercase align-middle bg-transparent border-b border-gray-200 shadow-none text-xxs border-b-solid tracking-none whitespace-nowrap text-slate-400 opacity-70">Redeemed</th>
                                    <th class="px-4 py-3 font-bold text-center uppercase align-middle bg-transparent border-b border-gray-200 shadow-none text-xxs border-b-solid tracking-none whitespace-nowrap text-slate-400 opacity-70">Joined</th>
                                    <th class="px-4 py-3 font-bold text-center uppercase align-middle bg-transparent border-b border-gray-200 shadow-none text-xxs border-b-solid tracking-none whitespace-nowrap text-slate-400 opacity-70">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var member in Model.Members)
                                {
                                    <tr>
                                        <td class="p-2 align-middle bg-transparent border-b whitespace-nowrap">
                                            <div class="flex items-center gap-3">
                                                <div class="w-10 h-10 rounded-full bg-gradient-to-tl from-purple-700 to-pink-500 flex items-center justify-center text-white font-bold text-sm">
                                                    @(member.CustomerName?.FirstOrDefault().ToString().ToUpper() ?? "?")
                                                </div>
                                                <div>
                                                    <p class="mb-0 text-sm font-semibold leading-normal dark:text-white">@(member.CustomerName ?? "Unknown")</p>
                                                    <p class="mb-0 text-xs leading-tight text-slate-400">@member.CustomerEmail</p>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="p-2 text-center align-middle bg-transparent border-b whitespace-nowrap">
                                            @if (member.CurrentTierId != null)
                                            {
                                                <span class="px-2.5 py-1 text-xs font-semibold rounded-full text-white" style="background-color: @Model.GetTierColor(member.CurrentTierId)">
                                                    @Model.GetTierName(member.CurrentTierId)
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="text-xs text-slate-400">No tier</span>
                                            }
                                            @if (member.PointsToNextTier.HasValue && member.NextTierName != null)
                                            {
                                                <p class="text-xs text-slate-400 mt-1">@member.PointsToNextTier.Value.ToString("N0") to @member.NextTierName</p>
                                            }
                                        </td>
                                        <td class="p-2 text-center align-middle bg-transparent border-b whitespace-nowrap">
                                            <span class="text-lg font-bold text-fuchsia-500">@member.PointsBalance.ToString("N0")</span>
                                            <p class="text-xs text-slate-400">@Model.Program.PointsName</p>
                                        </td>
                                        <td class="p-2 text-center align-middle bg-transparent border-b whitespace-nowrap">
                                            <span class="text-sm font-semibold text-slate-700 dark:text-white">@member.LifetimePoints.ToString("N0")</span>
                                        </td>
                                        <td class="p-2 text-center align-middle bg-transparent border-b whitespace-nowrap">
                                            <span class="text-sm text-slate-600 dark:text-gray-400">@member.LifetimeRedeemed.ToString("N0")</span>
                                        </td>
                                        <td class="p-2 text-center align-middle bg-transparent border-b whitespace-nowrap">
                                            <span class="text-sm text-slate-600 dark:text-gray-400">@member.JoinedAt.ToString("MMM d, yyyy")</span>
                                            @if (member.LastActivityAt.HasValue)
                                            {
                                                <p class="text-xs text-slate-400">Active @member.LastActivityAt.Value.ToString("MMM d")</p>
                                            }
                                        </td>
                                        <td class="p-2 text-center align-middle bg-transparent border-b whitespace-nowrap">
                                            <button type="button" onclick='showAdjustModal(@member.CustomerId, "@(member.CustomerName ?? "Customer")", @member.PointsBalance)' class="px-3 py-1 text-xs font-semibold text-fuchsia-500 border border-fuchsia-500 rounded hover:bg-fuchsia-50 dark:hover:bg-gray-700">
                                                <i class="fas fa-coins me-1"></i> Adjust
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <!-- Pagination -->
                    @if (Model.TotalPages > 1)
                    {
                        <div class="flex items-center justify-between mt-6">
                            <p class="text-sm text-slate-400">
                                Page @Model.CurrentPage of @Model.TotalPages
                            </p>
                            <div class="flex gap-2">
                                @if (Model.CurrentPage > 1)
                                {
                                    <a href="/customer-hub/loyalty/members?PageNumber=@(Model.CurrentPage - 1)&SearchTerm=@Model.SearchTerm&FilterTier=@Model.FilterTier&SortBy=@Model.SortBy" class="px-3 py-1 text-xs font-semibold text-slate-700 border border-slate-300 rounded hover:bg-slate-50 dark:text-white dark:border-gray-700 dark:hover:bg-gray-800">
                                        <i class="fas fa-chevron-left me-1"></i> Previous
                                    </a>
                                }
                                @for (var i = Math.Max(1, Model.CurrentPage - 2); i <= Math.Min(Model.TotalPages, Model.CurrentPage + 2); i++)
                                {
                                    <a href="/customer-hub/loyalty/members?PageNumber=@i&SearchTerm=@Model.SearchTerm&FilterTier=@Model.FilterTier&SortBy=@Model.SortBy" class="px-3 py-1 text-xs font-semibold rounded @(i == Model.CurrentPage ? "bg-fuchsia-500 text-white" : "text-slate-700 border border-slate-300 hover:bg-slate-50 dark:text-white dark:border-gray-700 dark:hover:bg-gray-800")">
                                        @i
                                    </a>
                                }
                                @if (Model.CurrentPage < Model.TotalPages)
                                {
                                    <a href="/customer-hub/loyalty/members?PageNumber=@(Model.CurrentPage + 1)&SearchTerm=@Model.SearchTerm&FilterTier=@Model.FilterTier&SortBy=@Model.SortBy" class="px-3 py-1 text-xs font-semibold text-slate-700 border border-slate-300 rounded hover:bg-slate-50 dark:text-white dark:border-gray-700 dark:hover:bg-gray-800">
                                        Next <i class="fas fa-chevron-right ms-1"></i>
                                    </a>
                                }
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    }
</div>

<!-- Adjust Points Modal -->
<div id="adjustModal" class="fixed inset-0 z-50 hidden overflow-y-auto" aria-modal="true">
    <div class="flex items-center justify-center min-h-screen px-4 pt-4 pb-20 text-center sm:p-0">
        <div class="fixed inset-0 transition-opacity bg-gray-500 bg-opacity-75" onclick="closeAdjustModal()"></div>

        <div class="relative inline-block px-4 pt-5 pb-4 overflow-hidden text-left align-bottom transition-all transform bg-white rounded-2xl shadow-xl sm:my-8 sm:align-middle sm:max-w-md sm:w-full sm:p-6 dark:bg-gray-950">
            <form method="post" asp-page-handler="AdjustPoints">
                <div class="flex items-center justify-between mb-4">
                    <h5 class="text-lg font-bold dark:text-white">Adjust Points</h5>
                    <button type="button" onclick="closeAdjustModal()" class="text-gray-400 hover:text-gray-500">
                        <i class="fas fa-times"></i>
                    </button>
                </div>

                <input type="hidden" asp-for="AdjustForm.CustomerId" id="adjustCustomerId" />

                <div class="mb-4 p-4 bg-gray-50 rounded-lg dark:bg-gray-800">
                    <p class="text-sm font-semibold text-slate-700 dark:text-white" id="adjustCustomerName">Customer Name</p>
                    <p class="text-xs text-slate-400">Current balance: <span id="adjustCurrentBalance" class="font-semibold text-fuchsia-500">0</span> @Model.Program?.PointsName</p>
                </div>

                <div class="mb-4">
                    <label class="block mb-2 text-xs font-bold text-slate-700 dark:text-white">Points Adjustment</label>
                    <input type="number" asp-for="AdjustForm.Points" id="adjustPoints" class="block w-full px-3 py-2 text-sm leading-5.6 text-gray-700 bg-white border border-solid border-gray-300 rounded-lg focus:border-fuchsia-300 focus:outline-none dark:bg-gray-900 dark:border-gray-600 dark:text-white" placeholder="Enter positive to add, negative to deduct" required />
                    <p class="mt-1 text-xs text-slate-400">Use positive numbers to add points, negative to deduct.</p>
                </div>

                <div class="mb-6">
                    <label class="block mb-2 text-xs font-bold text-slate-700 dark:text-white">Reason</label>
                    <textarea asp-for="AdjustForm.Reason" id="adjustReason" rows="2" class="block w-full px-3 py-2 text-sm leading-5.6 text-gray-700 bg-white border border-solid border-gray-300 rounded-lg focus:border-fuchsia-300 focus:outline-none dark:bg-gray-900 dark:border-gray-600 dark:text-white" placeholder="Reason for adjustment (required)" required></textarea>
                </div>

                <div class="flex gap-2">
                    <button type="button" onclick="closeAdjustModal()" class="flex-1 px-4 py-3 text-xs font-bold text-center text-slate-700 uppercase align-middle transition-all border border-slate-300 rounded-lg cursor-pointer ease-soft-in leading-pro tracking-tight-soft bg-white hover:scale-102 active:opacity-85 dark:bg-gray-900 dark:text-white dark:border-gray-700">
                        Cancel
                    </button>
                    <button type="submit" class="flex-1 px-4 py-3 text-xs font-bold text-center text-white uppercase align-middle transition-all border-0 rounded-lg cursor-pointer ease-soft-in leading-pro tracking-tight-soft bg-gradient-to-tl from-purple-700 to-pink-500 shadow-soft-md bg-150 bg-x-25 hover:scale-102 active:opacity-85">
                        <i class="fas fa-check me-2"></i> Apply
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
<script>
    function showAdjustModal(customerId, customerName, currentBalance) {
        document.getElementById('adjustCustomerId').value = customerId;
        document.getElementById('adjustCustomerName').textContent = customerName;
        document.getElementById('adjustCurrentBalance').textContent = currentBalance.toLocaleString();
        document.getElementById('adjustPoints').value = '';
        document.getElementById('adjustReason').value = '';
        document.getElementById('adjustModal').classList.remove('hidden');
    }

    function closeAdjustModal() {
        document.getElementById('adjustModal').classList.add('hidden');
    }

    // Close modal on escape key
    document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape') {
            closeAdjustModal();
        }
    });
</script>
}
