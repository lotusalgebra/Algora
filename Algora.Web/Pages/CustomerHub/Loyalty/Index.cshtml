@page "/customer-hub/loyalty"
@model Algora.Web.Pages.CustomerHub.Loyalty.IndexModel
@{
    ViewData["Title"] = "Loyalty Program";
}

<div class="p-4">
    <!-- Header -->
    <div class="flex flex-wrap items-center justify-between gap-4 mb-6">
        <div>
            <h1 class="text-xl font-bold text-gray-900 dark:text-white">Loyalty Program</h1>
            <p class="text-sm text-gray-500 dark:text-gray-400">Manage your customer loyalty program</p>
        </div>
        <div class="flex gap-2">
            <a href="/customer-hub/loyalty/settings" class="inline-flex items-center px-4 py-2.5 text-sm font-medium text-gray-900 bg-white border border-gray-300 rounded-lg hover:bg-gray-100 focus:ring-4 focus:outline-none focus:ring-gray-200 dark:bg-gray-800 dark:text-white dark:border-gray-600 dark:hover:bg-gray-700">
                <i class="fas fa-cog me-2"></i> Settings
            </a>
            <a href="/customer-hub/loyalty/rewards" class="inline-flex items-center px-4 py-2.5 text-sm font-medium text-white bg-gradient-to-br from-purple-600 to-pink-500 rounded-lg hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-purple-300 dark:focus:ring-purple-800">
                <i class="fas fa-gift me-2"></i> Rewards
            </a>
        </div>
    </div>

    @if (Model.Program == null)
    {
        <!-- No Program -->
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6 text-center">
            <i class="fas fa-crown text-6xl text-gray-300 dark:text-gray-600 mb-4"></i>
            <h5 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">No Loyalty Program Configured</h5>
            <p class="text-sm text-gray-500 dark:text-gray-400 mb-4">Create a loyalty program to reward your customers and increase retention.</p>
            <a href="/customer-hub/loyalty/settings" class="inline-flex items-center px-6 py-3 text-sm font-medium text-white bg-gradient-to-br from-purple-600 to-pink-500 rounded-lg hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-purple-300 dark:focus:ring-purple-800">
                <i class="fas fa-plus me-2"></i> Create Loyalty Program
            </a>
        </div>
    }
    else
    {
        <!-- Program Overview -->
        <div class="grid grid-cols-1 sm:grid-cols-2 xl:grid-cols-4 gap-4 mb-6">
            <!-- Total Members -->
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-4">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Total Members</p>
                        <h3 class="text-2xl font-bold text-gray-900 dark:text-white">@Model.Analytics.TotalMembers.ToString("N0")</h3>
                    </div>
                    <div class="w-12 h-12 rounded-lg bg-gradient-to-br from-purple-600 to-pink-500 flex items-center justify-center">
                        <i class="fas fa-users text-white text-lg"></i>
                    </div>
                </div>
            </div>

            <!-- Active Members -->
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-4">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Active Members</p>
                        <h3 class="text-2xl font-bold text-green-600 dark:text-green-400">@Model.Analytics.ActiveMembers.ToString("N0")</h3>
                    </div>
                    <div class="w-12 h-12 rounded-lg bg-gradient-to-br from-green-600 to-lime-400 flex items-center justify-center">
                        <i class="fas fa-user-check text-white text-lg"></i>
                    </div>
                </div>
            </div>

            <!-- Points Issued -->
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-4">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Points Issued</p>
                        <h3 class="text-2xl font-bold text-gray-900 dark:text-white">@Model.Analytics.TotalPointsIssued.ToString("N0")</h3>
                    </div>
                    <div class="w-12 h-12 rounded-lg bg-gradient-to-br from-blue-600 to-cyan-400 flex items-center justify-center">
                        <i class="fas fa-star text-white text-lg"></i>
                    </div>
                </div>
            </div>

            <!-- Points Redeemed -->
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-4">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Points Redeemed</p>
                        <h3 class="text-2xl font-bold text-orange-600 dark:text-orange-400">@Model.Analytics.TotalPointsRedeemed.ToString("N0")</h3>
                    </div>
                    <div class="w-12 h-12 rounded-lg bg-gradient-to-br from-orange-500 to-yellow-400 flex items-center justify-center">
                        <i class="fas fa-gift text-white text-lg"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- Tiers & Members -->
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
            <!-- Tiers -->
            <div class="lg:col-span-1">
                <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md">
                    <div class="p-6 border-b border-gray-200 dark:border-gray-700">
                        <h6 class="font-semibold text-gray-900 dark:text-white">Loyalty Tiers</h6>
                    </div>
                    <div class="p-6">
                        @if (Model.Tiers.Count == 0)
                        {
                            <div class="text-center py-4">
                                <p class="text-sm text-gray-500 dark:text-gray-400">No tiers configured.</p>
                                <a href="/customer-hub/loyalty/settings" class="text-purple-500 hover:text-purple-700 text-sm">Add tiers</a>
                            </div>
                        }
                        else
                        {
                            <div class="space-y-4">
                                @foreach (var tier in Model.Tiers.OrderBy(t => t.DisplayOrder))
                                {
                                    Model.Analytics.MembersByTier.TryGetValue(tier.Name, out var memberCount);

                                    <div class="flex items-center gap-3 p-4 rounded-lg bg-gray-50 dark:bg-gray-700">
                                        <div class="w-12 h-12 rounded-full flex items-center justify-center flex-shrink-0" style="background-color: @(tier.Color ?? "#6b7280")">
                                            <i class="@(tier.Icon ?? "fas fa-medal") text-lg text-white"></i>
                                        </div>
                                        <div class="flex-grow">
                                            <p class="text-sm font-semibold text-gray-700 dark:text-white">@tier.Name</p>
                                            <p class="text-xs text-gray-400">@tier.MinimumPoints.ToString("N0")+ @Model.Program.PointsName</p>
                                        </div>
                                        <div class="text-right">
                                            <p class="text-lg font-bold text-purple-500">@memberCount</p>
                                            <p class="text-xs text-gray-400">members</p>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Top Members -->
            <div class="lg:col-span-2">
                <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md">
                    <div class="p-6 border-b border-gray-200 dark:border-gray-700">
                        <div class="flex items-center justify-between">
                            <h6 class="font-semibold text-gray-900 dark:text-white">Top Members</h6>
                            <a href="/customer-hub/loyalty/members" class="text-sm text-purple-600 hover:text-purple-800 dark:text-purple-400">View All</a>
                        </div>
                    </div>
                    <div class="p-6">
                        @if (Model.TopMembers.Count == 0)
                        {
                            <div class="text-center py-4">
                                <p class="text-sm text-gray-500 dark:text-gray-400">No members yet.</p>
                            </div>
                        }
                        else
                        {
                            <div class="relative overflow-x-auto">
                                <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
                                    <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                                        <tr>
                                            <th scope="col" class="px-4 py-3">Customer</th>
                                            <th scope="col" class="px-4 py-3 text-center">Tier</th>
                                            <th scope="col" class="px-4 py-3 text-center">Balance</th>
                                            <th scope="col" class="px-4 py-3 text-center">Lifetime</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var member in Model.TopMembers)
                                        {
                                            <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
                                                <td class="px-4 py-3">
                                                    <div class="font-medium text-gray-900 dark:text-white">@(member.CustomerName ?? "Customer")</div>
                                                    <div class="text-xs text-gray-500 dark:text-gray-400">@member.CustomerEmail</div>
                                                </td>
                                                <td class="px-4 py-3 text-center">
                                                    @if (member.CurrentTierName != null)
                                                    {
                                                        var tierColor = Model.Tiers.FirstOrDefault(t => t.Name == member.CurrentTierName)?.Color ?? "#6b7280";
                                                        <span class="px-2.5 py-1 text-xs font-semibold rounded-full text-white" style="background-color: @tierColor;">@member.CurrentTierName</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="text-xs text-gray-400">No tier</span>
                                                    }
                                                </td>
                                                <td class="px-4 py-3 text-center">
                                                    <span class="font-bold text-purple-500">@member.PointsBalance.ToString("N0")</span>
                                                </td>
                                                <td class="px-4 py-3 text-center text-gray-700 dark:text-white">
                                                    @member.LifetimePoints.ToString("N0")
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>
