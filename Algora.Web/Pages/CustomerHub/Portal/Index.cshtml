@page "/portal"
@model Algora.Web.Pages.CustomerHub.Portal.IndexModel
@{
    ViewData["Title"] = "Customer Portal";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
</head>
<body class="bg-gray-50 min-h-screen">
    <div class="max-w-4xl mx-auto px-4 py-8">
        <!-- Header -->
        <div class="text-center mb-8">
            <h1 class="text-3xl font-bold text-gray-800 mb-2">Customer Portal</h1>
            <p class="text-gray-500">Track orders, view rewards, and manage your account</p>
        </div>

        @if (string.IsNullOrEmpty(Model.Email) || Model.Customer == null)
        {
            <!-- Login Form -->
            <div class="bg-white rounded-2xl shadow-lg p-8 max-w-md mx-auto">
                <div class="text-center mb-6">
                    <div class="w-16 h-16 bg-gradient-to-br from-purple-600 to-pink-500 rounded-full flex items-center justify-center mx-auto mb-4">
                        <i class="fas fa-user text-2xl text-white"></i>
                    </div>
                    <h2 class="text-xl font-semibold text-gray-800">Access Your Account</h2>
                    <p class="text-sm text-gray-500 mt-1">Enter your email to view orders and rewards</p>
                </div>

                @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                {
                    <div class="p-4 mb-4 text-sm text-red-700 bg-red-100 rounded-lg">
                        <i class="fas fa-exclamation-circle mr-2"></i>@Model.ErrorMessage
                    </div>
                }

                <form method="post" asp-page-handler="Lookup">
                    <div class="mb-4">
                        <label class="block text-sm font-medium text-gray-700 mb-2">Email Address</label>
                        <input type="email" name="email" required class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-purple-500 focus:border-transparent" placeholder="your@email.com" />
                    </div>
                    <button type="submit" class="w-full py-3 px-4 bg-gradient-to-r from-purple-600 to-pink-500 text-white font-semibold rounded-xl hover:opacity-90 transition-opacity">
                        <i class="fas fa-sign-in-alt mr-2"></i>Access Portal
                    </button>
                </form>
            </div>
        }
        else
        {
            <!-- Customer Dashboard -->
            <div class="mb-6 flex items-center justify-between">
                <div class="flex items-center gap-4">
                    <div class="w-14 h-14 bg-gradient-to-br from-purple-600 to-pink-500 rounded-full flex items-center justify-center text-white font-bold text-xl">
                        @(Model.Customer.FirstName?.FirstOrDefault().ToString().ToUpper() ?? Model.Customer.Email?.FirstOrDefault().ToString().ToUpper() ?? "?")
                    </div>
                    <div>
                        <h2 class="text-xl font-semibold text-gray-800">
                            @if (!string.IsNullOrEmpty(Model.Customer.FirstName))
                            {
                                <span>Welcome back, @Model.Customer.FirstName!</span>
                            }
                            else
                            {
                                <span>Welcome back!</span>
                            }
                        </h2>
                        <p class="text-sm text-gray-500">@Model.Customer.Email</p>
                    </div>
                </div>
                <a href="/portal" class="text-sm text-gray-500 hover:text-purple-600">
                    <i class="fas fa-sign-out-alt mr-1"></i>Switch Account
                </a>
            </div>

            <!-- Stats Cards -->
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-8">
                <div class="bg-white rounded-2xl shadow p-6">
                    <div class="flex items-center justify-between">
                        <div>
                            <p class="text-sm text-gray-500">Total Orders</p>
                            <p class="text-2xl font-bold text-gray-800">@Model.TotalOrders</p>
                        </div>
                        <div class="w-12 h-12 bg-blue-100 rounded-full flex items-center justify-center">
                            <i class="fas fa-shopping-bag text-blue-600"></i>
                        </div>
                    </div>
                </div>

                <div class="bg-white rounded-2xl shadow p-6">
                    <div class="flex items-center justify-between">
                        <div>
                            <p class="text-sm text-gray-500">Total Spent</p>
                            <p class="text-2xl font-bold text-gray-800">@Model.TotalSpent.ToString("C")</p>
                        </div>
                        <div class="w-12 h-12 bg-green-100 rounded-full flex items-center justify-center">
                            <i class="fas fa-dollar-sign text-green-600"></i>
                        </div>
                    </div>
                </div>

                @if (Model.LoyaltyInfo != null)
                {
                    <div class="bg-gradient-to-br from-purple-600 to-pink-500 rounded-2xl shadow p-6 text-white">
                        <div class="flex items-center justify-between">
                            <div>
                                <p class="text-sm text-purple-100">@(Model.LoyaltyProgram?.PointsName ?? "Points") Balance</p>
                                <p class="text-2xl font-bold">@Model.LoyaltyInfo.PointsBalance.ToString("N0")</p>
                            </div>
                            <div class="w-12 h-12 bg-white/20 rounded-full flex items-center justify-center">
                                <i class="fas fa-star text-white"></i>
                            </div>
                        </div>
                        @if (!string.IsNullOrEmpty(Model.LoyaltyInfo.CurrentTierName))
                        {
                            <p class="text-sm text-purple-100 mt-2">
                                <i class="fas fa-crown mr-1"></i>@Model.LoyaltyInfo.CurrentTierName Member
                            </p>
                        }
                    </div>
                }
                else
                {
                    <div class="bg-white rounded-2xl shadow p-6">
                        <div class="flex items-center justify-between">
                            <div>
                                <p class="text-sm text-gray-500">Member Since</p>
                                <p class="text-2xl font-bold text-gray-800">@Model.Customer.CreatedAt.ToString("MMM yyyy")</p>
                            </div>
                            <div class="w-12 h-12 bg-purple-100 rounded-full flex items-center justify-center">
                                <i class="fas fa-calendar text-purple-600"></i>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <!-- Quick Links -->
            <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-8">
                <a href="/portal/orders?Email=@Model.Email" class="bg-white rounded-2xl shadow p-4 text-center hover:shadow-lg transition-shadow">
                    <div class="w-12 h-12 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-3">
                        <i class="fas fa-box text-blue-600"></i>
                    </div>
                    <p class="font-medium text-gray-800">My Orders</p>
                    <p class="text-xs text-gray-500">Track shipments</p>
                </a>

                @if (Model.LoyaltyProgram != null)
                {
                    <a href="/portal/loyalty?Email=@Model.Email" class="bg-white rounded-2xl shadow p-4 text-center hover:shadow-lg transition-shadow">
                        <div class="w-12 h-12 bg-purple-100 rounded-full flex items-center justify-center mx-auto mb-3">
                            <i class="fas fa-gift text-purple-600"></i>
                        </div>
                        <p class="font-medium text-gray-800">Rewards</p>
                        <p class="text-xs text-gray-500">View & redeem</p>
                    </a>
                }

                <a href="#" class="bg-white rounded-2xl shadow p-4 text-center hover:shadow-lg transition-shadow">
                    <div class="w-12 h-12 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-3">
                        <i class="fas fa-undo text-green-600"></i>
                    </div>
                    <p class="font-medium text-gray-800">Returns</p>
                    <p class="text-xs text-gray-500">Start a return</p>
                </a>

                <a href="#" class="bg-white rounded-2xl shadow p-4 text-center hover:shadow-lg transition-shadow">
                    <div class="w-12 h-12 bg-orange-100 rounded-full flex items-center justify-center mx-auto mb-3">
                        <i class="fas fa-headset text-orange-600"></i>
                    </div>
                    <p class="font-medium text-gray-800">Support</p>
                    <p class="text-xs text-gray-500">Get help</p>
                </a>
            </div>

            <!-- Recent Orders -->
            <div class="bg-white rounded-2xl shadow">
                <div class="p-6 border-b border-gray-100">
                    <div class="flex items-center justify-between">
                        <h3 class="text-lg font-semibold text-gray-800">Recent Orders</h3>
                        <a href="/portal/orders?Email=@Model.Email" class="text-sm text-purple-600 hover:text-purple-700">View All</a>
                    </div>
                </div>
                <div class="p-6">
                    @if (Model.RecentOrders.Count == 0)
                    {
                        <div class="text-center py-8">
                            <i class="fas fa-shopping-bag text-4xl text-gray-300 mb-4"></i>
                            <p class="text-gray-500">No orders yet</p>
                        </div>
                    }
                    else
                    {
                        <div class="space-y-4">
                            @foreach (var order in Model.RecentOrders)
                            {
                                var statusColor = order.FulfillmentStatus?.ToLower() switch
                                {
                                    "fulfilled" => "bg-green-100 text-green-700",
                                    "partial" => "bg-yellow-100 text-yellow-700",
                                    "unfulfilled" => "bg-gray-100 text-gray-700",
                                    _ => "bg-gray-100 text-gray-700"
                                };

                                <div class="flex items-center justify-between p-4 bg-gray-50 rounded-xl">
                                    <div class="flex items-center gap-4">
                                        <div class="w-10 h-10 bg-white rounded-lg flex items-center justify-center shadow-sm">
                                            <i class="fas fa-box text-gray-400"></i>
                                        </div>
                                        <div>
                                            <p class="font-medium text-gray-800">Order @order.OrderNumber</p>
                                            <p class="text-sm text-gray-500">@order.CreatedAt.ToString("MMM d, yyyy")</p>
                                        </div>
                                    </div>
                                    <div class="text-right">
                                        <p class="font-semibold text-gray-800">@order.GrandTotal.ToString("C")</p>
                                        <span class="text-xs px-2 py-1 rounded-full @statusColor">@(order.FulfillmentStatus ?? "Processing")</span>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        }
    </div>
</body>
</html>
