@page "/customer-hub/inbox"
@model Algora.Web.Pages.CustomerHub.Inbox.IndexModel
@{
    ViewData["Title"] = "Unified Inbox";
}

<div class="p-4">
    <!-- Header -->
    <div class="flex flex-wrap items-center justify-between gap-4 mb-6">
        <div>
            <h1 class="text-xl font-bold text-gray-900 dark:text-white">Unified Inbox</h1>
            <p class="text-sm text-gray-500 dark:text-gray-400">Manage all customer conversations in one place</p>
        </div>
        <div class="flex gap-2">
            <a href="/customer-hub/inbox/live-chat" class="inline-flex items-center px-4 py-2.5 text-sm font-medium text-white bg-gradient-to-br from-green-600 to-lime-400 rounded-lg hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-green-300">
                <i class="fas fa-headset me-2"></i> Live Chat
            </a>
            <button type="button" onclick="syncMessages()" class="inline-flex items-center px-4 py-2.5 text-sm font-medium text-white bg-gradient-to-br from-blue-600 to-cyan-400 rounded-lg hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-blue-300">
                <i class="fas fa-sync me-2"></i> Sync Messages
            </button>
        </div>
    </div>

    <!-- Filters -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-4 mb-6">
        <form method="get" class="flex flex-wrap gap-3 items-center">
            <div class="flex gap-2">
                <a href="?status=" class="px-3 py-1.5 text-xs font-semibold rounded-lg @(string.IsNullOrEmpty(Model.FilterStatus) ? "bg-purple-500 text-white" : "bg-gray-100 text-gray-700 dark:bg-gray-700 dark:text-gray-300 hover:bg-gray-200 dark:hover:bg-gray-600")">All</a>
                <a href="?status=open" class="px-3 py-1.5 text-xs font-semibold rounded-lg @(Model.FilterStatus == "open" ? "bg-purple-500 text-white" : "bg-gray-100 text-gray-700 dark:bg-gray-700 dark:text-gray-300 hover:bg-gray-200 dark:hover:bg-gray-600")">Open</a>
                <a href="?status=pending" class="px-3 py-1.5 text-xs font-semibold rounded-lg @(Model.FilterStatus == "pending" ? "bg-purple-500 text-white" : "bg-gray-100 text-gray-700 dark:bg-gray-700 dark:text-gray-300 hover:bg-gray-200 dark:hover:bg-gray-600")">Pending</a>
                <a href="?status=resolved" class="px-3 py-1.5 text-xs font-semibold rounded-lg @(Model.FilterStatus == "resolved" ? "bg-purple-500 text-white" : "bg-gray-100 text-gray-700 dark:bg-gray-700 dark:text-gray-300 hover:bg-gray-200 dark:hover:bg-gray-600")">Resolved</a>
            </div>
            <div class="flex gap-2">
                <a href="?channel=" class="px-3 py-1.5 text-xs font-semibold rounded-lg @(string.IsNullOrEmpty(Model.FilterChannel) ? "bg-blue-500 text-white" : "bg-gray-100 text-gray-700 dark:bg-gray-700 dark:text-gray-300 hover:bg-gray-200 dark:hover:bg-gray-600")">All Channels</a>
                <a href="?channel=email" class="px-3 py-1.5 text-xs font-semibold rounded-lg @(Model.FilterChannel == "email" ? "bg-blue-500 text-white" : "bg-gray-100 text-gray-700 dark:bg-gray-700 dark:text-gray-300 hover:bg-gray-200 dark:hover:bg-gray-600")"><i class="fas fa-envelope me-1"></i> Email</a>
                <a href="?channel=sms" class="px-3 py-1.5 text-xs font-semibold rounded-lg @(Model.FilterChannel == "sms" ? "bg-blue-500 text-white" : "bg-gray-100 text-gray-700 dark:bg-gray-700 dark:text-gray-300 hover:bg-gray-200 dark:hover:bg-gray-600")"><i class="fas fa-sms me-1"></i> SMS</a>
                <a href="?channel=whatsapp" class="px-3 py-1.5 text-xs font-semibold rounded-lg @(Model.FilterChannel == "whatsapp" ? "bg-blue-500 text-white" : "bg-gray-100 text-gray-700 dark:bg-gray-700 dark:text-gray-300 hover:bg-gray-200 dark:hover:bg-gray-600")"><i class="fab fa-whatsapp me-1"></i> WhatsApp</a>
                <a href="?channel=facebook" class="px-3 py-1.5 text-xs font-semibold rounded-lg @(Model.FilterChannel == "facebook" ? "bg-blue-500 text-white" : "bg-gray-100 text-gray-700 dark:bg-gray-700 dark:text-gray-300 hover:bg-gray-200 dark:hover:bg-gray-600")"><i class="fab fa-facebook-messenger me-1"></i> FB</a>
                <a href="?channel=instagram" class="px-3 py-1.5 text-xs font-semibold rounded-lg @(Model.FilterChannel == "instagram" ? "bg-blue-500 text-white" : "bg-gray-100 text-gray-700 dark:bg-gray-700 dark:text-gray-300 hover:bg-gray-200 dark:hover:bg-gray-600")"><i class="fab fa-instagram me-1"></i> IG</a>
            </div>
            <div class="flex-grow">
                <div class="relative">
                    <div class="absolute inset-y-0 start-0 flex items-center ps-3 pointer-events-none">
                        <i class="fas fa-search text-gray-400"></i>
                    </div>
                    <input type="text" name="search" value="@Model.SearchTerm" placeholder="Search conversations..."
                        class="block w-full ps-10 p-2.5 text-sm text-gray-900 border border-gray-300 rounded-lg bg-gray-50 focus:ring-purple-500 focus:border-purple-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white" />
                </div>
            </div>
            <button type="submit" class="inline-flex items-center px-4 py-2.5 text-sm font-medium text-white bg-gradient-to-br from-purple-600 to-pink-500 rounded-lg hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-purple-300 dark:focus:ring-purple-800">
                Search
            </button>
        </form>
    </div>

    <!-- Conversations List -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md">
        @if (Model.Conversations.Count == 0)
        {
            <div class="p-6 text-center">
                <i class="fas fa-inbox text-6xl text-gray-300 dark:text-gray-600 mb-4"></i>
                <h6 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">No conversations found</h6>
                <p class="text-sm text-gray-500 dark:text-gray-400">Conversations will appear here when customers message you.</p>
            </div>
        }
        else
        {
            <div class="divide-y divide-gray-200 dark:divide-gray-700">
                @foreach (var conversation in Model.Conversations)
                {
                    var channelIcon = conversation.Channel switch
                    {
                        "email" => "fa-envelope",
                        "sms" => "fa-sms",
                        "whatsapp" => "fa-whatsapp",
                        "facebook" => "fa-facebook-messenger",
                        "instagram" => "fa-instagram",
                        _ => "fa-comments"
                    };

                    var channelColor = conversation.Channel switch
                    {
                        "email" => "bg-gradient-to-br from-blue-600 to-cyan-400",
                        "sms" => "bg-gradient-to-br from-green-600 to-lime-400",
                        "whatsapp" => "bg-gradient-to-br from-green-500 to-emerald-400",
                        "facebook" => "bg-gradient-to-br from-blue-700 to-blue-500",
                        "instagram" => "bg-gradient-to-br from-purple-600 to-pink-500",
                        _ => "bg-gradient-to-br from-gray-500 to-gray-600"
                    };

                    var priorityBadge = conversation.Priority switch
                    {
                        "urgent" => "bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-300",
                        "high" => "bg-orange-100 text-orange-800 dark:bg-orange-900 dark:text-orange-300",
                        "normal" => "",
                        "low" => "bg-gray-100 text-gray-600 dark:bg-gray-700 dark:text-gray-300",
                        _ => ""
                    };

                    var statusBadge = conversation.Status switch
                    {
                        "open" => "bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-300",
                        "pending" => "bg-orange-100 text-orange-800 dark:bg-orange-900 dark:text-orange-300",
                        "resolved" => "bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-300",
                        _ => "bg-gray-100 text-gray-600 dark:bg-gray-700 dark:text-gray-300"
                    };

                    <a href="/customer-hub/inbox/conversation/@conversation.Id" class="block hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors">
                        <div class="flex items-start p-4">
                            <div class="w-12 h-12 rounded-lg @channelColor flex items-center justify-center me-4 flex-shrink-0">
                                <i class="@(conversation.Channel is "whatsapp" or "facebook" or "instagram" ? "fab" : "fas") @channelIcon text-white text-lg"></i>
                            </div>
                            <div class="flex-grow min-w-0">
                                <div class="flex items-center justify-between mb-1">
                                    <div class="flex items-center gap-2">
                                        <h6 class="text-sm font-semibold text-gray-900 dark:text-white">@(conversation.CustomerName ?? conversation.CustomerEmail ?? conversation.CustomerPhone ?? "Unknown")</h6>
                                        @if (!string.IsNullOrEmpty(priorityBadge))
                                        {
                                            <span class="@priorityBadge text-xs font-medium px-2 py-0.5 rounded-full">@conversation.Priority</span>
                                        }
                                    </div>
                                    <span class="text-xs text-gray-400 whitespace-nowrap">@conversation.LastMessageAt?.ToString("MMM d, h:mm tt")</span>
                                </div>
                                @if (!string.IsNullOrEmpty(conversation.Subject))
                                {
                                    <p class="text-sm text-gray-600 dark:text-gray-300 mb-1 truncate">@conversation.Subject</p>
                                }
                                <p class="text-xs text-gray-500 dark:text-gray-400 line-clamp-1">@conversation.LastMessagePreview</p>
                            </div>
                            <div class="flex flex-col items-end ml-4">
                                @if (conversation.UnreadCount > 0)
                                {
                                    <span class="bg-purple-500 text-white text-xs font-bold px-2.5 py-1 rounded-full mb-2">@conversation.UnreadCount</span>
                                }
                                <span class="@statusBadge text-xs font-semibold px-2 py-1 rounded uppercase">@conversation.Status</span>
                            </div>
                        </div>
                    </a>
                }
            </div>

            <!-- Pagination -->
            @if (Model.TotalPages > 1)
            {
                <div class="flex justify-center items-center gap-2 p-4 border-t border-gray-200 dark:border-gray-700">
                    @if (Model.CurrentPage > 1)
                    {
                        <a href="?page=@(Model.CurrentPage - 1)&status=@Model.FilterStatus&channel=@Model.FilterChannel&search=@Model.SearchTerm" class="px-3 py-2 text-sm font-medium text-gray-500 bg-white border border-gray-300 rounded-lg hover:bg-gray-100 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700">
                            <i class="fas fa-chevron-left me-1"></i> Previous
                        </a>
                    }
                    <span class="text-sm text-gray-500 dark:text-gray-400">Page @Model.CurrentPage of @Model.TotalPages</span>
                    @if (Model.CurrentPage < Model.TotalPages)
                    {
                        <a href="?page=@(Model.CurrentPage + 1)&status=@Model.FilterStatus&channel=@Model.FilterChannel&search=@Model.SearchTerm" class="px-3 py-2 text-sm font-medium text-gray-500 bg-white border border-gray-300 rounded-lg hover:bg-gray-100 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700">
                            Next <i class="fas fa-chevron-right ms-1"></i>
                        </a>
                    }
                </div>
            }
        }
    </div>
</div>

@section Scripts {
    <script>
        async function syncMessages() {
            try {
                const response = await fetch('/api/inbox/sync', { method: 'POST' });
                if (response.ok) {
                    location.reload();
                } else {
                    alert('Failed to sync messages');
                }
            } catch (error) {
                console.error('Error syncing messages:', error);
                alert('Failed to sync messages');
            }
        }
    </script>
}
