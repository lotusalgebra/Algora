@page "/upsell/affinities"
@model Algora.Web.Pages.Upsell.Affinities.IndexModel
@{
    ViewData["Title"] = "Product Affinities";
}

<div class="p-4">
    <!-- Summary Cards -->
    <div class="grid grid-cols-1 sm:grid-cols-2 xl:grid-cols-4 gap-4 mb-6">
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-4">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Total Affinities</p>
                    <h3 class="text-2xl font-bold text-indigo-600 dark:text-indigo-400">@Model.Summary.TotalAffinities</h3>
                </div>
                <div class="w-12 h-12 rounded-lg bg-gradient-to-br from-indigo-600 to-purple-400 flex items-center justify-center">
                    <i class="fas fa-link text-white text-lg"></i>
                </div>
            </div>
        </div>

        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-4">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Strong Affinities</p>
                    <h3 class="text-2xl font-bold text-green-600 dark:text-green-400">@Model.Summary.StrongAffinities</h3>
                </div>
                <div class="w-12 h-12 rounded-lg bg-gradient-to-br from-green-500 to-lime-400 flex items-center justify-center">
                    <i class="fas fa-star text-white text-lg"></i>
                </div>
            </div>
        </div>

        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-4">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Avg. Confidence</p>
                    <h3 class="text-2xl font-bold text-gray-900 dark:text-white">@Model.Summary.AverageConfidence.ToString("P1")</h3>
                </div>
                <div class="w-12 h-12 rounded-lg bg-gradient-to-br from-blue-500 to-cyan-400 flex items-center justify-center">
                    <i class="fas fa-percentage text-white text-lg"></i>
                </div>
            </div>
        </div>

        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-4">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Last Calculated</p>
                    <h3 class="text-lg font-bold text-gray-900 dark:text-white">
                        @(Model.Summary.LastCalculated?.ToString("MMM dd, HH:mm") ?? "Never")
                    </h3>
                </div>
                <div class="w-12 h-12 rounded-lg bg-gradient-to-br from-gray-400 to-gray-600 flex items-center justify-center">
                    <i class="fas fa-clock text-white text-lg"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Affinities Table -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md mb-6">
        <!-- Header -->
        <div class="p-6 border-b border-gray-200 dark:border-gray-700">
            <div class="flex flex-wrap items-center justify-between">
                <div>
                    <h1 class="text-xl font-bold text-gray-900 dark:text-white">Product Affinities</h1>
                    <p class="text-sm text-gray-500 dark:text-gray-400">
                        <i class="fa fa-link text-indigo-500 me-1"></i>
                        Products frequently purchased together
                    </p>
                </div>
                <div class="flex items-center gap-2">
                    <a href="/upsell" class="inline-flex items-center px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-100 dark:bg-gray-800 dark:text-white dark:border-gray-600 dark:hover:bg-gray-700">
                        <i class="fas fa-arrow-left me-2"></i> Back
                    </a>
                    <form method="post" asp-page-handler="Recalculate" class="inline">
                        <button type="submit" class="inline-flex items-center px-4 py-2 text-sm font-medium text-white bg-gradient-to-br from-orange-500 to-yellow-400 hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-orange-300 rounded-lg dark:focus:ring-orange-800">
                            <i class="fas fa-sync-alt me-2"></i> Recalculate
                        </button>
                    </form>
                </div>
            </div>
        </div>

        @if (!string.IsNullOrEmpty(Model.SuccessMessage))
        {
            <div class="mx-6 mt-4 p-4 text-sm text-green-800 rounded-lg bg-green-50 dark:bg-gray-700 dark:text-green-400" role="alert">
                <i class="fas fa-check-circle me-2"></i>
                @Model.SuccessMessage
            </div>
        }

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="mx-6 mt-4 p-4 text-sm text-red-800 rounded-lg bg-red-50 dark:bg-gray-700 dark:text-red-400" role="alert">
                <i class="fas fa-exclamation-triangle me-2"></i>
                @Model.ErrorMessage
            </div>
        }

        <!-- Search Bar -->
        <div class="px-6 pt-4">
            <div class="flex flex-wrap items-center justify-between gap-4">
                <div class="relative">
                    <input type="text" id="search-input" placeholder="Search products..."
                        class="pl-10 pr-4 py-2 text-sm border border-gray-300 rounded-lg focus:ring-purple-500 focus:border-purple-500 dark:bg-gray-700 dark:border-gray-600 dark:text-white w-64">
                    <i class="fas fa-search absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
                </div>
                <div class="flex items-center gap-2">
                    <span class="text-sm text-gray-500 dark:text-gray-400">Show</span>
                    <select id="per-page" class="py-1 px-2 text-sm border border-gray-300 rounded-lg focus:ring-purple-500 focus:border-purple-500 dark:bg-gray-700 dark:border-gray-600 dark:text-white">
                        <option value="10">10</option>
                        <option value="25" selected>25</option>
                        <option value="50">50</option>
                        <option value="100">100</option>
                    </select>
                    <span class="text-sm text-gray-500 dark:text-gray-400">per page</span>
                </div>
            </div>
        </div>

        <div class="p-6">
            <!-- Loading Spinner -->
            <div id="loading-spinner" class="text-center py-12">
                <div class="inline-block animate-spin rounded-full h-8 w-8 border-b-2 border-indigo-500"></div>
                <p class="text-gray-500 dark:text-gray-400 mt-2">Loading affinities...</p>
            </div>

            <!-- Empty State -->
            <div id="empty-state" class="text-center py-12 hidden">
                <i class="fas fa-link fa-4x text-gray-300 mb-4"></i>
                <p class="text-gray-500 dark:text-gray-400 mb-4">No product affinities calculated yet. Click "Recalculate" to analyze your order history.</p>
            </div>

            <!-- Table -->
            <div class="overflow-x-auto" id="table-container" style="display: none;">
                <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400" id="affinities-list">
                    <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                        <tr>
                            <th scope="col" class="px-6 py-3 cursor-pointer" data-sort="0">Source Product <i class="fas fa-sort ms-1 text-xs"></i></th>
                            <th scope="col" class="px-6 py-3">Related Product</th>
                            <th scope="col" class="px-6 py-3 text-center">Support</th>
                            <th scope="col" class="px-6 py-3 text-center cursor-pointer" data-sort="3">Confidence <i class="fas fa-sort ms-1 text-xs"></i></th>
                            <th scope="col" class="px-6 py-3 text-center cursor-pointer" data-sort="4">Lift <i class="fas fa-sort ms-1 text-xs"></i></th>
                            <th scope="col" class="px-6 py-3 text-center cursor-pointer" data-sort="5">Co-occurrences <i class="fas fa-sort ms-1 text-xs"></i></th>
                            <th scope="col" class="px-6 py-3 text-center">Strength</th>
                        </tr>
                    </thead>
                    <tbody id="table-body"></tbody>
                </table>
            </div>

            <!-- Pagination -->
            <div id="pagination-container" class="pt-4 border-t border-gray-200 dark:border-gray-700 mt-4" style="display: none;">
                <div class="flex flex-wrap items-center justify-between gap-4">
                    <div class="text-sm text-gray-500 dark:text-gray-400">
                        Showing <span id="showing-start">0</span> to <span id="showing-end">0</span> of <span id="total-filtered">0</span> affinities
                    </div>
                    <div class="flex items-center gap-2">
                        <button id="prev-btn" class="px-3 py-1.5 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 disabled:opacity-50 disabled:cursor-not-allowed dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600 dark:hover:bg-gray-700">
                            <i class="fas fa-chevron-left me-1"></i> Previous
                        </button>
                        <div id="page-numbers" class="flex gap-1"></div>
                        <button id="next-btn" class="px-3 py-1.5 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 disabled:opacity-50 disabled:cursor-not-allowed dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600 dark:hover:bg-gray-700">
                            Next <i class="fas fa-chevron-right ms-1"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- How It Works -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6">
        <h6 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Understanding Affinity Metrics</h6>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <div>
                <h6 class="text-sm font-semibold text-gray-900 dark:text-white mb-2">Support</h6>
                <p class="text-sm text-gray-500 dark:text-gray-400">
                    The proportion of orders containing both products. Higher support means the pair appears more frequently.
                </p>
            </div>
            <div>
                <h6 class="text-sm font-semibold text-gray-900 dark:text-white mb-2">Confidence</h6>
                <p class="text-sm text-gray-500 dark:text-gray-400">
                    Given the source product was purchased, the probability the related product was also purchased. Higher is better.
                </p>
            </div>
            <div>
                <h6 class="text-sm font-semibold text-gray-900 dark:text-white mb-2">Lift</h6>
                <p class="text-sm text-gray-500 dark:text-gray-400">
                    How much more likely the pair appears together vs. independently. Lift > 1 indicates positive correlation.
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        (function() {
            let currentPage = 1;
            let perPage = 25;
            let totalRecords = 0;
            let totalFiltered = 0;
            let sortColumn = 4;
            let sortDirection = 'desc';
            let searchTimeout = null;
            let drawCounter = 0;

            const searchInput = document.getElementById('search-input');
            const perPageSelect = document.getElementById('per-page');
            const tableBody = document.getElementById('table-body');
            const loadingSpinner = document.getElementById('loading-spinner');
            const emptyState = document.getElementById('empty-state');
            const tableContainer = document.getElementById('table-container');
            const paginationContainer = document.getElementById('pagination-container');

            function loadData() {
                loadingSpinner.style.display = 'block';
                emptyState.classList.add('hidden');
                tableContainer.style.display = 'none';
                paginationContainer.style.display = 'none';

                drawCounter++;
                const params = new URLSearchParams({
                    handler: 'Data',
                    draw: drawCounter,
                    start: (currentPage - 1) * perPage,
                    length: perPage,
                    search: searchInput.value,
                    sortColumn: sortColumn,
                    sortDirection: sortDirection
                });

                fetch(`/upsell/affinities?${params}`)
                    .then(response => response.json())
                    .then(data => {
                        if (data.draw !== drawCounter) return;

                        totalRecords = data.recordsTotal;
                        totalFiltered = data.recordsFiltered;

                        loadingSpinner.style.display = 'none';

                        if (data.data.length === 0) {
                            emptyState.classList.remove('hidden');
                            return;
                        }

                        tableContainer.style.display = 'block';
                        paginationContainer.style.display = 'block';
                        renderTable(data.data);
                        updatePagination();
                    })
                    .catch(error => {
                        console.error('Error:', error);
                        loadingSpinner.style.display = 'none';
                        emptyState.classList.remove('hidden');
                    });
            }

            function renderTable(data) {
                tableBody.innerHTML = data.map(a => {
                    const confidenceClass = a.confidenceValue >= 0.3 ? 'text-green-600' : a.confidenceValue >= 0.15 ? 'text-yellow-600' : 'text-gray-500';
                    const liftClass = a.liftValue >= 1.5 ? 'text-green-600' : a.liftValue >= 1.0 ? 'text-yellow-600' : 'text-red-600';
                    const strengthBadge = a.strengthText === 'Strong'
                        ? 'bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-300'
                        : a.strengthText === 'Medium'
                        ? 'bg-yellow-100 text-yellow-800 dark:bg-yellow-900 dark:text-yellow-300'
                        : 'bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-300';

                    return `
                    <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-700">
                        <td class="px-6 py-4">
                            <div>
                                <p class="font-medium text-gray-900 dark:text-white">${escapeHtml(a.sourceProductTitle)}</p>
                                <p class="text-xs text-gray-500 dark:text-gray-400">ID: ${a.sourceProductId}</p>
                            </div>
                        </td>
                        <td class="px-6 py-4">
                            <div>
                                <p class="font-medium text-gray-900 dark:text-white">${escapeHtml(a.relatedProductTitle)}</p>
                                <p class="text-xs text-gray-500 dark:text-gray-400">ID: ${a.relatedProductId}</p>
                            </div>
                        </td>
                        <td class="px-6 py-4 text-center">
                            <span class="font-semibold text-gray-900 dark:text-white">${a.support}</span>
                        </td>
                        <td class="px-6 py-4 text-center">
                            <span class="font-semibold ${confidenceClass}">${a.confidence}</span>
                        </td>
                        <td class="px-6 py-4 text-center">
                            <span class="font-semibold ${liftClass}">${a.lift}x</span>
                        </td>
                        <td class="px-6 py-4 text-center">
                            <span class="font-semibold text-gray-900 dark:text-white">${a.coOccurrences}</span>
                        </td>
                        <td class="px-6 py-4 text-center">
                            <span class="${strengthBadge} text-xs font-medium px-2.5 py-0.5 rounded">${a.strengthText}</span>
                        </td>
                    </tr>
                `}).join('');
            }

            function updatePagination() {
                const totalPages = Math.ceil(totalFiltered / perPage);
                const start = Math.min((currentPage - 1) * perPage + 1, totalFiltered);
                const end = Math.min(currentPage * perPage, totalFiltered);

                document.getElementById('showing-start').textContent = totalFiltered > 0 ? start : 0;
                document.getElementById('showing-end').textContent = end;
                document.getElementById('total-filtered').textContent = totalFiltered;

                document.getElementById('prev-btn').disabled = currentPage === 1;
                document.getElementById('next-btn').disabled = currentPage >= totalPages;

                const pageNumbers = document.getElementById('page-numbers');
                pageNumbers.innerHTML = '';

                let startPage = Math.max(1, currentPage - 2);
                let endPage = Math.min(totalPages, startPage + 4);
                if (endPage - startPage < 4) startPage = Math.max(1, endPage - 4);

                for (let i = startPage; i <= endPage; i++) {
                    const btn = document.createElement('button');
                    btn.textContent = i;
                    btn.className = i === currentPage
                        ? 'px-3 py-1.5 text-sm font-medium text-white bg-gradient-to-br from-purple-600 to-pink-500 rounded-lg'
                        : 'px-3 py-1.5 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600';
                    btn.onclick = () => { currentPage = i; loadData(); };
                    pageNumbers.appendChild(btn);
                }
            }

            function escapeHtml(text) {
                if (!text) return '';
                const div = document.createElement('div');
                div.textContent = text;
                return div.innerHTML;
            }

            searchInput.addEventListener('input', function() {
                clearTimeout(searchTimeout);
                searchTimeout = setTimeout(() => { currentPage = 1; loadData(); }, 300);
            });

            perPageSelect.addEventListener('change', function() {
                perPage = parseInt(this.value);
                currentPage = 1;
                loadData();
            });

            document.getElementById('prev-btn').addEventListener('click', function() {
                if (currentPage > 1) { currentPage--; loadData(); }
            });

            document.getElementById('next-btn').addEventListener('click', function() {
                if (currentPage < Math.ceil(totalFiltered / perPage)) { currentPage++; loadData(); }
            });

            document.querySelectorAll('[data-sort]').forEach(header => {
                header.addEventListener('click', function() {
                    const col = parseInt(this.dataset.sort);
                    if (sortColumn === col) {
                        sortDirection = sortDirection === 'asc' ? 'desc' : 'asc';
                    } else {
                        sortColumn = col;
                        sortDirection = 'asc';
                    }
                    document.querySelectorAll('[data-sort] i').forEach(icon => icon.className = 'fas fa-sort ms-1 text-xs');
                    this.querySelector('i').className = `fas fa-sort-${sortDirection === 'asc' ? 'up' : 'down'} ms-1 text-xs`;
                    loadData();
                });
            });

            loadData();
        })();
    </script>
}
