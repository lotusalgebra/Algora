@page "/upsell/offers/edit/{id:int}"
@model Algora.Web.Pages.Upsell.Offers.EditModel
@{
    ViewData["Title"] = "Edit Upsell Offer";
}

<div class="w-full px-6 py-6 mx-auto">
    <div class="flex flex-wrap -mx-3">
        <div class="flex-none w-full max-w-full px-3">
            <div class="relative flex flex-col min-w-0 mb-6 break-words bg-white border-0 shadow-soft-xl rounded-2xl bg-clip-border dark:bg-gray-950 dark:shadow-soft-dark-xl">
                <div class="p-6 pb-0 mb-0 border-b-0 rounded-t-2xl">
                    <div class="flex flex-wrap items-center justify-between">
                        <div>
                            <h6 class="mb-0 dark:text-white">Edit Upsell Offer</h6>
                            <p class="mb-0 text-sm leading-normal dark:text-white dark:opacity-60">
                                Update your upsell offer configuration
                            </p>
                        </div>
                        <a href="/upsell/offers" class="inline-block px-4 py-2 text-xs font-bold text-center uppercase align-middle transition-all border border-gray-300 rounded-lg cursor-pointer text-slate-500 hover:bg-gray-100 dark:text-white dark:border-white/40">
                            <i class="fas fa-arrow-left me-2"></i> Back
                        </a>
                    </div>
                </div>

                @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                {
                    <div class="mx-6 mt-4 p-4 text-sm text-red-700 bg-red-100 rounded-lg dark:bg-red-200 dark:text-red-800" role="alert">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        @Model.ErrorMessage
                    </div>
                }

                <div class="flex-auto p-6">
                    <form method="post">
                        <input type="hidden" asp-for="Id" />

                        <!-- Stats Row -->
                        @if (Model.Offer != null)
                        {
                            <div class="grid grid-cols-4 gap-4 mb-6 p-4 bg-gray-50 rounded-lg dark:bg-gray-800">
                                <div class="text-center">
                                    <p class="text-xs text-gray-500 dark:text-gray-400">Impressions</p>
                                    <p class="text-lg font-bold text-gray-900 dark:text-white">@Model.Offer.Impressions</p>
                                </div>
                                <div class="text-center">
                                    <p class="text-xs text-gray-500 dark:text-gray-400">Clicks</p>
                                    <p class="text-lg font-bold text-gray-900 dark:text-white">@Model.Offer.Clicks</p>
                                </div>
                                <div class="text-center">
                                    <p class="text-xs text-gray-500 dark:text-gray-400">Conversions</p>
                                    <p class="text-lg font-bold text-green-600">@Model.Offer.Conversions</p>
                                </div>
                                <div class="text-center">
                                    <p class="text-xs text-gray-500 dark:text-gray-400">Revenue</p>
                                    <p class="text-lg font-bold text-emerald-600">$@Model.Offer.Revenue.ToString("N2")</p>
                                </div>
                            </div>
                        }

                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            <!-- Left Column -->
                            <div class="space-y-6">
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 dark:text-white mb-2">Recommended Product ID *</label>
                                    <input type="number" asp-for="Input.RecommendedProductId" class="block w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:ring-indigo-500 focus:border-indigo-500 dark:bg-gray-800 dark:border-gray-600 dark:text-white" required />
                                </div>

                                <div>
                                    <label class="block text-sm font-medium text-gray-700 dark:text-white mb-2">Recommended Variant ID</label>
                                    <input type="number" asp-for="Input.RecommendedVariantId" class="block w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:ring-indigo-500 focus:border-indigo-500 dark:bg-gray-800 dark:border-gray-600 dark:text-white" />
                                </div>

                                <div>
                                    <label class="block text-sm font-medium text-gray-700 dark:text-white mb-2">Trigger Product IDs</label>
                                    <input type="text" asp-for="TriggerProductIdsText" class="block w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:ring-indigo-500 focus:border-indigo-500 dark:bg-gray-800 dark:border-gray-600 dark:text-white" placeholder="123456, 789012, ..." />
                                    <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">Comma-separated product IDs (leave empty for all)</p>
                                </div>

                                <div class="grid grid-cols-2 gap-4">
                                    <div>
                                        <label class="block text-sm font-medium text-gray-700 dark:text-white mb-2">Discount Type</label>
                                        <select asp-for="Input.DiscountType" class="block w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:ring-indigo-500 focus:border-indigo-500 dark:bg-gray-800 dark:border-gray-600 dark:text-white">
                                            <option value="">No Discount</option>
                                            <option value="percentage">Percentage</option>
                                            <option value="fixed">Fixed Amount</option>
                                        </select>
                                    </div>
                                    <div>
                                        <label class="block text-sm font-medium text-gray-700 dark:text-white mb-2">Discount Value</label>
                                        <input type="number" step="0.01" asp-for="Input.DiscountValue" class="block w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:ring-indigo-500 focus:border-indigo-500 dark:bg-gray-800 dark:border-gray-600 dark:text-white" />
                                    </div>
                                </div>

                                <div>
                                    <label class="block text-sm font-medium text-gray-700 dark:text-white mb-2">Discount Code</label>
                                    <input type="text" asp-for="Input.DiscountCode" class="block w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:ring-indigo-500 focus:border-indigo-500 dark:bg-gray-800 dark:border-gray-600 dark:text-white" />
                                </div>

                                <div>
                                    <label class="block text-sm font-medium text-gray-700 dark:text-white mb-2">Priority</label>
                                    <input type="number" asp-for="Input.Priority" class="block w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:ring-indigo-500 focus:border-indigo-500 dark:bg-gray-800 dark:border-gray-600 dark:text-white" />
                                </div>
                            </div>

                            <!-- Right Column -->
                            <div class="space-y-6">
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 dark:text-white mb-2">Headline</label>
                                    <input type="text" asp-for="Input.Headline" class="block w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:ring-indigo-500 focus:border-indigo-500 dark:bg-gray-800 dark:border-gray-600 dark:text-white" />
                                </div>

                                <div>
                                    <label class="block text-sm font-medium text-gray-700 dark:text-white mb-2">Body Text</label>
                                    <textarea asp-for="Input.BodyText" rows="3" class="block w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:ring-indigo-500 focus:border-indigo-500 dark:bg-gray-800 dark:border-gray-600 dark:text-white"></textarea>
                                </div>

                                <div>
                                    <label class="block text-sm font-medium text-gray-700 dark:text-white mb-2">Button Text</label>
                                    <input type="text" asp-for="Input.ButtonText" class="block w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:ring-indigo-500 focus:border-indigo-500 dark:bg-gray-800 dark:border-gray-600 dark:text-white" />
                                </div>

                                <div class="grid grid-cols-2 gap-4">
                                    <div>
                                        <label class="block text-sm font-medium text-gray-700 dark:text-white mb-2">Start Date</label>
                                        <input type="datetime-local" asp-for="Input.StartDate" class="block w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:ring-indigo-500 focus:border-indigo-500 dark:bg-gray-800 dark:border-gray-600 dark:text-white" />
                                    </div>
                                    <div>
                                        <label class="block text-sm font-medium text-gray-700 dark:text-white mb-2">End Date</label>
                                        <input type="datetime-local" asp-for="Input.EndDate" class="block w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:ring-indigo-500 focus:border-indigo-500 dark:bg-gray-800 dark:border-gray-600 dark:text-white" />
                                    </div>
                                </div>

                                <div class="flex items-center">
                                    <input type="checkbox" asp-for="Input.IsActive" class="w-4 h-4 text-indigo-600 border-gray-300 rounded focus:ring-indigo-500" />
                                    <label class="ml-2 text-sm font-medium text-gray-700 dark:text-white">Active</label>
                                </div>
                            </div>
                        </div>

                        <div class="flex justify-end gap-4 mt-8 pt-6 border-t border-gray-200 dark:border-gray-700">
                            <a href="/upsell/offers" class="px-6 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 dark:bg-gray-800 dark:text-white dark:border-gray-600">
                                Cancel
                            </a>
                            <button type="submit" class="px-6 py-2 text-sm font-medium text-white bg-gradient-to-tl from-indigo-600 to-purple-400 rounded-lg shadow-soft-md hover:scale-102 active:opacity-85">
                                <i class="fas fa-save me-2"></i> Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
