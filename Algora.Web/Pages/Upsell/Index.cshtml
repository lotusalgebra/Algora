@page "/upsell"
@model Algora.Web.Pages.Upsell.IndexModel
@{
    ViewData["Title"] = "Post-Purchase Upsell";
}

@section css {
    <link rel="stylesheet" href="~/css/datatable.css" asp-append-version="true" />
}

<div class="p-4">
    <!-- Summary Cards -->
    <div class="grid grid-cols-1 sm:grid-cols-2 xl:grid-cols-4 gap-4 mb-6">
        <!-- Active Offers -->
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-4">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Active Offers</p>
                    <h3 class="text-2xl font-bold text-indigo-600 dark:text-indigo-400">@Model.Summary.ActiveOffers</h3>
                </div>
                <div class="w-12 h-12 rounded-lg bg-gradient-to-br from-indigo-600 to-purple-400 flex items-center justify-center">
                    <i class="fas fa-gift text-white text-lg"></i>
                </div>
            </div>
        </div>

        <!-- Running Experiments -->
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-4">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Running Experiments</p>
                    <h3 class="text-2xl font-bold text-blue-600 dark:text-blue-400">@Model.Summary.RunningExperiments</h3>
                </div>
                <div class="w-12 h-12 rounded-lg bg-gradient-to-br from-blue-600 to-cyan-400 flex items-center justify-center">
                    <i class="fas fa-flask text-white text-lg"></i>
                </div>
            </div>
        </div>

        <!-- Total Conversions -->
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-4">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Total Conversions</p>
                    <h3 class="text-2xl font-bold text-green-600 dark:text-green-400">@Model.Summary.TotalConversions</h3>
                </div>
                <div class="w-12 h-12 rounded-lg bg-gradient-to-br from-green-600 to-lime-400 flex items-center justify-center">
                    <i class="fas fa-shopping-cart text-white text-lg"></i>
                </div>
            </div>
        </div>

        <!-- Additional Revenue -->
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-4">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Upsell Revenue</p>
                    <h3 class="text-2xl font-bold text-emerald-600 dark:text-emerald-400">$@(Model.Summary.TotalRevenue.ToString("N2"))</h3>
                </div>
                <div class="w-12 h-12 rounded-lg bg-gradient-to-br from-emerald-500 to-teal-400 flex items-center justify-center">
                    <i class="fas fa-dollar-sign text-white text-lg"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md mb-6">
        <div class="p-6">
            <div class="flex flex-wrap items-center justify-between gap-4">
                <div>
                    <h6 class="text-lg font-semibold text-gray-900 dark:text-white">Quick Actions</h6>
                    <p class="text-sm text-gray-500 dark:text-gray-400">
                        Manage your post-purchase upsell offers and experiments
                    </p>
                </div>
                <div class="flex items-center gap-2 flex-wrap">
                    <a href="/upsell/offers" class="inline-flex items-center px-4 py-2 text-xs font-bold text-white uppercase bg-gradient-to-br from-indigo-600 to-purple-400 rounded-lg hover:opacity-90">
                        <i class="fas fa-gift me-2"></i> Manage Offers
                    </a>
                    <a href="/upsell/experiments" class="inline-flex items-center px-4 py-2 text-xs font-bold text-white uppercase bg-gradient-to-br from-blue-600 to-cyan-400 rounded-lg hover:opacity-90">
                        <i class="fas fa-flask me-2"></i> A/B Tests
                    </a>
                    <a href="/upsell/affinities" class="inline-flex items-center px-4 py-2 text-xs font-bold text-white uppercase bg-gradient-to-br from-orange-500 to-yellow-300 rounded-lg hover:opacity-90">
                        <i class="fas fa-link me-2"></i> Affinities
                    </a>
                    <a href="/upsell/settings" class="inline-flex items-center px-4 py-2 text-xs font-bold text-white uppercase bg-gradient-to-br from-gray-400 to-gray-600 rounded-lg hover:opacity-90">
                        <i class="fas fa-cog me-2"></i> Settings
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Offers Table -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md">
        <div class="p-6 pb-0">
            <div class="flex flex-wrap items-center justify-between">
                <div>
                    <h6 class="text-lg font-semibold text-gray-900 dark:text-white">Recent Offers</h6>
                    <p class="text-sm text-gray-500 dark:text-gray-400">
                        <i class="fa fa-gift text-indigo-500 me-1"></i>
                        <span class="font-semibold">@Model.RecentOffers.Count</span> active upsell offers
                    </p>
                </div>
                <a href="/upsell/offers/create" class="inline-flex items-center px-4 py-2 text-xs font-bold text-white uppercase bg-gradient-to-br from-green-600 to-lime-400 rounded-lg hover:opacity-90">
                    <i class="fas fa-plus me-2"></i> New Offer
                </a>
            </div>
        </div>

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="mx-6 mt-4 flex items-center p-4 text-sm text-red-800 rounded-lg bg-red-50 dark:bg-gray-800 dark:text-red-400" role="alert">
                <i class="fas fa-exclamation-triangle me-2"></i>
                @Model.ErrorMessage
            </div>
        }

        <div class="p-6 pt-4">
            @if (Model.RecentOffers.Count == 0)
            {
                <div class="text-center py-12">
                    <i class="fas fa-gift fa-4x text-gray-300 mb-4"></i>
                    <p class="text-gray-500 dark:text-gray-400 mb-4">No upsell offers yet. Create your first offer to start increasing revenue.</p>
                    <a href="/upsell/offers/create" class="inline-flex items-center px-6 py-3 text-sm font-bold text-white uppercase bg-gradient-to-br from-indigo-600 to-purple-400 rounded-lg hover:opacity-90">
                        <i class="fas fa-plus me-2"></i> Create First Offer
                    </a>
                </div>
            }
            else
            {
                <div class="relative overflow-x-auto">
                    <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
                        <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                            <tr>
                                <th scope="col" class="px-6 py-3">Product</th>
                                <th scope="col" class="px-6 py-3 text-center">Discount</th>
                                <th scope="col" class="px-6 py-3 text-center">Impressions</th>
                                <th scope="col" class="px-6 py-3 text-center">Clicks</th>
                                <th scope="col" class="px-6 py-3 text-center">Conversions</th>
                                <th scope="col" class="px-6 py-3 text-center">CTR</th>
                                <th scope="col" class="px-6 py-3 text-center">Status</th>
                                <th scope="col" class="px-6 py-3 text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var offer in Model.RecentOffers)
                            {
                                var ctr = offer.Impressions > 0 ? (decimal)offer.Clicks / offer.Impressions * 100 : 0;
                                <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-700">
                                    <td class="px-6 py-4">
                                        <div class="flex items-center">
                                            @if (!string.IsNullOrEmpty(offer.RecommendedProductImageUrl))
                                            {
                                                <img src="@offer.RecommendedProductImageUrl" class="w-9 h-9 rounded-lg object-cover me-3" alt="@offer.RecommendedProductTitle" />
                                            }
                                            <div>
                                                <p class="font-semibold text-gray-900 dark:text-white">@offer.RecommendedProductTitle</p>
                                                <p class="text-xs text-gray-500">$@(offer.RecommendedProductPrice.ToString("N2"))</p>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="px-6 py-4 text-center">
                                        @if (offer.DiscountType == "percentage" && offer.DiscountValue > 0)
                                        {
                                            <span class="font-semibold text-green-600">@offer.DiscountValue%</span>
                                        }
                                        else if (offer.DiscountType == "fixed" && offer.DiscountValue > 0)
                                        {
                                            <span class="font-semibold text-green-600">$@(offer.DiscountValue.Value.ToString("N2"))</span>
                                        }
                                        else
                                        {
                                            <span class="text-gray-400">-</span>
                                        }
                                    </td>
                                    <td class="px-6 py-4 text-center font-semibold text-gray-900 dark:text-white">@offer.Impressions</td>
                                    <td class="px-6 py-4 text-center font-semibold text-gray-900 dark:text-white">@offer.Clicks</td>
                                    <td class="px-6 py-4 text-center font-semibold text-green-600">@offer.Conversions</td>
                                    <td class="px-6 py-4 text-center">
                                        <span class="font-semibold @(ctr >= 5 ? "text-green-600" : ctr >= 2 ? "text-yellow-600" : "text-gray-400")">@ctr.ToString("N1")%</span>
                                    </td>
                                    <td class="px-6 py-4 text-center">
                                        @if (offer.IsActive)
                                        {
                                            <span class="bg-green-100 text-green-800 text-xs font-medium px-2.5 py-0.5 rounded dark:bg-green-900 dark:text-green-300">Active</span>
                                        }
                                        else
                                        {
                                            <span class="bg-gray-100 text-gray-800 text-xs font-medium px-2.5 py-0.5 rounded dark:bg-gray-700 dark:text-gray-300">Inactive</span>
                                        }
                                    </td>
                                    <td class="px-6 py-4 text-center">
                                        <a href="/upsell/offers/edit/@offer.Id" class="text-indigo-600 hover:text-indigo-800 dark:text-indigo-400">
                                            <i class="fas fa-edit"></i> Edit
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>
