@page "/upsell/experiments/details/{id:int}"
@model Algora.Web.Pages.Upsell.Experiments.DetailsModel
@{
    ViewData["Title"] = "Experiment Details";
}

<div class="p-4">
    @if (Model.Experiment == null)
    {
        <div class="text-center py-12">
            <i class="fas fa-exclamation-circle fa-4x text-gray-300 dark:text-gray-600 mb-4"></i>
            <p class="text-gray-500 dark:text-gray-400">Experiment not found.</p>
            <a href="/upsell/experiments" class="inline-flex items-center mt-4 px-5 py-2.5 text-sm font-medium text-white bg-gradient-to-br from-purple-600 to-pink-500 hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-purple-300 dark:focus:ring-purple-800 rounded-lg">
                <i class="fas fa-arrow-left me-2"></i> Back to Experiments
            </a>
        </div>
    }
    else
    {
        <!-- Header -->
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6 mb-6">
            <div class="flex flex-wrap items-center justify-between gap-4">
                <div>
                    <h4 class="mb-1 text-xl font-bold text-gray-900 dark:text-white">@Model.Experiment.Name</h4>
                    <p class="text-sm text-gray-500 dark:text-gray-400">@Model.Experiment.Description</p>
                </div>
                <div class="flex items-center gap-2">
                    @{
                        var statusBadge = Model.Experiment.Status switch
                        {
                            "running" => "bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-300",
                            "paused" => "bg-yellow-100 text-yellow-800 dark:bg-yellow-900 dark:text-yellow-300",
                            "completed" => "bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-300",
                            _ => "bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-300"
                        };
                    }
                    <span class="@statusBadge px-3 py-1.5 text-xs font-medium rounded-lg uppercase">
                        @Model.Experiment.Status
                    </span>
                    @if (Model.Experiment.Status == "running")
                    {
                        <form method="post" asp-page-handler="Pause" class="inline">
                            <button type="submit" class="px-4 py-2 text-sm font-medium text-white rounded-lg bg-yellow-500 hover:bg-yellow-600 focus:ring-4 focus:outline-none focus:ring-yellow-300 dark:focus:ring-yellow-800">
                                <i class="fas fa-pause me-1"></i> Pause
                            </button>
                        </form>
                    }
                    @if (Model.Experiment.Status == "running" || Model.Experiment.Status == "paused")
                    {
                        <form method="post" asp-page-handler="End" class="inline">
                            <button type="submit" class="px-4 py-2 text-sm font-medium text-white rounded-lg bg-red-600 hover:bg-red-700 focus:ring-4 focus:outline-none focus:ring-red-300 dark:focus:ring-red-800">
                                <i class="fas fa-stop me-1"></i> End
                            </button>
                        </form>
                    }
                    <a href="/upsell/experiments" class="text-gray-900 bg-white border border-gray-300 focus:outline-none hover:bg-gray-100 focus:ring-4 focus:ring-gray-200 font-medium rounded-lg text-sm px-4 py-2 dark:bg-gray-800 dark:text-white dark:border-gray-600 dark:hover:bg-gray-700 dark:focus:ring-gray-700">
                        <i class="fas fa-arrow-left me-1"></i> Back
                    </a>
                </div>
            </div>
        </div>

        @if (!string.IsNullOrEmpty(Model.SuccessMessage))
        {
            <div class="mb-6 p-4 text-sm text-green-700 bg-green-100 rounded-lg dark:bg-green-200 dark:text-green-800" role="alert">
                <i class="fas fa-check-circle me-2"></i>
                @Model.SuccessMessage
            </div>
        }

        <!-- Summary Stats -->
        <div class="grid grid-cols-1 sm:grid-cols-2 xl:grid-cols-4 gap-4 mb-6">
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-4">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Total Impressions</p>
                        <h5 class="text-xl font-bold text-gray-900 dark:text-white">@Model.Experiment.TotalImpressions.ToString("N0")</h5>
                    </div>
                    <div class="flex items-center justify-center w-12 h-12 rounded-lg bg-gradient-to-br from-blue-600 to-cyan-400">
                        <i class="fas fa-eye text-lg text-white"></i>
                    </div>
                </div>
            </div>

            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-4">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Total Conversions</p>
                        <h5 class="text-xl font-bold text-green-600">@Model.Experiment.TotalConversions</h5>
                    </div>
                    <div class="flex items-center justify-center w-12 h-12 rounded-lg bg-gradient-to-br from-green-600 to-lime-400">
                        <i class="fas fa-shopping-cart text-lg text-white"></i>
                    </div>
                </div>
            </div>

            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-4">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Statistical Significance</p>
                        <h5 class="text-xl font-bold @(Model.Experiment.IsStatisticallySignificant ? "text-green-600" : "text-gray-400")">
                            @(Model.Experiment.IsStatisticallySignificant ? "Yes" : "Not Yet")
                        </h5>
                    </div>
                    <div class="flex items-center justify-center w-12 h-12 rounded-lg @(Model.Experiment.IsStatisticallySignificant ? "bg-gradient-to-br from-green-600 to-lime-400" : "bg-gradient-to-br from-gray-400 to-gray-600")">
                        <i class="fas fa-chart-line text-lg text-white"></i>
                    </div>
                </div>
            </div>

            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-4">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Running Since</p>
                        <h5 class="text-lg font-bold text-gray-900 dark:text-white">
                            @(Model.Experiment.StartedAt?.ToString("MMM dd, yyyy") ?? "Not started")
                        </h5>
                    </div>
                    <div class="flex items-center justify-center w-12 h-12 rounded-lg bg-gradient-to-br from-purple-600 to-pink-500">
                        <i class="fas fa-calendar text-lg text-white"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- Variant Results -->
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md mb-6">
            <div class="p-6 border-b border-gray-200 dark:border-gray-700">
                <div class="flex items-center justify-between">
                    <h6 class="text-lg font-semibold text-gray-900 dark:text-white">Variant Performance</h6>
                    <form method="post" asp-page-handler="Recalculate" class="inline">
                        <button type="submit" class="text-sm font-medium text-purple-600 hover:text-purple-800 dark:text-purple-400 dark:hover:text-purple-300">
                            <i class="fas fa-sync-alt me-1"></i> Recalculate Stats
                        </button>
                    </form>
                </div>
            </div>

            <div class="p-6">
                <div class="space-y-6">
                    @foreach (var variant in Model.Experiment.VariantResults)
                            {
                                var isLeading = Model.Experiment.VariantResults.Count > 1 &&
                                    variant.ConversionRate == Model.Experiment.VariantResults.Max(v => v.ConversionRate);

                                <div class="border @(variant.IsWinner ? "border-green-500 bg-green-50 dark:bg-green-900/20" : isLeading ? "border-blue-300" : "border-gray-200") rounded-lg p-4 dark:border-gray-700">
                                    <div class="flex flex-wrap items-start justify-between gap-4 mb-4">
                                        <div>
                                            <div class="flex items-center gap-2">
                                                <h5 class="font-semibold text-gray-900 dark:text-white">@variant.VariantName</h5>
                                                @if (variant.IsWinner)
                                                {
                                                    <span class="bg-green-100 text-green-800 text-xs font-medium px-2.5 py-0.5 rounded dark:bg-green-900 dark:text-green-300">Winner</span>
                                                }
                                                @if (isLeading && !variant.IsWinner)
                                                {
                                                    <span class="bg-blue-100 text-blue-800 text-xs font-medium px-2.5 py-0.5 rounded dark:bg-blue-900 dark:text-blue-300">Leading</span>
                                                }
                                            </div>
                                            <p class="text-sm text-gray-500 dark:text-gray-400">@variant.OfferTitle</p>
                                        </div>
                                        @if (Model.Experiment.Status == "running" && !string.IsNullOrEmpty(Model.Experiment.WinningVariant) == false)
                                        {
                                            <form method="post" asp-page-handler="SelectWinner" asp-route-variant="@variant.VariantName" class="inline">
                                                <button type="submit" class="text-xs font-semibold text-green-600 hover:text-green-800 border border-green-300 rounded px-3 py-1 hover:bg-green-50">
                                                    <i class="fas fa-trophy me-1"></i> Select as Winner
                                                </button>
                                            </form>
                                        }
                                    </div>

                                    <div class="grid grid-cols-2 md:grid-cols-6 gap-4">
                                        <div class="text-center p-3 bg-gray-50 rounded dark:bg-gray-800">
                                            <p class="text-xs text-gray-500 dark:text-gray-400">Impressions</p>
                                            <p class="text-lg font-bold text-gray-900 dark:text-white">@variant.Impressions.ToString("N0")</p>
                                        </div>
                                        <div class="text-center p-3 bg-gray-50 rounded dark:bg-gray-800">
                                            <p class="text-xs text-gray-500 dark:text-gray-400">Clicks</p>
                                            <p class="text-lg font-bold text-gray-900 dark:text-white">@variant.Clicks.ToString("N0")</p>
                                        </div>
                                        <div class="text-center p-3 bg-gray-50 rounded dark:bg-gray-800">
                                            <p class="text-xs text-gray-500 dark:text-gray-400">Conversions</p>
                                            <p class="text-lg font-bold text-green-600">@variant.Conversions</p>
                                        </div>
                                        <div class="text-center p-3 bg-gray-50 rounded dark:bg-gray-800">
                                            <p class="text-xs text-gray-500 dark:text-gray-400">Conv. Rate</p>
                                            <p class="text-lg font-bold @(isLeading ? "text-green-600" : "text-gray-900 dark:text-white")">@variant.ConversionRate.ToString("P2")</p>
                                        </div>
                                        <div class="text-center p-3 bg-gray-50 rounded dark:bg-gray-800">
                                            <p class="text-xs text-gray-500 dark:text-gray-400">95% CI</p>
                                            <p class="text-sm font-semibold text-gray-700 dark:text-gray-300">
                                                @variant.ConfidenceIntervalLower.ToString("P1") - @variant.ConfidenceIntervalUpper.ToString("P1")
                                            </p>
                                        </div>
                                        <div class="text-center p-3 bg-gray-50 rounded dark:bg-gray-800">
                                            <p class="text-xs text-gray-500 dark:text-gray-400">Revenue</p>
                                            <p class="text-lg font-bold text-emerald-600">$@variant.Revenue.ToString("N2")</p>
                                        </div>
                                    </div>

                                    <!-- Conversion Rate Bar -->
                                    <div class="mt-4">
                                        <div class="w-full bg-gray-200 rounded-full h-2.5 dark:bg-gray-700">
                                            @{
                                                var maxRate = Model.Experiment.VariantResults.Max(v => v.ConversionRate);
                                                var barWidth = maxRate > 0 ? (variant.ConversionRate / maxRate * 100) : 0;
                                            }
                                            <div class="@(isLeading ? "bg-gradient-to-r from-green-500 to-lime-400" : "bg-gradient-to-r from-blue-500 to-cyan-400") h-2.5 rounded-full" style="width: @barWidth%"></div>
                                        </div>
                                    </div>
                                </div>
                    }
                </div>
            </div>
        </div>

        <!-- Experiment Settings -->
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md">
            <div class="p-6 border-b border-gray-200 dark:border-gray-700">
                <h6 class="text-lg font-semibold text-gray-900 dark:text-white">Experiment Settings</h6>
            </div>
            <div class="p-6">
                <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
                    <div>
                        <p class="text-xs text-gray-500 dark:text-gray-400">Traffic Percentage</p>
                        <p class="font-semibold text-gray-900 dark:text-white">@Model.Experiment.TrafficPercentage%</p>
                    </div>
                    <div>
                        <p class="text-xs text-gray-500 dark:text-gray-400">Min. Sample Size</p>
                        <p class="font-semibold text-gray-900 dark:text-white">@Model.Experiment.MinSampleSize per variant</p>
                    </div>
                    <div>
                        <p class="text-xs text-gray-500 dark:text-gray-400">Significance Level</p>
                        <p class="font-semibold text-gray-900 dark:text-white">@((1 - Model.Experiment.SignificanceLevel) * 100)% confidence</p>
                    </div>
                    <div>
                        <p class="text-xs text-gray-500 dark:text-gray-400">Auto-select Winner</p>
                        <p class="font-semibold text-gray-900 dark:text-white">@(Model.Experiment.AutoSelectWinner ? "Yes" : "No")</p>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
