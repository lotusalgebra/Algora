@page "/upsell/experiments/details/{id:int}"
@model Algora.Web.Pages.Upsell.Experiments.DetailsModel
@{
    ViewData["Title"] = "Experiment Details";
}

<div class="w-full px-6 py-6 mx-auto">
    @if (Model.Experiment == null)
    {
        <div class="text-center py-12">
            <i class="fas fa-exclamation-circle fa-4x text-gray-300 mb-4"></i>
            <p class="text-gray-500 dark:text-gray-400">Experiment not found.</p>
            <a href="/upsell/experiments" class="inline-block mt-4 px-6 py-2 text-sm font-medium text-white bg-gradient-to-tl from-blue-600 to-cyan-400 rounded-lg">
                Back to Experiments
            </a>
        </div>
    }
    else
    {
        <!-- Header -->
        <div class="flex flex-wrap -mx-3 mb-6">
            <div class="flex-none w-full max-w-full px-3">
                <div class="relative flex flex-col min-w-0 break-words bg-white border-0 shadow-soft-xl rounded-2xl bg-clip-border dark:bg-gray-950 dark:shadow-soft-dark-xl p-6">
                    <div class="flex flex-wrap items-center justify-between gap-4">
                        <div>
                            <h4 class="mb-1 text-xl font-bold dark:text-white">@Model.Experiment.Name</h4>
                            <p class="text-sm text-slate-400 dark:text-white dark:opacity-60">@Model.Experiment.Description</p>
                        </div>
                        <div class="flex items-center gap-2">
                            @{
                                var statusColor = Model.Experiment.Status switch
                                {
                                    "running" => "from-green-600 to-lime-400",
                                    "paused" => "from-yellow-500 to-amber-300",
                                    "completed" => "from-blue-600 to-cyan-400",
                                    _ => "from-gray-400 to-gray-600"
                                };
                            }
                            <span class="bg-gradient-to-tl @statusColor px-4 py-2 text-xs rounded-lg inline-block whitespace-nowrap text-center align-baseline font-bold uppercase leading-none text-white">
                                @Model.Experiment.Status
                            </span>
                            @if (Model.Experiment.Status == "running")
                            {
                                <form method="post" asp-page-handler="Pause" class="inline">
                                    <button type="submit" class="px-4 py-2 text-xs font-bold text-center text-white uppercase rounded-lg bg-gradient-to-tl from-yellow-500 to-amber-300">
                                        <i class="fas fa-pause me-1"></i> Pause
                                    </button>
                                </form>
                            }
                            @if (Model.Experiment.Status == "running" || Model.Experiment.Status == "paused")
                            {
                                <form method="post" asp-page-handler="End" class="inline">
                                    <button type="submit" class="px-4 py-2 text-xs font-bold text-center text-white uppercase rounded-lg bg-gradient-to-tl from-red-600 to-rose-400">
                                        <i class="fas fa-stop me-1"></i> End
                                    </button>
                                </form>
                            }
                            <a href="/upsell/experiments" class="px-4 py-2 text-xs font-bold text-center uppercase border border-gray-300 rounded-lg text-slate-500 hover:bg-gray-100 dark:text-white dark:border-white/40">
                                <i class="fas fa-arrow-left me-1"></i> Back
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        @if (!string.IsNullOrEmpty(Model.SuccessMessage))
        {
            <div class="mb-6 p-4 text-sm text-green-700 bg-green-100 rounded-lg dark:bg-green-200 dark:text-green-800" role="alert">
                <i class="fas fa-check-circle me-2"></i>
                @Model.SuccessMessage
            </div>
        }

        <!-- Summary Stats -->
        <div class="flex flex-wrap -mx-3 mb-6">
            <div class="w-full max-w-full px-3 mb-6 sm:w-1/2 xl:w-1/4">
                <div class="relative flex flex-col min-w-0 break-words bg-white shadow-soft-xl rounded-2xl bg-clip-border dark:bg-gray-950 dark:shadow-soft-dark-xl">
                    <div class="flex-auto p-4">
                        <div class="flex flex-row -mx-3">
                            <div class="flex-none w-2/3 max-w-full px-3">
                                <div>
                                    <p class="mb-0 font-sans text-sm font-semibold leading-normal dark:text-white dark:opacity-60">Total Impressions</p>
                                    <h5 class="mb-0 font-bold dark:text-white">@Model.Experiment.TotalImpressions.ToString("N0")</h5>
                                </div>
                            </div>
                            <div class="px-3 text-right basis-1/3">
                                <div class="inline-block w-12 h-12 text-center rounded-lg bg-gradient-to-tl from-blue-600 to-cyan-400">
                                    <i class="fas fa-eye text-lg relative top-3.5 text-white"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="w-full max-w-full px-3 mb-6 sm:w-1/2 xl:w-1/4">
                <div class="relative flex flex-col min-w-0 break-words bg-white shadow-soft-xl rounded-2xl bg-clip-border dark:bg-gray-950 dark:shadow-soft-dark-xl">
                    <div class="flex-auto p-4">
                        <div class="flex flex-row -mx-3">
                            <div class="flex-none w-2/3 max-w-full px-3">
                                <div>
                                    <p class="mb-0 font-sans text-sm font-semibold leading-normal dark:text-white dark:opacity-60">Total Conversions</p>
                                    <h5 class="mb-0 font-bold dark:text-white text-green-600">@Model.Experiment.TotalConversions</h5>
                                </div>
                            </div>
                            <div class="px-3 text-right basis-1/3">
                                <div class="inline-block w-12 h-12 text-center rounded-lg bg-gradient-to-tl from-green-600 to-lime-400">
                                    <i class="fas fa-shopping-cart text-lg relative top-3.5 text-white"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="w-full max-w-full px-3 mb-6 sm:w-1/2 xl:w-1/4">
                <div class="relative flex flex-col min-w-0 break-words bg-white shadow-soft-xl rounded-2xl bg-clip-border dark:bg-gray-950 dark:shadow-soft-dark-xl">
                    <div class="flex-auto p-4">
                        <div class="flex flex-row -mx-3">
                            <div class="flex-none w-2/3 max-w-full px-3">
                                <div>
                                    <p class="mb-0 font-sans text-sm font-semibold leading-normal dark:text-white dark:opacity-60">Statistical Significance</p>
                                    <h5 class="mb-0 font-bold @(Model.Experiment.IsStatisticallySignificant ? "text-green-600" : "text-gray-400")">
                                        @(Model.Experiment.IsStatisticallySignificant ? "Yes" : "Not Yet")
                                    </h5>
                                </div>
                            </div>
                            <div class="px-3 text-right basis-1/3">
                                <div class="inline-block w-12 h-12 text-center rounded-lg bg-gradient-to-tl @(Model.Experiment.IsStatisticallySignificant ? "from-green-600 to-lime-400" : "from-gray-400 to-gray-600")">
                                    <i class="fas fa-chart-line text-lg relative top-3.5 text-white"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="w-full max-w-full px-3 mb-6 sm:w-1/2 xl:w-1/4">
                <div class="relative flex flex-col min-w-0 break-words bg-white shadow-soft-xl rounded-2xl bg-clip-border dark:bg-gray-950 dark:shadow-soft-dark-xl">
                    <div class="flex-auto p-4">
                        <div class="flex flex-row -mx-3">
                            <div class="flex-none w-2/3 max-w-full px-3">
                                <div>
                                    <p class="mb-0 font-sans text-sm font-semibold leading-normal dark:text-white dark:opacity-60">Running Since</p>
                                    <h5 class="mb-0 font-bold dark:text-white text-sm">
                                        @(Model.Experiment.StartedAt?.ToString("MMM dd, yyyy") ?? "Not started")
                                    </h5>
                                </div>
                            </div>
                            <div class="px-3 text-right basis-1/3">
                                <div class="inline-block w-12 h-12 text-center rounded-lg bg-gradient-to-tl from-indigo-600 to-purple-400">
                                    <i class="fas fa-calendar text-lg relative top-3.5 text-white"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Variant Results -->
        <div class="flex flex-wrap -mx-3">
            <div class="flex-none w-full max-w-full px-3">
                <div class="relative flex flex-col min-w-0 mb-6 break-words bg-white border-0 shadow-soft-xl rounded-2xl bg-clip-border dark:bg-gray-950 dark:shadow-soft-dark-xl">
                    <div class="p-6 pb-0 mb-0 border-b-0 rounded-t-2xl">
                        <div class="flex items-center justify-between">
                            <h6 class="mb-0 dark:text-white">Variant Performance</h6>
                            <form method="post" asp-page-handler="Recalculate" class="inline">
                                <button type="submit" class="text-xs font-semibold text-blue-600 hover:text-blue-800">
                                    <i class="fas fa-sync-alt me-1"></i> Recalculate Stats
                                </button>
                            </form>
                        </div>
                    </div>

                    <div class="flex-auto p-6">
                        <div class="space-y-6">
                            @foreach (var variant in Model.Experiment.VariantResults)
                            {
                                var isLeading = Model.Experiment.VariantResults.Count > 1 &&
                                    variant.ConversionRate == Model.Experiment.VariantResults.Max(v => v.ConversionRate);

                                <div class="border @(variant.IsWinner ? "border-green-500 bg-green-50 dark:bg-green-900/20" : isLeading ? "border-blue-300" : "border-gray-200") rounded-lg p-4 dark:border-gray-700">
                                    <div class="flex flex-wrap items-start justify-between gap-4 mb-4">
                                        <div>
                                            <div class="flex items-center gap-2">
                                                <h5 class="font-semibold text-gray-900 dark:text-white">@variant.VariantName</h5>
                                                @if (variant.IsWinner)
                                                {
                                                    <span class="bg-green-100 text-green-800 text-xs font-medium px-2.5 py-0.5 rounded dark:bg-green-900 dark:text-green-300">Winner</span>
                                                }
                                                @if (isLeading && !variant.IsWinner)
                                                {
                                                    <span class="bg-blue-100 text-blue-800 text-xs font-medium px-2.5 py-0.5 rounded dark:bg-blue-900 dark:text-blue-300">Leading</span>
                                                }
                                            </div>
                                            <p class="text-sm text-gray-500 dark:text-gray-400">@variant.OfferTitle</p>
                                        </div>
                                        @if (Model.Experiment.Status == "running" && !string.IsNullOrEmpty(Model.Experiment.WinningVariant) == false)
                                        {
                                            <form method="post" asp-page-handler="SelectWinner" asp-route-variant="@variant.VariantName" class="inline">
                                                <button type="submit" class="text-xs font-semibold text-green-600 hover:text-green-800 border border-green-300 rounded px-3 py-1 hover:bg-green-50">
                                                    <i class="fas fa-trophy me-1"></i> Select as Winner
                                                </button>
                                            </form>
                                        }
                                    </div>

                                    <div class="grid grid-cols-2 md:grid-cols-6 gap-4">
                                        <div class="text-center p-3 bg-gray-50 rounded dark:bg-gray-800">
                                            <p class="text-xs text-gray-500 dark:text-gray-400">Impressions</p>
                                            <p class="text-lg font-bold text-gray-900 dark:text-white">@variant.Impressions.ToString("N0")</p>
                                        </div>
                                        <div class="text-center p-3 bg-gray-50 rounded dark:bg-gray-800">
                                            <p class="text-xs text-gray-500 dark:text-gray-400">Clicks</p>
                                            <p class="text-lg font-bold text-gray-900 dark:text-white">@variant.Clicks.ToString("N0")</p>
                                        </div>
                                        <div class="text-center p-3 bg-gray-50 rounded dark:bg-gray-800">
                                            <p class="text-xs text-gray-500 dark:text-gray-400">Conversions</p>
                                            <p class="text-lg font-bold text-green-600">@variant.Conversions</p>
                                        </div>
                                        <div class="text-center p-3 bg-gray-50 rounded dark:bg-gray-800">
                                            <p class="text-xs text-gray-500 dark:text-gray-400">Conv. Rate</p>
                                            <p class="text-lg font-bold @(isLeading ? "text-green-600" : "text-gray-900 dark:text-white")">@variant.ConversionRate.ToString("P2")</p>
                                        </div>
                                        <div class="text-center p-3 bg-gray-50 rounded dark:bg-gray-800">
                                            <p class="text-xs text-gray-500 dark:text-gray-400">95% CI</p>
                                            <p class="text-sm font-semibold text-gray-700 dark:text-gray-300">
                                                @variant.ConfidenceIntervalLower.ToString("P1") - @variant.ConfidenceIntervalUpper.ToString("P1")
                                            </p>
                                        </div>
                                        <div class="text-center p-3 bg-gray-50 rounded dark:bg-gray-800">
                                            <p class="text-xs text-gray-500 dark:text-gray-400">Revenue</p>
                                            <p class="text-lg font-bold text-emerald-600">$@variant.Revenue.ToString("N2")</p>
                                        </div>
                                    </div>

                                    <!-- Conversion Rate Bar -->
                                    <div class="mt-4">
                                        <div class="w-full bg-gray-200 rounded-full h-2.5 dark:bg-gray-700">
                                            @{
                                                var maxRate = Model.Experiment.VariantResults.Max(v => v.ConversionRate);
                                                var barWidth = maxRate > 0 ? (variant.ConversionRate / maxRate * 100) : 0;
                                            }
                                            <div class="@(isLeading ? "bg-gradient-to-r from-green-500 to-lime-400" : "bg-gradient-to-r from-blue-500 to-cyan-400") h-2.5 rounded-full" style="width: @barWidth%"></div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Experiment Settings -->
        <div class="flex flex-wrap -mx-3">
            <div class="flex-none w-full max-w-full px-3">
                <div class="relative flex flex-col min-w-0 mb-6 break-words bg-white border-0 shadow-soft-xl rounded-2xl bg-clip-border dark:bg-gray-950 dark:shadow-soft-dark-xl">
                    <div class="p-6 pb-0 mb-0 border-b-0 rounded-t-2xl">
                        <h6 class="mb-0 dark:text-white">Experiment Settings</h6>
                    </div>
                    <div class="flex-auto p-6">
                        <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
                            <div>
                                <p class="text-xs text-gray-500 dark:text-gray-400">Traffic Percentage</p>
                                <p class="font-semibold text-gray-900 dark:text-white">@Model.Experiment.TrafficPercentage%</p>
                            </div>
                            <div>
                                <p class="text-xs text-gray-500 dark:text-gray-400">Min. Sample Size</p>
                                <p class="font-semibold text-gray-900 dark:text-white">@Model.Experiment.MinSampleSize per variant</p>
                            </div>
                            <div>
                                <p class="text-xs text-gray-500 dark:text-gray-400">Significance Level</p>
                                <p class="font-semibold text-gray-900 dark:text-white">@((1 - Model.Experiment.SignificanceLevel) * 100)% confidence</p>
                            </div>
                            <div>
                                <p class="text-xs text-gray-500 dark:text-gray-400">Auto-select Winner</p>
                                <p class="font-semibold text-gray-900 dark:text-white">@(Model.Experiment.AutoSelectWinner ? "Yes" : "No")</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
