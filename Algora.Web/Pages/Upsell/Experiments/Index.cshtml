@page "/upsell/experiments"
@model Algora.Web.Pages.Upsell.Experiments.IndexModel
@{
    ViewData["Title"] = "A/B Experiments";
}

@section css {
    <link rel="stylesheet" href="~/css/datatable.css" asp-append-version="true" />
}

<div class="w-full px-6 py-6 mx-auto">
    <div class="flex flex-wrap -mx-3">
        <div class="flex-none w-full max-w-full px-3">
            <div class="relative flex flex-col min-w-0 mb-6 break-words bg-white border-0 shadow-soft-xl rounded-2xl bg-clip-border dark:bg-gray-950 dark:shadow-soft-dark-xl">
                <div class="p-6 pb-0 mb-0 border-b-0 rounded-t-2xl">
                    <div class="flex flex-wrap items-center justify-between">
                        <div>
                            <h6 class="mb-0 dark:text-white">A/B Experiments</h6>
                            <p class="mb-0 text-sm leading-normal dark:text-white dark:opacity-60">
                                <i class="fa fa-flask text-blue-500 me-1"></i>
                                <span class="font-semibold" id="total-count">0</span> experiments
                            </p>
                        </div>
                        <div class="flex items-center gap-2">
                            <a href="/upsell" class="inline-block px-4 py-2 text-xs font-bold text-center uppercase align-middle transition-all border border-gray-300 rounded-lg cursor-pointer text-slate-500 hover:bg-gray-100 dark:text-white dark:border-white/40">
                                <i class="fas fa-arrow-left me-2"></i> Back
                            </a>
                            <a href="/upsell/experiments/create" class="inline-block px-4 py-2 text-xs font-bold text-center text-white uppercase align-middle transition-all border-0 rounded-lg cursor-pointer ease-soft-in leading-pro tracking-tight-soft bg-gradient-to-tl from-blue-600 to-cyan-400 shadow-soft-md bg-150 bg-x-25 hover:scale-102 active:opacity-85">
                                <i class="fas fa-plus me-2"></i> New Experiment
                            </a>
                        </div>
                    </div>
                </div>

                @if (!string.IsNullOrEmpty(Model.SuccessMessage))
                {
                    <div class="mx-6 mt-4 p-4 text-sm text-green-700 bg-green-100 rounded-lg dark:bg-green-200 dark:text-green-800" role="alert">
                        <i class="fas fa-check-circle me-2"></i>
                        @Model.SuccessMessage
                    </div>
                }

                @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                {
                    <div class="mx-6 mt-4 p-4 text-sm text-red-700 bg-red-100 rounded-lg dark:bg-red-200 dark:text-red-800" role="alert">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        @Model.ErrorMessage
                    </div>
                }

                <!-- Search Bar -->
                <div class="px-6 pt-4">
                    <div class="flex flex-wrap items-center justify-between gap-4">
                        <div class="relative">
                            <input type="text" id="search-input" placeholder="Search experiments..."
                                class="pl-10 pr-4 py-2 text-sm border border-gray-300 rounded-lg focus:ring-fuchsia-500 focus:border-fuchsia-500 dark:bg-gray-800 dark:border-gray-600 dark:text-white w-64">
                            <i class="fas fa-search absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
                        </div>
                        <div class="flex items-center gap-2">
                            <span class="text-sm text-gray-500 dark:text-gray-400">Show</span>
                            <select id="per-page" class="py-1 px-2 text-sm border border-gray-300 rounded-lg focus:ring-fuchsia-500 focus:border-fuchsia-500 dark:bg-gray-800 dark:border-gray-600 dark:text-white">
                                <option value="10">10</option>
                                <option value="25" selected>25</option>
                                <option value="50">50</option>
                                <option value="100">100</option>
                            </select>
                            <span class="text-sm text-gray-500 dark:text-gray-400">per page</span>
                        </div>
                    </div>
                </div>

                <div class="flex-auto p-6 px-0 pb-0">
                    <!-- Loading Spinner -->
                    <div id="loading-spinner" class="text-center py-12">
                        <div class="inline-block animate-spin rounded-full h-8 w-8 border-b-2 border-blue-500"></div>
                        <p class="text-gray-500 dark:text-gray-400 mt-2">Loading experiments...</p>
                    </div>

                    <!-- Empty State -->
                    <div id="empty-state" class="text-center py-12 hidden">
                        <i class="fas fa-flask fa-4x text-gray-300 mb-4"></i>
                        <p class="text-gray-500 dark:text-gray-400 mb-4">No A/B experiments yet. Create your first experiment to optimize upsell performance.</p>
                        <a href="/upsell/experiments/create" class="inline-block px-6 py-3 text-sm font-bold text-center text-white uppercase align-middle transition-all border-0 rounded-lg cursor-pointer bg-gradient-to-tl from-blue-600 to-cyan-400 shadow-soft-md">
                            <i class="fas fa-plus me-2"></i> Create First Experiment
                        </a>
                    </div>

                    <!-- Table -->
                    <div class="overflow-x-auto" id="table-container" style="display: none;">
                        <table class="table items-center w-full mb-0 align-top border-gray-200 text-slate-500 dark:border-white/40" id="experiments-list">
                            <thead class="align-bottom">
                                <tr>
                                    <th class="px-6 py-3 font-bold text-left uppercase align-middle bg-transparent border-b border-gray-200 shadow-none text-xxs border-b-solid tracking-none whitespace-nowrap text-slate-400 opacity-70 dark:border-white/40 dark:text-white dark:opacity-80 cursor-pointer" data-sort="0">Experiment <i class="fas fa-sort ms-1 text-xxs"></i></th>
                                    <th class="px-6 py-3 font-bold text-center uppercase align-middle bg-transparent border-b border-gray-200 shadow-none text-xxs border-b-solid tracking-none whitespace-nowrap text-slate-400 opacity-70 dark:border-white/40 dark:text-white dark:opacity-80">Variants</th>
                                    <th class="px-6 py-3 font-bold text-center uppercase align-middle bg-transparent border-b border-gray-200 shadow-none text-xxs border-b-solid tracking-none whitespace-nowrap text-slate-400 opacity-70 dark:border-white/40 dark:text-white dark:opacity-80 cursor-pointer" data-sort="2">Impressions <i class="fas fa-sort ms-1 text-xxs"></i></th>
                                    <th class="px-6 py-3 font-bold text-center uppercase align-middle bg-transparent border-b border-gray-200 shadow-none text-xxs border-b-solid tracking-none whitespace-nowrap text-slate-400 opacity-70 dark:border-white/40 dark:text-white dark:opacity-80 cursor-pointer" data-sort="3">Conversions <i class="fas fa-sort ms-1 text-xxs"></i></th>
                                    <th class="px-6 py-3 font-bold text-center uppercase align-middle bg-transparent border-b border-gray-200 shadow-none text-xxs border-b-solid tracking-none whitespace-nowrap text-slate-400 opacity-70 dark:border-white/40 dark:text-white dark:opacity-80">Status</th>
                                    <th class="px-6 py-3 font-bold text-center uppercase align-middle bg-transparent border-b border-gray-200 shadow-none text-xxs border-b-solid tracking-none whitespace-nowrap text-slate-400 opacity-70 dark:border-white/40 dark:text-white dark:opacity-80">Significance</th>
                                    <th class="px-6 py-3 font-bold text-center uppercase align-middle bg-transparent border-b border-gray-200 shadow-none text-xxs border-b-solid tracking-none whitespace-nowrap text-slate-400 opacity-70 dark:border-white/40 dark:text-white dark:opacity-80">Actions</th>
                                </tr>
                            </thead>
                            <tbody id="table-body"></tbody>
                        </table>
                    </div>

                    <!-- Pagination -->
                    <div id="pagination-container" class="px-6 py-4 border-t border-gray-200 dark:border-white/10" style="display: none;">
                        <div class="flex flex-wrap items-center justify-between gap-4">
                            <div class="text-sm text-gray-500 dark:text-gray-400">
                                Showing <span id="showing-start">0</span> to <span id="showing-end">0</span> of <span id="total-filtered">0</span> experiments
                            </div>
                            <div class="flex items-center gap-2">
                                <button id="prev-btn" class="px-3 py-1.5 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 disabled:opacity-50 disabled:cursor-not-allowed dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600 dark:hover:bg-gray-700">
                                    <i class="fas fa-chevron-left me-1"></i> Previous
                                </button>
                                <div id="page-numbers" class="flex gap-1"></div>
                                <button id="next-btn" class="px-3 py-1.5 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 disabled:opacity-50 disabled:cursor-not-allowed dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600 dark:hover:bg-gray-700">
                                    Next <i class="fas fa-chevron-right ms-1"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        (function() {
            let currentPage = 1;
            let perPage = 25;
            let totalRecords = 0;
            let totalFiltered = 0;
            let sortColumn = 2;
            let sortDirection = 'desc';
            let searchTimeout = null;
            let drawCounter = 0;

            const searchInput = document.getElementById('search-input');
            const perPageSelect = document.getElementById('per-page');
            const tableBody = document.getElementById('table-body');
            const loadingSpinner = document.getElementById('loading-spinner');
            const emptyState = document.getElementById('empty-state');
            const tableContainer = document.getElementById('table-container');
            const paginationContainer = document.getElementById('pagination-container');

            function loadData() {
                loadingSpinner.style.display = 'block';
                emptyState.classList.add('hidden');
                tableContainer.style.display = 'none';
                paginationContainer.style.display = 'none';

                drawCounter++;
                const params = new URLSearchParams({
                    handler: 'Data',
                    draw: drawCounter,
                    start: (currentPage - 1) * perPage,
                    length: perPage,
                    search: searchInput.value,
                    sortColumn: sortColumn,
                    sortDirection: sortDirection
                });

                fetch(`/upsell/experiments?${params}`)
                    .then(response => response.json())
                    .then(data => {
                        if (data.draw !== drawCounter) return;

                        totalRecords = data.recordsTotal;
                        totalFiltered = data.recordsFiltered;
                        document.getElementById('total-count').textContent = totalRecords;

                        loadingSpinner.style.display = 'none';

                        if (data.data.length === 0) {
                            emptyState.classList.remove('hidden');
                            return;
                        }

                        tableContainer.style.display = 'block';
                        paginationContainer.style.display = 'block';
                        renderTable(data.data);
                        updatePagination();
                    })
                    .catch(error => {
                        console.error('Error:', error);
                        loadingSpinner.style.display = 'none';
                        emptyState.classList.remove('hidden');
                    });
            }

            function renderTable(data) {
                tableBody.innerHTML = data.map(e => `
                    <tr>
                        <td class="p-2 align-middle bg-transparent border-b whitespace-nowrap dark:border-white/40">
                            <div class="flex px-2 py-1">
                                <div class="flex flex-col justify-center">
                                    <h6 class="mb-0 text-sm leading-normal dark:text-white">${escapeHtml(e.name)}</h6>
                                    ${e.description ? `<p class="mb-0 text-xs leading-tight text-slate-400 dark:text-white dark:opacity-80 truncate max-w-xs">${escapeHtml(e.description)}</p>` : ''}
                                </div>
                            </div>
                        </td>
                        <td class="p-2 text-center align-middle bg-transparent border-b whitespace-nowrap dark:border-white/40">
                            <span class="text-sm font-semibold leading-tight dark:text-white">${e.variantCount}</span>
                        </td>
                        <td class="p-2 text-center align-middle bg-transparent border-b whitespace-nowrap dark:border-white/40">
                            <span class="text-sm font-semibold leading-tight dark:text-white">${e.totalImpressions}</span>
                        </td>
                        <td class="p-2 text-center align-middle bg-transparent border-b whitespace-nowrap dark:border-white/40">
                            <span class="text-sm font-semibold leading-tight text-green-600">${e.totalConversions}</span>
                        </td>
                        <td class="p-2 text-center align-middle bg-transparent border-b whitespace-nowrap dark:border-white/40">
                            <span class="bg-gradient-to-tl ${e.statusClass} px-2.5 text-xxs rounded-1.8 py-1.4 inline-block whitespace-nowrap text-center align-baseline font-bold uppercase leading-none text-white">${e.status}</span>
                        </td>
                        <td class="p-2 text-center align-middle bg-transparent border-b whitespace-nowrap dark:border-white/40">
                            ${e.isStatisticallySignificant
                                ? '<span class="text-sm font-semibold text-green-600"><i class="fas fa-check-circle me-1"></i> Yes</span>'
                                : '<span class="text-sm text-slate-400">Not yet</span>'}
                        </td>
                        <td class="p-2 text-center align-middle bg-transparent border-b whitespace-nowrap dark:border-white/40">
                            <div class="flex items-center justify-center gap-2">
                                <a href="/upsell/experiments/details/${e.id}" class="text-xs font-semibold leading-tight text-slate-400 dark:text-white dark:opacity-80 hover:text-blue-600" title="View Details">
                                    <i class="fas fa-chart-bar"></i>
                                </a>
                                ${e.status === 'draft' ? `
                                    <form method="post" action="/upsell/experiments?handler=Start&id=${e.id}" class="inline">
                                        <button type="submit" class="text-xs font-semibold leading-tight text-green-600 hover:text-green-800" title="Start">
                                            <i class="fas fa-play"></i>
                                        </button>
                                    </form>` : ''}
                                ${e.status === 'running' ? `
                                    <form method="post" action="/upsell/experiments?handler=Pause&id=${e.id}" class="inline">
                                        <button type="submit" class="text-xs font-semibold leading-tight text-yellow-600 hover:text-yellow-800" title="Pause">
                                            <i class="fas fa-pause"></i>
                                        </button>
                                    </form>` : ''}
                                ${e.status === 'paused' ? `
                                    <form method="post" action="/upsell/experiments?handler=Start&id=${e.id}" class="inline">
                                        <button type="submit" class="text-xs font-semibold leading-tight text-green-600 hover:text-green-800" title="Resume">
                                            <i class="fas fa-play"></i>
                                        </button>
                                    </form>` : ''}
                            </div>
                        </td>
                    </tr>
                `).join('');
            }

            function updatePagination() {
                const totalPages = Math.ceil(totalFiltered / perPage);
                const start = Math.min((currentPage - 1) * perPage + 1, totalFiltered);
                const end = Math.min(currentPage * perPage, totalFiltered);

                document.getElementById('showing-start').textContent = totalFiltered > 0 ? start : 0;
                document.getElementById('showing-end').textContent = end;
                document.getElementById('total-filtered').textContent = totalFiltered;

                document.getElementById('prev-btn').disabled = currentPage === 1;
                document.getElementById('next-btn').disabled = currentPage >= totalPages;

                const pageNumbers = document.getElementById('page-numbers');
                pageNumbers.innerHTML = '';

                let startPage = Math.max(1, currentPage - 2);
                let endPage = Math.min(totalPages, startPage + 4);
                if (endPage - startPage < 4) startPage = Math.max(1, endPage - 4);

                for (let i = startPage; i <= endPage; i++) {
                    const btn = document.createElement('button');
                    btn.textContent = i;
                    btn.className = i === currentPage
                        ? 'px-3 py-1.5 text-sm font-medium text-white bg-gradient-to-tl from-purple-700 to-pink-500 rounded-lg'
                        : 'px-3 py-1.5 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600';
                    btn.onclick = () => { currentPage = i; loadData(); };
                    pageNumbers.appendChild(btn);
                }
            }

            function escapeHtml(text) {
                if (!text) return '';
                const div = document.createElement('div');
                div.textContent = text;
                return div.innerHTML;
            }

            searchInput.addEventListener('input', function() {
                clearTimeout(searchTimeout);
                searchTimeout = setTimeout(() => { currentPage = 1; loadData(); }, 300);
            });

            perPageSelect.addEventListener('change', function() {
                perPage = parseInt(this.value);
                currentPage = 1;
                loadData();
            });

            document.getElementById('prev-btn').addEventListener('click', function() {
                if (currentPage > 1) { currentPage--; loadData(); }
            });

            document.getElementById('next-btn').addEventListener('click', function() {
                if (currentPage < Math.ceil(totalFiltered / perPage)) { currentPage++; loadData(); }
            });

            document.querySelectorAll('[data-sort]').forEach(header => {
                header.addEventListener('click', function() {
                    const col = parseInt(this.dataset.sort);
                    if (sortColumn === col) {
                        sortDirection = sortDirection === 'asc' ? 'desc' : 'asc';
                    } else {
                        sortColumn = col;
                        sortDirection = 'asc';
                    }
                    document.querySelectorAll('[data-sort] i').forEach(icon => icon.className = 'fas fa-sort ms-1 text-xxs');
                    this.querySelector('i').className = `fas fa-sort-${sortDirection === 'asc' ? 'up' : 'down'} ms-1 text-xxs`;
                    loadData();
                });
            });

            loadData();
        })();
    </script>
}
