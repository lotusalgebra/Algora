@page "/upsell/experiments/create"
@model Algora.Web.Pages.Upsell.Experiments.CreateModel
@{
    ViewData["Title"] = "Create A/B Experiment";
}

<div class="w-full px-6 py-6 mx-auto">
    <div class="flex flex-wrap -mx-3">
        <div class="flex-none w-full max-w-full px-3">
            <div class="relative flex flex-col min-w-0 mb-6 break-words bg-white border-0 shadow-soft-xl rounded-2xl bg-clip-border dark:bg-gray-950 dark:shadow-soft-dark-xl">
                <div class="p-6 pb-0 mb-0 border-b-0 rounded-t-2xl">
                    <div class="flex flex-wrap items-center justify-between">
                        <div>
                            <h6 class="mb-0 dark:text-white">Create A/B Experiment</h6>
                            <p class="mb-0 text-sm leading-normal dark:text-white dark:opacity-60">
                                Set up a new experiment to test different upsell offers
                            </p>
                        </div>
                        <a href="/upsell/experiments" class="inline-block px-4 py-2 text-xs font-bold text-center uppercase align-middle transition-all border border-gray-300 rounded-lg cursor-pointer text-slate-500 hover:bg-gray-100 dark:text-white dark:border-white/40">
                            <i class="fas fa-arrow-left me-2"></i> Back
                        </a>
                    </div>
                </div>

                @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                {
                    <div class="mx-6 mt-4 p-4 text-sm text-red-700 bg-red-100 rounded-lg dark:bg-red-200 dark:text-red-800" role="alert">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        @Model.ErrorMessage
                    </div>
                }

                <div class="flex-auto p-6">
                    <form method="post">
                        <div class="space-y-6">
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                                <div>
                                    <label class="mb-2 ml-1 font-bold text-xs text-slate-700 dark:text-white/80">Experiment Name *</label>
                                    <input type="text" asp-for="Input.Name" class="focus:shadow-soft-primary-outline dark:bg-gray-950 dark:placeholder:text-white/80 dark:text-white/80 text-sm leading-5.6 ease-soft block w-full appearance-none rounded-lg border border-solid border-gray-300 bg-white bg-clip-padding px-3 py-2 font-normal text-gray-700 outline-none transition-all placeholder:text-gray-500 focus:border-fuchsia-300 focus:outline-none" placeholder="e.g., Holiday Upsell Test" required />
                                </div>

                                <div>
                                    <label class="mb-2 ml-1 font-bold text-xs text-slate-700 dark:text-white/80">Traffic Percentage *</label>
                                    <input type="number" asp-for="Input.TrafficPercentage" min="1" max="100" class="focus:shadow-soft-primary-outline dark:bg-gray-950 dark:placeholder:text-white/80 dark:text-white/80 text-sm leading-5.6 ease-soft block w-full appearance-none rounded-lg border border-solid border-gray-300 bg-white bg-clip-padding px-3 py-2 font-normal text-gray-700 outline-none transition-all placeholder:text-gray-500 focus:border-fuchsia-300 focus:outline-none" value="100" required />
                                    <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">% of visitors to include in experiment</p>
                                </div>
                            </div>

                            <div>
                                <label class="mb-2 ml-1 font-bold text-xs text-slate-700 dark:text-white/80">Description</label>
                                <textarea asp-for="Input.Description" rows="2" class="focus:shadow-soft-primary-outline dark:bg-gray-950 dark:placeholder:text-white/80 dark:text-white/80 text-sm leading-5.6 ease-soft block w-full appearance-none rounded-lg border border-solid border-gray-300 bg-white bg-clip-padding px-3 py-2 font-normal text-gray-700 outline-none transition-all placeholder:text-gray-500 focus:border-fuchsia-300 focus:outline-none" placeholder="Describe the purpose of this experiment..."></textarea>
                            </div>

                            <!-- Variants Section -->
                            <div class="border border-gray-200 rounded-lg p-4 dark:border-gray-700">
                                <h4 class="text-sm font-semibold text-gray-900 dark:text-white mb-4">Experiment Variants</h4>
                                <p class="text-xs text-gray-500 dark:text-gray-400 mb-4">Select the offers to test against each other. Traffic will be split equally among variants.</p>

                                <div id="variants-container" class="space-y-3">
                                    <div class="variant-row flex items-center gap-4">
                                        <div class="flex-1">
                                            <label class="mb-2 ml-1 font-bold text-xs text-slate-700 dark:text-white/80">Variant A (Control)</label>
                                            <select name="OfferIds" class="focus:shadow-soft-primary-outline dark:bg-gray-950 dark:placeholder:text-white/80 dark:text-white/80 text-sm leading-5.6 ease-soft block w-full appearance-none rounded-lg border border-solid border-gray-300 bg-white bg-clip-padding px-3 py-2 font-normal text-gray-700 outline-none transition-all placeholder:text-gray-500 focus:border-fuchsia-300 focus:outline-none" required>
                                                <option value="">Select an offer...</option>
                                                @foreach (var offer in Model.AvailableOffers)
                                                {
                                                    <option value="@offer.Id">@offer.RecommendedProductTitle ($@offer.RecommendedProductPrice.ToString("N2"))</option>
                                                }
                                            </select>
                                        </div>
                                    </div>
                                    <div class="variant-row flex items-center gap-4">
                                        <div class="flex-1">
                                            <label class="mb-2 ml-1 font-bold text-xs text-slate-700 dark:text-white/80">Variant B (Treatment)</label>
                                            <select name="OfferIds" class="focus:shadow-soft-primary-outline dark:bg-gray-950 dark:placeholder:text-white/80 dark:text-white/80 text-sm leading-5.6 ease-soft block w-full appearance-none rounded-lg border border-solid border-gray-300 bg-white bg-clip-padding px-3 py-2 font-normal text-gray-700 outline-none transition-all placeholder:text-gray-500 focus:border-fuchsia-300 focus:outline-none" required>
                                                <option value="">Select an offer...</option>
                                                @foreach (var offer in Model.AvailableOffers)
                                                {
                                                    <option value="@offer.Id">@offer.RecommendedProductTitle ($@offer.RecommendedProductPrice.ToString("N2"))</option>
                                                }
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Statistical Settings -->
                            <div class="border border-gray-200 rounded-lg p-4 dark:border-gray-700">
                                <h4 class="text-sm font-semibold text-gray-900 dark:text-white mb-4">Statistical Settings</h4>

                                <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                                    <div>
                                        <label class="mb-2 ml-1 font-bold text-xs text-slate-700 dark:text-white/80">Min. Sample Size per Variant</label>
                                        <input type="number" asp-for="Input.MinSampleSize" class="focus:shadow-soft-primary-outline dark:bg-gray-950 dark:placeholder:text-white/80 dark:text-white/80 text-sm leading-5.6 ease-soft block w-full appearance-none rounded-lg border border-solid border-gray-300 bg-white bg-clip-padding px-3 py-2 font-normal text-gray-700 outline-none transition-all placeholder:text-gray-500 focus:border-fuchsia-300 focus:outline-none" value="100" />
                                    </div>
                                    <div>
                                        <label class="mb-2 ml-1 font-bold text-xs text-slate-700 dark:text-white/80">Significance Level (alpha)</label>
                                        <select asp-for="Input.SignificanceLevel" class="focus:shadow-soft-primary-outline dark:bg-gray-950 dark:placeholder:text-white/80 dark:text-white/80 text-sm leading-5.6 ease-soft block w-full appearance-none rounded-lg border border-solid border-gray-300 bg-white bg-clip-padding px-3 py-2 font-normal text-gray-700 outline-none transition-all placeholder:text-gray-500 focus:border-fuchsia-300 focus:outline-none">
                                            <option value="0.01">0.01 (99% confidence)</option>
                                            <option value="0.05" selected>0.05 (95% confidence)</option>
                                            <option value="0.10">0.10 (90% confidence)</option>
                                        </select>
                                    </div>
                                    <div>
                                        <label class="mb-2 ml-1 font-bold text-xs text-slate-700 dark:text-white/80">Auto-select Winner</label>
                                        <select asp-for="Input.AutoSelectWinner" class="focus:shadow-soft-primary-outline dark:bg-gray-950 dark:placeholder:text-white/80 dark:text-white/80 text-sm leading-5.6 ease-soft block w-full appearance-none rounded-lg border border-solid border-gray-300 bg-white bg-clip-padding px-3 py-2 font-normal text-gray-700 outline-none transition-all placeholder:text-gray-500 focus:border-fuchsia-300 focus:outline-none">
                                            <option value="true">Yes - when statistically significant</option>
                                            <option value="false">No - manual selection only</option>
                                        </select>
                                    </div>
                                </div>
                            </div>

                            <!-- Sample Size Calculator -->
                            <div class="bg-gray-50 dark:bg-gray-800 rounded-lg p-4">
                                <h4 class="text-sm font-semibold text-gray-900 dark:text-white mb-2">
                                    <i class="fas fa-calculator me-2"></i> Sample Size Calculator
                                </h4>
                                <p class="text-xs text-gray-500 dark:text-gray-400 mb-4">Estimate how many visitors you need to detect a meaningful difference.</p>

                                <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
                                    <div>
                                        <label class="mb-2 ml-1 font-bold text-xs text-slate-700 dark:text-white/80">Baseline Conversion Rate</label>
                                        <input type="number" step="0.01" id="calc-baseline" class="focus:shadow-soft-primary-outline dark:bg-gray-950 dark:placeholder:text-white/80 dark:text-white/80 text-sm leading-5.6 ease-soft block w-full appearance-none rounded-lg border border-solid border-gray-300 bg-white bg-clip-padding px-3 py-2 font-normal text-gray-700 outline-none transition-all placeholder:text-gray-500 focus:border-fuchsia-300 focus:outline-none" value="0.05" />
                                    </div>
                                    <div>
                                        <label class="mb-2 ml-1 font-bold text-xs text-slate-700 dark:text-white/80">Minimum Detectable Effect</label>
                                        <input type="number" step="0.01" id="calc-mde" class="focus:shadow-soft-primary-outline dark:bg-gray-950 dark:placeholder:text-white/80 dark:text-white/80 text-sm leading-5.6 ease-soft block w-full appearance-none rounded-lg border border-solid border-gray-300 bg-white bg-clip-padding px-3 py-2 font-normal text-gray-700 outline-none transition-all placeholder:text-gray-500 focus:border-fuchsia-300 focus:outline-none" value="0.20" />
                                    </div>
                                    <div>
                                        <label class="mb-2 ml-1 font-bold text-xs text-slate-700 dark:text-white/80">Statistical Power</label>
                                        <input type="number" step="0.01" id="calc-power" class="focus:shadow-soft-primary-outline dark:bg-gray-950 dark:placeholder:text-white/80 dark:text-white/80 text-sm leading-5.6 ease-soft block w-full appearance-none rounded-lg border border-solid border-gray-300 bg-white bg-clip-padding px-3 py-2 font-normal text-gray-700 outline-none transition-all placeholder:text-gray-500 focus:border-fuchsia-300 focus:outline-none" value="0.80" />
                                    </div>
                                    <div>
                                        <label class="mb-2 ml-1 font-bold text-xs text-slate-700 dark:text-white/80">Required per Variant</label>
                                        <input type="text" id="calc-result" class="focus:shadow-soft-primary-outline dark:bg-gray-950 dark:placeholder:text-white/80 dark:text-white/80 text-sm leading-5.6 ease-soft block w-full appearance-none rounded-lg border border-solid border-gray-300 bg-gray-100 bg-clip-padding px-3 py-2 font-normal text-gray-700 outline-none transition-all placeholder:text-gray-500 focus:border-fuchsia-300 focus:outline-none" readonly />
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="flex justify-end gap-4 mt-8 pt-6 border-t border-gray-200 dark:border-gray-700">
                            <a href="/upsell/experiments" class="px-6 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 dark:bg-gray-800 dark:text-white dark:border-gray-600">
                                Cancel
                            </a>
                            <button type="submit" class="px-6 py-2 text-sm font-medium text-white bg-gradient-to-tl from-blue-600 to-cyan-400 rounded-lg shadow-soft-md hover:scale-102 active:opacity-85">
                                <i class="fas fa-flask me-2"></i> Create Experiment
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Simple sample size calculator
        function calculateSampleSize() {
            const baseline = parseFloat(document.getElementById('calc-baseline').value) || 0.05;
            const mde = parseFloat(document.getElementById('calc-mde').value) || 0.20;
            const power = parseFloat(document.getElementById('calc-power').value) || 0.80;
            const alpha = 0.05;

            const p1 = baseline;
            const p2 = baseline * (1 + mde);
            const pBar = (p1 + p2) / 2;

            // Z-scores for two-tailed test
            const zAlpha = 1.96; // 95% confidence
            const zBeta = power >= 0.80 ? 0.84 : 0.67; // 80% or 67% power

            const numerator = 2 * Math.pow(zAlpha + zBeta, 2) * pBar * (1 - pBar);
            const denominator = Math.pow(p2 - p1, 2);

            const sampleSize = Math.ceil(numerator / denominator);
            document.getElementById('calc-result').value = sampleSize.toLocaleString();
        }

        document.getElementById('calc-baseline').addEventListener('input', calculateSampleSize);
        document.getElementById('calc-mde').addEventListener('input', calculateSampleSize);
        document.getElementById('calc-power').addEventListener('input', calculateSampleSize);

        // Initial calculation
        calculateSampleSize();
    </script>
}
