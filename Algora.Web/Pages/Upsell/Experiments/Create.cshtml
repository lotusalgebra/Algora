@page "/upsell/experiments/create"
@model Algora.Web.Pages.Upsell.Experiments.CreateModel
@{
    ViewData["Title"] = "Create A/B Experiment";
}

<div class="p-4">
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md">
        <!-- Header -->
        <div class="p-6 border-b border-gray-200 dark:border-gray-700">
            <div class="flex flex-wrap items-center justify-between">
                <div>
                    <h1 class="text-xl font-bold text-gray-900 dark:text-white">Create A/B Experiment</h1>
                    <p class="text-sm text-gray-500 dark:text-gray-400">
                        Set up a new experiment to test different upsell offers
                    </p>
                </div>
                <a href="/upsell/experiments" class="inline-flex items-center px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-100 dark:bg-gray-800 dark:text-white dark:border-gray-600 dark:hover:bg-gray-700">
                    <i class="fas fa-arrow-left me-2"></i> Back
                </a>
            </div>
        </div>

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="mx-6 mt-4 p-4 text-sm text-red-800 rounded-lg bg-red-50 dark:bg-gray-700 dark:text-red-400" role="alert">
                <i class="fas fa-exclamation-triangle me-2"></i>
                @Model.ErrorMessage
            </div>
        }

        <div class="p-6">
            <form method="post">
                <div class="space-y-6">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                            <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">Experiment Name *</label>
                            <input type="text" asp-for="Input.Name" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white" placeholder="e.g., Holiday Upsell Test" required />
                        </div>

                        <div>
                            <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">Traffic Percentage *</label>
                            <input type="number" asp-for="Input.TrafficPercentage" min="1" max="100" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white" value="100" required />
                            <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">% of visitors to include in experiment</p>
                        </div>
                    </div>

                    <div>
                        <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">Description</label>
                        <textarea asp-for="Input.Description" rows="2" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white" placeholder="Describe the purpose of this experiment..."></textarea>
                    </div>

                    <!-- Variants Section -->
                    <div class="border border-gray-200 rounded-lg p-4 dark:border-gray-700">
                        <h4 class="text-sm font-semibold text-gray-900 dark:text-white mb-4">Experiment Variants</h4>
                        <p class="text-xs text-gray-500 dark:text-gray-400 mb-4">Select the offers to test against each other. Traffic will be split equally among variants.</p>

                        <div id="variants-container" class="space-y-3">
                            <div class="variant-row flex items-center gap-4">
                                <div class="flex-1">
                                    <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">Variant A (Control)</label>
                                    <select name="OfferIds" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white" required>
                                        <option value="">Select an offer...</option>
                                        @foreach (var offer in Model.AvailableOffers)
                                        {
                                            <option value="@offer.Id">@offer.RecommendedProductTitle ($@offer.RecommendedProductPrice.ToString("N2"))</option>
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="variant-row flex items-center gap-4">
                                <div class="flex-1">
                                    <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">Variant B (Treatment)</label>
                                    <select name="OfferIds" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white" required>
                                        <option value="">Select an offer...</option>
                                        @foreach (var offer in Model.AvailableOffers)
                                        {
                                            <option value="@offer.Id">@offer.RecommendedProductTitle ($@offer.RecommendedProductPrice.ToString("N2"))</option>
                                        }
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Statistical Settings -->
                    <div class="border border-gray-200 rounded-lg p-4 dark:border-gray-700">
                        <h4 class="text-sm font-semibold text-gray-900 dark:text-white mb-4">Statistical Settings</h4>

                        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                            <div>
                                <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">Min. Sample Size per Variant</label>
                                <input type="number" asp-for="Input.MinSampleSize" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white" value="100" />
                            </div>
                            <div>
                                <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">Significance Level (alpha)</label>
                                <select asp-for="Input.SignificanceLevel" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white">
                                    <option value="0.01">0.01 (99% confidence)</option>
                                    <option value="0.05" selected>0.05 (95% confidence)</option>
                                    <option value="0.10">0.10 (90% confidence)</option>
                                </select>
                            </div>
                            <div>
                                <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">Auto-select Winner</label>
                                <select asp-for="Input.AutoSelectWinner" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white">
                                    <option value="true">Yes - when statistically significant</option>
                                    <option value="false">No - manual selection only</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <!-- Sample Size Calculator -->
                    <div class="bg-gray-50 dark:bg-gray-700 rounded-lg p-4">
                        <h4 class="text-sm font-semibold text-gray-900 dark:text-white mb-2">
                            <i class="fas fa-calculator me-2"></i> Sample Size Calculator
                        </h4>
                        <p class="text-xs text-gray-500 dark:text-gray-400 mb-4">Estimate how many visitors you need to detect a meaningful difference.</p>

                        <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
                            <div>
                                <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">Baseline Conversion Rate</label>
                                <input type="number" step="0.01" id="calc-baseline" class="bg-white border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:text-white" value="0.05" />
                            </div>
                            <div>
                                <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">Minimum Detectable Effect</label>
                                <input type="number" step="0.01" id="calc-mde" class="bg-white border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:text-white" value="0.20" />
                            </div>
                            <div>
                                <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">Statistical Power</label>
                                <input type="number" step="0.01" id="calc-power" class="bg-white border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:text-white" value="0.80" />
                            </div>
                            <div>
                                <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">Required per Variant</label>
                                <input type="text" id="calc-result" class="bg-gray-100 border border-gray-300 text-gray-900 text-sm rounded-lg block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:text-white" readonly />
                            </div>
                        </div>
                    </div>
                </div>

                <div class="flex justify-end gap-4 mt-8 pt-6 border-t border-gray-200 dark:border-gray-700">
                    <a href="/upsell/experiments" class="px-6 py-2.5 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 dark:bg-gray-800 dark:text-white dark:border-gray-600 dark:hover:bg-gray-700">
                        Cancel
                    </a>
                    <button type="submit" class="px-6 py-2.5 text-sm font-medium text-white bg-gradient-to-br from-blue-500 to-cyan-400 hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-blue-300 rounded-lg dark:focus:ring-blue-800">
                        <i class="fas fa-flask me-2"></i> Create Experiment
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Simple sample size calculator
        function calculateSampleSize() {
            const baseline = parseFloat(document.getElementById('calc-baseline').value) || 0.05;
            const mde = parseFloat(document.getElementById('calc-mde').value) || 0.20;
            const power = parseFloat(document.getElementById('calc-power').value) || 0.80;
            const alpha = 0.05;

            const p1 = baseline;
            const p2 = baseline * (1 + mde);
            const pBar = (p1 + p2) / 2;

            // Z-scores for two-tailed test
            const zAlpha = 1.96; // 95% confidence
            const zBeta = power >= 0.80 ? 0.84 : 0.67; // 80% or 67% power

            const numerator = 2 * Math.pow(zAlpha + zBeta, 2) * pBar * (1 - pBar);
            const denominator = Math.pow(p2 - p1, 2);

            const sampleSize = Math.ceil(numerator / denominator);
            document.getElementById('calc-result').value = sampleSize.toLocaleString();
        }

        document.getElementById('calc-baseline').addEventListener('input', calculateSampleSize);
        document.getElementById('calc-mde').addEventListener('input', calculateSampleSize);
        document.getElementById('calc-power').addEventListener('input', calculateSampleSize);

        // Initial calculation
        calculateSampleSize();
    </script>
}
