@page "/operations/label-designer"
@model Algora.Web.Pages.Operations.LabelDesigner.IndexModel
@{
    ViewData["Title"] = "Label Designer";
}

<div class="w-full px-6 py-6 mx-auto">
    <!-- Header -->
    <div class="flex flex-wrap items-center justify-between mb-6 -mx-3">
        <div class="px-3">
            <h5 class="mb-0 dark:text-white">Label Designer</h5>
            <p class="text-sm text-slate-500 dark:text-slate-400">
                Design custom product labels with drag-and-drop field placement
            </p>
        </div>
        <div class="px-3 flex gap-2">
            <button id="printLabelsBtn" class="inline-flex items-center justify-center px-4 py-2 text-sm font-semibold text-white bg-gradient-to-tl from-purple-700 to-pink-500 rounded-lg shadow-soft-md hover:scale-102 transition-all">
                <i class="fas fa-print mr-2"></i> Print Labels
            </button>
        </div>
    </div>

    <div class="flex flex-wrap -mx-3">
        <!-- Left Panel: Template & Fields -->
        <div class="w-full lg:w-1/4 px-3 mb-6 lg:mb-0">
            <!-- Template Management -->
            <div class="bg-white rounded-2xl shadow-soft-xl p-4 mb-4 dark:bg-gray-950">
                <h6 class="text-xs font-bold uppercase text-slate-400 mb-3">Template</h6>
                <select id="templateSelector" class="w-full px-3 py-2 text-sm border border-gray-200 rounded-lg focus:border-fuchsia-300 focus:ring focus:ring-fuchsia-200 focus:ring-opacity-50 dark:bg-gray-900 dark:border-gray-700 dark:text-white mb-3">
                    <option value="">-- New Template --</option>
                    @foreach (var template in Model.Templates)
                    {
                        <option value="@template.Id" data-default="@template.IsDefault.ToString().ToLower()">
                            @template.Name @(template.IsDefault ? "(Default)" : "")
                        </option>
                    }
                </select>
                <input type="text" id="templateName" placeholder="Template Name"
                       class="w-full px-3 py-2 text-sm border border-gray-200 rounded-lg focus:border-fuchsia-300 focus:ring focus:ring-fuchsia-200 focus:ring-opacity-50 dark:bg-gray-900 dark:border-gray-700 dark:text-white mb-3" />
                <div class="flex gap-2">
                    <button id="saveTemplateBtn" class="flex-1 px-3 py-2 text-xs font-semibold text-white bg-gradient-to-tl from-purple-700 to-pink-500 rounded-lg">
                        <i class="fas fa-save mr-1"></i> Save
                    </button>
                    <button id="deleteTemplateBtn" class="px-3 py-2 text-xs font-semibold text-white bg-gradient-to-tl from-red-600 to-rose-400 rounded-lg">
                        <i class="fas fa-trash"></i>
                    </button>
                </div>
            </div>

            <!-- Label Size -->
            <div class="bg-white rounded-2xl shadow-soft-xl p-4 mb-4 dark:bg-gray-950">
                <h6 class="text-xs font-bold uppercase text-slate-400 mb-3">Label Size</h6>
                <select id="labelType" class="w-full px-3 py-2 text-sm border border-gray-200 rounded-lg focus:border-fuchsia-300 focus:ring focus:ring-fuchsia-200 focus:ring-opacity-50 dark:bg-gray-900 dark:border-gray-700 dark:text-white mb-3">
                    <optgroup label="Avery Labels (Sheet)">
                        @foreach (var preset in Model.AveryPresets)
                        {
                            <option value="@preset.Type" data-width="@preset.WidthInches" data-height="@preset.HeightInches">
                                @preset.Name
                            </option>
                        }
                    </optgroup>
                    <optgroup label="Thermal Labels (Roll)">
                        @foreach (var preset in Model.ThermalPresets)
                        {
                            <option value="@preset.Type" data-width="@preset.WidthInches" data-height="@preset.HeightInches">
                                @preset.Name
                            </option>
                        }
                    </optgroup>
                    <option value="Custom">Custom Size</option>
                </select>
                <div id="customSizeInputs" class="hidden grid grid-cols-2 gap-2">
                    <div>
                        <label class="block text-xs text-slate-500 mb-1">Width (in)</label>
                        <input type="number" id="customWidth" step="0.125" min="0.5" max="10" value="2"
                               class="w-full px-2 py-1 text-sm border border-gray-200 rounded-lg dark:bg-gray-900 dark:border-gray-700 dark:text-white" />
                    </div>
                    <div>
                        <label class="block text-xs text-slate-500 mb-1">Height (in)</label>
                        <input type="number" id="customHeight" step="0.125" min="0.5" max="10" value="1"
                               class="w-full px-2 py-1 text-sm border border-gray-200 rounded-lg dark:bg-gray-900 dark:border-gray-700 dark:text-white" />
                    </div>
                </div>
            </div>

            <!-- Field Palette -->
            <div class="bg-white rounded-2xl shadow-soft-xl p-4 dark:bg-gray-950">
                <h6 class="text-xs font-bold uppercase text-slate-400 mb-3">Available Fields</h6>
                <p class="text-xs text-slate-400 mb-3">Drag fields onto the canvas</p>
                <div id="fieldPalette" class="space-y-2 max-h-80 overflow-y-auto">
                    @foreach (var field in Model.AvailableFields)
                    {
                        <div class="field-item draggable-source flex items-center gap-2 p-2 bg-gray-50 dark:bg-gray-900 rounded-lg cursor-move hover:bg-gray-100 dark:hover:bg-gray-800 transition-colors"
                             data-field-type="@field.FieldType" title="@field.Description">
                            <i class="fas @field.Icon text-slate-500 w-4"></i>
                            <span class="text-sm text-slate-700 dark:text-slate-300">@field.DisplayName</span>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Center: Canvas -->
        <div class="w-full lg:w-1/2 px-3 mb-6 lg:mb-0">
            <div class="bg-white rounded-2xl shadow-soft-xl p-4 dark:bg-gray-950">
                <div class="flex justify-between items-center mb-4">
                    <h6 class="text-xs font-bold uppercase text-slate-400">Label Canvas</h6>
                    <span id="canvasSize" class="text-xs text-slate-500">2.625" x 1"</span>
                </div>
                <div id="canvasContainer" class="border-2 border-dashed border-gray-300 dark:border-gray-700 rounded-lg flex items-center justify-center bg-gray-50 dark:bg-gray-900 min-h-96 p-4">
                    <div id="labelCanvas" class="bg-white shadow-lg relative overflow-hidden" style="width: 252px; height: 96px;">
                        <!-- Field elements will be rendered here dynamically -->
                        <div id="canvasPlaceholder" class="absolute inset-0 flex items-center justify-center text-gray-400 text-sm">
                            Drag fields here
                        </div>
                    </div>
                </div>
                <div class="mt-4 flex gap-2">
                    <select id="previewProduct" class="flex-1 px-3 py-2 text-sm border border-gray-200 rounded-lg focus:border-fuchsia-300 dark:bg-gray-900 dark:border-gray-700 dark:text-white">
                        <option value="">-- Select product for preview --</option>
                        @foreach (var product in Model.Products)
                        {
                            var displayName = string.IsNullOrEmpty(product.VariantTitle) || product.VariantTitle == "Default Title"
                                ? product.ProductTitle
                                : $"{product.ProductTitle} - {product.VariantTitle}";
                            <option value="@product.ProductId-@product.VariantId">@displayName</option>
                        }
                    </select>
                    <button id="refreshPreview" class="px-3 py-2 text-sm border border-gray-200 rounded-lg hover:bg-gray-50 dark:border-gray-700 dark:hover:bg-gray-800">
                        <i class="fas fa-sync-alt"></i>
                    </button>
                </div>
            </div>
        </div>

        <!-- Right Panel: Field Properties -->
        <div class="w-full lg:w-1/4 px-3">
            <div id="fieldProperties" class="bg-white rounded-2xl shadow-soft-xl p-4 dark:bg-gray-950">
                <h6 class="text-xs font-bold uppercase text-slate-400 mb-3">Field Properties</h6>
                <div id="noFieldSelected" class="text-center py-8">
                    <i class="fas fa-mouse-pointer text-4xl text-gray-300 mb-3"></i>
                    <p class="text-sm text-slate-400">Select a field to edit</p>
                </div>
                <div id="fieldPropertiesForm" class="hidden space-y-4">
                    <div>
                        <label class="block text-xs font-bold text-slate-700 dark:text-slate-300 mb-1">Field Type</label>
                        <p id="selectedFieldType" class="text-sm text-slate-500"></p>
                    </div>
                    <div>
                        <label class="block text-xs font-bold text-slate-700 dark:text-slate-300 mb-1">Font Family</label>
                        <select id="fontFamily" class="w-full px-2 py-1 text-sm border border-gray-200 rounded-lg dark:bg-gray-900 dark:border-gray-700 dark:text-white">
                            <option value="Arial">Arial</option>
                            <option value="Times New Roman">Times New Roman</option>
                            <option value="Courier New">Courier New</option>
                            <option value="Georgia">Georgia</option>
                            <option value="Verdana">Verdana</option>
                        </select>
                    </div>
                    <div>
                        <label class="block text-xs font-bold text-slate-700 dark:text-slate-300 mb-1">Font Size</label>
                        <input type="number" id="fontSize" min="6" max="72" value="10"
                               class="w-full px-2 py-1 text-sm border border-gray-200 rounded-lg dark:bg-gray-900 dark:border-gray-700 dark:text-white" />
                    </div>
                    <div class="flex gap-2">
                        <button id="toggleBold" class="flex-1 px-2 py-1 text-sm border border-gray-200 rounded-lg hover:bg-gray-100 dark:border-gray-700 dark:hover:bg-gray-800" title="Bold">
                            <i class="fas fa-bold"></i>
                        </button>
                        <button id="toggleItalic" class="flex-1 px-2 py-1 text-sm border border-gray-200 rounded-lg hover:bg-gray-100 dark:border-gray-700 dark:hover:bg-gray-800" title="Italic">
                            <i class="fas fa-italic"></i>
                        </button>
                        <button id="alignLeft" class="flex-1 px-2 py-1 text-sm border border-gray-200 rounded-lg hover:bg-gray-100 dark:border-gray-700 dark:hover:bg-gray-800" title="Align Left">
                            <i class="fas fa-align-left"></i>
                        </button>
                        <button id="alignCenter" class="flex-1 px-2 py-1 text-sm border border-gray-200 rounded-lg hover:bg-gray-100 dark:border-gray-700 dark:hover:bg-gray-800" title="Align Center">
                            <i class="fas fa-align-center"></i>
                        </button>
                        <button id="alignRight" class="flex-1 px-2 py-1 text-sm border border-gray-200 rounded-lg hover:bg-gray-100 dark:border-gray-700 dark:hover:bg-gray-800" title="Align Right">
                            <i class="fas fa-align-right"></i>
                        </button>
                    </div>
                    <div>
                        <label class="block text-xs font-bold text-slate-700 dark:text-slate-300 mb-1">Text Color</label>
                        <input type="color" id="textColor" value="#000000" class="w-full h-8 rounded-lg cursor-pointer" />
                    </div>
                    <div id="customTextContainer" class="hidden">
                        <label class="block text-xs font-bold text-slate-700 dark:text-slate-300 mb-1">Custom Text</label>
                        <textarea id="customText" rows="2"
                                  class="w-full px-2 py-1 text-sm border border-gray-200 rounded-lg dark:bg-gray-900 dark:border-gray-700 dark:text-white"></textarea>
                    </div>
                    <div id="barcodeFormatContainer" class="hidden">
                        <label class="block text-xs font-bold text-slate-700 dark:text-slate-300 mb-1">Barcode Format</label>
                        <select id="barcodeFormat" class="w-full px-2 py-1 text-sm border border-gray-200 rounded-lg dark:bg-gray-900 dark:border-gray-700 dark:text-white">
                            <option value="Code128">Code 128</option>
                            <option value="EAN13">EAN-13</option>
                            <option value="EAN8">EAN-8</option>
                            <option value="UPCA">UPC-A</option>
                            <option value="QRCode">QR Code</option>
                            <option value="Code39">Code 39</option>
                        </select>
                    </div>
                    <button id="removeField" class="w-full px-3 py-2 text-sm font-semibold text-white bg-gradient-to-tl from-red-600 to-rose-400 rounded-lg mt-4">
                        <i class="fas fa-trash mr-1"></i> Remove Field
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Print Labels Modal -->
<div id="printModal" class="fixed inset-0 bg-black bg-opacity-50 z-50 hidden flex items-center justify-center">
    <div class="bg-white dark:bg-gray-950 rounded-2xl shadow-2xl w-full max-w-3xl mx-4 max-h-[90vh] overflow-hidden">
        <div class="p-4 border-b border-gray-200 dark:border-gray-700 flex justify-between items-center">
            <h5 class="font-semibold dark:text-white">Print Labels</h5>
            <button id="closePrintModal" class="text-gray-400 hover:text-gray-600">
                <i class="fas fa-times text-xl"></i>
            </button>
        </div>
        <div class="p-4 overflow-y-auto max-h-[60vh]">
            <div class="mb-4">
                <label class="block text-xs font-bold text-slate-700 dark:text-slate-300 mb-2">Select Template</label>
                <select id="printTemplateSelector" class="w-full px-3 py-2 text-sm border border-gray-200 rounded-lg dark:bg-gray-900 dark:border-gray-700 dark:text-white">
                    @foreach (var template in Model.Templates)
                    {
                        <option value="@template.Id">@template.Name</option>
                    }
                </select>
            </div>
            <div class="mb-4">
                <label class="block text-xs font-bold text-slate-700 dark:text-slate-300 mb-2">Select Products</label>
                <div class="border border-gray-200 dark:border-gray-700 rounded-lg overflow-hidden">
                    <table class="w-full">
                        <thead class="bg-gray-50 dark:bg-gray-900">
                            <tr>
                                <th class="p-2 text-left text-xs">
                                    <input type="checkbox" id="selectAllProducts" class="rounded" />
                                </th>
                                <th class="p-2 text-left text-xs font-semibold text-slate-600 dark:text-slate-400">Product</th>
                                <th class="p-2 text-left text-xs font-semibold text-slate-600 dark:text-slate-400">SKU</th>
                                <th class="p-2 text-center text-xs font-semibold text-slate-600 dark:text-slate-400">Copies</th>
                            </tr>
                        </thead>
                        <tbody id="printProductList" class="divide-y divide-gray-100 dark:divide-gray-800">
                            @foreach (var product in Model.Products)
                            {
                                var displayName = string.IsNullOrEmpty(product.VariantTitle) || product.VariantTitle == "Default Title"
                                    ? product.ProductTitle
                                    : $"{product.ProductTitle} - {product.VariantTitle}";
                                <tr>
                                    <td class="p-2">
                                        <input type="checkbox" class="product-checkbox rounded"
                                               data-product-id="@product.ProductId"
                                               data-variant-id="@product.VariantId" />
                                    </td>
                                    <td class="p-2 text-sm dark:text-white">@displayName</td>
                                    <td class="p-2 text-sm text-slate-500 font-mono">@(product.SKU ?? "-")</td>
                                    <td class="p-2 text-center">
                                        <input type="number" class="copies-input w-16 px-2 py-1 text-sm text-center border border-gray-200 rounded dark:bg-gray-900 dark:border-gray-700 dark:text-white"
                                               value="1" min="1" max="100" />
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="p-4 border-t border-gray-200 dark:border-gray-700 flex justify-end gap-2">
            <button id="cancelPrint" class="px-4 py-2 text-sm border border-gray-200 rounded-lg hover:bg-gray-50 dark:border-gray-700 dark:hover:bg-gray-800 dark:text-white">
                Cancel
            </button>
            <button id="generatePdfBtn" class="px-4 py-2 text-sm font-semibold text-white bg-gradient-to-tl from-purple-700 to-pink-500 rounded-lg">
                <i class="fas fa-file-pdf mr-1"></i> Generate PDF
            </button>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/interactjs/dist/interact.min.js"></script>
    <script src="~/js/label-designer.js" asp-append-version="true"></script>
}
