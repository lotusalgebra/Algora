@page "/operations/purchase-orders/create"
@model Algora.Web.Pages.Operations.PurchaseOrders.CreateModel
@{
    ViewData["Title"] = "Create Purchase Order";
}

<div class="p-4">
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md">
        <!-- Card Header -->
        <div class="p-6 border-b border-gray-200 dark:border-gray-700">
            <div class="flex flex-wrap items-center justify-between gap-4">
                <h6 class="text-lg font-semibold text-gray-900 dark:text-white">Create Purchase Order</h6>
                <a href="/operations/purchase-orders" class="text-gray-900 bg-white border border-gray-300 focus:outline-none hover:bg-gray-100 focus:ring-4 focus:ring-gray-200 font-medium rounded-lg text-sm px-5 py-2.5 dark:bg-gray-800 dark:text-white dark:border-gray-600 dark:hover:bg-gray-700 dark:focus:ring-gray-700">
                    <i class="fas fa-arrow-left me-2"></i> Back
                </a>
            </div>
        </div>

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="mx-6 mt-4 flex items-center p-4 text-sm text-red-800 rounded-lg bg-red-50 dark:bg-gray-800 dark:text-red-400" role="alert">
                <i class="fas fa-exclamation-triangle me-2"></i>
                @Model.ErrorMessage
            </div>
        }

        <!-- Card Body -->
        <div class="p-6">
            <form method="post" id="poForm">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">
                            Supplier <span class="text-red-500">*</span>
                        </label>
                        <select asp-for="Input.SupplierId" asp-items="Model.Suppliers"
                            class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white">
                            <option value="">Select a supplier</option>
                        </select>
                        <span asp-validation-for="Input.SupplierId" class="text-xs text-red-500"></span>
                    </div>

                    <div>
                        <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">
                            Destination Location
                        </label>
                        <select asp-for="Input.LocationId" asp-items="Model.Locations"
                            class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white">
                            <option value="">Default Location</option>
                        </select>
                    </div>

                    <div>
                        <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">
                            Expected Delivery Date
                        </label>
                        <input type="date" asp-for="Input.ExpectedDeliveryDate"
                            class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white" />
                    </div>

                    <div>
                        <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">
                            Notes
                        </label>
                        <input type="text" asp-for="Input.Notes"
                            class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white"
                            placeholder="Optional notes" />
                    </div>
                </div>

                <!-- Line Items -->
                <div class="mt-6">
                    <div class="flex items-center justify-between mb-4">
                        <h6 class="font-semibold text-gray-700 dark:text-white">Line Items</h6>
                        <button type="button" id="addLineBtn" class="text-white bg-gradient-to-br from-green-500 to-lime-400 hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-green-300 dark:focus:ring-green-800 font-medium rounded-lg text-sm px-5 py-2.5">
                            <i class="fas fa-plus me-2"></i> Add Product
                        </button>
                    </div>

                    <div id="lineItems" class="space-y-3">
                        <!-- Line items will be added here -->
                    </div>

                    <div id="noItems" class="text-center py-12 text-gray-500 dark:text-gray-400">
                        <i class="fas fa-box-open fa-3x mb-3 text-gray-300 dark:text-gray-600"></i>
                        <p>No items added yet. Click "Add Product" to add line items.</p>
                    </div>

                    <!-- Totals -->
                    <div class="mt-6 p-4 bg-gray-50 rounded-lg dark:bg-gray-700">
                        <div class="flex justify-between items-center text-lg font-bold text-gray-900 dark:text-white">
                            <span>Total:</span>
                            <span id="orderTotal">$0.00</span>
                        </div>
                    </div>
                </div>

                <div class="flex justify-end gap-3 mt-6">
                    <a href="/operations/purchase-orders" class="text-gray-900 bg-white border border-gray-300 focus:outline-none hover:bg-gray-100 focus:ring-4 focus:ring-gray-200 font-medium rounded-lg text-sm px-5 py-2.5 dark:bg-gray-800 dark:text-white dark:border-gray-600 dark:hover:bg-gray-700 dark:focus:ring-gray-700">
                        Cancel
                    </a>
                    <button type="submit" class="text-white bg-gradient-to-br from-blue-600 to-cyan-400 hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-blue-300 dark:focus:ring-blue-800 font-medium rounded-lg text-sm px-5 py-2.5">
                        <i class="fas fa-save me-2"></i> Create Order
                    </button>
                </div>
            </form>
        </div>
    </div>

    @if (Model.SuggestedOrders.Count > 0)
    {
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md mt-6">
            <div class="p-6 border-b border-gray-200 dark:border-gray-700">
                <h6 class="text-lg font-semibold text-gray-900 dark:text-white">Suggested Reorders</h6>
                <p class="text-sm text-gray-500 dark:text-gray-400">Products that may need reordering based on sales velocity</p>
            </div>
            <div class="p-6">
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                    @foreach (var suggestion in Model.SuggestedOrders)
                    {
                        @foreach (var line in suggestion.Lines.Take(2))
                        {
                            <div class="p-4 bg-gray-50 rounded-lg dark:bg-gray-700 cursor-pointer hover:bg-gray-100 dark:hover:bg-gray-600 transition-colors suggested-item"
                                 data-product-id="@line.ProductId"
                                 data-variant-id="@line.ProductVariantId"
                                 data-title="@line.ProductTitle"
                                 data-quantity="@line.SuggestedQuantity"
                                 data-cost="@line.UnitCost">
                                <h6 class="mb-1 text-sm font-semibold text-gray-900 dark:text-white">@line.ProductTitle</h6>
                                <div class="flex justify-between text-xs text-gray-500 dark:text-gray-400">
                                    <span>Current: @line.CurrentStock</span>
                                    <span>Suggest: @line.SuggestedQuantity</span>
                                </div>
                                <div class="flex justify-between text-xs text-gray-500 dark:text-gray-400">
                                    <span>@line.DaysUntilStockout days left</span>
                                    <span>$@line.UnitCost.ToString("N2")/unit</span>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        const products = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.Products.Select(p => new { value = p.Value, text = p.Text })));
        let lineIndex = 0;

        function updateTotal() {
            let total = 0;
            document.querySelectorAll('.line-item').forEach(item => {
                const qty = parseFloat(item.querySelector('.qty-input').value) || 0;
                const cost = parseFloat(item.querySelector('.cost-input').value) || 0;
                const lineTotal = qty * cost;
                item.querySelector('.line-total').textContent = '$' + lineTotal.toFixed(2);
                total += lineTotal;
            });
            document.getElementById('orderTotal').textContent = '$' + total.toFixed(2);
            document.getElementById('noItems').style.display = document.querySelectorAll('.line-item').length > 0 ? 'none' : 'block';
        }

        function addLineItem(productId = '', variantId = '', title = '', quantity = 1, cost = 0) {
            const container = document.getElementById('lineItems');
            const div = document.createElement('div');
            div.className = 'line-item p-4 bg-gray-50 rounded-lg dark:bg-gray-700';
            div.innerHTML = `
                <div class="flex flex-wrap items-center gap-4">
                    <div class="flex-1 min-w-[200px]">
                        <label class="block mb-1 text-sm font-bold text-gray-700 dark:text-white">Product</label>
                        <select name="Input.Lines[${lineIndex}].ProductId" class="product-select bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:text-white">
                            <option value="">Select product</option>
                            ${products.map(p => `<option value="${p.value}" ${p.value === productId + '|' + variantId ? 'selected' : ''}>${p.text}</option>`).join('')}
                        </select>
                        <input type="hidden" name="Input.Lines[${lineIndex}].ProductVariantId" class="variant-input" />
                    </div>
                    <div class="w-24">
                        <label class="block mb-1 text-sm font-bold text-gray-700 dark:text-white">Quantity</label>
                        <input type="number" name="Input.Lines[${lineIndex}].QuantityOrdered" value="${quantity}" min="1" class="qty-input bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:text-white" />
                    </div>
                    <div class="w-28">
                        <label class="block mb-1 text-sm font-bold text-gray-700 dark:text-white">Unit Cost</label>
                        <input type="number" name="Input.Lines[${lineIndex}].UnitCost" value="${cost}" step="0.01" min="0" class="cost-input bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:text-white" />
                    </div>
                    <div class="w-24 text-right">
                        <label class="block mb-1 text-sm font-bold text-gray-700 dark:text-white">Total</label>
                        <span class="line-total text-sm font-bold text-gray-900 dark:text-white">$0.00</span>
                    </div>
                    <div class="w-8">
                        <button type="button" class="remove-line text-red-600 hover:text-red-800 dark:text-red-400 mt-6" title="Remove">
                            <i class="fas fa-trash"></i>
                        </button>
                    </div>
                </div>
            `;
            container.appendChild(div);

            // Handle product selection to split productId and variantId
            div.querySelector('.product-select').addEventListener('change', function() {
                const [pId, vId] = this.value.split('|');
                this.name = `Input.Lines[${div.dataset.index}].ProductId`;
                this.value = pId;
                div.querySelector('.variant-input').value = vId || '';
            });

            div.dataset.index = lineIndex;
            div.querySelector('.qty-input').addEventListener('input', updateTotal);
            div.querySelector('.cost-input').addEventListener('input', updateTotal);
            div.querySelector('.remove-line').addEventListener('click', function() {
                div.remove();
                updateTotal();
            });

            // Set initial values
            if (productId && variantId) {
                const select = div.querySelector('.product-select');
                select.value = productId + '|' + variantId;
                div.querySelector('.variant-input').value = variantId;
            }

            lineIndex++;
            updateTotal();
        }

        document.getElementById('addLineBtn').addEventListener('click', () => addLineItem());

        // Handle suggested items click
        document.querySelectorAll('.suggested-item').forEach(item => {
            item.addEventListener('click', function() {
                addLineItem(
                    this.dataset.productId,
                    this.dataset.variantId,
                    this.dataset.title,
                    parseInt(this.dataset.quantity),
                    parseFloat(this.dataset.cost)
                );
            });
        });

        // Form submission - fix product IDs
        document.getElementById('poForm').addEventListener('submit', function() {
            document.querySelectorAll('.product-select').forEach(select => {
                if (select.value.includes('|')) {
                    const [pId, vId] = select.value.split('|');
                    select.value = pId;
                    const parent = select.closest('.line-item');
                    parent.querySelector('.variant-input').value = vId || '';
                }
            });
        });
    </script>
}
