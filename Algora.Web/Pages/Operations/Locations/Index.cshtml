@page "/operations/locations"
@model Algora.Web.Pages.Operations.Locations.IndexModel
@{
    ViewData["Title"] = "Locations";
}

<div class="w-full px-6 py-6 mx-auto">
    <div class="flex flex-wrap -mx-3">
        <div class="flex-none w-full max-w-full px-3">
            <div class="relative flex flex-col min-w-0 mb-6 break-words bg-white border-0 shadow-soft-xl rounded-2xl bg-clip-border dark:bg-gray-950 dark:shadow-soft-dark-xl">

                <!-- Card Header -->
                <div class="p-6 pb-0 mb-0 border-b-0 rounded-t-2xl">
                    <div class="flex flex-wrap items-center justify-between">
                        <div>
                            <h6 class="mb-0 dark:text-white">Inventory Locations</h6>
                            <p class="mb-0 text-sm leading-normal dark:text-white dark:opacity-60">
                                <i class="fa fa-warehouse text-fuchsia-500 me-1"></i>
                                <span class="font-semibold">@Model.Locations.Count</span> locations synced from Shopify
                            </p>
                        </div>
                        <div class="flex items-center gap-2">
                            <form method="post" asp-page-handler="Sync" class="inline">
                                <button type="submit" class="inline-block px-4 py-2 text-xs font-bold text-center text-white uppercase align-middle transition-all border-0 rounded-lg cursor-pointer ease-soft-in leading-pro tracking-tight-soft bg-gradient-to-tl from-blue-600 to-cyan-400 shadow-soft-md bg-150 bg-x-25 hover:scale-102 active:opacity-85">
                                    <i class="fas fa-sync-alt me-2"></i> Sync Locations
                                </button>
                            </form>
                            <form method="post" asp-page-handler="SyncInventory" class="inline">
                                <button type="submit" class="inline-block px-4 py-2 text-xs font-bold text-center text-white uppercase align-middle transition-all border-0 rounded-lg cursor-pointer ease-soft-in leading-pro tracking-tight-soft bg-gradient-to-tl from-green-600 to-lime-400 shadow-soft-md bg-150 bg-x-25 hover:scale-102 active:opacity-85">
                                    <i class="fas fa-cubes me-2"></i> Sync Inventory
                                </button>
                            </form>
                            <a href="/operations" class="inline-block px-4 py-2 text-xs font-bold text-center uppercase align-middle transition-all border-0 rounded-lg cursor-pointer ease-soft-in leading-pro tracking-tight-soft bg-gray-200 text-slate-700 shadow-soft-md bg-150 bg-x-25 hover:scale-102 active:opacity-85 dark:bg-gray-700 dark:text-white">
                                <i class="fas fa-arrow-left me-2"></i> Back
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Messages -->
                @if (!string.IsNullOrEmpty(Model.SuccessMessage))
                {
                    <div class="mx-6 mt-4 p-4 text-sm text-green-700 bg-green-100 rounded-lg dark:bg-green-200 dark:text-green-800" role="alert">
                        <i class="fas fa-check-circle me-2"></i>
                        @Model.SuccessMessage
                    </div>
                }

                @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                {
                    <div class="mx-6 mt-4 p-4 text-sm text-red-700 bg-red-100 rounded-lg dark:bg-red-200 dark:text-red-800" role="alert">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        @Model.ErrorMessage
                    </div>
                }

                <!-- Card Body -->
                <div class="flex-auto p-6">
                    @if (Model.Locations.Count == 0)
                    {
                        <div class="text-center py-12">
                            <i class="fas fa-warehouse fa-4x text-gray-300 mb-4"></i>
                            <p class="text-gray-500 dark:text-gray-400 mb-4">No locations found. Click "Sync Locations" to import from Shopify.</p>
                            <form method="post" asp-page-handler="Sync" class="inline">
                                <button type="submit" class="inline-block px-6 py-3 text-xs font-bold text-center text-white uppercase align-middle transition-all border-0 rounded-lg cursor-pointer ease-soft-in leading-pro tracking-tight-soft bg-gradient-to-tl from-blue-600 to-cyan-400 shadow-soft-md bg-150 bg-x-25 hover:scale-102 active:opacity-85">
                                    <i class="fas fa-sync-alt me-2"></i> Sync Locations
                                </button>
                            </form>
                        </div>
                    }
                    else
                    {
                        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                            @foreach (var location in Model.Locations)
                            {
                                <div class="relative flex flex-col min-w-0 break-words bg-gray-50 border-0 rounded-2xl dark:bg-gray-800">
                                    <div class="p-6">
                                        <div class="flex items-start justify-between mb-4">
                                            <div>
                                                <h6 class="mb-1 font-bold dark:text-white">@location.Name</h6>
                                                @if (location.IsPrimary)
                                                {
                                                    <span class="bg-gradient-to-tl from-purple-700 to-pink-500 px-2 text-xxs rounded-1.8 py-1 inline-block whitespace-nowrap text-center align-baseline font-bold uppercase leading-none text-white">Primary</span>
                                                }
                                                @if (!location.IsActive)
                                                {
                                                    <span class="bg-gradient-to-tl from-gray-400 to-gray-600 px-2 text-xxs rounded-1.8 py-1 inline-block whitespace-nowrap text-center align-baseline font-bold uppercase leading-none text-white">Inactive</span>
                                                }
                                            </div>
                                            <div class="inline-block w-10 h-10 text-center rounded-lg bg-gradient-to-tl from-green-600 to-lime-400">
                                                <i class="fas fa-warehouse text-white text-sm relative top-3"></i>
                                            </div>
                                        </div>

                                        @if (!string.IsNullOrEmpty(location.Address1))
                                        {
                                            <p class="mb-2 text-sm text-slate-500 dark:text-slate-300">
                                                <i class="fas fa-map-marker-alt me-2 text-slate-400"></i>
                                                @location.Address1
                                                @if (!string.IsNullOrEmpty(location.City))
                                                {
                                                    <br /><span class="ml-5">@location.City, @location.ProvinceCode @location.Zip</span>
                                                }
                                            </p>
                                        }

                                        @if (!string.IsNullOrEmpty(location.Phone))
                                        {
                                            <p class="mb-2 text-sm text-slate-500 dark:text-slate-300">
                                                <i class="fas fa-phone me-2 text-slate-400"></i>
                                                @location.Phone
                                            </p>
                                        }

                                        <div class="flex items-center justify-between mt-4 pt-4 border-t border-gray-200 dark:border-gray-700">
                                            <div class="text-xs text-slate-400">
                                                @if (location.FulfillsOnlineOrders)
                                                {
                                                    <span class="text-green-500"><i class="fas fa-check me-1"></i> Fulfills orders</span>
                                                }
                                                else
                                                {
                                                    <span class="text-slate-400"><i class="fas fa-times me-1"></i> No fulfillment</span>
                                                }
                                            </div>
                                            @if (location.LastSyncedAt.HasValue)
                                            {
                                                <span class="text-xs text-slate-400">
                                                    Synced: @location.LastSyncedAt.Value.ToString("MMM dd, h:mm tt")
                                                </span>
                                            }
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
