@page "/operations/barcodes"
@model Algora.Web.Pages.Operations.Barcodes.IndexModel
@using Algora.Application.DTOs.Operations
@using Algora.Application.Interfaces
@{
    ViewData["Title"] = "Barcode Generator";
}

<div class="p-4">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <!-- Generator -->
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md">
            <div class="p-6 border-b border-gray-200 dark:border-gray-700">
                <div class="flex items-center justify-between">
                    <h2 class="text-lg font-semibold text-gray-900 dark:text-white">Generate Barcode</h2>
                    <a href="/operations" class="inline-flex items-center px-4 py-2 text-sm font-medium text-gray-900 bg-white border border-gray-300 rounded-lg hover:bg-gray-100 dark:bg-gray-800 dark:text-white dark:border-gray-600 dark:hover:bg-gray-700">
                        <i class="fas fa-arrow-left me-2"></i> Back
                    </a>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="mx-6 mt-4 flex items-center p-4 text-sm text-red-800 rounded-lg bg-red-50 dark:bg-gray-700 dark:text-red-400" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i>@Model.ErrorMessage
                </div>
            }

            <div class="p-6">
                <form method="post" asp-page-handler="Generate">
                    <div class="grid grid-cols-2 gap-4 mb-4">
                        <div>
                            <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Format</label>
                            <select asp-for="Input.Format" asp-items="Html.GetEnumSelectList<BarcodeFormat>()"
                                class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white">
                            </select>
                        </div>
                        <div>
                            <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Prefix (optional)</label>
                            <input type="text" asp-for="Input.Prefix" placeholder="e.g., 200"
                                class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white" />
                        </div>
                    </div>

                    <div class="mb-4">
                        <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Value (leave empty to auto-generate)</label>
                        <input type="text" asp-for="Input.Value" placeholder="Auto-generate if empty"
                            class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white" />
                    </div>

                    <div class="grid grid-cols-2 gap-4 mb-4">
                        <div>
                            <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Width (px)</label>
                            <input type="number" asp-for="Input.Width" min="100" max="600"
                                class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white" />
                        </div>
                        <div>
                            <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Height (px)</label>
                            <input type="number" asp-for="Input.Height" min="50" max="300"
                                class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white" />
                        </div>
                    </div>

                    <div class="mb-4">
                        <div class="flex items-center">
                            <input type="checkbox" asp-for="Input.IncludeText"
                                class="w-4 h-4 text-purple-600 bg-gray-100 border-gray-300 rounded focus:ring-purple-500 dark:focus:ring-purple-600 dark:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600" />
                            <label asp-for="Input.IncludeText" class="ms-2 text-sm font-medium text-gray-900 dark:text-white">Include text below barcode</label>
                        </div>
                    </div>

                    <button type="submit" class="w-full inline-flex justify-center items-center px-5 py-3 text-sm font-medium text-white bg-gradient-to-br from-gray-700 to-gray-500 rounded-lg hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-gray-300">
                        <i class="fas fa-barcode me-2"></i> Generate Barcode
                    </button>
                </form>

                @if (Model.GeneratedBarcode != null)
                {
                    <div class="mt-6 p-4 bg-gray-50 dark:bg-gray-700 rounded-lg text-center">
                        <div class="mb-4 p-4 bg-white dark:bg-gray-800 rounded-lg inline-block">
                            <img src="data:@Model.GeneratedBarcode.ContentType;base64,@Model.GeneratedBarcode.Base64Image" alt="Barcode" class="max-w-full" />
                            <p class="mt-2 font-mono text-lg font-bold text-gray-900 dark:text-white">@Model.GeneratedBarcode.Value</p>
                        </div>
                        <div class="flex justify-center gap-2 mt-4">
                            <a href="data:@Model.GeneratedBarcode.ContentType;base64,@Model.GeneratedBarcode.Base64Image" download="barcode-@(Model.GeneratedBarcode.Value).png"
                               class="inline-flex items-center px-4 py-2 text-sm font-medium text-white bg-gradient-to-br from-blue-600 to-cyan-400 rounded-lg hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-blue-300">
                                <i class="fas fa-download me-2"></i> Download
                            </a>
                        </div>
                    </div>
                }
            </div>
        </div>

        <div class="space-y-6">
            <!-- Assign to Product -->
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md">
                <div class="p-6 border-b border-gray-200 dark:border-gray-700">
                    <h2 class="text-lg font-semibold text-gray-900 dark:text-white">Assign Barcode to Product</h2>
                </div>
                <div class="p-6">
                    <form method="post" asp-page-handler="Assign">
                        <div class="mb-4">
                            <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Product/Variant</label>
                            <select name="variantId" asp-items="Model.Products"
                                class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white">
                                <option value="">Select a product</option>
                            </select>
                        </div>
                        <div class="mb-4">
                            <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Barcode</label>
                            <input type="text" name="barcode" value="@Model.GeneratedBarcode?.Value" required
                                class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white"
                                placeholder="Enter barcode value" />
                        </div>
                        <button type="submit" class="w-full inline-flex justify-center items-center px-5 py-3 text-sm font-medium text-white bg-gradient-to-br from-purple-600 to-pink-500 rounded-lg hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-purple-300 dark:focus:ring-purple-800">
                            <i class="fas fa-link me-2"></i> Assign to Product
                        </button>
                    </form>
                </div>
            </div>

            <!-- Label Printing -->
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md">
                <div class="p-6 border-b border-gray-200 dark:border-gray-700">
                    <h2 class="text-lg font-semibold text-gray-900 dark:text-white">Print Barcode Labels</h2>
                </div>
                <div class="p-6">
                    <form method="post" asp-page-handler="GenerateLabels">
                        <div class="mb-4">
                            <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Label Size</label>
                            <select name="labelType" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white">
                                <optgroup label="Avery Labels (Inkjet/Laser)">
                                    @foreach (var preset in Model.AveryPresets)
                                    {
                                        <option value="@preset.Type">@preset.Name (@preset.TotalLabelsPerPage/sheet)</option>
                                    }
                                </optgroup>
                                <optgroup label="Thermal Labels">
                                    @foreach (var preset in Model.ThermalPresets)
                                    {
                                        <option value="@preset.Type">@preset.Name</option>
                                    }
                                </optgroup>
                            </select>
                        </div>

                        <button type="submit" class="w-full inline-flex justify-center items-center px-5 py-3 text-sm font-medium text-white bg-gradient-to-br from-green-600 to-lime-400 rounded-lg hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-green-300">
                            <i class="fas fa-file-pdf me-2"></i> Download Labels PDF
                        </button>
                    </form>

                    <!-- Label Size Reference -->
                    <div class="mt-4 p-4 bg-gray-50 dark:bg-gray-700 rounded-lg">
                        <h6 class="text-sm font-semibold mb-2 text-gray-900 dark:text-white">Label Size Reference</h6>
                        <div class="text-xs text-gray-500 dark:text-gray-400 space-y-2">
                            <div>
                                <strong class="text-gray-700 dark:text-gray-300">Avery Labels</strong>
                                <ul class="mt-1 space-y-0.5 ml-3">
                                    <li>5160: 1" × 2⅝" (30/sheet) - Address</li>
                                    <li>5163: 2" × 4" (10/sheet) - Shipping</li>
                                    <li>5164: 3⅓" × 4" (6/sheet) - Large</li>
                                    <li>5167: ½" × 1¾" (80/sheet) - Return Address</li>
                                    <li>5195: ⅔" × 1¾" (60/sheet) - File Folder</li>
                                </ul>
                            </div>
                            <div>
                                <strong class="text-gray-700 dark:text-gray-300">Thermal Labels</strong>
                                <ul class="mt-1 space-y-0.5 ml-3">
                                    <li>4×6: Shipping (USPS, UPS, FedEx)</li>
                                    <li>2×1: Product/Price labels</li>
                                    <li>3×2: Medium product</li>
                                    <li>2.25×1.25: Jewelry/Small items</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Supported Formats -->
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md">
                <div class="p-6 border-b border-gray-200 dark:border-gray-700">
                    <h2 class="text-lg font-semibold text-gray-900 dark:text-white">Supported Barcode Formats</h2>
                </div>
                <div class="p-6">
                    <ul class="text-sm text-gray-500 dark:text-gray-400 space-y-2">
                        <li><strong class="text-gray-700 dark:text-gray-300">EAN-13:</strong> 13-digit European Article Number (international)</li>
                        <li><strong class="text-gray-700 dark:text-gray-300">EAN-8:</strong> 8-digit compact version</li>
                        <li><strong class="text-gray-700 dark:text-gray-300">UPC-A:</strong> 12-digit Universal Product Code (US/Canada)</li>
                        <li><strong class="text-gray-700 dark:text-gray-300">UPC-E:</strong> 8-digit compressed UPC</li>
                        <li><strong class="text-gray-700 dark:text-gray-300">Code128:</strong> Variable-length alphanumeric (general purpose)</li>
                        <li><strong class="text-gray-700 dark:text-gray-300">Code39:</strong> Alphanumeric, self-checking</li>
                        <li><strong class="text-gray-700 dark:text-gray-300">QR Code:</strong> 2D barcode for URLs, text (up to 4,296 chars)</li>
                        <li><strong class="text-gray-700 dark:text-gray-300">Data Matrix:</strong> 2D barcode for small items</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
