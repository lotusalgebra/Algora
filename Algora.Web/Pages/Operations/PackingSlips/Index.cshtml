@page "/operations/packing-slips"
@model Algora.Web.Pages.Operations.PackingSlips.IndexModel
@{
    ViewData["Title"] = "Packing Slips";
}

<div class="p-4">
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-6">
        <!-- Settings Panel -->
        <div class="lg:col-span-4">
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md">
                <div class="p-6 border-b border-gray-200 dark:border-gray-700">
                    <div class="flex items-center justify-between">
                        <h2 class="text-lg font-semibold text-gray-900 dark:text-white">Packing Slip Settings</h2>
                        <a href="/operations" class="inline-flex items-center px-3 py-2 text-sm font-medium text-gray-900 bg-white border border-gray-300 rounded-lg hover:bg-gray-100 dark:bg-gray-800 dark:text-white dark:border-gray-600 dark:hover:bg-gray-700">
                            <i class="fas fa-arrow-left me-2"></i> Back
                        </a>
                    </div>
                </div>
                <div class="p-6">
                    <form id="settingsForm">
                        <div class="space-y-4">
                            <div class="flex items-center">
                                <input type="checkbox" name="Settings.ShowPrices" checked
                                    class="w-4 h-4 text-purple-600 bg-gray-100 border-gray-300 rounded focus:ring-purple-500 dark:focus:ring-purple-600 dark:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600" />
                                <label class="ms-2 text-sm font-medium text-gray-900 dark:text-white">Show Prices</label>
                            </div>

                            <div class="flex items-center">
                                <input type="checkbox" name="Settings.ShowBarcode" checked
                                    class="w-4 h-4 text-purple-600 bg-gray-100 border-gray-300 rounded focus:ring-purple-500 dark:focus:ring-purple-600 dark:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600" />
                                <label class="ms-2 text-sm font-medium text-gray-900 dark:text-white">Show Order Barcode</label>
                            </div>

                            <div class="flex items-center">
                                <input type="checkbox" name="Settings.ShowNotes" checked
                                    class="w-4 h-4 text-purple-600 bg-gray-100 border-gray-300 rounded focus:ring-purple-500 dark:focus:ring-purple-600 dark:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600" />
                                <label class="ms-2 text-sm font-medium text-gray-900 dark:text-white">Show Order Notes</label>
                            </div>

                            <div class="flex items-center">
                                <input type="checkbox" name="Settings.ShowShippingInfo" checked
                                    class="w-4 h-4 text-purple-600 bg-gray-100 border-gray-300 rounded focus:ring-purple-500 dark:focus:ring-purple-600 dark:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600" />
                                <label class="ms-2 text-sm font-medium text-gray-900 dark:text-white">Show Shipping Info</label>
                            </div>

                            <div>
                                <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Company Name</label>
                                <input type="text" name="Settings.CompanyName" placeholder="Your Company Name"
                                    class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white" />
                            </div>

                            <div>
                                <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Footer Message</label>
                                <textarea name="Settings.FooterMessage" rows="2" placeholder="Thank you for your order!"
                                    class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white"></textarea>
                            </div>
                        </div>
                    </form>

                    <div class="mt-6 p-4 bg-gray-50 dark:bg-gray-700 rounded-lg">
                        <h6 class="text-sm font-semibold mb-3 text-gray-900 dark:text-white">Quick Actions</h6>
                        <form method="post" asp-page-handler="GenerateBulk">
                            <input type="hidden" name="orderIds" id="selectedOrderIds" />
                            <button type="submit" id="bulkPrintBtn" disabled
                                class="w-full inline-flex justify-center items-center px-4 py-2.5 text-sm font-medium text-white bg-gradient-to-br from-purple-600 to-pink-500 rounded-lg hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-purple-300 disabled:opacity-50 disabled:cursor-not-allowed">
                                <i class="fas fa-print me-2"></i> Print Selected (<span id="selectedCount">0</span>)
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <!-- Orders List -->
        <div class="lg:col-span-8">
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="mb-4 flex items-center p-4 text-sm text-red-800 rounded-lg bg-red-50 dark:bg-gray-800 dark:text-red-400" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i>@TempData["ErrorMessage"]
                </div>
            }

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="mb-4 flex items-center p-4 text-sm text-green-800 rounded-lg bg-green-50 dark:bg-gray-800 dark:text-green-400" role="alert">
                    <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
                </div>
            }

            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md">
                <div class="p-6 border-b border-gray-200 dark:border-gray-700">
                    <div class="flex items-center justify-between">
                        <h2 class="text-lg font-semibold text-gray-900 dark:text-white">Recent Orders</h2>
                        <div class="flex items-center gap-2">
                            <button type="button" id="selectAllBtn" class="px-3 py-1.5 text-xs font-medium text-gray-700 bg-gray-200 rounded hover:bg-gray-300 dark:bg-gray-700 dark:text-white dark:hover:bg-gray-600">
                                Select All
                            </button>
                            <button type="button" id="clearSelectionBtn" class="px-3 py-1.5 text-xs font-medium text-gray-700 bg-gray-200 rounded hover:bg-gray-300 dark:bg-gray-700 dark:text-white dark:hover:bg-gray-600">
                                Clear
                            </button>
                        </div>
                    </div>
                </div>
                <div class="p-6">
                    @if (Model.RecentOrders.Count == 0)
                    {
                        <div class="text-center py-8">
                            <i class="fas fa-inbox text-6xl text-gray-300 dark:text-gray-600 mb-4"></i>
                            <p class="text-gray-500 dark:text-gray-400">No orders found</p>
                        </div>
                    }
                    else
                    {
                        <div class="relative overflow-x-auto">
                            <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
                                <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                                    <tr>
                                        <th scope="col" class="p-3 w-10">
                                            <input type="checkbox" id="selectAllCheckbox" class="w-4 h-4 text-purple-600 bg-gray-100 border-gray-300 rounded focus:ring-purple-500 dark:bg-gray-700 dark:border-gray-600" />
                                        </th>
                                        <th scope="col" class="p-3">Order</th>
                                        <th scope="col" class="p-3">Customer</th>
                                        <th scope="col" class="p-3">Items</th>
                                        <th scope="col" class="p-3">Total</th>
                                        <th scope="col" class="p-3">Status</th>
                                        <th scope="col" class="p-3 text-center">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var order in Model.RecentOrders)
                                    {
                                        <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
                                            <td class="p-3">
                                                <input type="checkbox" class="order-checkbox w-4 h-4 text-purple-600 bg-gray-100 border-gray-300 rounded focus:ring-purple-500 dark:bg-gray-700 dark:border-gray-600" data-order-id="@order.Id" />
                                            </td>
                                            <td class="p-3">
                                                <div class="font-semibold text-gray-900 dark:text-white">@order.OrderNumber</div>
                                                <div class="text-xs text-gray-500 dark:text-gray-400">@order.CreatedAt.ToString("MMM dd, yyyy h:mm tt")</div>
                                            </td>
                                            <td class="p-3 text-gray-900 dark:text-white">@order.CustomerName</td>
                                            <td class="p-3 text-gray-900 dark:text-white">@order.ItemCount items</td>
                                            <td class="p-3 font-semibold text-gray-900 dark:text-white">$@order.Total.ToString("F2")</td>
                                            <td class="p-3">
                                                @{
                                                    var statusBadge = order.FulfillmentStatus switch
                                                    {
                                                        "fulfilled" => "bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-300",
                                                        "partial" => "bg-yellow-100 text-yellow-800 dark:bg-yellow-900 dark:text-yellow-300",
                                                        _ => "bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-300"
                                                    };
                                                }
                                                <span class="@statusBadge text-xs font-medium px-2.5 py-0.5 rounded">
                                                    @(order.FulfillmentStatus ?? "unfulfilled")
                                                </span>
                                            </td>
                                            <td class="p-3 text-center">
                                                <form method="post" asp-page-handler="Generate" class="inline">
                                                    <input type="hidden" name="orderId" value="@order.Id" />
                                                    <button type="submit" class="inline-flex items-center px-3 py-1.5 text-xs font-medium text-white bg-gradient-to-br from-purple-600 to-pink-500 rounded hover:bg-gradient-to-bl" title="Download Packing Slip">
                                                        <i class="fas fa-file-pdf"></i>
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const checkboxes = document.querySelectorAll('.order-checkbox');
            const selectAllCheckbox = document.getElementById('selectAllCheckbox');
            const selectAllBtn = document.getElementById('selectAllBtn');
            const clearSelectionBtn = document.getElementById('clearSelectionBtn');
            const bulkPrintBtn = document.getElementById('bulkPrintBtn');
            const selectedOrderIds = document.getElementById('selectedOrderIds');
            const selectedCount = document.getElementById('selectedCount');

            function updateSelection() {
                const checked = document.querySelectorAll('.order-checkbox:checked');
                const ids = Array.from(checked).map(cb => cb.dataset.orderId);
                selectedOrderIds.value = ids.join(',');
                selectedCount.textContent = ids.length;
                bulkPrintBtn.disabled = ids.length === 0;
                selectAllCheckbox.checked = checked.length === checkboxes.length && checkboxes.length > 0;
                selectAllCheckbox.indeterminate = checked.length > 0 && checked.length < checkboxes.length;
            }

            checkboxes.forEach(cb => cb.addEventListener('change', updateSelection));

            selectAllCheckbox.addEventListener('change', function() {
                checkboxes.forEach(cb => cb.checked = this.checked);
                updateSelection();
            });

            selectAllBtn.addEventListener('click', function() {
                checkboxes.forEach(cb => cb.checked = true);
                updateSelection();
            });

            clearSelectionBtn.addEventListener('click', function() {
                checkboxes.forEach(cb => cb.checked = false);
                updateSelection();
            });
        });
    </script>
}
