@page "/operations/suppliers"
@model Algora.Web.Pages.Operations.Suppliers.IndexModel
@{
    ViewData["Title"] = "Suppliers";
}

@section css {
    <link rel="stylesheet" href="~/css/datatable.css" asp-append-version="true" />
}

<div class="w-full px-6 py-6 mx-auto">
    <div class="flex flex-wrap -mx-3">
        <div class="flex-none w-full max-w-full px-3">
            <div class="relative flex flex-col min-w-0 mb-6 break-words bg-white border-0 shadow-soft-xl rounded-2xl bg-clip-border dark:bg-gray-950 dark:shadow-soft-dark-xl">

                <!-- Card Header -->
                <div class="p-6 pb-0 mb-0 border-b-0 rounded-t-2xl">
                    <div class="flex flex-wrap items-center justify-between">
                        <div>
                            <h6 class="mb-0 dark:text-white">Suppliers</h6>
                            <p class="mb-0 text-sm leading-normal dark:text-white dark:opacity-60">
                                <i class="fa fa-truck text-fuchsia-500 me-1"></i>
                                <span class="font-semibold">@Model.Suppliers.Count</span> suppliers
                            </p>
                        </div>
                        <div class="flex items-center gap-2">
                            <a href="/operations/suppliers/create" class="inline-block px-4 py-2 text-xs font-bold text-center text-white uppercase align-middle transition-all border-0 rounded-lg cursor-pointer ease-soft-in leading-pro tracking-tight-soft bg-gradient-to-tl from-purple-700 to-pink-500 shadow-soft-md bg-150 bg-x-25 hover:scale-102 active:opacity-85">
                                <i class="fas fa-plus me-2"></i> Add Supplier
                            </a>
                            <a href="/operations" class="inline-block px-4 py-2 text-xs font-bold text-center uppercase align-middle transition-all border-0 rounded-lg cursor-pointer ease-soft-in leading-pro tracking-tight-soft bg-gray-200 text-slate-700 shadow-soft-md bg-150 bg-x-25 hover:scale-102 active:opacity-85 dark:bg-gray-700 dark:text-white">
                                <i class="fas fa-arrow-left me-2"></i> Back
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Messages -->
                @if (!string.IsNullOrEmpty(Model.SuccessMessage))
                {
                    <div class="mx-6 mt-4 p-4 text-sm text-green-700 bg-green-100 rounded-lg dark:bg-green-200 dark:text-green-800" role="alert">
                        <i class="fas fa-check-circle me-2"></i>
                        @Model.SuccessMessage
                    </div>
                }

                @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                {
                    <div class="mx-6 mt-4 p-4 text-sm text-red-700 bg-red-100 rounded-lg dark:bg-red-200 dark:text-red-800" role="alert">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        @Model.ErrorMessage
                    </div>
                }

                <!-- Card Body -->
                <div class="flex-auto p-6 px-0 pb-0">
                    @if (Model.Suppliers.Count == 0)
                    {
                        <div class="text-center py-12">
                            <i class="fas fa-truck fa-4x text-gray-300 mb-4"></i>
                            <p class="text-gray-500 dark:text-gray-400 mb-4">No suppliers yet. Add your first supplier to get started.</p>
                            <a href="/operations/suppliers/create" class="inline-block px-6 py-3 text-xs font-bold text-center text-white uppercase align-middle transition-all border-0 rounded-lg cursor-pointer ease-soft-in leading-pro tracking-tight-soft bg-gradient-to-tl from-purple-700 to-pink-500 shadow-soft-md bg-150 bg-x-25 hover:scale-102 active:opacity-85">
                                <i class="fas fa-plus me-2"></i> Add Supplier
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="overflow-x-auto">
                            <table class="table items-center w-full mb-0 align-top border-gray-200 text-slate-500 dark:border-white/40" id="suppliers-list">
                                <thead class="align-bottom">
                                    <tr>
                                        <th class="px-6 py-3 font-bold text-left uppercase align-middle bg-transparent border-b border-gray-200 shadow-none text-xxs border-b-solid tracking-none whitespace-nowrap text-slate-400 opacity-70 dark:border-white/40 dark:text-white dark:opacity-80">Supplier</th>
                                        <th class="px-6 py-3 font-bold text-center uppercase align-middle bg-transparent border-b border-gray-200 shadow-none text-xxs border-b-solid tracking-none whitespace-nowrap text-slate-400 opacity-70 dark:border-white/40 dark:text-white dark:opacity-80">Contact</th>
                                        <th class="px-6 py-3 font-bold text-center uppercase align-middle bg-transparent border-b border-gray-200 shadow-none text-xxs border-b-solid tracking-none whitespace-nowrap text-slate-400 opacity-70 dark:border-white/40 dark:text-white dark:opacity-80">Lead Time</th>
                                        <th class="px-6 py-3 font-bold text-center uppercase align-middle bg-transparent border-b border-gray-200 shadow-none text-xxs border-b-solid tracking-none whitespace-nowrap text-slate-400 opacity-70 dark:border-white/40 dark:text-white dark:opacity-80">Orders</th>
                                        <th class="px-6 py-3 font-bold text-center uppercase align-middle bg-transparent border-b border-gray-200 shadow-none text-xxs border-b-solid tracking-none whitespace-nowrap text-slate-400 opacity-70 dark:border-white/40 dark:text-white dark:opacity-80">Total Spent</th>
                                        <th class="px-6 py-3 font-bold text-center uppercase align-middle bg-transparent border-b border-gray-200 shadow-none text-xxs border-b-solid tracking-none whitespace-nowrap text-slate-400 opacity-70 dark:border-white/40 dark:text-white dark:opacity-80">Status</th>
                                        <th class="px-6 py-3 font-bold text-center uppercase align-middle bg-transparent border-b border-gray-200 shadow-none text-xxs border-b-solid tracking-none whitespace-nowrap text-slate-400 opacity-70 dark:border-white/40 dark:text-white dark:opacity-80">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var supplier in Model.Suppliers)
                                    {
                                        <tr>
                                            <td class="p-2 align-middle bg-transparent border-b whitespace-nowrap dark:border-white/40">
                                                <div class="flex px-2 py-1">
                                                    <div class="flex flex-col justify-center">
                                                        <h6 class="mb-0 text-sm leading-normal dark:text-white">@supplier.Name</h6>
                                                        @if (!string.IsNullOrEmpty(supplier.Code))
                                                        {
                                                            <p class="mb-0 text-xs leading-tight text-slate-400 dark:text-white dark:opacity-80">Code: @supplier.Code</p>
                                                        }
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="p-2 text-center align-middle bg-transparent border-b whitespace-nowrap dark:border-white/40">
                                                <div class="flex flex-col">
                                                    @if (!string.IsNullOrEmpty(supplier.Email))
                                                    {
                                                        <span class="text-xs text-slate-400 dark:text-white dark:opacity-60">@supplier.Email</span>
                                                    }
                                                    @if (!string.IsNullOrEmpty(supplier.Phone))
                                                    {
                                                        <span class="text-xs text-slate-400 dark:text-white dark:opacity-60">@supplier.Phone</span>
                                                    }
                                                </div>
                                            </td>
                                            <td class="p-2 text-center align-middle bg-transparent border-b whitespace-nowrap dark:border-white/40">
                                                <span class="text-sm font-semibold leading-tight dark:text-white">@supplier.DefaultLeadTimeDays days</span>
                                            </td>
                                            <td class="p-2 text-center align-middle bg-transparent border-b whitespace-nowrap dark:border-white/40">
                                                <span class="text-sm font-semibold leading-tight dark:text-white">@supplier.TotalOrders</span>
                                            </td>
                                            <td class="p-2 text-center align-middle bg-transparent border-b whitespace-nowrap dark:border-white/40">
                                                <span class="text-sm font-semibold leading-tight dark:text-white">$@supplier.TotalSpent.ToString("N2")</span>
                                            </td>
                                            <td class="p-2 text-center align-middle bg-transparent border-b whitespace-nowrap dark:border-white/40">
                                                @if (supplier.IsActive)
                                                {
                                                    <span class="bg-gradient-to-tl from-green-600 to-lime-400 px-2.5 text-xxs rounded-1.8 py-1.4 inline-block whitespace-nowrap text-center align-baseline font-bold uppercase leading-none text-white">Active</span>
                                                }
                                                else
                                                {
                                                    <span class="bg-gradient-to-tl from-gray-400 to-gray-600 px-2.5 text-xxs rounded-1.8 py-1.4 inline-block whitespace-nowrap text-center align-baseline font-bold uppercase leading-none text-white">Inactive</span>
                                                }
                                            </td>
                                            <td class="p-2 text-center align-middle bg-transparent border-b whitespace-nowrap dark:border-white/40">
                                                <a href="/operations/suppliers/details/@supplier.Id" class="text-xs font-semibold leading-tight text-blue-500 hover:text-blue-700 me-3" title="View Details">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a href="/operations/suppliers/edit/@supplier.Id" class="text-xs font-semibold leading-tight text-slate-500 hover:text-slate-700 me-3" title="Edit">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <form method="post" asp-page-handler="Delete" asp-route-id="@supplier.Id" class="inline" onsubmit="return confirm('Are you sure you want to delete this supplier?');">
                                                    <button type="submit" class="text-xs font-semibold leading-tight text-red-500 hover:text-red-700" title="Delete">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/plugins/datatables.min.js" asp-append-version="true"></script>
    <script>
        if (document.getElementById('suppliers-list')) {
            new simpleDatatables.DataTable("#suppliers-list", {
                searchable: true,
                fixedHeight: false,
                perPage: 25,
                perPageSelect: [10, 25, 50, 100],
                labels: {
                    placeholder: "Search suppliers...",
                    perPage: "per page",
                    noRows: "No suppliers found",
                    info: "Showing {start} to {end} of {rows} suppliers"
                }
            });
        }
    </script>
}
