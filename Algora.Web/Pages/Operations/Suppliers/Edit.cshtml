@page "/operations/suppliers/edit/{id:int}"
@model Algora.Web.Pages.Operations.Suppliers.EditModel
@{
    ViewData["Title"] = "Edit Supplier";
}

<div class="p-4">
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md">
        <!-- Card Header -->
        <div class="p-6 border-b border-gray-200 dark:border-gray-700">
            <div class="flex flex-wrap items-center justify-between gap-4">
                <h6 class="text-lg font-semibold text-gray-900 dark:text-white">Edit Supplier: @Model.Input.Name</h6>
                <a href="/operations/suppliers" class="text-gray-900 bg-white border border-gray-300 focus:outline-none hover:bg-gray-100 focus:ring-4 focus:ring-gray-200 font-medium rounded-lg text-sm px-5 py-2.5 dark:bg-gray-800 dark:text-white dark:border-gray-600 dark:hover:bg-gray-700 dark:focus:ring-gray-700">
                    <i class="fas fa-arrow-left me-2"></i> Back to Suppliers
                </a>
            </div>
        </div>

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="mx-6 mt-4 flex items-center p-4 text-sm text-red-800 rounded-lg bg-red-50 dark:bg-gray-800 dark:text-red-400" role="alert">
                <i class="fas fa-exclamation-triangle me-2"></i>
                @Model.ErrorMessage
            </div>
        }

        <!-- Card Body -->
        <div class="p-6">
            <form method="post">
                <input type="hidden" asp-for="Input.Id" />

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <!-- Basic Info -->
                    <div class="col-span-2">
                        <h6 class="mb-4 font-semibold text-gray-700 dark:text-white">Basic Information</h6>
                    </div>

                    <div>
                        <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">
                            Supplier Name <span class="text-red-500">*</span>
                        </label>
                        <input type="text" asp-for="Input.Name"
                            class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white" />
                        <span asp-validation-for="Input.Name" class="text-xs text-red-500"></span>
                    </div>

                    <div>
                        <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">Supplier Code</label>
                        <input type="text" asp-for="Input.Code"
                            class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white" />
                        <span asp-validation-for="Input.Code" class="text-xs text-red-500"></span>
                    </div>

                    <!-- Contact Info -->
                    <div class="col-span-2 mt-4">
                        <h6 class="mb-4 font-semibold text-gray-700 dark:text-white">Contact Information</h6>
                    </div>

                    <div>
                        <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">Email</label>
                        <input type="email" asp-for="Input.Email"
                            class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white" />
                        <span asp-validation-for="Input.Email" class="text-xs text-red-500"></span>
                    </div>

                    <div>
                        <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">Phone</label>
                        <input type="tel" asp-for="Input.Phone"
                            class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white" />
                        <span asp-validation-for="Input.Phone" class="text-xs text-red-500"></span>
                    </div>

                    <div>
                        <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">Contact Person</label>
                        <input type="text" asp-for="Input.ContactPerson"
                            class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white" />
                        <span asp-validation-for="Input.ContactPerson" class="text-xs text-red-500"></span>
                    </div>

                    <div>
                        <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">Website</label>
                        <input type="url" asp-for="Input.Website"
                            class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white" />
                        <span asp-validation-for="Input.Website" class="text-xs text-red-500"></span>
                    </div>

                    <div class="col-span-2">
                        <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">Address</label>
                        <textarea asp-for="Input.Address" rows="2"
                            class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white"></textarea>
                        <span asp-validation-for="Input.Address" class="text-xs text-red-500"></span>
                    </div>

                    <!-- Order Settings -->
                    <div class="col-span-2 mt-4">
                        <h6 class="mb-4 font-semibold text-gray-700 dark:text-white">Order Settings</h6>
                    </div>

                    <div>
                        <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">Default Lead Time (days)</label>
                        <input type="number" asp-for="Input.DefaultLeadTimeDays" min="1" max="365"
                            class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white" />
                        <span asp-validation-for="Input.DefaultLeadTimeDays" class="text-xs text-red-500"></span>
                    </div>

                    <div>
                        <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">Minimum Order Amount ($)</label>
                        <input type="number" asp-for="Input.MinimumOrderAmount" step="0.01" min="0"
                            class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white" />
                        <span asp-validation-for="Input.MinimumOrderAmount" class="text-xs text-red-500"></span>
                    </div>

                    <div>
                        <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">Payment Terms</label>
                        <input type="text" asp-for="Input.PaymentTerms"
                            class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white" />
                        <span asp-validation-for="Input.PaymentTerms" class="text-xs text-red-500"></span>
                    </div>

                    <div class="flex items-center">
                        <label class="flex items-center gap-2">
                            <input type="checkbox" asp-for="Input.IsActive"
                                class="w-4 h-4 text-purple-600 bg-gray-100 border-gray-300 rounded focus:ring-purple-500 dark:focus:ring-purple-600 dark:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600" />
                            <span class="text-sm text-gray-700 dark:text-white">Active Supplier</span>
                        </label>
                    </div>

                    <div class="col-span-2">
                        <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">Notes</label>
                        <textarea asp-for="Input.Notes" rows="3"
                            class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white"></textarea>
                        <span asp-validation-for="Input.Notes" class="text-xs text-red-500"></span>
                    </div>
                </div>

                <div class="flex justify-end gap-3 mt-6">
                    <a href="/operations/suppliers" class="text-gray-900 bg-white border border-gray-300 focus:outline-none hover:bg-gray-100 focus:ring-4 focus:ring-gray-200 font-medium rounded-lg text-sm px-5 py-2.5 dark:bg-gray-800 dark:text-white dark:border-gray-600 dark:hover:bg-gray-700 dark:focus:ring-gray-700">
                        Cancel
                    </a>
                    <button type="submit" class="text-white bg-gradient-to-br from-purple-600 to-pink-500 hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-purple-300 dark:focus:ring-purple-800 font-medium rounded-lg text-sm px-5 py-2.5">
                        <i class="fas fa-save me-2"></i> Save Changes
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
