@page "/operations/suppliers/details/{id:int}"
@model Algora.Web.Pages.Operations.Suppliers.DetailsModel
@{
    ViewData["Title"] = $"Supplier: {Model.Supplier?.Name}";
}

<div class="p-4">
    <!-- Header -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md mb-6">
        <div class="p-6">
            <div class="flex flex-wrap items-center justify-between gap-4">
                <div>
                    <h5 class="text-xl font-bold text-gray-900 dark:text-white mb-1">@Model.Supplier?.Name</h5>
                    <div class="flex items-center gap-3 text-sm text-gray-500 dark:text-gray-400">
                        @if (!string.IsNullOrEmpty(Model.Supplier?.Code))
                        {
                            <span>Code: @Model.Supplier.Code</span>
                        }
                        @if (Model.Supplier?.IsActive == true)
                        {
                            <span class="bg-green-100 text-green-800 text-xs font-medium px-2.5 py-0.5 rounded dark:bg-green-900 dark:text-green-300">Active</span>
                        }
                        else
                        {
                            <span class="bg-gray-100 text-gray-800 text-xs font-medium px-2.5 py-0.5 rounded dark:bg-gray-700 dark:text-gray-300">Inactive</span>
                        }
                    </div>
                </div>
                <div class="flex items-center gap-2">
                    <a href="/operations/suppliers/edit/@Model.Supplier?.Id" class="text-white bg-gradient-to-br from-gray-600 to-gray-500 hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-gray-300 dark:focus:ring-gray-800 font-medium rounded-lg text-sm px-5 py-2.5">
                        <i class="fas fa-edit me-2"></i> Edit
                    </a>
                    <a href="/operations/suppliers" class="text-gray-900 bg-white border border-gray-300 focus:outline-none hover:bg-gray-100 focus:ring-4 focus:ring-gray-200 font-medium rounded-lg text-sm px-5 py-2.5 dark:bg-gray-800 dark:text-white dark:border-gray-600 dark:hover:bg-gray-700 dark:focus:ring-gray-700">
                        <i class="fas fa-arrow-left me-2"></i> Back
                    </a>
                </div>
            </div>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="flex items-center p-4 mb-6 text-sm text-green-800 rounded-lg bg-green-50 dark:bg-gray-800 dark:text-green-400" role="alert">
            <i class="fas fa-check-circle me-2"></i>
            @Model.SuccessMessage
        </div>
    }

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <!-- Contact Information -->
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md">
            <div class="p-6 border-b border-gray-200 dark:border-gray-700">
                <h6 class="text-lg font-semibold text-gray-900 dark:text-white">Contact Information</h6>
            </div>
            <div class="p-6">
                <ul class="space-y-3">
                    @if (!string.IsNullOrEmpty(Model.Supplier?.Email))
                    {
                        <li class="flex items-center p-3 bg-gray-50 rounded-lg dark:bg-gray-700">
                            <div class="flex items-center justify-center w-10 h-10 rounded-lg bg-gradient-to-br from-blue-600 to-cyan-400">
                                <i class="fas fa-envelope text-white text-sm"></i>
                            </div>
                            <div class="ml-4">
                                <span class="text-xs text-gray-500 dark:text-gray-400">Email</span>
                                <p class="text-sm font-medium text-gray-900 dark:text-white">@Model.Supplier.Email</p>
                            </div>
                        </li>
                    }
                    @if (!string.IsNullOrEmpty(Model.Supplier?.Phone))
                    {
                        <li class="flex items-center p-3 bg-gray-50 rounded-lg dark:bg-gray-700">
                            <div class="flex items-center justify-center w-10 h-10 rounded-lg bg-gradient-to-br from-green-500 to-lime-400">
                                <i class="fas fa-phone text-white text-sm"></i>
                            </div>
                            <div class="ml-4">
                                <span class="text-xs text-gray-500 dark:text-gray-400">Phone</span>
                                <p class="text-sm font-medium text-gray-900 dark:text-white">@Model.Supplier.Phone</p>
                            </div>
                        </li>
                    }
                    @if (!string.IsNullOrEmpty(Model.Supplier?.ContactPerson))
                    {
                        <li class="flex items-center p-3 bg-gray-50 rounded-lg dark:bg-gray-700">
                            <div class="flex items-center justify-center w-10 h-10 rounded-lg bg-gradient-to-br from-purple-600 to-pink-500">
                                <i class="fas fa-user text-white text-sm"></i>
                            </div>
                            <div class="ml-4">
                                <span class="text-xs text-gray-500 dark:text-gray-400">Contact Person</span>
                                <p class="text-sm font-medium text-gray-900 dark:text-white">@Model.Supplier.ContactPerson</p>
                            </div>
                        </li>
                    }
                    @if (!string.IsNullOrEmpty(Model.Supplier?.Address))
                    {
                        <li class="flex items-center p-3 bg-gray-50 rounded-lg dark:bg-gray-700">
                            <div class="flex items-center justify-center w-10 h-10 rounded-lg bg-gradient-to-br from-orange-500 to-yellow-400">
                                <i class="fas fa-map-marker-alt text-white text-sm"></i>
                            </div>
                            <div class="ml-4">
                                <span class="text-xs text-gray-500 dark:text-gray-400">Address</span>
                                <p class="text-sm font-medium text-gray-900 dark:text-white">@Model.Supplier.Address</p>
                            </div>
                        </li>
                    }
                    @if (!string.IsNullOrEmpty(Model.Supplier?.Website))
                    {
                        <li class="flex items-center p-3 bg-gray-50 rounded-lg dark:bg-gray-700">
                            <div class="flex items-center justify-center w-10 h-10 rounded-lg bg-gradient-to-br from-gray-600 to-gray-500">
                                <i class="fas fa-globe text-white text-sm"></i>
                            </div>
                            <div class="ml-4">
                                <span class="text-xs text-gray-500 dark:text-gray-400">Website</span>
                                <p class="text-sm font-medium">
                                    <a href="@Model.Supplier.Website" target="_blank" class="text-purple-600 hover:text-purple-800 dark:text-purple-400 dark:hover:text-purple-300">@Model.Supplier.Website</a>
                                </p>
                            </div>
                        </li>
                    }
                </ul>
            </div>
        </div>

        <!-- Performance -->
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md">
            <div class="p-6 border-b border-gray-200 dark:border-gray-700">
                <h6 class="text-lg font-semibold text-gray-900 dark:text-white">Performance</h6>
            </div>
            <div class="p-6">
                <div class="grid grid-cols-2 gap-4">
                    <div class="p-4 bg-gray-50 rounded-lg dark:bg-gray-700">
                        <span class="text-xs text-gray-500 dark:text-gray-400">Total Orders</span>
                        <h4 class="text-xl font-bold text-gray-900 dark:text-white">@(Model.Analytics?.TotalOrders ?? 0)</h4>
                    </div>
                    <div class="p-4 bg-gray-50 rounded-lg dark:bg-gray-700">
                        <span class="text-xs text-gray-500 dark:text-gray-400">Total Spent</span>
                        <h4 class="text-xl font-bold text-gray-900 dark:text-white">$@((Model.Analytics?.TotalSpent ?? 0).ToString("N2"))</h4>
                    </div>
                    <div class="p-4 bg-gray-50 rounded-lg dark:bg-gray-700">
                        <span class="text-xs text-gray-500 dark:text-gray-400">Avg Delivery</span>
                        <h4 class="text-xl font-bold text-gray-900 dark:text-white">@((Model.Analytics?.AverageDeliveryDays ?? Model.Supplier?.DefaultLeadTimeDays ?? 0).ToString("N1")) days</h4>
                    </div>
                    <div class="p-4 bg-gray-50 rounded-lg dark:bg-gray-700">
                        <span class="text-xs text-gray-500 dark:text-gray-400">On-Time Rate</span>
                        <h4 class="text-xl font-bold text-gray-900 dark:text-white">@((Model.Analytics?.OnTimeDeliveryRate ?? 100).ToString("N0"))%</h4>
                    </div>
                    <div class="p-4 bg-gray-50 rounded-lg dark:bg-gray-700">
                        <span class="text-xs text-gray-500 dark:text-gray-400">Lead Time</span>
                        <h4 class="text-xl font-bold text-gray-900 dark:text-white">@(Model.Supplier?.DefaultLeadTimeDays ?? 7) days</h4>
                    </div>
                    <div class="p-4 bg-gray-50 rounded-lg dark:bg-gray-700">
                        <span class="text-xs text-gray-500 dark:text-gray-400">Min Order</span>
                        <h4 class="text-xl font-bold text-gray-900 dark:text-white">$@((Model.Supplier?.MinimumOrderAmount ?? 0).ToString("N2"))</h4>
                    </div>
                </div>
                @if (!string.IsNullOrEmpty(Model.Supplier?.PaymentTerms))
                {
                    <div class="mt-4 p-4 bg-gray-50 rounded-lg dark:bg-gray-700">
                        <span class="text-xs text-gray-500 dark:text-gray-400">Payment Terms</span>
                        <p class="text-sm text-gray-900 dark:text-white">@Model.Supplier.PaymentTerms</p>
                    </div>
                }
                @if (!string.IsNullOrEmpty(Model.Supplier?.Notes))
                {
                    <div class="mt-4 p-4 bg-gray-50 rounded-lg dark:bg-gray-700">
                        <span class="text-xs text-gray-500 dark:text-gray-400">Notes</span>
                        <p class="text-sm text-gray-900 dark:text-white">@Model.Supplier.Notes</p>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Supplier Products -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md mt-6">
        <div class="p-6 border-b border-gray-200 dark:border-gray-700">
            <h6 class="text-lg font-semibold text-gray-900 dark:text-white">Linked Products (@Model.Products.Count)</h6>
        </div>
        <div class="p-6">
            @if (Model.Products.Count == 0)
            {
                <div class="text-center py-12">
                    <i class="fas fa-box fa-3x text-gray-300 dark:text-gray-600 mb-3"></i>
                    <p class="text-gray-500 dark:text-gray-400">No products linked to this supplier yet.</p>
                </div>
            }
            else
            {
                <div class="overflow-x-auto">
                    <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
                        <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                            <tr>
                                <th scope="col" class="px-6 py-3">Product</th>
                                <th scope="col" class="px-6 py-3 text-center">Supplier SKU</th>
                                <th scope="col" class="px-6 py-3 text-center">Unit Cost</th>
                                <th scope="col" class="px-6 py-3 text-center">MOQ</th>
                                <th scope="col" class="px-6 py-3 text-center">Lead Time</th>
                                <th scope="col" class="px-6 py-3 text-center">Preferred</th>
                                <th scope="col" class="px-6 py-3 text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var product in Model.Products)
                            {
                                <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-700">
                                    <td class="px-6 py-4">
                                        <p class="font-medium text-gray-900 dark:text-white">@product.ProductTitle</p>
                                        @if (!string.IsNullOrEmpty(product.VariantTitle))
                                        {
                                            <p class="text-xs text-gray-500 dark:text-gray-400">@product.VariantTitle</p>
                                        }
                                    </td>
                                    <td class="px-6 py-4 text-center text-gray-900 dark:text-white">@(product.SupplierSku ?? "-")</td>
                                    <td class="px-6 py-4 text-center font-semibold text-gray-900 dark:text-white">$@product.UnitCost.ToString("N2")</td>
                                    <td class="px-6 py-4 text-center text-gray-900 dark:text-white">@product.MinimumOrderQuantity</td>
                                    <td class="px-6 py-4 text-center text-gray-900 dark:text-white">@(product.LeadTimeDays?.ToString() ?? "-") days</td>
                                    <td class="px-6 py-4 text-center">
                                        @if (product.IsPreferred)
                                        {
                                            <i class="fas fa-star text-yellow-500"></i>
                                        }
                                        else
                                        {
                                            <i class="far fa-star text-gray-300 dark:text-gray-600"></i>
                                        }
                                    </td>
                                    <td class="px-6 py-4 text-center">
                                        <form method="post" asp-page-handler="RemoveProduct" asp-route-id="@Model.Supplier?.Id" asp-route-productId="@product.ProductId" class="inline" onsubmit="return confirm('Remove this product from supplier?');">
                                            <button type="submit" class="text-red-600 hover:text-red-800 dark:text-red-400 dark:hover:text-red-300" title="Remove">
                                                <i class="fas fa-unlink"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>
