@model IEnumerable<Algora.Core.Models.OrderViewModel>

<div class="p-4">
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md">
        <div class="p-6 border-b border-gray-200 dark:border-gray-700">
            <h6 class="text-lg font-semibold text-gray-900 dark:text-white">Orders overview</h6>
            <p class="text-sm text-gray-500 dark:text-gray-400">Recent orders list</p>
        </div>

        <div class="overflow-x-auto">
            <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
                <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                    <tr>
                        <th scope="col" class="px-6 py-3">Order</th>
                        <th scope="col" class="px-6 py-3">Customer</th>
                        <th scope="col" class="px-6 py-3 text-center">Amount</th>
                        <th scope="col" class="px-6 py-3 text-center">Status</th>
                        <th scope="col" class="px-6 py-3 text-center">Date</th>
                        <th scope="col" class="px-6 py-3 text-right">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var o in Model ?? Enumerable.Empty<Algora.Core.Models.OrderViewModel>())
                    {
                        var statusBadge = o.Status switch
                        {
                            "Completed" => "bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-300",
                            "Cancelled" => "bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-300",
                            _ => "bg-yellow-100 text-yellow-800 dark:bg-yellow-900 dark:text-yellow-300"
                        };
                        <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-700">
                            <td class="px-6 py-4 font-medium text-gray-900 dark:text-white">@o.Id</td>
                            <td class="px-6 py-4">
                                <div class="font-medium text-gray-900 dark:text-white">@o.CustomerName</div>
                                <div class="text-xs text-gray-500 dark:text-gray-400">@o.Email</div>
                            </td>
                            <td class="px-6 py-4 text-center font-semibold text-gray-900 dark:text-white">$@o.TotalAmount.ToString("0.00")</td>
                            <td class="px-6 py-4 text-center">
                                <span class="@statusBadge text-xs font-medium px-2.5 py-0.5 rounded">
                                    @o.Status
                                </span>
                            </td>
                            <td class="px-6 py-4 text-center text-gray-900 dark:text-white">@o.Date.ToString("yyyy-MM-dd")</td>
                            <td class="px-6 py-4 text-right">
                                <a asp-page="/Orders/Details" asp-route-id="@o.Id" class="text-purple-600 hover:text-purple-800 dark:text-purple-400 font-medium">View</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>