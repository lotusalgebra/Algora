@model IEnumerable<Algora.Core.Models.OrderViewModel>

<div class="w-full px-6 py-6 mx-auto">
    <div class="border-black/12.5 shadow-soft-xl relative z-20 flex min-w-0 flex-col break-words rounded-2xl bg-white p-4">
        <div class="mb-4">
            <h6 class="text-lg font-semibold">Orders overview</h6>
            <p class="text-sm text-slate-500">Recent orders list</p>
        </div>

        <div class="overflow-x-auto">
            <table class="items-center w-full mb-0 align-top border-gray-200 text-slate-500">
                <thead>
                    <tr>
                        <th class="px-4 py-2 text-left text-xs font-bold text-slate-400 uppercase">Order</th>
                        <th class="px-4 py-2 text-left text-xs font-bold text-slate-400 uppercase">Customer</th>
                        <th class="px-4 py-2 text-center text-xs font-bold text-slate-400 uppercase">Amount</th>
                        <th class="px-4 py-2 text-center text-xs font-bold text-slate-400 uppercase">Status</th>
                        <th class="px-4 py-2 text-center text-xs font-bold text-slate-400 uppercase">Date</th>
                        <th class="px-4 py-2"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var o in Model ?? Enumerable.Empty<Algora.Core.Models.OrderViewModel>())
                    {
                        <tr class="bg-white border-b">
                            <td class="p-3 align-middle text-sm">@o.Id</td>
                            <td class="p-3 align-middle text-sm">
                                <div class="font-medium">@o.CustomerName</div>
                                <div class="text-xs text-slate-400">@o.Email</div>
                            </td>
                            <td class="p-3 align-middle text-sm text-center">$@o.TotalAmount.ToString("0.00")</td>
                            <td class="p-3 align-middle text-sm text-center">
                                <span class="inline-block px-2 py-1 text-xs rounded-full
                                             @(o.Status == "Completed" ? "bg-green-100 text-green-800" :
                                               o.Status == "Cancelled" ? "bg-red-100 text-red-800" :
                                               "bg-yellow-100 text-yellow-800")">
                                    @o.Status
                                </span>
                            </td>
                            <td class="p-3 align-middle text-sm text-center">@o.Date.ToString("yyyy-MM-dd")</td>
                            <td class="p-3 align-middle text-sm text-right">
                                <a asp-page="/Orders/Details" asp-route-id="@o.Id" class="text-sm font-semibold text-slate-600">View</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>