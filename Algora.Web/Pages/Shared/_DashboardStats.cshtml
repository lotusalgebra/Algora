@model Algora.Core.Models.DashboardViewModel

<div class="p-4">
    <!-- Summary Cards -->
    <div class="grid grid-cols-1 sm:grid-cols-2 xl:grid-cols-4 gap-4 mb-6">
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-4">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Today's Money</p>
                    <h3 class="text-2xl font-bold text-gray-900 dark:text-white">$@Model.TodaysMoney.ToString("0,0.00")</h3>
                    <span class="text-xs font-medium text-green-600 dark:text-green-400">+55%</span>
                </div>
                <div class="w-12 h-12 rounded-lg bg-gradient-to-br from-green-600 to-lime-400 flex items-center justify-center">
                    <i class="fas fa-dollar-sign text-white text-lg"></i>
                </div>
            </div>
        </div>

        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-4">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Today's Users</p>
                    <h3 class="text-2xl font-bold text-gray-900 dark:text-white">@Model.TodaysUsers</h3>
                    <span class="text-xs font-medium text-green-600 dark:text-green-400">+3%</span>
                </div>
                <div class="w-12 h-12 rounded-lg bg-gradient-to-br from-blue-600 to-cyan-400 flex items-center justify-center">
                    <i class="fas fa-users text-white text-lg"></i>
                </div>
            </div>
        </div>

        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-4">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-gray-500 dark:text-gray-400">New Clients</p>
                    <h3 class="text-2xl font-bold text-gray-900 dark:text-white">@Model.NewClients</h3>
                    <span class="text-xs font-medium text-red-600 dark:text-red-400">-2%</span>
                </div>
                <div class="w-12 h-12 rounded-lg bg-gradient-to-br from-purple-600 to-pink-500 flex items-center justify-center">
                    <i class="fas fa-user-plus text-white text-lg"></i>
                </div>
            </div>
        </div>

        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-4">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Sales</p>
                    <h3 class="text-2xl font-bold text-gray-900 dark:text-white">$@Model.Sales.ToString("0,0.00")</h3>
                    <span class="text-xs font-medium text-green-600 dark:text-green-400">+5%</span>
                </div>
                <div class="w-12 h-12 rounded-lg bg-gradient-to-br from-orange-500 to-yellow-400 flex items-center justify-center">
                    <i class="fas fa-chart-line text-white text-lg"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Overview Cards -->
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-6">
        <div class="lg:col-span-7">
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6">
                <p class="text-sm font-medium text-gray-500 dark:text-gray-400 mb-1">Built by developers</p>
                <h5 class="text-lg font-bold text-gray-900 dark:text-white mb-4">Algora Dashboard</h5>
                <p class="text-sm text-gray-600 dark:text-gray-400 mb-6">From analytics, inventory management, to complex e-commerce features, you will find everything you need to run your store.</p>
                <a class="text-sm font-semibold text-purple-600 hover:text-purple-800 dark:text-purple-400" href="/help">Read More</a>
            </div>
        </div>

        <div class="lg:col-span-5">
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md overflow-hidden">
                <div class="relative h-48 bg-gradient-to-br from-purple-600 to-pink-500">
                    <div class="absolute inset-0 p-6 flex flex-col justify-center">
                        <h5 class="text-lg font-bold text-white mb-2">Grow Your Business</h5>
                        <p class="text-sm text-white/80">Leverage AI-powered tools and analytics to maximize your store's potential.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>