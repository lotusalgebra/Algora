<!DOCTYPE html>
<html lang="en" class="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Algora</title>

    <!-- Inter Font -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <!-- Tailwind CSS via CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            darkMode: 'class',
            theme: {
                extend: {
                    fontFamily: {
                        sans: ['Inter', 'sans-serif']
                    },
                    colors: {
                        primary: {
                            50: '#f5f3ff',
                            100: '#ede9fe',
                            200: '#ddd6fe',
                            300: '#c4b5fd',
                            400: '#a78bfa',
                            500: '#8b5cf6',
                            600: '#7c3aed',
                            700: '#6d28d9',
                            800: '#5b21b6',
                            900: '#4c1d95'
                        }
                    },
                    boxShadow: {
                        'soft': '0 20px 27px 0 rgba(0, 0, 0, 0.05)',
                        'soft-xl': '0 23px 45px -11px rgba(0, 0, 0, 0.25)'
                    }
                }
            }
        }
    </script>

    <!-- Flowbite CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.2.1/flowbite.min.css" rel="stylesheet" />

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet" />

    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <style>
        /* Custom scrollbar */
        ::-webkit-scrollbar { width: 5px; height: 5px; }
        ::-webkit-scrollbar-track { background: transparent; }
        ::-webkit-scrollbar-thumb { background: #e2e8f0; border-radius: 10px; }
        ::-webkit-scrollbar-thumb:hover { background: #cbd5e1; }
        .dark ::-webkit-scrollbar-thumb { background: #334155; }
        .dark ::-webkit-scrollbar-thumb:hover { background: #475569; }

        /* Soft UI sidebar styles */
        .sidenav-item {
            display: flex;
            align-items: center;
            padding: 0.625rem 1rem;
            margin: 0.125rem 0.5rem 0.125rem 0;
            border-radius: 0.5rem;
            transition: all 0.15s ease-in-out;
            color: #67748e;
            text-decoration: none;
            font-size: 0.875rem;
            font-weight: 500;
        }
        .dark .sidenav-item {
            color: rgba(255, 255, 255, 0.8);
        }
        .sidenav-item:hover {
            background-color: #f8f9fa;
        }
        .dark .sidenav-item:hover {
            background-color: rgba(255, 255, 255, 0.1);
        }
        .sidenav-item.active {
            background-color: #fff;
            box-shadow: 0 20px 27px 0 rgba(0, 0, 0, 0.05);
        }
        .dark .sidenav-item.active {
            background-color: rgba(255, 255, 255, 0.1);
            box-shadow: none;
        }
        .sidenav-item .icon-shape {
            width: 32px;
            height: 32px;
            border-radius: 0.5rem;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 0.75rem;
            background: linear-gradient(310deg, #f1f5f9, #fff);
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.08);
            color: #67748e;
            transition: all 0.15s ease-in-out;
        }
        .dark .sidenav-item .icon-shape {
            background: linear-gradient(310deg, #475569, #64748b);
            color: #fff;
        }
        .sidenav-item.active .nav-text {
            color: #344767;
            font-weight: 600;
        }
        .dark .sidenav-item.active .nav-text {
            color: #fff;
        }

        /* Dropdown items */
        .sidenav-dropdown-item {
            display: flex;
            align-items: center;
            padding: 0.5rem 1rem 0.5rem 3.25rem;
            margin: 0 0.5rem 0 0;
            border-radius: 0.5rem;
            transition: all 0.15s ease-in-out;
            color: #67748e;
            font-size: 0.8125rem;
            font-weight: 400;
        }
        .dark .sidenav-dropdown-item {
            color: rgba(255, 255, 255, 0.6);
        }
        .sidenav-dropdown-item:hover {
            background-color: #f8f9fa;
            color: #344767;
        }
        .dark .sidenav-dropdown-item:hover {
            background-color: rgba(255, 255, 255, 0.1);
            color: #fff;
        }
        .sidenav-dropdown-item.active {
            color: #7c3aed;
            font-weight: 600;
        }
        .dark .sidenav-dropdown-item.active {
            color: #fff;
            font-weight: 600;
        }
        .sidenav-dropdown-item::before {
            content: '';
            width: 6px;
            height: 6px;
            border-radius: 50%;
            background-color: #dee2e6;
            margin-right: 0.75rem;
            transition: all 0.15s ease-in-out;
        }
        .dark .sidenav-dropdown-item::before {
            background-color: rgba(255, 255, 255, 0.3);
        }
        .sidenav-dropdown-item.active::before {
            background-color: #7c3aed;
        }
        .dark .sidenav-dropdown-item.active::before {
            background-color: #a78bfa;
        }

        /* Section headers */
        .sidenav-title {
            padding: 1rem 0 0.5rem;
            font-size: 0.75rem;
            font-weight: 700;
            color: #344767;
            text-transform: uppercase;
            letter-spacing: 0.025em;
            opacity: 0.6;
        }
        .dark .sidenav-title {
            color: rgba(255, 255, 255, 0.5);
        }

        /* Dropdown animation */
        .sidenav-collapse {
            max-height: 0;
            overflow: hidden;
            transition: max-height 0.35s ease;
        }
        .sidenav-collapse.show {
            max-height: 500px;
        }

        /* Chevron rotation */
        .collapse-chevron {
            transition: transform 0.35s ease;
        }
        .collapse-chevron.rotated {
            transform: rotate(90deg);
        }
    </style>

    @await RenderSectionAsync("Styles", required: false)
    @await RenderSectionAsync("css", required: false)
</head>
<body class="font-sans antialiased bg-gray-100 dark:bg-slate-900 overflow-x-hidden">
    @{
        var currentPath = Context.Request.Path.ToString().ToLower();
        bool IsActive(string path) => currentPath == path.ToLower() || currentPath.StartsWith(path.ToLower() + "/");
        bool IsInSection(string basePath) => currentPath.StartsWith(basePath.ToLower());
    }

    <!-- Mobile Menu Button -->
    <button data-drawer-target="sidebar" data-drawer-toggle="sidebar" aria-controls="sidebar" type="button" class="inline-flex items-center p-2 mt-2 ms-3 text-sm text-gray-500 rounded-lg sm:hidden hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200 dark:text-gray-400 dark:hover:bg-gray-700 dark:focus:ring-gray-600">
        <span class="sr-only">Open sidebar</span>
        <i class="fas fa-bars text-lg"></i>
    </button>

    <!-- Sidebar -->
    <aside id="sidebar" class="fixed top-0 left-0 z-40 w-64 lg:w-72 xl:w-80 h-screen transition-transform -translate-x-full sm:translate-x-0 overflow-hidden" aria-label="Sidebar">
        <div class="sidebar-container h-full max-h-screen flex flex-col bg-white dark:bg-gradient-to-b dark:from-slate-800 dark:to-slate-900 shadow-xl dark:shadow-none border-r border-gray-100 dark:border-slate-700">
            <!-- Logo -->
            <div class="flex-shrink-0 flex items-center p-6 pb-4">
                <a href="/dashboard" class="flex items-center gap-3">
                    <div class="w-8 h-8 rounded-lg bg-gradient-to-tl from-purple-700 to-pink-500 dark:bg-white flex items-center justify-center shadow-md">
                        <i class="fas fa-cube text-white dark:text-slate-800 text-sm"></i>
                    </div>
                    <div>
                        <span class="text-sm font-semibold text-slate-800 dark:text-white tracking-wide">Algora Dashboard</span>
                    </div>
                </a>
            </div>

            <!-- Navigation -->
            <nav class="flex-1 min-h-0 overflow-y-auto overflow-x-hidden py-4 pl-4 pr-2">
                <!-- Dashboard -->
                <a href="/dashboard" class="sidenav-item @(IsActive("/dashboard") ? "active" : "")">
                    <span class="icon-shape @(IsActive("/dashboard") ? "!bg-gradient-to-tl from-purple-700 to-pink-500 !text-white" : "")">
                        <i class="fas fa-tv text-xs"></i>
                    </span>
                    <span class="nav-text text-sm font-medium">Dashboard</span>
                </a>

                <!-- Commerce Section -->
                <p class="sidenav-title mt-4">Commerce</p>

                <a href="/orders" class="sidenav-item @(IsActive("/orders") ? "active" : "")">
                    <span class="icon-shape @(IsActive("/orders") ? "!bg-gradient-to-tl from-purple-700 to-pink-500 !text-white" : "")">
                        <i class="fas fa-shopping-cart text-xs"></i>
                    </span>
                    <span class="nav-text text-sm">Orders</span>
                </a>

                <a href="/products" class="sidenav-item @(IsActive("/products") ? "active" : "")">
                    <span class="icon-shape @(IsActive("/products") ? "!bg-gradient-to-tl from-purple-700 to-pink-500 !text-white" : "")">
                        <i class="fas fa-box text-xs"></i>
                    </span>
                    <span class="nav-text text-sm">Products</span>
                </a>

                <a href="/bundles/admin" class="sidenav-item @(IsActive("/bundles") ? "active" : "")">
                    <span class="icon-shape @(IsActive("/bundles") ? "!bg-gradient-to-tl from-purple-700 to-pink-500 !text-white" : "")">
                        <i class="fas fa-boxes-stacked text-xs"></i>
                    </span>
                    <span class="nav-text text-sm">Bundles</span>
                </a>

                <!-- Communication Section -->
                <p class="sidenav-title mt-4">Communication</p>

                <button onclick="toggleCollapse('comm')" class="sidenav-item w-full @(IsInSection("/communication") ? "active" : "")">
                    <span class="icon-shape @(IsInSection("/communication") ? "!bg-gradient-to-tl from-purple-700 to-pink-500 !text-white" : "")">
                        <i class="fas fa-comments text-xs"></i>
                    </span>
                    <span class="nav-text text-sm flex-1 text-left">Messages</span>
                    <i id="comm-chevron" class="fas fa-chevron-right text-[10px] text-slate-400 dark:text-white/50 collapse-chevron @(IsInSection("/communication") ? "rotated" : "")"></i>
                </button>
                <div id="comm-collapse" class="sidenav-collapse @(IsInSection("/communication") ? "show" : "")">
                    <a href="/communication/history" class="sidenav-dropdown-item @(IsActive("/communication/history") ? "active" : "")">History</a>
                    <a href="/communication/email-campaigns" class="sidenav-dropdown-item @(IsActive("/communication/email-campaigns") ? "active" : "")">Email Campaigns</a>
                    <a href="/communication/sms" class="sidenav-dropdown-item @(IsActive("/communication/sms") ? "active" : "")">SMS</a>
                    <a href="/communication/whatsapp" class="sidenav-dropdown-item @(IsActive("/communication/whatsapp") ? "active" : "")">WhatsApp</a>
                </div>

                <!-- Marketing Section -->
                <p class="sidenav-title mt-4">Marketing</p>

                <button onclick="toggleCollapse('marketing')" class="sidenav-item w-full @(IsInSection("/upsell") || IsInSection("/reviews") || IsInSection("/analytics") || IsInSection("/abandoned") ? "active" : "")">
                    <span class="icon-shape @(IsInSection("/upsell") || IsInSection("/reviews") || IsInSection("/analytics") || IsInSection("/abandoned") ? "!bg-gradient-to-tl from-purple-700 to-pink-500 !text-white" : "")">
                        <i class="fas fa-bullhorn text-xs"></i>
                    </span>
                    <span class="nav-text text-sm flex-1 text-left">Marketing</span>
                    <i id="marketing-chevron" class="fas fa-chevron-right text-[10px] text-slate-400 dark:text-white/50 collapse-chevron @(IsInSection("/upsell") || IsInSection("/reviews") || IsInSection("/analytics") || IsInSection("/abandoned") ? "rotated" : "")"></i>
                </button>
                <div id="marketing-collapse" class="sidenav-collapse @(IsInSection("/upsell") || IsInSection("/reviews") || IsInSection("/analytics") || IsInSection("/abandoned") ? "show" : "")">
                    <a href="/upsell" class="sidenav-dropdown-item @(IsActive("/upsell") ? "active" : "")">Upsell</a>
                    <a href="/reviews/admin" class="sidenav-dropdown-item @(IsInSection("/reviews") ? "active" : "")">Reviews</a>
                    <a href="/analytics" class="sidenav-dropdown-item @(IsActive("/analytics") ? "active" : "")">Analytics</a>
                    <a href="/analytics/metaads" class="sidenav-dropdown-item @(IsActive("/analytics/metaads") ? "active" : "")">Meta Ads</a>
                    <a href="/analytics/googleads" class="sidenav-dropdown-item @(IsActive("/analytics/googleads") ? "active" : "")">Google Ads</a>
                    <a href="/analytics/tiktokads" class="sidenav-dropdown-item @(IsActive("/analytics/tiktokads") ? "active" : "")">TikTok Ads</a>
                    <a href="/analytics/pinterestads" class="sidenav-dropdown-item @(IsActive("/analytics/pinterestads") ? "active" : "")">Pinterest Ads</a>
                    <a href="/abandoned-checkouts" class="sidenav-dropdown-item @(IsInSection("/abandoned") ? "active" : "")">Abandoned Carts</a>
                </div>

                <!-- Reports Section -->
                <p class="sidenav-title mt-4">Reports</p>

                <a href="/reports" class="sidenav-item @(currentPath == "/reports" ? "active" : "")">
                    <span class="icon-shape @(currentPath == "/reports" ? "!bg-gradient-to-tl from-purple-700 to-pink-500 !text-white" : "")">
                        <i class="fas fa-chart-pie text-xs"></i>
                    </span>
                    <span class="nav-text text-sm">Dashboard</span>
                </a>

                <button onclick="toggleCollapse('reports')" class="sidenav-item w-full @(IsInSection("/reports/") ? "active" : "")">
                    <span class="icon-shape @(IsInSection("/reports/") ? "!bg-gradient-to-tl from-purple-700 to-pink-500 !text-white" : "")">
                        <i class="fas fa-chart-bar text-xs"></i>
                    </span>
                    <span class="nav-text text-sm flex-1 text-left">Detailed Reports</span>
                    <i id="reports-chevron" class="fas fa-chevron-right text-[10px] text-slate-400 dark:text-white/50 collapse-chevron @(IsInSection("/reports/") ? "rotated" : "")"></i>
                </button>
                <div id="reports-collapse" class="sidenav-collapse @(IsInSection("/reports/") ? "show" : "")">
                    <a href="/reports/sales" class="sidenav-dropdown-item @(IsActive("/reports/sales") ? "active" : "")">Sales</a>
                    <a href="/reports/products" class="sidenav-dropdown-item @(IsActive("/reports/products") ? "active" : "")">Products</a>
                    <a href="/reports/customers" class="sidenav-dropdown-item @(IsActive("/reports/customers") ? "active" : "")">Customers</a>
                    <a href="/reports/financial" class="sidenav-dropdown-item @(IsActive("/reports/financial") ? "active" : "")">Financial</a>
                    <a href="/reports/advertising" class="sidenav-dropdown-item @(IsActive("/reports/advertising") ? "active" : "")">Advertising</a>
                </div>

                <!-- AI Tools Section -->
                <p class="sidenav-title mt-4">AI Tools</p>

                <a href="/ai" class="sidenav-item @(currentPath == "/ai" ? "active" : "")">
                    <span class="icon-shape @(currentPath == "/ai" ? "!bg-gradient-to-tl from-purple-700 to-pink-500 !text-white" : "")">
                        <i class="fas fa-robot text-xs"></i>
                    </span>
                    <span class="nav-text text-sm">AI Dashboard</span>
                </a>

                <button onclick="toggleCollapse('ai')" class="sidenav-item w-full @(IsInSection("/ai/") ? "active" : "")">
                    <span class="icon-shape @(IsInSection("/ai/") ? "!bg-gradient-to-tl from-purple-700 to-pink-500 !text-white" : "")">
                        <i class="fas fa-wand-magic-sparkles text-xs"></i>
                    </span>
                    <span class="nav-text text-sm flex-1 text-left">AI Tools</span>
                    <i id="ai-chevron" class="fas fa-chevron-right text-[10px] text-slate-400 dark:text-white/50 collapse-chevron @(IsInSection("/ai/") ? "rotated" : "")"></i>
                </button>
                <div id="ai-collapse" class="sidenav-collapse @(IsInSection("/ai/") ? "show" : "")">
                    <a href="/ai/descriptions" class="sidenav-dropdown-item @(IsActive("/ai/descriptions") ? "active" : "")">Descriptions</a>
                    <a href="/ai/seo" class="sidenav-dropdown-item @(IsActive("/ai/seo") ? "active" : "")">SEO Optimizer</a>
                    <a href="/ai/pricing" class="sidenav-dropdown-item @(IsActive("/ai/pricing") ? "active" : "")">Pricing AI</a>
                    <a href="/ai/alttext" class="sidenav-dropdown-item @(IsActive("/ai/alttext") ? "active" : "")">Alt Text</a>
                    <a href="/ai/chatbot" class="sidenav-dropdown-item @(IsActive("/ai/chatbot") ? "active" : "")">Chatbot</a>
                </div>

                <!-- Operations Section -->
                <p class="sidenav-title mt-4">Operations</p>

                <a href="/operations" class="sidenav-item @(currentPath == "/operations" ? "active" : "")">
                    <span class="icon-shape @(currentPath == "/operations" ? "!bg-gradient-to-tl from-purple-700 to-pink-500 !text-white" : "")">
                        <i class="fas fa-gauge-high text-xs"></i>
                    </span>
                    <span class="nav-text text-sm">Overview</span>
                </a>

                <button onclick="toggleCollapse('ops')" class="sidenav-item w-full @(IsInSection("/operations/") ? "active" : "")">
                    <span class="icon-shape @(IsInSection("/operations/") ? "!bg-gradient-to-tl from-purple-700 to-pink-500 !text-white" : "")">
                        <i class="fas fa-truck text-xs"></i>
                    </span>
                    <span class="nav-text text-sm flex-1 text-left">Supply Chain</span>
                    <i id="ops-chevron" class="fas fa-chevron-right text-[10px] text-slate-400 dark:text-white/50 collapse-chevron @(IsInSection("/operations/") ? "rotated" : "")"></i>
                </button>
                <div id="ops-collapse" class="sidenav-collapse @(IsInSection("/operations/") ? "show" : "")">
                    <a href="/operations/suppliers" class="sidenav-dropdown-item @(IsActive("/operations/suppliers") ? "active" : "")">Suppliers</a>
                    <a href="/operations/purchaseorders" class="sidenav-dropdown-item @(IsActive("/operations/purchaseorders") ? "active" : "")">Purchase Orders</a>
                    <a href="/operations/locations" class="sidenav-dropdown-item @(IsActive("/operations/locations") ? "active" : "")">Locations</a>
                    <a href="/operations/barcodes" class="sidenav-dropdown-item @(IsActive("/operations/barcodes") ? "active" : "")">Barcodes</a>
                    <a href="/operations/packing-slips" class="sidenav-dropdown-item @(IsActive("/operations/packing-slips") ? "active" : "")">Packing Slips</a>
                    <a href="/operations/label-designer" class="sidenav-dropdown-item @(IsActive("/operations/label-designer") ? "active" : "")">Label Designer</a>
                </div>

                <!-- Inventory Section -->
                <p class="sidenav-title mt-4">Inventory</p>

                <button onclick="toggleCollapse('inv')" class="sidenav-item w-full @(IsInSection("/inventory") ? "active" : "")">
                    <span class="icon-shape @(IsInSection("/inventory") ? "!bg-gradient-to-tl from-purple-700 to-pink-500 !text-white" : "")">
                        <i class="fas fa-warehouse text-xs"></i>
                    </span>
                    <span class="nav-text text-sm flex-1 text-left">Inventory</span>
                    <i id="inv-chevron" class="fas fa-chevron-right text-[10px] text-slate-400 dark:text-white/50 collapse-chevron @(IsInSection("/inventory") ? "rotated" : "")"></i>
                </button>
                <div id="inv-collapse" class="sidenav-collapse @(IsInSection("/inventory") ? "show" : "")">
                    <a href="/inventory" class="sidenav-dropdown-item @(currentPath == "/inventory" ? "active" : "")">Predictions</a>
                    <a href="/inventory/alerts" class="sidenav-dropdown-item @(IsActive("/inventory/alerts") ? "active" : "")">Alerts</a>
                    <a href="/inventory/settings" class="sidenav-dropdown-item @(IsActive("/inventory/settings") ? "active" : "")">Settings</a>
                </div>

                <!-- Customer Hub Section -->
                <p class="sidenav-title mt-4">Customer Hub</p>

                <a href="/customer-hub" class="sidenav-item @(currentPath == "/customer-hub" ? "active" : "")">
                    <span class="icon-shape @(currentPath == "/customer-hub" ? "!bg-gradient-to-tl from-purple-700 to-pink-500 !text-white" : "")">
                        <i class="fas fa-users text-xs"></i>
                    </span>
                    <span class="nav-text text-sm">Overview</span>
                </a>

                <button onclick="toggleCollapse('hub')" class="sidenav-item w-full @(IsInSection("/customer-hub/") ? "active" : "")">
                    <span class="icon-shape @(IsInSection("/customer-hub/") ? "!bg-gradient-to-tl from-purple-700 to-pink-500 !text-white" : "")">
                        <i class="fas fa-headset text-xs"></i>
                    </span>
                    <span class="nav-text text-sm flex-1 text-left">Support</span>
                    <i id="hub-chevron" class="fas fa-chevron-right text-[10px] text-slate-400 dark:text-white/50 collapse-chevron @(IsInSection("/customer-hub/") ? "rotated" : "")"></i>
                </button>
                <div id="hub-collapse" class="sidenav-collapse @(IsInSection("/customer-hub/") ? "show" : "")">
                    <a href="/customer-hub/inbox" class="sidenav-dropdown-item @(IsActive("/customer-hub/inbox") && !currentPath.Contains("live-chat") ? "active" : "")">Unified Inbox</a>
                    <a href="/customer-hub/inbox/live-chat" class="sidenav-dropdown-item @(IsActive("/customer-hub/inbox/live-chat") ? "active" : "")">Live Chat</a>
                    <a href="/customer-hub/exchanges" class="sidenav-dropdown-item @(IsActive("/customer-hub/exchanges") ? "active" : "")">Exchanges</a>
                    <a href="/customer-hub/loyalty" class="sidenav-dropdown-item @(IsActive("/customer-hub/loyalty") ? "active" : "")">Loyalty Program</a>
                </div>

                <!-- Returns -->
                <a href="/returns" class="sidenav-item @(IsInSection("/returns") ? "active" : "") mt-2">
                    <span class="icon-shape @(IsInSection("/returns") ? "!bg-gradient-to-tl from-purple-700 to-pink-500 !text-white" : "")">
                        <i class="fas fa-rotate-left text-xs"></i>
                    </span>
                    <span class="nav-text text-sm">Returns</span>
                </a>

                <!-- Admin Section -->
                <p class="sidenav-title mt-4">Admin</p>

                <button onclick="toggleCollapse('admin')" class="sidenav-item w-full @(IsInSection("/admin") ? "active" : "")">
                    <span class="icon-shape @(IsInSection("/admin") ? "!bg-gradient-to-tl from-purple-700 to-pink-500 !text-white" : "")">
                        <i class="fas fa-shield-halved text-xs"></i>
                    </span>
                    <span class="nav-text text-sm flex-1 text-left">Administration</span>
                    <i id="admin-chevron" class="fas fa-chevron-right text-[10px] text-slate-400 dark:text-white/50 collapse-chevron @(IsInSection("/admin") ? "rotated" : "")"></i>
                </button>
                <div id="admin-collapse" class="sidenav-collapse @(IsInSection("/admin") ? "show" : "")">
                    <a href="/admin/clients" class="sidenav-dropdown-item @(IsActive("/admin/clients") ? "active" : "")">Clients</a>
                    <a href="/admin/plan-features" class="sidenav-dropdown-item @(IsActive("/admin/plan-features") ? "active" : "")">Plan Features</a>
                    <a href="/admin/plan-requests" class="sidenav-dropdown-item @(IsActive("/admin/plan-requests") ? "active" : "")">Plan Requests</a>
                    <a href="/admin/settings" class="sidenav-dropdown-item @(IsActive("/admin/settings") ? "active" : "")">Global Settings</a>
                </div>

                <!-- Settings Section -->
                <p class="sidenav-title mt-4">Settings</p>

                <a href="/account/profile" class="sidenav-item @(IsActive("/account") ? "active" : "")">
                    <span class="icon-shape @(IsActive("/account") ? "!bg-gradient-to-tl from-purple-700 to-pink-500 !text-white" : "")">
                        <i class="fas fa-user text-xs"></i>
                    </span>
                    <span class="nav-text text-sm">Account</span>
                </a>

                <a href="/settings/store" class="sidenav-item @(IsActive("/settings/store") ? "active" : "")">
                    <span class="icon-shape @(IsActive("/settings/store") ? "!bg-gradient-to-tl from-purple-700 to-pink-500 !text-white" : "")">
                        <i class="fas fa-cog text-xs"></i>
                    </span>
                    <span class="nav-text text-sm">Store Settings</span>
                </a>

                <a href="/plans" class="sidenav-item @(IsActive("/plans") ? "active" : "")">
                    <span class="icon-shape @(IsActive("/plans") ? "!bg-gradient-to-tl from-purple-700 to-pink-500 !text-white" : "")">
                        <i class="fas fa-credit-card text-xs"></i>
                    </span>
                    <span class="nav-text text-sm">Plans & Billing</span>
                </a>

                <!-- Help Section -->
                <p class="sidenav-title mt-4">Help</p>

                <a href="/docs" class="sidenav-item @(IsInSection("/docs") ? "active" : "")">
                    <span class="icon-shape @(IsInSection("/docs") ? "!bg-gradient-to-tl from-purple-700 to-pink-500 !text-white" : "")">
                        <i class="fas fa-book text-xs"></i>
                    </span>
                    <span class="nav-text text-sm">Documentation</span>
                </a>
            </nav>

            <!-- User Card - Hidden on small screens -->
            <div class="hidden lg:block p-4 flex-shrink-0">
                <div class="bg-gradient-to-tl from-purple-700 to-pink-500 rounded-xl p-4 text-center">
                    <div class="w-10 h-10 mx-auto bg-white rounded-lg flex items-center justify-center shadow-lg mb-2">
                        <i class="fas fa-rocket text-purple-600 text-sm"></i>
                    </div>
                    <h6 class="text-white text-sm font-semibold mb-1">Need Help?</h6>
                    <p class="text-white/70 text-xs mb-2">Check our docs</p>
                    <a href="/docs" class="block w-full py-2 px-3 bg-white rounded-lg text-slate-800 text-xs font-semibold hover:bg-gray-100 transition-colors">
                        Documentation
                    </a>
                </div>
            </div>
        </div>
    </aside>

    <!-- Main Content -->
    <div class="sm:ml-64 lg:ml-72 xl:ml-80 transition-[margin] duration-300">
        <!-- Top Navbar -->
        <nav class="sticky top-0 z-30 backdrop-blur-lg bg-white/70 dark:bg-slate-900/70 shadow-sm">
            <div class="flex items-center justify-between h-16 px-6">
                <!-- Breadcrumb -->
                <div class="flex items-center">
                    <nav class="flex" aria-label="Breadcrumb">
                        <ol class="inline-flex items-center space-x-2">
                            <li class="inline-flex items-center">
                                <a href="/dashboard" class="inline-flex items-center text-sm text-slate-500 hover:text-purple-600 dark:text-slate-400 dark:hover:text-purple-400 transition-colors">
                                    <i class="fas fa-home text-xs me-2"></i>
                                    Home
                                </a>
                            </li>
                            @if (ViewData["Breadcrumb"] != null)
                            {
                                <li>
                                    <div class="flex items-center">
                                        <span class="text-slate-400 mx-2">/</span>
                                        <span class="text-sm font-medium text-slate-700 dark:text-slate-200">@ViewData["Breadcrumb"]</span>
                                    </div>
                                </li>
                            }
                        </ol>
                    </nav>
                </div>

                <!-- Right side buttons -->
                <div class="flex items-center gap-1">
                    <!-- Search -->
                    <button type="button" class="p-2.5 text-slate-500 hover:text-slate-700 dark:text-slate-400 dark:hover:text-slate-200 rounded-lg hover:bg-slate-100 dark:hover:bg-slate-800 transition-colors">
                        <i class="fas fa-search text-sm"></i>
                    </button>

                    <!-- Dark mode toggle -->
                    <button id="theme-toggle" type="button" class="p-2.5 text-slate-500 hover:text-slate-700 dark:text-slate-400 dark:hover:text-slate-200 rounded-lg hover:bg-slate-100 dark:hover:bg-slate-800 transition-colors">
                        <i id="theme-toggle-dark-icon" class="hidden fas fa-moon text-sm"></i>
                        <i id="theme-toggle-light-icon" class="hidden fas fa-sun text-sm"></i>
                    </button>

                    <!-- Notifications -->
                    <button type="button" class="relative p-2.5 text-slate-500 hover:text-slate-700 dark:text-slate-400 dark:hover:text-slate-200 rounded-lg hover:bg-slate-100 dark:hover:bg-slate-800 transition-colors">
                        <i class="fas fa-bell text-sm"></i>
                        <span class="absolute top-1.5 right-1.5 w-2 h-2 bg-red-500 rounded-full"></span>
                    </button>

                    <!-- Profile dropdown -->
                    <div class="relative ml-2">
                        <button type="button" class="flex items-center gap-2 p-1.5 rounded-lg hover:bg-slate-100 dark:hover:bg-slate-800 transition-colors">
                            <div class="w-8 h-8 rounded-lg bg-gradient-to-tl from-purple-700 to-pink-500 flex items-center justify-center text-white text-sm font-semibold shadow-md">
                                A
                            </div>
                        </button>
                    </div>
                </div>
            </div>
        </nav>

        <!-- Page Content -->
        <main class="p-6">
            @RenderBody()
        </main>
    </div>

    <!-- Modal container -->
    @await RenderSectionAsync("Modals", required: false)

    <!-- Flowbite JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.2.1/flowbite.min.js"></script>

    <!-- Scripts -->
    <script>
        // Theme toggle
        if (localStorage.getItem('color-theme') === 'dark' || (!('color-theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
            document.documentElement.classList.add('dark');
            document.getElementById('theme-toggle-light-icon').classList.remove('hidden');
        } else {
            document.documentElement.classList.remove('dark');
            document.getElementById('theme-toggle-dark-icon').classList.remove('hidden');
        }

        document.getElementById('theme-toggle').addEventListener('click', function() {
            document.getElementById('theme-toggle-dark-icon').classList.toggle('hidden');
            document.getElementById('theme-toggle-light-icon').classList.toggle('hidden');

            if (document.documentElement.classList.contains('dark')) {
                document.documentElement.classList.remove('dark');
                localStorage.setItem('color-theme', 'light');
            } else {
                document.documentElement.classList.add('dark');
                localStorage.setItem('color-theme', 'dark');
            }
        });

        // Collapse toggle
        function toggleCollapse(name) {
            const collapse = document.getElementById(name + '-collapse');
            const chevron = document.getElementById(name + '-chevron');

            if (collapse.classList.contains('show')) {
                collapse.classList.remove('show');
                chevron.classList.remove('rotated');
            } else {
                collapse.classList.add('show');
                chevron.classList.add('rotated');
            }
        }
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
