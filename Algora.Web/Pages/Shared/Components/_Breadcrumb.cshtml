@* Breadcrumb Component
   Usage: <partial name="Components/_Breadcrumb" model="new { Items = new[] { new { Text = \"Products\", Href = \"/products\" }, new { Text = \"Edit\" } } }" />
*@

@{
    var homeText = ViewData["HomeText"]?.ToString() ?? "Home";
    var homeHref = ViewData["HomeHref"]?.ToString() ?? "/dashboard";
}

<nav class="flex mb-4" aria-label="Breadcrumb">
    <ol class="inline-flex items-center space-x-1 md:space-x-3">
        <li class="inline-flex items-center">
            <a href="@homeHref" class="inline-flex items-center text-sm font-medium text-gray-700 hover:text-purple-600 dark:text-gray-400 dark:hover:text-white">
                <i class="fas fa-home w-3 h-3 me-2.5"></i>
                @homeText
            </a>
        </li>
        @RenderBody()
    </ol>
</nav>
