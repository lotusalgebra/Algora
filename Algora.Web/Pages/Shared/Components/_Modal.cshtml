@* Modal Component
   Usage: Include this partial and use data-modal-target and data-modal-toggle attributes on buttons
   <button data-modal-target="my-modal" data-modal-toggle="my-modal">Open Modal</button>
   <partial name="Components/_Modal" model="new { Id = \"my-modal\", Title = \"Confirm Action\", Size = \"md\" }" />
*@

@{
    var id = ViewData["Id"]?.ToString() ?? "default-modal";
    var title = ViewData["Title"]?.ToString() ?? "Modal";
    var size = ViewData["Size"]?.ToString() ?? "md"; // sm, md, lg, xl, full
    var showFooter = ViewData["ShowFooter"] as bool? ?? true;
    var confirmText = ViewData["ConfirmText"]?.ToString() ?? "Confirm";
    var cancelText = ViewData["CancelText"]?.ToString() ?? "Cancel";
    var confirmType = ViewData["ConfirmType"]?.ToString() ?? "primary"; // primary, danger

    var sizeClass = size switch
    {
        "sm" => "max-w-md",
        "lg" => "max-w-4xl",
        "xl" => "max-w-6xl",
        "full" => "max-w-full mx-4",
        _ => "max-w-2xl"
    };

    var confirmColorClass = confirmType == "danger"
        ? "text-white bg-red-600 hover:bg-red-700 focus:ring-4 focus:outline-none focus:ring-red-300 dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-red-800"
        : "text-white bg-gradient-to-br from-purple-600 to-pink-500 hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-purple-300 dark:focus:ring-purple-800";
}

<div id="@id" tabindex="-1" aria-hidden="true" class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full">
    <div class="relative p-4 w-full @sizeClass max-h-full">
        <!-- Modal content -->
        <div class="relative bg-white rounded-lg shadow dark:bg-gray-700">
            <!-- Modal header -->
            <div class="flex items-center justify-between p-4 md:p-5 border-b rounded-t dark:border-gray-600">
                <h3 class="text-xl font-semibold text-gray-900 dark:text-white">
                    @title
                </h3>
                <button type="button" class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center dark:hover:bg-gray-600 dark:hover:text-white" data-modal-hide="@id">
                    <i class="fas fa-times"></i>
                    <span class="sr-only">Close modal</span>
                </button>
            </div>

            <!-- Modal body -->
            <div class="p-4 md:p-5 space-y-4">
                @RenderBody()
            </div>

            @if (showFooter)
            {
                <!-- Modal footer -->
                <div class="flex items-center justify-end gap-3 p-4 md:p-5 border-t border-gray-200 rounded-b dark:border-gray-600">
                    <button data-modal-hide="@id" type="button" class="text-gray-500 bg-white hover:bg-gray-100 focus:ring-4 focus:outline-none focus:ring-gray-200 rounded-lg border border-gray-200 text-sm font-medium px-5 py-2.5 hover:text-gray-900 focus:z-10 dark:bg-gray-700 dark:text-gray-300 dark:border-gray-500 dark:hover:text-white dark:hover:bg-gray-600 dark:focus:ring-gray-600">
                        @cancelText
                    </button>
                    <button data-modal-hide="@id" type="button" class="@confirmColorClass font-medium rounded-lg text-sm px-5 py-2.5 text-center">
                        @confirmText
                    </button>
                </div>
            }
        </div>
    </div>
</div>
