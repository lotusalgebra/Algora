@page
@model Algora.Web.Pages.Reports.ProductsModel
@{
    ViewData["Title"] = "Products Report";
}

<div class="space-y-6">
    <!-- Page Header -->
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between">
        <div>
            <h1 class="text-2xl font-bold text-gray-900 dark:text-white">Products Report</h1>
            <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Product performance analytics</p>
        </div>
        <a href="/reports/products?handler=Export&format=csv&StartDate=@Model.StartDate.ToString("yyyy-MM-dd")&EndDate=@Model.EndDate.ToString("yyyy-MM-dd")"
           class="mt-4 sm:mt-0 text-white bg-gradient-to-br from-green-500 to-lime-400 hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-green-300 font-medium rounded-lg text-sm px-5 py-2.5 inline-flex items-center">
            <i class="fas fa-download me-2"></i>Export CSV
        </a>
    </div>

    <!-- Date Filter -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-4">
        <form method="get" class="flex flex-wrap items-end gap-4">
            <div>
                <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Start Date</label>
                <input type="date" name="StartDate" value="@Model.StartDate.ToString("yyyy-MM-dd")"
                       class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white" />
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">End Date</label>
                <input type="date" name="EndDate" value="@Model.EndDate.ToString("yyyy-MM-dd")"
                       class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white" />
            </div>
            <button type="submit" class="text-white bg-gradient-to-br from-purple-600 to-pink-500 hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-purple-300 font-medium rounded-lg text-sm px-5 py-2.5">
                Apply
            </button>
        </form>
    </div>

    <!-- KPI Cards -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
        <!-- Total Products -->
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-4 hover:shadow-lg transition-shadow">
            <div class="flex items-center justify-between">
                <div class="flex-1">
                    <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Total Products</p>
                    <h3 class="text-2xl font-bold text-gray-900 dark:text-white mt-1">@Model.Report.TotalProducts</h3>
                </div>
                <div class="flex items-center justify-center w-12 h-12 rounded-lg bg-gradient-to-br from-purple-600 to-pink-500">
                    <i class="fas fa-box text-white text-lg"></i>
                </div>
            </div>
        </div>

        <!-- Units Sold -->
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-4 hover:shadow-lg transition-shadow">
            <div class="flex items-center justify-between">
                <div class="flex-1">
                    <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Units Sold</p>
                    <h3 class="text-2xl font-bold text-green-600 mt-1">@Model.Report.TotalUnitsSold</h3>
                </div>
                <div class="flex items-center justify-center w-12 h-12 rounded-lg bg-gradient-to-br from-green-500 to-lime-400">
                    <i class="fas fa-shopping-bag text-white text-lg"></i>
                </div>
            </div>
        </div>

        <!-- Product Revenue -->
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-4 hover:shadow-lg transition-shadow">
            <div class="flex items-center justify-between">
                <div class="flex-1">
                    <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Product Revenue</p>
                    <h3 class="text-2xl font-bold text-blue-500 mt-1">$@Model.Report.TotalProductRevenue.ToString("N0")</h3>
                </div>
                <div class="flex items-center justify-center w-12 h-12 rounded-lg bg-gradient-to-br from-blue-500 to-cyan-400">
                    <i class="fas fa-dollar-sign text-white text-lg"></i>
                </div>
            </div>
        </div>

        <!-- Avg Price -->
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-4 hover:shadow-lg transition-shadow">
            <div class="flex items-center justify-between">
                <div class="flex-1">
                    <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Avg Price</p>
                    <h3 class="text-2xl font-bold text-orange-500 mt-1">$@Model.Report.AveragePricePoint.ToString("N2")</h3>
                </div>
                <div class="flex items-center justify-center w-12 h-12 rounded-lg bg-gradient-to-br from-orange-500 to-yellow-400">
                    <i class="fas fa-tag text-white text-lg"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Best Sellers & Low Stock -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <!-- Best Sellers -->
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md overflow-hidden">
            <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700">
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Best Sellers</h3>
            </div>
            <div class="overflow-x-auto">
                <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
                    <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                        <tr>
                            <th scope="col" class="px-6 py-3">Product</th>
                            <th scope="col" class="px-6 py-3 text-center">Units</th>
                            <th scope="col" class="px-6 py-3 text-right">Revenue</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Model.Report.BestSellers)
                        {
                            <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-700">
                                <td class="px-6 py-4">
                                    <p class="font-medium text-gray-900 dark:text-white">@product.ProductTitle</p>
                                    <p class="text-xs text-gray-500">@product.Vendor</p>
                                </td>
                                <td class="px-6 py-4 text-center">@product.TotalQuantitySold</td>
                                <td class="px-6 py-4 text-right font-medium text-green-600">$@product.TotalRevenue.ToString("N0")</td>
                            </tr>
                        }
                        @if (!Model.Report.BestSellers.Any())
                        {
                            <tr class="bg-white dark:bg-gray-800">
                                <td colspan="3" class="px-6 py-8 text-center text-gray-500 dark:text-gray-400">No sales in this period</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Low Stock Alert -->
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md overflow-hidden">
            <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700">
                <h3 class="text-lg font-semibold text-orange-500">Low Stock Alert</h3>
            </div>
            <div class="overflow-x-auto">
                <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
                    <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                        <tr>
                            <th scope="col" class="px-6 py-3">Product</th>
                            <th scope="col" class="px-6 py-3 text-center">Stock</th>
                            <th scope="col" class="px-6 py-3 text-center">Sold</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Model.Report.LowStock)
                        {
                            <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-700">
                                <td class="px-6 py-4 font-medium text-gray-900 dark:text-white">@product.ProductTitle</td>
                                <td class="px-6 py-4 text-center">
                                    <span class="bg-orange-100 text-orange-800 text-xs font-medium px-2.5 py-0.5 rounded dark:bg-orange-900 dark:text-orange-300">@product.InventoryQuantity</span>
                                </td>
                                <td class="px-6 py-4 text-center">@product.TotalQuantitySold</td>
                            </tr>
                        }
                        @if (!Model.Report.LowStock.Any())
                        {
                            <tr class="bg-white dark:bg-gray-800">
                                <td colspan="3" class="px-6 py-8 text-center text-gray-500 dark:text-gray-400">No low stock items</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Revenue Charts -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <!-- Revenue by Vendor -->
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md overflow-hidden">
            <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700">
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Revenue by Vendor</h3>
            </div>
            <div class="p-6">
                <div style="height: 250px;">
                    @if (Model.Report.RevenueByVendor.Any())
                    {
                        <canvas id="vendorChart"></canvas>
                    }
                    else
                    {
                        <p class="text-center text-gray-500 dark:text-gray-400 py-12">No vendor data available</p>
                    }
                </div>
            </div>
        </div>

        <!-- Revenue by Product Type -->
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md overflow-hidden">
            <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700">
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Revenue by Product Type</h3>
            </div>
            <div class="p-6">
                <div style="height: 250px;">
                    @if (Model.Report.RevenueByProductType.Any())
                    {
                        <canvas id="typeChart"></canvas>
                    }
                    else
                    {
                        <p class="text-center text-gray-500 dark:text-gray-400 py-12">No product type data available</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
    @if (Model.Report.RevenueByVendor.Any())
    {
        <text>
        new Chart(document.getElementById('vendorChart').getContext('2d'), {
            type: 'bar',
            data: {
                labels: [@Html.Raw(string.Join(",", Model.Report.RevenueByVendor.Keys.Select(k => $"'{k}'")))],
                datasets: [{
                    label: 'Revenue',
                    data: [@Html.Raw(string.Join(",", Model.Report.RevenueByVendor.Values))],
                    backgroundColor: 'rgba(147, 51, 234, 0.8)'
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                indexAxis: 'y',
                plugins: { legend: { display: false } },
                scales: {
                    x: { grid: { color: 'rgba(156, 163, 175, 0.2)' } },
                    y: { grid: { display: false } }
                }
            }
        });
        </text>
    }

    @if (Model.Report.RevenueByProductType.Any())
    {
        <text>
        new Chart(document.getElementById('typeChart').getContext('2d'), {
            type: 'doughnut',
            data: {
                labels: [@Html.Raw(string.Join(",", Model.Report.RevenueByProductType.Keys.Select(k => $"'{k}'")))],
                datasets: [{
                    data: [@Html.Raw(string.Join(",", Model.Report.RevenueByProductType.Values))],
                    backgroundColor: ['rgb(147, 51, 234)', 'rgb(45, 206, 137)', 'rgb(251, 99, 64)', 'rgb(245, 54, 92)', 'rgb(17, 205, 239)', 'rgb(23, 43, 77)']
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false
            }
        });
        </text>
    }
</script>
}
