@page
@model Algora.Web.Pages.Reports.ProductsModel
@{
    ViewData["Title"] = "Products Report";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12 d-flex justify-content-between align-items-center">
            <div>
                <h4 class="mb-1">Products Report</h4>
                <p class="text-sm text-secondary mb-0">Product performance analytics</p>
            </div>
            <a href="/reports/products?handler=Export&format=csv&StartDate=@Model.StartDate.ToString("yyyy-MM-dd")&EndDate=@Model.EndDate.ToString("yyyy-MM-dd")"
               class="btn bg-gradient-success btn-sm">
                <i class="fas fa-download me-2"></i>Export CSV
            </a>
        </div>
    </div>

    <!-- Date Filter -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-body py-3">
                    <form method="get" class="d-flex align-items-center gap-3 flex-wrap">
                        <div>
                            <label class="form-label text-xs mb-1">Start Date</label>
                            <input type="date" name="StartDate" value="@Model.StartDate.ToString("yyyy-MM-dd")" class="form-control form-control-sm" />
                        </div>
                        <div>
                            <label class="form-label text-xs mb-1">End Date</label>
                            <input type="date" name="EndDate" value="@Model.EndDate.ToString("yyyy-MM-dd")" class="form-control form-control-sm" />
                        </div>
                        <div class="align-self-end">
                            <button type="submit" class="btn bg-gradient-primary btn-sm">Apply</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- KPI Cards -->
    <div class="row mb-4">
        <div class="col-xl-3 col-sm-6 mb-xl-0 mb-4">
            <div class="card">
                <div class="card-body p-3">
                    <p class="text-sm mb-0 font-weight-bold">Total Products</p>
                    <h4 class="font-weight-bolder text-primary">@Model.Report.TotalProducts</h4>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-sm-6 mb-xl-0 mb-4">
            <div class="card">
                <div class="card-body p-3">
                    <p class="text-sm mb-0 font-weight-bold">Units Sold</p>
                    <h4 class="font-weight-bolder text-success">@Model.Report.TotalUnitsSold</h4>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-sm-6 mb-xl-0 mb-4">
            <div class="card">
                <div class="card-body p-3">
                    <p class="text-sm mb-0 font-weight-bold">Product Revenue</p>
                    <h4 class="font-weight-bolder text-info">$@Model.Report.TotalProductRevenue.ToString("N0")</h4>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-sm-6">
            <div class="card">
                <div class="card-body p-3">
                    <p class="text-sm mb-0 font-weight-bold">Avg Price</p>
                    <h4 class="font-weight-bolder text-warning">$@Model.Report.AveragePricePoint.ToString("N2")</h4>
                </div>
            </div>
        </div>
    </div>

    <!-- Best Sellers & Low Stock -->
    <div class="row mb-4">
        <div class="col-lg-6 mb-lg-0 mb-4">
            <div class="card">
                <div class="card-header pb-0">
                    <h6>Best Sellers</h6>
                </div>
                <div class="card-body px-0 pt-0 pb-2">
                    <div class="table-responsive p-0">
                        <table class="table align-items-center mb-0">
                            <thead>
                                <tr>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Product</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Units</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Revenue</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var product in Model.Report.BestSellers)
                                {
                                    <tr>
                                        <td class="ps-4">
                                            <p class="text-xs font-weight-bold mb-0">@product.ProductTitle</p>
                                            <p class="text-xxs text-secondary mb-0">@product.Vendor</p>
                                        </td>
                                        <td><span class="text-xs">@product.TotalQuantitySold</span></td>
                                        <td><span class="text-xs font-weight-bold text-success">$@product.TotalRevenue.ToString("N0")</span></td>
                                    </tr>
                                }
                                @if (!Model.Report.BestSellers.Any())
                                {
                                    <tr><td colspan="3" class="text-center text-xs text-secondary py-4">No sales in this period</td></tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="card">
                <div class="card-header pb-0">
                    <h6 class="text-warning">Low Stock Alert</h6>
                </div>
                <div class="card-body px-0 pt-0 pb-2">
                    <div class="table-responsive p-0">
                        <table class="table align-items-center mb-0">
                            <thead>
                                <tr>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Product</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Stock</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Sold</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var product in Model.Report.LowStock)
                                {
                                    <tr>
                                        <td class="ps-4">
                                            <p class="text-xs font-weight-bold mb-0">@product.ProductTitle</p>
                                        </td>
                                        <td><span class="badge bg-gradient-warning">@product.InventoryQuantity</span></td>
                                        <td><span class="text-xs">@product.TotalQuantitySold</span></td>
                                    </tr>
                                }
                                @if (!Model.Report.LowStock.Any())
                                {
                                    <tr><td colspan="3" class="text-center text-xs text-secondary py-4">No low stock items</td></tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Revenue by Vendor Chart -->
    <div class="row">
        <div class="col-lg-6 mb-4">
            <div class="card">
                <div class="card-header pb-0">
                    <h6>Revenue by Vendor</h6>
                </div>
                <div class="card-body p-3">
                    @if (Model.Report.RevenueByVendor.Any())
                    {
                        <canvas id="vendorChart" height="250"></canvas>
                    }
                    else
                    {
                        <p class="text-center text-xs text-secondary py-4">No vendor data available</p>
                    }
                </div>
            </div>
        </div>
        <div class="col-lg-6 mb-4">
            <div class="card">
                <div class="card-header pb-0">
                    <h6>Revenue by Product Type</h6>
                </div>
                <div class="card-body p-3">
                    @if (Model.Report.RevenueByProductType.Any())
                    {
                        <canvas id="typeChart" height="250"></canvas>
                    }
                    else
                    {
                        <p class="text-center text-xs text-secondary py-4">No product type data available</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.1/dist/chart.umd.min.js"></script>
    <script>
        @if (Model.Report.RevenueByVendor.Any())
        {
            <text>
            new Chart(document.getElementById('vendorChart').getContext('2d'), {
                type: 'bar',
                data: {
                    labels: [@Html.Raw(string.Join(",", Model.Report.RevenueByVendor.Keys.Select(k => $"'{k}'")))],
                    datasets: [{
                        label: 'Revenue',
                        data: [@Html.Raw(string.Join(",", Model.Report.RevenueByVendor.Values))],
                        backgroundColor: 'rgba(94, 114, 228, 0.8)'
                    }]
                },
                options: { responsive: true, maintainAspectRatio: false, indexAxis: 'y' }
            });
            </text>
        }

        @if (Model.Report.RevenueByProductType.Any())
        {
            <text>
            new Chart(document.getElementById('typeChart').getContext('2d'), {
                type: 'doughnut',
                data: {
                    labels: [@Html.Raw(string.Join(",", Model.Report.RevenueByProductType.Keys.Select(k => $"'{k}'")))],
                    datasets: [{
                        data: [@Html.Raw(string.Join(",", Model.Report.RevenueByProductType.Values))],
                        backgroundColor: ['#5e72e4', '#2dce89', '#fb6340', '#f5365c', '#11cdef', '#172b4d']
                    }]
                },
                options: { responsive: true, maintainAspectRatio: false }
            });
            </text>
        }
    </script>
}
