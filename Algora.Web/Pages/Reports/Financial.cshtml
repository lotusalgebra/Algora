@page
@model Algora.Web.Pages.Reports.FinancialModel
@{
    ViewData["Title"] = "Financial Report";
}

<div class="space-y-6">
    <!-- Page Header -->
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between">
        <div>
            <h1 class="text-2xl font-bold text-gray-900 dark:text-white">Financial Report</h1>
            <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Revenue, refunds, and profit analysis</p>
        </div>
        <a href="/reports/financial?handler=Export&format=csv&StartDate=@Model.StartDate.ToString("yyyy-MM-dd")&EndDate=@Model.EndDate.ToString("yyyy-MM-dd")"
           class="mt-4 sm:mt-0 text-white bg-gradient-to-br from-green-500 to-lime-400 hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-green-300 font-medium rounded-lg text-sm px-5 py-2.5 inline-flex items-center">
            <i class="fas fa-download me-2"></i>Export CSV
        </a>
    </div>

    <!-- Date Filter -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-4">
        <form method="get" class="flex flex-wrap items-end gap-4">
            <div>
                <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Start Date</label>
                <input type="date" name="StartDate" value="@Model.StartDate.ToString("yyyy-MM-dd")"
                       class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white" />
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">End Date</label>
                <input type="date" name="EndDate" value="@Model.EndDate.ToString("yyyy-MM-dd")"
                       class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white" />
            </div>
            <button type="submit" class="text-white bg-gradient-to-br from-purple-600 to-pink-500 hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-purple-300 font-medium rounded-lg text-sm px-5 py-2.5">
                Apply
            </button>
        </form>
    </div>

    <!-- KPI Cards -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
        <!-- Gross Revenue -->
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-4 hover:shadow-lg transition-shadow">
            <div class="flex items-center justify-between">
                <div class="flex-1">
                    <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Gross Revenue</p>
                    <h3 class="text-2xl font-bold text-gray-900 dark:text-white mt-1">$@Model.Report.GrossRevenue.ToString("N0")</h3>
                </div>
                <div class="flex items-center justify-center w-12 h-12 rounded-lg bg-gradient-to-br from-purple-600 to-pink-500">
                    <i class="fas fa-dollar-sign text-white text-lg"></i>
                </div>
            </div>
        </div>

        <!-- Total Refunds -->
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-4 hover:shadow-lg transition-shadow">
            <div class="flex items-center justify-between">
                <div class="flex-1">
                    <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Total Refunds</p>
                    <h3 class="text-2xl font-bold text-red-500 mt-1">$@Model.Report.TotalRefunds.ToString("N0")</h3>
                </div>
                <div class="flex items-center justify-center w-12 h-12 rounded-lg bg-gradient-to-br from-red-500 to-pink-500">
                    <i class="fas fa-undo text-white text-lg"></i>
                </div>
            </div>
        </div>

        <!-- Net Revenue -->
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-4 hover:shadow-lg transition-shadow">
            <div class="flex items-center justify-between">
                <div class="flex-1">
                    <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Net Revenue</p>
                    <h3 class="text-2xl font-bold text-green-600 mt-1">$@Model.Report.NetRevenue.ToString("N0")</h3>
                </div>
                <div class="flex items-center justify-center w-12 h-12 rounded-lg bg-gradient-to-br from-green-500 to-lime-400">
                    <i class="fas fa-chart-line text-white text-lg"></i>
                </div>
            </div>
        </div>

        <!-- Gross Profit Margin -->
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-4 hover:shadow-lg transition-shadow">
            <div class="flex items-center justify-between">
                <div class="flex-1">
                    <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Gross Profit Margin</p>
                    <h3 class="text-2xl font-bold text-blue-500 mt-1">@Model.Report.GrossProfitMargin.ToString("N1")%</h3>
                </div>
                <div class="flex items-center justify-center w-12 h-12 rounded-lg bg-gradient-to-br from-blue-500 to-cyan-400">
                    <i class="fas fa-percentage text-white text-lg"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Breakdown Cards -->
    <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-5 gap-4">
        <div class="bg-gray-50 dark:bg-gray-700 rounded-lg p-4 text-center">
            <p class="text-xs text-gray-500 dark:text-gray-400 mb-1">COGS</p>
            <p class="text-lg font-bold text-gray-900 dark:text-white">$@Model.Report.TotalCOGS.ToString("N0")</p>
        </div>
        <div class="bg-gray-50 dark:bg-gray-700 rounded-lg p-4 text-center">
            <p class="text-xs text-gray-500 dark:text-gray-400 mb-1">Gross Profit</p>
            <p class="text-lg font-bold text-gray-900 dark:text-white">$@Model.Report.GrossProfit.ToString("N0")</p>
        </div>
        <div class="bg-gray-50 dark:bg-gray-700 rounded-lg p-4 text-center">
            <p class="text-xs text-gray-500 dark:text-gray-400 mb-1">Ads Spend</p>
            <p class="text-lg font-bold text-red-500">$@Model.Report.TotalAdsSpend.ToString("N0")</p>
        </div>
        <div class="bg-gray-50 dark:bg-gray-700 rounded-lg p-4 text-center">
            <p class="text-xs text-gray-500 dark:text-gray-400 mb-1">Net Profit</p>
            <p class="text-lg font-bold @(Model.Report.NetProfit >= 0 ? "text-green-600" : "text-red-500")">$@Model.Report.NetProfit.ToString("N0")</p>
        </div>
        <div class="bg-gray-50 dark:bg-gray-700 rounded-lg p-4 text-center">
            <p class="text-xs text-gray-500 dark:text-gray-400 mb-1">Net Margin</p>
            <p class="text-lg font-bold text-gray-900 dark:text-white">@Model.Report.NetProfitMargin.ToString("N1")%</p>
        </div>
    </div>

    <!-- Charts Row -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <!-- Revenue vs Refunds -->
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md overflow-hidden">
            <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700">
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Revenue vs Refunds</h3>
            </div>
            <div class="p-6">
                <div style="height: 250px;">
                    @if (Model.Report.RevenueVsRefunds.Any())
                    {
                        <canvas id="revenueRefundChart"></canvas>
                    }
                    else
                    {
                        <p class="text-center text-gray-500 dark:text-gray-400 py-12">No data available</p>
                    }
                </div>
            </div>
        </div>

        <!-- Profit Trend -->
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md overflow-hidden">
            <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700">
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Profit Trend</h3>
            </div>
            <div class="p-6">
                <div style="height: 250px;">
                    @if (Model.Report.ProfitTrend.Any())
                    {
                        <canvas id="profitChart"></canvas>
                    }
                    else
                    {
                        <p class="text-center text-gray-500 dark:text-gray-400 py-12">No data available</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Refunds Section -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <!-- Refunds by Reason -->
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md overflow-hidden">
            <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700">
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Refunds by Reason</h3>
            </div>
            <div class="p-6">
                <div style="height: 200px;">
                    @if (Model.Report.RefundsByReason.Any())
                    {
                        <canvas id="refundReasonChart"></canvas>
                    }
                    else
                    {
                        <p class="text-center text-gray-500 dark:text-gray-400 py-12">No refund data available</p>
                    }
                </div>
            </div>
        </div>

        <!-- Recent Refunds -->
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md overflow-hidden">
            <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700">
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Recent Refunds</h3>
            </div>
            <div class="overflow-x-auto">
                <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
                    <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                        <tr>
                            <th scope="col" class="px-6 py-3">Order</th>
                            <th scope="col" class="px-6 py-3 text-right">Amount</th>
                            <th scope="col" class="px-6 py-3">Reason</th>
                            <th scope="col" class="px-6 py-3 text-right">Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var refund in Model.Report.RecentRefunds.Take(5))
                        {
                            <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-700">
                                <td class="px-6 py-4 font-medium text-gray-900 dark:text-white">@refund.OrderNumber</td>
                                <td class="px-6 py-4 text-right font-medium text-red-500">$@refund.Amount.ToString("N2")</td>
                                <td class="px-6 py-4">@(refund.Reason ?? "Not specified")</td>
                                <td class="px-6 py-4 text-right">@refund.RefundedAt.ToString("MMM dd, yyyy")</td>
                            </tr>
                        }
                        @if (!Model.Report.RecentRefunds.Any())
                        {
                            <tr class="bg-white dark:bg-gray-800">
                                <td colspan="4" class="px-6 py-8 text-center text-gray-500 dark:text-gray-400">No refunds in this period</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
    @if (Model.Report.RevenueVsRefunds.Any())
    {
        <text>
        new Chart(document.getElementById('revenueRefundChart').getContext('2d'), {
            type: 'bar',
            data: {
                labels: [@Html.Raw(string.Join(",", Model.Report.RevenueVsRefunds.Select(d => $"'{d.Label}'")))],
                datasets: [
                    {
                        label: 'Revenue',
                        data: [@Html.Raw(string.Join(",", Model.Report.RevenueVsRefunds.Select(d => d.Value)))],
                        backgroundColor: 'rgba(45, 206, 137, 0.8)'
                    },
                    {
                        label: 'Refunds',
                        data: [@Html.Raw(string.Join(",", Model.Report.RevenueVsRefunds.Select(d => d.SecondaryValue ?? 0)))],
                        backgroundColor: 'rgba(245, 54, 92, 0.8)'
                    }
                ]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    y: { beginAtZero: true, grid: { color: 'rgba(156, 163, 175, 0.2)' } },
                    x: { grid: { display: false } }
                }
            }
        });
        </text>
    }

    @if (Model.Report.ProfitTrend.Any())
    {
        <text>
        new Chart(document.getElementById('profitChart').getContext('2d'), {
            type: 'line',
            data: {
                labels: [@Html.Raw(string.Join(",", Model.Report.ProfitTrend.Select(d => $"'{d.Label}'")))],
                datasets: [{
                    label: 'Profit',
                    data: [@Html.Raw(string.Join(",", Model.Report.ProfitTrend.Select(d => d.Value)))],
                    borderColor: 'rgb(147, 51, 234)',
                    backgroundColor: 'rgba(147, 51, 234, 0.1)',
                    tension: 0.4,
                    fill: true
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: { legend: { display: false } },
                scales: {
                    y: { beginAtZero: true, grid: { color: 'rgba(156, 163, 175, 0.2)' } },
                    x: { grid: { display: false } }
                }
            }
        });
        </text>
    }

    @if (Model.Report.RefundsByReason.Any())
    {
        <text>
        new Chart(document.getElementById('refundReasonChart').getContext('2d'), {
            type: 'doughnut',
            data: {
                labels: [@Html.Raw(string.Join(",", Model.Report.RefundsByReason.Keys.Select(k => $"'{k}'")))],
                datasets: [{
                    data: [@Html.Raw(string.Join(",", Model.Report.RefundsByReason.Values))],
                    backgroundColor: ['rgb(147, 51, 234)', 'rgb(45, 206, 137)', 'rgb(251, 99, 64)', 'rgb(245, 54, 92)', 'rgb(17, 205, 239)', 'rgb(23, 43, 77)']
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false
            }
        });
        </text>
    }
</script>
}
