@page
@model Algora.Web.Pages.Reports.FinancialModel
@{
    ViewData["Title"] = "Financial Report";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12 d-flex justify-content-between align-items-center">
            <div>
                <h4 class="mb-1">Financial Report</h4>
                <p class="text-sm text-secondary mb-0">Revenue, refunds, and profit analysis</p>
            </div>
            <a href="/reports/financial?handler=Export&format=csv&StartDate=@Model.StartDate.ToString("yyyy-MM-dd")&EndDate=@Model.EndDate.ToString("yyyy-MM-dd")"
               class="btn bg-gradient-success btn-sm">
                <i class="fas fa-download me-2"></i>Export CSV
            </a>
        </div>
    </div>

    <!-- Date Filter -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-body py-3">
                    <form method="get" class="d-flex align-items-center gap-3 flex-wrap">
                        <div>
                            <label class="form-label text-xs mb-1">Start Date</label>
                            <input type="date" name="StartDate" value="@Model.StartDate.ToString("yyyy-MM-dd")" class="form-control form-control-sm" />
                        </div>
                        <div>
                            <label class="form-label text-xs mb-1">End Date</label>
                            <input type="date" name="EndDate" value="@Model.EndDate.ToString("yyyy-MM-dd")" class="form-control form-control-sm" />
                        </div>
                        <div class="align-self-end">
                            <button type="submit" class="btn bg-gradient-primary btn-sm">Apply</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- KPI Cards -->
    <div class="row mb-4">
        <div class="col-xl-3 col-sm-6 mb-xl-0 mb-4">
            <div class="card">
                <div class="card-body p-3">
                    <p class="text-sm mb-0 font-weight-bold">Gross Revenue</p>
                    <h4 class="font-weight-bolder text-primary">$@Model.Report.GrossRevenue.ToString("N0")</h4>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-sm-6 mb-xl-0 mb-4">
            <div class="card">
                <div class="card-body p-3">
                    <p class="text-sm mb-0 font-weight-bold">Total Refunds</p>
                    <h4 class="font-weight-bolder text-danger">$@Model.Report.TotalRefunds.ToString("N0")</h4>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-sm-6 mb-xl-0 mb-4">
            <div class="card">
                <div class="card-body p-3">
                    <p class="text-sm mb-0 font-weight-bold">Net Revenue</p>
                    <h4 class="font-weight-bolder text-success">$@Model.Report.NetRevenue.ToString("N0")</h4>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-sm-6">
            <div class="card">
                <div class="card-body p-3">
                    <p class="text-sm mb-0 font-weight-bold">Gross Profit Margin</p>
                    <h4 class="font-weight-bolder text-info">@Model.Report.GrossProfitMargin.ToString("N1")%</h4>
                </div>
            </div>
        </div>
    </div>

    <!-- Breakdown Cards -->
    <div class="row mb-4">
        <div class="col-md-2 col-4 mb-3">
            <div class="card bg-gradient-light">
                <div class="card-body p-3 text-center">
                    <p class="text-xs mb-0">COGS</p>
                    <h6 class="mb-0">$@Model.Report.TotalCOGS.ToString("N0")</h6>
                </div>
            </div>
        </div>
        <div class="col-md-2 col-4 mb-3">
            <div class="card bg-gradient-light">
                <div class="card-body p-3 text-center">
                    <p class="text-xs mb-0">Gross Profit</p>
                    <h6 class="mb-0">$@Model.Report.GrossProfit.ToString("N0")</h6>
                </div>
            </div>
        </div>
        <div class="col-md-2 col-4 mb-3">
            <div class="card bg-gradient-light">
                <div class="card-body p-3 text-center">
                    <p class="text-xs mb-0">Ads Spend</p>
                    <h6 class="mb-0 text-danger">$@Model.Report.TotalAdsSpend.ToString("N0")</h6>
                </div>
            </div>
        </div>
        <div class="col-md-2 col-4 mb-3">
            <div class="card bg-gradient-light">
                <div class="card-body p-3 text-center">
                    <p class="text-xs mb-0">Net Profit</p>
                    <h6 class="mb-0 @(Model.Report.NetProfit >= 0 ? "text-success" : "text-danger")">$@Model.Report.NetProfit.ToString("N0")</h6>
                </div>
            </div>
        </div>
        <div class="col-md-2 col-4 mb-3">
            <div class="card bg-gradient-light">
                <div class="card-body p-3 text-center">
                    <p class="text-xs mb-0">Net Margin</p>
                    <h6 class="mb-0">@Model.Report.NetProfitMargin.ToString("N1")%</h6>
                </div>
            </div>
        </div>
    </div>

    <!-- Charts -->
    <div class="row mb-4">
        <div class="col-lg-6 mb-lg-0 mb-4">
            <div class="card">
                <div class="card-header pb-0">
                    <h6>Revenue vs Refunds</h6>
                </div>
                <div class="card-body p-3">
                    <canvas id="revenueRefundChart" height="250"></canvas>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="card">
                <div class="card-header pb-0">
                    <h6>Profit Trend</h6>
                </div>
                <div class="card-body p-3">
                    <canvas id="profitChart" height="250"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- Refunds by Reason -->
    <div class="row mb-4">
        <div class="col-lg-6 mb-lg-0 mb-4">
            <div class="card">
                <div class="card-header pb-0">
                    <h6>Refunds by Reason</h6>
                </div>
                <div class="card-body p-3">
                    @if (Model.Report.RefundsByReason.Any())
                    {
                        <canvas id="refundReasonChart" height="200"></canvas>
                    }
                    else
                    {
                        <p class="text-center text-xs text-secondary py-4">No refund data available</p>
                    }
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="card">
                <div class="card-header pb-0">
                    <h6>Recent Refunds</h6>
                </div>
                <div class="card-body px-0 pt-0 pb-2">
                    <div class="table-responsive p-0">
                        <table class="table align-items-center mb-0">
                            <thead>
                                <tr>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Order</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Amount</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Reason</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Date</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var refund in Model.Report.RecentRefunds.Take(5))
                                {
                                    <tr>
                                        <td class="ps-4">
                                            <span class="text-xs font-weight-bold">@refund.OrderNumber</span>
                                        </td>
                                        <td><span class="text-xs font-weight-bold text-danger">$@refund.Amount.ToString("N2")</span></td>
                                        <td><span class="text-xs">@(refund.Reason ?? "Not specified")</span></td>
                                        <td><span class="text-xs">@refund.RefundedAt.ToString("MMM dd, yyyy")</span></td>
                                    </tr>
                                }
                                @if (!Model.Report.RecentRefunds.Any())
                                {
                                    <tr><td colspan="4" class="text-center text-xs text-secondary py-4">No refunds in this period</td></tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.1/dist/chart.umd.min.js"></script>
    <script>
        // Revenue vs Refunds Chart
        new Chart(document.getElementById('revenueRefundChart').getContext('2d'), {
            type: 'bar',
            data: {
                labels: [@Html.Raw(string.Join(",", Model.Report.RevenueVsRefunds.Select(d => $"'{d.Label}'")))],
                datasets: [
                    {
                        label: 'Revenue',
                        data: [@Html.Raw(string.Join(",", Model.Report.RevenueVsRefunds.Select(d => d.Value)))],
                        backgroundColor: 'rgba(45, 206, 137, 0.8)'
                    },
                    {
                        label: 'Refunds',
                        data: [@Html.Raw(string.Join(",", Model.Report.RevenueVsRefunds.Select(d => d.SecondaryValue ?? 0)))],
                        backgroundColor: 'rgba(245, 54, 92, 0.8)'
                    }
                ]
            },
            options: { responsive: true, maintainAspectRatio: false }
        });

        // Profit Trend Chart
        new Chart(document.getElementById('profitChart').getContext('2d'), {
            type: 'line',
            data: {
                labels: [@Html.Raw(string.Join(",", Model.Report.ProfitTrend.Select(d => $"'{d.Label}'")))],
                datasets: [{
                    label: 'Profit',
                    data: [@Html.Raw(string.Join(",", Model.Report.ProfitTrend.Select(d => d.Value)))],
                    borderColor: 'rgb(94, 114, 228)',
                    backgroundColor: 'rgba(94, 114, 228, 0.1)',
                    tension: 0.4,
                    fill: true
                }]
            },
            options: { responsive: true, maintainAspectRatio: false }
        });

        @if (Model.Report.RefundsByReason.Any())
        {
            <text>
            // Refunds by Reason Chart
            new Chart(document.getElementById('refundReasonChart').getContext('2d'), {
                type: 'doughnut',
                data: {
                    labels: [@Html.Raw(string.Join(",", Model.Report.RefundsByReason.Keys.Select(k => $"'{k}'")))],
                    datasets: [{
                        data: [@Html.Raw(string.Join(",", Model.Report.RefundsByReason.Values))],
                        backgroundColor: ['#5e72e4', '#2dce89', '#fb6340', '#f5365c', '#11cdef', '#172b4d']
                    }]
                },
                options: { responsive: true, maintainAspectRatio: false }
            });
            </text>
        }
    </script>
}
