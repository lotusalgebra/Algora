@page
@model Algora.Web.Pages.Reports.IndexModel
@{
    ViewData["Title"] = "Reports Dashboard";
}

<div class="container-fluid py-4">
    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col-12">
            <h4 class="mb-1">Reports Dashboard</h4>
            <p class="text-sm text-secondary mb-0">Analyze your shop performance</p>
        </div>
    </div>

    <!-- Date Filter -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-body py-3">
                    <form method="get" class="d-flex align-items-center gap-3 flex-wrap">
                        <div>
                            <label class="form-label text-xs mb-1">Start Date</label>
                            <input type="date" name="StartDate" value="@Model.StartDate.ToString("yyyy-MM-dd")" class="form-control form-control-sm" />
                        </div>
                        <div>
                            <label class="form-label text-xs mb-1">End Date</label>
                            <input type="date" name="EndDate" value="@Model.EndDate.ToString("yyyy-MM-dd")" class="form-control form-control-sm" />
                        </div>
                        <div class="align-self-end">
                            <button type="submit" class="btn bg-gradient-primary btn-sm">Apply</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- KPI Cards -->
    <div class="row mb-4">
        <div class="col-xl-3 col-sm-6 mb-xl-0 mb-4">
            <div class="card">
                <div class="card-body p-3">
                    <div class="row">
                        <div class="col-8">
                            <div class="numbers">
                                <p class="text-sm mb-0 text-capitalize font-weight-bold">Revenue</p>
                                <h5 class="font-weight-bolder mb-0">
                                    $@Model.Dashboard.TotalRevenue.ToString("N0")
                                    <span class="text-@(Model.Dashboard.RevenueGrowth >= 0 ? "success" : "danger") text-sm font-weight-bolder">
                                        @(Model.Dashboard.RevenueGrowth >= 0 ? "+" : "")@Model.Dashboard.RevenueGrowth.ToString("N1")%
                                    </span>
                                </h5>
                            </div>
                        </div>
                        <div class="col-4 text-end">
                            <div class="icon icon-shape bg-gradient-primary shadow text-center border-radius-md">
                                <i class="fas fa-dollar-sign text-lg opacity-10"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-sm-6 mb-xl-0 mb-4">
            <div class="card">
                <div class="card-body p-3">
                    <div class="row">
                        <div class="col-8">
                            <div class="numbers">
                                <p class="text-sm mb-0 text-capitalize font-weight-bold">Orders</p>
                                <h5 class="font-weight-bolder mb-0">
                                    @Model.Dashboard.TotalOrders
                                    <span class="text-@(Model.Dashboard.OrderGrowth >= 0 ? "success" : "danger") text-sm font-weight-bolder">
                                        @(Model.Dashboard.OrderGrowth >= 0 ? "+" : "")@Model.Dashboard.OrderGrowth%
                                    </span>
                                </h5>
                            </div>
                        </div>
                        <div class="col-4 text-end">
                            <div class="icon icon-shape bg-gradient-success shadow text-center border-radius-md">
                                <i class="fas fa-shopping-cart text-lg opacity-10"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-sm-6 mb-xl-0 mb-4">
            <div class="card">
                <div class="card-body p-3">
                    <div class="row">
                        <div class="col-8">
                            <div class="numbers">
                                <p class="text-sm mb-0 text-capitalize font-weight-bold">Customers</p>
                                <h5 class="font-weight-bolder mb-0">
                                    @Model.Dashboard.TotalCustomers
                                    <span class="text-@(Model.Dashboard.CustomerGrowth >= 0 ? "success" : "danger") text-sm font-weight-bolder">
                                        @(Model.Dashboard.CustomerGrowth >= 0 ? "+" : "")@Model.Dashboard.CustomerGrowth%
                                    </span>
                                </h5>
                            </div>
                        </div>
                        <div class="col-4 text-end">
                            <div class="icon icon-shape bg-gradient-info shadow text-center border-radius-md">
                                <i class="fas fa-users text-lg opacity-10"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-sm-6">
            <div class="card">
                <div class="card-body p-3">
                    <div class="row">
                        <div class="col-8">
                            <div class="numbers">
                                <p class="text-sm mb-0 text-capitalize font-weight-bold">Avg Order</p>
                                <h5 class="font-weight-bolder mb-0">
                                    $@Model.Dashboard.AverageOrderValue.ToString("N2")
                                </h5>
                            </div>
                        </div>
                        <div class="col-4 text-end">
                            <div class="icon icon-shape bg-gradient-warning shadow text-center border-radius-md">
                                <i class="fas fa-chart-line text-lg opacity-10"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Charts Row -->
    <div class="row mb-4">
        <div class="col-lg-7 mb-lg-0 mb-4">
            <div class="card">
                <div class="card-header pb-0">
                    <h6>Revenue Trend</h6>
                </div>
                <div class="card-body p-3">
                    <div class="chart">
                        <canvas id="revenueChart" class="chart-canvas" height="300"></canvas>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-5">
            <div class="card h-100">
                <div class="card-header pb-0">
                    <h6>Orders Trend</h6>
                </div>
                <div class="card-body p-3">
                    <div class="chart">
                        <canvas id="ordersChart" class="chart-canvas" height="300"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Top Products & Customers -->
    <div class="row">
        <div class="col-lg-6 mb-lg-0 mb-4">
            <div class="card">
                <div class="card-header pb-0">
                    <div class="d-flex justify-content-between">
                        <h6>Top Products</h6>
                        <a href="/reports/products" class="text-xs text-primary">View All</a>
                    </div>
                </div>
                <div class="card-body px-0 pt-0 pb-2">
                    <div class="table-responsive p-0">
                        <table class="table align-items-center mb-0">
                            <thead>
                                <tr>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Product</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Units</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Revenue</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var product in Model.Dashboard.TopProducts.Take(5))
                                {
                                    <tr>
                                        <td class="ps-4">
                                            <p class="text-xs font-weight-bold mb-0">@product.ProductTitle</p>
                                        </td>
                                        <td>
                                            <span class="text-xs">@product.TotalQuantitySold</span>
                                        </td>
                                        <td>
                                            <span class="text-xs font-weight-bold text-success">$@product.TotalRevenue.ToString("N0")</span>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="card">
                <div class="card-header pb-0">
                    <div class="d-flex justify-content-between">
                        <h6>Top Customers</h6>
                        <a href="/reports/customers" class="text-xs text-primary">View All</a>
                    </div>
                </div>
                <div class="card-body px-0 pt-0 pb-2">
                    <div class="table-responsive p-0">
                        <table class="table align-items-center mb-0">
                            <thead>
                                <tr>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Customer</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Orders</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Total Spent</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var customer in Model.Dashboard.TopCustomers.Take(5))
                                {
                                    <tr>
                                        <td class="ps-4">
                                            <p class="text-xs font-weight-bold mb-0">@customer.CustomerName</p>
                                            <p class="text-xxs text-secondary mb-0">@customer.CustomerEmail</p>
                                        </td>
                                        <td>
                                            <span class="text-xs">@customer.TotalOrders</span>
                                        </td>
                                        <td>
                                            <span class="text-xs font-weight-bold text-success">$@customer.TotalSpent.ToString("N0")</span>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Links -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header pb-0">
                    <h6>Detailed Reports</h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-2 col-sm-4 col-6 mb-3">
                            <a href="/reports/sales" class="btn btn-outline-primary w-100">
                                <i class="fas fa-chart-line me-2"></i>Sales
                            </a>
                        </div>
                        <div class="col-md-2 col-sm-4 col-6 mb-3">
                            <a href="/reports/products" class="btn btn-outline-success w-100">
                                <i class="fas fa-box me-2"></i>Products
                            </a>
                        </div>
                        <div class="col-md-2 col-sm-4 col-6 mb-3">
                            <a href="/reports/customers" class="btn btn-outline-info w-100">
                                <i class="fas fa-users me-2"></i>Customers
                            </a>
                        </div>
                        <div class="col-md-2 col-sm-4 col-6 mb-3">
                            <a href="/reports/financial" class="btn btn-outline-warning w-100">
                                <i class="fas fa-wallet me-2"></i>Financial
                            </a>
                        </div>
                        <div class="col-md-2 col-sm-4 col-6 mb-3">
                            <a href="/reports/advertising" class="btn btn-outline-danger w-100">
                                <i class="fas fa-bullhorn me-2"></i>Advertising
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.1/dist/chart.umd.min.js"></script>
    <script>
        // Revenue Chart
        new Chart(document.getElementById('revenueChart').getContext('2d'), {
            type: 'line',
            data: {
                labels: [@Html.Raw(string.Join(",", Model.Dashboard.RevenueSparkline.Select(d => $"'{d.Label}'")))],
                datasets: [{
                    label: 'Revenue',
                    data: [@Html.Raw(string.Join(",", Model.Dashboard.RevenueSparkline.Select(d => d.Value)))],
                    borderColor: 'rgb(94, 114, 228)',
                    backgroundColor: 'rgba(94, 114, 228, 0.1)',
                    tension: 0.4,
                    fill: true
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: { legend: { display: false } }
            }
        });

        // Orders Chart
        new Chart(document.getElementById('ordersChart').getContext('2d'), {
            type: 'bar',
            data: {
                labels: [@Html.Raw(string.Join(",", Model.Dashboard.OrdersSparkline.Select(d => $"'{d.Label}'")))],
                datasets: [{
                    label: 'Orders',
                    data: [@Html.Raw(string.Join(",", Model.Dashboard.OrdersSparkline.Select(d => d.Value)))],
                    backgroundColor: 'rgba(45, 206, 137, 0.8)'
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: { legend: { display: false } }
            }
        });
    </script>
}
