@page
@model Algora.Web.Pages.Reports.AdvertisingModel
@{
    ViewData["Title"] = "Advertising Report";
}

<div class="space-y-6">
    <!-- Page Header -->
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between">
        <div>
            <h1 class="text-2xl font-bold text-gray-900 dark:text-white">Advertising Report</h1>
            <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Ad spend, ROAS, and campaign performance</p>
        </div>
        <a href="/reports/advertising?handler=Export&format=csv&StartDate=@Model.StartDate.ToString("yyyy-MM-dd")&EndDate=@Model.EndDate.ToString("yyyy-MM-dd")"
           class="mt-4 sm:mt-0 text-white bg-gradient-to-br from-green-500 to-lime-400 hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-green-300 font-medium rounded-lg text-sm px-5 py-2.5 inline-flex items-center">
            <i class="fas fa-download me-2"></i>Export CSV
        </a>
    </div>

    <!-- Date Filter -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-4">
        <form method="get" class="flex flex-wrap items-end gap-4">
            <div>
                <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Start Date</label>
                <input type="date" name="StartDate" value="@Model.StartDate.ToString("yyyy-MM-dd")"
                       class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white" />
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">End Date</label>
                <input type="date" name="EndDate" value="@Model.EndDate.ToString("yyyy-MM-dd")"
                       class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white" />
            </div>
            <button type="submit" class="text-white bg-gradient-to-br from-purple-600 to-pink-500 hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-purple-300 font-medium rounded-lg text-sm px-5 py-2.5">
                Apply
            </button>
        </form>
    </div>

    <!-- KPI Cards -->
    <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-6 gap-4">
        <!-- Total Spend -->
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-4 hover:shadow-lg transition-shadow">
            <div class="flex items-center justify-between">
                <div class="flex-1">
                    <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Total Spend</p>
                    <h3 class="text-xl font-bold text-red-500 mt-1">$@Model.Report.TotalSpend.ToString("N0")</h3>
                </div>
                <div class="flex items-center justify-center w-10 h-10 rounded-lg bg-gradient-to-br from-red-500 to-pink-500">
                    <i class="fas fa-coins text-white text-sm"></i>
                </div>
            </div>
        </div>

        <!-- Revenue -->
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-4 hover:shadow-lg transition-shadow">
            <div class="flex items-center justify-between">
                <div class="flex-1">
                    <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Revenue</p>
                    <h3 class="text-xl font-bold text-green-600 mt-1">$@Model.Report.TotalRevenue.ToString("N0")</h3>
                </div>
                <div class="flex items-center justify-center w-10 h-10 rounded-lg bg-gradient-to-br from-green-500 to-lime-400">
                    <i class="fas fa-dollar-sign text-white text-sm"></i>
                </div>
            </div>
        </div>

        <!-- ROAS -->
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-4 hover:shadow-lg transition-shadow">
            <div class="flex items-center justify-between">
                <div class="flex-1">
                    <p class="text-sm font-medium text-gray-500 dark:text-gray-400">ROAS</p>
                    <h3 class="text-xl font-bold text-gray-900 dark:text-white mt-1">@Model.Report.ROAS.ToString("N2")x</h3>
                </div>
                <div class="flex items-center justify-center w-10 h-10 rounded-lg bg-gradient-to-br from-purple-600 to-pink-500">
                    <i class="fas fa-chart-pie text-white text-sm"></i>
                </div>
            </div>
        </div>

        <!-- Impressions -->
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-4 hover:shadow-lg transition-shadow">
            <div class="flex items-center justify-between">
                <div class="flex-1">
                    <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Impressions</p>
                    <h3 class="text-xl font-bold text-blue-500 mt-1">@Model.Report.TotalImpressions.ToString("N0")</h3>
                </div>
                <div class="flex items-center justify-center w-10 h-10 rounded-lg bg-gradient-to-br from-blue-500 to-cyan-400">
                    <i class="fas fa-eye text-white text-sm"></i>
                </div>
            </div>
        </div>

        <!-- CTR -->
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-4 hover:shadow-lg transition-shadow">
            <div class="flex items-center justify-between">
                <div class="flex-1">
                    <p class="text-sm font-medium text-gray-500 dark:text-gray-400">CTR</p>
                    <h3 class="text-xl font-bold text-orange-500 mt-1">@Model.Report.CTR.ToString("N2")%</h3>
                </div>
                <div class="flex items-center justify-center w-10 h-10 rounded-lg bg-gradient-to-br from-orange-500 to-yellow-400">
                    <i class="fas fa-mouse-pointer text-white text-sm"></i>
                </div>
            </div>
        </div>

        <!-- Conversions -->
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-4 hover:shadow-lg transition-shadow">
            <div class="flex items-center justify-between">
                <div class="flex-1">
                    <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Conversions</p>
                    <h3 class="text-xl font-bold text-green-600 mt-1">@Model.Report.TotalConversions</h3>
                </div>
                <div class="flex items-center justify-center w-10 h-10 rounded-lg bg-gradient-to-br from-green-500 to-teal-400">
                    <i class="fas fa-check-circle text-white text-sm"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Charts Row -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <!-- Spend vs Revenue Trend -->
        <div class="lg:col-span-2 bg-white dark:bg-gray-800 rounded-lg shadow-md overflow-hidden">
            <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700">
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Spend vs Revenue Trend</h3>
            </div>
            <div class="p-6">
                <div style="height: 300px;">
                    @if (Model.Report.SpendVsRevenueTrend.Any())
                    {
                        <canvas id="spendRevenueChart"></canvas>
                    }
                    else
                    {
                        <p class="text-center text-gray-500 dark:text-gray-400 py-12">No data available</p>
                    }
                </div>
            </div>
        </div>

        <!-- Spend by Platform -->
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md overflow-hidden">
            <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700">
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Spend by Platform</h3>
            </div>
            <div class="p-6">
                <div style="height: 300px;">
                    @if (Model.Report.MetricsByPlatform.Any())
                    {
                        <canvas id="platformChart"></canvas>
                    }
                    else
                    {
                        <p class="text-center text-gray-500 dark:text-gray-400 py-12">No platform data available</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Platform Performance Table -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md overflow-hidden">
        <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700">
            <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Platform Performance</h3>
        </div>
        <div class="overflow-x-auto">
            <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
                <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                    <tr>
                        <th scope="col" class="px-6 py-3">Platform</th>
                        <th scope="col" class="px-6 py-3 text-right">Spend</th>
                        <th scope="col" class="px-6 py-3 text-right">Revenue</th>
                        <th scope="col" class="px-6 py-3 text-center">ROAS</th>
                        <th scope="col" class="px-6 py-3 text-right">Impressions</th>
                        <th scope="col" class="px-6 py-3 text-right">Clicks</th>
                        <th scope="col" class="px-6 py-3 text-right">CTR</th>
                        <th scope="col" class="px-6 py-3 text-right">Conversions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var platform in Model.Report.MetricsByPlatform.Values)
                    {
                        <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-700">
                            <td class="px-6 py-4 font-medium text-gray-900 dark:text-white">@platform.Platform</td>
                            <td class="px-6 py-4 text-right font-medium text-red-500">$@platform.Spend.ToString("N0")</td>
                            <td class="px-6 py-4 text-right font-medium text-green-600">$@platform.Revenue.ToString("N0")</td>
                            <td class="px-6 py-4 text-center">
                                @{
                                    var roasClass = platform.ROAS >= 3 ? "bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-300" :
                                                    platform.ROAS >= 1 ? "bg-yellow-100 text-yellow-800 dark:bg-yellow-900 dark:text-yellow-300" :
                                                    "bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-300";
                                }
                                <span class="@roasClass text-xs font-medium px-2.5 py-0.5 rounded">@platform.ROAS.ToString("N2")x</span>
                            </td>
                            <td class="px-6 py-4 text-right">@platform.Impressions.ToString("N0")</td>
                            <td class="px-6 py-4 text-right">@platform.Clicks.ToString("N0")</td>
                            <td class="px-6 py-4 text-right">@platform.CTR.ToString("N2")%</td>
                            <td class="px-6 py-4 text-right">@platform.Conversions</td>
                        </tr>
                    }
                    @if (!Model.Report.MetricsByPlatform.Any())
                    {
                        <tr class="bg-white dark:bg-gray-800">
                            <td colspan="8" class="px-6 py-8 text-center text-gray-500 dark:text-gray-400">No advertising data in this period</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Top Campaigns Table -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md overflow-hidden">
        <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700">
            <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Top Campaigns</h3>
        </div>
        <div class="overflow-x-auto">
            <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
                <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                    <tr>
                        <th scope="col" class="px-6 py-3">Campaign</th>
                        <th scope="col" class="px-6 py-3">Platform</th>
                        <th scope="col" class="px-6 py-3 text-right">Spend</th>
                        <th scope="col" class="px-6 py-3 text-right">Revenue</th>
                        <th scope="col" class="px-6 py-3 text-center">ROAS</th>
                        <th scope="col" class="px-6 py-3 text-right">Conversions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var campaign in Model.TopCampaigns.Take(10))
                    {
                        <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-700">
                            <td class="px-6 py-4 font-medium text-gray-900 dark:text-white">@campaign.CampaignName</td>
                            <td class="px-6 py-4">
                                <span class="bg-blue-100 text-blue-800 text-xs font-medium px-2.5 py-0.5 rounded dark:bg-blue-900 dark:text-blue-300">@campaign.Platform</span>
                            </td>
                            <td class="px-6 py-4 text-right font-medium text-red-500">$@campaign.Spend.ToString("N0")</td>
                            <td class="px-6 py-4 text-right font-medium text-green-600">$@campaign.Revenue.ToString("N0")</td>
                            <td class="px-6 py-4 text-center">
                                @{
                                    var campaignRoasClass = campaign.ROAS >= 3 ? "bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-300" :
                                                            campaign.ROAS >= 1 ? "bg-yellow-100 text-yellow-800 dark:bg-yellow-900 dark:text-yellow-300" :
                                                            "bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-300";
                                }
                                <span class="@campaignRoasClass text-xs font-medium px-2.5 py-0.5 rounded">@campaign.ROAS.ToString("N2")x</span>
                            </td>
                            <td class="px-6 py-4 text-right">@campaign.Conversions</td>
                        </tr>
                    }
                    @if (!Model.TopCampaigns.Any())
                    {
                        <tr class="bg-white dark:bg-gray-800">
                            <td colspan="6" class="px-6 py-8 text-center text-gray-500 dark:text-gray-400">No campaigns in this period</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
<script>
    @if (Model.Report.SpendVsRevenueTrend.Any())
    {
        <text>
        new Chart(document.getElementById('spendRevenueChart').getContext('2d'), {
            type: 'line',
            data: {
                labels: [@Html.Raw(string.Join(",", Model.Report.SpendVsRevenueTrend.Select(d => $"'{d.Label}'")))],
                datasets: [
                    {
                        label: 'Spend',
                        data: [@Html.Raw(string.Join(",", Model.Report.SpendVsRevenueTrend.Select(d => d.Value)))],
                        borderColor: 'rgb(245, 54, 92)',
                        backgroundColor: 'rgba(245, 54, 92, 0.1)',
                        tension: 0.4,
                        fill: false
                    },
                    {
                        label: 'Revenue',
                        data: [@Html.Raw(string.Join(",", Model.Report.SpendVsRevenueTrend.Select(d => d.SecondaryValue ?? 0)))],
                        borderColor: 'rgb(45, 206, 137)',
                        backgroundColor: 'rgba(45, 206, 137, 0.1)',
                        tension: 0.4,
                        fill: false
                    }
                ]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    y: { beginAtZero: true, grid: { color: 'rgba(156, 163, 175, 0.2)' } },
                    x: { grid: { display: false } }
                }
            }
        });
        </text>
    }

    @if (Model.Report.MetricsByPlatform.Any())
    {
        <text>
        new Chart(document.getElementById('platformChart').getContext('2d'), {
            type: 'doughnut',
            data: {
                labels: [@Html.Raw(string.Join(",", Model.Report.MetricsByPlatform.Keys.Select(k => $"'{k}'")))],
                datasets: [{
                    data: [@Html.Raw(string.Join(",", Model.Report.MetricsByPlatform.Values.Select(v => v.Spend)))],
                    backgroundColor: ['rgb(147, 51, 234)', 'rgb(45, 206, 137)', 'rgb(251, 99, 64)', 'rgb(245, 54, 92)', 'rgb(17, 205, 239)', 'rgb(23, 43, 77)']
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false
            }
        });
        </text>
    }
</script>
}
