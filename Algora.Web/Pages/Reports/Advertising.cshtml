@page
@model Algora.Web.Pages.Reports.AdvertisingModel
@{
    ViewData["Title"] = "Advertising Report";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12 d-flex justify-content-between align-items-center">
            <div>
                <h4 class="mb-1">Advertising Report</h4>
                <p class="text-sm text-secondary mb-0">Ad spend, ROAS, and campaign performance</p>
            </div>
            <a href="/reports/advertising?handler=Export&format=csv&StartDate=@Model.StartDate.ToString("yyyy-MM-dd")&EndDate=@Model.EndDate.ToString("yyyy-MM-dd")"
               class="btn bg-gradient-success btn-sm">
                <i class="fas fa-download me-2"></i>Export CSV
            </a>
        </div>
    </div>

    <!-- Date Filter -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-body py-3">
                    <form method="get" class="d-flex align-items-center gap-3 flex-wrap">
                        <div>
                            <label class="form-label text-xs mb-1">Start Date</label>
                            <input type="date" name="StartDate" value="@Model.StartDate.ToString("yyyy-MM-dd")" class="form-control form-control-sm" />
                        </div>
                        <div>
                            <label class="form-label text-xs mb-1">End Date</label>
                            <input type="date" name="EndDate" value="@Model.EndDate.ToString("yyyy-MM-dd")" class="form-control form-control-sm" />
                        </div>
                        <div class="align-self-end">
                            <button type="submit" class="btn bg-gradient-primary btn-sm">Apply</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- KPI Cards -->
    <div class="row mb-4">
        <div class="col-xl-2 col-sm-4 mb-xl-0 mb-4">
            <div class="card">
                <div class="card-body p-3">
                    <p class="text-sm mb-0 font-weight-bold">Total Spend</p>
                    <h4 class="font-weight-bolder text-danger">$@Model.Report.TotalSpend.ToString("N0")</h4>
                </div>
            </div>
        </div>
        <div class="col-xl-2 col-sm-4 mb-xl-0 mb-4">
            <div class="card">
                <div class="card-body p-3">
                    <p class="text-sm mb-0 font-weight-bold">Revenue</p>
                    <h4 class="font-weight-bolder text-success">$@Model.Report.TotalRevenue.ToString("N0")</h4>
                </div>
            </div>
        </div>
        <div class="col-xl-2 col-sm-4 mb-xl-0 mb-4">
            <div class="card">
                <div class="card-body p-3">
                    <p class="text-sm mb-0 font-weight-bold">ROAS</p>
                    <h4 class="font-weight-bolder text-primary">@Model.Report.ROAS.ToString("N2")x</h4>
                </div>
            </div>
        </div>
        <div class="col-xl-2 col-sm-4 mb-xl-0 mb-4">
            <div class="card">
                <div class="card-body p-3">
                    <p class="text-sm mb-0 font-weight-bold">Impressions</p>
                    <h4 class="font-weight-bolder text-info">@Model.Report.TotalImpressions.ToString("N0")</h4>
                </div>
            </div>
        </div>
        <div class="col-xl-2 col-sm-4 mb-xl-0 mb-4">
            <div class="card">
                <div class="card-body p-3">
                    <p class="text-sm mb-0 font-weight-bold">CTR</p>
                    <h4 class="font-weight-bolder text-warning">@Model.Report.CTR.ToString("N2")%</h4>
                </div>
            </div>
        </div>
        <div class="col-xl-2 col-sm-4">
            <div class="card">
                <div class="card-body p-3">
                    <p class="text-sm mb-0 font-weight-bold">Conversions</p>
                    <h4 class="font-weight-bolder text-success">@Model.Report.TotalConversions</h4>
                </div>
            </div>
        </div>
    </div>

    <!-- Charts -->
    <div class="row mb-4">
        <div class="col-lg-8 mb-lg-0 mb-4">
            <div class="card">
                <div class="card-header pb-0">
                    <h6>Spend vs Revenue Trend</h6>
                </div>
                <div class="card-body p-3">
                    <canvas id="spendRevenueChart" height="300"></canvas>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="card h-100">
                <div class="card-header pb-0">
                    <h6>Spend by Platform</h6>
                </div>
                <div class="card-body p-3">
                    <canvas id="platformChart" height="300"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- Platform Breakdown Table -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header pb-0">
                    <h6>Platform Performance</h6>
                </div>
                <div class="card-body px-0 pt-0 pb-2">
                    <div class="table-responsive p-0">
                        <table class="table align-items-center mb-0">
                            <thead>
                                <tr>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Platform</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Spend</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Revenue</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">ROAS</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Impressions</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Clicks</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">CTR</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Conversions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var platform in Model.Report.MetricsByPlatform.Values)
                                {
                                    <tr>
                                        <td class="ps-4">
                                            <span class="text-xs font-weight-bold">@platform.Platform</span>
                                        </td>
                                        <td><span class="text-xs font-weight-bold text-danger">$@platform.Spend.ToString("N0")</span></td>
                                        <td><span class="text-xs font-weight-bold text-success">$@platform.Revenue.ToString("N0")</span></td>
                                        <td>
                                            <span class="badge bg-gradient-@(platform.ROAS >= 3 ? "success" : platform.ROAS >= 1 ? "warning" : "danger")">
                                                @platform.ROAS.ToString("N2")x
                                            </span>
                                        </td>
                                        <td><span class="text-xs">@platform.Impressions.ToString("N0")</span></td>
                                        <td><span class="text-xs">@platform.Clicks.ToString("N0")</span></td>
                                        <td><span class="text-xs">@platform.CTR.ToString("N2")%</span></td>
                                        <td><span class="text-xs">@platform.Conversions</span></td>
                                    </tr>
                                }
                                @if (!Model.Report.MetricsByPlatform.Any())
                                {
                                    <tr><td colspan="8" class="text-center text-xs text-secondary py-4">No advertising data in this period</td></tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Top Campaigns Table -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header pb-0">
                    <h6>Top Campaigns</h6>
                </div>
                <div class="card-body px-0 pt-0 pb-2">
                    <div class="table-responsive p-0">
                        <table class="table align-items-center mb-0">
                            <thead>
                                <tr>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Campaign</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Platform</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Spend</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Revenue</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">ROAS</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Conversions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var campaign in Model.TopCampaigns.Take(10))
                                {
                                    <tr>
                                        <td class="ps-4">
                                            <p class="text-xs font-weight-bold mb-0">@campaign.CampaignName</p>
                                        </td>
                                        <td><span class="badge bg-gradient-info">@campaign.Platform</span></td>
                                        <td><span class="text-xs font-weight-bold text-danger">$@campaign.Spend.ToString("N0")</span></td>
                                        <td><span class="text-xs font-weight-bold text-success">$@campaign.Revenue.ToString("N0")</span></td>
                                        <td>
                                            <span class="badge bg-gradient-@(campaign.ROAS >= 3 ? "success" : campaign.ROAS >= 1 ? "warning" : "danger")">
                                                @campaign.ROAS.ToString("N2")x
                                            </span>
                                        </td>
                                        <td><span class="text-xs">@campaign.Conversions</span></td>
                                    </tr>
                                }
                                @if (!Model.TopCampaigns.Any())
                                {
                                    <tr><td colspan="6" class="text-center text-xs text-secondary py-4">No campaigns in this period</td></tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.1/dist/chart.umd.min.js"></script>
    <script>
        // Spend vs Revenue Trend Chart
        new Chart(document.getElementById('spendRevenueChart').getContext('2d'), {
            type: 'line',
            data: {
                labels: [@Html.Raw(string.Join(",", Model.Report.SpendVsRevenueTrend.Select(d => $"'{d.Label}'")))],
                datasets: [
                    {
                        label: 'Spend',
                        data: [@Html.Raw(string.Join(",", Model.Report.SpendVsRevenueTrend.Select(d => d.Value)))],
                        borderColor: 'rgb(245, 54, 92)',
                        backgroundColor: 'rgba(245, 54, 92, 0.1)',
                        tension: 0.4,
                        fill: false
                    },
                    {
                        label: 'Revenue',
                        data: [@Html.Raw(string.Join(",", Model.Report.SpendVsRevenueTrend.Select(d => d.SecondaryValue ?? 0)))],
                        borderColor: 'rgb(45, 206, 137)',
                        backgroundColor: 'rgba(45, 206, 137, 0.1)',
                        tension: 0.4,
                        fill: false
                    }
                ]
            },
            options: { responsive: true, maintainAspectRatio: false }
        });

        // Platform Spend Chart
        new Chart(document.getElementById('platformChart').getContext('2d'), {
            type: 'doughnut',
            data: {
                labels: [@Html.Raw(string.Join(",", Model.Report.MetricsByPlatform.Keys.Select(k => $"'{k}'")))],
                datasets: [{
                    data: [@Html.Raw(string.Join(",", Model.Report.MetricsByPlatform.Values.Select(v => v.Spend)))],
                    backgroundColor: ['#5e72e4', '#2dce89', '#fb6340', '#f5365c', '#11cdef', '#172b4d']
                }]
            },
            options: { responsive: true, maintainAspectRatio: false }
        });
    </script>
}
