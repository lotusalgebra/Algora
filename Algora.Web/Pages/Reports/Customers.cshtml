@page
@model Algora.Web.Pages.Reports.CustomersModel
@{
    ViewData["Title"] = "Customers Report";
}

<div class="space-y-6">
    <!-- Page Header -->
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between">
        <div>
            <h1 class="text-2xl font-bold text-gray-900 dark:text-white">Customers Report</h1>
            <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Customer analytics and segmentation</p>
        </div>
        <a href="/reports/customers?handler=Export&format=csv&StartDate=@Model.StartDate.ToString("yyyy-MM-dd")&EndDate=@Model.EndDate.ToString("yyyy-MM-dd")"
           class="mt-4 sm:mt-0 text-white bg-gradient-to-br from-green-500 to-lime-400 hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-green-300 font-medium rounded-lg text-sm px-5 py-2.5 inline-flex items-center">
            <i class="fas fa-download me-2"></i>Export CSV
        </a>
    </div>

    <!-- Date Filter -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-4">
        <form method="get" class="flex flex-wrap items-end gap-4">
            <div>
                <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Start Date</label>
                <input type="date" name="StartDate" value="@Model.StartDate.ToString("yyyy-MM-dd")"
                       class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white" />
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">End Date</label>
                <input type="date" name="EndDate" value="@Model.EndDate.ToString("yyyy-MM-dd")"
                       class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white" />
            </div>
            <button type="submit" class="text-white bg-gradient-to-br from-purple-600 to-pink-500 hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-purple-300 font-medium rounded-lg text-sm px-5 py-2.5">
                Apply
            </button>
        </form>
    </div>

    <!-- KPI Cards -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
        <!-- Total Customers -->
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-4 hover:shadow-lg transition-shadow">
            <div class="flex items-center justify-between">
                <div class="flex-1">
                    <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Total Customers</p>
                    <h3 class="text-2xl font-bold text-gray-900 dark:text-white mt-1">@Model.Report.TotalCustomers</h3>
                </div>
                <div class="flex items-center justify-center w-12 h-12 rounded-lg bg-gradient-to-br from-purple-600 to-pink-500">
                    <i class="fas fa-users text-white text-lg"></i>
                </div>
            </div>
        </div>

        <!-- New Customers -->
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-4 hover:shadow-lg transition-shadow">
            <div class="flex items-center justify-between">
                <div class="flex-1">
                    <p class="text-sm font-medium text-gray-500 dark:text-gray-400">New Customers</p>
                    <h3 class="text-2xl font-bold text-green-600 mt-1">@Model.Report.NewCustomers</h3>
                    <p class="text-xs text-gray-500 dark:text-gray-400">in selected period</p>
                </div>
                <div class="flex items-center justify-center w-12 h-12 rounded-lg bg-gradient-to-br from-green-500 to-lime-400">
                    <i class="fas fa-user-plus text-white text-lg"></i>
                </div>
            </div>
        </div>

        <!-- Returning Customers -->
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-4 hover:shadow-lg transition-shadow">
            <div class="flex items-center justify-between">
                <div class="flex-1">
                    <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Returning</p>
                    <h3 class="text-2xl font-bold text-blue-500 mt-1">@Model.Report.ReturningCustomers</h3>
                </div>
                <div class="flex items-center justify-center w-12 h-12 rounded-lg bg-gradient-to-br from-blue-500 to-cyan-400">
                    <i class="fas fa-redo text-white text-lg"></i>
                </div>
            </div>
        </div>

        <!-- Avg Lifetime Value -->
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-4 hover:shadow-lg transition-shadow">
            <div class="flex items-center justify-between">
                <div class="flex-1">
                    <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Avg Lifetime Value</p>
                    <h3 class="text-2xl font-bold text-orange-500 mt-1">$@Model.Report.AverageCustomerLifetimeValue.ToString("N2")</h3>
                </div>
                <div class="flex items-center justify-center w-12 h-12 rounded-lg bg-gradient-to-br from-orange-500 to-yellow-400">
                    <i class="fas fa-gem text-white text-lg"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Charts -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <!-- Customer Acquisition Trend -->
        <div class="lg:col-span-2 bg-white dark:bg-gray-800 rounded-lg shadow-md overflow-hidden">
            <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700">
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Customer Acquisition Trend</h3>
            </div>
            <div class="p-6">
                <div style="height: 300px;">
                    @if (Model.Report.CustomerAcquisitionTrend.Any())
                    {
                        <canvas id="acquisitionChart"></canvas>
                    }
                    else
                    {
                        <p class="text-center text-gray-500 dark:text-gray-400 py-12">No acquisition data available</p>
                    }
                </div>
            </div>
        </div>

        <!-- Customer Segments -->
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md overflow-hidden">
            <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700">
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Customer Segments</h3>
            </div>
            <div class="p-6">
                <div style="height: 300px;">
                    @if (Model.Report.CustomersBySegment.Any())
                    {
                        <canvas id="segmentChart"></canvas>
                    }
                    else
                    {
                        <p class="text-center text-gray-500 dark:text-gray-400 py-12">No segment data available</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Top Customers Table -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md overflow-hidden">
        <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700">
            <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Top Customers by Lifetime Value</h3>
        </div>
        <div class="overflow-x-auto">
            <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
                <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                    <tr>
                        <th scope="col" class="px-6 py-3">Customer</th>
                        <th scope="col" class="px-6 py-3 text-center">Orders</th>
                        <th scope="col" class="px-6 py-3 text-right">Total Spent</th>
                        <th scope="col" class="px-6 py-3 text-right">Avg Order</th>
                        <th scope="col" class="px-6 py-3 text-right">Last Order</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var customer in Model.TopCustomers)
                    {
                        <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-700">
                            <td class="px-6 py-4">
                                <p class="font-medium text-gray-900 dark:text-white">@customer.CustomerName</p>
                                <p class="text-xs text-gray-500">@customer.CustomerEmail</p>
                            </td>
                            <td class="px-6 py-4 text-center">@customer.TotalOrders</td>
                            <td class="px-6 py-4 text-right font-medium text-green-600">$@customer.TotalSpent.ToString("N0")</td>
                            <td class="px-6 py-4 text-right">$@customer.AverageOrderValue.ToString("N2")</td>
                            <td class="px-6 py-4 text-right">@customer.LastOrderDate.ToString("MMM dd, yyyy")</td>
                        </tr>
                    }
                    @if (!Model.TopCustomers.Any())
                    {
                        <tr class="bg-white dark:bg-gray-800">
                            <td colspan="5" class="px-6 py-8 text-center text-gray-500 dark:text-gray-400">No customer data available</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
<script>
    @if (Model.Report.CustomerAcquisitionTrend.Any())
    {
        <text>
        new Chart(document.getElementById('acquisitionChart').getContext('2d'), {
            type: 'line',
            data: {
                labels: [@Html.Raw(string.Join(",", Model.Report.CustomerAcquisitionTrend.Select(d => $"'{d.Label}'")))],
                datasets: [{
                    label: 'New Customers',
                    data: [@Html.Raw(string.Join(",", Model.Report.CustomerAcquisitionTrend.Select(d => d.Value)))],
                    borderColor: 'rgb(45, 206, 137)',
                    backgroundColor: 'rgba(45, 206, 137, 0.1)',
                    tension: 0.4,
                    fill: true
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: { legend: { display: false } },
                scales: {
                    y: { beginAtZero: true, grid: { color: 'rgba(156, 163, 175, 0.2)' } },
                    x: { grid: { display: false } }
                }
            }
        });
        </text>
    }

    @if (Model.Report.CustomersBySegment.Any())
    {
        <text>
        new Chart(document.getElementById('segmentChart').getContext('2d'), {
            type: 'doughnut',
            data: {
                labels: [@Html.Raw(string.Join(",", Model.Report.CustomersBySegment.Keys.Select(k => $"'{k}'")))],
                datasets: [{
                    data: [@Html.Raw(string.Join(",", Model.Report.CustomersBySegment.Values))],
                    backgroundColor: ['rgb(147, 51, 234)', 'rgb(45, 206, 137)', 'rgb(251, 99, 64)', 'rgb(245, 54, 92)', 'rgb(17, 205, 239)']
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false
            }
        });
        </text>
    }
</script>
}
