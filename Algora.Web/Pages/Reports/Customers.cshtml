@page
@model Algora.Web.Pages.Reports.CustomersModel
@{
    ViewData["Title"] = "Customers Report";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12 d-flex justify-content-between align-items-center">
            <div>
                <h4 class="mb-1">Customers Report</h4>
                <p class="text-sm text-secondary mb-0">Customer analytics and segmentation</p>
            </div>
            <a href="/reports/customers?handler=Export&format=csv&StartDate=@Model.StartDate.ToString("yyyy-MM-dd")&EndDate=@Model.EndDate.ToString("yyyy-MM-dd")"
               class="btn bg-gradient-success btn-sm">
                <i class="fas fa-download me-2"></i>Export CSV
            </a>
        </div>
    </div>

    <!-- Date Filter -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-body py-3">
                    <form method="get" class="d-flex align-items-center gap-3 flex-wrap">
                        <div>
                            <label class="form-label text-xs mb-1">Start Date</label>
                            <input type="date" name="StartDate" value="@Model.StartDate.ToString("yyyy-MM-dd")" class="form-control form-control-sm" />
                        </div>
                        <div>
                            <label class="form-label text-xs mb-1">End Date</label>
                            <input type="date" name="EndDate" value="@Model.EndDate.ToString("yyyy-MM-dd")" class="form-control form-control-sm" />
                        </div>
                        <div class="align-self-end">
                            <button type="submit" class="btn bg-gradient-primary btn-sm">Apply</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- KPI Cards -->
    <div class="row mb-4">
        <div class="col-xl-3 col-sm-6 mb-xl-0 mb-4">
            <div class="card">
                <div class="card-body p-3">
                    <p class="text-sm mb-0 font-weight-bold">Total Customers</p>
                    <h4 class="font-weight-bolder text-primary">@Model.Report.TotalCustomers</h4>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-sm-6 mb-xl-0 mb-4">
            <div class="card">
                <div class="card-body p-3">
                    <p class="text-sm mb-0 font-weight-bold">New Customers</p>
                    <h4 class="font-weight-bolder text-success">@Model.Report.NewCustomers</h4>
                    <span class="text-xs text-secondary">in selected period</span>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-sm-6 mb-xl-0 mb-4">
            <div class="card">
                <div class="card-body p-3">
                    <p class="text-sm mb-0 font-weight-bold">Returning</p>
                    <h4 class="font-weight-bolder text-info">@Model.Report.ReturningCustomers</h4>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-sm-6">
            <div class="card">
                <div class="card-body p-3">
                    <p class="text-sm mb-0 font-weight-bold">Avg Lifetime Value</p>
                    <h4 class="font-weight-bolder text-warning">$@Model.Report.AverageCustomerLifetimeValue.ToString("N2")</h4>
                </div>
            </div>
        </div>
    </div>

    <!-- Charts -->
    <div class="row mb-4">
        <div class="col-lg-8 mb-lg-0 mb-4">
            <div class="card">
                <div class="card-header pb-0">
                    <h6>Customer Acquisition Trend</h6>
                </div>
                <div class="card-body p-3">
                    <canvas id="acquisitionChart" height="300"></canvas>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="card h-100">
                <div class="card-header pb-0">
                    <h6>Customer Segments</h6>
                </div>
                <div class="card-body p-3">
                    <canvas id="segmentChart" height="300"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- Top Customers Table -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header pb-0">
                    <h6>Top Customers by Lifetime Value</h6>
                </div>
                <div class="card-body px-0 pt-0 pb-2">
                    <div class="table-responsive p-0">
                        <table class="table align-items-center mb-0">
                            <thead>
                                <tr>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Customer</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Orders</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Total Spent</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Avg Order</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Last Order</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var customer in Model.TopCustomers)
                                {
                                    <tr>
                                        <td class="ps-4">
                                            <p class="text-xs font-weight-bold mb-0">@customer.CustomerName</p>
                                            <p class="text-xxs text-secondary mb-0">@customer.CustomerEmail</p>
                                        </td>
                                        <td><span class="text-xs">@customer.TotalOrders</span></td>
                                        <td><span class="text-xs font-weight-bold text-success">$@customer.TotalSpent.ToString("N0")</span></td>
                                        <td><span class="text-xs">$@customer.AverageOrderValue.ToString("N2")</span></td>
                                        <td><span class="text-xs">@customer.LastOrderDate.ToString("MMM dd, yyyy")</span></td>
                                    </tr>
                                }
                                @if (!Model.TopCustomers.Any())
                                {
                                    <tr><td colspan="5" class="text-center text-xs text-secondary py-4">No customer data available</td></tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.1/dist/chart.umd.min.js"></script>
    <script>
        new Chart(document.getElementById('acquisitionChart').getContext('2d'), {
            type: 'line',
            data: {
                labels: [@Html.Raw(string.Join(",", Model.Report.CustomerAcquisitionTrend.Select(d => $"'{d.Label}'")))],
                datasets: [{
                    label: 'New Customers',
                    data: [@Html.Raw(string.Join(",", Model.Report.CustomerAcquisitionTrend.Select(d => d.Value)))],
                    borderColor: 'rgb(45, 206, 137)',
                    backgroundColor: 'rgba(45, 206, 137, 0.1)',
                    tension: 0.4,
                    fill: true
                }]
            },
            options: { responsive: true, maintainAspectRatio: false }
        });

        new Chart(document.getElementById('segmentChart').getContext('2d'), {
            type: 'doughnut',
            data: {
                labels: [@Html.Raw(string.Join(",", Model.Report.CustomersBySegment.Keys.Select(k => $"'{k}'")))],
                datasets: [{
                    data: [@Html.Raw(string.Join(",", Model.Report.CustomersBySegment.Values))],
                    backgroundColor: ['#5e72e4', '#2dce89', '#fb6340', '#f5365c', '#11cdef']
                }]
            },
            options: { responsive: true, maintainAspectRatio: false }
        });
    </script>
}
