@page "/inventory/alerts"
@model Algora.Web.Pages.Inventory.AlertsModel
@{
    ViewData["Title"] = "Inventory Alerts";
}

<div class="p-4">
    <!-- Alert Summary -->
    <div class="grid grid-cols-1 sm:grid-cols-2 xl:grid-cols-4 gap-4 mb-6">
        <!-- Critical -->
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-4">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Critical</p>
                    <h3 class="text-2xl font-bold text-red-600 dark:text-red-400">@(Model.AlertCounts.GetValueOrDefault("critical", 0))</h3>
                </div>
                <div class="w-12 h-12 rounded-lg bg-gradient-to-br from-red-600 to-rose-400 flex items-center justify-center">
                    <i class="fas fa-exclamation-circle text-white text-lg"></i>
                </div>
            </div>
        </div>

        <!-- High -->
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-4">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-gray-500 dark:text-gray-400">High</p>
                    <h3 class="text-2xl font-bold text-orange-600 dark:text-orange-400">@(Model.AlertCounts.GetValueOrDefault("high", 0))</h3>
                </div>
                <div class="w-12 h-12 rounded-lg bg-gradient-to-br from-orange-500 to-yellow-400 flex items-center justify-center">
                    <i class="fas fa-exclamation-triangle text-white text-lg"></i>
                </div>
            </div>
        </div>

        <!-- Medium -->
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-4">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Medium</p>
                    <h3 class="text-2xl font-bold text-yellow-600 dark:text-yellow-400">@(Model.AlertCounts.GetValueOrDefault("medium", 0))</h3>
                </div>
                <div class="w-12 h-12 rounded-lg bg-gradient-to-br from-yellow-500 to-amber-400 flex items-center justify-center">
                    <i class="fas fa-info-circle text-white text-lg"></i>
                </div>
            </div>
        </div>

        <!-- Low -->
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-4">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Low</p>
                    <h3 class="text-2xl font-bold text-gray-600 dark:text-gray-400">@(Model.AlertCounts.GetValueOrDefault("low", 0))</h3>
                </div>
                <div class="w-12 h-12 rounded-lg bg-gradient-to-br from-gray-500 to-gray-600 flex items-center justify-center">
                    <i class="fas fa-info text-white text-lg"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Alerts Table -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md">
        <!-- Card Header -->
        <div class="p-6 border-b border-gray-200 dark:border-gray-700">
            <div class="flex flex-wrap items-center justify-between gap-4">
                <div>
                    <h1 class="text-xl font-bold text-gray-900 dark:text-white">Inventory Alerts</h1>
                    <p class="text-sm text-gray-500 dark:text-gray-400">
                        <i class="fa fa-bell text-orange-500 me-1"></i>
                        <span class="font-semibold">@Model.Alerts.Count</span> alerts
                    </p>
                </div>
                <div class="flex items-center gap-2">
                    <a href="/inventory" class="inline-flex items-center px-4 py-2.5 text-sm font-medium text-white bg-gradient-to-br from-blue-600 to-cyan-400 rounded-lg hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-blue-300">
                        <i class="fas fa-chart-line me-2"></i> Predictions
                    </a>
                    <a href="/inventory/settings" class="inline-flex items-center px-4 py-2.5 text-sm font-medium text-gray-900 bg-white border border-gray-300 rounded-lg hover:bg-gray-100 focus:ring-4 focus:outline-none focus:ring-gray-200 dark:bg-gray-800 dark:text-white dark:border-gray-600 dark:hover:bg-gray-700">
                        <i class="fas fa-cog me-2"></i> Settings
                    </a>
                </div>
            </div>
        </div>

        <!-- Messages -->
        @if (!string.IsNullOrEmpty(Model.SuccessMessage))
        {
            <div class="mx-6 mt-4 flex items-center p-4 text-sm text-green-800 rounded-lg bg-green-50 dark:bg-gray-700 dark:text-green-400" role="alert">
                <i class="fas fa-check-circle me-2"></i>@Model.SuccessMessage
            </div>
        }

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="mx-6 mt-4 flex items-center p-4 text-sm text-red-800 rounded-lg bg-red-50 dark:bg-gray-700 dark:text-red-400" role="alert">
                <i class="fas fa-exclamation-triangle me-2"></i>@Model.ErrorMessage
            </div>
        }

        <!-- Card Body -->
        <div class="p-6">
            @if (Model.Alerts.Count == 0)
            {
                <div class="text-center py-12">
                    <i class="fas fa-check-circle text-6xl text-green-300 dark:text-green-600 mb-4"></i>
                    <p class="text-gray-500 dark:text-gray-400">No alerts at the moment. Your inventory is looking healthy!</p>
                </div>
            }
            else
            {
                <div class="relative overflow-x-auto">
                    <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
                        <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                            <tr>
                                <th scope="col" class="px-6 py-3">Product</th>
                                <th scope="col" class="px-6 py-3 text-center">Severity</th>
                                <th scope="col" class="px-6 py-3 text-center">Type</th>
                                <th scope="col" class="px-6 py-3">Message</th>
                                <th scope="col" class="px-6 py-3 text-center">Status</th>
                                <th scope="col" class="px-6 py-3 text-center">Notified</th>
                                <th scope="col" class="px-6 py-3 text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var alert in Model.Alerts)
                            {
                                var severityBadge = alert.Severity switch
                                {
                                    "critical" => "bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-300",
                                    "high" => "bg-orange-100 text-orange-800 dark:bg-orange-900 dark:text-orange-300",
                                    "medium" => "bg-yellow-100 text-yellow-800 dark:bg-yellow-900 dark:text-yellow-300",
                                    _ => "bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-300"
                                };

                                var statusBadge = alert.Status switch
                                {
                                    "active" => "bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-300",
                                    "acknowledged" => "bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-300",
                                    "resolved" => "bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-300",
                                    _ => "bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-300"
                                };

                                <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
                                    <td class="px-6 py-4">
                                        <div class="font-medium text-gray-900 dark:text-white">@alert.ProductTitle</div>
                                        @if (!string.IsNullOrEmpty(alert.Sku))
                                        {
                                            <div class="text-xs text-gray-500 dark:text-gray-400">SKU: @alert.Sku</div>
                                        }
                                    </td>
                                    <td class="px-6 py-4 text-center">
                                        <span class="@severityBadge text-xs font-medium px-2.5 py-0.5 rounded uppercase">@alert.Severity</span>
                                    </td>
                                    <td class="px-6 py-4 text-center text-gray-500 dark:text-gray-400">@alert.AlertType.Replace("_", " ")</td>
                                    <td class="px-6 py-4 text-gray-600 dark:text-gray-300">@alert.Message</td>
                                    <td class="px-6 py-4 text-center">
                                        <span class="@statusBadge text-xs font-medium px-2.5 py-0.5 rounded uppercase">@alert.Status</span>
                                    </td>
                                    <td class="px-6 py-4 text-center">
                                        <div class="flex justify-center gap-1">
                                            @if (alert.EmailSent)
                                            {
                                                <i class="fas fa-envelope text-green-500" title="Email sent"></i>
                                            }
                                            @if (alert.SmsSent)
                                            {
                                                <i class="fas fa-sms text-green-500" title="SMS sent"></i>
                                            }
                                            @if (alert.WhatsAppSent)
                                            {
                                                <i class="fab fa-whatsapp text-green-500" title="WhatsApp sent"></i>
                                            }
                                            @if (!alert.EmailSent && !alert.SmsSent && !alert.WhatsAppSent)
                                            {
                                                <span class="text-xs text-gray-400">-</span>
                                            }
                                        </div>
                                    </td>
                                    <td class="px-6 py-4 text-center">
                                        @if (alert.Status == "active")
                                        {
                                            <div class="flex justify-center gap-2">
                                                <form method="post" asp-page-handler="Acknowledge" class="inline">
                                                    <input type="hidden" name="id" value="@alert.Id" />
                                                    <button type="submit" class="text-blue-600 hover:text-blue-800 dark:text-blue-400" title="Acknowledge">
                                                        <i class="fas fa-check"></i>
                                                    </button>
                                                </form>
                                                <form method="post" asp-page-handler="Dismiss" class="inline">
                                                    <input type="hidden" name="id" value="@alert.Id" />
                                                    <button type="submit" class="text-gray-600 hover:text-gray-800 dark:text-gray-400" title="Dismiss">
                                                        <i class="fas fa-times"></i>
                                                    </button>
                                                </form>
                                                <form method="post" asp-page-handler="Resolve" class="inline">
                                                    <input type="hidden" name="id" value="@alert.Id" />
                                                    <button type="submit" class="text-green-600 hover:text-green-800 dark:text-green-400" title="Resolve">
                                                        <i class="fas fa-check-double"></i>
                                                    </button>
                                                </form>
                                            </div>
                                        }
                                        else
                                        {
                                            <span class="text-xs text-gray-400">-</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>
