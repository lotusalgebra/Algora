@page "/inventory/alerts"
@model Algora.Web.Pages.Inventory.AlertsModel
@{
    ViewData["Title"] = "Inventory Alerts";
}

<div class="w-full px-6 py-6 mx-auto">
    <!-- Alert Summary -->
    <div class="flex flex-wrap -mx-3 mb-6">
        <div class="w-full max-w-full px-3 mb-6 sm:w-1/2 xl:w-1/4">
            <div class="relative flex flex-col min-w-0 break-words bg-white shadow-soft-xl rounded-2xl bg-clip-border dark:bg-gray-950 dark:shadow-soft-dark-xl">
                <div class="flex-auto p-4">
                    <div class="flex flex-row -mx-3">
                        <div class="flex-none w-2/3 max-w-full px-3">
                            <div>
                                <p class="mb-0 font-sans text-sm font-semibold leading-normal dark:text-white dark:opacity-60">Critical</p>
                                <h5 class="mb-0 font-bold dark:text-white text-red-600">@(Model.AlertCounts.GetValueOrDefault("critical", 0))</h5>
                            </div>
                        </div>
                        <div class="px-3 text-right basis-1/3">
                            <div class="inline-block w-12 h-12 text-center rounded-lg bg-gradient-to-tl from-red-600 to-rose-400">
                                <i class="fas fa-exclamation-circle text-lg relative top-3.5 text-white"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="w-full max-w-full px-3 mb-6 sm:w-1/2 xl:w-1/4">
            <div class="relative flex flex-col min-w-0 break-words bg-white shadow-soft-xl rounded-2xl bg-clip-border dark:bg-gray-950 dark:shadow-soft-dark-xl">
                <div class="flex-auto p-4">
                    <div class="flex flex-row -mx-3">
                        <div class="flex-none w-2/3 max-w-full px-3">
                            <div>
                                <p class="mb-0 font-sans text-sm font-semibold leading-normal dark:text-white dark:opacity-60">High</p>
                                <h5 class="mb-0 font-bold dark:text-white text-orange-600">@(Model.AlertCounts.GetValueOrDefault("high", 0))</h5>
                            </div>
                        </div>
                        <div class="px-3 text-right basis-1/3">
                            <div class="inline-block w-12 h-12 text-center rounded-lg bg-gradient-to-tl from-orange-500 to-yellow-300">
                                <i class="fas fa-exclamation-triangle text-lg relative top-3.5 text-white"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="w-full max-w-full px-3 mb-6 sm:w-1/2 xl:w-1/4">
            <div class="relative flex flex-col min-w-0 break-words bg-white shadow-soft-xl rounded-2xl bg-clip-border dark:bg-gray-950 dark:shadow-soft-dark-xl">
                <div class="flex-auto p-4">
                    <div class="flex flex-row -mx-3">
                        <div class="flex-none w-2/3 max-w-full px-3">
                            <div>
                                <p class="mb-0 font-sans text-sm font-semibold leading-normal dark:text-white dark:opacity-60">Medium</p>
                                <h5 class="mb-0 font-bold dark:text-white text-yellow-600">@(Model.AlertCounts.GetValueOrDefault("medium", 0))</h5>
                            </div>
                        </div>
                        <div class="px-3 text-right basis-1/3">
                            <div class="inline-block w-12 h-12 text-center rounded-lg bg-gradient-to-tl from-yellow-500 to-amber-300">
                                <i class="fas fa-info-circle text-lg relative top-3.5 text-white"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="w-full max-w-full px-3 mb-6 sm:w-1/2 xl:w-1/4">
            <div class="relative flex flex-col min-w-0 break-words bg-white shadow-soft-xl rounded-2xl bg-clip-border dark:bg-gray-950 dark:shadow-soft-dark-xl">
                <div class="flex-auto p-4">
                    <div class="flex flex-row -mx-3">
                        <div class="flex-none w-2/3 max-w-full px-3">
                            <div>
                                <p class="mb-0 font-sans text-sm font-semibold leading-normal dark:text-white dark:opacity-60">Low</p>
                                <h5 class="mb-0 font-bold dark:text-white text-gray-600">@(Model.AlertCounts.GetValueOrDefault("low", 0))</h5>
                            </div>
                        </div>
                        <div class="px-3 text-right basis-1/3">
                            <div class="inline-block w-12 h-12 text-center rounded-lg bg-gradient-to-tl from-gray-400 to-gray-600">
                                <i class="fas fa-info text-lg relative top-3.5 text-white"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Alerts Table -->
    <div class="flex flex-wrap -mx-3">
        <div class="flex-none w-full max-w-full px-3">
            <div class="relative flex flex-col min-w-0 mb-6 break-words bg-white border-0 shadow-soft-xl rounded-2xl bg-clip-border dark:bg-gray-950 dark:shadow-soft-dark-xl">

                <!-- Card Header -->
                <div class="p-6 pb-0 mb-0 border-b-0 rounded-t-2xl">
                    <div class="flex flex-wrap items-center justify-between">
                        <div>
                            <h6 class="mb-0 dark:text-white">Inventory Alerts</h6>
                            <p class="mb-0 text-sm leading-normal dark:text-white dark:opacity-60">
                                <i class="fa fa-bell text-orange-500 me-1"></i>
                                <span class="font-semibold">@Model.Alerts.Count</span> alerts
                            </p>
                        </div>
                        <div class="flex items-center gap-2">
                            <a href="/inventory" class="inline-block px-4 py-2 text-xs font-bold text-center text-white uppercase align-middle transition-all border-0 rounded-lg cursor-pointer ease-soft-in leading-pro tracking-tight-soft bg-gradient-to-tl from-blue-600 to-cyan-400 shadow-soft-md bg-150 bg-x-25 hover:scale-102 active:opacity-85">
                                <i class="fas fa-chart-line me-2"></i> Predictions
                            </a>
                            <a href="/inventory/settings" class="inline-block px-4 py-2 text-xs font-bold text-center text-white uppercase align-middle transition-all border-0 rounded-lg cursor-pointer ease-soft-in leading-pro tracking-tight-soft bg-gradient-to-tl from-gray-400 to-gray-600 shadow-soft-md bg-150 bg-x-25 hover:scale-102 active:opacity-85">
                                <i class="fas fa-cog me-2"></i> Settings
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Messages -->
                @if (!string.IsNullOrEmpty(Model.SuccessMessage))
                {
                    <div class="mx-6 mt-4 p-4 text-sm text-green-700 bg-green-100 rounded-lg dark:bg-green-200 dark:text-green-800" role="alert">
                        <i class="fas fa-check-circle me-2"></i>
                        @Model.SuccessMessage
                    </div>
                }

                @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                {
                    <div class="mx-6 mt-4 p-4 text-sm text-red-700 bg-red-100 rounded-lg dark:bg-red-200 dark:text-red-800" role="alert">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        @Model.ErrorMessage
                    </div>
                }

                <!-- Card Body -->
                <div class="flex-auto p-6 px-0 pb-0">
                    @if (Model.Alerts.Count == 0)
                    {
                        <div class="text-center py-12">
                            <i class="fas fa-check-circle fa-4x text-green-400 mb-4"></i>
                            <p class="text-gray-500 dark:text-gray-400 mb-4">No alerts at the moment. Your inventory is looking healthy!</p>
                        </div>
                    }
                    else
                    {
                        <div class="overflow-x-auto">
                            <table class="table items-center w-full mb-0 align-top border-gray-200 text-slate-500 dark:border-white/40">
                                <thead class="align-bottom">
                                    <tr>
                                        <th class="px-6 py-3 font-bold text-left uppercase align-middle bg-transparent border-b border-gray-200 shadow-none text-xxs border-b-solid tracking-none whitespace-nowrap text-slate-400 opacity-70 dark:border-white/40 dark:text-white dark:opacity-80">Product</th>
                                        <th class="px-6 py-3 font-bold text-center uppercase align-middle bg-transparent border-b border-gray-200 shadow-none text-xxs border-b-solid tracking-none whitespace-nowrap text-slate-400 opacity-70 dark:border-white/40 dark:text-white dark:opacity-80">Severity</th>
                                        <th class="px-6 py-3 font-bold text-center uppercase align-middle bg-transparent border-b border-gray-200 shadow-none text-xxs border-b-solid tracking-none whitespace-nowrap text-slate-400 opacity-70 dark:border-white/40 dark:text-white dark:opacity-80">Type</th>
                                        <th class="px-6 py-3 font-bold text-left uppercase align-middle bg-transparent border-b border-gray-200 shadow-none text-xxs border-b-solid tracking-none whitespace-nowrap text-slate-400 opacity-70 dark:border-white/40 dark:text-white dark:opacity-80">Message</th>
                                        <th class="px-6 py-3 font-bold text-center uppercase align-middle bg-transparent border-b border-gray-200 shadow-none text-xxs border-b-solid tracking-none whitespace-nowrap text-slate-400 opacity-70 dark:border-white/40 dark:text-white dark:opacity-80">Status</th>
                                        <th class="px-6 py-3 font-bold text-center uppercase align-middle bg-transparent border-b border-gray-200 shadow-none text-xxs border-b-solid tracking-none whitespace-nowrap text-slate-400 opacity-70 dark:border-white/40 dark:text-white dark:opacity-80">Notified</th>
                                        <th class="px-6 py-3 font-bold text-center uppercase align-middle bg-transparent border-b border-gray-200 shadow-none text-xxs border-b-solid tracking-none whitespace-nowrap text-slate-400 opacity-70 dark:border-white/40 dark:text-white dark:opacity-80">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var alert in Model.Alerts)
                                    {
                                        var severityColor = alert.Severity switch
                                        {
                                            "critical" => "from-red-600 to-rose-400",
                                            "high" => "from-orange-500 to-yellow-300",
                                            "medium" => "from-yellow-500 to-amber-300",
                                            _ => "from-gray-400 to-gray-600"
                                        };

                                        var statusColor = alert.Status switch
                                        {
                                            "active" => "from-red-600 to-rose-400",
                                            "acknowledged" => "from-blue-600 to-cyan-400",
                                            "resolved" => "from-green-600 to-lime-400",
                                            _ => "from-gray-400 to-gray-600"
                                        };

                                        <tr>
                                            <td class="p-2 align-middle bg-transparent border-b whitespace-nowrap dark:border-white/40">
                                                <div class="flex px-2 py-1">
                                                    <div class="flex flex-col justify-center">
                                                        <h6 class="mb-0 text-sm leading-normal dark:text-white">@alert.ProductTitle</h6>
                                                        @if (!string.IsNullOrEmpty(alert.Sku))
                                                        {
                                                            <p class="mb-0 text-xs leading-tight text-slate-400 dark:text-white dark:opacity-80">SKU: @alert.Sku</p>
                                                        }
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="p-2 text-center align-middle bg-transparent border-b whitespace-nowrap dark:border-white/40">
                                                <span class="bg-gradient-to-tl @severityColor px-2.5 text-xxs rounded-1.8 py-1.4 inline-block whitespace-nowrap text-center align-baseline font-bold uppercase leading-none text-white">@alert.Severity</span>
                                            </td>
                                            <td class="p-2 text-center align-middle bg-transparent border-b whitespace-nowrap dark:border-white/40">
                                                <span class="text-xs text-slate-500 dark:text-white dark:opacity-80">@alert.AlertType.Replace("_", " ")</span>
                                            </td>
                                            <td class="p-2 align-middle bg-transparent border-b dark:border-white/40">
                                                <span class="text-sm text-slate-600 dark:text-white dark:opacity-80">@alert.Message</span>
                                            </td>
                                            <td class="p-2 text-center align-middle bg-transparent border-b whitespace-nowrap dark:border-white/40">
                                                <span class="bg-gradient-to-tl @statusColor px-2.5 text-xxs rounded-1.8 py-1.4 inline-block whitespace-nowrap text-center align-baseline font-bold uppercase leading-none text-white">@alert.Status</span>
                                            </td>
                                            <td class="p-2 text-center align-middle bg-transparent border-b whitespace-nowrap dark:border-white/40">
                                                <div class="flex justify-center gap-1">
                                                    @if (alert.EmailSent)
                                                    {
                                                        <i class="fas fa-envelope text-green-500" title="Email sent"></i>
                                                    }
                                                    @if (alert.SmsSent)
                                                    {
                                                        <i class="fas fa-sms text-green-500" title="SMS sent"></i>
                                                    }
                                                    @if (alert.WhatsAppSent)
                                                    {
                                                        <i class="fab fa-whatsapp text-green-500" title="WhatsApp sent"></i>
                                                    }
                                                    @if (!alert.EmailSent && !alert.SmsSent && !alert.WhatsAppSent)
                                                    {
                                                        <span class="text-xs text-gray-400">-</span>
                                                    }
                                                </div>
                                            </td>
                                            <td class="p-2 text-center align-middle bg-transparent border-b whitespace-nowrap dark:border-white/40">
                                                @if (alert.Status == "active")
                                                {
                                                    <div class="flex justify-center gap-1">
                                                        <form method="post" asp-page-handler="Acknowledge" class="inline">
                                                            <input type="hidden" name="id" value="@alert.Id" />
                                                            <button type="submit" class="px-2 py-1 text-xs text-blue-600 hover:text-blue-800" title="Acknowledge">
                                                                <i class="fas fa-check"></i>
                                                            </button>
                                                        </form>
                                                        <form method="post" asp-page-handler="Dismiss" class="inline">
                                                            <input type="hidden" name="id" value="@alert.Id" />
                                                            <button type="submit" class="px-2 py-1 text-xs text-gray-600 hover:text-gray-800" title="Dismiss">
                                                                <i class="fas fa-times"></i>
                                                            </button>
                                                        </form>
                                                        <form method="post" asp-page-handler="Resolve" class="inline">
                                                            <input type="hidden" name="id" value="@alert.Id" />
                                                            <button type="submit" class="px-2 py-1 text-xs text-green-600 hover:text-green-800" title="Resolve">
                                                                <i class="fas fa-check-double"></i>
                                                            </button>
                                                        </form>
                                                    </div>
                                                }
                                                else
                                                {
                                                    <span class="text-xs text-gray-400">-</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
