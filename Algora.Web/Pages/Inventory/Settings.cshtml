@page "/inventory/settings"
@model Algora.Web.Pages.Inventory.SettingsModel
@{
    ViewData["Title"] = "Inventory Alert Settings";
}

<div class="p-4">
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md">
        <!-- Card Header -->
        <div class="p-6 border-b border-gray-200 dark:border-gray-700">
            <div class="flex flex-wrap items-center justify-between gap-4">
                <div>
                    <h1 class="text-xl font-bold text-gray-900 dark:text-white">Inventory Alert Settings</h1>
                    <p class="text-sm text-gray-500 dark:text-gray-400">
                        Configure your inventory alert thresholds and notification preferences
                    </p>
                </div>
                <div class="flex items-center gap-2">
                    <a href="/inventory" class="inline-flex items-center px-4 py-2.5 text-sm font-medium text-white bg-gradient-to-br from-blue-600 to-cyan-400 rounded-lg hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-blue-300">
                        <i class="fas fa-chart-line me-2"></i> Predictions
                    </a>
                    <a href="/inventory/alerts" class="inline-flex items-center px-4 py-2.5 text-sm font-medium text-white bg-gradient-to-br from-orange-500 to-yellow-400 rounded-lg hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-orange-300">
                        <i class="fas fa-bell me-2"></i> Alerts
                    </a>
                </div>
            </div>
        </div>

        <!-- Messages -->
        @if (!string.IsNullOrEmpty(Model.SuccessMessage))
        {
            <div class="mx-6 mt-4 flex items-center p-4 text-sm text-green-800 rounded-lg bg-green-50 dark:bg-gray-700 dark:text-green-400" role="alert">
                <i class="fas fa-check-circle me-2"></i>@Model.SuccessMessage
            </div>
        }

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="mx-6 mt-4 flex items-center p-4 text-sm text-red-800 rounded-lg bg-red-50 dark:bg-gray-700 dark:text-red-400" role="alert">
                <i class="fas fa-exclamation-triangle me-2"></i>@Model.ErrorMessage
            </div>
        }

        <!-- Card Body -->
        <div class="p-6">
            <form method="post">
                <!-- Global Settings -->
                <div class="mb-8">
                    <h6 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Global Settings</h6>
                    <div class="flex items-center">
                        <input type="checkbox" asp-for="Settings.AlertsEnabled"
                            class="w-4 h-4 text-purple-600 bg-gray-100 border-gray-300 rounded focus:ring-purple-500 dark:focus:ring-purple-600 dark:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600" />
                        <label asp-for="Settings.AlertsEnabled" class="ms-2 text-sm font-medium text-gray-900 dark:text-white">Enable Inventory Alerts</label>
                    </div>
                </div>

                <!-- Threshold Settings -->
                <div class="mb-8">
                    <h6 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Stock Level Thresholds</h6>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                            <label asp-for="Settings.LowStockDaysThreshold" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Low Stock Warning (days until stockout)</label>
                            <input type="number" asp-for="Settings.LowStockDaysThreshold" min="1" max="365"
                                class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white" />
                            <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">Warn when stock will last fewer than this many days</p>
                        </div>
                        <div>
                            <label asp-for="Settings.CriticalStockDaysThreshold" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Critical Stock Warning (days until stockout)</label>
                            <input type="number" asp-for="Settings.CriticalStockDaysThreshold" min="1" max="365"
                                class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white" />
                            <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">Critical alert when stock will last fewer than this many days</p>
                        </div>
                    </div>
                </div>

                <!-- Reorder Settings -->
                <div class="mb-8">
                    <h6 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Reorder Calculation</h6>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                            <label asp-for="Settings.DefaultLeadTimeDays" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Default Lead Time (days)</label>
                            <input type="number" asp-for="Settings.DefaultLeadTimeDays" min="0" max="365"
                                class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white" />
                            <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">Average time from order to delivery from supplier</p>
                        </div>
                        <div>
                            <label asp-for="Settings.DefaultSafetyStockDays" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Safety Stock Buffer (days)</label>
                            <input type="number" asp-for="Settings.DefaultSafetyStockDays" min="0" max="365"
                                class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white" />
                            <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">Extra buffer days to prevent stockouts</p>
                        </div>
                    </div>
                </div>

                <!-- Notification Settings -->
                <div class="mb-8">
                    <h6 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Notification Channels</h6>

                    <!-- Email -->
                    <div class="mb-4 p-4 border border-gray-200 dark:border-gray-700 rounded-lg">
                        <div class="flex items-center mb-4">
                            <input type="checkbox" asp-for="Settings.EmailNotificationsEnabled"
                                class="w-4 h-4 text-purple-600 bg-gray-100 border-gray-300 rounded focus:ring-purple-500 dark:focus:ring-purple-600 dark:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600" />
                            <label asp-for="Settings.EmailNotificationsEnabled" class="ms-2 text-sm font-medium text-gray-900 dark:text-white">
                                <i class="fas fa-envelope me-1 text-gray-400"></i> Email Notifications
                            </label>
                        </div>
                        <div>
                            <label asp-for="Settings.NotificationEmail" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Notification Email</label>
                            <input type="email" asp-for="Settings.NotificationEmail" placeholder="alerts@example.com"
                                class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white" />
                        </div>
                    </div>

                    <!-- SMS -->
                    <div class="mb-4 p-4 border border-gray-200 dark:border-gray-700 rounded-lg">
                        <div class="flex items-center mb-4">
                            <input type="checkbox" asp-for="Settings.SmsNotificationsEnabled"
                                class="w-4 h-4 text-purple-600 bg-gray-100 border-gray-300 rounded focus:ring-purple-500 dark:focus:ring-purple-600 dark:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600" />
                            <label asp-for="Settings.SmsNotificationsEnabled" class="ms-2 text-sm font-medium text-gray-900 dark:text-white">
                                <i class="fas fa-sms me-1 text-gray-400"></i> SMS Notifications
                            </label>
                        </div>
                        <div>
                            <label asp-for="Settings.NotificationPhone" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Phone Number</label>
                            <input type="tel" asp-for="Settings.NotificationPhone" placeholder="+1234567890"
                                class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white" />
                        </div>
                    </div>

                    <!-- WhatsApp -->
                    <div class="mb-4 p-4 border border-gray-200 dark:border-gray-700 rounded-lg">
                        <div class="flex items-center mb-4">
                            <input type="checkbox" asp-for="Settings.WhatsAppNotificationsEnabled"
                                class="w-4 h-4 text-purple-600 bg-gray-100 border-gray-300 rounded focus:ring-purple-500 dark:focus:ring-purple-600 dark:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600" />
                            <label asp-for="Settings.WhatsAppNotificationsEnabled" class="ms-2 text-sm font-medium text-gray-900 dark:text-white">
                                <i class="fab fa-whatsapp me-1 text-gray-400"></i> WhatsApp Notifications
                            </label>
                        </div>
                        <div>
                            <label asp-for="Settings.WhatsAppPhone" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">WhatsApp Number</label>
                            <input type="tel" asp-for="Settings.WhatsAppPhone" placeholder="+1234567890"
                                class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white" />
                        </div>
                    </div>
                </div>

                <!-- Alert Frequency -->
                <div class="mb-8">
                    <h6 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Alert Frequency</h6>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                            <label asp-for="Settings.MinHoursBetweenAlerts" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Minimum Hours Between Alerts</label>
                            <input type="number" asp-for="Settings.MinHoursBetweenAlerts" min="1" max="168"
                                class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white" />
                            <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">Prevent duplicate alerts for the same product</p>
                        </div>
                        <div class="flex items-center pt-8">
                            <input type="checkbox" asp-for="Settings.DailyDigestEnabled"
                                class="w-4 h-4 text-purple-600 bg-gray-100 border-gray-300 rounded focus:ring-purple-500 dark:focus:ring-purple-600 dark:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600" />
                            <label asp-for="Settings.DailyDigestEnabled" class="ms-2 text-sm font-medium text-gray-900 dark:text-white">Send Daily Digest Summary</label>
                        </div>
                    </div>
                </div>

                <!-- Submit Button -->
                <div class="flex justify-end">
                    <button type="submit" class="inline-flex items-center px-6 py-3 text-sm font-medium text-white bg-gradient-to-br from-purple-600 to-pink-500 rounded-lg hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-purple-300 dark:focus:ring-purple-800">
                        <i class="fas fa-save me-2"></i> Save Settings
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
