@page "/inventory"
@model Algora.Web.Pages.Inventory.IndexModel
@{
    ViewData["Title"] = "Inventory Predictions";
}

<div class="p-4">
    <!-- Summary Cards -->
    <div class="grid grid-cols-1 sm:grid-cols-2 xl:grid-cols-4 gap-4 mb-6">
        <!-- Out of Stock -->
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-4">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Out of Stock</p>
                    <h3 class="text-2xl font-bold text-red-600 dark:text-red-400">@(Model.Summary?.OutOfStockCount ?? 0)</h3>
                </div>
                <div class="w-12 h-12 rounded-lg bg-gradient-to-br from-red-600 to-rose-400 flex items-center justify-center">
                    <i class="fas fa-times-circle text-white text-lg"></i>
                </div>
            </div>
        </div>

        <!-- Critical Stock -->
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-4">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Critical Stock</p>
                    <h3 class="text-2xl font-bold text-orange-600 dark:text-orange-400">@(Model.Summary?.CriticalStockCount ?? 0)</h3>
                </div>
                <div class="w-12 h-12 rounded-lg bg-gradient-to-br from-orange-500 to-yellow-400 flex items-center justify-center">
                    <i class="fas fa-exclamation-triangle text-white text-lg"></i>
                </div>
            </div>
        </div>

        <!-- Low Stock -->
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-4">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Low Stock</p>
                    <h3 class="text-2xl font-bold text-yellow-600 dark:text-yellow-400">@(Model.Summary?.LowStockCount ?? 0)</h3>
                </div>
                <div class="w-12 h-12 rounded-lg bg-gradient-to-br from-yellow-500 to-amber-400 flex items-center justify-center">
                    <i class="fas fa-exclamation-circle text-white text-lg"></i>
                </div>
            </div>
        </div>

        <!-- Healthy Stock -->
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-4">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Healthy Stock</p>
                    <h3 class="text-2xl font-bold text-green-600 dark:text-green-400">@(Model.Summary?.HealthyStockCount ?? 0)</h3>
                </div>
                <div class="w-12 h-12 rounded-lg bg-gradient-to-br from-green-600 to-lime-400 flex items-center justify-center">
                    <i class="fas fa-check-circle text-white text-lg"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Predictions Table -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md">
        <!-- Card Header -->
        <div class="p-6 border-b border-gray-200 dark:border-gray-700">
            <div class="flex flex-wrap items-center justify-between gap-4">
                <div>
                    <h1 class="text-xl font-bold text-gray-900 dark:text-white">Inventory Predictions</h1>
                    <p class="text-sm text-gray-500 dark:text-gray-400">
                        <i class="fa fa-chart-line text-purple-500 me-1"></i>
                        <span class="font-semibold" id="total-count">0</span> products analyzed
                    </p>
                </div>
                <div class="flex items-center gap-2">
                    <form method="post" asp-page-handler="Recalculate" class="inline">
                        <button type="submit" class="inline-flex items-center px-4 py-2.5 text-sm font-medium text-white bg-gradient-to-br from-blue-600 to-cyan-400 rounded-lg hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-blue-300">
                            <i class="fas fa-sync-alt me-2"></i> Recalculate
                        </button>
                    </form>
                    <a href="/inventory/alerts" class="inline-flex items-center px-4 py-2.5 text-sm font-medium text-white bg-gradient-to-br from-orange-500 to-yellow-400 rounded-lg hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-orange-300">
                        <i class="fas fa-bell me-2"></i> Alerts
                    </a>
                    <a href="/inventory/settings" class="inline-flex items-center px-4 py-2.5 text-sm font-medium text-gray-900 bg-white border border-gray-300 rounded-lg hover:bg-gray-100 focus:ring-4 focus:outline-none focus:ring-gray-200 dark:bg-gray-800 dark:text-white dark:border-gray-600 dark:hover:bg-gray-700">
                        <i class="fas fa-cog me-2"></i> Settings
                    </a>
                </div>
            </div>
        </div>

        <!-- Messages -->
        @if (!string.IsNullOrEmpty(Model.SuccessMessage))
        {
            <div class="mx-6 mt-4 flex items-center p-4 text-sm text-green-800 rounded-lg bg-green-50 dark:bg-gray-700 dark:text-green-400" role="alert">
                <i class="fas fa-check-circle me-2"></i>@Model.SuccessMessage
            </div>
        }

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="mx-6 mt-4 flex items-center p-4 text-sm text-red-800 rounded-lg bg-red-50 dark:bg-gray-700 dark:text-red-400" role="alert">
                <i class="fas fa-exclamation-triangle me-2"></i>@Model.ErrorMessage
            </div>
        }

        <!-- Search and Filter Bar -->
        <div class="px-6 pt-4">
            <div class="flex flex-wrap items-center justify-between gap-4">
                <div class="flex items-center gap-4">
                    <div class="relative">
                        <div class="absolute inset-y-0 start-0 flex items-center ps-3 pointer-events-none">
                            <i class="fas fa-search text-gray-400"></i>
                        </div>
                        <input type="text" id="search-input" placeholder="Search products..."
                            class="block w-64 ps-10 p-2.5 text-sm text-gray-900 border border-gray-300 rounded-lg bg-gray-50 focus:ring-purple-500 focus:border-purple-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white">
                    </div>
                    <select id="status-filter"
                        class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white">
                        <option value="">All Statuses</option>
                        <option value="out_of_stock">Out of Stock</option>
                        <option value="critical">Critical</option>
                        <option value="low_stock">Low Stock</option>
                        <option value="healthy">Healthy</option>
                    </select>
                </div>
                <div class="flex items-center gap-2">
                    <span class="text-sm text-gray-500 dark:text-gray-400">Show</span>
                    <select id="per-page" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 p-2 dark:bg-gray-700 dark:border-gray-600 dark:text-white">
                        <option value="10">10</option>
                        <option value="25" selected>25</option>
                        <option value="50">50</option>
                        <option value="100">100</option>
                    </select>
                    <span class="text-sm text-gray-500 dark:text-gray-400">per page</span>
                </div>
            </div>
        </div>

        <!-- Card Body -->
        <div class="p-6">
            <!-- Loading Spinner -->
            <div id="loading-spinner" class="text-center py-12">
                <svg class="animate-spin h-8 w-8 text-purple-500 mx-auto" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                    <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                    <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                </svg>
                <p class="text-gray-500 dark:text-gray-400 mt-2">Loading predictions...</p>
            </div>

            <!-- Empty State -->
            <div id="empty-state" class="text-center py-12 hidden">
                <i class="fas fa-chart-bar text-6xl text-gray-300 dark:text-gray-600 mb-4"></i>
                <p class="text-gray-500 dark:text-gray-400 mb-4">No inventory predictions yet. Click "Recalculate" to analyze your inventory.</p>
            </div>

            <!-- Table -->
            <div class="relative overflow-x-auto" id="table-container" style="display: none;">
                <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400" id="predictions-list">
                    <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                        <tr>
                            <th scope="col" class="px-6 py-3 cursor-pointer hover:bg-gray-100 dark:hover:bg-gray-600" data-sort="0">
                                Product <i class="fas fa-sort ms-1 text-xs"></i>
                            </th>
                            <th scope="col" class="px-6 py-3 text-center">SKU</th>
                            <th scope="col" class="px-6 py-3 text-center cursor-pointer hover:bg-gray-100 dark:hover:bg-gray-600" data-sort="2">
                                Qty <i class="fas fa-sort ms-1 text-xs"></i>
                            </th>
                            <th scope="col" class="px-6 py-3 text-center cursor-pointer hover:bg-gray-100 dark:hover:bg-gray-600" data-sort="3">
                                Daily Sales <i class="fas fa-sort ms-1 text-xs"></i>
                            </th>
                            <th scope="col" class="px-6 py-3 text-center cursor-pointer hover:bg-gray-100 dark:hover:bg-gray-600" data-sort="4">
                                Days Left <i class="fas fa-sort ms-1 text-xs"></i>
                            </th>
                            <th scope="col" class="px-6 py-3 text-center cursor-pointer hover:bg-gray-100 dark:hover:bg-gray-600" data-sort="5">
                                Reorder <i class="fas fa-sort ms-1 text-xs"></i>
                            </th>
                            <th scope="col" class="px-6 py-3 text-center">Status</th>
                            <th scope="col" class="px-6 py-3 text-center">Confidence</th>
                        </tr>
                    </thead>
                    <tbody id="table-body"></tbody>
                </table>
            </div>

            <!-- Pagination -->
            <div id="pagination-container" class="pt-4 border-t border-gray-200 dark:border-gray-700 mt-4" style="display: none;">
                <div class="flex flex-wrap items-center justify-between gap-4">
                    <div class="text-sm text-gray-500 dark:text-gray-400">
                        Showing <span id="showing-start" class="font-medium">0</span> to <span id="showing-end" class="font-medium">0</span> of <span id="total-filtered" class="font-medium">0</span> predictions
                    </div>
                    <div class="flex items-center gap-2">
                        <button id="prev-btn" class="px-3 py-2 text-sm font-medium text-gray-500 bg-white border border-gray-300 rounded-lg hover:bg-gray-100 hover:text-gray-700 disabled:opacity-50 disabled:cursor-not-allowed dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white">
                            <i class="fas fa-chevron-left me-1"></i> Previous
                        </button>
                        <div id="page-numbers" class="flex gap-1"></div>
                        <button id="next-btn" class="px-3 py-2 text-sm font-medium text-gray-500 bg-white border border-gray-300 rounded-lg hover:bg-gray-100 hover:text-gray-700 disabled:opacity-50 disabled:cursor-not-allowed dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white">
                            Next <i class="fas fa-chevron-right ms-1"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        (function() {
            let currentPage = 1;
            let perPage = 25;
            let totalRecords = 0;
            let totalFiltered = 0;
            let sortColumn = 4;
            let sortDirection = 'asc';
            let searchTimeout = null;
            let drawCounter = 0;

            const searchInput = document.getElementById('search-input');
            const statusFilter = document.getElementById('status-filter');
            const perPageSelect = document.getElementById('per-page');
            const tableBody = document.getElementById('table-body');
            const loadingSpinner = document.getElementById('loading-spinner');
            const emptyState = document.getElementById('empty-state');
            const tableContainer = document.getElementById('table-container');
            const paginationContainer = document.getElementById('pagination-container');

            const statusBadges = {
                'out_of_stock': 'bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-300',
                'critical': 'bg-orange-100 text-orange-800 dark:bg-orange-900 dark:text-orange-300',
                'low_stock': 'bg-yellow-100 text-yellow-800 dark:bg-yellow-900 dark:text-yellow-300',
                'healthy': 'bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-300'
            };

            const confidenceBadges = {
                'high': 'bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-300',
                'medium': 'bg-yellow-100 text-yellow-800 dark:bg-yellow-900 dark:text-yellow-300',
                'low': 'bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-300'
            };

            function loadData() {
                loadingSpinner.style.display = 'block';
                emptyState.classList.add('hidden');
                tableContainer.style.display = 'none';
                paginationContainer.style.display = 'none';

                drawCounter++;
                const params = new URLSearchParams({
                    handler: 'Data',
                    draw: drawCounter,
                    start: (currentPage - 1) * perPage,
                    length: perPage,
                    search: searchInput.value,
                    statusFilter: statusFilter.value,
                    sortColumn: sortColumn,
                    sortDirection: sortDirection
                });

                fetch(`/inventory?${params}`)
                    .then(response => response.json())
                    .then(data => {
                        if (data.draw !== drawCounter) return;

                        totalRecords = data.recordsTotal;
                        totalFiltered = data.recordsFiltered;
                        document.getElementById('total-count').textContent = totalRecords;

                        loadingSpinner.style.display = 'none';

                        if (data.data.length === 0) {
                            emptyState.classList.remove('hidden');
                            return;
                        }

                        tableContainer.style.display = 'block';
                        paginationContainer.style.display = 'block';
                        renderTable(data.data);
                        updatePagination();
                    })
                    .catch(error => {
                        console.error('Error:', error);
                        loadingSpinner.style.display = 'none';
                        emptyState.classList.remove('hidden');
                    });
            }

            function renderTable(data) {
                tableBody.innerHTML = data.map(p => {
                    const daysClass = p.daysUntilStockoutRaw <= 7 ? 'text-red-600 dark:text-red-400' :
                                     p.daysUntilStockoutRaw <= 14 ? 'text-orange-600 dark:text-orange-400' : 'text-gray-900 dark:text-white';
                    const statusClass = statusBadges[p.status] || statusBadges['healthy'];
                    const confClass = confidenceBadges[p.confidenceLevel?.toLowerCase()] || confidenceBadges['medium'];

                    return `
                    <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
                        <td class="px-6 py-4">
                            <div class="font-medium text-gray-900 dark:text-white">${escapeHtml(p.productTitle)}</div>
                            ${p.variantTitle ? `<div class="text-xs text-gray-500 dark:text-gray-400">${escapeHtml(p.variantTitle)}</div>` : ''}
                        </td>
                        <td class="px-6 py-4 text-center font-mono text-gray-500 dark:text-gray-400">${escapeHtml(p.sku)}</td>
                        <td class="px-6 py-4 text-center font-semibold text-gray-900 dark:text-white">${p.currentQuantity}</td>
                        <td class="px-6 py-4 text-center text-gray-500 dark:text-gray-400">${p.averageDailySales}</td>
                        <td class="px-6 py-4 text-center font-bold ${daysClass}">${p.daysUntilStockout}</td>
                        <td class="px-6 py-4 text-center text-gray-500 dark:text-gray-400">${p.suggestedReorderQuantity}</td>
                        <td class="px-6 py-4 text-center">
                            <span class="${statusClass} text-xs font-medium px-2.5 py-0.5 rounded">${escapeHtml(p.statusText)}</span>
                        </td>
                        <td class="px-6 py-4 text-center">
                            <span class="${confClass} text-xs font-medium px-2.5 py-0.5 rounded">${escapeHtml(p.confidenceLevel)}</span>
                        </td>
                    </tr>
                    `;
                }).join('');
            }

            function updatePagination() {
                const totalPages = Math.ceil(totalFiltered / perPage);
                const start = Math.min((currentPage - 1) * perPage + 1, totalFiltered);
                const end = Math.min(currentPage * perPage, totalFiltered);

                document.getElementById('showing-start').textContent = totalFiltered > 0 ? start : 0;
                document.getElementById('showing-end').textContent = end;
                document.getElementById('total-filtered').textContent = totalFiltered;

                document.getElementById('prev-btn').disabled = currentPage === 1;
                document.getElementById('next-btn').disabled = currentPage >= totalPages;

                const pageNumbers = document.getElementById('page-numbers');
                pageNumbers.innerHTML = '';

                let startPage = Math.max(1, currentPage - 2);
                let endPage = Math.min(totalPages, startPage + 4);
                if (endPage - startPage < 4) startPage = Math.max(1, endPage - 4);

                for (let i = startPage; i <= endPage; i++) {
                    const btn = document.createElement('button');
                    btn.textContent = i;
                    btn.className = i === currentPage
                        ? 'px-3 py-2 text-sm font-medium text-white bg-gradient-to-br from-purple-600 to-pink-500 rounded-lg'
                        : 'px-3 py-2 text-sm font-medium text-gray-500 bg-white border border-gray-300 rounded-lg hover:bg-gray-100 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400';
                    btn.onclick = () => { currentPage = i; loadData(); };
                    pageNumbers.appendChild(btn);
                }
            }

            function escapeHtml(text) {
                if (!text) return '';
                const div = document.createElement('div');
                div.textContent = text;
                return div.innerHTML;
            }

            searchInput.addEventListener('input', function() {
                clearTimeout(searchTimeout);
                searchTimeout = setTimeout(() => { currentPage = 1; loadData(); }, 300);
            });

            statusFilter.addEventListener('change', function() { currentPage = 1; loadData(); });

            perPageSelect.addEventListener('change', function() {
                perPage = parseInt(this.value);
                currentPage = 1;
                loadData();
            });

            document.getElementById('prev-btn').addEventListener('click', function() {
                if (currentPage > 1) { currentPage--; loadData(); }
            });

            document.getElementById('next-btn').addEventListener('click', function() {
                if (currentPage < Math.ceil(totalFiltered / perPage)) { currentPage++; loadData(); }
            });

            document.querySelectorAll('[data-sort]').forEach(header => {
                header.addEventListener('click', function() {
                    const col = parseInt(this.dataset.sort);
                    if (sortColumn === col) {
                        sortDirection = sortDirection === 'asc' ? 'desc' : 'asc';
                    } else {
                        sortColumn = col;
                        sortDirection = 'asc';
                    }
                    document.querySelectorAll('[data-sort] i').forEach(icon => icon.className = 'fas fa-sort ms-1 text-xs');
                    this.querySelector('i').className = `fas fa-sort-${sortDirection === 'asc' ? 'up' : 'down'} ms-1 text-xs`;
                    loadData();
                });
            });

            loadData();
        })();
    </script>
}
