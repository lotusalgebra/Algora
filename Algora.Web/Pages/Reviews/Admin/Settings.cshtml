@page "/reviews/admin/settings"
@model Algora.Web.Pages.Reviews.Admin.SettingsModel
@{
    ViewData["Title"] = "Review Settings";
}

<div class="p-4">
    <!-- Header -->
    <div class="flex flex-wrap items-center justify-between gap-4 mb-6">
        <div>
            <h1 class="text-xl font-bold text-gray-900 dark:text-white">Review Settings</h1>
            <p class="text-sm text-gray-500 dark:text-gray-400">Configure widget display, moderation, and email settings</p>
        </div>
        <a href="/reviews/admin" class="text-gray-900 bg-white border border-gray-300 focus:outline-none hover:bg-gray-100 focus:ring-4 focus:ring-gray-200 font-medium rounded-lg text-sm px-5 py-2.5 dark:bg-gray-800 dark:text-white dark:border-gray-600 dark:hover:bg-gray-700 dark:focus:ring-gray-700">
            <i class="fas fa-arrow-left me-2"></i> Back
        </a>
    </div>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="flex items-center p-4 mb-6 text-sm text-red-800 rounded-lg bg-red-50 dark:bg-gray-800 dark:text-red-400" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>
            @Model.ErrorMessage
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="flex items-center p-4 mb-6 text-sm text-green-800 rounded-lg bg-green-50 dark:bg-gray-800 dark:text-green-400" role="alert">
            <i class="fas fa-check-circle me-2"></i>
            @Model.SuccessMessage
        </div>
    }

    <form method="post">
        <div class="grid grid-cols-1 xl:grid-cols-2 gap-6">
            <!-- Widget Settings -->
            <div>
                <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6">
                    <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">
                        <i class="fas fa-palette text-purple-500 me-2"></i> Widget Appearance
                    </h3>

                    <div class="space-y-4">
                        <div class="grid grid-cols-2 gap-4">
                            <div>
                                <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">Theme</label>
                                <select name="WidgetTheme" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white">
                                    <option value="light" selected="@(Model.Settings.WidgetTheme == "light")">Light</option>
                                    <option value="dark" selected="@(Model.Settings.WidgetTheme == "dark")">Dark</option>
                                    <option value="auto" selected="@(Model.Settings.WidgetTheme == "auto")">Auto (System)</option>
                                </select>
                            </div>
                            <div>
                                <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">Layout</label>
                                <select name="WidgetLayout" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white">
                                    <option value="list" selected="@(Model.Settings.WidgetLayout == "list")">List</option>
                                    <option value="grid" selected="@(Model.Settings.WidgetLayout == "grid")">Grid</option>
                                    <option value="carousel" selected="@(Model.Settings.WidgetLayout == "carousel")">Carousel</option>
                                </select>
                            </div>
                        </div>

                        <div class="grid grid-cols-3 gap-4">
                            <div>
                                <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">Primary Color</label>
                                <input type="color" name="PrimaryColor" value="@Model.Settings.PrimaryColor" class="w-full h-10 rounded-lg border border-gray-300 dark:border-gray-600 cursor-pointer" />
                            </div>
                            <div>
                                <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">Accent Color</label>
                                <input type="color" name="AccentColor" value="@Model.Settings.AccentColor" class="w-full h-10 rounded-lg border border-gray-300 dark:border-gray-600 cursor-pointer" />
                            </div>
                            <div>
                                <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">Star Color</label>
                                <input type="color" name="StarColor" value="@Model.Settings.StarColor" class="w-full h-10 rounded-lg border border-gray-300 dark:border-gray-600 cursor-pointer" />
                            </div>
                        </div>

                        <div>
                            <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">Reviews Per Page</label>
                            <input type="number" name="ReviewsPerPage" value="@Model.Settings.ReviewsPerPage" min="5" max="50"
                                   class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white" />
                        </div>

                        <div class="space-y-2">
                            <label class="flex items-center gap-2">
                                <input type="checkbox" name="ShowReviewerName" value="true" checked="@Model.Settings.ShowReviewerName" class="w-4 h-4 text-purple-600 bg-gray-100 border-gray-300 rounded focus:ring-purple-500 dark:focus:ring-purple-600 dark:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600" />
                                <span class="text-sm text-gray-700 dark:text-gray-300">Show reviewer name</span>
                            </label>
                            <label class="flex items-center gap-2">
                                <input type="checkbox" name="ShowReviewDate" value="true" checked="@Model.Settings.ShowReviewDate" class="w-4 h-4 text-purple-600 bg-gray-100 border-gray-300 rounded focus:ring-purple-500 dark:focus:ring-purple-600 dark:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600" />
                                <span class="text-sm text-gray-700 dark:text-gray-300">Show review date</span>
                            </label>
                            <label class="flex items-center gap-2">
                                <input type="checkbox" name="ShowVerifiedBadge" value="true" checked="@Model.Settings.ShowVerifiedBadge" class="w-4 h-4 text-purple-600 bg-gray-100 border-gray-300 rounded focus:ring-purple-500 dark:focus:ring-purple-600 dark:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600" />
                                <span class="text-sm text-gray-700 dark:text-gray-300">Show verified purchase badge</span>
                            </label>
                            <label class="flex items-center gap-2">
                                <input type="checkbox" name="ShowPhotoGallery" value="true" checked="@Model.Settings.ShowPhotoGallery" class="w-4 h-4 text-purple-600 bg-gray-100 border-gray-300 rounded focus:ring-purple-500 dark:focus:ring-purple-600 dark:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600" />
                                <span class="text-sm text-gray-700 dark:text-gray-300">Show photo gallery</span>
                            </label>
                            <label class="flex items-center gap-2">
                                <input type="checkbox" name="AllowCustomerReviews" value="true" checked="@Model.Settings.AllowCustomerReviews" class="w-4 h-4 text-purple-600 bg-gray-100 border-gray-300 rounded focus:ring-purple-500 dark:focus:ring-purple-600 dark:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600" />
                                <span class="text-sm text-gray-700 dark:text-gray-300">Allow customers to submit reviews</span>
                            </label>
                        </div>
                    </div>
                </div>

                <!-- Moderation Settings -->
                <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6 mt-6">
                    <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">
                        <i class="fas fa-gavel text-yellow-500 me-2"></i> Moderation
                    </h3>

                    <div class="space-y-4">
                        <label class="flex items-center gap-2">
                            <input type="checkbox" name="RequireApproval" value="true" checked="@Model.Settings.RequireApproval" class="w-4 h-4 text-purple-600 bg-gray-100 border-gray-300 rounded focus:ring-purple-500 dark:focus:ring-purple-600 dark:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600" />
                            <span class="text-sm text-gray-700 dark:text-gray-300">Require approval for new reviews</span>
                        </label>

                        <label class="flex items-center gap-2">
                            <input type="checkbox" id="autoApprove" name="AutoApproveReviews" value="true" checked="@Model.Settings.AutoApproveReviews" class="w-4 h-4 text-purple-600 bg-gray-100 border-gray-300 rounded focus:ring-purple-500 dark:focus:ring-purple-600 dark:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600" />
                            <span class="text-sm text-gray-700 dark:text-gray-300">Auto-approve reviews matching criteria</span>
                        </label>

                        <div id="autoApproveOptions" class="ml-6 space-y-3 @(Model.Settings.AutoApproveReviews ? "" : "hidden")">
                            <div>
                                <label class="block mb-2 text-sm text-gray-600 dark:text-gray-400">Minimum rating to auto-approve</label>
                                <select name="AutoApproveMinRating" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white">
                                    <option value="5" selected="@(Model.Settings.AutoApproveMinRating == 5)">5 Stars Only</option>
                                    <option value="4" selected="@(Model.Settings.AutoApproveMinRating == 4)">4+ Stars</option>
                                    <option value="3" selected="@(Model.Settings.AutoApproveMinRating == 3)">3+ Stars</option>
                                </select>
                            </div>
                            <label class="flex items-center gap-2">
                                <input type="checkbox" name="AutoApproveVerifiedOnly" value="true" checked="@Model.Settings.AutoApproveVerifiedOnly" class="w-4 h-4 text-purple-600 bg-gray-100 border-gray-300 rounded focus:ring-purple-500 dark:focus:ring-purple-600 dark:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600" />
                                <span class="text-sm text-gray-600 dark:text-gray-400">Only auto-approve verified purchases</span>
                            </label>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Widget Embed & API Key -->
            <div>
                <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6">
                    <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">
                        <i class="fas fa-code text-green-500 me-2"></i> Widget Embed Code
                    </h3>

                    <div class="space-y-4">
                        <div>
                            <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">Your API Key</label>
                            <div class="flex gap-2">
                                <input type="text" readonly value="@Model.Settings.WidgetApiKey"
                                       class="flex-1 bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white font-mono" />
                                <button type="button" onclick="copyApiKey()" class="px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-700 text-gray-700 dark:text-gray-300">
                                    <i class="fas fa-copy"></i>
                                </button>
                                <button type="button" onclick="regenerateApiKey()" class="px-3 py-2 border border-red-300 text-red-600 rounded-lg hover:bg-red-50 dark:hover:bg-red-900/20" title="Regenerate API Key">
                                    <i class="fas fa-sync"></i>
                                </button>
                            </div>
                        </div>

                        <div>
                            <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">Embed Code</label>
                            <p class="text-xs text-gray-500 dark:text-gray-400 mb-2">Add this code to your Shopify theme where you want reviews to appear:</p>
                            <pre class="p-4 bg-gray-900 text-green-400 rounded-lg text-xs overflow-x-auto"><code>&lt;script src="https://yourapp.com/js/algora-reviews-widget.min.js"
        data-api-key="@Model.Settings.WidgetApiKey"
        data-product-id="&#123;&#123;product.id&#125;&#125;"
        async&gt;&lt;/script&gt;
&lt;div id="algora-reviews"&gt;&lt;/div&gt;</code></pre>
                            <button type="button" onclick="copyEmbedCode()" class="mt-2 text-sm text-purple-600 hover:text-purple-800 dark:text-purple-400 dark:hover:text-purple-300">
                                <i class="fas fa-copy me-1"></i> Copy Embed Code
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Import Settings -->
                <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6 mt-6">
                    <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">
                        <i class="fas fa-download text-blue-500 me-2"></i> Import Settings
                    </h3>

                    <div class="space-y-4">
                        <label class="flex items-center gap-2">
                            <input type="checkbox" name="ImportPhotos" value="true" checked="@Model.Settings.ImportPhotos" class="w-4 h-4 text-purple-600 bg-gray-100 border-gray-300 rounded focus:ring-purple-500 dark:focus:ring-purple-600 dark:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600" />
                            <span class="text-sm text-gray-700 dark:text-gray-300">Import review photos</span>
                        </label>

                        <label class="flex items-center gap-2">
                            <input type="checkbox" name="RemoveSourceBranding" value="true" checked="@Model.Settings.RemoveSourceBranding" class="w-4 h-4 text-purple-600 bg-gray-100 border-gray-300 rounded focus:ring-purple-500 dark:focus:ring-purple-600 dark:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600" />
                            <span class="text-sm text-gray-700 dark:text-gray-300">Remove Amazon/AliExpress branding from reviews</span>
                        </label>

                        <label class="flex items-center gap-2">
                            <input type="checkbox" id="translateReviews" name="TranslateImportedReviews" value="true" checked="@Model.Settings.TranslateImportedReviews" class="w-4 h-4 text-purple-600 bg-gray-100 border-gray-300 rounded focus:ring-purple-500 dark:focus:ring-purple-600 dark:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600" />
                            <span class="text-sm text-gray-700 dark:text-gray-300">Translate imported reviews</span>
                        </label>

                        <div id="translateOptions" class="ml-6 @(Model.Settings.TranslateImportedReviews ? "" : "hidden")">
                            <label class="block mb-2 text-sm text-gray-600 dark:text-gray-400">Translate to</label>
                            <select name="TranslateToLanguage" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white">
                                <option value="en" selected="@(Model.Settings.TranslateToLanguage == "en")">English</option>
                                <option value="es" selected="@(Model.Settings.TranslateToLanguage == "es")">Spanish</option>
                                <option value="fr" selected="@(Model.Settings.TranslateToLanguage == "fr")">French</option>
                                <option value="de" selected="@(Model.Settings.TranslateToLanguage == "de")">German</option>
                            </select>
                        </div>
                    </div>
                </div>

                <!-- Email Settings -->
                <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6 mt-6">
                    <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">
                        <i class="fas fa-envelope text-purple-500 me-2"></i> Email Settings
                    </h3>

                    <div class="space-y-4">
                        <div>
                            <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">From Name</label>
                            <input type="text" name="DefaultEmailFromName" value="@Model.Settings.DefaultEmailFromName" placeholder="Your Store Name"
                                   class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white" />
                        </div>
                        <div>
                            <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">From Email</label>
                            <input type="email" name="DefaultEmailFromAddress" value="@Model.Settings.DefaultEmailFromAddress" placeholder="reviews@yourstore.com"
                                   class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white" />
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="flex justify-end mt-6">
            <button type="submit" class="text-white bg-gradient-to-br from-purple-600 to-pink-500 hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-purple-300 dark:focus:ring-purple-800 font-medium rounded-lg text-sm px-6 py-3">
                <i class="fas fa-save me-2"></i> Save Settings
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        document.getElementById('autoApprove').addEventListener('change', function() {
            document.getElementById('autoApproveOptions').classList.toggle('hidden', !this.checked);
        });

        document.getElementById('translateReviews').addEventListener('change', function() {
            document.getElementById('translateOptions').classList.toggle('hidden', !this.checked);
        });

        function copyApiKey() {
            navigator.clipboard.writeText('@Model.Settings.WidgetApiKey');
            alert('API Key copied to clipboard!');
        }

        function copyEmbedCode() {
            const code = `<script src="https://yourapp.com/js/algora-reviews-widget.min.js"
        data-api-key="@Model.Settings.WidgetApiKey"
        data-product-id="{{product.id}}"
        async><\/script>
<div id="algora-reviews"></div>`;
            navigator.clipboard.writeText(code);
            alert('Embed code copied to clipboard!');
        }

        async function regenerateApiKey() {
            if (confirm('Are you sure you want to regenerate your API key? Your existing widget embeds will stop working until you update them.')) {
                try {
                    const response = await fetch('/api/reviews/settings/regenerate-api-key', { method: 'POST' });
                    if (response.ok) {
                        location.reload();
                    }
                } catch (error) {
                    alert('Failed to regenerate API key');
                }
            }
        }
    </script>
}
