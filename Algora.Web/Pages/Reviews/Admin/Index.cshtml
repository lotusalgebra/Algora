@page "/reviews/admin"
@model Algora.Web.Pages.Reviews.Admin.IndexModel
@{
    ViewData["Title"] = "Review Manager";
}

<div class="w-full px-6 py-6 mx-auto">
    <!-- Header -->
    <div class="flex justify-between items-center mb-6">
        <div>
            <h1 class="text-2xl font-bold dark:text-white">Review Manager</h1>
            <p class="text-sm text-gray-500 dark:text-gray-400">Import, moderate, and display product reviews</p>
        </div>
        <a href="/reviews/admin/import" class="inline-flex items-center px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition-colors">
            <i class="fas fa-download mr-2"></i> Import Reviews
        </a>
    </div>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-6">
            @Model.ErrorMessage
        </div>
    }

    <!-- Summary Cards -->
    <div class="flex flex-wrap -mx-3 mb-6">
        <!-- Total Reviews -->
        <div class="w-full max-w-full px-3 mb-6 sm:w-1/2 xl:w-1/4">
            <div class="relative flex flex-col min-w-0 break-words bg-white shadow-soft-xl rounded-2xl bg-clip-border dark:bg-gray-950 dark:shadow-soft-dark-xl">
                <div class="flex-auto p-4">
                    <div class="flex flex-row -mx-3">
                        <div class="flex-none w-2/3 max-w-full px-3">
                            <div>
                                <p class="mb-0 font-sans text-sm font-semibold leading-normal dark:text-white dark:opacity-60">Total Reviews</p>
                                <h5 class="mb-0 font-bold dark:text-white text-indigo-600">@Model.Analytics.TotalReviews</h5>
                            </div>
                        </div>
                        <div class="px-3 text-right basis-1/3">
                            <div class="inline-block w-12 h-12 text-center rounded-lg bg-gradient-to-tl from-indigo-600 to-purple-400">
                                <i class="fas fa-star text-lg relative top-3.5 text-white"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Pending Moderation -->
        <div class="w-full max-w-full px-3 mb-6 sm:w-1/2 xl:w-1/4">
            <div class="relative flex flex-col min-w-0 break-words bg-white shadow-soft-xl rounded-2xl bg-clip-border dark:bg-gray-950 dark:shadow-soft-dark-xl">
                <div class="flex-auto p-4">
                    <div class="flex flex-row -mx-3">
                        <div class="flex-none w-2/3 max-w-full px-3">
                            <div>
                                <p class="mb-0 font-sans text-sm font-semibold leading-normal dark:text-white dark:opacity-60">Pending</p>
                                <h5 class="mb-0 font-bold dark:text-white text-yellow-600">@Model.PendingCount</h5>
                            </div>
                        </div>
                        <div class="px-3 text-right basis-1/3">
                            <div class="inline-block w-12 h-12 text-center rounded-lg bg-gradient-to-tl from-yellow-500 to-orange-400">
                                <i class="fas fa-clock text-lg relative top-3.5 text-white"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Average Rating -->
        <div class="w-full max-w-full px-3 mb-6 sm:w-1/2 xl:w-1/4">
            <div class="relative flex flex-col min-w-0 break-words bg-white shadow-soft-xl rounded-2xl bg-clip-border dark:bg-gray-950 dark:shadow-soft-dark-xl">
                <div class="flex-auto p-4">
                    <div class="flex flex-row -mx-3">
                        <div class="flex-none w-2/3 max-w-full px-3">
                            <div>
                                <p class="mb-0 font-sans text-sm font-semibold leading-normal dark:text-white dark:opacity-60">Average Rating</p>
                                <h5 class="mb-0 font-bold dark:text-white text-green-600">@Model.Analytics.AverageRating.ToString("F1") <i class="fas fa-star text-sm text-yellow-400"></i></h5>
                            </div>
                        </div>
                        <div class="px-3 text-right basis-1/3">
                            <div class="inline-block w-12 h-12 text-center rounded-lg bg-gradient-to-tl from-green-600 to-lime-400">
                                <i class="fas fa-chart-line text-lg relative top-3.5 text-white"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Photo Reviews -->
        <div class="w-full max-w-full px-3 mb-6 sm:w-1/2 xl:w-1/4">
            <div class="relative flex flex-col min-w-0 break-words bg-white shadow-soft-xl rounded-2xl bg-clip-border dark:bg-gray-950 dark:shadow-soft-dark-xl">
                <div class="flex-auto p-4">
                    <div class="flex flex-row -mx-3">
                        <div class="flex-none w-2/3 max-w-full px-3">
                            <div>
                                <p class="mb-0 font-sans text-sm font-semibold leading-normal dark:text-white dark:opacity-60">Photo Reviews</p>
                                <h5 class="mb-0 font-bold dark:text-white text-blue-600">@Model.Analytics.PhotoReviews</h5>
                            </div>
                        </div>
                        <div class="px-3 text-right basis-1/3">
                            <div class="inline-block w-12 h-12 text-center rounded-lg bg-gradient-to-tl from-blue-600 to-cyan-400">
                                <i class="fas fa-image text-lg relative top-3.5 text-white"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Links -->
    <div class="flex flex-wrap -mx-3 mb-6">
        <div class="w-full px-3">
            <div class="relative flex flex-col min-w-0 break-words bg-white shadow-soft-xl rounded-2xl bg-clip-border dark:bg-gray-950 dark:shadow-soft-dark-xl p-6">
                <h3 class="text-lg font-bold mb-4 dark:text-white">Quick Actions</h3>
                <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
                    <a href="/reviews/admin/list" class="p-4 bg-gray-50 dark:bg-gray-800 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors text-center">
                        <i class="fas fa-list text-2xl text-indigo-600 mb-2"></i>
                        <p class="text-sm font-medium dark:text-white">All Reviews</p>
                    </a>
                    <a href="/reviews/admin/list?status=pending" class="p-4 bg-gray-50 dark:bg-gray-800 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors text-center">
                        <i class="fas fa-gavel text-2xl text-yellow-600 mb-2"></i>
                        <p class="text-sm font-medium dark:text-white">Moderate</p>
                    </a>
                    <a href="/reviews/admin/import" class="p-4 bg-gray-50 dark:bg-gray-800 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors text-center">
                        <i class="fas fa-download text-2xl text-green-600 mb-2"></i>
                        <p class="text-sm font-medium dark:text-white">Import Reviews</p>
                    </a>
                    <a href="/reviews/admin/settings" class="p-4 bg-gray-50 dark:bg-gray-800 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors text-center">
                        <i class="fas fa-cog text-2xl text-gray-600 mb-2"></i>
                        <p class="text-sm font-medium dark:text-white">Settings</p>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="flex flex-wrap -mx-3">
        <!-- Rating Distribution -->
        <div class="w-full xl:w-1/2 px-3 mb-6">
            <div class="relative flex flex-col min-w-0 break-words bg-white shadow-soft-xl rounded-2xl bg-clip-border dark:bg-gray-950 dark:shadow-soft-dark-xl p-6">
                <h3 class="text-lg font-bold mb-4 dark:text-white">Rating Distribution</h3>
                <div class="space-y-3">
                    @foreach (var rating in Model.Analytics.RatingDistribution)
                    {
                        <div class="flex items-center gap-3">
                            <span class="text-sm font-medium w-8 dark:text-white">@rating.Rating <i class="fas fa-star text-yellow-400"></i></span>
                            <div class="flex-1 bg-gray-200 dark:bg-gray-700 rounded-full h-4">
                                <div class="bg-yellow-400 h-4 rounded-full" style="width: @(rating.Percentage)%"></div>
                            </div>
                            <span class="text-sm text-gray-500 dark:text-gray-400 w-16 text-right">@rating.Count (@rating.Percentage%)</span>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Source Distribution -->
        <div class="w-full xl:w-1/2 px-3 mb-6">
            <div class="relative flex flex-col min-w-0 break-words bg-white shadow-soft-xl rounded-2xl bg-clip-border dark:bg-gray-950 dark:shadow-soft-dark-xl p-6">
                <h3 class="text-lg font-bold mb-4 dark:text-white">Review Sources</h3>
                <div class="space-y-3">
                    @foreach (var source in Model.Analytics.SourceDistribution)
                    {
                        var color = source.Source switch
                        {
                            "amazon" => "bg-orange-500",
                            "aliexpress" => "bg-red-500",
                            "email_request" => "bg-blue-500",
                            _ => "bg-gray-500"
                        };
                        var icon = source.Source switch
                        {
                            "amazon" => "fab fa-amazon",
                            "aliexpress" => "fas fa-shopping-bag",
                            "email_request" => "fas fa-envelope",
                            _ => "fas fa-edit"
                        };
                        <div class="flex items-center gap-3">
                            <span class="w-24 text-sm font-medium dark:text-white capitalize flex items-center gap-2">
                                <i class="@icon text-gray-500"></i> @source.Source.Replace("_", " ")
                            </span>
                            <div class="flex-1 bg-gray-200 dark:bg-gray-700 rounded-full h-4">
                                <div class="@color h-4 rounded-full" style="width: @(source.Percentage)%"></div>
                            </div>
                            <span class="text-sm text-gray-500 dark:text-gray-400 w-16 text-right">@source.Count</span>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Reviews Pending -->
    @if (Model.RecentReviews.Any())
    {
        <div class="flex flex-wrap -mx-3">
            <div class="w-full px-3">
                <div class="relative flex flex-col min-w-0 break-words bg-white shadow-soft-xl rounded-2xl bg-clip-border dark:bg-gray-950 dark:shadow-soft-dark-xl">
                    <div class="border-black/12.5 rounded-t-2xl border-b-0 border-solid p-6">
                        <div class="flex justify-between items-center">
                            <h5 class="mb-0 dark:text-white font-bold">Reviews Pending Moderation</h5>
                            <a href="/reviews/admin/list?status=pending" class="text-indigo-600 hover:text-indigo-800 text-sm font-medium">View All</a>
                        </div>
                    </div>
                    <div class="flex-auto p-6 pt-0">
                        <div class="space-y-4">
                            @foreach (var review in Model.RecentReviews)
                            {
                                <div class="flex items-start gap-4 p-4 bg-gray-50 dark:bg-gray-800 rounded-lg">
                                    <div class="flex-1">
                                        <div class="flex items-center gap-2 mb-1">
                                            <span class="font-semibold dark:text-white">@review.ReviewerName</span>
                                            <div class="flex text-yellow-400">
                                                @for (var i = 0; i < 5; i++)
                                                {
                                                    <i class="fas fa-star @(i < review.Rating ? "" : "text-gray-300")"></i>
                                                }
                                            </div>
                                            @if (review.IsVerifiedPurchase)
                                            {
                                                <span class="text-xs bg-green-100 text-green-700 px-2 py-0.5 rounded">Verified</span>
                                            }
                                        </div>
                                        @if (!string.IsNullOrEmpty(review.Title))
                                        {
                                            <p class="font-medium dark:text-white">@review.Title</p>
                                        }
                                        <p class="text-sm text-gray-600 dark:text-gray-400">@review.BodyPreview</p>
                                        <p class="text-xs text-gray-400 mt-1">@review.ProductTitle - @review.ReviewDate.ToString("MMM d, yyyy")</p>
                                    </div>
                                    <div class="flex gap-2">
                                        <button onclick="approveReview(@review.Id)" class="px-3 py-1 bg-green-100 text-green-700 rounded hover:bg-green-200 text-sm">
                                            <i class="fas fa-check"></i>
                                        </button>
                                        <button onclick="rejectReview(@review.Id)" class="px-3 py-1 bg-red-100 text-red-700 rounded hover:bg-red-200 text-sm">
                                            <i class="fas fa-times"></i>
                                        </button>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        async function approveReview(id) {
            try {
                const response = await fetch(`/api/reviews/${id}/approve`, { method: 'POST' });
                if (response.ok) {
                    location.reload();
                }
            } catch (error) {
                console.error('Error approving review:', error);
            }
        }

        async function rejectReview(id) {
            try {
                const response = await fetch(`/api/reviews/${id}/reject`, { method: 'POST' });
                if (response.ok) {
                    location.reload();
                }
            } catch (error) {
                console.error('Error rejecting review:', error);
            }
        }
    </script>
}
