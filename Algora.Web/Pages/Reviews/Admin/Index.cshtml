@page "/reviews/admin"
@model Algora.Web.Pages.Reviews.Admin.IndexModel
@{
    ViewData["Title"] = "Review Manager";
}

<div class="p-4">
    <!-- Header -->
    <div class="flex flex-wrap items-center justify-between gap-4 mb-6">
        <div>
            <h1 class="text-xl font-bold text-gray-900 dark:text-white">Review Manager</h1>
            <p class="text-sm text-gray-500 dark:text-gray-400">Import, moderate, and display product reviews</p>
        </div>
        <a href="/reviews/admin/import" class="text-white bg-gradient-to-br from-purple-600 to-pink-500 hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-purple-300 dark:focus:ring-purple-800 font-medium rounded-lg text-sm px-5 py-2.5">
            <i class="fas fa-download me-2"></i> Import Reviews
        </a>
    </div>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="flex items-center p-4 mb-6 text-sm text-red-800 rounded-lg bg-red-50 dark:bg-gray-800 dark:text-red-400" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>
            @Model.ErrorMessage
        </div>
    }

    <!-- Summary Cards -->
    <div class="grid grid-cols-1 sm:grid-cols-2 xl:grid-cols-4 gap-4 mb-6">
        <!-- Total Reviews -->
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-4">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Total Reviews</p>
                    <h5 class="text-2xl font-bold text-purple-600 dark:text-purple-400">@Model.Analytics.TotalReviews</h5>
                </div>
                <div class="w-12 h-12 rounded-lg bg-gradient-to-br from-purple-600 to-pink-500 flex items-center justify-center">
                    <i class="fas fa-star text-lg text-white"></i>
                </div>
            </div>
        </div>

        <!-- Pending Moderation -->
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-4">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Pending</p>
                    <h5 class="text-2xl font-bold text-yellow-600 dark:text-yellow-400">@Model.PendingCount</h5>
                </div>
                <div class="w-12 h-12 rounded-lg bg-gradient-to-br from-orange-500 to-yellow-400 flex items-center justify-center">
                    <i class="fas fa-clock text-lg text-white"></i>
                </div>
            </div>
        </div>

        <!-- Average Rating -->
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-4">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Average Rating</p>
                    <h5 class="text-2xl font-bold text-green-600 dark:text-green-400">@Model.Analytics.AverageRating.ToString("F1") <i class="fas fa-star text-sm text-yellow-400"></i></h5>
                </div>
                <div class="w-12 h-12 rounded-lg bg-gradient-to-br from-green-500 to-lime-400 flex items-center justify-center">
                    <i class="fas fa-chart-line text-lg text-white"></i>
                </div>
            </div>
        </div>

        <!-- Photo Reviews -->
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-4">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Photo Reviews</p>
                    <h5 class="text-2xl font-bold text-blue-600 dark:text-blue-400">@Model.Analytics.PhotoReviews</h5>
                </div>
                <div class="w-12 h-12 rounded-lg bg-gradient-to-br from-blue-600 to-cyan-400 flex items-center justify-center">
                    <i class="fas fa-image text-lg text-white"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Links -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6 mb-6">
        <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Quick Actions</h3>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
            <a href="/reviews/admin/list" class="p-4 bg-gray-50 dark:bg-gray-700 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-600 transition-colors text-center">
                <i class="fas fa-list text-2xl text-purple-600 mb-2"></i>
                <p class="text-sm font-medium text-gray-900 dark:text-white">All Reviews</p>
            </a>
            <a href="/reviews/admin/list?status=pending" class="p-4 bg-gray-50 dark:bg-gray-700 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-600 transition-colors text-center">
                <i class="fas fa-gavel text-2xl text-yellow-600 mb-2"></i>
                <p class="text-sm font-medium text-gray-900 dark:text-white">Moderate</p>
            </a>
            <a href="/reviews/admin/import" class="p-4 bg-gray-50 dark:bg-gray-700 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-600 transition-colors text-center">
                <i class="fas fa-download text-2xl text-green-600 mb-2"></i>
                <p class="text-sm font-medium text-gray-900 dark:text-white">Import Reviews</p>
            </a>
            <a href="/reviews/admin/settings" class="p-4 bg-gray-50 dark:bg-gray-700 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-600 transition-colors text-center">
                <i class="fas fa-cog text-2xl text-gray-600 mb-2"></i>
                <p class="text-sm font-medium text-gray-900 dark:text-white">Settings</p>
            </a>
        </div>
    </div>

    <div class="grid grid-cols-1 xl:grid-cols-2 gap-6 mb-6">
        <!-- Rating Distribution -->
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6">
            <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Rating Distribution</h3>
            <div class="space-y-3">
                @foreach (var rating in Model.Analytics.RatingDistribution)
                {
                    <div class="flex items-center gap-3">
                        <span class="text-sm font-medium w-8 text-gray-900 dark:text-white">@rating.Rating <i class="fas fa-star text-yellow-400"></i></span>
                        <div class="flex-1 bg-gray-200 dark:bg-gray-700 rounded-full h-4">
                            <div class="bg-yellow-400 h-4 rounded-full" style="width: @(rating.Percentage)%"></div>
                        </div>
                        <span class="text-sm text-gray-500 dark:text-gray-400 w-20 text-right">@rating.Count (@rating.Percentage%)</span>
                    </div>
                }
            </div>
        </div>

        <!-- Source Distribution -->
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6">
            <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Review Sources</h3>
            <div class="space-y-3">
                @foreach (var source in Model.Analytics.SourceDistribution)
                {
                    var color = source.Source switch
                    {
                        "amazon" => "bg-orange-500",
                        "aliexpress" => "bg-red-500",
                        "email_request" => "bg-blue-500",
                        _ => "bg-gray-500"
                    };
                    var icon = source.Source switch
                    {
                        "amazon" => "fab fa-amazon",
                        "aliexpress" => "fas fa-shopping-bag",
                        "email_request" => "fas fa-envelope",
                        _ => "fas fa-edit"
                    };
                    <div class="flex items-center gap-3">
                        <span class="w-28 text-sm font-medium text-gray-900 dark:text-white capitalize flex items-center gap-2">
                            <i class="@icon text-gray-500"></i> @source.Source.Replace("_", " ")
                        </span>
                        <div class="flex-1 bg-gray-200 dark:bg-gray-700 rounded-full h-4">
                            <div class="@color h-4 rounded-full" style="width: @(source.Percentage)%"></div>
                        </div>
                        <span class="text-sm text-gray-500 dark:text-gray-400 w-16 text-right">@source.Count</span>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Recent Reviews Pending -->
    @if (Model.RecentReviews.Any())
    {
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md">
            <div class="p-6 border-b border-gray-200 dark:border-gray-700">
                <div class="flex justify-between items-center">
                    <h5 class="text-lg font-semibold text-gray-900 dark:text-white">Reviews Pending Moderation</h5>
                    <a href="/reviews/admin/list?status=pending" class="text-purple-600 hover:text-purple-800 dark:text-purple-400 text-sm font-medium">View All</a>
                </div>
            </div>
            <div class="p-6">
                <div class="space-y-4">
                    @foreach (var review in Model.RecentReviews)
                    {
                        <div class="flex items-start gap-4 p-4 bg-gray-50 dark:bg-gray-700 rounded-lg">
                            <div class="flex-1">
                                <div class="flex items-center gap-2 mb-1">
                                    <span class="font-semibold text-gray-900 dark:text-white">@review.ReviewerName</span>
                                    <div class="flex text-yellow-400">
                                        @for (var i = 0; i < 5; i++)
                                        {
                                            <i class="fas fa-star @(i < review.Rating ? "" : "text-gray-300")"></i>
                                        }
                                    </div>
                                    @if (review.IsVerifiedPurchase)
                                    {
                                        <span class="bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-300 text-xs font-medium px-2 py-0.5 rounded">Verified</span>
                                    }
                                </div>
                                @if (!string.IsNullOrEmpty(review.Title))
                                {
                                    <p class="font-medium text-gray-900 dark:text-white">@review.Title</p>
                                }
                                <p class="text-sm text-gray-600 dark:text-gray-400">@review.BodyPreview</p>
                                <p class="text-xs text-gray-400 mt-1">@review.ProductTitle - @review.ReviewDate.ToString("MMM d, yyyy")</p>
                            </div>
                            <div class="flex gap-2">
                                <button onclick="approveReview(@review.Id)" class="px-3 py-1.5 bg-green-100 text-green-700 dark:bg-green-900 dark:text-green-300 rounded-lg hover:bg-green-200 dark:hover:bg-green-800 text-sm">
                                    <i class="fas fa-check"></i>
                                </button>
                                <button onclick="rejectReview(@review.Id)" class="px-3 py-1.5 bg-red-100 text-red-700 dark:bg-red-900 dark:text-red-300 rounded-lg hover:bg-red-200 dark:hover:bg-red-800 text-sm">
                                    <i class="fas fa-times"></i>
                                </button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        async function approveReview(id) {
            try {
                const response = await fetch(`/api/reviews/${id}/approve`, { method: 'POST' });
                if (response.ok) {
                    location.reload();
                }
            } catch (error) {
                console.error('Error approving review:', error);
            }
        }

        async function rejectReview(id) {
            try {
                const response = await fetch(`/api/reviews/${id}/reject`, { method: 'POST' });
                if (response.ok) {
                    location.reload();
                }
            } catch (error) {
                console.error('Error rejecting review:', error);
            }
        }
    </script>
}
