@model Algora.Application.DTOs.InvoicePdfDto
@using Algora.Application.DTOs
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <style>
        body { font-family: Arial, sans-serif; color: #333; margin: 0; padding: 20px; }
        .header { border-bottom: 3px solid #222; margin-bottom: 20px; padding-bottom: 10px; }
        .company { font-size: 22px; font-weight: bold; color: #004aad; }
        .invoice { float: right; text-align: right; }
        .items th, .items td { padding: 8px; border-bottom: 1px solid #ddd; text-align: left; }
        .items th { background: #f5f5f5; }
        .total { font-weight: bold; }
        .clearfix::after { content: ""; display: table; clear: both; }
    </style>
</head>
<body>
    <div class="header clearfix">
        <div class="company">Algora E-Commerce</div>
        <div class="invoice">
            Invoice #: @Model?.InvoiceNumber<br />
            Date: @(Model?.InvoiceDate.ToShortDateString() ?? string.Empty)
        </div>
    </div>

    <h3>Billing To:</h3>
    <p>
        @Model?.CustomerName<br />
        @Model?.CustomerEmail<br />
        @Model?.BillingAddress
    </p>

    <h3>Items:</h3>
    <table class="items" width="100%">
        <thead>
            <tr><th>Product</th><th>Qty</th><th>Price</th><th>Total</th></tr>
        </thead>
        <tbody>
        @foreach (var item in Model?.Lines ?? System.Array.Empty<InvoiceLineDto>())
        {
            <tr>
                <td>@item.ProductName</td>
                <td>@item.Quantity</td>
                <td>@item.Price.ToString("C")</td>
                <td>@item.Total.ToString("C")</td>
            </tr>
        }
        </tbody>
    </table>

    <h3 style="text-align:right;">
        Subtotal: @(Model?.Subtotal.ToString("C") ?? string.Empty)<br/>
        Tax: @(Model?.Tax.ToString("C") ?? string.Empty)<br/>
        <span class="total">Total: @(Model?.Total.ToString("C") ?? string.Empty)</span>
    </h3>
</body>
</html>
