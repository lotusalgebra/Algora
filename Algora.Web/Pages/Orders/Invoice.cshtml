@page "/orders/invoice/{id:long}"
@model Algora.Web.Pages.Orders.InvoiceModel
@{
    ViewData["Title"] = Model.Order != null ? $"Invoice {Model.Order.Name}" : "Invoice";
}

<div class="w-full px-6 py-6 mx-auto">
    <!-- Header Actions -->
    <div class="flex flex-wrap items-center justify-between mb-6">
        <div>
            <nav class="text-sm mb-2">
                <ol class="flex items-center space-x-2">
                    <li>
                        <a href="/orders" class="text-slate-500 hover:text-slate-700 dark:text-gray-400 dark:hover:text-white">
                            <i class="fas fa-shopping-cart me-1"></i> Orders
                        </a>
                    </li>
                    <li class="text-slate-400 dark:text-gray-500">/</li>
                    @if (Model.Order != null)
                    {
                        <li>
                            <a href="/orders/@Model.Order.Id" class="text-slate-500 hover:text-slate-700 dark:text-gray-400 dark:hover:text-white">
                                @Model.Order.Name
                            </a>
                        </li>
                        <li class="text-slate-400 dark:text-gray-500">/</li>
                    }
                    <li class="text-slate-700 font-medium dark:text-white">Invoice</li>
                </ol>
            </nav>
            <h5 class="mb-0 font-bold dark:text-white">Invoice</h5>
        </div>
        <div class="flex items-center gap-2">
            @if (Model.Order != null)
            {
                <a href="/orders/invoice/download/@Model.Order.Id" class="inline-flex items-center justify-center px-4 py-2 text-sm font-semibold text-white bg-gradient-to-tl from-purple-700 to-pink-500 border-0 rounded-lg shadow-soft-md hover:scale-102 hover:shadow-soft-xs active:opacity-85 transition-all">
                    <i class="fas fa-download me-2"></i>
                    Download PDF
                </a>
                <button onclick="window.print()" class="inline-flex items-center justify-center px-4 py-2 text-sm font-medium text-slate-700 bg-white border border-slate-300 rounded-lg hover:bg-slate-50 focus:outline-none dark:bg-gray-800 dark:text-white dark:border-gray-600 dark:hover:bg-gray-700">
                    <i class="fas fa-print me-2 text-slate-400"></i>
                    Print
                </button>
            }
            <a href="/orders" class="inline-flex items-center justify-center px-4 py-2 text-sm font-medium text-slate-700 bg-white border border-slate-300 rounded-lg hover:bg-slate-50 focus:outline-none dark:bg-gray-800 dark:text-white dark:border-gray-600 dark:hover:bg-gray-700">
                <i class="fas fa-arrow-left me-2 text-slate-400"></i>
                Back
            </a>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="p-4 mb-6 text-sm text-red-700 bg-red-100 rounded-lg dark:bg-red-200 dark:text-red-800" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i>
            @Model.ErrorMessage
        </div>
    }
    else if (Model.Order != null)
    {
        var customerName = Model.Order.Customer != null
            ? $"{Model.Order.Customer.FirstName} {Model.Order.Customer.LastName}".Trim()
            : (Model.Order.Email ?? "Guest Customer");

        var statusClass = Model.Order.FinancialStatus?.ToLower() switch
        {
            "paid" => "from-green-600 to-lime-400",
            "pending" => "from-yellow-500 to-yellow-300",
            "refunded" => "from-red-600 to-rose-400",
            "cancelled" or "canceled" => "from-slate-600 to-slate-400",
            _ => "from-blue-600 to-cyan-400"
        };

        <!-- Invoice Card -->
        <div class="flex flex-wrap -mx-3">
            <div class="w-full max-w-full px-3 mx-auto lg:w-10/12 xl:w-8/12">
                <div class="relative flex flex-col min-w-0 break-words bg-white border-0 shadow-soft-xl rounded-2xl bg-clip-border dark:bg-gray-950 dark:shadow-soft-dark-xl print:shadow-none">

                    <!-- Invoice Header -->
                    <div class="p-8 border-b border-gray-200 dark:border-white/10">
                        <div class="flex flex-wrap justify-between items-start">
                            <div class="mb-4 lg:mb-0">
                                <h2 class="text-3xl font-bold bg-gradient-to-tl from-purple-700 to-pink-500 bg-clip-text text-transparent mb-2">Algora</h2>
                                <p class="text-sm text-slate-500 dark:text-gray-400">E-Commerce Solutions</p>
                                <p class="text-sm text-slate-500 dark:text-gray-400">Your trusted business partner</p>
                            </div>
                            <div class="text-right">
                                <h3 class="text-2xl font-bold text-slate-700 dark:text-white mb-2">INVOICE</h3>
                                <p class="text-lg font-semibold text-purple-600 mb-1">@Model.Order.Name</p>
                                <p class="text-sm text-slate-500 dark:text-gray-400">
                                    Date: @Model.Order.CreatedAt.ToString("MMMM dd, yyyy")
                                </p>
                                <span class="inline-block mt-2 bg-gradient-to-tl @statusClass px-3 py-1.5 text-xs rounded-lg font-bold uppercase text-white">
                                    @(Model.Order.FinancialStatus ?? "Unknown")
                                </span>
                            </div>
                        </div>
                    </div>

                    <!-- Billing & Shipping -->
                    <div class="p-8 border-b border-gray-200 dark:border-white/10">
                        <div class="flex flex-wrap -mx-4">
                            <div class="w-full px-4 mb-6 lg:w-1/2 lg:mb-0">
                                <h6 class="text-xs font-bold text-slate-400 uppercase tracking-wider mb-3">Bill To</h6>
                                <h5 class="text-base font-semibold text-slate-700 dark:text-white mb-1">@customerName</h5>
                                <p class="text-sm text-slate-500 dark:text-gray-400 mb-1">@(Model.Order.Email ?? Model.Order.Customer?.Email ?? "No email")</p>
                                @if (Model.Order.BillingAddress != null)
                                {
                                    @if (!string.IsNullOrEmpty(Model.Order.BillingAddress.Address1))
                                    {
                                        <p class="text-sm text-slate-500 dark:text-gray-400">@Model.Order.BillingAddress.Address1</p>
                                    }
                                    @if (!string.IsNullOrEmpty(Model.Order.BillingAddress.Address2))
                                    {
                                        <p class="text-sm text-slate-500 dark:text-gray-400">@Model.Order.BillingAddress.Address2</p>
                                    }
                                    <p class="text-sm text-slate-500 dark:text-gray-400">
                                        @Model.Order.BillingAddress.City@(string.IsNullOrEmpty(Model.Order.BillingAddress.Province) ? "" : $", {Model.Order.BillingAddress.Province}") @Model.Order.BillingAddress.Zip
                                    </p>
                                    @if (!string.IsNullOrEmpty(Model.Order.BillingAddress.Country))
                                    {
                                        <p class="text-sm text-slate-500 dark:text-gray-400">@Model.Order.BillingAddress.Country</p>
                                    }
                                }
                            </div>
                            @if (Model.Order.ShippingAddress != null)
                            {
                                <div class="w-full px-4 lg:w-1/2">
                                    <h6 class="text-xs font-bold text-slate-400 uppercase tracking-wider mb-3">Ship To</h6>
                                    @if (!string.IsNullOrEmpty(Model.Order.ShippingAddress.Name))
                                    {
                                        <h5 class="text-base font-semibold text-slate-700 dark:text-white mb-1">@Model.Order.ShippingAddress.Name</h5>
                                    }
                                    @if (!string.IsNullOrEmpty(Model.Order.ShippingAddress.Address1))
                                    {
                                        <p class="text-sm text-slate-500 dark:text-gray-400">@Model.Order.ShippingAddress.Address1</p>
                                    }
                                    @if (!string.IsNullOrEmpty(Model.Order.ShippingAddress.Address2))
                                    {
                                        <p class="text-sm text-slate-500 dark:text-gray-400">@Model.Order.ShippingAddress.Address2</p>
                                    }
                                    <p class="text-sm text-slate-500 dark:text-gray-400">
                                        @Model.Order.ShippingAddress.City@(string.IsNullOrEmpty(Model.Order.ShippingAddress.Province) ? "" : $", {Model.Order.ShippingAddress.Province}") @Model.Order.ShippingAddress.Zip
                                    </p>
                                    @if (!string.IsNullOrEmpty(Model.Order.ShippingAddress.Country))
                                    {
                                        <p class="text-sm text-slate-500 dark:text-gray-400">@Model.Order.ShippingAddress.Country</p>
                                    }
                                </div>
                            }
                        </div>
                    </div>

                    <!-- Line Items -->
                    <div class="p-8 pb-0">
                        <div class="overflow-x-auto">
                            <table class="w-full mb-0">
                                <thead>
                                    <tr class="bg-gradient-to-tl from-purple-700 to-pink-500">
                                        <th class="px-4 py-3 text-left text-xs font-bold text-white uppercase tracking-wider rounded-l-lg">Product</th>
                                        <th class="px-4 py-3 text-center text-xs font-bold text-white uppercase tracking-wider">Qty</th>
                                        <th class="px-4 py-3 text-right text-xs font-bold text-white uppercase tracking-wider">Unit Price</th>
                                        <th class="px-4 py-3 text-right text-xs font-bold text-white uppercase tracking-wider rounded-r-lg">Total</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model.Order.LineItems.Any())
                                    {
                                        var isEven = false;
                                        foreach (var item in Model.Order.LineItems)
                                        {
                                            <tr class="@(isEven ? "bg-slate-50 dark:bg-gray-900" : "")">
                                                <td class="px-4 py-4 text-sm font-semibold text-slate-700 dark:text-white">@item.Title</td>
                                                <td class="px-4 py-4 text-sm text-center text-slate-600 dark:text-gray-300">@item.Quantity</td>
                                                <td class="px-4 py-4 text-sm text-right text-slate-600 dark:text-gray-300">@item.Price.ToString("C")</td>
                                                <td class="px-4 py-4 text-sm text-right font-semibold text-slate-700 dark:text-white">@((item.Price * item.Quantity).ToString("C"))</td>
                                            </tr>
                                            isEven = !isEven;
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="4" class="px-4 py-8 text-center text-slate-500 dark:text-gray-400">
                                                No items in this order
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>

                    <!-- Totals -->
                    <div class="p-8">
                        <div class="flex justify-end">
                            <div class="w-full max-w-xs">
                                <div class="bg-slate-50 dark:bg-gray-900 rounded-xl p-4">
                                    <div class="flex justify-between py-2 border-b border-slate-200 dark:border-gray-700">
                                        <span class="text-sm text-slate-500 dark:text-gray-400">Subtotal</span>
                                        <span class="text-sm font-semibold text-slate-700 dark:text-white">@Model.Order.LineItems.Sum(i => i.Price * i.Quantity).ToString("C")</span>
                                    </div>
                                    <div class="flex justify-between py-3 mt-2">
                                        <span class="text-base font-bold text-slate-700 dark:text-white">Total</span>
                                        <span class="text-lg font-bold text-slate-700 dark:text-white">@Model.Order.TotalPrice.ToString("C")</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Footer -->
                    <div class="p-8 border-t border-gray-200 dark:border-white/10 text-center">
                        <h5 class="text-lg font-bold text-slate-700 dark:text-white mb-2">Thank You For Your Business!</h5>
                        <p class="text-sm text-slate-500 dark:text-gray-400 mb-4">
                            If you have any questions about this invoice, please contact us.
                        </p>
                        <div class="flex justify-center gap-6 text-xs text-slate-400 dark:text-gray-500">
                            <span><i class="fas fa-envelope me-1"></i> support@algora.com</span>
                            <span><i class="fas fa-globe me-1"></i> www.algora.com</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<style>
    @@media print {
        /* Hide navigation and actions when printing */
        nav, .flex.items-center.gap-2, aside, header, footer {
            display: none !important;
        }

        body {
            background: white !important;
        }

        .shadow-soft-xl, .shadow-soft-dark-xl {
            box-shadow: none !important;
        }

        .dark\:bg-gray-950 {
            background: white !important;
        }

        .dark\:text-white {
            color: #344767 !important;
        }
    }
</style>
