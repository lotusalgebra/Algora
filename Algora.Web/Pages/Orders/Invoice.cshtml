@page "/orders/invoice/{id:long}"
@model Algora.Web.Pages.Orders.InvoiceModel
@{
    ViewData["Title"] = Model.Order != null ? $"Invoice {Model.Order.Name}" : "Invoice";
}

<div class="p-4">
    <!-- Header Actions -->
    <div class="flex flex-wrap items-center justify-between mb-6">
        <div>
            <nav class="flex mb-2" aria-label="Breadcrumb">
                <ol class="inline-flex items-center space-x-1 md:space-x-3">
                    <li class="inline-flex items-center">
                        <a href="/orders" class="inline-flex items-center text-sm font-medium text-gray-500 hover:text-purple-600 dark:text-gray-400 dark:hover:text-white">
                            <i class="fas fa-shopping-cart me-2"></i> Orders
                        </a>
                    </li>
                    @if (Model.Order != null)
                    {
                        <li>
                            <div class="flex items-center">
                                <i class="fas fa-chevron-right text-gray-400 text-xs mx-2"></i>
                                <a href="/orders/@Model.Order.Id" class="text-sm font-medium text-gray-500 hover:text-purple-600 dark:text-gray-400 dark:hover:text-white">
                                    @Model.Order.Name
                                </a>
                            </div>
                        </li>
                    }
                    <li>
                        <div class="flex items-center">
                            <i class="fas fa-chevron-right text-gray-400 text-xs mx-2"></i>
                            <span class="text-sm font-medium text-gray-700 dark:text-white">Invoice</span>
                        </div>
                    </li>
                </ol>
            </nav>
            <h1 class="text-xl font-bold text-gray-900 dark:text-white">Invoice</h1>
        </div>
        <div class="flex items-center gap-2">
            @if (Model.Order != null)
            {
                <a href="/orders/invoice/download/@Model.Order.Id" class="inline-flex items-center px-4 py-2 text-sm font-medium text-white bg-gradient-to-br from-purple-600 to-pink-500 rounded-lg hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-purple-300 dark:focus:ring-purple-800">
                    <i class="fas fa-download me-2"></i>
                    Download PDF
                </a>
                <button onclick="window.print()" class="inline-flex items-center px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-100 dark:bg-gray-800 dark:text-white dark:border-gray-600 dark:hover:bg-gray-700">
                    <i class="fas fa-print me-2 text-gray-400"></i>
                    Print
                </button>
            }
            <a href="/orders" class="inline-flex items-center px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-100 dark:bg-gray-800 dark:text-white dark:border-gray-600 dark:hover:bg-gray-700">
                <i class="fas fa-arrow-left me-2 text-gray-400"></i>
                Back
            </a>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="flex items-center p-4 mb-6 text-sm text-red-800 rounded-lg bg-red-50 dark:bg-gray-800 dark:text-red-400" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i>
            @Model.ErrorMessage
        </div>
    }
    else if (Model.Order != null)
    {
        var customerName = Model.Order.Customer != null
            ? $"{Model.Order.Customer.FirstName} {Model.Order.Customer.LastName}".Trim()
            : (Model.Order.Email ?? "Guest Customer");

        var statusBadgeClass = Model.Order.FinancialStatus?.ToLower() switch
        {
            "paid" => "bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-300",
            "pending" => "bg-yellow-100 text-yellow-800 dark:bg-yellow-900 dark:text-yellow-300",
            "refunded" => "bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-300",
            "cancelled" or "canceled" => "bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-300",
            _ => "bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-300"
        };

        <!-- Invoice Card -->
        <div class="max-w-4xl mx-auto">
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md print:shadow-none">

                <!-- Invoice Header -->
                <div class="p-8 border-b border-gray-200 dark:border-gray-700">
                    <div class="flex flex-wrap justify-between items-start">
                        <div class="mb-4 lg:mb-0">
                            <h2 class="text-3xl font-bold bg-gradient-to-br from-purple-600 to-pink-500 bg-clip-text text-transparent mb-2">Algora</h2>
                            <p class="text-sm text-gray-500 dark:text-gray-400">E-Commerce Solutions</p>
                            <p class="text-sm text-gray-500 dark:text-gray-400">Your trusted business partner</p>
                        </div>
                        <div class="text-right">
                            <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-2">INVOICE</h3>
                            <p class="text-lg font-semibold text-purple-600 mb-1">@Model.Order.Name</p>
                            <p class="text-sm text-gray-500 dark:text-gray-400">
                                Date: @Model.Order.CreatedAt.ToString("MMMM dd, yyyy")
                            </p>
                            <span class="inline-block mt-2 @statusBadgeClass px-3 py-1.5 text-xs font-bold rounded-lg uppercase">
                                @(Model.Order.FinancialStatus ?? "Unknown")
                            </span>
                        </div>
                    </div>
                </div>

                <!-- Billing & Shipping -->
                <div class="p-8 border-b border-gray-200 dark:border-gray-700">
                    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
                        <div>
                            <h6 class="text-xs font-bold text-gray-400 uppercase tracking-wider mb-3">Bill To</h6>
                            <h5 class="text-base font-semibold text-gray-900 dark:text-white mb-1">@customerName</h5>
                            <p class="text-sm text-gray-500 dark:text-gray-400 mb-1">@(Model.Order.Email ?? Model.Order.Customer?.Email ?? "No email")</p>
                            @if (Model.Order.BillingAddress != null)
                            {
                                @if (!string.IsNullOrEmpty(Model.Order.BillingAddress.Address1))
                                {
                                    <p class="text-sm text-gray-500 dark:text-gray-400">@Model.Order.BillingAddress.Address1</p>
                                }
                                @if (!string.IsNullOrEmpty(Model.Order.BillingAddress.Address2))
                                {
                                    <p class="text-sm text-gray-500 dark:text-gray-400">@Model.Order.BillingAddress.Address2</p>
                                }
                                <p class="text-sm text-gray-500 dark:text-gray-400">
                                    @Model.Order.BillingAddress.City@(string.IsNullOrEmpty(Model.Order.BillingAddress.Province) ? "" : $", {Model.Order.BillingAddress.Province}") @Model.Order.BillingAddress.Zip
                                </p>
                                @if (!string.IsNullOrEmpty(Model.Order.BillingAddress.Country))
                                {
                                    <p class="text-sm text-gray-500 dark:text-gray-400">@Model.Order.BillingAddress.Country</p>
                                }
                            }
                        </div>
                        @if (Model.Order.ShippingAddress != null)
                        {
                            <div>
                                <h6 class="text-xs font-bold text-gray-400 uppercase tracking-wider mb-3">Ship To</h6>
                                @if (!string.IsNullOrEmpty(Model.Order.ShippingAddress.Name))
                                {
                                    <h5 class="text-base font-semibold text-gray-900 dark:text-white mb-1">@Model.Order.ShippingAddress.Name</h5>
                                }
                                @if (!string.IsNullOrEmpty(Model.Order.ShippingAddress.Address1))
                                {
                                    <p class="text-sm text-gray-500 dark:text-gray-400">@Model.Order.ShippingAddress.Address1</p>
                                }
                                @if (!string.IsNullOrEmpty(Model.Order.ShippingAddress.Address2))
                                {
                                    <p class="text-sm text-gray-500 dark:text-gray-400">@Model.Order.ShippingAddress.Address2</p>
                                }
                                <p class="text-sm text-gray-500 dark:text-gray-400">
                                    @Model.Order.ShippingAddress.City@(string.IsNullOrEmpty(Model.Order.ShippingAddress.Province) ? "" : $", {Model.Order.ShippingAddress.Province}") @Model.Order.ShippingAddress.Zip
                                </p>
                                @if (!string.IsNullOrEmpty(Model.Order.ShippingAddress.Country))
                                {
                                    <p class="text-sm text-gray-500 dark:text-gray-400">@Model.Order.ShippingAddress.Country</p>
                                }
                            </div>
                        }
                    </div>
                </div>

                <!-- Line Items -->
                <div class="p-8 pb-0">
                    <div class="overflow-x-auto">
                        <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
                            <thead class="text-xs text-white uppercase bg-gradient-to-br from-purple-600 to-pink-500">
                                <tr>
                                    <th scope="col" class="px-4 py-3 rounded-l-lg">Product</th>
                                    <th scope="col" class="px-4 py-3 text-center">Qty</th>
                                    <th scope="col" class="px-4 py-3 text-right">Unit Price</th>
                                    <th scope="col" class="px-4 py-3 text-right rounded-r-lg">Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Order.LineItems.Any())
                                {
                                    var isEven = false;
                                    foreach (var item in Model.Order.LineItems)
                                    {
                                        <tr class="@(isEven ? "bg-gray-50 dark:bg-gray-700" : "bg-white dark:bg-gray-800")">
                                            <td class="px-4 py-4 font-semibold text-gray-900 dark:text-white">@item.Title</td>
                                            <td class="px-4 py-4 text-center">@item.Quantity</td>
                                            <td class="px-4 py-4 text-right">@item.Price.ToString("C")</td>
                                            <td class="px-4 py-4 text-right font-semibold text-gray-900 dark:text-white">@((item.Price * item.Quantity).ToString("C"))</td>
                                        </tr>
                                        isEven = !isEven;
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="4" class="px-4 py-8 text-center text-gray-500 dark:text-gray-400">
                                            No items in this order
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

                <!-- Totals -->
                <div class="p-8">
                    <div class="flex justify-end">
                        <div class="w-full max-w-xs">
                            <div class="bg-gray-50 dark:bg-gray-700 rounded-lg p-4">
                                <div class="flex justify-between py-2 border-b border-gray-200 dark:border-gray-600">
                                    <span class="text-sm text-gray-500 dark:text-gray-400">Subtotal</span>
                                    <span class="text-sm font-semibold text-gray-900 dark:text-white">@Model.Order.LineItems.Sum(i => i.Price * i.Quantity).ToString("C")</span>
                                </div>
                                <div class="flex justify-between py-3 mt-2">
                                    <span class="text-base font-bold text-gray-900 dark:text-white">Total</span>
                                    <span class="text-lg font-bold text-gray-900 dark:text-white">@Model.Order.TotalPrice.ToString("C")</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Footer -->
                <div class="p-8 border-t border-gray-200 dark:border-gray-700 text-center">
                    <h5 class="text-lg font-bold text-gray-900 dark:text-white mb-2">Thank You For Your Business!</h5>
                    <p class="text-sm text-gray-500 dark:text-gray-400 mb-4">
                        If you have any questions about this invoice, please contact us.
                    </p>
                    <div class="flex justify-center gap-6 text-xs text-gray-400 dark:text-gray-500">
                        <span><i class="fas fa-envelope me-1"></i> support@algora.com</span>
                        <span><i class="fas fa-globe me-1"></i> www.algora.com</span>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<style>
    @@media print {
        /* Hide navigation and actions when printing */
        nav, .flex.items-center.gap-2, aside, header, footer {
            display: none !important;
        }

        body {
            background: white !important;
        }

        .shadow-md {
            box-shadow: none !important;
        }

        .dark\:bg-gray-800 {
            background: white !important;
        }

        .dark\:text-white {
            color: #1f2937 !important;
        }
    }
</style>
