@page "/orders/edit/{id:long}"
@model Algora.Web.Pages.Orders.EditModel
@{
    ViewData["Title"] = "Edit Order";
}

<div class="w-full px-6 py-6 mx-auto">
    <!-- Breadcrumb -->
    <nav class="mb-4">
        <ol class="flex flex-wrap pt-1 mr-12 bg-transparent rounded-lg sm:mr-16">
            <li class="leading-normal text-sm">
                <a class="text-slate-500 dark:text-white/60" href="/orders">Orders</a>
            </li>
            <li class="text-sm pl-2 capitalize leading-normal before:float-left before:pr-2 before:content-['/'] text-slate-700 dark:text-white" aria-current="page">
                Edit Order
            </li>
        </ol>
    </nav>

    <!-- Header -->
    <div class="flex flex-wrap -mx-3 mb-6">
        <div class="flex-none w-full max-w-full px-3">
            <div class="flex items-center justify-between">
                <div>
                    <h5 class="mb-0 font-bold dark:text-white">Edit Order @Model.Order.Name</h5>
                    <p class="mb-0 text-sm leading-normal dark:text-white dark:opacity-60">Update order details and shipping information</p>
                </div>
                <a href="/orders" class="inline-flex items-center px-4 py-2 text-sm font-medium text-slate-700 bg-white border border-slate-300 rounded-lg hover:bg-slate-50 dark:bg-gray-800 dark:text-white dark:border-gray-600 dark:hover:bg-gray-700">
                    <i class="fas fa-arrow-left me-2"></i> Back to Orders
                </a>
            </div>
        </div>
    </div>

    <!-- Error Message -->
    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="mb-6 p-4 text-sm text-red-700 bg-red-100 rounded-lg dark:bg-red-200 dark:text-red-800" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i>
            @Model.ErrorMessage
        </div>
    }

    <!-- Form -->
    <form method="post">
        <input type="hidden" asp-for="Order.Id" />
        <input type="hidden" asp-for="Order.Name" />
        <input type="hidden" asp-for="Order.FinancialStatus" />
        <input type="hidden" asp-for="Order.FulfillmentStatus" />

        <div class="flex flex-wrap -mx-3">
            <!-- Left Column - Order Details -->
            <div class="w-full max-w-full px-3 lg:w-8/12 lg:flex-none">
                <!-- Order Information Card -->
                <div class="relative flex flex-col min-w-0 mb-6 break-words bg-white border-0 shadow-soft-xl rounded-2xl bg-clip-border dark:bg-gray-950 dark:shadow-soft-dark-xl">
                    <div class="p-6 pb-0 mb-0 border-b-0 rounded-t-2xl">
                        <div class="flex items-center">
                            <i class="fas fa-file-invoice text-cyan-500 me-3"></i>
                            <h6 class="mb-0 dark:text-white">Order Information</h6>
                        </div>
                    </div>
                    <div class="flex-auto p-6">
                        <div class="flex flex-wrap -mx-3">
                            <div class="w-full max-w-full px-3 sm:w-6/12 mb-4">
                                <label class="mb-2 ml-1 font-bold text-xs text-slate-700 dark:text-white/80">Email</label>
                                <input type="email" asp-for="Order.Email"
                                       class="focus:shadow-soft-primary-outline dark:bg-gray-950 dark:placeholder:text-white/80 dark:text-white/80 text-sm leading-5.6 ease-soft block w-full appearance-none rounded-lg border border-solid border-gray-300 bg-white bg-clip-padding px-3 py-2 font-normal text-gray-700 outline-none transition-all placeholder:text-gray-500 focus:border-fuchsia-300 focus:outline-none"
                                       placeholder="customer@example.com" />
                                <span asp-validation-for="Order.Email" class="text-red-500 text-xs"></span>
                            </div>
                            <div class="w-full max-w-full px-3 sm:w-6/12 mb-4">
                                <label class="mb-2 ml-1 font-bold text-xs text-slate-700 dark:text-white/80">Tags <small class="font-normal text-slate-400">(comma-separated)</small></label>
                                <input type="text" asp-for="Order.Tags"
                                       class="focus:shadow-soft-primary-outline dark:bg-gray-950 dark:placeholder:text-white/80 dark:text-white/80 text-sm leading-5.6 ease-soft block w-full appearance-none rounded-lg border border-solid border-gray-300 bg-white bg-clip-padding px-3 py-2 font-normal text-gray-700 outline-none transition-all placeholder:text-gray-500 focus:border-fuchsia-300 focus:outline-none"
                                       placeholder="e.g. vip, rush, wholesale" />
                            </div>
                            <div class="w-full max-w-full px-3 mb-4">
                                <label class="mb-2 ml-1 font-bold text-xs text-slate-700 dark:text-white/80">Order Notes</label>
                                <textarea asp-for="Order.Note" rows="3"
                                          class="focus:shadow-soft-primary-outline dark:bg-gray-950 dark:placeholder:text-white/80 dark:text-white/80 text-sm leading-5.6 ease-soft block w-full appearance-none rounded-lg border border-solid border-gray-300 bg-white bg-clip-padding px-3 py-2 font-normal text-gray-700 outline-none transition-all placeholder:text-gray-500 focus:border-fuchsia-300 focus:outline-none"
                                          placeholder="Internal notes about this order..."></textarea>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Shipping Address Card -->
                <div class="relative flex flex-col min-w-0 mb-6 break-words bg-white border-0 shadow-soft-xl rounded-2xl bg-clip-border dark:bg-gray-950 dark:shadow-soft-dark-xl">
                    <div class="p-6 pb-0 mb-0 border-b-0 rounded-t-2xl">
                        <div class="flex items-center">
                            <i class="fas fa-truck text-cyan-500 me-3"></i>
                            <h6 class="mb-0 dark:text-white">Shipping Address</h6>
                        </div>
                    </div>
                    <div class="flex-auto p-6">
                        <div class="flex flex-wrap -mx-3">
                            <div class="w-full max-w-full px-3 mb-4">
                                <label class="mb-2 ml-1 font-bold text-xs text-slate-700 dark:text-white/80">Full Name</label>
                                <input type="text" asp-for="Order.ShippingName"
                                       class="focus:shadow-soft-primary-outline dark:bg-gray-950 dark:placeholder:text-white/80 dark:text-white/80 text-sm leading-5.6 ease-soft block w-full appearance-none rounded-lg border border-solid border-gray-300 bg-white bg-clip-padding px-3 py-2 font-normal text-gray-700 outline-none transition-all placeholder:text-gray-500 focus:border-fuchsia-300 focus:outline-none"
                                       placeholder="John Doe" />
                            </div>
                            <div class="w-full max-w-full px-3 mb-4">
                                <label class="mb-2 ml-1 font-bold text-xs text-slate-700 dark:text-white/80">Address Line 1</label>
                                <input type="text" asp-for="Order.ShippingAddress1"
                                       class="focus:shadow-soft-primary-outline dark:bg-gray-950 dark:placeholder:text-white/80 dark:text-white/80 text-sm leading-5.6 ease-soft block w-full appearance-none rounded-lg border border-solid border-gray-300 bg-white bg-clip-padding px-3 py-2 font-normal text-gray-700 outline-none transition-all placeholder:text-gray-500 focus:border-fuchsia-300 focus:outline-none"
                                       placeholder="123 Main Street" />
                            </div>
                            <div class="w-full max-w-full px-3 mb-4">
                                <label class="mb-2 ml-1 font-bold text-xs text-slate-700 dark:text-white/80">Address Line 2</label>
                                <input type="text" asp-for="Order.ShippingAddress2"
                                       class="focus:shadow-soft-primary-outline dark:bg-gray-950 dark:placeholder:text-white/80 dark:text-white/80 text-sm leading-5.6 ease-soft block w-full appearance-none rounded-lg border border-solid border-gray-300 bg-white bg-clip-padding px-3 py-2 font-normal text-gray-700 outline-none transition-all placeholder:text-gray-500 focus:border-fuchsia-300 focus:outline-none"
                                       placeholder="Apt, Suite, Unit, etc." />
                            </div>
                            <div class="w-full max-w-full px-3 sm:w-6/12 mb-4">
                                <label class="mb-2 ml-1 font-bold text-xs text-slate-700 dark:text-white/80">City</label>
                                <input type="text" asp-for="Order.ShippingCity"
                                       class="focus:shadow-soft-primary-outline dark:bg-gray-950 dark:placeholder:text-white/80 dark:text-white/80 text-sm leading-5.6 ease-soft block w-full appearance-none rounded-lg border border-solid border-gray-300 bg-white bg-clip-padding px-3 py-2 font-normal text-gray-700 outline-none transition-all placeholder:text-gray-500 focus:border-fuchsia-300 focus:outline-none"
                                       placeholder="New York" />
                            </div>
                            <div class="w-full max-w-full px-3 sm:w-6/12 mb-4">
                                <label class="mb-2 ml-1 font-bold text-xs text-slate-700 dark:text-white/80">State/Province</label>
                                <input type="text" asp-for="Order.ShippingProvince"
                                       class="focus:shadow-soft-primary-outline dark:bg-gray-950 dark:placeholder:text-white/80 dark:text-white/80 text-sm leading-5.6 ease-soft block w-full appearance-none rounded-lg border border-solid border-gray-300 bg-white bg-clip-padding px-3 py-2 font-normal text-gray-700 outline-none transition-all placeholder:text-gray-500 focus:border-fuchsia-300 focus:outline-none"
                                       placeholder="NY" />
                            </div>
                            <div class="w-full max-w-full px-3 sm:w-6/12 mb-4">
                                <label class="mb-2 ml-1 font-bold text-xs text-slate-700 dark:text-white/80">Country</label>
                                <input type="text" asp-for="Order.ShippingCountry"
                                       class="focus:shadow-soft-primary-outline dark:bg-gray-950 dark:placeholder:text-white/80 dark:text-white/80 text-sm leading-5.6 ease-soft block w-full appearance-none rounded-lg border border-solid border-gray-300 bg-white bg-clip-padding px-3 py-2 font-normal text-gray-700 outline-none transition-all placeholder:text-gray-500 focus:border-fuchsia-300 focus:outline-none"
                                       placeholder="United States" />
                            </div>
                            <div class="w-full max-w-full px-3 sm:w-6/12 mb-4">
                                <label class="mb-2 ml-1 font-bold text-xs text-slate-700 dark:text-white/80">ZIP/Postal Code</label>
                                <input type="text" asp-for="Order.ShippingZip"
                                       class="focus:shadow-soft-primary-outline dark:bg-gray-950 dark:placeholder:text-white/80 dark:text-white/80 text-sm leading-5.6 ease-soft block w-full appearance-none rounded-lg border border-solid border-gray-300 bg-white bg-clip-padding px-3 py-2 font-normal text-gray-700 outline-none transition-all placeholder:text-gray-500 focus:border-fuchsia-300 focus:outline-none"
                                       placeholder="10001" />
                            </div>
                            <div class="w-full max-w-full px-3 mb-4">
                                <label class="mb-2 ml-1 font-bold text-xs text-slate-700 dark:text-white/80">Phone</label>
                                <input type="tel" asp-for="Order.ShippingPhone"
                                       class="focus:shadow-soft-primary-outline dark:bg-gray-950 dark:placeholder:text-white/80 dark:text-white/80 text-sm leading-5.6 ease-soft block w-full appearance-none rounded-lg border border-solid border-gray-300 bg-white bg-clip-padding px-3 py-2 font-normal text-gray-700 outline-none transition-all placeholder:text-gray-500 focus:border-fuchsia-300 focus:outline-none"
                                       placeholder="+1 (555) 123-4567" />
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Line Items (Read-only) -->
                @if (Model.OriginalOrder?.LineItems?.Any() == true)
                {
                    <div class="relative flex flex-col min-w-0 mb-6 break-words bg-white border-0 shadow-soft-xl rounded-2xl bg-clip-border dark:bg-gray-950 dark:shadow-soft-dark-xl">
                        <div class="p-6 pb-0 mb-0 border-b-0 rounded-t-2xl">
                            <div class="flex items-center">
                                <i class="fas fa-shopping-cart text-cyan-500 me-3"></i>
                                <h6 class="mb-0 dark:text-white">Order Items</h6>
                                <span class="ml-2 px-2 py-0.5 text-xs font-medium rounded bg-slate-100 text-slate-500 dark:bg-gray-800 dark:text-white/60">Read-only</span>
                            </div>
                        </div>
                        <div class="flex-auto p-6">
                            <div class="space-y-3">
                                @foreach (var item in Model.OriginalOrder.LineItems)
                                {
                                    <div class="flex items-center justify-between p-3 bg-slate-50 dark:bg-gray-900 rounded-lg">
                                        <div>
                                            <p class="mb-0 font-semibold text-sm dark:text-white">@item.Title</p>
                                            <p class="mb-0 text-xs text-slate-500 dark:text-white/60">Qty: @item.Quantity</p>
                                        </div>
                                        <span class="font-bold dark:text-white">@item.Price.ToString("C")</span>
                                    </div>
                                }
                            </div>
                            <div class="flex justify-end mt-4 pt-4 border-t border-slate-200 dark:border-gray-700">
                                <div class="text-right">
                                    <span class="text-sm text-slate-500 dark:text-white/60">Total:</span>
                                    <span class="ml-2 text-lg font-bold dark:text-white">@Model.OriginalOrder.TotalPrice.ToString("C")</span>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <!-- Right Column - Actions & Status -->
            <div class="w-full max-w-full px-3 lg:w-4/12 lg:flex-none">
                <!-- Actions Card -->
                <div class="relative flex flex-col min-w-0 mb-6 break-words bg-white border-0 shadow-soft-xl rounded-2xl bg-clip-border dark:bg-gray-950 dark:shadow-soft-dark-xl sticky top-6">
                    <div class="p-6 pb-0 mb-0 border-b-0 rounded-t-2xl">
                        <h6 class="mb-0 dark:text-white">Actions</h6>
                    </div>
                    <div class="flex-auto p-6">
                        <div class="flex flex-col gap-3">
                            <button type="submit" class="inline-flex items-center justify-center w-full px-6 py-3 text-sm font-bold text-white uppercase transition-all border-0 rounded-lg cursor-pointer hover:scale-102 active:opacity-85 bg-gradient-to-tl from-purple-700 to-pink-500 shadow-soft-md bg-150 bg-x-25">
                                <i class="fas fa-save me-2"></i> Update Order
                            </button>
                            <a href="/orders/delete/@Model.Order.Id" class="inline-flex items-center justify-center w-full px-6 py-3 text-sm font-bold text-center uppercase transition-all border border-solid rounded-lg cursor-pointer border-red-500 text-red-500 hover:bg-red-50 dark:hover:bg-red-900/20">
                                <i class="fas fa-times-circle me-2"></i> Close Order
                            </a>
                            <a href="/orders" class="inline-flex items-center justify-center w-full px-6 py-3 text-sm font-bold text-center uppercase transition-all border border-solid rounded-lg cursor-pointer border-slate-200 text-slate-500 hover:bg-slate-100 dark:border-gray-600 dark:text-white dark:hover:bg-gray-700">
                                <i class="fas fa-times me-2"></i> Cancel
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Order Status Card -->
                <div class="relative flex flex-col min-w-0 mb-6 break-words bg-gradient-to-tl from-cyan-500 to-blue-500 border-0 shadow-soft-xl rounded-2xl bg-clip-border">
                    <div class="flex-auto p-6">
                        <div class="flex items-center mb-4">
                            <i class="fas fa-info-circle text-white text-xl me-3"></i>
                            <h6 class="mb-0 text-white">Order Status</h6>
                        </div>
                        <div class="space-y-3 text-white/80 text-sm">
                            <div class="flex justify-between items-center">
                                <span>Order ID:</span>
                                <span class="font-semibold text-white">@Model.Order.Id</span>
                            </div>
                            <div class="flex justify-between items-center">
                                <span>Order Number:</span>
                                <span class="font-semibold text-white">@Model.Order.Name</span>
                            </div>
                            <div class="flex justify-between items-center">
                                <span>Payment:</span>
                                @{
                                    var paymentBadgeClass = Model.Order.FinancialStatus?.ToLower() switch
                                    {
                                        "paid" => "bg-green-400",
                                        "pending" => "bg-yellow-400",
                                        "refunded" => "bg-red-400",
                                        _ => "bg-slate-400"
                                    };
                                }
                                <span class="px-2 py-0.5 text-xs font-bold rounded @paymentBadgeClass text-white">
                                    @(Model.Order.FinancialStatus ?? "Unknown")
                                </span>
                            </div>
                            <div class="flex justify-between items-center">
                                <span>Fulfillment:</span>
                                @{
                                    var fulfillmentBadgeClass = Model.Order.FulfillmentStatus?.ToLower() switch
                                    {
                                        "fulfilled" => "bg-green-400",
                                        "partial" => "bg-yellow-400",
                                        _ => "bg-slate-400"
                                    };
                                }
                                <span class="px-2 py-0.5 text-xs font-bold rounded @fulfillmentBadgeClass text-white">
                                    @(Model.Order.FulfillmentStatus ?? "Unfulfilled")
                                </span>
                            </div>
                            @if (Model.OriginalOrder != null)
                            {
                                <div class="flex justify-between items-center border-t border-white/20 pt-3 mt-3">
                                    <span>Total:</span>
                                    <span class="text-lg font-bold text-white">@Model.OriginalOrder.TotalPrice.ToString("C")</span>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <!-- Customer Info Card -->
                @if (Model.OriginalOrder?.Customer != null)
                {
                    <div class="relative flex flex-col min-w-0 mb-6 break-words bg-white border-0 shadow-soft-xl rounded-2xl bg-clip-border dark:bg-gray-950 dark:shadow-soft-dark-xl">
                        <div class="p-6 pb-0 mb-0 border-b-0 rounded-t-2xl">
                            <div class="flex items-center">
                                <i class="fas fa-user text-cyan-500 me-3"></i>
                                <h6 class="mb-0 dark:text-white">Customer</h6>
                            </div>
                        </div>
                        <div class="flex-auto p-6">
                            <p class="mb-1 font-semibold dark:text-white">
                                @Model.OriginalOrder.Customer.FirstName @Model.OriginalOrder.Customer.LastName
                            </p>
                            @if (!string.IsNullOrEmpty(Model.OriginalOrder.Customer.Email))
                            {
                                <p class="mb-1 text-sm text-slate-500 dark:text-white/60">
                                    <i class="fas fa-envelope me-1"></i> @Model.OriginalOrder.Customer.Email
                                </p>
                            }
                            @if (!string.IsNullOrEmpty(Model.OriginalOrder.Customer.Phone))
                            {
                                <p class="mb-0 text-sm text-slate-500 dark:text-white/60">
                                    <i class="fas fa-phone me-1"></i> @Model.OriginalOrder.Customer.Phone
                                </p>
                            }
                        </div>
                    </div>
                }
            </div>
        </div>
    </form>
</div>
