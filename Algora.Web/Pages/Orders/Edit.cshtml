@page "/orders/edit/{id:long}"
@model Algora.Web.Pages.Orders.EditModel
@{
    ViewData["Title"] = "Edit Order";
}

<div class="p-4">
    <!-- Breadcrumb -->
    <nav class="flex mb-4" aria-label="Breadcrumb">
        <ol class="inline-flex items-center space-x-1 md:space-x-3">
            <li class="inline-flex items-center">
                <a href="/orders" class="inline-flex items-center text-sm font-medium text-gray-500 hover:text-purple-600 dark:text-gray-400 dark:hover:text-white">
                    <i class="fas fa-shopping-cart me-2"></i> Orders
                </a>
            </li>
            <li>
                <div class="flex items-center">
                    <i class="fas fa-chevron-right text-gray-400 text-xs mx-2"></i>
                    <span class="text-sm font-medium text-gray-700 dark:text-white">Edit Order</span>
                </div>
            </li>
        </ol>
    </nav>

    <!-- Header -->
    <div class="flex flex-wrap items-center justify-between mb-6">
        <div>
            <h1 class="text-xl font-bold text-gray-900 dark:text-white">Edit Order @Model.Order.Name</h1>
            <p class="text-sm text-gray-500 dark:text-gray-400">Update order details and shipping information</p>
        </div>
        <a href="/orders" class="inline-flex items-center px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-100 dark:bg-gray-800 dark:text-white dark:border-gray-600 dark:hover:bg-gray-700">
            <i class="fas fa-arrow-left me-2"></i> Back to Orders
        </a>
    </div>

    <!-- Error Message -->
    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="flex items-center p-4 mb-6 text-sm text-red-800 rounded-lg bg-red-50 dark:bg-gray-800 dark:text-red-400" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i>
            @Model.ErrorMessage
        </div>
    }

    <!-- Form -->
    <form method="post">
        <input type="hidden" asp-for="Order.Id" />
        <input type="hidden" asp-for="Order.Name" />
        <input type="hidden" asp-for="Order.FinancialStatus" />
        <input type="hidden" asp-for="Order.FulfillmentStatus" />

        <div class="grid grid-cols-1 lg:grid-cols-12 gap-6">
            <!-- Left Column - Order Details -->
            <div class="lg:col-span-8 space-y-6">
                <!-- Order Information Card -->
                <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md">
                    <div class="p-6 border-b border-gray-200 dark:border-gray-700">
                        <div class="flex items-center">
                            <i class="fas fa-file-invoice text-purple-500 me-3"></i>
                            <h6 class="text-lg font-semibold text-gray-900 dark:text-white">Order Information</h6>
                        </div>
                    </div>
                    <div class="p-6">
                        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                            <div>
                                <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">Email</label>
                                <input type="email" asp-for="Order.Email"
                                       class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white"
                                       placeholder="customer@example.com" />
                                <span asp-validation-for="Order.Email" class="text-red-500 text-xs"></span>
                            </div>
                            <div>
                                <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">Tags <small class="font-normal text-gray-400">(comma-separated)</small></label>
                                <input type="text" asp-for="Order.Tags"
                                       class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white"
                                       placeholder="e.g. vip, rush, wholesale" />
                            </div>
                            <div class="sm:col-span-2">
                                <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">Order Notes</label>
                                <textarea asp-for="Order.Note" rows="3"
                                          class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white"
                                          placeholder="Internal notes about this order..."></textarea>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Shipping Address Card -->
                <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md">
                    <div class="p-6 border-b border-gray-200 dark:border-gray-700">
                        <div class="flex items-center">
                            <i class="fas fa-truck text-purple-500 me-3"></i>
                            <h6 class="text-lg font-semibold text-gray-900 dark:text-white">Shipping Address</h6>
                        </div>
                    </div>
                    <div class="p-6">
                        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                            <div class="sm:col-span-2">
                                <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">Full Name</label>
                                <input type="text" asp-for="Order.ShippingName"
                                       class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white"
                                       placeholder="John Doe" />
                            </div>
                            <div class="sm:col-span-2">
                                <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">Address Line 1</label>
                                <input type="text" asp-for="Order.ShippingAddress1"
                                       class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white"
                                       placeholder="123 Main Street" />
                            </div>
                            <div class="sm:col-span-2">
                                <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">Address Line 2</label>
                                <input type="text" asp-for="Order.ShippingAddress2"
                                       class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white"
                                       placeholder="Apt, Suite, Unit, etc." />
                            </div>
                            <div>
                                <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">City</label>
                                <input type="text" asp-for="Order.ShippingCity"
                                       class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white"
                                       placeholder="New York" />
                            </div>
                            <div>
                                <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">State/Province</label>
                                <input type="text" asp-for="Order.ShippingProvince"
                                       class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white"
                                       placeholder="NY" />
                            </div>
                            <div>
                                <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">Country</label>
                                <input type="text" asp-for="Order.ShippingCountry"
                                       class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white"
                                       placeholder="United States" />
                            </div>
                            <div>
                                <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">ZIP/Postal Code</label>
                                <input type="text" asp-for="Order.ShippingZip"
                                       class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white"
                                       placeholder="10001" />
                            </div>
                            <div class="sm:col-span-2">
                                <label class="block mb-2 text-sm font-bold text-gray-700 dark:text-white">Phone</label>
                                <input type="tel" asp-for="Order.ShippingPhone"
                                       class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white"
                                       placeholder="+1 (555) 123-4567" />
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Line Items (Read-only) -->
                @if (Model.OriginalOrder?.LineItems?.Any() == true)
                {
                    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md">
                        <div class="p-6 border-b border-gray-200 dark:border-gray-700">
                            <div class="flex items-center">
                                <i class="fas fa-shopping-cart text-purple-500 me-3"></i>
                                <h6 class="text-lg font-semibold text-gray-900 dark:text-white">Order Items</h6>
                                <span class="ml-2 px-2 py-0.5 text-xs font-medium rounded bg-gray-100 text-gray-500 dark:bg-gray-700 dark:text-gray-400">Read-only</span>
                            </div>
                        </div>
                        <div class="p-6">
                            <div class="space-y-3">
                                @foreach (var item in Model.OriginalOrder.LineItems)
                                {
                                    <div class="flex items-center justify-between p-3 bg-gray-50 dark:bg-gray-700 rounded-lg">
                                        <div>
                                            <p class="font-semibold text-sm text-gray-900 dark:text-white">@item.Title</p>
                                            <p class="text-xs text-gray-500 dark:text-gray-400">Qty: @item.Quantity</p>
                                        </div>
                                        <span class="font-bold text-gray-900 dark:text-white">@item.Price.ToString("C")</span>
                                    </div>
                                }
                            </div>
                            <div class="flex justify-end mt-4 pt-4 border-t border-gray-200 dark:border-gray-700">
                                <div class="text-right">
                                    <span class="text-sm text-gray-500 dark:text-gray-400">Total:</span>
                                    <span class="ml-2 text-lg font-bold text-gray-900 dark:text-white">@Model.OriginalOrder.TotalPrice.ToString("C")</span>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <!-- Right Column - Actions & Status -->
            <div class="lg:col-span-4 space-y-6">
                <!-- Actions Card -->
                <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md sticky top-6">
                    <div class="p-6 border-b border-gray-200 dark:border-gray-700">
                        <h6 class="text-lg font-semibold text-gray-900 dark:text-white">Actions</h6>
                    </div>
                    <div class="p-6">
                        <div class="flex flex-col gap-3">
                            <button type="submit" class="w-full text-white bg-gradient-to-br from-purple-600 to-pink-500 hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-purple-300 dark:focus:ring-purple-800 font-medium rounded-lg text-sm px-5 py-3">
                                <i class="fas fa-save me-2"></i> Update Order
                            </button>
                            <a href="/orders/delete/@Model.Order.Id" class="w-full text-center text-red-700 hover:text-white border border-red-700 hover:bg-red-800 focus:ring-4 focus:outline-none focus:ring-red-300 font-medium rounded-lg text-sm px-5 py-3 dark:border-red-500 dark:text-red-500 dark:hover:text-white dark:hover:bg-red-600">
                                <i class="fas fa-times-circle me-2"></i> Close Order
                            </a>
                            <a href="/orders" class="w-full text-center text-gray-900 bg-white border border-gray-300 focus:outline-none hover:bg-gray-100 focus:ring-4 focus:ring-gray-200 font-medium rounded-lg text-sm px-5 py-3 dark:bg-gray-800 dark:text-white dark:border-gray-600 dark:hover:bg-gray-700">
                                <i class="fas fa-times me-2"></i> Cancel
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Order Status Card -->
                <div class="bg-gradient-to-br from-purple-600 to-pink-500 rounded-lg shadow-md">
                    <div class="p-6">
                        <div class="flex items-center mb-4">
                            <i class="fas fa-info-circle text-white text-xl me-3"></i>
                            <h6 class="text-lg font-semibold text-white">Order Status</h6>
                        </div>
                        <div class="space-y-3 text-white/80 text-sm">
                            <div class="flex justify-between items-center">
                                <span>Order ID:</span>
                                <span class="font-semibold text-white">@Model.Order.Id</span>
                            </div>
                            <div class="flex justify-between items-center">
                                <span>Order Number:</span>
                                <span class="font-semibold text-white">@Model.Order.Name</span>
                            </div>
                            <div class="flex justify-between items-center">
                                <span>Payment:</span>
                                @{
                                    var paymentBadgeClass = Model.Order.FinancialStatus?.ToLower() switch
                                    {
                                        "paid" => "bg-green-400",
                                        "pending" => "bg-yellow-400",
                                        "refunded" => "bg-red-400",
                                        _ => "bg-gray-400"
                                    };
                                }
                                <span class="px-2 py-0.5 text-xs font-bold rounded @paymentBadgeClass text-white">
                                    @(Model.Order.FinancialStatus ?? "Unknown")
                                </span>
                            </div>
                            <div class="flex justify-between items-center">
                                <span>Fulfillment:</span>
                                @{
                                    var fulfillmentBadgeClass = Model.Order.FulfillmentStatus?.ToLower() switch
                                    {
                                        "fulfilled" => "bg-green-400",
                                        "partial" => "bg-yellow-400",
                                        _ => "bg-gray-400"
                                    };
                                }
                                <span class="px-2 py-0.5 text-xs font-bold rounded @fulfillmentBadgeClass text-white">
                                    @(Model.Order.FulfillmentStatus ?? "Unfulfilled")
                                </span>
                            </div>
                            @if (Model.OriginalOrder != null)
                            {
                                <div class="flex justify-between items-center border-t border-white/20 pt-3 mt-3">
                                    <span>Total:</span>
                                    <span class="text-lg font-bold text-white">@Model.OriginalOrder.TotalPrice.ToString("C")</span>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <!-- Customer Info Card -->
                @if (Model.OriginalOrder?.Customer != null)
                {
                    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md">
                        <div class="p-6 border-b border-gray-200 dark:border-gray-700">
                            <div class="flex items-center">
                                <i class="fas fa-user text-purple-500 me-3"></i>
                                <h6 class="text-lg font-semibold text-gray-900 dark:text-white">Customer</h6>
                            </div>
                        </div>
                        <div class="p-6">
                            <p class="font-semibold text-gray-900 dark:text-white mb-1">
                                @Model.OriginalOrder.Customer.FirstName @Model.OriginalOrder.Customer.LastName
                            </p>
                            @if (!string.IsNullOrEmpty(Model.OriginalOrder.Customer.Email))
                            {
                                <p class="text-sm text-gray-500 dark:text-gray-400 mb-1">
                                    <i class="fas fa-envelope me-1"></i> @Model.OriginalOrder.Customer.Email
                                </p>
                            }
                            @if (!string.IsNullOrEmpty(Model.OriginalOrder.Customer.Phone))
                            {
                                <p class="text-sm text-gray-500 dark:text-gray-400">
                                    <i class="fas fa-phone me-1"></i> @Model.OriginalOrder.Customer.Phone
                                </p>
                            }
                        </div>
                    </div>
                }
            </div>
        </div>
    </form>
</div>
