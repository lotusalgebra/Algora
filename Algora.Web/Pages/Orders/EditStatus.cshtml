@using Algora.Core.Models
@model OrderViewModel
@{
    ViewData["Title"] = "Update Order Status";
}
<h3>Update Status for Order #@Model.Id</h3>
<form method="post">
    <div class="mb-3">
        <label>Status</label>
        <select name="status" class="form-select">
            @foreach (var s in new[] { "Pending", "Shipped", "Delivered", "Cancelled" })
            {
                <option value="@s" selected="@(s == Model.Status)">@s</option>
            }
        </select>
    </div>
    <button class="btn btn-primary">Save</button>
    <a href="/orders/details/@Model.Id" class="btn btn-secondary">Cancel</a>
</form>
@if (TempData["msg"] != null)
{
    <div class="alert alert-success mt-3">@TempData["msg"]</div>
}
