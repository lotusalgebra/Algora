@page "/orders/edit-status/{id:long}"
@model Algora.Web.Pages.Orders.EditStatusModel
@{
    ViewData["Title"] = Model.Order != null ? $"Update Status - {Model.Order.Name}" : "Update Order Status";
}

<div class="p-4">
    <!-- Breadcrumb & Header -->
    <div class="flex flex-wrap items-center justify-between mb-6">
        <div>
            <nav class="flex mb-2" aria-label="Breadcrumb">
                <ol class="inline-flex items-center space-x-1 md:space-x-3">
                    <li class="inline-flex items-center">
                        <a href="/orders" class="inline-flex items-center text-sm font-medium text-gray-500 hover:text-purple-600 dark:text-gray-400 dark:hover:text-white">
                            <i class="fas fa-shopping-cart me-2"></i> Orders
                        </a>
                    </li>
                    @if (Model.Order != null)
                    {
                        <li>
                            <div class="flex items-center">
                                <i class="fas fa-chevron-right text-gray-400 text-xs mx-2"></i>
                                <a href="/orders/@Model.Order.Id" class="text-sm font-medium text-gray-500 hover:text-purple-600 dark:text-gray-400 dark:hover:text-white">
                                    @Model.Order.Name
                                </a>
                            </div>
                        </li>
                    }
                    <li>
                        <div class="flex items-center">
                            <i class="fas fa-chevron-right text-gray-400 text-xs mx-2"></i>
                            <span class="text-sm font-medium text-gray-700 dark:text-white">Update Status</span>
                        </div>
                    </li>
                </ol>
            </nav>
            <h1 class="text-xl font-bold text-gray-900 dark:text-white">Update Order Status</h1>
        </div>
        <div>
            @if (Model.Order != null)
            {
                <a href="/orders/@Model.Order.Id" class="inline-flex items-center px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-100 dark:bg-gray-800 dark:text-white dark:border-gray-600 dark:hover:bg-gray-700">
                    <i class="fas fa-arrow-left me-2"></i>
                    Back to Order
                </a>
            }
        </div>
    </div>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="flex items-center p-4 mb-6 text-sm text-red-800 rounded-lg bg-red-50 dark:bg-gray-800 dark:text-red-400" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i>
            @Model.ErrorMessage
        </div>
    }

    @if (Model.Order != null)
    {
        var customerName = Model.Order.Customer != null
            ? $"{Model.Order.Customer.FirstName} {Model.Order.Customer.LastName}".Trim()
            : (Model.Order.Email ?? "Guest");

        <div class="grid grid-cols-1 lg:grid-cols-12 gap-6">
            <!-- Order Summary Card -->
            <div class="lg:col-span-4">
                <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md h-full">
                    <div class="p-6 border-b border-gray-200 dark:border-gray-700">
                        <h6 class="text-lg font-semibold text-gray-900 dark:text-white">
                            <i class="fas fa-shopping-bag me-2 text-purple-500"></i>
                            Order Summary
                        </h6>
                    </div>
                    <div class="p-6">
                        <div class="mb-4">
                            <span class="text-xs text-gray-500 dark:text-gray-400">Order Number</span>
                            <p class="text-lg font-bold text-gray-900 dark:text-white">@Model.Order.Name</p>
                        </div>
                        <div class="mb-4">
                            <span class="text-xs text-gray-500 dark:text-gray-400">Customer</span>
                            <p class="text-sm font-semibold text-gray-900 dark:text-white">@customerName</p>
                        </div>
                        <div class="mb-4">
                            <span class="text-xs text-gray-500 dark:text-gray-400">Total</span>
                            <p class="text-lg font-bold text-gray-900 dark:text-white">@Model.Order.TotalPrice.ToString("C")</p>
                        </div>
                        <div class="mb-4">
                            <span class="text-xs text-gray-500 dark:text-gray-400">Current Status</span>
                            <div class="mt-1">
                                @{
                                    var currentStatus = Model.Order.FulfillmentStatus ?? "unfulfilled";
                                    var statusBadgeClass = currentStatus.ToLower() switch
                                    {
                                        "fulfilled" => "bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-300",
                                        "partial" => "bg-yellow-100 text-yellow-800 dark:bg-yellow-900 dark:text-yellow-300",
                                        _ => "bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-300"
                                    };
                                }
                                <span class="@statusBadgeClass px-3 py-1.5 text-xs font-medium rounded-lg uppercase">
                                    @(string.IsNullOrEmpty(currentStatus) ? "Unfulfilled" : currentStatus)
                                </span>
                            </div>
                        </div>
                        @if (!string.IsNullOrEmpty(Model.CustomerPhone))
                        {
                            <div>
                                <span class="text-xs text-gray-500 dark:text-gray-400">Phone</span>
                                <p class="text-sm font-semibold text-gray-900 dark:text-white">
                                    <i class="fab fa-whatsapp text-green-500 me-1"></i>
                                    @Model.CustomerPhone
                                </p>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Status Update Form -->
            <div class="lg:col-span-8">
                <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md">
                    <div class="p-6 border-b border-gray-200 dark:border-gray-700">
                        <h6 class="text-lg font-semibold text-gray-900 dark:text-white">
                            <i class="fas fa-edit me-2 text-blue-500"></i>
                            Update Fulfillment Status
                        </h6>
                    </div>
                    <div class="p-6">
                        <form method="post" asp-route-id="@Model.Order.Id">
                            <!-- Status Selection -->
                            <div class="mb-6">
                                <label class="block text-sm font-bold text-gray-700 dark:text-white mb-2">
                                    New Status
                                </label>
                                <div class="grid grid-cols-2 gap-3 sm:grid-cols-4">
                                    <label class="relative flex cursor-pointer rounded-lg border p-4 shadow-sm focus:outline-none @(Model.NewStatus == "unfulfilled" ? "border-purple-500 ring-2 ring-purple-500" : "border-gray-300 dark:border-gray-600")">
                                        <input type="radio" name="NewStatus" value="unfulfilled" class="sr-only" @(Model.NewStatus == "unfulfilled" ? "checked" : "") onchange="toggleTrackingFields(this.value)">
                                        <span class="flex flex-1 flex-col">
                                            <span class="block text-sm font-medium text-gray-900 dark:text-white">Unfulfilled</span>
                                            <span class="mt-1 flex items-center text-xs text-gray-500 dark:text-gray-400">Not processed</span>
                                        </span>
                                        <i class="fas fa-clock text-gray-400 text-lg"></i>
                                    </label>

                                    <label class="relative flex cursor-pointer rounded-lg border p-4 shadow-sm focus:outline-none @(Model.NewStatus == "shipped" ? "border-purple-500 ring-2 ring-purple-500" : "border-gray-300 dark:border-gray-600")">
                                        <input type="radio" name="NewStatus" value="shipped" class="sr-only" @(Model.NewStatus == "shipped" || Model.NewStatus == "fulfilled" ? "checked" : "") onchange="toggleTrackingFields(this.value)">
                                        <span class="flex flex-1 flex-col">
                                            <span class="block text-sm font-medium text-gray-900 dark:text-white">Shipped</span>
                                            <span class="mt-1 flex items-center text-xs text-gray-500 dark:text-gray-400">In transit</span>
                                        </span>
                                        <i class="fas fa-truck text-orange-400 text-lg"></i>
                                    </label>

                                    <label class="relative flex cursor-pointer rounded-lg border p-4 shadow-sm focus:outline-none @(Model.NewStatus == "delivered" ? "border-purple-500 ring-2 ring-purple-500" : "border-gray-300 dark:border-gray-600")">
                                        <input type="radio" name="NewStatus" value="delivered" class="sr-only" @(Model.NewStatus == "delivered" ? "checked" : "") onchange="toggleTrackingFields(this.value)">
                                        <span class="flex flex-1 flex-col">
                                            <span class="block text-sm font-medium text-gray-900 dark:text-white">Delivered</span>
                                            <span class="mt-1 flex items-center text-xs text-gray-500 dark:text-gray-400">Completed</span>
                                        </span>
                                        <i class="fas fa-check-circle text-green-500 text-lg"></i>
                                    </label>

                                    <label class="relative flex cursor-pointer rounded-lg border p-4 shadow-sm focus:outline-none @(Model.NewStatus == "cancelled" ? "border-purple-500 ring-2 ring-purple-500" : "border-gray-300 dark:border-gray-600")">
                                        <input type="radio" name="NewStatus" value="cancelled" class="sr-only" @(Model.NewStatus == "cancelled" ? "checked" : "") onchange="toggleTrackingFields(this.value)">
                                        <span class="flex flex-1 flex-col">
                                            <span class="block text-sm font-medium text-gray-900 dark:text-white">Cancelled</span>
                                            <span class="mt-1 flex items-center text-xs text-gray-500 dark:text-gray-400">Order cancelled</span>
                                        </span>
                                        <i class="fas fa-times-circle text-red-500 text-lg"></i>
                                    </label>
                                </div>
                            </div>

                            <!-- Tracking Information (shown when Shipped is selected) -->
                            <div id="trackingFields" class="mb-6 p-4 bg-gray-50 rounded-lg dark:bg-gray-700 hidden">
                                <h6 class="text-sm font-semibold text-gray-700 dark:text-white mb-4">
                                    <i class="fas fa-shipping-fast me-2"></i>
                                    Tracking Information
                                </h6>
                                <div class="grid grid-cols-1 gap-4 sm:grid-cols-3">
                                    <div>
                                        <label for="trackingCompany" class="block text-sm font-bold text-gray-700 dark:text-white mb-1">Carrier</label>
                                        <select id="trackingCompany" name="TrackingCompany" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:text-white">
                                            <option value="">Select carrier...</option>
                                            <option value="USPS">USPS</option>
                                            <option value="UPS">UPS</option>
                                            <option value="FedEx">FedEx</option>
                                            <option value="DHL">DHL</option>
                                            <option value="Other">Other</option>
                                        </select>
                                    </div>
                                    <div>
                                        <label for="trackingNumber" class="block text-sm font-bold text-gray-700 dark:text-white mb-1">Tracking Number</label>
                                        <input type="text" id="trackingNumber" name="TrackingNumber" value="@Model.TrackingNumber"
                                            class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:text-white"
                                            placeholder="e.g., 1Z999AA10123456784">
                                    </div>
                                    <div>
                                        <label for="trackingUrl" class="block text-sm font-bold text-gray-700 dark:text-white mb-1">Tracking URL</label>
                                        <input type="url" id="trackingUrl" name="TrackingUrl" value="@Model.TrackingUrl"
                                            class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-purple-500 focus:border-purple-500 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:text-white"
                                            placeholder="https://...">
                                    </div>
                                </div>
                            </div>

                            <!-- WhatsApp Notification -->
                            @if (!string.IsNullOrEmpty(Model.CustomerPhone))
                            {
                                <div class="mb-6 p-4 bg-green-50 rounded-lg dark:bg-green-900/20 border border-green-200 dark:border-green-800">
                                    <div class="flex items-start">
                                        <div class="flex items-center h-5">
                                            <input id="sendNotification" name="SendNotification" type="checkbox" value="true"
                                                class="w-4 h-4 text-green-600 bg-gray-100 border-gray-300 rounded focus:ring-green-500 dark:focus:ring-green-600 dark:ring-offset-gray-800 dark:bg-gray-700 dark:border-gray-600">
                                        </div>
                                        <div class="ml-3">
                                            <label for="sendNotification" class="text-sm font-medium text-gray-900 dark:text-white">
                                                <i class="fab fa-whatsapp text-green-500 me-1"></i>
                                                Send WhatsApp notification to customer
                                            </label>
                                            <p class="text-xs text-gray-500 dark:text-gray-400 mt-1">
                                                Customer will receive a message at @Model.CustomerPhone with the status update and tracking information (if provided).
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="mb-6 p-4 bg-yellow-50 rounded-lg dark:bg-yellow-900/20 border border-yellow-200 dark:border-yellow-800">
                                    <div class="flex items-center">
                                        <i class="fas fa-exclamation-triangle text-yellow-500 me-2"></i>
                                        <span class="text-sm text-yellow-700 dark:text-yellow-300">
                                            No phone number available for this customer. WhatsApp notification cannot be sent.
                                        </span>
                                    </div>
                                </div>
                            }

                            <!-- Submit Button -->
                            <div class="flex justify-end gap-3">
                                <a href="/orders/@Model.Order.Id" class="text-gray-900 bg-white border border-gray-300 focus:outline-none hover:bg-gray-100 focus:ring-4 focus:ring-gray-200 font-medium rounded-lg text-sm px-5 py-2.5 dark:bg-gray-800 dark:text-white dark:border-gray-600 dark:hover:bg-gray-700">
                                    Cancel
                                </a>
                                <button type="submit" class="text-white bg-gradient-to-br from-purple-600 to-pink-500 hover:bg-gradient-to-bl focus:ring-4 focus:outline-none focus:ring-purple-300 dark:focus:ring-purple-800 font-medium rounded-lg text-sm px-5 py-2.5">
                                    <i class="fas fa-save me-2"></i>
                                    Update Status
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<script>
    function toggleTrackingFields(status) {
        var trackingFields = document.getElementById('trackingFields');
        if (status === 'shipped') {
            trackingFields.classList.remove('hidden');
        } else {
            trackingFields.classList.add('hidden');
        }

        // Update radio button visual states
        document.querySelectorAll('input[name="NewStatus"]').forEach(function(radio) {
            var label = radio.closest('label');
            if (radio.checked) {
                label.classList.add('border-purple-500', 'ring-2', 'ring-purple-500');
                label.classList.remove('border-gray-300', 'dark:border-gray-600');
            } else {
                label.classList.remove('border-purple-500', 'ring-2', 'ring-purple-500');
                label.classList.add('border-gray-300', 'dark:border-gray-600');
            }
        });
    }

    // Initialize on page load
    document.addEventListener('DOMContentLoaded', function() {
        var checkedRadio = document.querySelector('input[name="NewStatus"]:checked');
        if (checkedRadio) {
            toggleTrackingFields(checkedRadio.value);
        }
    });
</script>
