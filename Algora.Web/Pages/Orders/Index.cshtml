@using Algora.Core.Models
@model IEnumerable<OrderViewModel>
@{
    ViewData["Title"] = "Orders";
}
<h2 class="mb-3">Order Management</h2>

<form method="get" class="row g-2 mb-4">
    <div class="col-md-4">
        <input type="text" name="search" value="@ViewBag.Search" placeholder="Search order/customer" class="form-control" />
    </div>
    <div class="col-md-3">
        <select name="status" class="form-select">
            <option value="">All Status</option>
            <option value="Pending" selected="@("Pending" == ViewBag.Status)">Pending</option>
            <option value="Shipped" selected="@("Shipped" == ViewBag.Status)">Shipped</option>
            <option value="Delivered" selected="@("Delivered" == ViewBag.Status)">Delivered</option>
            <option value="Cancelled" selected="@("Cancelled" == ViewBag.Status)">Cancelled</option>
        </select>
    </div>
    <div class="col-md-2">
        <button class="btn btn-outline-primary">Filter</button>
    </div>
</form>

<table class="table table-striped table-bordered align-middle">
    <thead>
        <tr>
            <th>Order #</th>
            <th>Customer</th>
            <th>Total (₹)</th>
            <th>Status</th>
            <th>Date</th>
            <th style="width:180px">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var o in Model)
        {
            <tr>
                <td>@o.Id</td>
                <td>@o.CustomerName</td>
                <td>@o.TotalAmount</td>
                <td>
                    <span class="badge bg-@(o.Status=="Delivered" ? "success" : o.Status=="Shipped" ? "info" : o.Status=="Cancelled" ? "danger" : "warning")">
                        @o.Status
                    </span>
                </td>
                <td>@o.Date.ToString("dd MMM yyyy")</td>
                <td>
                    <a href="/orders/details/@o.Id" class="btn btn-sm btn-info">View</a>
                    <a href="/orders/editstatus/@o.Id" class="btn btn-sm btn-warning">Update</a>
                </td>
            </tr>
        }
    </tbody>
</table>
