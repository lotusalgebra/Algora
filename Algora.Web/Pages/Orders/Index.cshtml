@page
@model Algora.Web.Pages.Orders.IndexModel
@{
    ViewData["Title"] = "Orders";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card mb-4">
                <div class="card-header pb-0">
                    <div class="d-flex justify-content-between align-items-center">
                        <h6>Orders</h6>
                        <form method="get" class="d-flex gap-2">
                            <select asp-for="Limit" class="form-select form-select-sm" style="width: auto;">
                                <option value="10">10</option>
                                <option value="25">25</option>
                                <option value="50">50</option>
                                <option value="100">100</option>
                            </select>
                            <button type="submit" class="btn btn-sm btn-primary">Refresh</button>
                        </form>
                    </div>
                </div>
                <div class="card-body px-0 pt-0 pb-2">
                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert alert-danger mx-4" role="alert">
                            @Model.ErrorMessage
                        </div>
                    }
                    
                    <div class="table-responsive p-0">
                        <table class="table align-items-center mb-0">
                            <thead>
                                <tr>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Order</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Customer</th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Status</th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Fulfillment</th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Total</th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Date</th>
                                    <th class="text-secondary opacity-7"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (!Model.Orders.Any())
                                {
                                    <tr>
                                        <td colspan="7" class="text-center py-4 text-secondary">
                                            No orders found
                                        </td>
                                    </tr>
                                }
                                @foreach (var order in Model.Orders)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex px-2 py-1">
                                                <div class="d-flex flex-column justify-content-center">
                                                    <h6 class="mb-0 text-sm">@order.Name</h6>
                                                    <p class="text-xs text-secondary mb-0">#@order.Id</p>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <p class="text-xs font-weight-bold mb-0">@(order.Email ?? "N/A")</p>
                                        </td>
                                        <td class="align-middle text-center text-sm">
                                            @{
                                                var statusClass = order.FinancialStatus?.ToLower() switch
                                                {
                                                    "paid" => "bg-gradient-success",
                                                    "pending" => "bg-gradient-warning",
                                                    "refunded" => "bg-gradient-secondary",
                                                    _ => "bg-gradient-info"
                                                };
                                            }
                                            <span class="badge badge-sm @statusClass">@(order.FinancialStatus ?? "Unknown")</span>
                                        </td>
                                        <td class="align-middle text-center text-sm">
                                            @{
                                                var fulfillClass = order.FulfillmentStatus?.ToLower() switch
                                                {
                                                    "fulfilled" => "bg-gradient-success",
                                                    "partial" => "bg-gradient-warning",
                                                    null or "" => "bg-gradient-secondary",
                                                    _ => "bg-gradient-info"
                                                };
                                            }
                                            <span class="badge badge-sm @fulfillClass">@(order.FulfillmentStatus ?? "Unfulfilled")</span>
                                        </td>
                                        <td class="align-middle text-center">
                                            <span class="text-secondary text-xs font-weight-bold">@order.TotalPrice.ToString("C")</span>
                                        </td>
                                        <td class="align-middle text-center">
                                            <span class="text-secondary text-xs font-weight-bold">@order.CreatedAt.ToString("MMM dd, yyyy")</span>
                                        </td>
                                        <td class="align-middle">
                                            <a href="/orders/@order.Id" class="text-secondary font-weight-bold text-xs" data-toggle="tooltip" title="View Details">
                                                View
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>