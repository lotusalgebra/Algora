@page "/orders/{id:long}"
@model Algora.Web.Pages.Orders.DetailsModel
@{
    ViewData["Title"] = Model.Order != null ? $"Order {Model.Order.Name}" : "Order Details";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card mb-4">
                <div class="card-header pb-0">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6>Order Details</h6>
                            <nav aria-label="breadcrumb">
                                <ol class="breadcrumb">
                                    <li class="breadcrumb-item"><a href="/orders">Orders</a></li>
                                    <li class="breadcrumb-item active" aria-current="page">@(Model.Order?.Name ?? "Details")</li>
                                </ol>
                            </nav>
                        </div>
                        <a href="/orders" class="btn btn-sm btn-secondary">Back to Orders</a>
                    </div>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert alert-danger" role="alert">
                            @Model.ErrorMessage
                        </div>
                    }
                    else if (Model.Order != null)
                    {
                        <div class="row">
                            <div class="col-md-6">
                                <h6 class="text-uppercase text-body text-xs font-weight-bolder mb-3">Order Information</h6>
                                <ul class="list-group">
                                    <li class="list-group-item border-0 ps-0 pt-0 text-sm">
                                        <strong class="text-dark">Order Number:</strong> &nbsp; @Model.Order.Name
                                    </li>
                                    <li class="list-group-item border-0 ps-0 text-sm">
                                        <strong class="text-dark">Order ID:</strong> &nbsp; #@Model.Order.Id
                                    </li>
                                    <li class="list-group-item border-0 ps-0 text-sm">
                                        <strong class="text-dark">Date:</strong> &nbsp; @Model.Order.CreatedAt.ToString("MMMM dd, yyyy h:mm tt")
                                    </li>
                                    <li class="list-group-item border-0 ps-0 text-sm">
                                        <strong class="text-dark">Financial Status:</strong> &nbsp;
                                        @{
                                            var statusClass = Model.Order.FinancialStatus?.ToLower() switch
                                            {
                                                "paid" => "bg-gradient-success",
                                                "pending" => "bg-gradient-warning",
                                                "refunded" => "bg-gradient-secondary",
                                                _ => "bg-gradient-info"
                                            };
                                        }
                                        <span class="badge badge-sm @statusClass">@(Model.Order.FinancialStatus ?? "Unknown")</span>
                                    </li>
                                    <li class="list-group-item border-0 ps-0 text-sm">
                                        <strong class="text-dark">Fulfillment Status:</strong> &nbsp;
                                        @{
                                            var fulfillClass = Model.Order.FulfillmentStatus?.ToLower() switch
                                            {
                                                "fulfilled" => "bg-gradient-success",
                                                "partial" => "bg-gradient-warning",
                                                null or "" => "bg-gradient-secondary",
                                                _ => "bg-gradient-info"
                                            };
                                        }
                                        <span class="badge badge-sm @fulfillClass">@(Model.Order.FulfillmentStatus ?? "Unfulfilled")</span>
                                    </li>
                                    <li class="list-group-item border-0 ps-0 pb-0 text-sm">
                                        <strong class="text-dark">Total:</strong> &nbsp; @Model.Order.TotalPrice.ToString("C")
                                    </li>
                                </ul>
                            </div>
                            <div class="col-md-6">
                                <h6 class="text-uppercase text-body text-xs font-weight-bolder mb-3">Customer Information</h6>
                                <ul class="list-group">
                                    @if (Model.Order.Customer != null)
                                    {
                                        <li class="list-group-item border-0 ps-0 pt-0 text-sm">
                                            <strong class="text-dark">Name:</strong> &nbsp; @Model.Order.Customer.FirstName @Model.Order.Customer.LastName
                                        </li>
                                        <li class="list-group-item border-0 ps-0 text-sm">
                                            <strong class="text-dark">Email:</strong> &nbsp; @Model.Order.Customer.Email
                                        </li>
                                        @if (!string.IsNullOrEmpty(Model.Order.Customer.Phone))
                                        {
                                            <li class="list-group-item border-0 ps-0 text-sm">
                                                <strong class="text-dark">Phone:</strong> &nbsp; @Model.Order.Customer.Phone
                                            </li>
                                        }
                                    }
                                    else
                                    {
                                        <li class="list-group-item border-0 ps-0 pt-0 text-sm">
                                            <strong class="text-dark">Email:</strong> &nbsp; @(Model.Order.Email ?? "N/A")
                                        </li>
                                    }
                                </ul>

                                @if (Model.Order.ShippingAddress != null)
                                {
                                    <h6 class="text-uppercase text-body text-xs font-weight-bolder mb-3 mt-4">Shipping Address</h6>
                                    <address class="text-sm mb-0">
                                        @Model.Order.ShippingAddress.Name<br />
                                        @Model.Order.ShippingAddress.Address1<br />
                                        @if (!string.IsNullOrEmpty(Model.Order.ShippingAddress.Address2))
                                        {
                                            @Model.Order.ShippingAddress.Address2<br />
                                        }
                                        @Model.Order.ShippingAddress.City, @Model.Order.ShippingAddress.Province @Model.Order.ShippingAddress.Zip<br />
                                        @Model.Order.ShippingAddress.Country
                                    </address>
                                }
                            </div>
                        </div>

                        @if (Model.Order.LineItems.Any())
                        {
                            <hr class="horizontal dark my-4" />
                            <h6 class="text-uppercase text-body text-xs font-weight-bolder mb-3">Line Items</h6>
                            <div class="table-responsive">
                                <table class="table align-items-center mb-0">
                                    <thead>
                                        <tr>
                                            <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Product</th>
                                            <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Quantity</th>
                                            <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Price</th>
                                            <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Total</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.Order.LineItems)
                                        {
                                            <tr>
                                                <td>
                                                    <p class="text-sm font-weight-bold mb-0">@item.Title</p>
                                                </td>
                                                <td class="align-middle text-center">
                                                    <span class="text-secondary text-sm">@item.Quantity</span>
                                                </td>
                                                <td class="align-middle text-center">
                                                    <span class="text-secondary text-sm">@item.Price.ToString("C")</span>
                                                </td>
                                                <td class="align-middle text-center">
                                                    <span class="text-secondary text-sm font-weight-bold">@((item.Price * item.Quantity).ToString("C"))</span>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                    <tfoot>
                                        <tr>
                                            <td colspan="3" class="text-end"><strong>Total:</strong></td>
                                            <td class="text-center"><strong>@Model.Order.TotalPrice.ToString("C")</strong></td>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>
