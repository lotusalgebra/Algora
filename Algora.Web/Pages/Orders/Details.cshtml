@page "/orders/{id:long}"
@model Algora.Web.Pages.Orders.DetailsModel
@{
    ViewData["Title"] = Model.Order != null ? $"Order {Model.Order.Name}" : "Order Details";
    ViewData["Breadcrumb"] = "Orders / Details";
}

<div class="p-4">
    <!-- Header -->
    <div class="flex flex-wrap items-center justify-between gap-4 mb-6">
        <div>
            <h5 class="text-xl font-semibold text-gray-900 dark:text-white">Order Details</h5>
            <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">@(Model.Order?.Name ?? "View order information")</p>
        </div>
        <div class="flex items-center gap-2">
            @if (Model.Order != null)
            {
                @if (!string.IsNullOrEmpty(Model.CustomerPhone))
                {
                    <button type="button" onclick="openWhatsAppModal()" class="inline-flex items-center px-4 py-2 text-sm font-medium text-white bg-gradient-to-r from-green-500 to-green-700 rounded-lg hover:bg-gradient-to-br focus:ring-4 focus:outline-none focus:ring-green-300 dark:focus:ring-green-800">
                        <i class="fab fa-whatsapp me-2"></i> WhatsApp
                    </button>
                }
                <a href="/orders/edit-status/@Model.Order.Id" class="inline-flex items-center px-4 py-2 text-sm font-medium text-gray-900 bg-white border border-gray-300 rounded-lg hover:bg-gray-100 dark:bg-gray-800 dark:text-white dark:border-gray-600 dark:hover:bg-gray-700">
                    <i class="fas fa-edit me-2 text-gray-400"></i> Update Status
                </a>
                <a href="/orders/invoice/@Model.Order.Id" class="inline-flex items-center px-4 py-2 text-sm font-medium text-gray-900 bg-white border border-gray-300 rounded-lg hover:bg-gray-100 dark:bg-gray-800 dark:text-white dark:border-gray-600 dark:hover:bg-gray-700">
                    <i class="fas fa-file-invoice me-2 text-gray-400"></i> Invoice
                </a>
                <a href="/orders/invoice/download/@Model.Order.Id" class="inline-flex items-center px-4 py-2 text-sm font-medium text-white bg-gradient-to-r from-cyan-500 to-blue-500 rounded-lg hover:bg-gradient-to-br focus:ring-4 focus:outline-none focus:ring-cyan-300">
                    <i class="fas fa-download me-2"></i> PDF
                </a>
            }
            <a href="/orders" class="inline-flex items-center px-4 py-2 text-sm font-medium text-gray-900 bg-white border border-gray-300 rounded-lg hover:bg-gray-100 dark:bg-gray-800 dark:text-white dark:border-gray-600 dark:hover:bg-gray-700">
                <i class="fas fa-arrow-left me-2"></i> Back
            </a>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="flex items-center p-4 mb-6 text-sm text-red-800 rounded-lg bg-red-50 dark:bg-gray-800 dark:text-red-400" role="alert">
            <i class="fas fa-exclamation-triangle flex-shrink-0 me-2"></i>
            <span>@Model.ErrorMessage</span>
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.WhatsAppSuccess))
    {
        <div class="flex items-center p-4 mb-6 text-sm text-green-800 rounded-lg bg-green-50 dark:bg-gray-800 dark:text-green-400" role="alert">
            <i class="fab fa-whatsapp flex-shrink-0 me-2"></i>
            <span>@Model.WhatsAppSuccess</span>
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.WhatsAppError))
    {
        <div class="flex items-center p-4 mb-6 text-sm text-red-800 rounded-lg bg-red-50 dark:bg-gray-800 dark:text-red-400" role="alert">
            <i class="fas fa-exclamation-circle flex-shrink-0 me-2"></i>
            <span>@Model.WhatsAppError</span>
        </div>
    }

    @if (Model.Order != null)
    {
        var statusBadge = Model.Order.FinancialStatus?.ToLower() switch
        {
            "paid" => "bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-300",
            "pending" => "bg-yellow-100 text-yellow-800 dark:bg-yellow-900 dark:text-yellow-300",
            "refunded" => "bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-300",
            "cancelled" or "canceled" or "voided" => "bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-300",
            _ => "bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-300"
        };

        var fulfillBadge = Model.Order.FulfillmentStatus?.ToLower() switch
        {
            "fulfilled" => "bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-300",
            "partial" => "bg-yellow-100 text-yellow-800 dark:bg-yellow-900 dark:text-yellow-300",
            null or "" => "bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-300",
            _ => "bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-300"
        };

        var customerName = Model.Order.Customer != null
            ? $"{Model.Order.Customer.FirstName} {Model.Order.Customer.LastName}".Trim()
            : (Model.Order.Email ?? "Guest");

        var initials = customerName.Length > 0
            ? string.Join("", customerName.Split(' ').Where(w => w.Length > 0).Take(2).Select(w => w[0].ToString().ToUpper()))
            : "?";

        var bgColors = new[] { "from-purple-600 to-pink-500", "from-gray-400 to-gray-600", "from-green-500 to-green-700", "from-blue-500 to-blue-700", "from-red-500 to-red-700", "from-orange-400 to-orange-600" };
        var colorIndex = Math.Abs(customerName.GetHashCode()) % bgColors.Length;

        <!-- Order Summary Card -->
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md mb-6">
            <div class="p-6">
                <div class="flex flex-wrap items-start justify-between gap-4">
                    <div class="flex items-center">
                        <div class="flex items-center justify-center w-16 h-16 mr-4 text-xl text-white rounded-lg bg-gradient-to-br from-purple-600 to-pink-500 shadow-lg">
                            <i class="fas fa-shopping-bag"></i>
                        </div>
                        <div>
                            <h4 class="text-2xl font-bold text-gray-900 dark:text-white mb-1">@Model.Order.Name</h4>
                            <p class="text-sm text-gray-500 dark:text-gray-400">Order ID: #@Model.Order.Id</p>
                            <p class="text-sm text-gray-500 dark:text-gray-400">
                                <i class="far fa-calendar-alt me-1"></i>
                                @Model.Order.CreatedAt.ToString("MMMM dd, yyyy") at @Model.Order.CreatedAt.ToString("h:mm tt")
                            </p>
                        </div>
                    </div>
                    <div class="flex flex-col items-end">
                        <div class="flex items-center gap-2 mb-2">
                            <span class="@statusBadge text-xs font-medium px-3 py-1.5 rounded-lg uppercase">
                                @(Model.Order.FinancialStatus ?? "Unknown")
                            </span>
                            <span class="@fulfillBadge text-xs font-medium px-3 py-1.5 rounded-lg uppercase">
                                @(string.IsNullOrEmpty(Model.Order.FulfillmentStatus) ? "Unfulfilled" : Model.Order.FulfillmentStatus)
                            </span>
                        </div>
                        <p class="text-3xl font-bold text-gray-900 dark:text-white">@Model.Order.TotalPrice.ToString("C")</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 mb-6">
            <!-- Customer Information -->
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md">
                <div class="p-6 border-b border-gray-200 dark:border-gray-700">
                    <h6 class="text-lg font-semibold text-gray-900 dark:text-white">
                        <i class="fas fa-user me-2 text-cyan-500"></i>Customer
                    </h6>
                </div>
                <div class="p-6">
                    <div class="flex items-center mb-4">
                        <div class="flex items-center justify-center w-12 h-12 mr-4 text-sm text-white font-semibold rounded-lg bg-gradient-to-br @bgColors[colorIndex]">
                            @initials
                        </div>
                        <div>
                            <h6 class="font-medium text-gray-900 dark:text-white">@customerName</h6>
                            <p class="text-sm text-gray-500 dark:text-gray-400">
                                @(Model.Order.Email ?? Model.Order.Customer?.Email ?? "No email")
                            </p>
                        </div>
                    </div>

                    @if (Model.Order.Customer != null)
                    {
                        <div class="space-y-3 pt-3 border-t border-gray-200 dark:border-gray-700">
                            @if (!string.IsNullOrEmpty(Model.Order.Customer.Phone))
                            {
                                <div>
                                    <span class="text-xs text-gray-500 dark:text-gray-400">Phone</span>
                                    <p class="text-sm font-medium text-gray-900 dark:text-white">@Model.Order.Customer.Phone</p>
                                </div>
                            }
                            <div>
                                <span class="text-xs text-gray-500 dark:text-gray-400">Customer Since</span>
                                <p class="text-sm font-medium text-gray-900 dark:text-white">@Model.Order.Customer.CreatedAt.ToString("MMM dd, yyyy")</p>
                            </div>
                            @if (Model.Order.Customer.VerifiedEmail)
                            {
                                <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-300">
                                    <i class="fas fa-check-circle me-1"></i> Email Verified
                                </span>
                            }
                        </div>
                    }
                </div>
            </div>

            <!-- Shipping Address -->
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md">
                <div class="p-6 border-b border-gray-200 dark:border-gray-700">
                    <h6 class="text-lg font-semibold text-gray-900 dark:text-white">
                        <i class="fas fa-truck me-2 text-orange-500"></i>Shipping Address
                    </h6>
                </div>
                <div class="p-6">
                    @if (Model.Order.ShippingAddress != null)
                    {
                        <div class="text-sm text-gray-700 dark:text-white">
                            @if (!string.IsNullOrEmpty(Model.Order.ShippingAddress.Name))
                            {
                                <p class="font-semibold mb-1">@Model.Order.ShippingAddress.Name</p>
                            }
                            @if (!string.IsNullOrEmpty(Model.Order.ShippingAddress.Address1))
                            {
                                <p class="mb-1">@Model.Order.ShippingAddress.Address1</p>
                            }
                            @if (!string.IsNullOrEmpty(Model.Order.ShippingAddress.Address2))
                            {
                                <p class="mb-1">@Model.Order.ShippingAddress.Address2</p>
                            }
                            <p class="mb-1">
                                @Model.Order.ShippingAddress.City@(string.IsNullOrEmpty(Model.Order.ShippingAddress.Province) ? "" : $", {Model.Order.ShippingAddress.Province}") @Model.Order.ShippingAddress.Zip
                            </p>
                            @if (!string.IsNullOrEmpty(Model.Order.ShippingAddress.Country))
                            {
                                <p class="mb-1">@Model.Order.ShippingAddress.Country</p>
                            }
                            @if (!string.IsNullOrEmpty(Model.Order.ShippingAddress.Phone))
                            {
                                <p class="mt-3 text-gray-500 dark:text-gray-400">
                                    <i class="fas fa-phone me-1"></i> @Model.Order.ShippingAddress.Phone
                                </p>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-6">
                            <i class="fas fa-map-marker-alt fa-2x text-gray-300 dark:text-gray-600 mb-2"></i>
                            <p class="text-sm text-gray-500 dark:text-gray-400">No shipping address provided</p>
                        </div>
                    }
                </div>
            </div>

            <!-- Billing Address -->
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md">
                <div class="p-6 border-b border-gray-200 dark:border-gray-700">
                    <h6 class="text-lg font-semibold text-gray-900 dark:text-white">
                        <i class="fas fa-credit-card me-2 text-green-500"></i>Billing Address
                    </h6>
                </div>
                <div class="p-6">
                    @if (Model.Order.BillingAddress != null)
                    {
                        <div class="text-sm text-gray-700 dark:text-white">
                            @if (!string.IsNullOrEmpty(Model.Order.BillingAddress.Name))
                            {
                                <p class="font-semibold mb-1">@Model.Order.BillingAddress.Name</p>
                            }
                            @if (!string.IsNullOrEmpty(Model.Order.BillingAddress.Address1))
                            {
                                <p class="mb-1">@Model.Order.BillingAddress.Address1</p>
                            }
                            @if (!string.IsNullOrEmpty(Model.Order.BillingAddress.Address2))
                            {
                                <p class="mb-1">@Model.Order.BillingAddress.Address2</p>
                            }
                            <p class="mb-1">
                                @Model.Order.BillingAddress.City@(string.IsNullOrEmpty(Model.Order.BillingAddress.Province) ? "" : $", {Model.Order.BillingAddress.Province}") @Model.Order.BillingAddress.Zip
                            </p>
                            @if (!string.IsNullOrEmpty(Model.Order.BillingAddress.Country))
                            {
                                <p class="mb-1">@Model.Order.BillingAddress.Country</p>
                            }
                            @if (!string.IsNullOrEmpty(Model.Order.BillingAddress.Phone))
                            {
                                <p class="mt-3 text-gray-500 dark:text-gray-400">
                                    <i class="fas fa-phone me-1"></i> @Model.Order.BillingAddress.Phone
                                </p>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-6">
                            <i class="fas fa-file-invoice fa-2x text-gray-300 dark:text-gray-600 mb-2"></i>
                            <p class="text-sm text-gray-500 dark:text-gray-400">No billing address provided</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Line Items -->
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md">
            <div class="p-6 border-b border-gray-200 dark:border-gray-700">
                <div class="flex items-center justify-between">
                    <h6 class="text-lg font-semibold text-gray-900 dark:text-white">
                        <i class="fas fa-box me-2 text-purple-500"></i>Order Items
                    </h6>
                    <span class="text-sm text-gray-500 dark:text-gray-400">@Model.Order.LineItems.Count() item(s)</span>
                </div>
            </div>
            <div class="p-6">
                @if (Model.Order.LineItems.Any())
                {
                    <div class="relative overflow-x-auto shadow-md sm:rounded-lg">
                        <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
                            <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                                <tr>
                                    <th scope="col" class="px-6 py-3">Product</th>
                                    <th scope="col" class="px-6 py-3 text-center">Quantity</th>
                                    <th scope="col" class="px-6 py-3 text-right">Unit Price</th>
                                    <th scope="col" class="px-6 py-3 text-right">Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Order.LineItems)
                                {
                                    var itemInitials = string.Join("", (item.Title ?? "P").Split(' ').Take(2).Select(w => w.Length > 0 ? w[0].ToString().ToUpper() : ""));
                                    var itemColorIndex = Math.Abs((item.Title ?? "").GetHashCode()) % bgColors.Length;

                                    <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
                                        <td class="px-6 py-4">
                                            <div class="flex items-center">
                                                <div class="flex items-center justify-center w-10 h-10 mr-3 text-xs text-white font-semibold rounded-lg bg-gradient-to-br @bgColors[itemColorIndex]">
                                                    @itemInitials
                                                </div>
                                                <span class="font-medium text-gray-900 dark:text-white">@item.Title</span>
                                            </div>
                                        </td>
                                        <td class="px-6 py-4 text-center font-medium text-gray-900 dark:text-white">@item.Quantity</td>
                                        <td class="px-6 py-4 text-right text-gray-500 dark:text-gray-400">@item.Price.ToString("C")</td>
                                        <td class="px-6 py-4 text-right font-bold text-gray-900 dark:text-white">@((item.Price * item.Quantity).ToString("C"))</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <!-- Order Summary -->
                    <div class="pt-6 border-t border-gray-200 dark:border-gray-700 mt-6">
                        <div class="flex justify-end">
                            <div class="w-full max-w-xs space-y-2">
                                <div class="flex justify-between">
                                    <span class="text-sm text-gray-500 dark:text-gray-400">Subtotal</span>
                                    <span class="text-sm font-medium text-gray-900 dark:text-white">@Model.Order.LineItems.Sum(i => i.Price * i.Quantity).ToString("C")</span>
                                </div>
                                <div class="flex justify-between pt-2 border-t border-gray-200 dark:border-gray-700">
                                    <span class="text-lg font-bold text-gray-900 dark:text-white">Total</span>
                                    <span class="text-lg font-bold text-gray-900 dark:text-white">@Model.Order.TotalPrice.ToString("C")</span>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <div class="text-center py-12">
                        <i class="fas fa-box-open fa-3x text-gray-300 dark:text-gray-600 mb-4"></i>
                        <p class="text-gray-500 dark:text-gray-400">No items in this order</p>
                    </div>
                }
            </div>
        </div>
    }
</div>

@if (Model.Order != null && !string.IsNullOrEmpty(Model.CustomerPhone))
{
    <!-- WhatsApp Modal -->
    <div id="whatsappModal" class="fixed inset-0 z-50 hidden overflow-y-auto" aria-labelledby="modal-title" role="dialog" aria-modal="true">
        <div class="flex items-end justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
            <div class="fixed inset-0 bg-black/50 backdrop-blur-sm transition-opacity" onclick="closeWhatsAppModal()"></div>
            <div class="inline-block align-bottom bg-white dark:bg-gray-800 rounded-lg text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full">
                <form method="post" asp-page-handler="SendWhatsApp" asp-route-id="@Model.Order.Id">
                    <div class="p-6">
                        <div class="flex items-center mb-4">
                            <div class="flex items-center justify-center w-12 h-12 rounded-full bg-green-100 dark:bg-green-900">
                                <i class="fab fa-whatsapp text-2xl text-green-600 dark:text-green-400"></i>
                            </div>
                            <div class="ml-4">
                                <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Send WhatsApp Message</h3>
                                <p class="text-sm text-gray-500 dark:text-gray-400">To: @Model.CustomerPhone</p>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Quick Templates</label>
                            <div class="flex flex-wrap gap-2">
                                <button type="button" onclick="setTemplate('order_confirm')" class="px-3 py-1.5 text-xs font-medium text-gray-700 bg-gray-100 rounded-full hover:bg-gray-200 dark:bg-gray-700 dark:text-gray-300">Order Confirmation</button>
                                <button type="button" onclick="setTemplate('shipping')" class="px-3 py-1.5 text-xs font-medium text-gray-700 bg-gray-100 rounded-full hover:bg-gray-200 dark:bg-gray-700 dark:text-gray-300">Shipping Update</button>
                                <button type="button" onclick="setTemplate('delivered')" class="px-3 py-1.5 text-xs font-medium text-gray-700 bg-gray-100 rounded-full hover:bg-gray-200 dark:bg-gray-700 dark:text-gray-300">Delivered</button>
                            </div>
                        </div>

                        <div>
                            <label for="whatsappMessage" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Message</label>
                            <textarea id="whatsappMessage" name="WhatsAppMessage" rows="5" required
                                class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-green-500 focus:border-green-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:text-white"
                                placeholder="Type your message here..."></textarea>
                            <p class="mt-1 text-xs text-gray-500 dark:text-gray-400"><span id="charCount">0</span> characters</p>
                        </div>
                    </div>

                    <div class="bg-gray-50 dark:bg-gray-700 px-6 py-4 flex justify-end gap-3">
                        <button type="button" onclick="closeWhatsAppModal()" class="px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 dark:bg-gray-800 dark:text-gray-300 dark:border-gray-600">Cancel</button>
                        <button type="submit" class="px-4 py-2 text-sm font-medium text-white bg-gradient-to-r from-green-500 to-green-700 rounded-lg hover:bg-gradient-to-br">
                            <i class="fab fa-whatsapp me-2"></i>Send Message
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script>
        var customerName = '@(Model.Order.Customer != null ? $"{Model.Order.Customer.FirstName}" : "Customer")';
        var orderNumber = '@Model.Order.Name';

        var templates = {
            'order_confirm': `Hi ${customerName}! Thank you for your order ${orderNumber}. We've received it and will process it shortly.\n\nThank you for shopping with us!`,
            'shipping': `Hi ${customerName}! Great news - your order ${orderNumber} has been shipped!\n\nThank you for your patience!`,
            'delivered': `Hi ${customerName}! Your order ${orderNumber} has been delivered!\n\nThank you for shopping with us!`
        };

        function openWhatsAppModal() { document.getElementById('whatsappModal').classList.remove('hidden'); document.body.style.overflow = 'hidden'; }
        function closeWhatsAppModal() { document.getElementById('whatsappModal').classList.add('hidden'); document.body.style.overflow = 'auto'; }
        function setTemplate(key) { document.getElementById('whatsappMessage').value = templates[key]; updateCharCount(); }
        function updateCharCount() { document.getElementById('charCount').textContent = document.getElementById('whatsappMessage').value.length; }

        document.getElementById('whatsappMessage')?.addEventListener('input', updateCharCount);
        document.addEventListener('keydown', (e) => { if (e.key === 'Escape') closeWhatsAppModal(); });
    </script>
}
