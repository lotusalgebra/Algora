@page "/orders/{id:long}"
@model Algora.Web.Pages.Orders.DetailsModel
@{
    ViewData["Title"] = Model.Order != null ? $"Order {Model.Order.Name}" : "Order Details";
}

<div class="w-full px-6 py-6 mx-auto">
    <!-- Breadcrumb & Header -->
    <div class="flex flex-wrap items-center justify-between mb-6">
        <div>
            <nav class="text-sm mb-2">
                <ol class="flex items-center space-x-2">
                    <li>
                        <a href="/orders" class="text-slate-500 hover:text-slate-700 dark:text-gray-400 dark:hover:text-white">
                            <i class="fas fa-shopping-cart me-1"></i> Orders
                        </a>
                    </li>
                    <li class="text-slate-400 dark:text-gray-500">/</li>
                    <li class="text-slate-700 font-medium dark:text-white">@(Model.Order?.Name ?? "Details")</li>
                </ol>
            </nav>
            <h5 class="mb-0 font-bold dark:text-white">Order Details</h5>
        </div>
        <div class="flex items-center gap-2">
            @if (Model.Order != null)
            {
                @if (!string.IsNullOrEmpty(Model.CustomerPhone))
                {
                    <button type="button" onclick="openWhatsAppModal()" class="inline-flex items-center justify-center px-4 py-2 text-sm font-medium text-white bg-gradient-to-tl from-green-600 to-green-400 border-0 rounded-lg shadow-soft-md hover:scale-102 hover:shadow-soft-xs active:opacity-85 transition-all">
                        <i class="fab fa-whatsapp me-2"></i>
                        Send WhatsApp
                    </button>
                }
                <a href="/orders/edit-status/@Model.Order.Id" class="inline-flex items-center justify-center px-4 py-2 text-sm font-medium text-slate-700 bg-white border border-slate-300 rounded-lg hover:bg-slate-50 focus:outline-none dark:bg-gray-800 dark:text-white dark:border-gray-600 dark:hover:bg-gray-700">
                    <i class="fas fa-edit me-2 text-slate-400"></i>
                    Update Status
                </a>
                <a href="/orders/invoice/@Model.Order.Id" class="inline-flex items-center justify-center px-4 py-2 text-sm font-medium text-slate-700 bg-white border border-slate-300 rounded-lg hover:bg-slate-50 focus:outline-none dark:bg-gray-800 dark:text-white dark:border-gray-600 dark:hover:bg-gray-700">
                    <i class="fas fa-file-invoice me-2 text-slate-400"></i>
                    View Invoice
                </a>
                <a href="/orders/invoice/download/@Model.Order.Id" class="inline-flex items-center justify-center px-4 py-2 text-sm font-medium text-slate-700 bg-white border border-slate-300 rounded-lg hover:bg-slate-50 focus:outline-none dark:bg-gray-800 dark:text-white dark:border-gray-600 dark:hover:bg-gray-700">
                    <i class="fas fa-download me-2 text-slate-400"></i>
                    Download PDF
                </a>
            }
            <a href="/orders" class="inline-flex items-center justify-center px-4 py-2 text-sm font-semibold text-white bg-gradient-to-tl from-gray-600 to-gray-400 border-0 rounded-lg shadow-soft-md hover:scale-102 hover:shadow-soft-xs active:opacity-85 transition-all">
                <i class="fas fa-arrow-left me-2"></i>
                Back to Orders
            </a>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="p-4 mb-6 text-sm text-red-700 bg-red-100 rounded-lg dark:bg-red-200 dark:text-red-800" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i>
            @Model.ErrorMessage
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.WhatsAppSuccess))
    {
        <div class="p-4 mb-6 text-sm text-green-700 bg-green-100 rounded-lg dark:bg-green-200 dark:text-green-800" role="alert">
            <i class="fab fa-whatsapp me-2"></i>
            @Model.WhatsAppSuccess
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.WhatsAppError))
    {
        <div class="p-4 mb-6 text-sm text-red-700 bg-red-100 rounded-lg dark:bg-red-200 dark:text-red-800" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>
            @Model.WhatsAppError
        </div>
    }

    @if (Model.Order != null)
    {
        var statusClass = Model.Order.FinancialStatus?.ToLower() switch
        {
            "paid" => "from-green-600 to-lime-400",
            "pending" => "from-yellow-500 to-yellow-300",
            "refunded" => "from-red-600 to-rose-400",
            "cancelled" or "canceled" => "from-slate-600 to-slate-400",
            "voided" => "from-slate-600 to-slate-400",
            _ => "from-blue-600 to-cyan-400"
        };

        var fulfillClass = Model.Order.FulfillmentStatus?.ToLower() switch
        {
            "fulfilled" => "from-green-600 to-lime-400",
            "partial" => "from-yellow-500 to-yellow-300",
            null or "" => "from-slate-600 to-slate-400",
            _ => "from-blue-600 to-cyan-400"
        };

        var customerName = Model.Order.Customer != null
            ? $"{Model.Order.Customer.FirstName} {Model.Order.Customer.LastName}".Trim()
            : (Model.Order.Email ?? "Guest");

        var initials = customerName.Length > 0
            ? string.Join("", customerName.Split(' ').Where(w => w.Length > 0).Take(2).Select(w => w[0].ToString().ToUpper()))
            : "?";

        var bgColors = new[] { "from-purple-700 to-pink-500", "from-gray-400 to-gray-600", "from-green-600 to-lime-400", "from-blue-600 to-cyan-400", "from-red-600 to-rose-400", "from-orange-500 to-yellow-300" };
        var colorIndex = Math.Abs(customerName.GetHashCode()) % bgColors.Length;

        <!-- Order Summary Card -->
        <div class="flex flex-wrap -mx-3 mb-6">
            <div class="w-full max-w-full px-3">
                <div class="relative flex flex-col min-w-0 break-words bg-white border-0 shadow-soft-xl rounded-2xl bg-clip-border dark:bg-gray-950 dark:shadow-soft-dark-xl">
                    <div class="p-6">
                        <div class="flex flex-wrap items-start justify-between">
                            <div class="flex items-center">
                                <div class="flex items-center justify-center w-16 h-16 mr-4 text-xl text-white rounded-xl bg-gradient-to-tl from-purple-700 to-pink-500 shadow-soft-2xl">
                                    <i class="fas fa-shopping-bag"></i>
                                </div>
                                <div>
                                    <h4 class="mb-1 font-bold dark:text-white">@Model.Order.Name</h4>
                                    <p class="mb-0 text-sm text-slate-500 dark:text-gray-400">
                                        Order ID: #@Model.Order.Id
                                    </p>
                                    <p class="mb-0 text-sm text-slate-500 dark:text-gray-400">
                                        <i class="far fa-calendar-alt me-1"></i>
                                        @Model.Order.CreatedAt.ToString("MMMM dd, yyyy") at @Model.Order.CreatedAt.ToString("h:mm tt")
                                    </p>
                                </div>
                            </div>
                            <div class="flex flex-col items-end">
                                <div class="flex items-center gap-2 mb-2">
                                    <span class="bg-gradient-to-tl @statusClass px-3 py-1.5 text-xs rounded-lg inline-block whitespace-nowrap text-center align-baseline font-bold uppercase leading-none text-white">
                                        @(Model.Order.FinancialStatus ?? "Unknown")
                                    </span>
                                    <span class="bg-gradient-to-tl @fulfillClass px-3 py-1.5 text-xs rounded-lg inline-block whitespace-nowrap text-center align-baseline font-bold uppercase leading-none text-white">
                                        @(string.IsNullOrEmpty(Model.Order.FulfillmentStatus) ? "Unfulfilled" : Model.Order.FulfillmentStatus)
                                    </span>
                                </div>
                                <p class="text-2xl font-bold text-slate-700 dark:text-white">@Model.Order.TotalPrice.ToString("C")</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="flex flex-wrap -mx-3">
            <!-- Customer Information -->
            <div class="w-full max-w-full px-3 mb-6 lg:w-4/12">
                <div class="relative flex flex-col h-full min-w-0 break-words bg-white border-0 shadow-soft-xl rounded-2xl bg-clip-border dark:bg-gray-950 dark:shadow-soft-dark-xl">
                    <div class="p-6 pb-0 mb-0 border-b-0 rounded-t-2xl">
                        <h6 class="mb-0 dark:text-white">
                            <i class="fas fa-user me-2 text-cyan-500"></i>
                            Customer Information
                        </h6>
                    </div>
                    <div class="flex-auto p-6">
                        <div class="flex items-center mb-4">
                            <div class="flex items-center justify-center w-12 h-12 mr-4 text-sm text-white rounded-xl bg-gradient-to-tl @bgColors[colorIndex]">
                                @initials
                            </div>
                            <div>
                                <h6 class="mb-0 text-sm leading-normal dark:text-white">@customerName</h6>
                                <p class="mb-0 text-xs text-slate-500 dark:text-gray-400">
                                    @(Model.Order.Email ?? Model.Order.Customer?.Email ?? "No email")
                                </p>
                            </div>
                        </div>

                        @if (Model.Order.Customer != null)
                        {
                            <ul class="flex flex-col pl-0 mb-0 rounded-lg">
                                @if (!string.IsNullOrEmpty(Model.Order.Customer.Phone))
                                {
                                    <li class="relative flex py-2 border-0">
                                        <div class="flex flex-col">
                                            <span class="text-xs text-slate-500 dark:text-gray-400">Phone</span>
                                            <span class="text-sm font-semibold text-slate-700 dark:text-white">@Model.Order.Customer.Phone</span>
                                        </div>
                                    </li>
                                }
                                <li class="relative flex py-2 border-0">
                                    <div class="flex flex-col">
                                        <span class="text-xs text-slate-500 dark:text-gray-400">Customer Since</span>
                                        <span class="text-sm font-semibold text-slate-700 dark:text-white">@Model.Order.Customer.CreatedAt.ToString("MMM dd, yyyy")</span>
                                    </div>
                                </li>
                                @if (Model.Order.Customer.VerifiedEmail)
                                {
                                    <li class="relative flex py-2 border-0">
                                        <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-300">
                                            <i class="fas fa-check-circle me-1"></i> Email Verified
                                        </span>
                                    </li>
                                }
                            </ul>
                        }
                    </div>
                </div>
            </div>

            <!-- Shipping Address -->
            <div class="w-full max-w-full px-3 mb-6 lg:w-4/12">
                <div class="relative flex flex-col h-full min-w-0 break-words bg-white border-0 shadow-soft-xl rounded-2xl bg-clip-border dark:bg-gray-950 dark:shadow-soft-dark-xl">
                    <div class="p-6 pb-0 mb-0 border-b-0 rounded-t-2xl">
                        <h6 class="mb-0 dark:text-white">
                            <i class="fas fa-truck me-2 text-orange-500"></i>
                            Shipping Address
                        </h6>
                    </div>
                    <div class="flex-auto p-6">
                        @if (Model.Order.ShippingAddress != null)
                        {
                            <div class="text-sm text-slate-700 dark:text-white">
                                @if (!string.IsNullOrEmpty(Model.Order.ShippingAddress.Name))
                                {
                                    <p class="font-semibold mb-1">@Model.Order.ShippingAddress.Name</p>
                                }
                                @if (!string.IsNullOrEmpty(Model.Order.ShippingAddress.Address1))
                                {
                                    <p class="mb-1">@Model.Order.ShippingAddress.Address1</p>
                                }
                                @if (!string.IsNullOrEmpty(Model.Order.ShippingAddress.Address2))
                                {
                                    <p class="mb-1">@Model.Order.ShippingAddress.Address2</p>
                                }
                                <p class="mb-1">
                                    @Model.Order.ShippingAddress.City@(string.IsNullOrEmpty(Model.Order.ShippingAddress.Province) ? "" : $", {Model.Order.ShippingAddress.Province}") @Model.Order.ShippingAddress.Zip
                                </p>
                                @if (!string.IsNullOrEmpty(Model.Order.ShippingAddress.Country))
                                {
                                    <p class="mb-1">@Model.Order.ShippingAddress.Country</p>
                                }
                                @if (!string.IsNullOrEmpty(Model.Order.ShippingAddress.Phone))
                                {
                                    <p class="mt-3 text-slate-500 dark:text-gray-400">
                                        <i class="fas fa-phone me-1"></i> @Model.Order.ShippingAddress.Phone
                                    </p>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-6">
                                <i class="fas fa-map-marker-alt fa-2x text-slate-300 mb-2"></i>
                                <p class="text-sm text-slate-500 dark:text-gray-400">No shipping address provided</p>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Billing Address -->
            <div class="w-full max-w-full px-3 mb-6 lg:w-4/12">
                <div class="relative flex flex-col h-full min-w-0 break-words bg-white border-0 shadow-soft-xl rounded-2xl bg-clip-border dark:bg-gray-950 dark:shadow-soft-dark-xl">
                    <div class="p-6 pb-0 mb-0 border-b-0 rounded-t-2xl">
                        <h6 class="mb-0 dark:text-white">
                            <i class="fas fa-credit-card me-2 text-green-500"></i>
                            Billing Address
                        </h6>
                    </div>
                    <div class="flex-auto p-6">
                        @if (Model.Order.BillingAddress != null)
                        {
                            <div class="text-sm text-slate-700 dark:text-white">
                                @if (!string.IsNullOrEmpty(Model.Order.BillingAddress.Name))
                                {
                                    <p class="font-semibold mb-1">@Model.Order.BillingAddress.Name</p>
                                }
                                @if (!string.IsNullOrEmpty(Model.Order.BillingAddress.Address1))
                                {
                                    <p class="mb-1">@Model.Order.BillingAddress.Address1</p>
                                }
                                @if (!string.IsNullOrEmpty(Model.Order.BillingAddress.Address2))
                                {
                                    <p class="mb-1">@Model.Order.BillingAddress.Address2</p>
                                }
                                <p class="mb-1">
                                    @Model.Order.BillingAddress.City@(string.IsNullOrEmpty(Model.Order.BillingAddress.Province) ? "" : $", {Model.Order.BillingAddress.Province}") @Model.Order.BillingAddress.Zip
                                </p>
                                @if (!string.IsNullOrEmpty(Model.Order.BillingAddress.Country))
                                {
                                    <p class="mb-1">@Model.Order.BillingAddress.Country</p>
                                }
                                @if (!string.IsNullOrEmpty(Model.Order.BillingAddress.Phone))
                                {
                                    <p class="mt-3 text-slate-500 dark:text-gray-400">
                                        <i class="fas fa-phone me-1"></i> @Model.Order.BillingAddress.Phone
                                    </p>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-6">
                                <i class="fas fa-file-invoice fa-2x text-slate-300 mb-2"></i>
                                <p class="text-sm text-slate-500 dark:text-gray-400">No billing address provided</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Line Items -->
        <div class="flex flex-wrap -mx-3">
            <div class="w-full max-w-full px-3">
                <div class="relative flex flex-col min-w-0 break-words bg-white border-0 shadow-soft-xl rounded-2xl bg-clip-border dark:bg-gray-950 dark:shadow-soft-dark-xl">
                    <div class="p-6 pb-0 mb-0 border-b-0 rounded-t-2xl">
                        <div class="flex items-center justify-between">
                            <h6 class="mb-0 dark:text-white">
                                <i class="fas fa-box me-2 text-purple-500"></i>
                                Order Items
                            </h6>
                            <span class="text-sm text-slate-500 dark:text-gray-400">
                                @Model.Order.LineItems.Count() item(s)
                            </span>
                        </div>
                    </div>
                    <div class="flex-auto p-6 px-0 pb-0">
                        @if (Model.Order.LineItems.Any())
                        {
                            <div class="overflow-x-auto">
                                <table class="items-center w-full mb-0 align-top border-gray-200 text-slate-500 dark:border-white/40">
                                    <thead class="align-bottom">
                                        <tr>
                                            <th class="px-6 py-3 font-bold text-left uppercase align-middle bg-transparent border-b border-gray-200 shadow-none text-xxs border-b-solid tracking-none whitespace-nowrap text-slate-400 opacity-70 dark:border-white/40 dark:text-white dark:opacity-80">Product</th>
                                            <th class="px-6 py-3 font-bold text-center uppercase align-middle bg-transparent border-b border-gray-200 shadow-none text-xxs border-b-solid tracking-none whitespace-nowrap text-slate-400 opacity-70 dark:border-white/40 dark:text-white dark:opacity-80">Quantity</th>
                                            <th class="px-6 py-3 font-bold text-right uppercase align-middle bg-transparent border-b border-gray-200 shadow-none text-xxs border-b-solid tracking-none whitespace-nowrap text-slate-400 opacity-70 dark:border-white/40 dark:text-white dark:opacity-80">Unit Price</th>
                                            <th class="px-6 py-3 font-bold text-right uppercase align-middle bg-transparent border-b border-gray-200 shadow-none text-xxs border-b-solid tracking-none whitespace-nowrap text-slate-400 opacity-70 dark:border-white/40 dark:text-white dark:opacity-80">Total</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.Order.LineItems)
                                        {
                                            var itemInitials = string.Join("", (item.Title ?? "P").Split(' ').Take(2).Select(w => w.Length > 0 ? w[0].ToString().ToUpper() : ""));
                                            var itemColorIndex = Math.Abs((item.Title ?? "").GetHashCode()) % bgColors.Length;

                                            <tr>
                                                <td class="p-2 align-middle bg-transparent border-b whitespace-nowrap dark:border-white/40">
                                                    <div class="flex px-2 py-1">
                                                        <div class="flex items-center justify-center w-10 h-10 mr-4 text-xs text-white rounded-xl bg-gradient-to-tl @bgColors[itemColorIndex]">
                                                            @itemInitials
                                                        </div>
                                                        <div class="flex flex-col justify-center">
                                                            <h6 class="mb-0 text-sm leading-normal dark:text-white">@item.Title</h6>
                                                        </div>
                                                    </div>
                                                </td>
                                                <td class="p-2 text-center align-middle bg-transparent border-b whitespace-nowrap dark:border-white/40">
                                                    <span class="text-sm font-semibold text-slate-700 dark:text-white">@item.Quantity</span>
                                                </td>
                                                <td class="p-2 text-right align-middle bg-transparent border-b whitespace-nowrap dark:border-white/40">
                                                    <span class="text-sm text-slate-500 dark:text-gray-400">@item.Price.ToString("C")</span>
                                                </td>
                                                <td class="p-2 text-right align-middle bg-transparent border-b whitespace-nowrap dark:border-white/40">
                                                    <span class="text-sm font-bold text-slate-700 dark:text-white">@((item.Price * item.Quantity).ToString("C"))</span>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>

                            <!-- Order Summary -->
                            <div class="p-6 border-t border-gray-200 dark:border-white/40">
                                <div class="flex justify-end">
                                    <div class="w-full max-w-xs">
                                        <div class="flex justify-between py-2">
                                            <span class="text-sm text-slate-500 dark:text-gray-400">Subtotal</span>
                                            <span class="text-sm font-semibold text-slate-700 dark:text-white">@Model.Order.LineItems.Sum(i => i.Price * i.Quantity).ToString("C")</span>
                                        </div>
                                        <div class="flex justify-between py-2 border-t border-gray-200 dark:border-white/40">
                                            <span class="text-base font-bold text-slate-700 dark:text-white">Total</span>
                                            <span class="text-base font-bold text-slate-700 dark:text-white">@Model.Order.TotalPrice.ToString("C")</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-12">
                                <i class="fas fa-box-open fa-3x text-slate-300 mb-4"></i>
                                <p class="text-slate-500 dark:text-gray-400">No items in this order</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@if (Model.Order != null && !string.IsNullOrEmpty(Model.CustomerPhone))
{
    <!-- WhatsApp Modal -->
    <div id="whatsappModal" class="fixed inset-0 z-50 hidden overflow-y-auto" aria-labelledby="modal-title" role="dialog" aria-modal="true">
        <div class="flex items-end justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
            <!-- Background overlay -->
            <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity" onclick="closeWhatsAppModal()"></div>

            <!-- Modal panel -->
            <div class="inline-block align-bottom bg-white rounded-2xl text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full dark:bg-gray-900">
                <form method="post" asp-page-handler="SendWhatsApp" asp-route-id="@Model.Order.Id">
                    <div class="bg-white px-6 pt-6 pb-4 dark:bg-gray-900">
                        <div class="flex items-center mb-4">
                            <div class="flex items-center justify-center w-12 h-12 rounded-full bg-green-100 dark:bg-green-900">
                                <i class="fab fa-whatsapp text-2xl text-green-600 dark:text-green-400"></i>
                            </div>
                            <div class="ml-4">
                                <h3 class="text-lg font-semibold text-gray-900 dark:text-white" id="modal-title">
                                    Send WhatsApp Message
                                </h3>
                                <p class="text-sm text-gray-500 dark:text-gray-400">
                                    To: @Model.CustomerPhone
                                </p>
                            </div>
                        </div>

                        <!-- Quick Templates -->
                        <div class="mb-4">
                            <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Quick Templates</label>
                            <div class="flex flex-wrap gap-2">
                                <button type="button" onclick="setTemplate('order_confirm')" class="px-3 py-1.5 text-xs font-medium text-gray-700 bg-gray-100 rounded-full hover:bg-gray-200 dark:bg-gray-700 dark:text-gray-300 dark:hover:bg-gray-600">
                                    Order Confirmation
                                </button>
                                <button type="button" onclick="setTemplate('shipping')" class="px-3 py-1.5 text-xs font-medium text-gray-700 bg-gray-100 rounded-full hover:bg-gray-200 dark:bg-gray-700 dark:text-gray-300 dark:hover:bg-gray-600">
                                    Shipping Update
                                </button>
                                <button type="button" onclick="setTemplate('delivered')" class="px-3 py-1.5 text-xs font-medium text-gray-700 bg-gray-100 rounded-full hover:bg-gray-200 dark:bg-gray-700 dark:text-gray-300 dark:hover:bg-gray-600">
                                    Delivered
                                </button>
                            </div>
                        </div>

                        <!-- Message Input -->
                        <div>
                            <label for="whatsappMessage" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Message</label>
                            <textarea id="whatsappMessage" name="WhatsAppMessage" rows="5" required
                                class="w-full px-4 py-3 text-sm border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500 dark:bg-gray-800 dark:border-gray-600 dark:text-white dark:focus:ring-green-500"
                                placeholder="Type your message here..."></textarea>
                            <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">
                                <span id="charCount">0</span> characters
                            </p>
                        </div>
                    </div>

                    <div class="bg-gray-50 px-6 py-4 flex justify-end gap-3 dark:bg-gray-800">
                        <button type="button" onclick="closeWhatsAppModal()" class="px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 dark:bg-gray-700 dark:text-gray-300 dark:border-gray-600 dark:hover:bg-gray-600">
                            Cancel
                        </button>
                        <button type="submit" class="px-4 py-2 text-sm font-medium text-white bg-gradient-to-tl from-green-600 to-green-400 rounded-lg hover:scale-102 hover:shadow-soft-xs transition-all">
                            <i class="fab fa-whatsapp me-2"></i>
                            Send Message
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script>
        var customerName = '@(Model.Order.Customer != null ? $"{Model.Order.Customer.FirstName}" : "Customer")';
        var orderNumber = '@Model.Order.Name';

        var templates = {
            'order_confirm': `Hi ${customerName}! Thank you for your order ${orderNumber}. We've received it and will process it shortly. We'll notify you once it ships!\n\nThank you for shopping with us!`,
            'shipping': `Hi ${customerName}! Great news - your order ${orderNumber} has been shipped!\n\nYou can track your package using the tracking information we'll send shortly.\n\nThank you for your patience!`,
            'delivered': `Hi ${customerName}! Your order ${orderNumber} has been delivered!\n\nWe hope you love your purchase. If you have any questions or concerns, please don't hesitate to reach out.\n\nThank you for shopping with us!`
        };

        function openWhatsAppModal() {
            document.getElementById('whatsappModal').classList.remove('hidden');
            document.body.style.overflow = 'hidden';
        }

        function closeWhatsAppModal() {
            document.getElementById('whatsappModal').classList.add('hidden');
            document.body.style.overflow = 'auto';
        }

        function setTemplate(templateKey) {
            var textarea = document.getElementById('whatsappMessage');
            textarea.value = templates[templateKey];
            updateCharCount();
        }

        function updateCharCount() {
            var textarea = document.getElementById('whatsappMessage');
            document.getElementById('charCount').textContent = textarea.value.length;
        }

        document.getElementById('whatsappMessage')?.addEventListener('input', updateCharCount);

        // Close modal on escape key
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') {
                closeWhatsAppModal();
            }
        });
    </script>
