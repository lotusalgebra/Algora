@page "/plans/change"
@model Algora.Web.Pages.Plans.ChangeModel
@{
    ViewData["Title"] = "Change Plan";
}

<div class="p-4">
    <div class="max-w-2xl mx-auto">
        <!-- Back Link -->
        <a href="/plans" class="inline-flex items-center text-sm text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-gray-200 mb-6">
            <i class="fas fa-arrow-left me-2"></i>
            Back to Plans
        </a>

        <!-- Card -->
        <div class="bg-white dark:bg-gray-800 shadow-md rounded-lg">
            <div class="p-6">
                <!-- Header -->
                <div class="text-center mb-6">
                    <h1 class="text-2xl font-bold text-gray-900 dark:text-white">
                        @(Model.IsUpgrade ? "Upgrade" : "Downgrade") Your Plan
                    </h1>
                    <p class="mt-2 text-gray-600 dark:text-gray-400">
                        @if (Model.IsUpgrade)
                        {
                            <span>Get access to more features and higher limits</span>
                        }
                        else
                        {
                            <span>Your request will be reviewed by an admin</span>
                        }
                    </p>
                </div>

                <!-- Error Message -->
                @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                {
                    <div class="flex items-center p-4 mb-6 text-sm text-red-800 rounded-lg bg-red-50 dark:bg-gray-800 dark:text-red-400" role="alert">
                        <i class="fas fa-exclamation-circle me-2"></i>
                        @Model.ErrorMessage
                    </div>
                }

                <!-- Plan Comparison -->
                <div class="flex items-center justify-center space-x-4 mb-8">
                    <!-- Current Plan -->
                    <div class="text-center p-4 bg-gray-50 dark:bg-gray-700 rounded-lg w-40">
                        <p class="text-xs text-gray-500 dark:text-gray-400 uppercase">Current</p>
                        <p class="text-lg font-bold text-gray-900 dark:text-white">@(Model.CurrentPlan?.Name ?? "None")</p>
                        <p class="text-sm text-gray-600 dark:text-gray-400">
                            @if (Model.CurrentPlan?.MonthlyPrice > 0)
                            {
                                <span>$@Model.CurrentPlan.MonthlyPrice.ToString("0")/mo</span>
                            }
                            else
                            {
                                <span>Free</span>
                            }
                        </p>
                    </div>

                    <!-- Arrow -->
                    <div class="text-2xl text-gray-400">
                        <i class="fas fa-arrow-right"></i>
                    </div>

                    <!-- New Plan -->
                    <div class="text-center p-4 bg-purple-50 dark:bg-purple-900/20 border-2 border-purple-500 rounded-lg w-40">
                        <p class="text-xs text-purple-600 dark:text-purple-400 uppercase">New</p>
                        <p class="text-lg font-bold text-purple-600 dark:text-purple-400">@Model.NewPlan?.Name</p>
                        <p class="text-sm text-purple-600 dark:text-purple-400">
                            @if (Model.NewPlan?.MonthlyPrice > 0)
                            {
                                <span>$@Model.NewPlan.MonthlyPrice.ToString("0")/mo</span>
                            }
                            else
                            {
                                <span>Free</span>
                            }
                        </p>
                    </div>
                </div>

                <!-- What Changes -->
                @if (Model.NewPlan != null)
                {
                    <div class="mb-8">
                        <h3 class="text-sm font-semibold text-gray-700 dark:text-gray-300 mb-4">WHAT YOU'LL GET</h3>
                        <div class="space-y-3 text-sm">
                            <div class="flex justify-between">
                                <span class="text-gray-600 dark:text-gray-400">Orders per month</span>
                                <span class="font-medium text-gray-900 dark:text-white">
                                    @(Model.NewPlan.OrderLimit == -1 ? "Unlimited" : Model.NewPlan.OrderLimit.ToString("N0"))
                                </span>
                            </div>
                            <div class="flex justify-between">
                                <span class="text-gray-600 dark:text-gray-400">Products</span>
                                <span class="font-medium text-gray-900 dark:text-white">
                                    @(Model.NewPlan.ProductLimit == -1 ? "Unlimited" : Model.NewPlan.ProductLimit.ToString("N0"))
                                </span>
                            </div>
                            <div class="flex justify-between">
                                <span class="text-gray-600 dark:text-gray-400">Customers</span>
                                <span class="font-medium text-gray-900 dark:text-white">
                                    @(Model.NewPlan.CustomerLimit == -1 ? "Unlimited" : Model.NewPlan.CustomerLimit.ToString("N0"))
                                </span>
                            </div>
                            <div class="flex justify-between">
                                <span class="text-gray-600 dark:text-gray-400">WhatsApp</span>
                                <span class="font-medium">
                                    @if (Model.NewPlan.HasWhatsApp)
                                    {
                                        <i class="fas fa-check text-green-500"></i>
                                    }
                                    else
                                    {
                                        <i class="fas fa-times text-red-400"></i>
                                    }
                                </span>
                            </div>
                            <div class="flex justify-between">
                                <span class="text-gray-600 dark:text-gray-400">Email Campaigns</span>
                                <span class="font-medium">
                                    @if (Model.NewPlan.HasEmailCampaigns)
                                    {
                                        <i class="fas fa-check text-green-500"></i>
                                    }
                                    else
                                    {
                                        <i class="fas fa-times text-red-400"></i>
                                    }
                                </span>
                            </div>
                            <div class="flex justify-between">
                                <span class="text-gray-600 dark:text-gray-400">SMS</span>
                                <span class="font-medium">
                                    @if (Model.NewPlan.HasSms)
                                    {
                                        <i class="fas fa-check text-green-500"></i>
                                    }
                                    else
                                    {
                                        <i class="fas fa-times text-red-400"></i>
                                    }
                                </span>
                            </div>
                            <div class="flex justify-between">
                                <span class="text-gray-600 dark:text-gray-400">Advanced Reports</span>
                                <span class="font-medium">
                                    @if (Model.NewPlan.HasAdvancedReports)
                                    {
                                        <i class="fas fa-check text-green-500"></i>
                                    }
                                    else
                                    {
                                        <i class="fas fa-times text-red-400"></i>
                                    }
                                </span>
                            </div>
                            <div class="flex justify-between">
                                <span class="text-gray-600 dark:text-gray-400">API Access</span>
                                <span class="font-medium">
                                    @if (Model.NewPlan.HasApiAccess)
                                    {
                                        <i class="fas fa-check text-green-500"></i>
                                    }
                                    else
                                    {
                                        <i class="fas fa-times text-red-400"></i>
                                    }
                                </span>
                            </div>
                        </div>
                    </div>
                }

                <!-- Notice -->
                @if (!Model.IsUpgrade)
                {
                    <div class="flex items-center p-4 mb-6 text-sm text-yellow-800 rounded-lg bg-yellow-50 dark:bg-gray-800 dark:text-yellow-400" role="alert">
                        <i class="fas fa-info-circle me-3 flex-shrink-0"></i>
                        <div>
                            <p class="font-medium">Downgrade Request</p>
                            <p class="mt-1">Downgrade requests require admin approval. You'll continue on your current plan until the request is processed.</p>
                        </div>
                    </div>
                }
                else if (Model.NewPlan?.TrialDays > 0)
                {
                    <div class="flex items-center p-4 mb-6 text-sm text-green-800 rounded-lg bg-green-50 dark:bg-gray-800 dark:text-green-400" role="alert">
                        <i class="fas fa-gift me-3 flex-shrink-0"></i>
                        <div>
                            <p class="font-medium">Free Trial Included</p>
                            <p class="mt-1">Your @Model.NewPlan.TrialDays-day free trial starts immediately. You won't be charged until the trial ends.</p>
                        </div>
                    </div>
                }

                <!-- Actions -->
                <form method="post" class="space-y-4">
                    <input type="hidden" name="plan" value="@Model.Plan" />

                    <button type="submit"
                            class="w-full px-6 py-3 text-sm font-semibold text-white bg-gradient-to-br from-purple-600 to-pink-500 rounded-lg hover:opacity-90 transition-opacity">
                        @if (Model.IsUpgrade)
                        {
                            <span>Confirm Upgrade</span>
                        }
                        else
                        {
                            <span>Submit Downgrade Request</span>
                        }
                    </button>

                    <a href="/plans"
                       class="block w-full px-6 py-3 text-sm font-semibold text-center text-gray-700 dark:text-gray-300 bg-gray-100 dark:bg-gray-700 rounded-lg hover:bg-gray-200 dark:hover:bg-gray-600 transition-colors">
                        Cancel
                    </a>
                </form>
            </div>
        </div>
    </div>
</div>
