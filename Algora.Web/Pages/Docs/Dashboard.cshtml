@page "/docs/dashboard"
@model Algora.Web.Pages.Docs.DashboardModel
@{
    ViewData["Title"] = "Dashboard Documentation";
    ViewData["Breadcrumb"] = "Documentation / Dashboard";
}

<div class="max-w-4xl mx-auto">
    <a href="/docs" class="inline-flex items-center gap-2 text-slate-600 dark:text-slate-400 hover:text-purple-600 dark:hover:text-purple-400 mb-6">
        <i class="fas fa-arrow-left"></i>
        Back to Documentation
    </a>

    <div class="mb-8">
        <div class="flex items-center gap-4 mb-4">
            <div class="w-12 h-12 bg-gradient-to-tl from-purple-700 to-pink-500 rounded-lg flex items-center justify-center">
                <i class="fas fa-tv text-white text-lg"></i>
            </div>
            <div>
                <h1 class="text-3xl font-bold text-slate-800 dark:text-white">Dashboard</h1>
                <p class="text-slate-600 dark:text-slate-400">Your store's command center</p>
            </div>
        </div>
    </div>

    <div class="bg-white dark:bg-slate-800 rounded-xl shadow-soft p-8 space-y-8">
        <!-- Overview -->
        <section>
            <h2 class="text-xl font-semibold text-slate-800 dark:text-white mb-4">Overview</h2>
            <p class="text-slate-600 dark:text-slate-400 mb-4">
                The Dashboard is your central hub for monitoring store performance at a glance. It displays real-time metrics,
                recent activity, and key performance indicators to help you make informed decisions.
            </p>
            <div class="bg-blue-50 dark:bg-blue-900/20 border border-blue-200 dark:border-blue-800 rounded-lg p-4">
                <div class="flex items-start gap-3">
                    <i class="fas fa-lightbulb text-blue-500 mt-1"></i>
                    <p class="text-slate-700 dark:text-slate-300 text-sm">
                        <strong>Tip:</strong> The dashboard updates in real-time. Refresh the page to see the latest data from your Shopify store.
                    </p>
                </div>
            </div>
        </section>

        <!-- Key Metrics -->
        <section>
            <h2 class="text-xl font-semibold text-slate-800 dark:text-white mb-4">Key Metrics</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div class="p-4 bg-slate-50 dark:bg-slate-700/50 rounded-lg">
                    <h4 class="font-medium text-slate-800 dark:text-white mb-2">
                        <i class="fas fa-dollar-sign text-green-500 mr-2"></i>Total Revenue
                    </h4>
                    <p class="text-sm text-slate-600 dark:text-slate-400">
                        Total sales revenue for the selected period. Includes all completed orders.
                    </p>
                </div>
                <div class="p-4 bg-slate-50 dark:bg-slate-700/50 rounded-lg">
                    <h4 class="font-medium text-slate-800 dark:text-white mb-2">
                        <i class="fas fa-shopping-cart text-blue-500 mr-2"></i>Orders Count
                    </h4>
                    <p class="text-sm text-slate-600 dark:text-slate-400">
                        Number of orders received. Filter by date range to see trends.
                    </p>
                </div>
                <div class="p-4 bg-slate-50 dark:bg-slate-700/50 rounded-lg">
                    <h4 class="font-medium text-slate-800 dark:text-white mb-2">
                        <i class="fas fa-users text-purple-500 mr-2"></i>Active Customers
                    </h4>
                    <p class="text-sm text-slate-600 dark:text-slate-400">
                        Customers who have made purchases in the selected timeframe.
                    </p>
                </div>
                <div class="p-4 bg-slate-50 dark:bg-slate-700/50 rounded-lg">
                    <h4 class="font-medium text-slate-800 dark:text-white mb-2">
                        <i class="fas fa-chart-line text-orange-500 mr-2"></i>Average Order Value
                    </h4>
                    <p class="text-sm text-slate-600 dark:text-slate-400">
                        Mean value per order. Higher AOV indicates effective upselling.
                    </p>
                </div>
            </div>
        </section>

        <!-- Dashboard Widgets -->
        <section>
            <h2 class="text-xl font-semibold text-slate-800 dark:text-white mb-4">Dashboard Widgets</h2>
            <div class="space-y-4">
                <div class="border-l-4 border-purple-500 pl-4">
                    <h4 class="font-medium text-slate-800 dark:text-white">Sales Chart</h4>
                    <p class="text-sm text-slate-600 dark:text-slate-400">
                        Visual representation of sales over time. Toggle between daily, weekly, and monthly views.
                    </p>
                </div>
                <div class="border-l-4 border-blue-500 pl-4">
                    <h4 class="font-medium text-slate-800 dark:text-white">Recent Orders</h4>
                    <p class="text-sm text-slate-600 dark:text-slate-400">
                        Quick list of the latest orders with status indicators. Click any order to view details.
                    </p>
                </div>
                <div class="border-l-4 border-green-500 pl-4">
                    <h4 class="font-medium text-slate-800 dark:text-white">Top Products</h4>
                    <p class="text-sm text-slate-600 dark:text-slate-400">
                        Your best-selling products ranked by revenue or quantity sold.
                    </p>
                </div>
                <div class="border-l-4 border-orange-500 pl-4">
                    <h4 class="font-medium text-slate-800 dark:text-white">Inventory Alerts</h4>
                    <p class="text-sm text-slate-600 dark:text-slate-400">
                        Products running low on stock that need attention.
                    </p>
                </div>
            </div>
        </section>

        <!-- Quick Actions -->
        <section>
            <h2 class="text-xl font-semibold text-slate-800 dark:text-white mb-4">Quick Actions</h2>
            <p class="text-slate-600 dark:text-slate-400 mb-4">
                From the dashboard, you can quickly access common tasks:
            </p>
            <ul class="list-disc list-inside text-slate-600 dark:text-slate-400 space-y-2">
                <li>Create a new order manually</li>
                <li>Add a new product to your catalog</li>
                <li>View pending orders that need fulfillment</li>
                <li>Check inventory alerts and reorder products</li>
                <li>Access analytics for deeper insights</li>
            </ul>
        </section>
    </div>

    <!-- Navigation -->
    <div class="mt-8 flex justify-between">
        <a href="/docs/getting-started" class="text-slate-600 dark:text-slate-400 hover:text-purple-600 dark:hover:text-purple-400">
            <i class="fas fa-arrow-left mr-2"></i>Getting Started
        </a>
        <a href="/docs/orders" class="text-purple-600 dark:text-purple-400 hover:underline">
            Orders Management <i class="fas fa-arrow-right ml-2"></i>
        </a>
    </div>
</div>
