@page "/docs/ai-tools"
@model Algora.Web.Pages.Docs.AiToolsModel
@{
    ViewData["Title"] = "AI Tools Documentation";
    ViewData["Breadcrumb"] = "Documentation / AI Tools";
}

<div class="max-w-4xl mx-auto">
    <a href="/docs" class="inline-flex items-center gap-2 text-slate-600 dark:text-slate-400 hover:text-purple-600 dark:hover:text-purple-400 mb-6">
        <i class="fas fa-arrow-left"></i>
        Back to Documentation
    </a>

    <div class="mb-8">
        <div class="flex items-center gap-4 mb-4">
            <div class="w-12 h-12 bg-gradient-to-tl from-fuchsia-600 to-purple-500 rounded-lg flex items-center justify-center">
                <i class="fas fa-robot text-white text-lg"></i>
            </div>
            <div>
                <h1 class="text-3xl font-bold text-slate-800 dark:text-white">AI Tools</h1>
                <p class="text-slate-600 dark:text-slate-400">Powered by GPT-4o-mini for intelligent automation</p>
            </div>
        </div>
    </div>

    <div class="bg-white dark:bg-slate-800 rounded-xl shadow-soft p-8 space-y-8">
        <section>
            <h2 class="text-xl font-semibold text-slate-800 dark:text-white mb-4">Overview</h2>
            <p class="text-slate-600 dark:text-slate-400">
                Algora's AI Tools use advanced language models to automate content creation, optimize SEO,
                suggest pricing, and provide customer support. Save hours of manual work with intelligent automation.
            </p>
        </section>

        <!-- AI Dashboard -->
        <section>
            <h2 class="text-xl font-semibold text-slate-800 dark:text-white mb-4">
                <i class="fas fa-gauge-high text-purple-500 mr-2"></i>AI Dashboard
            </h2>
            <p class="text-slate-600 dark:text-slate-400 mb-4">
                Central hub showing AI usage statistics, available tools, and provider information.
                Access at <code class="bg-slate-100 dark:bg-slate-700 px-2 py-1 rounded">/ai</code>
            </p>
        </section>

        <!-- Product Descriptions -->
        <section>
            <h2 class="text-xl font-semibold text-slate-800 dark:text-white mb-4">
                <i class="fas fa-file-lines text-blue-500 mr-2"></i>Product Description Generator
            </h2>
            <p class="text-slate-600 dark:text-slate-400 mb-4">
                Generate compelling product descriptions automatically:
            </p>
            <ol class="list-decimal list-inside text-slate-600 dark:text-slate-400 space-y-2 mb-4">
                <li>Go to <strong>AI Tools > Descriptions</strong></li>
                <li>Select a product from your catalog</li>
                <li>Choose a tone (Professional, Friendly, Luxury, etc.)</li>
                <li>Click <strong>Generate</strong></li>
                <li>Review and edit the generated description</li>
                <li>Save to update the product</li>
            </ol>
            <div class="p-4 bg-slate-50 dark:bg-slate-700/50 rounded-lg">
                <h4 class="font-medium text-slate-800 dark:text-white mb-2">Available Tones:</h4>
                <div class="flex flex-wrap gap-2">
                    <span class="px-3 py-1 bg-purple-100 dark:bg-purple-900/30 text-purple-700 dark:text-purple-300 rounded-full text-sm">Professional</span>
                    <span class="px-3 py-1 bg-blue-100 dark:bg-blue-900/30 text-blue-700 dark:text-blue-300 rounded-full text-sm">Friendly</span>
                    <span class="px-3 py-1 bg-amber-100 dark:bg-amber-900/30 text-amber-700 dark:text-amber-300 rounded-full text-sm">Luxury</span>
                    <span class="px-3 py-1 bg-green-100 dark:bg-green-900/30 text-green-700 dark:text-green-300 rounded-full text-sm">Casual</span>
                    <span class="px-3 py-1 bg-pink-100 dark:bg-pink-900/30 text-pink-700 dark:text-pink-300 rounded-full text-sm">Playful</span>
                </div>
            </div>
        </section>

        <!-- SEO Optimizer -->
        <section>
            <h2 class="text-xl font-semibold text-slate-800 dark:text-white mb-4">
                <i class="fas fa-search text-green-500 mr-2"></i>SEO Meta Tag Optimizer
            </h2>
            <p class="text-slate-600 dark:text-slate-400 mb-4">
                Generate SEO-optimized meta titles, descriptions, and keywords:
            </p>
            <ul class="list-disc list-inside text-slate-600 dark:text-slate-400 space-y-2">
                <li><strong>Meta Title:</strong> Optimized for search engines (60 characters)</li>
                <li><strong>Meta Description:</strong> Compelling snippet (160 characters)</li>
                <li><strong>Keywords:</strong> Relevant search terms</li>
                <li><strong>SEO Score:</strong> Quality rating for your metadata</li>
            </ul>
        </section>

        <!-- Alt Text Generator -->
        <section>
            <h2 class="text-xl font-semibold text-slate-800 dark:text-white mb-4">
                <i class="fas fa-image text-orange-500 mr-2"></i>Image Alt Text Generator
            </h2>
            <p class="text-slate-600 dark:text-slate-400 mb-4">
                Generate descriptive alt text for product images in bulk:
            </p>
            <ul class="list-disc list-inside text-slate-600 dark:text-slate-400 space-y-2">
                <li>Select products with images</li>
                <li>AI analyzes images and generates descriptions</li>
                <li>Review and approve alt text</li>
                <li>Improves accessibility and SEO</li>
            </ul>
        </section>

        <!-- Pricing Optimizer -->
        <section>
            <h2 class="text-xl font-semibold text-slate-800 dark:text-white mb-4">
                <i class="fas fa-dollar-sign text-emerald-500 mr-2"></i>Pricing Optimizer
            </h2>
            <p class="text-slate-600 dark:text-slate-400 mb-4">
                Get AI-powered pricing suggestions based on market analysis:
            </p>
            <ul class="list-disc list-inside text-slate-600 dark:text-slate-400 space-y-2">
                <li>Analyzes product category and features</li>
                <li>Suggests optimal price points</li>
                <li>Shows margin analysis</li>
                <li>Considers competitor pricing</li>
            </ul>
        </section>

        <!-- Chatbot -->
        <section>
            <h2 class="text-xl font-semibold text-slate-800 dark:text-white mb-4">
                <i class="fas fa-message-bot text-cyan-500 mr-2"></i>Customer Support Chatbot
            </h2>
            <p class="text-slate-600 dark:text-slate-400 mb-4">
                AI-powered chatbot for customer self-service:
            </p>
            <ul class="list-disc list-inside text-slate-600 dark:text-slate-400 space-y-2">
                <li>Answers common customer questions</li>
                <li>Provides order status updates</li>
                <li>Handles return inquiries</li>
                <li>Escalates complex issues to human agents</li>
                <li>Available 24/7 in Customer Portal</li>
            </ul>
            <div class="mt-4 p-4 bg-blue-50 dark:bg-blue-900/20 border border-blue-200 dark:border-blue-800 rounded-lg">
                <p class="text-slate-700 dark:text-slate-300 text-sm">
                    <strong>Configuration:</strong> Go to <strong>AI Tools > Chatbot</strong> to view conversation analytics
                    and configure chatbot behavior.
                </p>
            </div>
        </section>

        <!-- Bulk Generate -->
        <section>
            <h2 class="text-xl font-semibold text-slate-800 dark:text-white mb-4">
                <i class="fas fa-layer-group text-indigo-500 mr-2"></i>Bulk Generation
            </h2>
            <p class="text-slate-600 dark:text-slate-400 mb-4">
                Generate AI content for multiple products at once:
            </p>
            <ol class="list-decimal list-inside text-slate-600 dark:text-slate-400 space-y-2">
                <li>Select multiple products</li>
                <li>Choose content type (descriptions, SEO, alt text)</li>
                <li>Set generation parameters</li>
                <li>Review all generated content</li>
                <li>Apply changes in bulk</li>
            </ol>
        </section>
    </div>

    <div class="mt-8 flex justify-between">
        <a href="/docs/communication" class="text-slate-600 dark:text-slate-400 hover:text-purple-600 dark:hover:text-purple-400">
            <i class="fas fa-arrow-left mr-2"></i>Communication
        </a>
        <a href="/docs/operations" class="text-purple-600 dark:text-purple-400 hover:underline">
            Operations <i class="fas fa-arrow-right ml-2"></i>
        </a>
    </div>
</div>
