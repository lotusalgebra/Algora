@page "/docs/communication"
@model Algora.Web.Pages.Docs.CommunicationModel
@{
    ViewData["Title"] = "Communication Documentation";
    ViewData["Breadcrumb"] = "Documentation / Communication";
}

<div class="max-w-4xl mx-auto">
    <a href="/docs" class="inline-flex items-center gap-2 text-slate-600 dark:text-slate-400 hover:text-purple-600 dark:hover:text-purple-400 mb-6">
        <i class="fas fa-arrow-left"></i>Back to Documentation
    </a>

    <div class="mb-8">
        <div class="flex items-center gap-4 mb-4">
            <div class="w-12 h-12 bg-gradient-to-tl from-indigo-600 to-violet-500 rounded-lg flex items-center justify-center">
                <i class="fas fa-comments text-white text-lg"></i>
            </div>
            <div>
                <h1 class="text-3xl font-bold text-slate-800 dark:text-white">Communication</h1>
                <p class="text-slate-600 dark:text-slate-400">Multi-channel customer messaging</p>
            </div>
        </div>
    </div>

    <div class="bg-white dark:bg-slate-800 rounded-xl shadow-soft p-8 space-y-8">
        <section>
            <h2 class="text-xl font-semibold text-slate-800 dark:text-white mb-4">Overview</h2>
            <p class="text-slate-600 dark:text-slate-400">
                Reach your customers through multiple channels including Email, SMS, and WhatsApp.
                All communication history is tracked in one place.
            </p>
        </section>

        <section>
            <h2 class="text-xl font-semibold text-slate-800 dark:text-white mb-4">
                <i class="fas fa-clock-rotate-left text-purple-500 mr-2"></i>Communication History
            </h2>
            <p class="text-slate-600 dark:text-slate-400 mb-4">
                View all customer communications in a unified timeline:
            </p>
            <ul class="list-disc list-inside text-slate-600 dark:text-slate-400 space-y-2">
                <li>Filter by channel (Email, SMS, WhatsApp)</li>
                <li>Search by recipient or content</li>
                <li>View delivery status and engagement metrics</li>
                <li>Track opens, clicks, and replies</li>
            </ul>
        </section>

        <section>
            <h2 class="text-xl font-semibold text-slate-800 dark:text-white mb-4">
                <i class="fas fa-envelope text-blue-500 mr-2"></i>Email Campaigns
            </h2>
            <p class="text-slate-600 dark:text-slate-400 mb-4">Create and send email marketing campaigns:</p>
            <ol class="list-decimal list-inside text-slate-600 dark:text-slate-400 space-y-2">
                <li>Create a new campaign with subject and content</li>
                <li>Use the visual email editor or HTML</li>
                <li>Select recipient segments</li>
                <li>Schedule or send immediately</li>
                <li>Track opens, clicks, and conversions</li>
            </ol>
            <div class="mt-4 p-4 bg-slate-50 dark:bg-slate-700/50 rounded-lg">
                <h4 class="font-medium text-slate-800 dark:text-white mb-2">Campaign Types:</h4>
                <ul class="text-sm text-slate-600 dark:text-slate-400 space-y-1">
                    <li><strong>Promotional:</strong> Sales, discounts, new products</li>
                    <li><strong>Transactional:</strong> Order confirmations, shipping updates</li>
                    <li><strong>Win-back:</strong> Re-engage inactive customers</li>
                    <li><strong>Review Request:</strong> Post-purchase review emails</li>
                </ul>
            </div>
        </section>

        <section>
            <h2 class="text-xl font-semibold text-slate-800 dark:text-white mb-4">
                <i class="fas fa-sms text-green-500 mr-2"></i>SMS Messaging
            </h2>
            <p class="text-slate-600 dark:text-slate-400 mb-4">Send SMS messages to customers:</p>
            <ul class="list-disc list-inside text-slate-600 dark:text-slate-400 space-y-2">
                <li>Create SMS templates for common messages</li>
                <li>Send bulk SMS to customer segments</li>
                <li>Track delivery status</li>
                <li>Automate SMS for order updates</li>
            </ul>
        </section>

        <section>
            <h2 class="text-xl font-semibold text-slate-800 dark:text-white mb-4">
                <i class="fab fa-whatsapp text-emerald-500 mr-2"></i>WhatsApp Business
            </h2>
            <p class="text-slate-600 dark:text-slate-400 mb-4">
                Connect with customers via WhatsApp Business API:
            </p>
            <ul class="list-disc list-inside text-slate-600 dark:text-slate-400 space-y-2">
                <li>Send order confirmations and updates</li>
                <li>Handle customer inquiries</li>
                <li>Share product catalogs</li>
                <li>Two-way conversation support</li>
            </ul>
        </section>
    </div>

    <div class="mt-8 flex justify-between">
        <a href="/docs/bundles" class="text-slate-600 dark:text-slate-400 hover:text-purple-600 dark:hover:text-purple-400">
            <i class="fas fa-arrow-left mr-2"></i>Bundles
        </a>
        <a href="/docs/marketing" class="text-purple-600 dark:text-purple-400 hover:underline">
            Marketing <i class="fas fa-arrow-right ml-2"></i>
        </a>
    </div>
</div>
