{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "Default": "Server=test-db-server;Database=Algora_Test;User Id=algora_test;Password=#{DB_PASSWORD}#;TrustServerCertificate=True;MultipleActiveResultSets=true"
  },
  "Jwt": {
    "Secret": "#{JWT_SECRET}#",
    "Issuer": "Algora.Auth.Test",
    "Audience": "Algora.App.Test",
    "AccessTokenExpirationMinutes": 60,
    "RefreshTokenExpirationDays": 7
  },
  "Shopify": {
    "ApiKey": "#{SHOPIFY_API_KEY}#",
    "ApiSecret": "#{SHOPIFY_API_SECRET}#",
    "AppUrl": "https://test.algora.example.com",
    "Scopes": "read_products,write_products,read_orders,write_orders,read_customers,write_customers"
  }
}