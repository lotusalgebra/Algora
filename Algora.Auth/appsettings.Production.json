{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Error"
    }
  },
  "ConnectionStrings": {
    "Default": "Server=prod-db-server;Database=Algora_Prod;User Id=algora_prod;Password=#{DB_PASSWORD}#;TrustServerCertificate=True;MultipleActiveResultSets=true;Encrypt=True"
  },
  "Jwt": {
    "Secret": "#{JWT_SECRET}#",
    "Issuer": "Algora.Auth",
    "Audience": "Algora.App",
    "AccessTokenExpirationMinutes": 30,
    "RefreshTokenExpirationDays": 7
  },
  "Shopify": {
    "ApiKey": "#{SHOPIFY_API_KEY}#",
    "ApiSecret": "#{SHOPIFY_API_SECRET}#",
    "AppUrl": "https://algora.example.com",
    "Scopes": "read_products,write_products,read_orders,write_orders,read_customers,write_customers"
  }
}